<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dp_4"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_login_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_12"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/img_user_login_shimmer"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="circle"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/usr_badge_shimmer"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="fitCenter"

            app:loader_type="circle"
            app:layout_constraintBottom_toTopOf="@id/usr_ovo_badge_shimmer"
            app:layout_constraintLeft_toRightOf="@id/img_user_login_shimmer"
            app:layout_constraintTop_toTopOf="@id/img_user_login_shimmer"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/usr_ovo_badge_shimmer"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="fitCenter"

            app:loader_type="circle"
            app:layout_constraintBottom_toBottomOf="@id/img_user_login_shimmer"
            app:layout_constraintLeft_toRightOf="@id/img_user_login_shimmer"
            app:layout_constraintTop_toBottomOf="@id/usr_badge_shimmer"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/tv_name_shimmer"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_6"
            android:textSize="@dimen/sp_16"
            app:loader_type="line"
            app:layout_constraintLeft_toRightOf="@id/usr_badge_shimmer"
            app:layout_constraintTop_toTopOf="@id/usr_badge_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/usr_badge_shimmer"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/tv_ovo_shimmer"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_6"
            app:loader_type="line"
            app:layout_constraintLeft_toRightOf="@id/usr_ovo_badge_shimmer"
            app:layout_constraintTop_toTopOf="@id/usr_ovo_badge_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/usr_ovo_badge_shimmer" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/btn_settings"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            app:loader_type="circle"
            app:layout_constraintTop_toTopOf="@id/img_user_login_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/img_user_login_shimmer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>