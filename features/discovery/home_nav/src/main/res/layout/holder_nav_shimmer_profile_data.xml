<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_login_shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp"
    android:visibility="visible"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/img_user_login_shimmer"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circle"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/tv_name_shimmer"
        android:layout_width="114dp"
        android:layout_height="12sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/sp_16"
        app:loader_type="line"
        app:layout_constraintTop_toTopOf="@id/img_user_login_shimmer"
        app:layout_constraintLeft_toRightOf="@id/img_user_login_shimmer"
        app:layout_constraintVertical_chainStyle="packed"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/tv_ovo_shimmer"
        android:layout_width="150dp"
        android:layout_height="12sp"
        app:loader_type="line"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_name_shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_name_shimmer"
         />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/tv_point_shimmer"
        android:layout_width="114dp"
        android:layout_height="12sp"
        app:loader_type="line"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/tv_ovo_shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_ovo_shimmer"
         />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/btn_settings"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:loader_type="circle"
        app:layout_constraintTop_toTopOf="@id/img_user_login_shimmer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"/>

</androidx.constraintlayout.widget.ConstraintLayout>