<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="246dp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_wishlist_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_wishlist"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/content_desc_image_wishlist"
            app:layout_constraintBottom_toBottomOf="@id/label_discount_percent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_product_name" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/image_wishlist_shimmer"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginVertical="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/unify_space_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Pancake Waffle Banana"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintBottom_toTopOf="@id/text_price_value"
            app:layout_constraintStart_toEndOf="@id/image_wishlist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="display_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_price_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_4"
            android:maxLines="1"
            android:text="Rp70,000"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintBottom_toTopOf="@id/label_discount_percent"
            app:layout_constraintStart_toEndOf="@id/image_wishlist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_product_name"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="display_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_cashback"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/product_card_label_discount_height"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_4"
            android:text="Cashback"
            app:labelType="general_light_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_wishlist"
            app:layout_constraintTop_toBottomOf="@id/text_price_value"
            app:typographyType="display_3"
            tools:visibility="invisible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_discount_percent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/product_card_label_discount_height"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginBottom="6dp"
            android:text="15%"
            app:labelType="general_light_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_wishlist"
            app:layout_constraintTop_toBottomOf="@id/text_price_value"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="display_3"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_slashed_price"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/unify_space_4"
            android:layout_marginEnd="@dimen/unify_space_8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Rp200,000"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintBottom_toBottomOf="@id/label_discount_percent"
            app:layout_constraintStart_toEndOf="@id/label_discount_percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_discount_percent"
            app:typographyType="small"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify2>