<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="246dp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_wishlist_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/unify_space_8"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">
        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_wishlist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/content_desc_image_wishlist"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_product_name"
            app:layout_constraintBottom_toBottomOf="@id/text_discount_percent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pancake Waffle Banana"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/image_wishlist"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_price_value"
            android:layout_marginLeft="@dimen/unify_space_8"
            app:typographyType="display_3"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp70,000"
            android:maxLines="1"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginLeft="@dimen/unify_space_8"
            app:layout_constraintLeft_toRightOf="@id/image_wishlist"
            app:layout_constraintTop_toBottomOf="@id/text_product_name"
            app:layout_constraintBottom_toTopOf="@id/text_discount_percent"
            app:typographyWeight="bold"
            app:typographyType="body_2"/>

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/text_discount_percent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/product_card_label_discount_height"
            android:text="15%"
            app:labelType="general_light_red"
            app:layout_constraintLeft_toRightOf="@id/image_wishlist"
            app:layout_constraintTop_toBottomOf="@id/text_price_value"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginLeft="@dimen/unify_space_8"
            app:typographyType="display_3"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_slashed_price"
            android:text="Rp200,000"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintLeft_toRightOf="@id/text_discount_percent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_discount_percent"
            app:layout_constraintBottom_toBottomOf="@id/text_discount_percent"
            android:layout_marginLeft="@dimen/unify_space_4"
            app:typographyType="small"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify2>