<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/order_product_card"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shop_image"
            tools:background="@color/Unify_B100"
            app:loader_type="rect"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="66dp"
            android:layout_height="66dp"/>


        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shop_name"
            android:textColor="@color/Unify_Y400"
            android:textSize="10dp"
            android:textStyle="bold"
            app:loader_type="line"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/shop_image"
            app:layout_constraintBottom_toTopOf="@id/shop_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginEnd="8dp"
            tools:text="Menunggu Pembayaran"
            android:layout_width="0dp"
            android:layout_height="@dimen/sp_10"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shop_location"
            app:typographyType="body_3"
            android:layout_marginTop="8dp"
            app:loader_type="line"
            app:layout_constraintTop_toBottomOf="@id/shop_name"
            app:layout_constraintStart_toStartOf="@id/shop_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="This is product name"
            android:ellipsize="end"
            android:layout_width="120dp"
            android:layout_height="@dimen/sp_10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>