<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/other_favorite_shop_card"
    android:layout_width="wrap_content"
    android:layout_height="66dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="4dp"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/holder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/Unify_Static_White_96">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/favorite_shop_others_count"
            android:textStyle="bold"
            tools:text="5 Transaksi\nLainnya"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/favorite_shop_others_icon"
            android:layout_marginEnd="12dp"
            app:icon_name="CHEVRON_RIGHT"
            android:layout_gravity="center_vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>