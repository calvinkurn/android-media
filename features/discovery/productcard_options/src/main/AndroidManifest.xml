<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.productcard.options">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:supportsRtl="true">
        <activity
            android:name=".ProductCardOptionsActivity"
            android:label="@string/title_product_card_options"
            android:theme="@style/Theme.TransparentNoAnimation">

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_discovery"
                    android:path="@string/path_product_card_options"/>
            </intent-filter>

        </activity>
    </application>

</manifest>