<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_search_product_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/image_search_image_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <com.tokopedia.topads.sdk.view.ImpressedImageView
            android:id="@+id/image_search_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@color/red_100" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/image_search_image_card"
        android:layout_alignTop="@id/image_search_image_card"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_7"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/image_search_topads_icon"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:background="@drawable/bg_preorder_label"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_search_info_topads"
                android:layout_width="16dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_toa" />
        </RelativeLayout>

        <TextView
            android:id="@+id/image_search_topLabel"
            style="@style/TextView.Micro.BlackDisabled"
            android:background="@drawable/image_search_top_label_background"
            android:paddingLeft="@dimen/padding_ms"
            android:paddingTop="@dimen/padding_vvs"
            android:paddingRight="@dimen/padding_ms"
            android:paddingBottom="@dimen/padding_vvs" />

    </LinearLayout>

    <TextView
        android:id="@+id/image_search_bottomLabel"
        style="@style/TextView.Micro.Green"
        android:layout_alignLeft="@id/image_search_image_card"
        android:layout_alignBottom="@id/image_search_image_card"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_7"
        android:background="@drawable/image_search_bottom_label_background"
        android:paddingLeft="@dimen/padding_ms"
        android:paddingTop="@dimen/padding_vvs"
        android:paddingRight="@dimen/padding_ms"
        android:paddingBottom="@dimen/padding_vvs" />

    <RelativeLayout
        android:id="@+id/image_search_wishlist_button_container"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/circle_white"
        android:visibility="visible">

        <View
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/image_search_wishlist_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_wishlist" />

    </RelativeLayout>

    <TextView
        android:id="@+id/image_search_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_search_image_card"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="5sp"
        android:maxLines="2"
        android:minHeight="38dp"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold" />

    <TextView
        android:id="@+id/image_search_text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_search_title_text"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/fontvvs"
        android:visibility="gone" />

    <TextView
        android:id="@+id/image_search_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_search_text_original_price"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/orange_red"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        tools:text="Rp 3.121.500" />

    <TextView
        android:id="@+id/text_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_search_text_original_price"
        android:layout_alignBottom="@id/image_search_price"
        android:layout_toEndOf="@id/image_search_price"
        android:layout_toRightOf="@id/image_search_price"
        android:background="@drawable/bg_rounded_corners_red"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingTop="@dimen/margin_vvvs"
        android:paddingRight="@dimen/padding_vvs"
        android:paddingBottom="@dimen/margin_vvvs"
        android:textColor="@color/white"
        android:textSize="@dimen/fontvvs"
        android:visibility="gone"
        tools:text="10%OFF" />

    <LinearLayout
        android:id="@+id/image_search_shop_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_search_price"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/image_search_badges_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/image_search_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_search_rating_review_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_search_shop_info_container"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_search_rating"
            android:layout_width="51dp"
            android:layout_height="@dimen/dp_10" />

        <TextView
            android:id="@+id/image_search_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/image_search_new_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_search_rating_review_container"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/bg_new_label"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_3"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_3"
        android:text="@string/baru"
        android:textColor="@color/new_label_color"
        android:textSize="@dimen/sp_11"
        android:visibility="gone" />

</RelativeLayout>