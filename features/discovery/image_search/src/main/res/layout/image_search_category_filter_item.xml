<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter_item_container"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/category_filter_padding_vertical"
    android:paddingBottom="@dimen/category_filter_padding_vertical"
    android:paddingLeft="@dimen/category_filter_padding_horizontal"
    android:paddingRight="@dimen/category_filter_padding_horizontal"
    android:background="@drawable/image_search_category_filter_item_background_neutral"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/filter_new_icon"
        android:layout_width="@dimen/search_new_filter_icon_width"
        android:layout_height="@dimen/search_new_filter_icon_height"
        app:srcCompat="@drawable/ic_new"
        android:scaleType="fitXY"
        android:layout_marginRight="3dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/category_filter_text"
        style="@style/TextView.Small.BlackSecondary"
        tools:text="superstar"/>

</LinearLayout>
