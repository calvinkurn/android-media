<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Unify_N0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_container"
    android:orientation="vertical">

    <com.tokopedia.autocomplete.searchbar.SearchBarView
        android:id="@+id/autocompleteSearchBar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_initial_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_4">

        <fragment
            android:id="@+id/search_initial_state"
            android:name="com.tokopedia.autocomplete.initialstate.InitialStateFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_suggestion_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/search_suggestion"
            android:name="com.tokopedia.autocomplete.suggestion.SuggestionFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>