<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/autocompleteCuratedCampaignCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/autocompleteCuratedCampaignConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/autocompleteCuratedCampaignImage"
            android:contentDescription="@string/content_desc_curated_campaign_image"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:gravity="center"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/autocompleteCuratedCampaignTitle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@string/dummy_recent_search_two_lines"
            android:textColor="@color/Unify_N700_96"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            app:layout_constraintTop_toTopOf="@id/autocompleteCuratedCampaignImage"
            app:layout_constraintBottom_toTopOf="@id/autocompleteCuratedCampaignSubtitle"
            app:layout_constraintLeft_toRightOf="@id/autocompleteCuratedCampaignImage"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="body_2"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/autocompleteCuratedCampaignSubtitle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_18"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@string/dummy_recent_search_subtitle"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@id/autocompleteCuratedCampaignImage"
            app:layout_constraintLeft_toRightOf="@id/autocompleteCuratedCampaignImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/autocompleteCuratedCampaignTitle"
            app:typographyType="body_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>