query universe_suggestion($params: String!) {
  universe_suggestion(param: $params) {
    data {
      id
      name
      items {
        template
        type
        applink
        url
        title
        subtitle
        icon_title
        icon_subtitle
        shortcut_image
        image_url
        url_tracker
        label
        label_type
        tracking {
          code
        }
        discount_percentage
        original_price
      }
    }
    top_shops{
      type
      id
      applink
      url
      title
      subtitle
      icon_title
      icon_subtitle
      url_tracker
      image_url
      products{
        image_url
      }
    }
  }
}