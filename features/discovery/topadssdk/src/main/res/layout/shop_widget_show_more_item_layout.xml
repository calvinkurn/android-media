<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/sdk_dp_132"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/unify_space_8"
    android:background="@drawable/show_more_card_bg"
    tools:background="@color/green_200">

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/shop_widget_show_more_card_top_img"
        app:flow_verticalBias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginEnd="@dimen/unify_space_12"
        android:text="Lihat Produk Lainnya"
        android:textColor="@color/Unify_N0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5" />

    <ImageView
        android:layout_width="@dimen/unify_space_32"
        android:layout_height="@dimen/unify_space_32"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/unify_space_12"
        android:contentDescription="@string/topads_sdk_shop_more_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_btn_more_arrow" />


</androidx.constraintlayout.widget.ConstraintLayout>