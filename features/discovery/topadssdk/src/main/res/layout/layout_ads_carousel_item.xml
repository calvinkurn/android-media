<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="153dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <com.tokopedia.topads.sdk.view.ImpressedImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:lines="2"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_s_medium"
        tools:text="Samsung Galaxy S10 BINB Cash Only" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ic_toa"
            android:textColor="@color/deep_orange_500"
            android:textSize="@dimen/text_size_s_medium"
            tools:text="Rp. 1000.000" />

        <ImageView
            android:id="@+id/ic_toa"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_toa" />
    </RelativeLayout>
</LinearLayout>

