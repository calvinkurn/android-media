<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="153dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.topads.sdk.view.ImpressedImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@color/red_100" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_preorder_label"
                android:visibility="visible">

                <ImageView
                    android:id="@id/info_topads"
                    android:layout_width="16dp"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_toa" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/top_label_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/wishlist_button_container"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|right"
            android:background="@drawable/circle_wishlist"
            android:visibility="visible">

            <ImageView
                android:id="@+id/wishlist_button"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/ic_wishlist" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom_label_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_margin="5dp"
            android:orientation="horizontal" />

    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:lines="2"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_s_medium"
        tools:text="Samsung Galaxy S10 BINB Cash Only" />


    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ic_toa"
        android:textColor="@color/deep_orange_500"
        android:textSize="@dimen/text_size_s_medium"
        android:textStyle="bold"
        tools:text="Rp. 1000.000" />

</LinearLayout>

