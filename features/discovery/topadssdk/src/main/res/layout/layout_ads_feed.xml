<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/promoted_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/promoted_icon"
            android:layout_width="@dimen/feed_badge_size"
            android:layout_height="@dimen/feed_badge_size"
            app:srcCompat="@drawable/ic_toa"/>

        <TextView
            android:id="@+id/promoted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_promote"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/promoted_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
