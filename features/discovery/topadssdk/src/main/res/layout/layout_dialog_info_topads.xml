<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                app:srcCompat="@drawable/ic_icon_toped_announce" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/promote_0"
                android:textColor="@color/tkpd_main_green"
                android:textSize="@dimen/font_large"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_vs"
            android:paddingTop="@dimen/margin_vs"
            android:text="@string/promote_1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/margin_vs"
            android:lineSpacingMultiplier="0.9"
            android:paddingBottom="@dimen/padding_vs"
            android:text="@string/promote_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_vs"
            android:paddingTop="@dimen/margin_vs"
            android:text="@string/promote_3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/margin_vs"
            android:lineSpacingMultiplier="0.9"
            android:paddingBottom="@dimen/padding_vs"
            android:text="@string/promote_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_vs"
            android:paddingTop="@dimen/margin_vs"
            android:text="@string/promote_5"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/margin_vs"
            android:lineSpacingMultiplier="0.9"
            android:paddingBottom="@dimen/padding_vs"
            android:text="@string/promote_6" />

        <TextView
            android:id="@+id/readMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            style="@style/FavButton"
            android:padding="@dimen/padding_small"
            android:gravity="center"
            android:text="Baca selengkapnya"
            android:textColor="@color/white" />
    </LinearLayout>
</android.support.v7.widget.CardView>
