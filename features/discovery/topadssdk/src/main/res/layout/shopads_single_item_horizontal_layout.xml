<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_height="@dimen/sdk_dp_300"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    tools:viewBindingIgnore="true"
    android:id="@+id/container">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/headerShopImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider"
        app:unify_image_type="circle"
        android:layout_marginTop="40dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopAdsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:text="@string/topads_ads_text"
        app:typographyType="paragraph_3"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintTop_toBottomOf="@id/headerShopImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shop_badge"
        android:layout_marginTop="8dp"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/shop_badge"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:contentDescription="@string/topads_sdk_shop_banner_content_description"
        tools:src="@tools:sample/avatars"
        app:unify_image_type="rect"
        app:layout_constraintTop_toTopOf="@id/shopAdsText"
        app:layout_constraintStart_toEndOf="@id/shopAdsText"
        app:layout_constraintEnd_toStartOf="@id/shop_name"
        android:layout_marginStart="4dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Lego Official Store"
        app:layout_constraintTop_toTopOf="@id/shop_badge"
        app:layout_constraintStart_toEndOf="@id/shop_badge"
        app:layout_constraintEnd_toStartOf="@id/divider"
        android:layout_marginHorizontal="4dp"
        android:layout_marginEnd="16dp"/>

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/merchantVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:labelType="highlight_light_green"
        tools:labelTitle="Cashback 3%"
        app:layout_constraintStart_toStartOf="@id/shopAdsText"
        app:layout_constraintEnd_toEndOf="@id/shop_name"
        app:layout_constraintTop_toBottomOf="@id/shopAdsText"
        android:layout_marginTop="4dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Mainan dengan kualitas produk dan harga terbaik, hanya di Mama Sing!"
        app:typographyType="paragraph_3"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintTop_toBottomOf="@id/merchantVoucher"
        app:layout_constraintStart_toStartOf="@id/shopAdsText"
        app:layout_constraintEnd_toEndOf="@id/shop_name"
        android:textAlignment="center"
        android:layout_marginTop="4dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider"
        android:layout_height="match_parent"
        android:layout_width="1dp"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/product_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider"
        android:layout_marginVertical="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/product_image"
                android:layout_width="158dp"
                android:layout_height="158dp"
                android:layout_marginBottom="8dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/product_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="Pig PU Doll Squishy Judgement"
                android:ellipsize="end"
                app:typographyType="paragraph_3"
                android:textColor="@color/Unify_NN950"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/discounted_price"
                app:layout_constraintStart_toStartOf="@id/discounted_price"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="4dp"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/discounted_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="display_2"
                android:textSize="14sp"
                android:textColor="@color/Unify_NN950"
                app:typographyWeight="bold"
                tools:text="Rp79.000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="8dp"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp80.000"
                app:typographyType="paragraph_3"
                android:textSize="11sp"
                android:textColor="@color/Unify_NN400"
                app:layout_constraintTop_toTopOf="@id/discounted_price"
                app:layout_constraintBottom_toBottomOf="@id/discounted_price"
                app:layout_constraintStart_toEndOf="@id/discounted_price"
                android:layout_marginStart="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify2>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageRibbonArch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/product_card_ribbon_arch_red"
        android:contentDescription="@string/product_card_content_desc_ribbon"
        app:layout_constraintTop_toTopOf="@id/imageRibbonContent"
        app:layout_constraintBottom_toBottomOf="@id/imageRibbonContent"
        app:layout_constraintEnd_toStartOf="@id/product_container"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageRibbonContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:elevation="5dp"
        app:srcCompat="@drawable/product_card_ribbon_content_red"
        android:contentDescription="@string/product_card_content_desc_ribbon"
        app:layout_constraintTop_toTopOf="@id/textRibbon"
        app:layout_constraintBottom_toBottomOf="@id/textRibbon"
        app:layout_constraintStart_toStartOf="@id/imageRibbonArch"
        app:layout_constraintEnd_toEndOf="@id/textRibbon" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textRibbon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="8dp"
        android:text="90%"
        android:elevation="5dp"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintStart_toStartOf="@id/product_container"
        app:layout_constraintTop_toTopOf="@id/product_container"
        app:typographyType="display_3"
        app:typographyWeight="bold" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/discount_percent_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="imageRibbonArch,imageRibbonContent,textRibbon"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>