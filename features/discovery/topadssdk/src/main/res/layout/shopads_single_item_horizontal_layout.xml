<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/white"
    tools:layout_height="@dimen/sdk_dp_300"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/headerShopImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider"
        app:unify_image_type="circle"
        android:layout_marginTop="40dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopAdsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:text="@string/topads_ads_text"
        app:typographyType="paragraph_3"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintTop_toBottomOf="@id/headerShopImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shop_badge"
        android:layout_marginTop="8dp"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/shop_badge"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:contentDescription="@string/topads_sdk_shop_banner_content_description"
        tools:src="@tools:sample/avatars"
        app:unify_image_type="rect"
        app:layout_constraintTop_toTopOf="@id/shopAdsText"
        app:layout_constraintStart_toEndOf="@id/shopAdsText"
        app:layout_constraintEnd_toStartOf="@id/shop_name"
        android:layout_marginStart="4dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Lego Official Store"
        app:layout_constraintTop_toTopOf="@id/shop_badge"
        app:layout_constraintStart_toEndOf="@id/shop_badge"
        app:layout_constraintEnd_toStartOf="@id/divider"
        android:layout_marginHorizontal="4dp"
        android:layout_marginEnd="16dp"/>

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/merchantVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:labelType="highlight_light_green"
        tools:labelTitle="Cashback 3%"
        app:layout_constraintStart_toStartOf="@id/shopAdsText"
        app:layout_constraintEnd_toEndOf="@id/shop_name"
        app:layout_constraintTop_toBottomOf="@id/shopAdsText"
        android:layout_marginTop="4dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopAds_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Mainan dengan kualitas produk dan harga terbaik, hanya di Mama Sing!"
        app:typographyType="paragraph_3"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintTop_toBottomOf="@id/merchantVoucher"
        app:layout_constraintStart_toStartOf="@id/shopAdsText"
        app:layout_constraintEnd_toEndOf="@id/shop_name"
        android:textAlignment="center"
        android:layout_marginTop="4dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider"
        android:layout_height="match_parent"
        android:layout_width="1dp"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <com.tokopedia.productcard.ProductCardGridView
        android:id="@+id/product_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>