<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_label_outline_grey"
        android:paddingBottom="@dimen/label_padding_top_bottom"
        android:paddingLeft="@dimen/label_padding_left_right"
        android:paddingRight="@dimen/label_padding_left_right"
        android:paddingTop="@dimen/label_padding_top_bottom"
        tools:text="Label"
        android:textColor="@color/label_text_color"
        android:textSize="10sp" />
</RelativeLayout>