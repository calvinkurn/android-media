<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/Unify_Background"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banner_digital_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="128dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/banner_digital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textAllCaps="false"
                android:textColor="@color/Unify_NN950_68"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                app:typographyWeight="bold"
                app:typographyType="body_3"
                tools:text="Beli Tiket Dufan di tokopedia!" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/banner_digital_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/Unify_NN950_44"
                app:typographyWeight="reguler"
                app:typographyType="small"
                android:maxLines="2"
                tools:text="Mulai dari harga Rp 197,000 sampai Rp 321,000" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/banner_digital_cta_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/Unify_GN500"
                app:typographyWeight="reguler"
                app:typographyType="small"
                tools:text="Beli Sekarang" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_NN200" />

</LinearLayout>