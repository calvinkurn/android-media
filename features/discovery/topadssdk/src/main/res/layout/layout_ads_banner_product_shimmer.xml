<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/topads_sdk_headline_ad_width"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_6">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/icon_shimmer"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/topads_sdk_headline_ad_width"
            android:layout_margin="@dimen/dp_4"
            android:adjustViewBounds="true"
            app:loader_type="rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text_shimmer1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_4"
            app:loader_type="rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_shimmer" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text_shimmer2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_18"
            app:loader_type="rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_shimmer1" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text_shimmer3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_45"
            app:loader_type="rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_shimmer2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
