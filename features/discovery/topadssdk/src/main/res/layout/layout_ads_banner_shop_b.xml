<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="220dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shop_image"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/shop_badge"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/shop_name"
        app:layout_constraintStart_toEndOf="@+id/shop_image"
        app:layout_constraintTop_toTopOf="@+id/shop_name"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_70"
        app:typographyType="body_2"
        app:layout_constraintBottom_toBottomOf="@+id/shop_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shop_badge"
        app:layout_constraintTop_toTopOf="@+id/shop_image"
        tools:text="Lego Official Store" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_14"
        app:typographyType="body_2"
        app:layout_constraintEnd_toEndOf="@+id/shop_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_image"
        tools:text="Promo handphone discount 50%" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/kunjungi_toko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Cek Sekarang"
        android:textColor="@color/tkpd_main_green"
        app:typographyType="heading_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/topads_ic_right"
        app:layout_constraintBottom_toBottomOf="@+id/kunjungi_toko"
        app:layout_constraintStart_toEndOf="@+id/kunjungi_toko"
        app:layout_constraintTop_toTopOf="@+id/kunjungi_toko" />
</androidx.constraintlayout.widget.ConstraintLayout>
