<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_148"
    android:layout_height="260dp"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_6">

        <com.tokopedia.topads.sdk.view.ImpressedImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_148"
            android:layout_height="@dimen/dp_148"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_6"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_4"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            app:typographyType="body_3"
            tools:text="Inspiring the Builders of Tomorrow Builders Tomorrow Builders" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/discount_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:textStyle="bold"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"
            tools:text="25%"
            tools:visibility="gone" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/slashed_price"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4"
            android:textColor="@color/Unify_N700_44"
            android:visibility="gone"
            android:textSize="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="@+id/discount_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/discount_txt"
            app:layout_constraintTop_toTopOf="@+id/discount_txt"
            app:typographyType="small"
            tools:text="1000.000"
            tools:visibility="gone" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="2dp"
            android:paddingBottom="@dimen/dp_2"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discount_txt"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp 10.000" />

        <ImageView
            android:id="@+id/imageViewRatingAverage"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_3"
            android:adjustViewBounds="true"
            android:contentDescription="image rating"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:srcCompat="@drawable/topads_ic_rating_active"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textRatingAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_2"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/imageViewRatingAverage"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:typographyType="body_3"
            tools:text="4.8"
            tools:visibility="visible" />

        <View
            android:id="@+id/ratingAverageIntegrityLine"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_10"
            android:background="@color/Unify_N700_32"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/textRatingAverage"
            app:layout_constraintStart_toEndOf="@+id/textRatingAverage"
            app:layout_constraintTop_toTopOf="@id/textRatingAverage"
            app:layout_constraintEnd_toStartOf="@+id/textViewIntegrity"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewIntegrity"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginEnd="@dimen/dp_6"
            app:layout_constraintStart_toEndOf="@id/ratingAverageIntegrityLine"
            app:layout_constraintTop_toTopOf="@id/textRatingAverage"
            app:layout_constraintBottom_toBottomOf="@id/textRatingAverage"
            app:layout_constraintEnd_toEndOf="parent"
            app:typographyType="body_3"
            tools:text="Terjual 122"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageViewRating1"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:adjustViewBounds="true"
            android:contentDescription="rating1"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewRatingAverage"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageViewRating2"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:adjustViewBounds="true"
            android:contentDescription="rating2"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRating1"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating1"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating1"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageViewRating3"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:adjustViewBounds="true"
            android:contentDescription="rating3"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating2"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating2"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageViewRating4"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:adjustViewBounds="true"
            android:contentDescription="rating4"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRating3"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating3"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating3"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageViewRating5"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:adjustViewBounds="true"
            android:contentDescription="rating5"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRating4"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating4"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating4"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="visible" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_2"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRating5"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating5"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating5"
            app:typographyType="body_3"
            tools:text="(3000)"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_new"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:text="Terbaru"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:labelType="general_light_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewRating1"
            tools:visibility="gone" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
