<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_148"
    android:layout_height="268dp"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_6">

    <com.tokopedia.topads.sdk.view.ImpressedImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp_148"
        android:layout_height="@dimen/dp_148"
        android:adjustViewBounds="true"
        tools:src="@tools:sample/avatars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/dp_6"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/topads_product_name"
            app:typographyType="heading_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            tools:text="Inspiring the Builders of Tomorrow Builders Tomorrow Builders" />

        <com.tokopedia.unifycomponents.Label
        android:id="@+id/discount_txt"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        app:labelType="general_light_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:text="25%" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/slashed_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@+id/discount_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/discount_txt"
        app:layout_constraintTop_toTopOf="@+id/discount_txt"
        app:typographyType="small"
        android:visibility="gone"
        android:textColor="@color/topads_shalshed_price_color"
        android:layout_marginLeft="@dimen/dp_5"
        tools:visibility="visible"
        tools:text="1000.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:paddingBottom="@dimen/dp_2"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/topads_price_color"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discount_txt"
        tools:text="Rp 10.000" />

    <ImageView
        android:id="@+id/imageViewRating1"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:adjustViewBounds="true"
        android:contentDescription="rating1"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price"
        tools:src="@drawable/topads_ic_rating_active" />

    <ImageView
        android:id="@+id/imageViewRating2"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:adjustViewBounds="true"
        android:contentDescription="rating2"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRating1"
        app:layout_constraintStart_toEndOf="@+id/imageViewRating1"
        app:layout_constraintTop_toTopOf="@+id/imageViewRating1"
        tools:src="@drawable/topads_ic_rating_active" />

    <ImageView
        android:id="@+id/imageViewRating3"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:adjustViewBounds="true"
        android:contentDescription="rating3"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/imageViewRating2"
        app:layout_constraintTop_toTopOf="@+id/imageViewRating2"
        tools:src="@drawable/topads_ic_rating_active" />

    <ImageView
        android:id="@+id/imageViewRating4"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:adjustViewBounds="true"
        android:contentDescription="rating4"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRating3"
        app:layout_constraintStart_toEndOf="@+id/imageViewRating3"
        app:layout_constraintTop_toTopOf="@+id/imageViewRating3"
        tools:src="@drawable/topads_ic_rating_active" />

    <ImageView
        android:id="@+id/imageViewRating5"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:adjustViewBounds="true"
        android:contentDescription="rating5"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRating4"
        app:layout_constraintStart_toEndOf="@+id/imageViewRating4"
        app:layout_constraintTop_toTopOf="@+id/imageViewRating4"
        tools:src="@drawable/topads_ic_rating_active" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewReviewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_2"
        android:textColor="@color/topads_product_review_count"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRating5"
        app:layout_constraintStart_toEndOf="@+id/imageViewRating5"
        app:layout_constraintTop_toTopOf="@+id/imageViewRating5"
        app:typographyType="body_3"
        tools:text="(3000)" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_new"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="gone"
        app:labelType="general_light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRating1"
        android:text="Terbaru" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
