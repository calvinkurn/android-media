<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopProductTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="heading_4"
        android:layout_marginTop="@dimen/unify_space_8"
        android:layout_marginStart="@dimen/unify_space_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Toko-toko ini menjual yang kamu cari"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shopAdsProductRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginStart="@dimen/unify_space_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shopProductTitle"
        tools:listitem="@layout/topads_with_one_product_layout_item"
        tools:itemCount="2" />

</androidx.constraintlayout.widget.ConstraintLayout>