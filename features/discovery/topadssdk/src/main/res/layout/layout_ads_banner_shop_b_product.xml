<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="118dp"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_icon"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.topads.sdk.view.ImpressedImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                tools:src="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:paddingBottom="@dimen/dp_4"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            tools:text="Inspiring the Builders of Tomorrow Builders Tomorrow Builders" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/discount_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="@dimen/dp_2"
            android:textStyle="bold"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintStart_toEndOf="@+id/card_icon"
            app:layout_constraintTop_toBottomOf="@+id/description"
            tools:text="25%"
            tools:visibility="gone" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/slashed_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_2"
            android:textColor="@color/Unify_N700_44"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/discount_txt"
            app:layout_constraintStart_toEndOf="@+id/discount_txt"
            app:layout_constraintTop_toTopOf="@+id/discount_txt"
            app:typographyType="small"
            tools:text="1000.000"
            tools:visibility="gone" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/dp_4"
            android:textColor="@color/Unify_Y500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_icon"
            app:layout_constraintTop_toBottomOf="@+id/discount_txt"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp 10.000" />

        <ImageView
            android:id="@+id/imageViewRating1"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:adjustViewBounds="true"
            android:contentDescription="rating1"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/card_icon"
            app:layout_constraintTop_toBottomOf="@+id/price"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewRating2"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:adjustViewBounds="true"
            android:contentDescription="rating2"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRating1"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating1"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating1"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewRating3"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:adjustViewBounds="true"
            android:contentDescription="rating3"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating2"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating2"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewRating4"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:adjustViewBounds="true"
            android:contentDescription="rating4"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRating3"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating3"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating3"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewRating5"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:adjustViewBounds="true"
            android:contentDescription="rating5"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRating4"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating4"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating4"
            tools:src="@drawable/topads_ic_rating_active"
            tools:visibility="gone" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_2"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRating5"
            app:layout_constraintStart_toEndOf="@+id/imageViewRating5"
            app:layout_constraintTop_toTopOf="@+id/imageViewRating5"
            app:typographyType="body_3"
            tools:text="(3000)"
            tools:visibility="gone" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_new"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="Terbaru"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:labelType="general_light_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_icon"
            app:layout_constraintTop_toBottomOf="@+id/imageViewRating1"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
