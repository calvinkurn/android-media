<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="@color/green_buy"
                android:startColor="@color/green_buy" />

            <corners android:radius="2dp" />

            <padding
                android:bottom="@dimen/padding_buy"
                android:left="@dimen/padding_buy"
                android:right="@dimen/padding_buy"
                android:top="@dimen/padding_buy" />
        </shape>
    </item>

</layer-list>