<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.home_recom">
    <application>
        <activity
                android:name=".SimilarProductRecommendationActivity"
                android:label="@string/recom_similar_recommendation"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                        android:scheme="@string/tokopedia_scheme"
                        android:host="@string/recom_global_applink"
                        android:pathPattern="/.*/d/.*"/>
                <data
                        android:scheme="@string/internal_scheme"
                        android:host="@string/host_home"
                        android:pathPattern="@string/path_global_similar_product_domain"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeRecommendationActivity"
            android:label="@string/recom_home_recommendation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                        android:scheme="@string/tokopedia_scheme"
                        android:host="@string/recom_global_applink"
                        android:pathPattern=".*"/>
                <data
                        android:scheme="@string/internal_scheme"
                        android:host="@string/host_home"
                        android:pathPattern="@string/path_global_home_recommendation_domain"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
