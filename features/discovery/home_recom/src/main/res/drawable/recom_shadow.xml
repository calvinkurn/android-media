<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                    android:startColor="@color/white"
                    android:endColor="@color/red_300"
                    android:angle="-90"
            />
            <padding android:top="@dimen/dp_0" android:right="@dimen/dp_0" android:left="@dimen/dp_0" android:bottom="@dimen/dp_0"/>
        </shape>
    </item>
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:radius="@dimen/dp_8"/>
            <solid android:color="#10CCCCCC" />
            <padding android:top="@dimen/dp_15" android:right="@dimen/dp_15" android:bottom="@dimen/dp_15" android:left="@dimen/dp_15" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dp_8"/>
            <solid android:color="#20CCCCCC" />
            <padding android:top="@dimen/dp_1" android:right="@dimen/dp_1" android:bottom="@dimen/dp_1" android:left="@dimen/dp_1" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dp_8"/>
            <solid android:color="#40CCCCCC" />
            <padding android:top="@dimen/dp_1" android:right="@dimen/dp_1" android:bottom="@dimen/dp_1" android:left="@dimen/dp_1" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dp_8"/>
            <solid android:color="#50CCCCCC" />
            <padding android:top="@dimen/dp_1" android:right="@dimen/dp_1" android:bottom="@dimen/dp_1" android:left="@dimen/dp_1" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dp_8"/>
            <solid android:color="#60CCCCCC" />
            <padding android:top="@dimen/dp_1" android:right="@dimen/dp_1" android:bottom="@dimen/dp_1" android:left="@dimen/dp_1" />
        </shape>
    </item>


    <!-- main background !-->
    <item>
        <shape>
            <corners android:radius="@dimen/dp_8"/>
            <solid android:color="@color/white"/>
            <padding android:bottom="@dimen/dp_1" android:left="@dimen/dp_1" android:right="@dimen/dp_1" android:top="@dimen/dp_1"/>
        </shape>
    </item>


</layer-list>