query productRecommendationSingle($userID: Int!, $pageNumber: Int!, $xDevice: String!, $xSource: String!, $ref: String!, $productIDs: String!, $pageName: String!) {
    productRecommendationWidgetSingle(userID: $userID, xDevice: $xDevice, xSource: $xSource, ref: $ref, pageNumber: $pageNumber, productIDs: $productIDs, pageName: $pageName){
        meta {
            recommendation
            size
            failSize
            processTime
            experimentVersion
        }
       data {
           tID
           source
           title
           foreignTitle
           widgetUrl
           seeMoreAppLink
           seeMoreUrlLink
           pageName
           recommendation {
               id
               name
               categoryBreadcrumbs
               url
               appUrl
               clickUrl
               wishlistUrl
               trackerImageUrl
               imageUrl
               relatedProductAppLink
               relatedProductUrlLink
               price
               priceInt
               shop {
                   id
               }
              departmentId
              labels {
                  title
                  color
              }
              badges {
                  title
                  imageUrl
              }
              wholesalePrice {
                  price
                  quantityMax
                  quantityMin
                  priceString
              }
              rating
              countReview
              recommendationType
              stock
              isTopads
           }
       }
     }
 }