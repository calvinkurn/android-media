query primaryProduct($productId: Int!, $xSource: String!) {
    productRecommendationProductDetail(productID: $productId, xSource: $xSource) {
        data {
          tID
          source
          title
          foreignTitle
          widgetUrl
          recommendation {
            id
            name
            categoryBreadcrumbs
            url
            appUrl
            clickUrl
            wishlistUrl
            trackerImageUrl
            imageUrl
            price
            priceInt
            slashedPrice
            slashedPriceInt
            discountPercentage
            shop {
              id
              name
              url
              appUrl
              isGold
              location
              city
              reputation
              clover
              shopImage
            }
            departmentId
            labels {
              title
              color
            }
            badges {
              title
              imageUrl
            }
            wholesalePrice {
              price
              quantityMax
              quantityMin
              priceString
            }
            rating
            countReview
            countReviewFloat
            recommendationType
            stock
            minOrder
            isTopads
            isWishlist
            productKey
            shopDomain
            urlPath
          }
        }
      }
}
