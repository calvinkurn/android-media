query primaryProduct($userID: Int!, $productId: Int!, $xDevice: String!, $xSource: String!) {
    productRecommendationProductDetail(userID: $userID, productID: $productId, xDevice: $xDevice, xSource: $xSource) {
        data {
          tID
          source
          title
          foreignTitle
          widgetUrl
          recommendation {
            id
            name
            categoryBreadcrumbs
            url
            appUrl
            clickUrl
            wishlistUrl
            trackerImageUrl
            imageUrl
            price
            priceInt
            slashedPrice
            slashedPriceInt
            shop {
              id
              name
              shopImage
            }
            departmentId
            labels {
              title
              color
            }
            badges {
              title
              imageUrl
            }
            wholesalePrice {
              price
              quantityMax
              quantityMin
              priceString
            }
            rating
            countReview
            recommendationType
            stock
            isTopads
            IsWishlist
          }
        }
      }
}
