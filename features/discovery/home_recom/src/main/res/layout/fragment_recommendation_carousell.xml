<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:lineSpacingExtra="@dimen/sp_6"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="heading_4"
        tools:text="@string/recom_another_product_title"/>

    <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:lineSpacingExtra="@dimen/sp_6"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_4"
            android:text="@string/recom_see_more_title"
            android:textColor="@color/Unify_G500"
            android:background="?attr/selectableItemBackground"
            app:typographyType="heading_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <com.tokopedia.carouselproductcard.CarouselProductCardView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:useDefaultItemDecorator="false"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>