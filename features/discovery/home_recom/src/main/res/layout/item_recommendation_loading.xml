<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/image_shimmering"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_shimmering"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text2" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text2"
            android:layout_width="150dp"
            android:layout_height="12dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"
            app:layout_constraintStart_toEndOf="@+id/image_shimmering"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            app:layout_constraintBottom_toTopOf="@+id/text3"
            app:layout_constraintWidth_percent="0.6"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text3"
            android:layout_width="120dp"
            android:layout_height="12dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"
            app:layout_constrainedWidth="true"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintStart_toEndOf="@+id/image_shimmering"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            app:layout_constraintBottom_toTopOf="@+id/text4" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/text4"
        android:layout_width="140dp"
        android:layout_height="12dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toBottomOf="@+id/image_shimmering"
        app:layout_constraintStart_toEndOf="@+id/image_shimmering"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                layout="@layout/partial_shimmering_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1" />

            <include
                layout="@layout/partial_shimmering_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                layout="@layout/partial_shimmering_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1" />

            <include
                layout="@layout/partial_shimmering_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                layout="@layout/partial_shimmering_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1" />

            <include
                layout="@layout/partial_shimmering_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>