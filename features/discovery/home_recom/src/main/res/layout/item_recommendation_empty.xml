<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.tokopedia.unifycomponents.EmptyState
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:unifyEmptyStateOrientation="vertical"
        app:unifyEmptyStateType="page"
        app:unifyEmptyStatePrimaryCTAText="@string/recom_empty_filter_button"
        app:unifyEmptyStateDescription="@string/recom_empty_filter_desc"
        app:unifyEmptyStateTitle="@string/recom_empty_filter_title"/>
</LinearLayout>