<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.ContainerUnify
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:container_color="RED">
        <com.tokopedia.unifycomponents.CardUnify
                android:id="@+id/product_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:padding="@dimen/dp_10">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/product_image"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="@dimen/dp_80"
                                android:contentDescription="@string/recom_app_name"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:visibility="gone"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:background="@color/red_150"/>
                        <ImageView
                                android:id="@+id/fab_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:visibility="gone"
                                tools:visibility="visible"
                                app:srcCompat="@drawable/ic_product_action_wishlist_gray_28"
                                android:contentDescription="@string/recom_app_name"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                        <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/product_name"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/charcoal_grey_88"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:typographyType="heading_5"
                                app:layout_constraintEnd_toStartOf="@+id/fab_detail"
                                app:layout_constraintStart_toEndOf="@+id/product_image"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="PrettyLittleThing exclusive basicâ€¦"/>
                        <TextView
                                android:id="@+id/product_discount"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_discount_product"
                                android:textColor="@color/discount"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp_10"
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginTop="@dimen/dp_4"
                                app:layout_constraintTop_toBottomOf="@+id/product_name"
                                app:layout_constraintStart_toEndOf="@+id/product_image"
                                tools:text="20%"/>
                        <TextView
                                android:id="@+id/product_slashed_price"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                android:lineSpacingExtra="@dimen/sp_6"
                                android:visibility="gone"
                                android:textColor="@color/slashed_price"
                                android:textSize="@dimen/sp_10"
                                app:layout_constraintBottom_toBottomOf="@+id/product_discount"
                                app:layout_constraintEnd_toEndOf="@+id/product_name"
                                app:layout_constraintStart_toEndOf="@+id/product_discount"
                                app:layout_constraintTop_toTopOf="@+id/product_discount"
                                tools:text="Rp100.001.000"/>
                        <TextView
                                android:id="@+id/product_price"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:textColor="@color/price"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/product_image"
                                app:layout_constraintTop_toBottomOf="@+id/product_discount"
                                tools:text="Rp100.001.000"/>
                        <ImageView
                                android:id="@+id/badge"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginTop="@dimen/dp_4"
                                app:layout_constraintStart_toEndOf="@+id/product_image"
                                app:layout_constraintTop_toBottomOf="@+id/product_price"
                                tools:background="@color/red_150"
                                tools:visibility="gone"
                        />
                        <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/text_location"
                                android:visibility="gone"
                                android:lineSpacingExtra="@dimen/sp_6"
                                android:layout_marginTop="@dimen/dp_4"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:layout_marginStart="@dimen/dp_4"
                                app:layout_goneMarginStart="@dimen/dp_8"
                                app:layout_constraintTop_toBottomOf="@+id/product_price"
                                app:layout_constraintStart_toEndOf="@+id/badge"
                                tools:text="Town Location"
                        />
                        <ImageView
                                android:id="@+id/rating"
                                android:layout_width="@dimen/dp_52"
                                android:layout_height="@dimen/dp_10"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginTop="@dimen/dp_4"
                                android:visibility="gone"
                                android:contentDescription="@string/app_name"
                                app:layout_constraintTop_toBottomOf="@+id/location"
                                app:layout_constraintStart_toEndOf="@+id/product_image"
                                tools:background="@color/red_150"
                                tools:layout_height="@dimen/dp_20"/>
                        <TextView
                                android:id="@+id/review_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_38"
                                android:textSize="@dimen/sp_12"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:layout_marginStart="@dimen/dp_4"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/rating"
                                app:layout_constraintStart_toEndOf="@+id/rating"
                                app:layout_constraintTop_toTopOf="@+id/rating"
                                tools:background="@color/red_150"
                                tools:width="@dimen/dp_20"/>
                        <FrameLayout
                                android:id="@+id/buy_now"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="@dimen/dp_32"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginBottom="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:background="@drawable/background_recom_buy"
                                android:visibility="gone"
                                tools:visibility="visible"
                                app:layout_constraintHorizontal_weight="0.25"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/barrier"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/add_to_cart"
                                app:layout_constraintEnd_toStartOf="@+id/add_to_cart">

                                <com.tokopedia.design.component.TextViewCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/recom_buy"
                                        android:textColor="@color/orange_red"
                                        android:layout_gravity="center"
                                        android:paddingLeft="@dimen/dp_8"
                                        android:paddingStart="@dimen/dp_8"
                                        android:paddingRight="@dimen/dp_8"
                                        android:paddingEnd="@dimen/dp_8"
                                        app:fontSize="micro"/>

                                <ProgressBar
                                        android:id="@+id/pb_buy_now"
                                        android:layout_width="@dimen/dp_30"
                                        android:layout_height="@dimen/dp_18"
                                        android:layout_gravity="center"
                                        android:background="@color/white"
                                        android:indeterminate="true"
                                        android:indeterminateTint="@color/orange_red"
                                        tools:visibility="visible"
                                        android:visibility="gone"/>

                        </FrameLayout>
                        <FrameLayout
                                android:id="@+id/add_to_cart"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="@dimen/dp_32"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginBottom="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:background="@drawable/background_add_to_cart"
                                android:visibility="gone"
                                tools:visibility="visible"
                                app:layout_constraintHorizontal_weight="0.75"
                                app:layout_constraintLeft_toRightOf="@+id/buy_now"
                                app:layout_constraintStart_toEndOf="@+id/buy_now"
                                app:layout_constraintTop_toBottomOf="@+id/barrier"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <com.tokopedia.design.component.TextViewCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/recom_add_to_cart"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/dp_8"
                                        android:paddingStart="@dimen/dp_8"
                                        android:paddingRight="@dimen/dp_8"
                                        android:paddingEnd="@dimen/dp_8"
                                        app:textViewTheme="darkPrimary"
                                        app:fontSize="micro"/>

                                <ProgressBar
                                        android:id="@+id/pb_add_to_cart"
                                        style="?android:progressBarStyleInverse"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_18"
                                        android:layout_gravity="center"
                                        android:background="@color/deep_orange_500"
                                        android:indeterminate="true"
                                        android:indeterminateTint="@color/white"
                                        tools:visibility="visible"
                                        android:visibility="gone"/>

                        </FrameLayout>
                        <androidx.constraintlayout.widget.Barrier
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/barrier"
                                app:barrierDirection="bottom"
                                app:constraint_referenced_ids="review_count,rating,location,badge,product_image"
                                tools:layout_editor_absoluteY="19dp"
                                tools:layout_editor_absoluteX="19dp"/>

                        <include layout="@layout/error_product_info_layout"
                            android:id="@+id/container_error"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:visibility="gone"/>

                        <include layout="@layout/empty_product_info"
                            android:id="@+id/container_empty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:visibility="gone"/>
                        <include layout="@layout/shimmering_product_info"
                            android:id="@+id/container_loading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:visibility="visible"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
        </com.tokopedia.unifycomponents.CardUnify>
</com.tokopedia.unifycomponents.ContainerUnify>
