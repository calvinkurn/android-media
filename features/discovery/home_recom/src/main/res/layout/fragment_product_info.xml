<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@drawable/background_product_info"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
            android:id="@+id/product_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            app:elevation="@dimen/dp_8"
            app:cardCornerRadius="@dimen/dp_8"
            app:contentPadding="@dimen/dp_8">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/app_name"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:background="@color/red_150"/>
            <ImageView
                android:id="@+id/fab_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:visibility="visible"
                tools:visibility="visible"
                app:srcCompat="@drawable/ic_product_action_wishlist_grayscale_24"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:lineSpacingExtra="6sp"
                android:maxLines="2"
                android:textColor="@color/charcoal_grey_88"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/fab_detail"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="PrettyLittleThing exclusive basicâ€¦" />
            <TextView
                    android:id="@+id/product_discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_discount_product"
                    android:textColor="@color/discount"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_4"
                    app:layout_constraintTop_toBottomOf="@+id/product_name"
                    app:layout_constraintStart_toEndOf="@+id/product_image"
                    tools:text="20%"/>

            <TextView
                android:id="@+id/product_slashed_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/slashed_price"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/product_discount"
                app:layout_constraintEnd_toEndOf="@+id/product_name"
                app:layout_constraintStart_toEndOf="@+id/product_discount"
                app:layout_constraintTop_toTopOf="@+id/product_discount"
                tools:text="Rp100.001.000" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/price"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/product_discount"
                app:layout_constraintTop_toBottomOf="@+id/product_discount"
                tools:text="Rp100.001.000" />

            <ImageView
                    android:id="@+id/badge"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_4"
                    app:layout_constraintStart_toEndOf="@+id/product_image"
                    app:layout_constraintTop_toBottomOf="@+id/product_price"
                    tools:background="@color/red_150"
            />
            <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#ae31353b"
                    android:visibility="visible"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_4"
                    app:layout_constraintTop_toBottomOf="@+id/product_price"
                    app:layout_constraintStart_toEndOf="@+id/badge"
                    tools:text="Town Location"
            />

            <ImageView
                    android:id="@+id/rating"
                    android:layout_width="@dimen/dp_52"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_4"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintTop_toBottomOf="@+id/badge"
                    app:layout_constraintStart_toEndOf="@+id/product_image"
                    tools:background="@color/red_150"
                    tools:layout_height="20dp" />

            <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_4"
                    app:layout_constraintBottom_toBottomOf="@+id/rating"
                    app:layout_constraintStart_toEndOf="@+id/rating"
                    app:layout_constraintTop_toTopOf="@+id/rating"
                    tools:background="@color/red_150"
                    tools:width="20dp" />

            <com.tokopedia.design.component.ButtonCompat
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_4"
                android:lineSpacingExtra="4sp"
                android:text="@string/add_to_cart"
                app:buttonCompatSize="medium"
                app:buttonCompatType="transaction"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_image" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
