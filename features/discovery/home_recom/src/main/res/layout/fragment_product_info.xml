<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:elevation="@dimen/dp_4"
        app:contentPadding="@dimen/dp_8">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/product_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/app_name"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:background="@color/red_150"/>
        <ImageView
                android:id="@+id/wishlist"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:background="@drawable/wishlist_icon_product_card_background"
                android:padding="@dimen/dp_6"
                android:scaleType="fitXY"
                android:src="@drawable/ic_wishlist_product_card"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible"/>
        <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/charcoal_grey_88"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                app:layout_constraintEnd_toStartOf="@+id/wishlist"
                tools:text="PrettyLittleThing exclusive basicâ€¦"/>
        <TextView
                android:id="@+id/product_discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_discount_product"
                android:textColor="@color/discount"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                tools:text="20%"/>
        <TextView
                android:id="@+id/product_slashed_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/slashed_price"
                android:lineSpacingExtra="6sp"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                app:layout_constraintStart_toEndOf="@+id/product_discount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/product_discount"
                app:layout_constraintTop_toTopOf="@+id/product_discount"
                tools:text="Rp100.001.000"/>
        <TextView
                android:id="@+id/product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/price"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_2"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_discount"
                tools:text="Rp100.001.000"/>

        <ImageView
                android:id="@+id/badge"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                app:layout_constraintTop_toBottomOf="@+id/product_price"
                tools:background="@color/red_150"
        />
        <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ae31353b"
                android:visibility="gone"
                android:lineSpacingExtra="6sp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                app:layout_constraintTop_toBottomOf="@+id/product_price"
                app:layout_constraintStart_toEndOf="@+id/badge"
                tools:text="Town Location"
        />

        <ImageView
                android:id="@+id/rating"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                android:contentDescription="@string/app_name"
                app:layout_constraintTop_toBottomOf="@+id/badge"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                tools:background="@color/red_150"
                tools:layout_height="20dp" />

        <TextView
                android:id="@+id/review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                app:layout_constraintBottom_toBottomOf="@+id/rating"
                app:layout_constraintStart_toEndOf="@+id/rating"
                app:layout_constraintTop_toTopOf="@+id/rating"
                tools:background="@color/red_150"
                tools:width="20dp" />
        <com.tokopedia.design.component.ButtonCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/add_to_cart"
                android:lineSpacingExtra="4sp"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_4"
                app:buttonCompatType="primary"
                app:buttonCompatSize="medium"
                app:layout_constraintTop_toBottomOf="@+id/review_count"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>