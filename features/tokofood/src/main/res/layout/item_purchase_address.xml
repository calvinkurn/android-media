<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_shipping_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alamat Pengiriman"
        app:typographyType="heading_6"
        app:layout_constraintEnd_toStartOf="@+id/text_change_shipping_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_change_shipping_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Alamat Lain"
        app:typographyType="heading_6"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerUnify"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_shipping_address" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_address_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerUnify"
        app:typographyType="heading_6"
        tools:text="Rumah" />

    <com.tokopedia.unifycomponents.Label
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:labelType="general_light_red"
        app:layout_constraintBottom_toBottomOf="@+id/text_address_name"
        app:layout_constraintStart_toEndOf="@+id/text_address_name"
        app:layout_constraintTop_toTopOf="@+id/text_address_name"
        tools:text="Utama" />

</androidx.constraintlayout.widget.ConstraintLayout>