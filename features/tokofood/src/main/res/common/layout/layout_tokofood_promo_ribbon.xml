<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_tokofood_promo_ribbon_tail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_tokofood_promo_ribbon"
        app:srcCompat="@drawable/ic_tokofood_promo_ribbon_tail"/>

    <LinearLayout
        android:id="@+id/layout_tokofood_promo_ribbon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:translationX="-1dp"
        app:layout_constraintStart_toEndOf="@id/iv_tokofood_promo_ribbon_tail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_tokofood_promo_ribbon_tail"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHeight_percent="0.73"
        android:paddingEnd="8dp"
        android:paddingStart="5dp"
        android:paddingVertical="2dp"
        android:background="@drawable/ic_tokofood_promo_ribbon_base">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_tokofood_promo_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/Unify_NN0"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            tools:text="Promo"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>