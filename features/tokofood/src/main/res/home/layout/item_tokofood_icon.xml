<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/spacing_lvl4"
    android:orientation="vertical"
    >

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_icon_tokofood_home"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        tools:src="@tools:sample/avatars" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_icon_tokofood_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="small"
        app:typographyWeight="reguler"
        tools:text="Home" />

</LinearLayout>