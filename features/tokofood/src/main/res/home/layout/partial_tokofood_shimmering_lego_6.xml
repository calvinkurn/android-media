<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/loader_title"
        android:layout_width="180dp"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        app:layout_constraintTop_toBottomOf="@+id/loader_title"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/loader_desc"
        android:layout_width="145dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_image_1"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginTop="4dp"
        app:loader_type="rect"
        app:loader_corner_radius="0dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@+id/loader_desc"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_image_2"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginTop="4dp"
        app:loader_type="rect"
        app:loader_corner_radius="0dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@+id/loader_desc"
        app:layout_constraintStart_toEndOf="@id/loader_image_1"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_image_3"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="2dp"
        app:loader_type="rect"
        app:loader_corner_radius="0dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@+id/loader_desc"
        app:layout_constraintStart_toEndOf="@id/loader_image_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>