<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:id="@+id/img_no_pin_poin"
        android:layout_width="280dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="heading_2"
        android:textColor="@color/Unify_NN950"
        android:text="@string/home_no_pin_poin_title"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_lvl5"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:textColor="@color/Unify_NN600"
        android:text="@string/home_no_pin_poin_desc"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_lvl3"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_no_pin_poin_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_no_pin_poin_button"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        />

</LinearLayout>