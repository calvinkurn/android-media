<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/spacing_lvl2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_NN0"
            android:paddingStart="@dimen/spacing_lvl3"
            android:paddingTop="@dimen/spacing_lvl4"
            android:paddingEnd="@dimen/spacing_lvl3">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/img_first_usp"
                android:layout_width="@dimen/spacing_lvl5"
                android:layout_height="@dimen/spacing_lvl5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_first_usp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_first_usp"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintStart_toEndOf="@+id/img_first_usp"
                app:layout_constraintTop_toTopOf="@+id/img_first_usp"
                app:layout_constraintWidth_max="70dp"
                app:typographyType="heading_6" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/img_second_usp"
                android:layout_width="@dimen/spacing_lvl5"
                android:layout_height="@dimen/spacing_lvl5"
                app:layout_constraintEnd_toStartOf="@+id/tg_second_usp"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_second_usp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:gravity="center_vertical"
                android:maxWidth="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_second_usp"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@+id/img_second_usp"
                app:layout_constraintTop_toTopOf="@+id/img_second_usp"
                app:layout_constraintWidth_max="70dp"
                app:typographyType="heading_6" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/img_third_usp"
                android:layout_width="@dimen/spacing_lvl5"
                android:layout_height="@dimen/spacing_lvl5"
                app:layout_constraintEnd_toStartOf="@+id/tg_third_usp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_third_usp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:gravity="center_vertical"
                android:maxWidth="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_third_usp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_third_usp"
                app:layout_constraintTop_toTopOf="@+id/img_third_usp"
                app:layout_constraintWidth_max="70dp"
                app:typographyType="heading_6" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_powered"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_lvl1"
                android:layout_marginTop="@dimen/unify_space_12"
                android:layout_marginBottom="@dimen/spacing_lvl3"
                android:text="@string/home_usp_powered_by"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_gofood"
                app:layout_constraintTop_toBottomOf="@id/img_third_usp"
                app:typographyType="small"
                app:typographyWeight="reguler" />

            <ImageView
                android:id="@+id/img_gofood"
                android:layout_width="0dp"
                android:layout_height="@dimen/unify_space_12"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:layout_marginEnd="@dimen/unify_space_12"
                app:layout_constraintBottom_toBottomOf="@id/tg_powered"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tg_powered" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.66" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/client_number_widget_operator_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="view_usp, img_chevron_usp" />

    <View
        android:id="@+id/view_usp"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        android:background="@drawable/background_tokofood_usp_chevron"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        android:orientation="vertical"
        android:elevation="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_chevron_usp"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:src="@drawable/iconunify_chevron_up"
        android:tint="@color/Unify_NN950"
        app:layout_constraintBottom_toBottomOf="@id/main_layout"
        app:layout_constraintTop_toBottomOf="@id/main_layout"
        app:layout_constraintEnd_toEndOf="@id/main_layout"
        app:layout_constraintStart_toStartOf="@id/main_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>