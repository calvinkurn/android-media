<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/loader_usp_image_one"
        android:layout_width="@dimen/spacing_lvl5"
        android:layout_height="@dimen/spacing_lvl5"
        android:layout_marginLeft="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="63dp"
        android:layout_height="@dimen/unify_space_12"
        app:loader_type="rect"
        android:id="@+id/loader_usp_title_one"
        app:layout_constraintStart_toEndOf="@+id/loader_usp_image_one"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/unify_space_12"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="50dp"
        android:layout_height="@dimen/unify_space_12"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/loader_usp_image_one"
        app:layout_constraintTop_toBottomOf="@+id/loader_usp_title_one"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        android:id="@+id/loader_usp_image_two"
        android:layout_width="@dimen/spacing_lvl5"
        android:layout_height="@dimen/spacing_lvl5"
        android:layout_marginLeft="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="63dp"
        android:layout_height="@dimen/unify_space_12"
        app:loader_type="rect"
        android:id="@+id/loader_usp_title_two"
        app:layout_constraintStart_toEndOf="@+id/loader_usp_image_two"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/unify_space_12"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="50dp"
        android:layout_height="@dimen/unify_space_12"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/loader_usp_image_two"
        app:layout_constraintTop_toBottomOf="@+id/loader_usp_title_two"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline2"
        android:id="@+id/loader_usp_image_three"
        android:layout_width="@dimen/spacing_lvl5"
        android:layout_height="@dimen/spacing_lvl5"
        android:layout_marginLeft="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="63dp"
        android:layout_height="@dimen/unify_space_12"
        app:loader_type="rect"
        android:id="@+id/loader_usp_title_three"
        app:layout_constraintStart_toEndOf="@+id/loader_usp_image_three"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/unify_space_12"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="50dp"
        android:layout_height="@dimen/unify_space_12"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/loader_usp_image_three"
        app:layout_constraintTop_toBottomOf="@+id/loader_usp_title_three"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

</androidx.constraintlayout.widget.ConstraintLayout>