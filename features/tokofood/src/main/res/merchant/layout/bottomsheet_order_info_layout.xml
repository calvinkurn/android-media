<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/du_bottom_order_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/du_bottom_order_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_8"
        android:layout_marginBottom="@dimen/unify_space_16"
        app:layout_constraintBottom_toTopOf="@id/button_add_custom"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button_add_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/unify_space_16"
        android:text="@string/action_add_custom_product"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>