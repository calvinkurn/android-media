<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerCategory"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCategoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        tools:text="Rekomendasi"
        app:layout_constraintEnd_toStartOf="@id/icSelectedItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTotalMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        app:typographyType="display_3"
        android:layout_marginTop="2dp"
        tools:text="6 Menu"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="@id/tvCategoryName"
        app:layout_constraintStart_toStartOf="@id/tvCategoryName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCategoryName"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icSelectedItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="CHECK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCategoryName"
        app:layout_constraintBottom_toBottomOf="@id/tvTotalMenu"/>

</androidx.constraintlayout.widget.ConstraintLayout>