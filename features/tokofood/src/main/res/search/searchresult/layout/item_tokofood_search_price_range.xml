<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_tokofood_price_range_dollar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN400"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/checkbox_tokofood_price_range"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$$$$" />
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_tokofood_price_range_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        app:typographyType="small"
        app:typographyWeight="reguler"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/checkbox_tokofood_price_range"
        app:layout_constraintTop_toBottomOf="@id/tv_tokofood_price_range_dollar"
        tools:text="Rp40.000 sampai Rp100.000"/>

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/checkbox_tokofood_price_range"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:unify_checkbox_type="type_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_tokofood_price_range_dollar"
        app:layout_constraintBottom_toBottomOf="@id/tv_tokofood_price_range_desc" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_tokofood_price_range"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tokofood_price_range_desc"/>

</androidx.constraintlayout.widget.ConstraintLayout>