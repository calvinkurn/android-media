<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.tokofood.feature.search.container.presentation.widget.GlobalSearchBarWidget
        android:id="@+id/globalSearchBarWidget"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/initialStateContainer"
        android:name="com.tokopedia.tokofood.feature.search.initialstate.presentation.fragment.InitialSearchStateFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/searchResultContainer"
        android:name="com.tokopedia.tokofood.feature.search.searchresult.presentation.fragment.SearchResultFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>