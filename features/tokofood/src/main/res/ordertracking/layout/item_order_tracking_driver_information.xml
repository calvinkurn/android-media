<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgDriverInformation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:unify_image_corner_radius="18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDriverInformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:typographyType="body_3"
        android:textColor="@color/Unify_NN600"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imgDriverInformation"
        app:layout_constraintStart_toEndOf="@id/imgDriverInformation"
        app:layout_constraintTop_toTopOf="@id/imgDriverInformation"
        tools:text="Drivermu udah divaksin!"/>

</androidx.constraintlayout.widget.ConstraintLayout>