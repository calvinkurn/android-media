<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOrderDetailRestoLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/order_tracking_shipping_restaurant_label"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOrderDetailDestinationLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/order_detail_shipping_destination_label"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="@id/tvOrderDetailRestoLabel"
        app:layout_constraintTop_toBottomOf="@id/tvOrderDetailRestoValue" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOrderDetailRestoValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        tools:text="Kopi Janji Jiwa, Permata Hijau"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        app:layout_constraintBottom_toTopOf="@id/tvOrderDetailDestinationLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOrderDetailDestionationValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Rumah \n0812345678 \nTokopedia Tower, Mailing Room Jl. Letjen s parman kav.77 Slipi, Jakarta barat 14410"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/tvOrderDetailRestoValue"
        app:layout_constraintTop_toTopOf="@id/tvOrderDetailDestinationLabel" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintGuide_percent="0.35"/>

</androidx.constraintlayout.widget.ConstraintLayout>