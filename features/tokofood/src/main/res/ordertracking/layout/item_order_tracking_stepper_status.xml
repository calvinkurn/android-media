<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewOrderTrackingStatusMask"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_order_tracking_status_mask" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/viewOrderTrackingStatusLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/viewOrderTrackingStatusMask"
        app:layout_constraintStart_toEndOf="@id/viewOrderTrackingStatusMask"
        app:layout_constraintTop_toTopOf="@id/viewOrderTrackingStatusMask"
        app:srcCompat="@drawable/ic_order_tracking_status_line" />

</androidx.constraintlayout.widget.ConstraintLayout>