<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusIllustration"
        android:layout_width="81dp"
        android:layout_height="73dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@id/loaderOrderStatusMask4"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="16dp"
        app:loader_type="rect"/>
    
    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusName"
        android:layout_width="193dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loaderOrderStatusDesc"
        app:layout_constraintTop_toTopOf="@id/loaderOrderStatusIllustration"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusDesc"
        android:layout_width="196dp"
        android:layout_height="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="@id/loaderOrderStatusName"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusName"
        app:layout_constraintBottom_toBottomOf="@id/loaderOrderStatusIllustration" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMask1"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusIllustration" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/viewOrderTrackingStatusLine1"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="12dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toStartOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="@id/loaderOrderStatusMask1"
        app:layout_constraintStart_toEndOf="@id/loaderOrderStatusMask1"
        app:layout_constraintTop_toTopOf="@id/loaderOrderStatusMask1" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMask2"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusIllustration" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/viewOrderTrackingStatusLine2"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="12dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/loaderOrderStatusMask2"
        app:layout_constraintStart_toEndOf="@id/loaderOrderStatusMask2"
        app:layout_constraintTop_toTopOf="@id/loaderOrderStatusMask2" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMask3"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusIllustration" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/viewOrderTrackingStatusLine3"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="12dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toStartOf="@id/guideline3"
        app:layout_constraintBottom_toBottomOf="@id/loaderOrderStatusMask3"
        app:layout_constraintStart_toEndOf="@id/loaderOrderStatusMask3"
        app:layout_constraintTop_toTopOf="@id/loaderOrderStatusMask3" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMask4"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@id/viewOrderTrackingStatusLine3"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusIllustration" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.29"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.58"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerLoader1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusMask1"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMerchantMask1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="@id/loaderOrderStatusMask1"
        app:layout_constraintTop_toBottomOf="@id/dividerLoader1" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMerchantLine1"
        android:layout_height="12dp"
        android:layout_width="219dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/loaderOrderStatusMask1"
        app:layout_constraintTop_toTopOf="@id/loaderOrderStatusMerchantMask1"
        app:layout_constraintBottom_toBottomOf="@id/loaderOrderStatusMerchantMask1"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMerchantLine2"
        android:layout_height="12dp"
        android:layout_width="110dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/loaderOrderStatusMerchantLine1"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusMerchantLine1"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMerchantMask2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="@id/loaderOrderStatusMerchantMask1"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusMerchantLine2" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMerchantLine3"
        android:layout_height="12dp"
        android:layout_width="219dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/loaderOrderStatusMerchantMask2"
        app:layout_constraintTop_toTopOf="@id/loaderOrderStatusMerchantMask2"
        app:layout_constraintBottom_toBottomOf="@id/loaderOrderStatusMerchantMask2"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMerchantLine4"
        android:layout_height="12dp"
        android:layout_width="110dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/loaderOrderStatusMerchantLine1"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusMerchantLine3"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderOrderStatusMerchantLine5"
        android:layout_height="12dp"
        android:layout_width="110dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/loaderOrderStatusMerchantLine1"
        app:layout_constraintTop_toBottomOf="@id/loaderOrderStatusMerchantLine4"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>