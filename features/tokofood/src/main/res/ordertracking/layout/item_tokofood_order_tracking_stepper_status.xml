<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icOrderTrackingStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        app:icon_color_light_enable="@color/Unify_NN500"
        app:icon_color_night_enable="@color/Unify_NN500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:icon_name="PRODUCT_MOVE" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/viewOrderTrackingStatusLine"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/icOrderTrackingStatus"
        app:layout_constraintStart_toEndOf="@id/icOrderTrackingStatus"
        app:layout_constraintTop_toTopOf="@id/icOrderTrackingStatus"
        app:srcCompat="@drawable/tokofood_order_tracking_stepper_line"/>


</androidx.constraintlayout.widget.ConstraintLayout>