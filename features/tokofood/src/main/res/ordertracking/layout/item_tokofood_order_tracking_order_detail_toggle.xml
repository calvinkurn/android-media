<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOrderDetailToggleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Tampilkan lebih banyak"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/Unify_GN500"
        app:typographyWeight="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/icOrderDetailToggle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icOrderDetailToggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="CHEVRON_DOWN"
        app:layout_constraintBottom_toBottomOf="@id/tvOrderDetailToggleTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvOrderDetailToggleTitle"
        app:layout_constraintTop_toTopOf="@id/tvOrderDetailToggleTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>