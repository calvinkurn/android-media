<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orderDetailStickyActionButtons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:background="@drawable/order_detail_sticky_action_buttons_shadow"
        app:layout_constraintBottom_toTopOf="@id/btnOrderDetailSecondaryActions" />

    <com.tokopedia.unifycomponents.UnifyImageButton
        android:id="@+id/btnOrderDetailSecondaryActions"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/iconunify_menu_kebab_horizontal"
        app:unifyImageButtonType="main"
        app:unifyImageButtonVariant="ghost" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnOrderDetailPrimaryActions"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnOrderDetailSecondaryActions"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled"
        tools:text="Chat Penjual" />
</androidx.constraintlayout.widget.ConstraintLayout>