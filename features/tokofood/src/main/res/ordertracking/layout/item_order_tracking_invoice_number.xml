<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceNumberLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Unify_NN600"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/order_tracking_invoice_number_label"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceNumberValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        tools:text="INV/20181011/XVI/X/55069657"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceDateLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvInvoiceNumberLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Unify_NN600"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/order_tracking_invoice_date_label"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceDateValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvInvoiceDateLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Unify_NN950"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        tools:text="Hari ini, 11:50"/>

</androidx.constraintlayout.widget.ConstraintLayout>