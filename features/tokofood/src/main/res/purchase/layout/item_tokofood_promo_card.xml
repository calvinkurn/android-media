<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-4dp"
    android:orientation="horizontal">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/promoCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        app:card_background_color="@color/Unify_GN50"
        app:card_type="border_active"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_constraint_promo_checkout_tokofood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintCircleRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/promo_highlight_identifier_tokofood"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:translationY="-3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_tokofood_promo_best_benefit"
                app:unify_image_corner_radius="0"
                app:unify_image_type="rect"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_promo_highlight_identifier_tokofood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/Unify_Static_White"
                android:translationY="-3dp"
                app:layout_constraintBottom_toBottomOf="@+id/promo_highlight_identifier_tokofood"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="small"
                app:typographyWeight="bold"
                tools:text="Keuntungan Terbaik" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/promoBenefitDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toStartOf="@+id/imaginary_view_tokofood"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/promo_highlight_identifier_tokofood"
                app:typographyType="heading_5"
                tools:text="Diskon makanan Rp31.500 + Diskon ongkir Rp6.000" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/container_time_validity_tokofood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingBottom="6dp"
                app:flexWrap="wrap"
                app:layout_constraintEnd_toStartOf="@+id/image_select_promo_tokofood"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/promoBenefitDetail"
                tools:visibility="visible">

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_time_validity_tokofood"
                    android:layout_width="13dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="6dp"
                    app:icon_name="CLOCK"
                    tools:visibility="visible" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_time_validity_tokofood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_N700_68"
                    app:typographyType="body_3"
                    tools:text="Berakhir 20 menit lagi!" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/divider_user_validity_tokofood"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/Unify_N75"
                app:layout_constraintTop_toBottomOf="@+id/container_time_validity_tokofood" />

            <LinearLayout
                android:id="@+id/container_error_info_tokofood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Unify_NN0"
                android:gravity="top"
                android:orientation="horizontal"
                app:flexWrap="wrap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_user_validity_tokofood"
                tools:visibility="visible">

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_error_info_tokofood"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="12dp"
                    app:icon_name="INFORMATION"
                    android:layout_marginTop="9dp" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_error_info_tokofood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/Unify_N700_68"
                    app:typographyType="body_3"
                    tools:text="Tidak Indonesia Indonesia Indonesia Indonesia Indonesia Indonesia yang dipilih." />

            </LinearLayout>

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/image_select_promo_tokofood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check_green"
                tools:ignore="ContentDescription"
                tools:visibility="visible" />

            <View
                android:id="@+id/imaginary_view_tokofood"
                android:layout_width="40dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</androidx.constraintlayout.widget.ConstraintLayout>