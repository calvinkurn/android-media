<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_toolbar_purchase_promo"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    tools:visibility="visible">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_back_arrow"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:icon_name="ARROW_BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title_purchase_promo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Pakai Promo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4" />

</androidx.constraintlayout.widget.ConstraintLayout>