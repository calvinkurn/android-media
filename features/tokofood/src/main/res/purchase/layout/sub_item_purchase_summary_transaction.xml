<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/text_transaction_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        tools:text="Total Harga (2 item)" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/icon_transaction_surge_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:visibility="visible"
        android:adjustViewBounds="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@id/text_transaction_title"
        app:layout_constraintBottom_toBottomOf="@id/text_transaction_title"
        app:layout_constraintStart_toEndOf="@id/text_transaction_title"
        app:layout_constraintEnd_toStartOf="@id/text_transaction_value"
        tools:src="@tools:sample/avatars"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_transaction_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        tools:text="Rp80.000" />

</androidx.constraintlayout.widget.ConstraintLayout>