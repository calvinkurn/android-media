<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.tokofood">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:theme="@style/Theme.WhiteUnify"
            android:name=".common.presentation.view.BaseTokofoodActivity"
            android:label="Tokofood">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_tokofood"
                    android:path="/home"
                    android:scheme="@string/internal_scheme" />

                <data
                    android:host="@string/host_tokofood"
                    android:path="/merchant_list"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>