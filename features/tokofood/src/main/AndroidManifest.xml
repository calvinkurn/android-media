<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.tokofood">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.tokopedia.tokofood.feature.discovery.presentation.view.TokoFoodDiscoveryActivity"
            android:exported="false"
            android:label="@string/title_tokofood"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_tokofood"
                    android:path="@string/path_tokofood_discovery"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.ordertracking.presentation.activity.TokoFoodOrderTrackingActivity"
            android:exported="false"
            android:label="@string/title_tokofood_post_purchase"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_tokofood"
                    android:path="@string/path_tokofood_post_purchase"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/Theme.WhiteUnify"
            android:name=".example.ExampleTokofoodActivity"
            android:label="Tokofood">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_tokofood"
                    android:path="/home"
                    android:scheme="@string/internal_scheme" />

                <data
                    android:host="@string/host_tokofood"
                    android:path="/b"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>