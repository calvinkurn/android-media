<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_duration_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <TextView
        android:id="@+id/tv_duration_header_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:text="@string/label_hardcoded_shipping_duration_info"
        android:textColor="@color/shipping_duration_info_black"
        android:textSize="@dimen/sp_11" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_duration_header_info"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:lineSpacingExtra="4sp"
            tools:text="4 Jam"
            app:typographyType="body_2"
            app:typographyWeight="bold"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_promo_potency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_duration"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/tv_duration"
            android:background="@drawable/bg_promo_potency"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_2"
            android:text="@string/label_text_promo_potency"
            android:textColor="@color/text_promo_potency"
            android:visibility="gone"
            tools:visibility="visible"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_duration"
            android:layout_marginTop="4dp"
            tools:text="Mulai dari Rp10.000"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="(Direkomendasikan untuk berat di atas 5kg)"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_cod_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text_desc"
            android:layout_marginTop="4dp"
            tools:text="(Tersedia Bayar di Tempat)"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_order_prioritas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cod_availability"
            android:layout_marginTop="4dp"
            tools:text="Tersedia layanan Order Prioritas"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_prioritas"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_courier_error_red"
            tools:text="Jarak melebihi batas maksimum kurir"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_duration"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_check" />

    </RelativeLayout>

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/separator_color" />

</RelativeLayout>
