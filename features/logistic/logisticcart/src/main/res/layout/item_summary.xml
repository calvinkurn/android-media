<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_8"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_8">

    <TextView
        android:id="@+id/text_view_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_68"
        tools:text="Shipping Fee" />

    <TextView
        android:id="@+id/text_view_label_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_label"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/Unify_N700_44"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        tools:text="1 x Rp 10.000"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/Unify_N700_68"
        tools:text="Rp 10.000" />

</RelativeLayout>