<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginHorizontal="@dimen/unify_space_16"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/unify_space_12"
        app:layout_constraintBottom_toTopOf="@id/tv_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Hari ini"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_4"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_2"
        android:textColor="@color/Unify_NN950"
        app:typographyWeight="bold"
        tools:text="Tiba dalam 2 jam (Rp0 Rp38.000)"
        app:layout_constraintHorizontal_bias="0"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginHorizontal="@dimen/unify_space_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/unify_space_4"
        tools:text="Sisa 1 slot"
        android:textColor="@color/Unify_RN500"
        android:visibility="gone"
        app:typographyType="body_3"
        app:layout_constraintTop_toBottomOf="@id/tv_description"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_8"
        app:layout_constraintTop_toBottomOf="@id/tv_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginTop="@dimen/unify_space_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/unify_space_12"
        android:background="@color/Unify_NN100" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_check"
        android:layout_width="@dimen/unify_space_32"
        android:layout_height="@dimen/unify_space_32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
        android:layout_marginEnd="@dimen/unify_space_16"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_color_night_enable="@color/Unify_GN500"
        android:visibility="gone"
        app:icon_name="CHECK"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>