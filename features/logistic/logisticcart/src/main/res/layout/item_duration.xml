<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_duration_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_duration"
            android:contentDescription="@string/content_desc_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:lineSpacingExtra="@dimen/sp_4"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="@string/tv_duration" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_promo_potency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_duration"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/tv_duration"
            android:background="@drawable/bg_promo_potency"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_2"
            android:text="@string/label_text_promo_potency"
            android:textColor="@color/text_promo_potency"
            android:visibility="gone"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_cod_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toEndOf="@+id/tv_duration"
            android:layout_toRightOf="@+id/tv_duration"
            android:layout_alignBottom="@id/tv_duration"
            android:layout_alignTop="@id/tv_duration"
            android:text="@string/tersedia_bayar_di_tempat"
            app:labelType="general_light_green" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_duration"
            android:layout_marginTop="@dimen/dp_4"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="@string/tv_price" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_ontime_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_below="@+id/tv_price"
            android:text="@string/jaminan_tepat_waktu"
            android:visibility="gone"
            app:labelType="general_light_green" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="@dimen/dp_4"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="@string/tv_text_desc" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_order_prioritas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text_desc"
            android:layout_marginTop="@dimen/dp_4"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Tersedia layanan Order Prioritas" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shipping_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_prioritas"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/label_shipping_information"
            app:typographyType="small"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shipping_information"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_courier_error_red"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="@string/tv_error" />

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_duration"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_check"
            android:contentDescription="@string/content_img_check"/>

    </RelativeLayout>

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_below="@+id/rl_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/separator_color" />

</RelativeLayout>
