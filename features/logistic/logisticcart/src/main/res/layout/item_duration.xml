<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_duration_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_mvc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_mvc"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_mvc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_7"
                    android:layout_toEndOf="@id/img_mvc"
                    android:lineSpacingExtra="@dimen/sp_4"
                    android:textColor="@color/Unify_G500"
                    app:layout_constraintBottom_toBottomOf="@id/img_mvc"
                    app:layout_constraintStart_toEndOf="@id/img_mvc"
                    app:layout_constraintTop_toTopOf="@id/img_mvc"
                    app:typographyType="body_3"
                    app:typographyWeight="bold"
                    tools:text="@string/tv_mvc_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <!--duration in old view, price in ETA-->
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_duration_or_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fl_container"
            android:lineSpacingExtra="@dimen/sp_4"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="@string/tv_duration" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_promo_potency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_duration_or_price"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/tv_duration_or_price"
            android:background="@drawable/bg_promo_potency"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_2"
            android:text="@string/label_text_promo_potency"
            android:textColor="@color/Unify_R600"
            android:visibility="gone"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_cod_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_duration_or_price"
            android:layout_alignBottom="@id/tv_duration_or_price"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/tv_duration_or_price"
            android:text="@string/tersedia_bayar_di_tempat"
            android:visibility="gone"
            app:labelType="general_light_green" />


        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_cod_available_eta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_duration_or_price"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/tersedia_bayar_di_tempat"
            android:visibility="gone"
            app:labelType="general_light_green" />

        <!--price in old view, duration in ETA-->
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_price_or_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_cod_available_eta"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="@string/tv_price" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_ontime_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price_or_duration"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/jaminan_tepat_waktu"
            android:visibility="gone"
            app:labelType="general_light_green" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_ontime_delivery"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="@string/tv_text_desc" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_order_prioritas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text_desc"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Tersedia layanan Order Prioritas" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shipping_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_prioritas"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/label_shipping_information"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_mvc_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shipping_information"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/label_shipping_information"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mvc_error"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_R600"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="@string/tv_error" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_dynamic_pricing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_error"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/txt_label_dynamic_pricing"
            android:visibility="gone"
            app:labelType="general_light_green" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/img_check"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_alignBaseline="@+id/tv_duration_or_price"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/content_img_check"
            app:icon_color_light_enable="@color/Unify_G500"
            app:icon_color_night_enable="@color/Unify_G500"
            app:icon_enable_state="true"
            app:icon_name="CHECK_BIG" />

    </RelativeLayout>

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_below="@+id/rl_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/Unify_N100" />

</RelativeLayout>
