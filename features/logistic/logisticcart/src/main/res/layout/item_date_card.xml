<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_date_item"
    android:layout_width="@dimen/dimen_width_card"
    android:layout_height="@dimen/dimen_height_card"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/unify_space_12"
    android:layout_marginBottom="@dimen/unify_space_24"
    android:paddingHorizontal="@dimen/unify_space_16"
    android:paddingVertical="@dimen/unify_space_8"
    android:background="@drawable/bg_card_date">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_label_out_of_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/unify_space_4"
        android:gravity="center"
        android:paddingVertical="@dimen/unify_space_2"
        app:layout_constraintBottom_toTopOf="@id/tv_title_date"
        android:background="@drawable/bg_ticker_out_of_date"
        app:typographyType="small"
        android:textColor="@color/Unify_NN0"
        android:text="@string/label_out_of_date"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_label_out_of_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_2"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/unify_space_4"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        tools:text="Besok"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_2"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        tools:text="11 Agustus"/>

</androidx.constraintlayout.widget.ConstraintLayout>