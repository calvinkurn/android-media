<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:foreground="?selectableItemBackground"
    tools:ignore="Overdraw">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_pre_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Barang akan dikirim mulai xx Januari" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/lbl_pre_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pre_order"
        android:layout_marginTop="@dimen/dp_2"
        android:text="@string/tersedia_bayar_di_tempat"
        android:visibility="visible"
        app:labelType="general_light_grey" />

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/lbl_pre_order"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/Unify_N100" />

</RelativeLayout>