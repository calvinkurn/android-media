<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_courier"
        style="@style/TextMidMediumBlack70"
        android:contentDescription="@string/content_desc_tv_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:lineSpacingExtra="4sp"
        tools:text="TIKI" />

    <TextView
        android:id="@+id/tv_promo_potency"
        style="@style/TextSmallNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_courier"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@+id/tv_courier"
        android:background="@drawable/bg_promo_potency"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_2"
        android:text="@string/label_text_promo_potency"
        android:textColor="@color/text_promo_potency"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextSmallNormalBlack54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_courier"
        android:layout_marginTop="4dp"
        tools:text="Rp10.000" />

    <TextView
        android:id="@+id/tv_cod_availability"
        style="@style/TextSmallNormalBlack54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price"
        android:layout_marginTop="4dp"
        tools:text="(Tersedia Bayar di Tempat)"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/otdelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_courier"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toRightOf="@+id/tv_price"
        android:layout_toEndOf="@+id/tv_price"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon_otd"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6" />

        <TextView
            android:id="@+id/tv_otd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            tools:text="Jaminan tepat waktu" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_check" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_cod_availability"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/separator_color" />

</RelativeLayout>
