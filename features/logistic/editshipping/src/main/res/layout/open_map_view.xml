<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- Map -->

    <RelativeLayout
        android:id="@+id/layout_value_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/icon_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_icon_market_toped" />

        <EditText
            android:id="@+id/value_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_map"
            android:layout_toEndOf="@id/icon_map"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:focusable="false"
            android:clickable="true"
            android:hint="@string/choose_location"
            android:textColor="@color/Unify_N700"/>

    </RelativeLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_value_location"
        android:text="@string/desc_delivery_location"
        android:textColor="@color/Unify_N300"
        app:typographyType="body_3" />

    <!-- Map -->
</RelativeLayout>