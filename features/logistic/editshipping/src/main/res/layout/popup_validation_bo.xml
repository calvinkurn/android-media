<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_24"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_validation_bo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        app:closeButtonVisibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerShapeType="loose" />
    
    <ImageView
        android:id="@+id/iv_point_one"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_no_1"
        app:layout_constraintTop_toBottomOf="@id/ticker_validation_bo" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/point_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintStart_toEndOf="@id/iv_point_one"
        app:layout_constraintTop_toTopOf="@id/iv_point_one"
        android:layout_marginLeft="@dimen/dp_12" />

    <ImageView
        android:id="@+id/iv_point_two"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_16"
        app:srcCompat="@drawable/ic_no_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_one" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/point_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintStart_toEndOf="@id/iv_point_two"
        app:layout_constraintTop_toTopOf="@id/iv_point_two"
        android:layout_marginLeft="@dimen/dp_12" />

    <ImageView
        android:id="@+id/iv_point_three"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        app:srcCompat="@drawable/ic_no_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_two" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/point_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintStart_toEndOf="@id/iv_point_three"
        app:layout_constraintTop_toTopOf="@id/iv_point_three"
        android:layout_marginLeft="@dimen/dp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_three">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_nonaktifkan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost"
            android:textStyle="bold"
            android:text="Nonaktifkan"
            android:layout_margin="@dimen/dp_5" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_aktifkan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled"
            android:text="Tetap Aktifkan"
            android:textStyle="bold"
            android:layout_margin="@dimen/dp_5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>