<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_validation_bo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:closeButtonVisibility="gone"
        app:tckv_content_text_size = "@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerShapeType="loose" />
    
    <ImageView
        android:id="@+id/iv_point_one"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_no_1"
        app:layout_constraintTop_toBottomOf="@id/ticker_validation_bo"
        android:contentDescription="null"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/point_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_point_one"
        app:layout_constraintTop_toTopOf="@id/iv_point_one" />

    <ImageView
        android:id="@+id/iv_point_two"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        app:srcCompat="@drawable/ic_no_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_one"
        android:contentDescription="null"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/point_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_point_two"
        app:layout_constraintTop_toTopOf="@id/iv_point_two" />

    <ImageView
        android:id="@+id/iv_point_three"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        app:srcCompat="@drawable/ic_no_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_two"
        android:contentDescription="null"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/point_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_point_three"
        app:layout_constraintTop_toTopOf="@id/iv_point_three" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_three">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_nonaktifkan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:text="@string/button_deactivate"
            android:textStyle="bold"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_aktifkan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:text="@string/button_activate"
            android:textStyle="bold"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>