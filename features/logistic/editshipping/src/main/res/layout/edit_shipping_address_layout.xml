<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_phone_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_phone"
        android:textColor="@color/Unify_N300"
        android:visibility="gone"
        app:typographyType="body_2"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_phone_number_title"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:visibility="gone"
        app:typographyType="body_1"
        tools:text="08678493038"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/change_phone_number_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_phone_number_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/shop_phone_number"
        android:layout_toRightOf="@id/shop_phone_number"
        android:gravity="end"
        android:text="@string/title_edit"
        android:textColor="@color/Unify_G500"
        android:visibility="gone"
        app:typographyType="heading_4"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/location_field_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_phone_number"
        android:text="@string/title_delivery_location"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N300"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        tools:visibility="visible"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/address_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/location_field_title"
        android:layout_below="@id/location_field_title"
        android:layout_marginTop="10dp"
        android:hint="@string/title_activity_shop_address_form"
        android:textColorHint="@color/Unify_N400_68">
        <EditText
            android:id="@+id/address_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700"/>
    </com.google.android.material.textfield.TextInputLayout>

    <include
        layout="@layout/open_map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/location_field_title"
        android:layout_below="@id/address_text_input_layout" />
</RelativeLayout>