<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/courier_name_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_courier"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            tools:src="@tools:sample/avatars"
            android:layout_marginStart="4dp"
            android:layout_weight="0.1"
            android:background="@color/Unify_Static_White"
            android:contentDescription="@string/img_courier_content_description"
            tools:visibility="gone" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_NN950"
            android:textSize="14sp"
            app:typographyType="paragraph_2"
            app:typographyWeight="bold"
            tools:text="Instan" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/package_view_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.editshipping.ui.customview.PackageView
            android:id="@+id/children_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/courier_unavailable_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/info_shipping_unavailable"
            android:visibility="gone"
            app:typographyType="body_2"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/shipping_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shipping_additonal_setting_selector"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/title_edit"
                app:srcCompat="@drawable/ic_settings_24dp" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:text="@string/shop_shipping_additional_option"
                android:textColor="@color/Unify_GN700"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>