<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    android:divider="@drawable/bg_line_separator"
    android:orientation="vertical"
    android:padding="20dp"
    android:showDividers="middle">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/courier_name_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/Unify_N700"
        app:typographyType="body_1"
        tools:text="Courier Name Service" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/courier_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/Unify_N700"
        app:typographyType="body_2"
        tools:text="Courier Information" />

</LinearLayout>