<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.editshipping.ui.EditShippingActivity" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/shipping_shop_editor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:elevation="@dimen/dp_4"
        android:elevation="@dimen/dp_4"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:subtitleTextAppearance="?subtitleTextAppearance"
        app:titleTextAppearance="?titleTextAppearance"
        xmlns:app="http://schemas.android.com/apk/res-auto" />

    <include
        android:id="@+id/include_loading"
        layout="@layout/loader_shipping"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@id/shipping_shop_editor_toolbar"/>

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/shipping_shop_editor_toolbar">

        <ExpandableListView
            android:id="@+id/shipping_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:cacheColorHint="@android:color/transparent"
            android:childDivider="@color/Unify_N0"
            android:choiceMode="singleChoice"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp"
            android:groupIndicator="@android:color/transparent" />
    </LinearLayout>

</RelativeLayout>