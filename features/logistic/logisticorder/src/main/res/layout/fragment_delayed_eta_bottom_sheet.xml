<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.DelayedEtaBottomSheetFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_delayed" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delayed_eta_bottomsheet_title"
        android:paddingTop="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_5"
        android:textAlignment="center"
        app:typographyType="heading_2"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delayed_eta_bottomsheet_description"
        android:textAlignment="center"
        app:typographyType="body_2"
        />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn"
        android:layout_marginVertical="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delayed_eta_bottomsheet_button_title"
        app:buttonCompatType="primary"
        />

</LinearLayout>