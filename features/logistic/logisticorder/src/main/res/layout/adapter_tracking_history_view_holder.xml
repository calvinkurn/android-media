<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/dot_image"
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_dot_black"
        tools:ignore="VectorDrawableCompat" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintHorizontal_weight="10"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/dot_image"
        app:layout_constraintBottom_toBottomOf="@id/dot_image"
        app:layout_constraintLeft_toRightOf="@id/dot_image"
        app:layout_constraintStart_toEndOf="@id/dot_image"
        app:layout_constraintRight_toLeftOf="@id/date"
        app:layout_constraintEnd_toStartOf="@id/date"
        app:typographyType="heading_5"
        tools:text="Loren Ipsum " />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:typographyType="small"
        app:layout_constraintTop_toTopOf="@id/dot_image"
        app:layout_constraintBottom_toBottomOf="@id/dot_image"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/title"
        tools:text="20 September 2017" />



    <View
        android:id="@+id/dot_trail"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dot_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/dot_image"
        app:layout_constraintStart_toStartOf="@id/dot_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dot_image"
        android:background="@color/Unify_N700" />



    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="5dp"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N200"
        app:layout_constraintStart_toEndOf="@id/dot_image"
        app:layout_constraintLeft_toRightOf="@id/dot_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Loren Ipsum lasnlsandlsnaldsakndlsandlsanldnsalkdnlsandlksnalkdnlsakndlsandlknsalkdnlaksndlkasndlkaslkdnsalkndlkansdklnaldnalsndlasdlknsaldnlndsa" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/courier_name_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="5dp"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N200"
        app:layout_constraintStart_toEndOf="@id/dot_image"
        app:layout_constraintLeft_toRightOf="@id/dot_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        tools:text="Kurir: JNE" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_proof"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/courier_name_history"
        app:layout_constraintStart_toStartOf="@id/description"
        app:layout_constraintLeft_toLeftOf="@id/description"
        tools:visibility="visible"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>