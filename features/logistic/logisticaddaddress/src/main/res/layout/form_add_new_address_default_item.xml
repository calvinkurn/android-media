<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_form_add_new_address_default_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_label_address_wrapper"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/add_new_address_address_label">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_label_address"
            android:contentDescription="@string/content_desc_et_label_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="@color/Unify_N700_68"
            android:textSize="14sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_label_alamat_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_receiver_name_wrapper"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:hint="@string/add_new_address_name_label">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_receiver_name"
            android:contentDescription="@string/content_desc_et_receiver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="@color/Unify_N700_68"
            android:textSize="14sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_phone_wrapper"
            style="@style/HintTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/add_new_address_phone_label"
            app:layout_constraintEnd_toStartOf="@id/btn_contact_picker">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_phone"
                android:contentDescription="@string/content_desc_et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLines="1"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColor="@color/Unify_N700_68"
                android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btn_contact_picker"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/unify_space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            app:icon_name="CONTACT"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/user_consent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginVertical="16dp"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_3" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn_save_address"
        android:contentDescription="@string/content_desc_btn_save_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:foreground="?selectableItemBackground"
        android:text="@string/add_new_address_save"
        android:textAllCaps="false"
        app:buttonCompatSize="big"
        app:buttonCompatType="primary" />

</LinearLayout>