<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet_location_info"
    android:background="@color/Unify_N0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:orientation="vertical">

        <com.tkpd.remoteresourcerequest.view.DeferredImageView
            android:id="@+id/img_location_not_detected"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_140"
            android:layout_marginTop="@dimen/dp_24"
            app:remoteFileName="ic_location_not_detected.png"
            android:contentDescription="@string/invalid_img_description"
            android:layout_gravity="center_horizontal"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/undetected_location_desc"
            android:layout_gravity="center_horizontal"/>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btn_activate_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:foreground="?selectableItemBackground"
            android:text="@string/activate_location_service"
            android:textAllCaps="false"
            app:buttonCompatSize="big"
            app:buttonCompatType="primary"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
