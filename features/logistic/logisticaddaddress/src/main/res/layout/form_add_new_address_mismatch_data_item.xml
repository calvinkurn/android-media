<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_add_address_container_mismatch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_kota_kecamatan_mismatch_wrapper"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:hint="@string/et_kota_kecamatan_label">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_kota_kecamatan_mismatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:enabled="true"
            android:focusable="false"
            android:inputType="textMultiLine"
            android:longClickable="false"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#ae31353b" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_kode_pos_mismatch_wrapper"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:hint="@string/et_kode_pos_label">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_kode_pos_mismatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:inputType="number"
            android:maxLength="5"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="#ae31353b" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_kodepos_chips_mismatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_alamat_mismatch_wrapper"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:hint="@string/alamat_label">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_alamat_mismatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="175"
            android:maxLines="1"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="#ae31353b" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_alamat_info_mismatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:text="@string/min_5_char"
        android:textColor="@color/label_grey"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/ll_detail_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_alamat"
            android:textColor="@color/label_grey"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_detail_alamat_mismatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/label_grey"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</LinearLayout>