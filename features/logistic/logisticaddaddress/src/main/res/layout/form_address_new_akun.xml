<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/form_account"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/et_nama_penerima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_field_label="@string/field_nama_penerima"
        app:text_field_counter="50"/>

    <LinearLayout
        android:id="@+id/info_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            android:textColor="@color/Unify_N700_68"
            android:text="@string/tv_info_lebih_lanjut"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btn_info"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="5dp"
            app:icon_name="INFORMATION"
            android:layout_gravity="center"/>

    </LinearLayout>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/et_nomor_hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:text_field_label="@string/field_nomor_hp"
        app:text_field_counter="15"
        app:text_field_input_type="number"/>

</LinearLayout>