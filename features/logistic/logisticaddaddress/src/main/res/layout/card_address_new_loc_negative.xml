<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_address_negative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_location"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/address_district"
            app:layout_constraintBottom_toBottomOf="@id/address_district"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_location"
            app:layout_constraintEnd_toStartOf="@id/btn_change_negative"
            android:textColor="@color/Unify_NN950_68"
            app:typographyType="body_3" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btn_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@id/address_district"
            app:layout_constraintBottom_toBottomOf="@id/address_district"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon_name="CHEVRON_RIGHT"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/btn_change_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@id/address_district"
            app:layout_constraintBottom_toBottomOf="@id/address_district"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/Unify_GN500"
            app:typographyType="heading_6"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/change_pinpoint_negative_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>


