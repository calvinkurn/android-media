<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_address_negative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/unify_space_16"
    app:cardCornerRadius="@dimen/dp_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_location"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_22"
            android:layout_marginStart="@dimen/unify_space_16"
            app:layout_constraintTop_toTopOf="@id/address_district"
            app:layout_constraintBottom_toBottomOf="@id/address_district"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            android:layout_marginEnd="@dimen/unify_space_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_location"
            app:layout_constraintEnd_toStartOf="@id/btn_arrow"
            android:textColor="@color/light_N700_68"
            app:typographyType="body_3" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btn_arrow"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginEnd="@dimen/unify_space_24"
            app:layout_constraintTop_toTopOf="@id/address_district"
            app:layout_constraintBottom_toBottomOf="@id/address_district"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon_name="CHEVRON_RIGHT"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>


