<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:singleLine="true"
                android:text="@string/title_address"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Body2"
                />

            <TextView
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_name"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/detail_address"
                style="@style/TextAppearance.AppCompat.Body1"
                />

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_detail">

                <com.google.android.gms.maps.MapView
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:clickable="false"
                    map:liteMode="true"
                    map:mapType="normal"
                    map:cameraZoom="15"
                    />

                <TextView
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/label_no_location"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#780e0e0e"
                    android:text="@string/tentukan_lokasi_google_map_anda"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:visibility="visible"
                    android:clickable="false"
                    />

            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"
                android:text="@string/action_delete"
                android:textColor="@color/tkpd_dark_green"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/action_delete"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"
                android:text="@string/action_edit"
                android:textColor="@color/tkpd_dark_green"
                android:layout_toLeftOf="@id/action_delete"
                android:layout_toStartOf="@id/action_delete"
                android:id="@+id/action_edit"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"
                android:text="@string/action_set_default"
                android:textColor="@color/tkpd_dark_green"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/action_default"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>
</LinearLayout>