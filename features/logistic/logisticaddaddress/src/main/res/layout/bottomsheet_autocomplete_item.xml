<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_autocomplete_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_location"
        android:layout_width="14dp"
        android:layout_height="19dp"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:src="@drawable/ic_green_pointer"
        android:tint="@color/ic_grey_color"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_12"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_toRightOf="@id/ic_location"
        android:layout_toEndOf="@id/ic_location"
        android:orientation="vertical">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp_2"/>
        
        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"/>

    </LinearLayout>

    <View
        android:id="@+id/divider_nearest_loc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/separator_color"/>

</RelativeLayout>