<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_autocomplete_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_location"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_22"
        android:layout_marginStart="@dimen/unify_space_16"
        app:icon_name="LOCATION"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/unify_space_16"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/search_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_toEndOf="@id/ic_location"/>

    <View
        android:id="@+id/divider_nearest_loc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Unify_N100"
        android:layout_alignStart="@id/search_place_name"/>

</RelativeLayout>