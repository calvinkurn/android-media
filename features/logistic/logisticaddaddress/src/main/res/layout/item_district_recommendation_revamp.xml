<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_autocomplete_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_location"
        android:layout_width="18dp"
        android:layout_height="22dp"
        android:layout_marginStart="@dimen/unify_space_16"
        app:icon_name="LOCATION"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/unify_space_16"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/search_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@id/ic_location"/>

    <View
        android:id="@+id/divider_nearest_loc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Unify_N100"
        android:layout_alignStart="@id/search_place_name"/>

</RelativeLayout>