<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10">

        <ProgressBar
            android:id="@+id/logistic_spinner"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />

        <!-- Jenis alamat dan nama penerima -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_save_address_as_layout">

                <EditText
                    android:id="@+id/address_type"
                    android:contentDescription="@string/content_desc_address_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/receiver_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_receiver_name">

                <EditText
                    android:id="@+id/receiver_name"
                    android:contentDescription="@string/content_desc_receiver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <!-- Alamat -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_address_add_address">

                <EditText
                    android:id="@+id/address"
                    android:contentDescription="@string/content_desc_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:maxLength="175"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/address_label_watcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_8"
                android:text="@string/minimal_karakter"
                android:textSize="@dimen/sp_12" />

            <!-- District Recommendation -->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/district_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/logistic_district_recommendation_label">

                <EditText
                    android:id="@+id/district"
                    android:contentDescription="@string/content_desc_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/postal_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/logistic_zip_code_label">

                <AutoCompleteTextView
                    android:id="@+id/autocomplete_postal_code"
                    android:contentDescription="@string/content_desc_autocomplete_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Detail Alamat (supposed to be removed exchanged with District Recommendation) -->
        <LinearLayout
            android:id="@+id/address_spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_province"
                android:textColor="@color/label_color"
                android:textSize="@dimen/sp_14" />

            <Spinner
                android:id="@+id/provinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:inputType="text" />

            <TextView
                android:id="@+id/province_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_province"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/regency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_regency"
                android:textColor="@color/label_color"
                android:textSize="@dimen/dp_5"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/regency_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/regency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:inputType="text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/regency_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_regency"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/district_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_sub_district"
                android:textColor="@color/label_color"
                android:textSize="@dimen/dp_5"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/district_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/sub_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:inputType="text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sub_district_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_sub_district"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/post_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_post_code">

                <EditText
                    android:id="@+id/post_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/receiver_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_receiver_phone_no">

                <EditText
                    android:id="@+id/receiver_phone"
                    android:contentDescription="@string/content_desc_receiver_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Map -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_delivery_location_pickup"
                android:textColor="@color/label_color"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:id="@+id/layout_value_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10">

                <ImageView
                    android:id="@+id/icon_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_icon_market_toped" />

                <EditText
                    android:id="@+id/value_location"
                    android:contentDescription="@string/content_desc_value_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toEndOf="@id/icon_map"
                    android:layout_toRightOf="@id/icon_map"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/choose_location"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc_delivery_location"
                android:textColor="@color/label_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <TextView
            android:id="@+id/save_button"
            android:contentDescription="@string/content_desc_save_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_button_green"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/title_save"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>