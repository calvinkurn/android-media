<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ProgressBar
            android:id="@+id/logistic_spinner"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />

        <!-- Jenis alamat dan nama penerima -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_save_address_as_layout"
                android:textColorHint="@color/Unify_N400_68" >

                <EditText
                    android:id="@+id/address_type"
                    android:contentDescription="@string/content_desc_address_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:textColor="@color/Unify_N700"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/receiver_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_receiver_name"
                android:textColorHint="@color/Unify_N400_68" >

                <EditText
                    android:id="@+id/receiver_name"
                    android:contentDescription="@string/content_desc_receiver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:textColor="@color/Unify_N700" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <!-- Alamat -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_address_add_address"
                android:textColorHint="@color/Unify_N400_68" >

                <EditText
                    android:id="@+id/address"
                    android:contentDescription="@string/content_desc_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:maxLength="175"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="@color/Unify_N700" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/address_label_watcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="8dp"
                android:text="@string/minimal_karakter"
                app:typographyType="body_3"/>

            <!-- District Recommendation -->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/district_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/logistic_district_recommendation_label"
                android:textColorHint="@color/Unify_N400_68">

                <EditText
                    android:id="@+id/district"
                    android:contentDescription="@string/content_desc_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:textSize="14sp"
                    android:textColor="@color/Unify_N700" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/postal_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/logistic_zip_code_label"
                android:textColorHint="@color/Unify_N400_68" >

                <AutoCompleteTextView
                    android:id="@+id/autocomplete_postal_code"
                    android:contentDescription="@string/content_desc_autocomplete_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Detail Alamat (supposed to be removed exchanged with District Recommendation) -->
        <LinearLayout
            android:id="@+id/address_spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_province"
                android:textColor="@color/Unify_N300"
                app:typographyType="body_2"/>

            <Spinner
                android:id="@+id/provinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="text" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/province_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_province"
                android:textColor="@color/Unify_R600"
                android:visibility="gone"
                app:typographyType="body_3"/>

            <TextView
                android:id="@+id/regency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_regency"
                android:textColor="@color/Unify_N300"
                android:textSize="5dp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/regency_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/regency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:visibility="gone" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/regency_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_regency"
                android:textColor="@color/Unify_R600"
                android:visibility="gone"
                app:typographyType="body_3"/>

            <TextView
                android:id="@+id/district_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_sub_district"
                android:textColor="@color/Unify_N300"
                android:textSize="5dp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/district_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/sub_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:visibility="gone" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/sub_district_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_sub_district"
                android:textColor="@color/Unify_R600"
                app:typographyType="body_3"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/post_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_post_code"
                android:textColorHint="@color/Unify_N400_68" >

                <EditText
                    android:id="@+id/post_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textColor="@color/Unify_N700" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/receiver_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_receiver_phone_no"
                android:textColorHint="@color/Unify_N400_68" >

                <EditText
                    android:id="@+id/receiver_phone"
                    android:contentDescription="@string/content_desc_receiver_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textColor="@color/Unify_N700" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Map -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cards_ui_2_lg"
            android:orientation="vertical"
            android:padding="10dp">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_delivery_location_pickup"
                android:textColor="@color/Unify_N300"
                app:typographyType="body_2" />

            <RelativeLayout
                android:id="@+id/layout_value_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/icon_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="null"
                    app:srcCompat="@drawable/ic_icon_market_toped" />

                <EditText
                    android:id="@+id/value_location"
                    android:contentDescription="@string/content_desc_value_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@id/icon_map"
                    android:layout_toRightOf="@id/icon_map"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/choose_location"
                    android:textSize="14sp"
                    android:textColor="@color/Unify_N700" />

            </RelativeLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc_delivery_location"
                android:textColor="@color/Unify_N300"
                app:typographyType="body_3"/>

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_user_consent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/save_button"
            android:contentDescription="@string/content_desc_save_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/title_save" />
    </LinearLayout>

</ScrollView>