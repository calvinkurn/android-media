<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_autocomplete_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_location"
        android:layout_width="18dp"
        android:layout_height="22dp"
        android:layout_marginStart="@dimen/unify_space_16"
        app:icon_name="LOCATION"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@id/ic_location"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/search_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/content_desc_place_name"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/search_place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_2"/>

    </LinearLayout>

    <View
        android:id="@+id/divider_nearest_loc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Unify_N100"/>

</RelativeLayout>