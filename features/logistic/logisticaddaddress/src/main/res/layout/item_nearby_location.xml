<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icon_map_grey" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_location"
        app:layout_constraintTop_toTopOf="@+id/iv_location"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Indomaret Dramaga Bogor" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_location_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_location_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_location_title"
        app:typographyType="body_3"
        tools:text="Karent Semanggi, Setiabudi, Kota Administrasi Jakarta Selatan, DKI Jakarta" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:typographyType="body_3"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_location_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1,3 km"/>
</androidx.constraintlayout.widget.ConstraintLayout>