<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignParentTop="true">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointer_0"
        android:layout_centerVertical="true"
        android:contentDescription="@string/pointer"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/icon_pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pointer_0"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/pointer"
        app:srcCompat="@drawable/ic_green_pointer" />

    <View
        android:id="@+id/disable_map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88FFFFFF"
        android:visibility="gone"/>

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn_map"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_40"
        android:foreground="?selectableItemBackground"
        android:text="@string/change_pinpoint"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/icon_pointer"
        android:layout_marginTop="@dimen/dp_8"
        android:textAllCaps="false"
        app:buttonCompatSize="small"
        app:buttonCompatType="secondary" />

</RelativeLayout>