<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_map_search_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/district_recommendation_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_N0"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_zip_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                android:id="@+id/card_address"
                layout="@layout/card_address_new_loc" />

            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/et_kodepos"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_32"
                app:text_field_label="Kode Pos"
                app:text_field_input_type="number"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_kodepos_chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/bg_search_corner"
            android:gravity="center_vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:contentDescription="@string/kota_kecamatan"
                android:tint="@color/Unify_N200"
                app:srcCompat="@drawable/ic_search" />

            <ImageView
                android:id="@+id/ic_close"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:contentDescription="@string/kota_kecamatan"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_close_btn" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:indeterminate="true"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/et_search_district_recommendation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_toStartOf="@+id/ic_close"
                android:layout_toLeftOf="@+id/ic_close"
                android:layout_toEndOf="@+id/ic_search"
                android:layout_toRightOf="@+id/ic_search"
                android:background="@null"
                android:enabled="true"
                android:focusable="true"
                android:hint="@string/hint_district_recommendation_search"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/Unify_N200"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <View
            android:id="@+id/map_search_divider_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="24dp"
            android:background="@color/Unify_N100"
            android:layout_below="@id/layout_search"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_desc_input_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_below="@id/map_search_divider_1"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_list_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_below="@id/tv_desc_input_district"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_popular_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:orientation="vertical"
            android:layout_below="@id/ll_list_district"
            android:gravity="bottom"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title_popular_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kota_populer"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_chooose_zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/Unify_N0"
            android:layout_alignParentBottom="true"
            android:visibility="visible">


            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_choose_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_40"
                app:unifyButtonVariant="filled"
                app:unifyButtonType="main"
                android:textStyle="bold"
                android:text="@string/btn_pilih"
                android:textAlignment="center"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>