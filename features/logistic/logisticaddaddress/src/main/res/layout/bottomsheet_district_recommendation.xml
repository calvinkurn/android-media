<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_map_search_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/district_recommendation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_search"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_search_corner"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ic_search"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:srcCompat="@drawable/ic_search"
                android:tint="@color/ic_grey_color"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/kota_kecamatan"/>

            <EditText
                android:id="@+id/et_search_district_recommendation"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_district_recommendation_search"
                android:inputType="text"
                android:focusable="true"
                android:enabled="true"
                android:textSize="@dimen/sp_14"
                android:maxLines="1"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:layout_toRightOf="@id/ic_search"
                android:layout_toEndOf="@id/ic_search"/>

            <ImageView
                android:id="@+id/ic_close"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:srcCompat="@drawable/ic_close_btn"
                android:contentDescription="@string/kota_kecamatan"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="19dp"
                android:layout_marginEnd="19dp" />

        </RelativeLayout>

        <View
            android:id="@+id/map_search_divider_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separator_color" />

        <LinearLayout
            android:id="@+id/ll_list_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_desc_input_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_advice_search_address"
                android:textSize="@dimen/sp_12"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:clipToPadding="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_popular_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_popular_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kota_populer"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"/>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>