<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_district_recommendation_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_location"
        android:layout_width="14dp"
        android:layout_height="19dp"
        android:layout_marginEnd="18dp"
        app:srcCompat="@drawable/ic_green_pointer"
        android:tint="@color/Unify_N200"
        android:contentDescription="@string/pointer"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_district_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:layout_toEndOf="@id/ic_location"
        android:maxLines="2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="18dp"
        android:ellipsize="none"
        android:scrollHorizontally="false"/>

    <View
        android:id="@+id/divider_district_recommendation"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Unify_N100"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>