<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/unify_space_16"
    android:id="@+id/bottomsheet_location"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_address"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:typographyType="body_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Jalan Prof Doktor"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_address_desc"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_4"
        app:typographyType="body_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        android:text="Setiabudii, blablabla"
        android:textColor="@color/Neutral_N700_44"/>

    <LinearLayout
        android:id="@+id/btn_vertical_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginBottom="@dimen/unify_space_8"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_address_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible">


        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:text="Pilih Lokasi"
            android:textStyle="bold"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:text="Tidak Ketemu?"
            android:textStyle="bold"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>