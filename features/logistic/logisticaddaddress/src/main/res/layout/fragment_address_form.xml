<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/sv_add_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:isScrollContainer="false"
        android:background="@color/Unify_Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="vertical">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_maps_unavailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:descriptionText="@string/maps_unavailable_ticker_description"
                app:tickerType="error"
                app:tickerShapeType="loose"
                android:visibility="gone"
                app:closeButtonVisibility="gone"
                tools:visibility="visible"/>

            <include
                android:id="@+id/card_address_pinpoint"
                layout="@layout/card_address_new_loc"
                android:visibility="visible"/>

            <include
                android:id="@+id/form_address"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                layout="@layout/form_address_new_alamat"
                android:visibility="visible"/>

            <include
                android:id="@+id/form_account"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                layout="@layout/form_address_new_akun" />

            <include
                android:id="@+id/form_address_negative"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                layout="@layout/form_address_new_alamat_negative"
                android:visibility="gone"/>

            <include
                android:id="@+id/card_address_negative"
                layout="@layout/card_address_new_loc_negative"
                android:visibility="gone"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_cb_default_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
                    android:id="@+id/cb_default_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/address_district"
                    app:layout_constraintBottom_toBottomOf="@id/address_district"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/address_district"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginEnd="12dp"
                    android:textColor="@color/Unify_N700_96"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cb_default_loc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:typographyType="body_1"
                    android:text="@string/cb_jadikan_alamat_utama"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/user_consent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typographyType="body_3"
                android:textColor="@color/Unify_N700_68"
                android:textAlignment="center"
                tools:text="Dengan klik Simpan, kamu menyetujui kebijakan privasi dan syarat dan ketentuan." />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_save_address_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:unifyButtonVariant="filled"
                app:unifyButtonType="main"
                android:textStyle="bold"
                android:text="@string/btn_simpan"
                android:textAlignment="center"/>

        </LinearLayout>

    </ScrollView>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_address_form"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>