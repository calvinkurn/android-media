<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/sv_add_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:isScrollContainer="false"
        android:background="@color/Unify_N0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout_address"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:paddingBottom="@dimen/dp_16"
            android:orientation="vertical">

            <include
                android:id="@+id/card_address"
                layout="@layout/card_address_new_loc"
                android:visibility="visible"/>

            <include
                android:id="@+id/form_address"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/unify_space_16"
                layout="@layout/form_address_new_alamat"
                android:visibility="visible"/>

            <include
                android:id="@+id/form_account"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/unify_space_16"
                layout="@layout/form_address_new_akun" />

            <include
                android:id="@+id/form_address_negative"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/unify_space_16"
                layout="@layout/form_address_new_alamat_negative"
                android:visibility="gone"/>

            <include
                android:id="@+id/card_address_negative"
                layout="@layout/card_address_new_loc_negative"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:background="@color/Unify_N0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_cb_default_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:visibility="gone">

            <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
                android:id="@+id/cb_default_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/address_district"
                app:layout_constraintBottom_toBottomOf="@id/address_district"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/address_district"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/unify_space_12"
                android:layout_marginBottom="@dimen/unify_space_12"
                android:layout_marginEnd="@dimen/unify_space_12"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/cb_default_loc"
                app:layout_constraintEnd_toEndOf="parent"
                app:typographyType="body_1"
                android:text="Jadikan alamat utama"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_save_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            app:unifyButtonVariant="filled"
            app:unifyButtonType="main"
            android:textStyle="bold"
            android:text="Simpan"
            android:textAlignment="center"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>