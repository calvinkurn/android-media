<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_80">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/pointer_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/pointer" />

            <ImageView
                android:id="@+id/icon_pointer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/pointer_0"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/pointer"
                app:srcCompat="@drawable/ic_green_pointer" />

        </RelativeLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl_bottomsheet_getdistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include
                android:id="@+id/bottom_sheet_get_district"
                layout="@layout/bottomsheet_getdistrict" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <ImageView
            android:id="@+id/ic_current_location"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_above="@+id/cl_bottomsheet_getdistrict"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:contentDescription="@string/lokasi_saat_ini"
            app:srcCompat="@drawable/ic_gps_enable" />

    </RelativeLayout>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/back_button"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_gravity="start|top"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/navigate_up"
        app:icon_name="ARROW_BACK"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
