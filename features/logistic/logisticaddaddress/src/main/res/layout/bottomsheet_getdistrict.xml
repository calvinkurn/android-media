<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomsheet_getdistrict"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    app:behavior_hideable="false"
    app:behavior_peekHeight="600dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/whole_loading_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:visibility="gone">

        <include
            android:id="@+id/loading_list_1"
            layout="@layout/partial_shimmering_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/getdistrict_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        tools:visibility="gone">

        <include
            android:id="@+id/loading_container"
            layout="@layout/partial_shimmering_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_18">

            <TextView
                android:id="@+id/tv_title_getdistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/title_search_location_color"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="Jalan Taman Siswa" />

            <ImageView
                android:id="@+id/ic_search_btn"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:contentDescription="@string/research_description"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_search_btn" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_address_getdistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/label_grey"
            android:textSize="@dimen/sp_12"
            tools:text="Wirogunan Mergangsan Kota Yogyakarta Daerah Istimewa Yogyakarta" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/detail_alamat"
            android:textColor="@color/label_grey"
            android:textSize="@dimen/sp_12" />

        <com.tokopedia.design.text.TkpdHintTextInputLayout
            android:id="@+id/et_detail_address_layout"
            style="@style/HintTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/et_detail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:focusable="true"
                android:hint="@string/et_detail_address_hint"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="60"
                android:maxLines="1"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColor="#ae31353b"
                android:textSize="@dimen/sp_15" />

        </com.tokopedia.design.text.TkpdHintTextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4">

            <TextView
                android:id="@+id/tv_detail_address_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="@string/tv_detail_address_info"
                android:textColor="@color/label_grey"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_detail_address_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/label_grey"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btn_choose_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_30"
            android:foreground="?selectableItemBackground"
            android:text="@string/choose_this_location"
            android:textAllCaps="false"
            app:buttonCompatSize="big"
            app:buttonCompatType="primary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/invalid_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/invalid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/title_search_location_color"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="@string/invalid_title" />

            <ImageView
                android:id="@+id/invalid_ic_search_btn"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:contentDescription="@string/research_description"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_search_btn" />

        </RelativeLayout>

        <TextView
            android:id="@+id/invalid_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/label_grey"
            android:textSize="@dimen/sp_12"
            tools:text="Tenang, kamu tetap dapat memilih lokasi ini dengan menambahkan detail..." />

        <ImageView
            android:id="@+id/invalid_img"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_180"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:contentDescription="@string/invalid_description"
            tools:srcCompat="@drawable/ic_invalid_location" />

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/invalid_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_this_location"
            android:visibility="gone"
            app:buttonCompatSize="medium"
            app:buttonCompatType="primary" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>