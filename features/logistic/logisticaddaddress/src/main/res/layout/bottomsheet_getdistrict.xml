<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_get_district"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:clickable="true"
    app:behavior_hideable="false"
    app:behavior_peekHeight="600dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/whole_loading_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone">

        <include
            android:id="@+id/loading_list_1"
            layout="@layout/partial_shimmering_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/getdistrict_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:visibility="visible">

        <include
            android:id="@+id/loading_container"
            layout="@layout/partial_shimmering_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_18">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_title_getdistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/Unify_N700_96"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:typographyType="body_1"
                tools:text="Jalan Taman Siswa" />

            <ImageView
                android:id="@+id/ic_search_btn"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:contentDescription="@string/research_description"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_search_btn" />

        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_address_getdistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/sp_12"
            app:typographyType="body_3"
            tools:text="Wirogunan Mergangsan Kota Yogyakarta Daerah Istimewa Yogyakarta" />

        <LinearLayout
            android:id="@+id/detail_address_layout"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_detail_address_layout"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/detail_alamat">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_detail_address"
                    android:contentDescription="@string/content_desc_et_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="true"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="60"
                    android:maxLines="1"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:textColor="@color/Unify_N700_68"
                    android:textSize="@dimen/sp_15" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_detail_address_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:paddingStart="2dp"
                    android:paddingLeft="2dp"
                    android:paddingEnd="2dp"
                    android:paddingRight="2dp"
                    android:text="@string/tv_detail_address_placeholder"
                    android:textColor="@color/Unify_N700_68"
                    android:textSize="@dimen/sp_12"
                    app:typographyType="body_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_detail_address_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingStart="2dp"
                    android:paddingLeft="2dp"
                    android:paddingEnd="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/Unify_N700_68"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

        </LinearLayout>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btn_choose_location"
            android:contentDescription="@string/content_desc_btn_choose_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="@dimen/dp_30"
            android:foreground="?selectableItemBackground"
            android:text="@string/choose_this_location"
            android:textAllCaps="false"
            app:buttonCompatSize="big"
            app:buttonCompatType="primary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/invalid_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/invalid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="heading_4"
                tools:text="@string/invalid_title" />

            <ImageView
                android:id="@+id/invalid_ic_search_btn"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:contentDescription="@string/research_description"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_search_btn" />

        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/invalid_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            tools:text="Tenang, kamu tetap dapat memilih lokasi ini dengan menambahkan detail..." />

        <com.tkpd.remoteresourcerequest.view.DeferredImageView
            android:id="@+id/invalid_img"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_180"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/invalid_img_description"
            app:remoteFileName="tokopedia_konslet.png" />

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/invalid_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_this_incomplete_location"
            android:visibility="gone"
            app:buttonCompatSize="medium"
            app:buttonCompatType="primary" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>