<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/bottomsheet_getdistrict"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="500dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/whole_loading_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_20"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            android:id="@+id/loading_list_1"
            layout="@layout/partial_shimmering_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20" />

        <include
            android:id="@+id/loading_list_2"
            layout="@layout/partial_shimmering_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20" />

        <include
            android:id="@+id/loading_list_3"
            layout="@layout/partial_shimmering_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/getdistrict_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:orientation="vertical">

        <include
            android:id="@+id/loading_container"
            layout="@layout/partial_shimmering_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24">

            <TextView
                android:id="@+id/tv_title_getdistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/title_search_location_color"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                tools:text="Jalan Taman Siswa"/>

            <ImageView
                android:id="@+id/ic_search_btn"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_10"
                android:contentDescription="@string/research_description"
                android:visibility="visible"
                android:src="@drawable/ic_search" />
            
        </RelativeLayout>
        
        <TextView
            android:id="@+id/tv_address_getdistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/label_grey"
            tools:text="Wirogunan Mergangsan Kota Yogyakarta Daerah Istimewa Yogyakarta"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/label_grey"
            android:text="@string/detail_alamat"/>

        <com.tokopedia.design.text.TkpdHintTextInputLayout
            android:id="@+id/et_detail_address_layout"
            style="@style/HintTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/et_detail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/et_detail_address_hint"
                android:inputType="text"
                android:textColor="#ae31353b" />

        </com.tokopedia.design.text.TkpdHintTextInputLayout>

        <TextView
            android:id="@+id/tv_detail_address_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/label_grey"
            android:text="@string/tv_detail_address_info"/>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btn_choose_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:foreground="?selectableItemBackground"
            android:text="@string/choose_this_location"
            android:textAllCaps="false"
            app:buttonCompatSize="big"
            app:buttonCompatType="primary" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/invalid_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24"
        android:visibility="gone">

        <ImageView
            android:id="@+id/invalid_img"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_invalid_location"
            android:contentDescription="@string/invalid_description"/>

        <LinearLayout
            android:id="@+id/ll_invalid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/invalid_img"
            android:layout_toStartOf="@id/invalid_img"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invalid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@color/title_search_location_color"
                tools:text="@string/invalid_title"/>

            <TextView
                android:id="@+id/invalid_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/label_grey"/>

        </LinearLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>