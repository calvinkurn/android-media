<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.SearchBarUnify
        android:id="@+id/search_input_autocomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:search_bar_show_icon="false"
        app:search_bar_placeholder="@string/searchbar_autocomplete_hint" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_autocomplete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="13"
        tools:listitem="@layout/item_autocomplete_result" />

</LinearLayout>