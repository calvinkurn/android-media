<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.logisticseller">

    <application>
        <activity
            android:name="com.tokopedia.logisticseller.ui.reschedulepickup.ReschedulePickupActivity"
            android:exported="false"
            android:label="@string/title_reschedule_pickup_activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_logistic"
                    android:path="@string/path_reschedule"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

