<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/choose_address_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_location"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_chosen_address"
        app:layout_constraintBottom_toBottomOf="@id/text_chosen_address"
        app:icon_name="LOCATION"
        tools:ignore="ContentDescription" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_chosen_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/state_dikirim_ke"
        android:textColor="@color/Unify_NN950_96"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_location"
        app:layout_constraintEnd_toStartOf="@id/btn_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="wrap"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/btn_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="@dimen/dp_19"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/text_chosen_address"
        app:layout_constraintBottom_toBottomOf="@id/text_chosen_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_chosen_address"
        app:icon_name="CHEVRON_DOWN"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>