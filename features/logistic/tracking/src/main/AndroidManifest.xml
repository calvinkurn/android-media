<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.tracking">

    <application>

        <activity
            android:name=".view.TrackingPageActivity"
            android:label="@string/label_tracking_activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".view.SimpleWebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".view.uploadawb.UploadAwbLogisticActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_logistic"
                    android:pathPattern="@string/path_upload_awb"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.shipping_confirmation.view.barcodescanner.ReceiptShipmentBarcodeScannerActivity"
            android:label="@string/title_receipt_shipement_barcode_scanner"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".view.shipping_confirmation.view.confirmshipment.ConfirmShippingActivity"
            android:label="@string/title_confirm_shipment_logistic_module"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_logistic"
                    android:pathPattern="@string/path_shipping_confirmation"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

    </application>

</manifest>
