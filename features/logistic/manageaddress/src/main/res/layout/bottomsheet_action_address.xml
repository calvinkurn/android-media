<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_18"
    android:layout_marginBottom="@dimen/dp_18"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_utama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_alamat_utama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jadikan Alamat Utama"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_18"
            android:textColor="@color/Unify_N700"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/Unify_N75"
            android:layout_marginTop="@dimen/dp_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_hapus_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus Alamat"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/Unify_N700"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18" />

</LinearLayout>