<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/Unify_NN0"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/title"
                style="@style/TextView.Title"
                app:typographyType="body_1"
                android:layout_width="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:lineSpacingExtra="8sp"
                tools:text="MyShop" />

            <ImageView
                android:id="@+id/menu_more"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_three_dots_more_menu" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_line_1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="6sp"
            app:typographyType="body_3"
            android:textColor="@color/Unify_NN950_44"
            tools:text="Jl. Prof. DR. Satrio No.Kav 11, RT.3/RW.3, Karet Semanggi, Setia Budi" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_line_2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/Unify_NN950_44"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginTop="2dp"
            android:lineSpacingExtra="6sp"
            app:typographyType="body_3"
            tools:text="Setiabudi, Jakarta Selatan, DKI Jakarta, Indonesia 12345" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/bg_line_separator_thin"
            android:orientation="vertical"
            android:showDividers="beginning|middle"
            android:layout_marginTop="8dp">

            <com.tokopedia.design.label.LabelView
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                app:lv_content_text_size="13sp"
                app:lv_image="@drawable/ic_shop_icon_phone"
                app:lv_image_margin_right="16dp"
                app:lv_image_width="20dp"
                app:lv_title="@string/app_name"
                app:lv_title_color="@color/Unify_NN950_44"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <com.tokopedia.design.label.LabelView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                app:lv_content_text_size="13sp"
                app:lv_image="@drawable/ic_shop_setting_email"
                app:lv_image_margin_right="16dp"
                app:lv_image_width="20dp"
                app:lv_title="@string/app_name"
                app:lv_title_color="@color/Unify_NN950_44"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <com.tokopedia.design.label.LabelView
                android:id="@+id/fax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                app:lv_content_text_size="13sp"
                app:lv_image="@drawable/ic_shop_setting_fax"
                app:lv_image_margin_right="16dp"
                app:lv_image_width="20dp"
                app:lv_title="@string/app_name"
                app:lv_title_color="@color/Unify_NN950_44"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>