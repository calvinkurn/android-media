<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:card_type="border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_request_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            app:icon_name="SHARE_MOBILE"
            app:icon_color_light_enable="@color/Unify_GN500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_title_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="12dp"
            android:text="@string/title_item_request_address"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toStartOf="@id/icon_chevron_right"
            app:layout_constraintStart_toEndOf="@id/icon_share"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="display_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_subtitle_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:text="@string/subtitle_item_request_address"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/text_title_request"
            app:layout_constraintStart_toStartOf="@id/text_title_request"
            app:layout_constraintTop_toBottomOf="@id/text_title_request"
            app:typographyType="display_3" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_chevron_right"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:icon_name="CHEVRON_RIGHT"
            android:layout_margin="8dp"
            app:icon_color_light_enable="@color/Unify_NN900"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>