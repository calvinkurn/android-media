<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_2">

        <RelativeLayout
            android:id="@+id/rl_shipment_recipient_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            android:foreground="?selectableItemBackground">

            <LinearLayout
                android:id="@+id/ll_radio_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <RadioButton
                    android:id="@+id/rb_check_address"
                    android:contentDescription="@string/content_desc_rb_check_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:theme="@style/TransactionToggleButton" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_address_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_toStartOf="@+id/ll_radio_button_container"
                android:layout_toLeftOf="@+id/ll_radio_button_container"
                android:background="@color/Unify_N0">

                <include layout="@layout/layout_address_normal" />

            </RelativeLayout>

            <View
                android:id="@+id/v_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_address_container"
                android:background="@color/Unify_N100" />

            <TextView
                android:id="@+id/button_change_address"
                android:contentDescription="@string/content_desc_button_change_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_separator"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text="@string/change_address"
                android:textColor="@color/Unify_N700_32"
                android:textSize="@dimen/sp_12" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_add_new_address"
        android:contentDescription="@string/content_desc_tv_button_add_new_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/button_border_green"
        android:text="@string/add_address"
        android:textAllCaps="false"
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/Unify_G400" />

</LinearLayout>