<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/img_location_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            app:icon_enable_state="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_address_zipcode" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shop_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/shop_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/img_mark_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ic_mark_ico"
            tools:visibility="gone" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_main_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_goneMarginStart="16dp"
            android:text="@string/address_label"
            android:visibility="visible"
            app:labelType="general_light_green"
            app:layout_constraintStart_toEndOf="@+id/tv_shop_label"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:contentDescription="null"
            app:layout_constraintBottom_toBottomOf="@id/lbl_main_shop"
            app:layout_constraintStart_toEndOf="@+id/lbl_main_shop"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_information_ico" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/shop_name"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_shop_location_item"
            app:typographyType="heading_5" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_kebab"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"
            app:icon_name="MENU_KEBAB_VERTICAL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_shop_label" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_address_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/shop_address_detail"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_name"
            app:typographyType="heading_5" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_address_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/shop_address_city"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_address_detail"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_address_zipcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            android:text="@string/shop_address_zipcode"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_address_city"
            app:typographyType="body_3" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_pinpoint_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintBottom_toBottomOf="@+id/img_location_state"
            app:layout_constraintStart_toEndOf="@+id/img_location_state"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Sudah Pin Point" />

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/ticker_address_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:layout_goneMarginTop="18dp"
            app:closeButtonVisibility="gone"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:tickerType="error"
            app:layout_constraintTop_toBottomOf="@id/tv_pinpoint_state"
            app:tickerShapeType="loose" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/action_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="18dp"
            app:unifyButtonVariant="ghost"
            app:unifyButtonSize="small"
            app:unifyButtonType="alternate"
            android:text="@string/ubah_detail_lokasi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ticker_address_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/header_shop_location_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="img_info_icon,tv_shop_label,img_mark_icon,lbl_main_shop" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>