<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_deactivate_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_deactivate_location"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2"
        app:typographyWeight="bold"/>

    <ImageView
        android:id="@+id/iv_point_one"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_no_1_warehouse"
        app:layout_constraintTop_toBottomOf="@id/tv_deactivate_location" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/point_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:textColor="@color/grayMainInformation"
        android:text="@string/deactivate_info_one"
        app:typographyType="body_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_point_one"
        app:layout_constraintTop_toTopOf="@id/iv_point_one" />

    <ImageView
        android:id="@+id/iv_point_two"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        app:srcCompat="@drawable/ic_no_2_warehouse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_one" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/point_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:textColor="@color/grayMainInformation"
        android:text="@string/deactivate_info_two"
        app:typographyType="body_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_point_two"
        app:layout_constraintTop_toTopOf="@id/iv_point_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_two">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_kembali"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:text="Kembali"
            android:textStyle="bold"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_nonaktifkan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:text="Nonaktifkan"
            android:textStyle="bold"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>