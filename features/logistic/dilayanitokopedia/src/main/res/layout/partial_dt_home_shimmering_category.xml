<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.LoaderUnify android:id="@+id/siv_category"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toTopOf="@+id/tp_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/tp_category"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/Unify_N700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/siv_category"
        app:layout_constraintStart_toStartOf="@+id/siv_category"
        app:layout_constraintTop_toBottomOf="@+id/siv_category"
        app:loader_type="rect"
        app:typographyType="body_3"
        tools:text="Long Category Title" />
</androidx.constraintlayout.widget.ConstraintLayout >