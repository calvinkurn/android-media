<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.district_recommendation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.tokopedia.district_recommendation.view.DistrictRecommendationActivity"
            android:label="@string/title_activity_search_address"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <activity
            android:name="com.tokopedia.district_recommendation.view.shopsettings.DistrictRecommendationShopSettingsActivity"
            android:label="@string/title_activity_search_address"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

    </application>

</manifest>
