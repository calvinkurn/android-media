<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DelayedEtaBottomSheetFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_delayed" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delayed_eta_bottomsheet_title"
        android:paddingTop="17dp"
        android:paddingBottom="5dp"
        android:paddingHorizontal="16dp"
        android:textAlignment="center"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/delayed_eta_bottomsheet_description"
        android:paddingHorizontal="16dp"
        android:textAlignment="center"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn"
        android:layout_marginVertical="@dimen/dp_24"
        android:layout_marginHorizontal="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delayed_eta_bottomsheet_button_title" />

</LinearLayout>