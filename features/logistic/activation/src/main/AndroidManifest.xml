<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.activation">

    <application
        android:allowBackup="true"
        android:supportsRtl="true">
        <activity android:name="com.tokopedia.activation.ui.ActivationPageActivity"
            android:label="@string/label_layanan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_shop_setting_cod_activation"/>
            </intent-filter>
        </activity>
    </application>

</manifest>