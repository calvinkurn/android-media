<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_chip_home_play_live"
    android:id="@+id/chipPlayLive"
    android:layout_width="wrap_content"
    android:layout_height="21dp"
    android:layout_marginRight="4dp"
    android:layout_marginEnd="4dp"
    android:minWidth="40dp"
    android:minHeight="14dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:visibility="gone"
    tools:visibility="visible"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/Unify_Static_White"
        android:textColorLink="@color/Unify_Static_White"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="visible"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="@string/live_home_play_char_dot"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/Unify_Static_White"
        android:textColorLink="@color/Unify_Static_White"
        android:textSize="11dp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:text="@string/live_home_play_text" />

</LinearLayout>