<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_chip_home_play_live"
    android:id="@+id/chipPlayLive"
    android:layout_width="wrap_content"
    android:layout_height="21dp"
    android:layout_marginRight="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_4"
    android:minWidth="@dimen/dp_40"
    android:minHeight="@dimen/dp_14"
    android:paddingLeft="@dimen/dp_4"
    android:paddingRight="@dimen/dp_4"
    android:paddingTop="@dimen/dp_1"
    android:paddingBottom="@dimen/dp_1"
    android:visibility="gone"
    tools:visibility="visible"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/Unify_Static_White"
        android:textColorLink="@color/Unify_Static_White"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        android:text="@string/live_home_play_char_dot"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/Unify_Static_White"
        android:textColorLink="@color/Unify_Static_White"
        android:textSize="@dimen/sp_11"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:text="@string/live_home_play_text" />

</LinearLayout>