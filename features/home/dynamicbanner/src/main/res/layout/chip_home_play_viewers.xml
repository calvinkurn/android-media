<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chipPlayViewers"
    android:layout_width="wrap_content"
    android:layout_height="21dp"
    android:background="@drawable/bg_chip_home_play_viewers"
    android:layout_marginRight="4dp"
    android:layout_marginEnd="4dp"
    android:minWidth="40dp"
    android:minHeight="14dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:visibility="gone"
    tools:visibility="visible"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:layout_width="@dimen/dp_18"
        android:layout_height="17dp"
        android:contentDescription="@string/content_desc_play_widget"
        app:srcCompat="@drawable/ic_chip_home_play_viewers"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtTotalViewers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/dynamicbanner_dms_text_total_viewers"
        app:typographyType="body_3"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:visibility="visible"
        android:gravity="center_vertical"
        tools:text="2,1 Jt" />

</LinearLayout>