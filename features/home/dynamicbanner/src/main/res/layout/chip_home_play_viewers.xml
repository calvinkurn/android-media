<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chipPlayViewers"
    android:layout_width="wrap_content"
    android:layout_height="21dp"
    android:background="@drawable/bg_chip_home_play_viewers"
    android:layout_marginRight="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_4"
    android:minWidth="@dimen/dp_40"
    android:minHeight="@dimen/dp_14"
    android:paddingLeft="@dimen/dp_4"
    android:paddingRight="@dimen/dp_4"
    android:paddingTop="@dimen/dp_1"
    android:paddingBottom="@dimen/dp_1"
    android:visibility="gone"
    tools:visibility="visible"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:layout_width="@dimen/dp_18"
        android:layout_height="17dp"
        android:contentDescription="@string/content_desc_play_widget"
        app:srcCompat="@drawable/ic_chip_home_play_viewers"/>

    <TextView
        android:id="@+id/txtTotalViewers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/dynamicbanner_dms_text_total_viewers"
        android:textSize="@dimen/sp_11"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:visibility="visible"
        android:gravity="center_vertical"
        tools:text="2,1 Jt" />

</LinearLayout>