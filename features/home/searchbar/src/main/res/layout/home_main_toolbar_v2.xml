<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:orientation="horizontal"
    android:padding="@dimen/dp_8"
    tools:layout_height="100dp">

    <View
        android:id="@+id/layout_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/btn_wishlist"
        android:layout_toLeftOf="@+id/btn_wishlist"
        android:background="@drawable/bg_corner"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4"
        app:layout_constraintEnd_toStartOf="@+id/btn_wishlist"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp" />

    <ImageView
        android:id="@+id/btn_wishlist"
        android:layout_width="@dimen/icon_toolbar"
        android:layout_height="@dimen/icon_toolbar"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_inbox"
        android:layout_toLeftOf="@+id/btn_inbox"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintEnd_toStartOf="@+id/btn_inbox"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layout_search"
        app:layout_constraintTop_toTopOf="@+id/et_search" />

    <ImageView
        android:id="@+id/btn_inbox"
        android:layout_width="@dimen/icon_toolbar"
        android:layout_height="@dimen/icon_toolbar"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_notification"
        android:layout_toLeftOf="@+id/btn_notification"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_wishlist"
        app:layout_constraintEnd_toStartOf="@+id/btn_notification"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_wishlist"
        app:layout_constraintTop_toTopOf="@+id/btn_wishlist" />

    <ImageView
        android:id="@+id/btn_notification"
        android:layout_width="@dimen/icon_toolbar"
        android:layout_height="@dimen/icon_toolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_inbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_inbox"
        app:layout_constraintTop_toTopOf="@+id/btn_inbox" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintStart_toStartOf="@+id/layout_search"
        app:layout_constraintTop_toTopOf="@+id/et_search"
        app:layout_constraintVertical_bias="0.526"
        app:srcCompat="@drawable/ic_search_bar" />

    <TextView
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_weight="1"
        android:background="@null"
        android:enabled="true"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="@string/search_tokopedia"
        android:inputType="none"
        android:maxLines="1"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/layout_search"
        app:layout_constraintEnd_toEndOf="@+id/layout_search"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/layout_search" />
</androidx.constraintlayout.widget.ConstraintLayout>