<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    tools:layout_height="@dimen/dp_130"
    app:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        tools:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_toLeftOf="@+id/btn_wishlist"
            android:layout_toStartOf="@+id/btn_wishlist"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_width="match_parent"
            android:background="@drawable/bg_corner"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/dp_4"
            android:visibility="gone">

            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_search_bar"/>

            <TextView
                android:id="@+id/et_search"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_tokopedia"
                android:inputType="none"
                android:focusable="false"
                android:enabled="true"
                android:textSize="@dimen/sp_16"
                android:maxLines="1"
                android:textColorHint="@android:color/darker_gray"
                android:background="@null"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageview_image_search"
                android:layout_width="@dimen/dp_24"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_product_discovery_imagesearch_normal_24" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="@string/search_title_feed"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/btn_search"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon_toolbar"
            android:layout_height="@dimen/icon_toolbar"
            android:scaleType="center"
            android:layout_toStartOf="@+id/btn_wishlist"
            android:layout_toLeftOf="@+id/btn_wishlist"
            app:srcCompat="@drawable/ic_searchbar_feed_search"/>

        <ImageView
            android:id="@+id/btn_wishlist"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon_toolbar"
            android:layout_height="@dimen/icon_toolbar"
            android:scaleType="center"
            android:layout_toStartOf="@+id/btn_inbox"
            android:layout_toLeftOf="@+id/btn_inbox"
            app:srcCompat="@drawable/ic_searchbar_feed_search"/>

        <ImageView
            android:id="@+id/btn_inbox"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon_toolbar"
            android:layout_height="@dimen/icon_toolbar"
            android:scaleType="center"
            android:layout_toStartOf="@+id/btn_notification"
            android:layout_toLeftOf="@+id/btn_notification"
            app:srcCompat="@drawable/ic_searchbar_feed_message"/>

        <ImageView
            android:id="@+id/btn_notification"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon_toolbar"
            android:layout_height="@dimen/icon_toolbar"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_searchbar_feed_notification"/>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>