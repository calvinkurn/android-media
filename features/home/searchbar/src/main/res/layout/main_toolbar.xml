<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    tools:layout_height="100dp"
    android:background="@color/white"
    app:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <ImageButton
            android:visibility="gone"
            android:id="@+id/btn_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_product_fintech_qr_normal_24"/>

        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_toRightOf="@+id/btn_qrcode"
            android:layout_toEndOf="@+id/btn_qrcode"
            android:layout_toLeftOf="@+id/btn_wishlist"
            android:layout_toStartOf="@+id/btn_wishlist"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_width="match_parent"
            android:background="@drawable/bg_corner"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/dp_4">

            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_search_bar"/>

            <TextView
                android:id="@+id/et_search"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_tokopedia"
                android:inputType="none"
                android:focusable="false"
                android:enabled="true"
                android:textSize="@dimen/sp_16"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColorHint="@android:color/darker_gray"
                android:background="@null"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_wishlist"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon_toolbar"
            android:layout_height="@dimen/icon_toolbar"
            android:scaleType="center"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_wishlist_bar"
            android:layout_toStartOf="@+id/btn_inbox"
            android:layout_toLeftOf="@+id/btn_inbox"/>

        <ImageView
            android:id="@+id/btn_inbox"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon_toolbar"
            android:layout_height="@dimen/icon_toolbar"
            android:scaleType="center"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_inbox_bar"
            android:layout_toStartOf="@+id/btn_notification"
            android:layout_toLeftOf="@+id/btn_notification"/>

        <ImageView
            android:id="@+id/btn_notification"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon_toolbar"
            android:layout_height="@dimen/icon_toolbar"
            android:scaleType="center"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_system_action_notification_normal_24"/>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
