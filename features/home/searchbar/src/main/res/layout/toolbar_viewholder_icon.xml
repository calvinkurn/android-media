<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_6"
    android:layout_marginBottom="@dimen/dp_6"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_height="50dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/nav_icon_image"
        tools:layout_width="50dp"
        tools:layout_height="50dp"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:background="@drawable/nav_toolbar_bg_badge_circular"
        android:id="@+id/nav_icon_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        tools:text="99"
        app:layout_constraintEnd_toEndOf="@id/nav_icon_image"
        app:layout_constraintTop_toTopOf="@id/nav_icon_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>