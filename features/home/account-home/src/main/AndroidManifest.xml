<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.home.account" >
    <application>
        <activity android:name=".presentation.activity.GeneralSettingActivity"
            android:label="@string/label_menu_setting"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".presentation.activity.AccountSettingActivity"
            android:label="@string/screentitle_account_setting"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".presentation.activity.StoreSettingActivity"
            android:label="@string/screentitle_store_setting"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_store_setting"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.activity.AdvancedSettingActivity"
            android:label="@string/title_app_advanced_setting"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:path="@string/path_advanced_setting"/>
            </intent-filter>
        </activity>

        <activity android:name=".presentation.activity.TkpdPaySettingActivity"
            android:label="@string/screentitle_tkpd_pay_setting"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".presentation.activity.SettingWebViewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".presentation.activity.FavoriteShopsActivity"
            android:label="@string/title_favorite_page"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".presentation.activity.PushNotificationCheckerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:path="@string/path_push_notification_troubleshooter"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
