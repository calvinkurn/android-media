<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.design.label.LabelView
        android:id="@+id/labelview"
        style="@style/LabelLayout"
        android:paddingRight="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:lv_image_width="@dimen/dp_24"
        app:lv_image_margin_right="@dimen/dp_16"
        app:lv_title="@string/app_name"
        app:lv_title_text_size="@dimen/sp_14"
        app:lv_sub_title_text_size="@dimen/sp_14"/>

    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_separator"/>

</LinearLayout>