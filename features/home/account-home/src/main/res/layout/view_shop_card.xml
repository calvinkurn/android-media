<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/dp_8"
                                    app:cardCornerRadius="@dimen/dp_4"
                                    app:cardUseCompatPadding="true"
                                    app:elevation="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/image_shop"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:minHeight="@dimen/dp_50"
            android:minWidth="@dimen/dp_50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_big_notif_customerapp"/>

        <ImageView
            android:id="@+id/image_badge"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/image_shop"
            app:layout_constraintEnd_toEndOf="@+id/image_shop"
            tools:src="@drawable/ic_big_notif_customerapp"/>

        <TextView
            android:id="@+id/text_shop_name"
            style="@style/TextView.TitleMedium.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Oka Coffee"/>

        <TextView
            android:id="@+id/text_shop_verification_status"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/image_shop"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toBottomOf="@+id/text_shop_name"
            tools:text="Kelengkapan Profile 75%"/>

        <ImageView
            android:id="@+id/shop_reputation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toBottomOf="@+id/text_shop_verification_status"/>

        <com.tokopedia.design.widget.WarningTickerView
            android:id="@+id/verification_warning_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toBottomOf="@+id/shop_reputation"
            tools:visibility="visible"/>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verification_warning_ticker"/>

        <LinearLayout
            android:id="@+id/layout_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator">

            <ImageView
                android:id="@+id/image_saldo"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/ic_saldo_green"/>

            <TextView
                android:id="@+id/text_saldo_label"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/title_saldo_setting"/>

            <TextView
                android:id="@+id/text_saldo_amount"
                style="@style/TextView.Small.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAlignment="viewEnd"
                tools:text="Rp 2.000.000"/>
        </LinearLayout>

        <View
            android:id="@+id/separator_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_deposit"/>

        <ImageView android:id="@+id/image_topads"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/ic_top_ads_speaker_green"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_2"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/text_topads_credit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/title_saldo_setting"
            app:fontSize="micro"
            app:textViewTheme="lightDisabled"
            app:layout_constraintTop_toTopOf="@+id/image_topads"
            app:layout_constraintBottom_toBottomOf="@+id/image_topads"
            app:layout_constraintLeft_toRightOf="@+id/image_topads"
            app:layout_constraintStart_toEndOf="@+id/image_topads"
            app:layout_constraintRight_toLeftOf="@+id/topads_right_content"
            app:layout_constraintEnd_toStartOf="@+id/topads_right_content"/>

        <FrameLayout android:id="@+id/topads_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@+id/image_topads"
            app:layout_constraintBottom_toBottomOf="@+id/image_topads"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/text_topads_saldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:visibility="gone"
                app:textViewTheme="lightPrimary"
                app:weight="medium"
                app:fontSize="small"
                tools:text="Rp 2.000.000"
                tools:visibility="gone"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/text_topads_claim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:visibility="gone"
                tools:visibility="visible"
                app:textViewTheme="lightPrimary"
                app:weight="medium"
                app:fontSize="micro"
                android:textColor="@color/tkpd_main_green"
                android:text="@string/topads_claim_label"/>
        </FrameLayout>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/text_topads_credit_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:layout_marginTop="@dimen/dp_4"
            app:textViewTheme="lightDisabled"
            app:weight="regular"
            app:fontSize="micro"
            android:text="@string/topads_claim_label"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/text_topads_credit"
            app:layout_constraintStart_toStartOf="@+id/text_topads_credit"
            app:layout_constraintRight_toRightOf="@+id/text_topads_credit"
            app:layout_constraintEnd_toEndOf="@+id/text_topads_credit"
            app:layout_constraintTop_toBottomOf="@+id/text_topads_credit"
            app:layout_constraintHorizontal_bias="0"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/text_topads_claim_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_round_orange"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_8"
            android:paddingStart="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            app:textViewTheme="darkPrimary"
            app:weight="regular"
            app:fontSize="micro"
            android:text="@string/topads_claim_label"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/text_topads_credit"
            app:layout_constraintStart_toStartOf="@+id/text_topads_credit"
            app:layout_constraintRight_toRightOf="@+id/text_topads_credit"
            app:layout_constraintEnd_toEndOf="@+id/text_topads_credit"
            app:layout_constraintTop_toBottomOf="@+id/text_topads_credit"
            app:layout_constraintHorizontal_bias="0"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>