<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dp_8"
    app:elevation="@dimen/dp_6">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/image_shop"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/dp_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_big_notif_customerapp" />

        <ImageView
            android:id="@+id/badge"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="@+id/image_shop"
            app:layout_constraintEnd_toEndOf="@+id/image_shop"
            android:visibility="gone"
            tools:src="@drawable/ic_big_notif_customerapp" />

        <TextView
            android:id="@+id/text_shop_name"
            style="@style/TextView.TitleBig.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            tools:text="Oka Coffee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.design.reputation.ShopReputationView
            android:id="@+id/shop_reputation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toBottomOf="@+id/text_shop_name" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_shop" />

        <ImageView
            android:id="@+id/image_saldo"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_saldo_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator" />

        <TextView
            android:id="@+id/text_saldo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/title_saldo_setting"
            app:layout_constraintBottom_toBottomOf="@+id/image_saldo"
            app:layout_constraintStart_toEndOf="@+id/image_saldo"
            app:layout_constraintTop_toTopOf="@+id/image_saldo"
            style="@style/TextView.Micro"/>

        <TextView
            android:id="@+id/text_saldo_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/text_saldo_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_saldo_label"
            style="@style/TextView.Small.Bold"
            tools:text="Rp 2.000.000" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>