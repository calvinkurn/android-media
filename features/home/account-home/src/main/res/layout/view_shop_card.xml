            android:layout_marginTop="@dimen/dp_8"
            app:lv_image="@drawable/ic_saldo_green"
            app:lv_image_width="@dimen/dp_24"
            app:lv_image_height="@dimen/dp_24"
            app:lv_image_margin_right="@dimen/dp_8"
            app:lv_title="@string/title_saldo_setting"
            app:lv_title_text_size="@dimen/sp_12"
            app:lv_title_color="@color/light_secondary"
            app:lv_content="Rp 2.000.000"
            app:lv_content_text_size="@dimen/sp_14"
            app:lv_content_text_style="bold"
            app:lv_content_color="@color/light_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator"/>

        <View
            android:id="@+id/separator_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_view_saldo"/>-->

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_topads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:lv_image="@drawable/ic_top_ads_speaker_green"
            app:lv_image_width="@dimen/dp_24"
            app:lv_image_height="@dimen/dp_24"
            app:lv_image_margin_right="@dimen/dp_8"
            app:lv_title="@string/title_saldo_setting"
            app:lv_title_text_size="@dimen/sp_12"
            app:lv_title_color="@color/light_secondary"
            app:lv_sub_title_color="@color/light_disabled"
            app:lv_sub_title_text_size="@dimen/sp_10"
            app:lv_content="Rp 2.000.000"
            app:lv_content_text_size="@dimen/sp_14"
            app:lv_content_text_style="bold"
            app:lv_content_color="@color/light_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>