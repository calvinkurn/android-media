<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/dp_8"
                                    app:cardCornerRadius="@dimen/dp_4"
                                    app:cardUseCompatPadding="true"
                                    app:elevation="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/image_shop"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:minHeight="@dimen/dp_50"
            android:minWidth="@dimen/dp_50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_big_notif_customerapp"/>

        <ImageView
            android:id="@+id/image_badge"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/image_shop"
            app:layout_constraintEnd_toEndOf="@+id/image_shop"
            tools:src="@drawable/ic_big_notif_customerapp"/>

        <TextView
            android:id="@+id/text_shop_name"
            style="@style/TextView.TitleMedium.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Oka Coffee"/>

        <TextView
            android:id="@+id/text_shop_verification_status"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/image_shop"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toBottomOf="@+id/text_shop_name"
            tools:text="Gagal Verifikasi"/>

        <ImageView
            android:id="@+id/shop_status_info_button"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/ic_info_black"
            app:layout_constraintTop_toTopOf="@+id/text_shop_verification_status"
            app:layout_constraintBottom_toBottomOf="@+id/text_shop_verification_status"
            app:layout_constraintLeft_toRightOf="@+id/text_shop_verification_status"/>

        <ImageView
            android:id="@+id/shop_reputation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toBottomOf="@+id/text_shop_verification_status"/>

        <com.tokopedia.design.widget.WarningTickerView
            android:id="@+id/verification_warning_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/image_shop"
            app:layout_constraintTop_toBottomOf="@+id/shop_reputation"
            tools:visibility="visible"/>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verification_warning_ticker"/>

        <!--<com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_saldo"
