<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_Background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fragment_account_setting_account_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tokopedia.design.label.LabelView
                    android:id="@+id/label_view_identity"
                    style="@style/LabelLayout"
                    android:minHeight="@dimen/unify_space_64"
                    android:paddingEnd="@dimen/unify_space_8"
                    android:paddingRight="@dimen/unify_space_8"
                    app:lv_show_arrow="true"
                    app:lv_title="@string/title_personal_data_setting"
                    app:lv_title_text_size="@dimen/unify_font_14"
                    app:lv_title_color="@color/Unify_N700"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_list_separator" />

                <com.tokopedia.design.label.LabelView
                    android:id="@+id/label_view_address"
                    style="@style/LabelLayout"
                    android:minHeight="@dimen/dp_64"
                    android:paddingEnd="@dimen/unify_space_8"
                    android:paddingRight="@dimen/unify_space_8"
                    app:lv_show_arrow="true"
                    app:lv_title="@string/title_address_setting"
                    app:lv_title_text_size="@dimen/unify_font_14"
                    app:lv_title_color="@color/Unify_N700"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_list_separator" />

                <com.tokopedia.design.label.LabelView
                    android:id="@+id/label_view_account_bank"
                    style="@style/LabelLayout"
                    android:minHeight="@dimen/unify_space_64"
                    android:paddingEnd="@dimen/unify_space_8"
                    android:paddingRight="@dimen/unify_space_8"
                    app:lv_show_arrow="true"
                    app:lv_title="@string/title_bank_account_setting"
                    app:lv_title_text_size="@dimen/unify_font_14"
                    app:lv_title_color="@color/Unify_N700"/>

                <View
                    android:id="@+id/separator_sampai"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_list_separator" />

                <com.tokopedia.design.label.LabelView
                    android:id="@+id/label_view_sampai"
                    style="@style/LabelLayout"
                    android:minHeight="@dimen/unify_space_64"
                    android:paddingEnd="@dimen/unify_space_8"
                    android:paddingRight="@dimen/unify_space_8"
                    app:lv_show_arrow="true"
                    app:lv_title="@string/title_sampai_project"
                    app:lv_title_text_size="@dimen/unify_font_14"
                    app:lv_title_color="@color/Unify_N700"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_list_separator" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_list_separator" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_account_setting_security_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:typographyWeight="bold"
                    app:typographyType="heading_4"
                    android:layout_marginStart="@dimen/unify_space_16"
                    android:layout_marginLeft="@dimen/unify_space_16"
                    android:layout_marginTop="@dimen/unify_space_24"
                    android:layout_marginBottom="@dimen/unify_space_8"
                    android:text="@string/header_privacy_account_setting" />

                <com.tokopedia.design.label.LabelView
                    android:id="@+id/label_view_password"
                    style="@style/LabelLayout"
                    android:minHeight="@dimen/unify_space_64"
                    android:paddingEnd="@dimen/unify_space_8"
                    android:paddingRight="@dimen/unify_space_8"
                    app:lv_show_arrow="true"
                    app:lv_title="@string/title_password_setting"
                    app:lv_title_text_size="@dimen/unify_font_14"
                    app:lv_title_color="@color/Unify_N700"/>

                <View
                    android:id="@+id/separator_pin"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_list_separator" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <com.tokopedia.design.label.LabelView
                        android:id="@+id/label_view_pin"
                        style="@style/LabelLayout"
                        android:minHeight="@dimen/unify_space_64"
                        android:paddingEnd="@dimen/unify_space_8"
                        android:paddingRight="@dimen/unify_space_8"
                        app:lv_show_arrow="true"
                        app:lv_title="@string/title_setting_pin"
                        app:lv_title_text_size="@dimen/unify_font_14"
                        app:lv_title_color="@color/Unify_N700"/>

                    <Space
                        android:id="@+id/space"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="0dp" />

                    <com.tokopedia.unifycomponents.Label
                        android:id="@+id/text_new"
                        app:labelTitle="NEW"
                        app:labelType="general_dark_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/space"
                        android:background="@drawable/bg_rounded_corners_red"
                        android:lineSpacingExtra="2sp"
                        android:padding="@dimen/unify_space_2"
                        android:textAllCaps="true"
                        android:textColor="@color/Unify_N0" />

                </RelativeLayout>

                <View
                    android:id="@+id/separator_biometric"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_list_separator" />

                <com.tokopedia.design.label.LabelView
                    android:id="@+id/label_view_biometric"
                    style="@style/LabelLayout"
                    android:minHeight="@dimen/dp_64"
                    android:paddingEnd="@dimen/unify_space_8"
                    android:paddingRight="@dimen/unify_space_8"
                    app:lv_show_arrow="true"
                    app:lv_title="Sidik Jari"
                    app:lv_title_text_size="14sp"
                    app:lv_title_color="@color/Unify_N700"/>

                <View
                    android:id="@+id/separator_kyc"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_list_separator" />

                <com.tokopedia.design.label.LabelView
                    android:id="@+id/label_view_kyc"
                    style="@style/LabelLayout"
                    android:minHeight="@dimen/unify_space_64"
                    android:paddingEnd="@dimen/unify_space_8"
                    android:paddingRight="@dimen/unify_space_8"
                    android:visibility="visible"
                    app:lv_show_arrow="true"
                    app:lv_title="@string/title_kyc_setting"
                    app:lv_title_text_size="14sp"
                    app:lv_title_color="@color/Unify_N700"/>

                <View
                    android:id="@+id/separator_push_notif"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_list_separator" />

                <com.tokopedia.design.label.LabelView
                    android:id="@+id/label_view_push_notif"
                    style="@style/LabelLayout"
                    android:minHeight="@dimen/layout_lvl6"
                    android:paddingEnd="@dimen/spacing_lvl3"
                    app:lv_show_arrow="true"
                    app:lv_title="@string/title_signin_with_notification"
                    app:lv_title_text_size="@dimen/fontSize_lvl3"
                    app:lv_title_color="@color/Unify_N700"/>

            </LinearLayout>
            </LinearLayout>
    </ScrollView>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/unify_space_40"
        android:layout_height="@dimen/unify_space_40"
        android:layout_centerInParent="true"
        android:visibility="visible" />

</RelativeLayout>