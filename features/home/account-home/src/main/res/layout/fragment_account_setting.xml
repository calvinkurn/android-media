<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.design.label.LabelView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/label_view_identity"
            style="@style/LabelLayout"
            android:minHeight="@dimen/dp_64"
            android:paddingRight="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            app:lv_title="@string/title_personal_data_setting"
            app:lv_title_text_size="@dimen/sp_14"
            app:lv_show_arrow="true"/>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@drawable/bg_list_separator"/>

        <com.tokopedia.design.label.LabelView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/label_view_address"
            style="@style/LabelLayout"
            android:minHeight="@dimen/dp_64"
            android:paddingRight="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            app:lv_title="@string/title_address_setting"
            app:lv_title_text_size="@dimen/sp_14"
            app:lv_show_arrow="true"/>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@drawable/bg_list_separator"/>

        <TextView style="@style/TextView.Title.Bold"
            android:text="@string/header_privacy_account_setting"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_8"/>

        <com.tokopedia.design.label.LabelView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/label_view_password"
            style="@style/LabelLayout"
            android:minHeight="@dimen/dp_64"
            android:paddingRight="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            app:lv_title="@string/title_password_setting"
            app:lv_title_text_size="@dimen/sp_14"
            app:lv_show_arrow="true"/>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@drawable/bg_list_separator"/>

    </LinearLayout>

</ScrollView>