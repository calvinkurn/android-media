<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardUseCompatPadding="true"
    app:elevation="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_12">

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_seller_saldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:lv_content="Rp 2.000.000"
            app:lv_content_color="@color/light_primary"
            app:lv_content_text_size="@dimen/sp_14"
            app:lv_content_text_style="bold"
            app:lv_image="@drawable/ic_saldo_green"
            app:lv_image_height="@dimen/dp_24"
            app:lv_image_margin_right="@dimen/dp_8"
            app:lv_image_width="@dimen/dp_24"
            app:lv_title="@string/title_seller_saldo"
            app:lv_title_color="@color/light_secondary"
            app:lv_title_text_size="@dimen/sp_12" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>