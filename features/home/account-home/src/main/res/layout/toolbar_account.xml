<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Toolbar.White"
    app:layout_scrollFlags="scroll|enterAlways">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageButton
            android:id="@+id/action_back"
            android:layout_width="@dimen/account_icon_toolbar"
            android:layout_height="@dimen/account_icon_toolbar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_back" />

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:text="Akun Saya"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/action_back"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/action_settings"
            android:layout_width="@dimen/account_icon_toolbar"
            android:layout_height="@dimen/account_icon_toolbar"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/action_inbox"
            android:layout_toLeftOf="@+id/action_inbox"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/action_inbox"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_system_action_setting_normal_24" />

        <ImageButton
            android:id="@+id/action_inbox"
            android:layout_width="@dimen/account_icon_toolbar"
            android:layout_height="@dimen/account_icon_toolbar"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/action_notification"
            android:layout_toLeftOf="@+id/action_notification"
            android:background="@null"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="@+id/action_settings"
            app:layout_constraintEnd_toStartOf="@+id/action_notification"
            app:layout_constraintTop_toTopOf="@+id/action_settings"
            app:srcCompat="@drawable/ic_system_action_inbox_grey_24" />

        <ImageButton
            android:id="@+id/action_notification"
            android:layout_width="@dimen/account_icon_toolbar"
            android:layout_height="@dimen/account_icon_toolbar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="@+id/action_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/action_settings"
            app:srcCompat="@drawable/ic_system_action_notification_normal_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>
