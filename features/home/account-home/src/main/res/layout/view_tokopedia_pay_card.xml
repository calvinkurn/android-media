<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardUseCompatPadding="true"
    app:elevation="@dimen/dp_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_tokopedia_pay"
            app:typographyType="heading_3"
            android:textColor="@color/Unify_N700_68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_tokopedia_pay_title_new"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@+id/label_tokopedia_pay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_tokopedia_pay">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_action"
                app:typographyType="body_3"
                android:textColor="@color/Unify_G400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_tokopedia_pay_action" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/layout_right"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_tokopedia_pay"
            >

            <ImageView
                android:id="@+id/card_icon_left"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:padding="0dp"
                app:layout_constraintEnd_toEndOf="@+id/text_amount_left"
                app:layout_constraintStart_toStartOf="@+id/text_amount_left"
                app:layout_constraintTop_toBottomOf="@+id/label_tokopedia_pay" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_amount_left"
                app:typographyType="heading_5"
                android:textColor="@color/Unify_N700_96"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/sp_13"
                app:layout_constraintEnd_toStartOf="@+id/text_amount_right"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_icon_left"
                tools:text="Rp 2.000.000" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_desc_left"
                app:typographyType="body_3"
                android:textColor="@color/Unify_N700_44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_lvl1"
                app:layout_constraintEnd_toEndOf="@+id/text_amount_left"
                app:layout_constraintStart_toStartOf="@+id/text_amount_left"
                app:layout_constraintTop_toBottomOf="@+id/text_amount_left"
                tools:text="@string/label_tokopedia_pay_wallet" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/layout_centre"
            app:layout_constraintStart_toEndOf="@+id/layout_left"
            app:layout_constraintTop_toBottomOf="@+id/label_tokopedia_pay">

            <ImageView
                android:id="@+id/card_icon_right"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:padding="0dp"
                app:layout_constraintEnd_toEndOf="@+id/text_amount_right"
                app:layout_constraintStart_toStartOf="@+id/text_amount_right"
                app:layout_constraintTop_toBottomOf="@+id/label_tokopedia_pay" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_amount_right"
                app:typographyType="heading_5"
                android:textColor="@color/Unify_N700_96"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/sp_13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_amount_left"
                app:layout_constraintTop_toBottomOf="@+id/card_icon_right"
                tools:text="Rp 68.43.02046" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/text_amount_right"
                app:layout_constraintStart_toStartOf="@+id/text_amount_right"
                app:layout_constraintTop_toBottomOf="@+id/text_amount_right">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_desc_right"
                    app:typographyType="body_3"
                    android:textColor="@color/Unify_N700_44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/label_tokopedia_pay_deposit"
                    app:layout_constraintEnd_toEndOf="@+id/text_amount_right"
                    app:layout_constraintStart_toStartOf="@+id/text_amount_right"
                    app:layout_constraintTop_toBottomOf="@+id/text_amount_right" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_centre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/layout_right"
            app:layout_constraintTop_toBottomOf="@+id/label_tokopedia_pay">

            <ImageView
                android:id="@+id/card_icon_centre"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:padding="0dp"
                app:layout_constraintEnd_toEndOf="@+id/text_amount_right"
                app:layout_constraintStart_toStartOf="@+id/text_amount_right"
                app:layout_constraintTop_toBottomOf="@+id/label_tokopedia_pay" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_amount_centre"
                app:typographyType="heading_5"
                android:textColor="@color/Unify_N700_96"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/sp_13"
                tools:text="Rp 200.000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/text_amount_right"
                app:layout_constraintStart_toStartOf="@+id/text_amount_right"
                app:layout_constraintTop_toBottomOf="@+id/text_amount_right">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_desc_centre"
                    app:typographyType="body_3"
                    android:textColor="@color/Unify_N700_44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="@string/label_tokopedia_pay_deposit"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/text_amount_right"
                    app:layout_constraintStart_toStartOf="@+id/text_amount_right"
                    app:layout_constraintTop_toBottomOf="@+id/text_amount_right"
                    tools:text="OVO Paylater" />

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>