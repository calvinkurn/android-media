        <TextView
            android:id="@+id/text_amount_left"
            style="@style/TextView.TitleBig.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/text_amount_right"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_icon_left"
            tools:text="Rp 2.000.000" />

        <TextView
            android:id="@+id/text_desc_left"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_tokopedia_pay_wallet"
            app:layout_constraintEnd_toEndOf="@+id/text_amount_left"
            app:layout_constraintStart_toStartOf="@+id/text_amount_left"
            app:layout_constraintTop_toBottomOf="@+id/text_amount_left" />

        <TextView
            android:id="@+id/text_amount_right"
            style="@style/TextView.TitleBig.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_amount_left"
            app:layout_constraintTop_toBottomOf="@+id/card_icon_right"
            tools:text="Rp 2.000.000" />

        <TextView
            android:id="@+id/text_desc_right"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_tokopedia_pay_deposit"
            app:layout_constraintEnd_toEndOf="@+id/text_amount_right"
            app:layout_constraintStart_toStartOf="@+id/text_amount_right"
            app:layout_constraintTop_toBottomOf="@+id/text_amount_right" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>