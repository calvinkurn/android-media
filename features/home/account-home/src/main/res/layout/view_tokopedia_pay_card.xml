<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    app:elevation="@dimen/dp_6">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/label_tokopedia_pay"
            style="@style/TextView.TitleBig.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_tokopedia_pay_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_action"
            style="@style/TextView.Micro.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_tokopedia_pay_see_all"
            app:layout_constraintBottom_toBottomOf="@+id/label_tokopedia_pay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_tokopedia_pay" />

        <ImageView
            android:id="@+id/card_icon_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:padding="0dp"
            android:src="@drawable/ic_tokocash_circle"
            app:layout_constraintEnd_toEndOf="@+id/text_amount_left"
            app:layout_constraintStart_toStartOf="@+id/text_amount_left"
            app:layout_constraintTop_toBottomOf="@+id/label_tokopedia_pay" />

