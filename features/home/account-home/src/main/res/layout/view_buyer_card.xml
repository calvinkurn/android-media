<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardUseCompatPadding="true"
    app:elevation="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/image_profile_completed"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:clickable="false"
            android:focusable="false"
            android:minWidth="@dimen/dp_50"
            android:minHeight="@dimen/dp_50"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_profile_progress"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:clickable="false"
            android:focusable="false"
            android:padding="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_big_notif_customerapp"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/circular_progress_bar"
            style="@style/ProgressBar.Tokopedia"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:clickable="false"
            android:focusable="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:rotation="-90"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:progress="55"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ic_affiliate_byme"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_byme_blue"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/text_username"
            app:layout_constraintStart_toEndOf="@+id/image_profile_progress"
            app:layout_constraintTop_toTopOf="@+id/text_username" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/text_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
            app:fontSize="title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_affiliate_byme"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="@dimen/dp_16"
            app:weight="medium"
            tools:text="Young Lex Le Bron James Syaiful Amir Hutagalung" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/text_profile_completion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible"
            app:fontSize="micro"
            app:layout_constraintStart_toStartOf="@+id/text_username"
            app:layout_constraintTop_toBottomOf="@+id/text_username"
            app:textViewTheme="lightSecondary"
            tools:text="Kelengkapan Profile 75%" />

        <View
            android:id="@+id/holder_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@+id/by_me_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/by_me_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_button_white_border"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="@string/curate_product_by_me"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_11"
            app:layout_constraintTop_toBottomOf="@+id/image_profile_progress" />

        <ImageView
            android:id="@+id/image_tokopoint"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_tokopoint"
            app:layout_constraintBottom_toBottomOf="@+id/text_tokopoint_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_tokopoint" />

        <TextView
            android:id="@+id/label_tokopoint"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/label_user_tokopoint"
            app:layout_constraintStart_toEndOf="@+id/image_tokopoint"
            app:layout_constraintTop_toBottomOf="@+id/by_me_button" />

        <TextView
            android:id="@+id/text_tokopoint_amount"
            style="@style/TextView.Small.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintStart_toEndOf="@+id/image_tokopoint"
            app:layout_constraintTop_toBottomOf="@+id/label_tokopoint"
            tools:text="50.000 pt" />


        <View
            android:id="@+id/holder_tokopoint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/text_tokopoint_amount"
            app:layout_constraintEnd_toEndOf="@+id/label_tokopoint"
            app:layout_constraintStart_toStartOf="@+id/image_tokopoint"
            app:layout_constraintTop_toTopOf="@+id/label_tokopoint" />

        <View
            android:id="@+id/divider"
            android:layout_width="0.5dp"
            android:layout_height="32dp"
            android:background="@color/grey_300"
            app:layout_constraintBottom_toBottomOf="@+id/holder_tokopoint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/holder_tokopoint" />


        <ImageView
            android:id="@+id/image_voucher"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_voucher"
            app:layout_constraintBottom_toBottomOf="@+id/text_voucher_amount"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toTopOf="@+id/label_voucher" />

        <TextView
            android:id="@+id/label_voucher"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_16"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/label_user_voucher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_voucher"
            app:layout_constraintTop_toBottomOf="@+id/by_me_button" />

        <TextView
            android:id="@+id/text_voucher_amount"
            style="@style/TextView.Small.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/label_tokopoint_see_voucher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_voucher"
            app:layout_constraintTop_toBottomOf="@+id/label_voucher" />


        <View
            android:id="@+id/holder_coupon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/text_voucher_amount"
            app:layout_constraintEnd_toEndOf="@+id/text_voucher_amount"
            app:layout_constraintStart_toStartOf="@+id/image_voucher"
            app:layout_constraintTop_toTopOf="@+id/label_voucher" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>