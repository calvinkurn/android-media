<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/viewCardContainer"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_profile_completed"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:minWidth="@dimen/dp_50"
        android:minHeight="@dimen/dp_50"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/desc_image_profile_completed" />

    <ImageView
        android:id="@+id/ic_affiliate_byme"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/layout_username"
        app:layout_constraintStart_toEndOf="@+id/image_profile_completed"
        app:layout_constraintTop_toTopOf="@+id/layout_username"
        app:srcCompat="@drawable/ic_byme_blue"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sellerCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/holder_tokopoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/card_holder"
                app:layout_constraintEnd_toStartOf="@+id/holder_coupon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@id/card_holder"
                app:layout_constraintTop_toTopOf="@+id/card_holder">

                <ImageView
                    android:id="@+id/image_tokopoint"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="45dp"
                    android:contentDescription="@string/desc_image_tokopoint" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/label_tokopoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:lines="1"
                    android:text="@string/label_user_tokopoint"
                    android:textColor="@color/Unify_N400"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/image_tokopoint"
                    app:layout_constraintStart_toStartOf="@+id/image_tokopoint"
                    app:layout_constraintTop_toBottomOf="@+id/image_tokopoint"
                    app:typographyType="body_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_tokopoint_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_6"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:lines="1"
                    android:textColor="@color/Unify_N700_96"
                    app:layout_constraintEnd_toEndOf="@+id/label_tokopoint"
                    app:layout_constraintStart_toStartOf="@+id/label_tokopoint"
                    app:layout_constraintTop_toBottomOf="@+id/label_tokopoint"
                    app:typographyType="heading_5"
                    tools:text="50.000 pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/holder_coupon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/card_holder"
                app:layout_constraintEnd_toStartOf="@+id/holder_tokomember"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/holder_tokopoint"
                app:layout_constraintTop_toTopOf="@+id/card_holder">

                <ImageView
                    android:id="@+id/image_voucher"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="45dp"
                    android:contentDescription="@string/desc_image_voucher" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/label_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:lines="1"
                    android:text="@string/label_user_voucher"
                    android:textColor="@color/Unify_N400"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/image_tokopoint"
                    app:layout_constraintStart_toStartOf="@+id/image_tokopoint"
                    app:layout_constraintTop_toBottomOf="@+id/image_tokopoint"
                    app:typographyType="body_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_voucher_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_6"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:lines="1"
                    android:textColor="@color/Unify_N700_96"
                    app:layout_constraintEnd_toEndOf="@+id/label_tokopoint"
                    app:layout_constraintStart_toStartOf="@+id/label_tokopoint"
                    app:layout_constraintTop_toBottomOf="@+id/label_tokopoint"
                    app:typographyType="heading_5"
                    tools:text="50.000 pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/holder_tokomember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/card_holder"
                app:layout_constraintEnd_toEndOf="@+id/card_holder"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/holder_coupon"
                app:layout_constraintTop_toTopOf="@+id/card_holder">

                <ImageView
                    android:id="@+id/image_tokomember"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="45dp"
                    android:contentDescription="@string/desc_image_tokomember" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/label_tokomember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:lines="1"
                    android:text="@string/label_user_tokomember"
                    android:textColor="@color/Unify_N400"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/image_tokopoint"
                    app:layout_constraintStart_toStartOf="@+id/image_tokopoint"
                    app:layout_constraintTop_toBottomOf="@+id/image_tokopoint"
                    app:typographyType="body_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_tokomember_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_6"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:lines="1"
                    android:textColor="@color/Unify_N700_96"
                    app:layout_constraintEnd_toEndOf="@+id/label_tokopoint"
                    app:layout_constraintStart_toStartOf="@+id/label_tokopoint"
                    app:layout_constraintTop_toBottomOf="@+id/label_tokopoint"
                    app:typographyType="heading_5"
                    tools:text="50.000 pt" />
            </LinearLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@color/Unify_N100"
                app:layout_constraintBottom_toBottomOf="@+id/card_holder"
                app:layout_constraintEnd_toStartOf="@+id/holder_coupon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/holder_tokopoint"
                app:layout_constraintTop_toTopOf="@+id/card_holder"
                tools:layout_editor_absoluteY="0dp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@color/Unify_N100"
                app:layout_constraintBottom_toBottomOf="@+id/card_holder"
                app:layout_constraintEnd_toStartOf="@+id/holder_tokomember"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/holder_coupon"
                app:layout_constraintTop_toTopOf="@+id/card_holder"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/by_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:background="@drawable/bg_button_white_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/layout_lvl1"
        android:paddingTop="@dimen/layout_lvl1"
        android:paddingRight="@dimen/layout_lvl1"
        android:paddingBottom="@dimen/layout_lvl1"
        android:text="@string/create_post_by_me"
        android:textSize="@dimen/fontSize_lvl2"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/text_profile_completion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_username" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_username"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/text_profile_completion"
        app:layout_constraintStart_toEndOf="@+id/ic_affiliate_byme"
        app:layout_constraintTop_toTopOf="@id/image_profile_completed">
      
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_14"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_96"
            app:layout_goneMarginStart="@dimen/dp_8"
            app:typographyType="heading_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Young Lex Le Bron" />
      
        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_warning_name"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:visibility="gone"
            app:icon_color_light_enable="@color/Unify_R500"
            app:icon_name="WARNING"
            app:layout_constraintLeft_toRightOf="@id/text_username"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
      
    </androidx.constraintlayout.widget.ConstraintLayout>
  
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMemberBadge"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/image_profile_completed"
        app:layout_constraintStart_toStartOf="@+id/layout_username"
        app:layout_constraintTop_toBottomOf="@+id/layout_username" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_profile_completion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        app:drawableRightCompat="@drawable/ic_system_action_arrow_right_grayscale_24"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/Unify_N200"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/ivMemberBadge"
        app:layout_constraintEnd_toEndOf="@+id/layout_username"
        app:layout_constraintStart_toEndOf="@+id/ivMemberBadge"
        app:layout_constraintTop_toBottomOf="@+id/layout_username"
        app:layout_constraintTop_toTopOf="@id/ivMemberBadge"
        app:typographyType="body_2"
        tools:text="Gold Member " />

    <FrameLayout
        android:id="@+id/sellerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_profile_completion">
        <include
            android:id="@+id/sellerAccountCard"
            layout="@layout/layout_seller_account_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_home_seller_account_height"
            android:visibility="gone" />

        <include
            android:id="@+id/sellerOpenShopCard"
            layout="@layout/layout_seller_open_shop_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_home_seller_open_shop_height"
            android:visibility="gone" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
