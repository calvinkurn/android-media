<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pm_card_container"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4"
    app:elevation="@dimen/dp_16"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_pm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/dp_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_pm_line_shades" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_pm_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintStart_toEndOf="@id/image_view_pm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_view_pm"
            app:layout_constraintHorizontal_bias="0"
            tools:text="Pengaturan Power Merchant"
            app:fontSize="micro"
            android:textColor="@color/tkpd_main_green"
            android:layout_marginStart="@dimen/dp_10" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_pm_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontSize="micro"
            app:layout_constraintTop_toBottomOf="@id/txt_pm_setting"
            app:layout_constraintStart_toStartOf="@id/txt_pm_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="@id/image_view_pm"
            tools:text="Kelola toko dengan fitur eksklusif" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>