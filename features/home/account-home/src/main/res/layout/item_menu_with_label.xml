<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/text_view_title"
        style="@style/TextView.Title"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:maxLines="1"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingLeft="@dimen/layout_lvl2"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintBottom_toTopOf="@+id/text_view_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginBottom="0dp"
        app:layout_goneMarginEnd="@dimen/dp_8"
        app:layout_goneMarginRight="@dimen/dp_8"
        tools:ignore="RtlSymmetry"
        tools:text="@string/app_name" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_menu"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:textSize="@dimen/sp_14"
        app:labelType="general_light_orange"
        app:layout_constraintBottom_toBottomOf="@id/text_view_title"
        app:layout_constraintStart_toEndOf="@id/text_view_title"
        app:layout_constraintTop_toTopOf="@id/text_view_title"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/text_view_description"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/layout_lvl2"
        android:maxLines="1"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingLeft="@dimen/layout_lvl2"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_view_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title"
        tools:ignore="RtlSymmetry"
        tools:text="Test something really use full" />

    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@drawable/bg_list_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_arrow_right_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>