query BuyerUserAttribute($userID: Int!) {
  status
  userShopInfo {
    info {
      shop_id
      shop_name
    }
    stats {
      shop_item_sold
    }
  }
  profile {
    user_id
    first_name
    full_name
    email
    gender
    bday
    age
    phone
    register_date
    profile_picture
    completion
  }
  wallet {
    linked
    balance
    rawBalance
    text
    total_balance
    raw_total_balance
    hold_balance
    raw_hold_balance
    redirect_url
    applinks
    ab_tags {
      tag
    }
    action {
      text
      redirect_url
      applinks
      visibility
    }
  }
  paymentAdminProfile {
    is_purchased_marketplace
    is_purchased_digital
    is_purchased_ticket
    last_purchase_date
  }
  topadsDeposit(userID: $userID) {
    topads_amount
    is_topads_user
  }
  notifications {
    total_cart
    total_notif
    resolution
    shop_id
    inbox {
      talk
      ticket
      review
      friend
      wishlist
      message
      reputation
    }
    sales {
      newOrder
      shippingStatus
      shippingConfirm
    }
    purchase {
      reorder
      paymentConfirm
      orderStatus
      deliveryConfirm
    }
    resolution_as {
      buyer
      seller
    }
    chat {
      unreads
    }
  }
}
