<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="Pembayaran"
                android:textColor="@color/chorcoal_black"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:id="@+id/btn_load_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_read_more"
                android:layout_centerVertical="true"
                android:textColor="#03ac0e"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40">

                    <ImageView
                        android:id="@+id/img_waiting_confirm"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/txt_counter_waiting_confirm"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:textSize="@dimen/sp_10"
                        tools:text="99+"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:visibility="visible"
                        android:visibility="gone"
                        android:background="@drawable/circle_red"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_waiting_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    tools:text="Menunggu Konfirmasi"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40">

                    <ImageView
                        android:id="@+id/img_order_process"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/txt_counter_order_process"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:textSize="@dimen/sp_10"
                        tools:text="99+"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:visibility="visible"
                        android:visibility="gone"
                        android:background="@drawable/circle_red"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_order_process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    tools:text="Menunggu Konfirmasi"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40">

                    <ImageView
                        android:id="@+id/img_goods_sent"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/txt_counter_goods_sent"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:textSize="@dimen/sp_10"
                        tools:text="99+"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:visibility="visible"
                        android:visibility="gone"
                        android:background="@drawable/circle_red"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_goods_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    tools:text="Menunggu Konfirmasi"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40">

                    <ImageView
                        android:id="@+id/img_goods_receive"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/txt_counter_goods_receive"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:textSize="@dimen/sp_10"
                        tools:text="99+"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:visibility="visible"
                        android:visibility="gone"
                        android:background="@drawable/circle_red"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_goods_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    tools:text="Menunggu Konfirmasi"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/divider_notif_big"
        android:layout_marginTop="@dimen/dp_16"/>

</LinearLayout>