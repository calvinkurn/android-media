<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:id="@+id/line_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_NN50"/>

    <com.tokopedia.navigation.presentation.customview.LottieBottomNavbar android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_48"
        tools:layout_height="100dp"
        android:elevation="15dp"
        android:orientation="vertical"
        app:buttonColor="@color/Unify_NN600"
        app:buttonContainerBackgroundColor="@color/Unify_Background"
        app:buttonsHeight="@dimen/unify_space_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:offscreenPageLimit="4"
        app:setViewPagerSwipeable="false"
        app:navbarElevation="15dp"
        app:viewPagerBackground="@color/Unify_Background"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" />

    <com.tokopedia.navigation_common.ui.DynamicHomeNavBarView
        android:id="@+id/dynamic_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
