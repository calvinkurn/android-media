<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Pembayaran"
            android:textColor="#31353b"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/btn_load_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Semua"
            android:layout_centerVertical="true"
            android:textColor="#03ac0e"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18">

        <TextView
            android:id="@+id/txt_waiting_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menunggu Pembayaran"
            android:textColor="#31353b"/>

        <TextView
            android:id="@+id/txt_counter_waiting_payment"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:textSize="@dimen/sp_10"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            tools:text="99+"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            tools:visibility="visible"
            android:visibility="gone"
            android:background="@drawable/circle_red"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30">

                <ImageView
                    android:id="@+id/img_waiting_confirm"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txt_counter_waiting_confirm"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:textSize="@dimen/sp_10"
                    tools:text="99+"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:background="@drawable/circle_red"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_waiting_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Menunggu Konfirmasi"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30">

                <ImageView
                    android:id="@+id/img_order_process"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txt_counter_order_process"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:textSize="@dimen/sp_10"
                    tools:text="99+"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:background="@drawable/circle_red"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_order_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Menunggu Konfirmasi"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30">

                <ImageView
                    android:id="@+id/img_goods_sent"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txt_counter_goods_sent"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:textSize="@dimen/sp_10"
                    tools:text="99+"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:background="@drawable/circle_red"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_goods_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Menunggu Konfirmasi"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30">

                <ImageView
                    android:id="@+id/img_goods_receive"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txt_counter_goods_receive"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:textSize="@dimen/sp_10"
                    tools:text="99+"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:background="@drawable/circle_red"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_goods_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Menunggu Konfirmasi"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>