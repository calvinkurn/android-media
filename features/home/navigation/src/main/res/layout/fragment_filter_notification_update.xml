<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_6"
    >

    <ImageView
        android:id="@+id/close_cross"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:tint="@color/text_disabled"
        android:src="@drawable/ucrop_ic_cross"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/charcoal_grey_88"
        android:lineSpacingExtra="6sp"
        android:text="@string/text_title_filter"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@id/close_cross"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/medium_green"
        android:lineSpacingExtra="6sp"
        android:text="@string/text_title_reset"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        />

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/section_filter_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/section_filter_list"
        app:cardCornerRadius="@dimen/dp_8"
        android:elevation="@dimen/dp_0"
        app:cardElevation="@dimen/dp_0"
        app:cardUseCompatPadding="false">
        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_button_show_filter"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/medium_green"
            android:minHeight="@dimen/dp_40"
            />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>