<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LottieBottomNavbar">
        <attr name="buttonContainerBackgroundColor" format="color" />
        <attr name="buttonsHeight" format="dimension" />
        <attr name="itemCount" format="integer" />
        <attr name="offscreenPageLimit" format="integer" />
        <attr name="setViewPagerSwipeable" format="boolean" />
        <attr name="viewPagerBackground" format="color" />
        <attr name="activeButtonColor" format="color" />
        <attr name="buttonColor" format="color" />
        <attr name="navbarElevation" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LabelView">
        <attr name="lv_image" format="reference" />
        <attr name="lv_image_width" format="dimension" />
        <attr name="lv_image_height" format="dimension" />
        <attr name="lv_image_margin_right" format="dimension" />
        <attr name="lv_title" format="string" />
        <attr name="lv_badge" format="string" />
        <attr name="lv_title_text_size" format="dimension" />
        <attr name="lv_title_color" format="color" />
        <attr name="lv_title_min_width" format="dimension" />
        <attr name="lv_title_text_style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="lv_sub_title" format="string" />
        <attr name="lv_sub_title_text_size" format="dimension" />
        <attr name="lv_sub_title_color" format="color" />
        <attr name="lv_content" format="string" />
        <attr name="lv_content_color" format="color" />
        <attr name="lv_content_text_size" format="dimension" />
        <attr name="lv_content_max_lines" format="integer" />
        <attr name="lv_content_text_style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <!-- value from 0 to 1 -->
        <attr name="lv_content_max_width_percentage" format="float" />
        <attr name="lv_show_arrow" format="boolean"/>
    </declare-styleable>
</resources>