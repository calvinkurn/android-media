<resources>
    <style name="TokopediaTransparentStatus" parent="Theme.Tokopedia3">
        <item name="android:windowBackground">@android:color/white</item>
<!--        <item name="android:windowActivityTransitions">true</item>-->
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Tabs.Notification">
        <item name="footerIndicatorHeight">1dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="footerColor">@color/tkpd_main_green</item>
        <item name="android:textColor">@color/tkpd_main_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationMenuItemTextAppearance">
        <item name="android:ellipsize">end</item>
    </style>
</resources>
