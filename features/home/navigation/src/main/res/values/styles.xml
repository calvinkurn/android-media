<resources>

    <style name="Tabs.Notification">
        <item name="footerIndicatorHeight">1dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="footerColor">@color/navigation_dms_footer_color</item>
        <item name="android:textColor">@color/navigation_dms_footer_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationMenuItemTextAppearance">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TokopediaTransparentStatus" parent="Theme.Tokopedia3">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>
