<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/pointIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_24"
        android:contentDescription="@null"
        android:src="@drawable/icon_education_point"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pointTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pointIcon"
        app:layout_constraintTop_toTopOf="@id/pointIcon"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Buat iklan dengan mudah" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pointDescription"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        android:layout_marginTop="@dimen/unify_space_4"
        app:layout_constraintStart_toStartOf="@id/pointTitle"
        app:layout_constraintTop_toBottomOf="@id/pointTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Iklan ini akan menampilkan produkmu secara spesifik dan bisa pilih pengaturan otomatis supaya bisa beriklan tanpa ribet. "/>

</androidx.constraintlayout.widget.ConstraintLayout>
