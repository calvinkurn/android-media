<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_YN50">

    <include layout="@layout/partial_base_toolbar" />
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/faq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/topads_onboarding_frequently_asked_questions"
        android:textSize="18sp"
        app:typographyType="heading_3"
        app:layout_constraintBottom_toTopOf="@id/rv_faq"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:background="@color/Unify_NN0"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/Unify_NN0"
        android:paddingTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/submit" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        android:text="@string/topads_onboarding_create_new_ads_cta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>