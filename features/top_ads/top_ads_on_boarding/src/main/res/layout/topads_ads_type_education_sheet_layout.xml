<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pointList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginBottom="@dimen/unify_space_16"
        app:layout_constraintBottom_toTopOf="@id/educationBottomSheetButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/topads_edcation_point_item_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topads_dimen_1dp"
        android:background="@drawable/bottom_sheet_button_shadow"
        android:layout_marginBottom="@dimen/unify_space_8"
        app:layout_constraintStart_toStartOf="@id/educationBottomSheetButton"
        app:layout_constraintStart_toEndOf="@id/educationBottomSheetButton"
        app:layout_constraintBottom_toTopOf="@id/educationBottomSheetButton"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/educationBottomSheetButton"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/unify_space_8"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        tools:text="Pilih Iklan Produk"/>

</androidx.constraintlayout.widget.ConstraintLayout>