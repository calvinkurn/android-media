<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_YN50">

        <View
            android:id="@+id/container_green"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/Unify_GN50"
            app:layout_constraintBottom_toBottomOf="@id/image"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/auto_ps_promotion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topads_onboarding_promotion_msg"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_3"
            app:typographyWeight="bold"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/article_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topads_autops_onboarding_article_link"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/auto_ps_promotion_title"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/article_link"
            tools:layout_height="100dp"/>

        <View
            android:id="@+id/projection_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/Unify_NN0"
            app:layout_constraintBottom_toTopOf="@id/faq_title"
            app:layout_constraintTop_toBottomOf="@id/image"
            android:layout_marginBottom="16dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/projection_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topads_onboarding_promotion_potential_msg"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintTop_toBottomOf="@id/container_green"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tampil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/tampil"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toStartOf="@id/klik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/projection_title"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/klik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/klik"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toStartOf="@id/penjualan"
            app:layout_constraintStart_toEndOf="@id/tampil"
            app:layout_constraintTop_toTopOf="@id/tampil"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/penjualan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/penjualan"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/klik"
            app:layout_constraintTop_toTopOf="@id/tampil"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tampil_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+200%"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toStartOf="@id/klik_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tampil"
            app:typographyType="display_1"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/klik_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+100%"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toStartOf="@id/penjualan_value"
            app:layout_constraintStart_toEndOf="@id/tampil_value"
            app:layout_constraintTop_toTopOf="@id/tampil_value"
            app:typographyType="display_1"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/penjualan_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+15%"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/klik_value"
            app:layout_constraintTop_toTopOf="@id/tampil_value"
            app:typographyType="display_1"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/bottom_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topads_onboarding_promotion_note"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN950"
            app:typographyType="small"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/tampil_value"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/Unify_NN0"
            app:layout_constraintBottom_toBottomOf="@id/rv_faq"
            app:layout_constraintEnd_toEndOf="@id/rv_faq"
            app:layout_constraintStart_toStartOf="@id/rv_faq"
            app:layout_constraintTop_toTopOf="@id/faq_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/faq_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topads_onboarding_frequently_asked_questions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_note"
            app:typographyType="heading_3"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:layout_marginHorizontal="32dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/faq_title"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@color/Unify_NN0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_faq" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topads_onboarding_create_new_ads_cta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_faq"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>