<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_info_ads"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/topads_detail_sheet_top_rounded_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/TextView.TitleMedium.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/rincian_iklan" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/subtitle"
                style="@style/TextView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@+id/img_thumb"
                app:height_weight="0.8"
                app:width_weight="0.4"
                app:use_gradient="true"
                tools:text="iphone 6" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/title"
                style="@style/TextView.Title.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_thumb"
                app:use_gradient="true"
                app:height_weight="0.8"
                app:width_weight="0.8"
                tools:text="Rp 600 per klik" />

            <com.tokopedia.topads.detail_sheet.ShimmeringRoundedImageView
                android:id="@+id/img_thumb"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                app:use_gradient="true"
                tools:src="@tools:sample/avatars" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_250" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tampil" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/txt_tampil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:use_gradient="true"
                app:height_weight="0.8"
                app:width_weight="0.5"
                tools:text="46,6rb" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_250" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_klik"
                android:text="@string/klik" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/txt_klik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:use_gradient="true"
                app:height_weight="0.8"
                app:width_weight="0.5"
                tools:text="42,6rb" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_250" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_terjual"
                android:text="@string/terjual" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/txt_terjual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:use_gradient="true"
                app:height_weight="0.8"
                app:width_weight="0.5"
                tools:text="46,6rb" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_250" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            style="@style/TextView.Small.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/status" />

        <TextView
            android:id="@+id/txt_active_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Micro10"
            android:layout_marginRight="@dimen/dp_5"
            android:text="@string/aktif" />
        <Switch
            android:id="@+id/toggle_switch_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_250" />

    <TextView
        android:id="@+id/action_edit_ads"
        style="@style/TextView.Small.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="@string/detail_iklan" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_250" />

    <TextView
        android:id="@+id/action_to_topads_dashboard"
        style="@style/TextView.Small.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="@string/ke_dashboard_topads" />

</LinearLayout>