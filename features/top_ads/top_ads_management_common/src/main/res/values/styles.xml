<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TopadsProductSortRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/topads_create_radio_btn_sort_selector</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#F531353B</item>
    </style>
    <style name="TopadsProductFilterRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/topads_radio_btn_filter_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/topads_text_filter_color_selector</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CreateAdsBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CreateAdsBottomSheetStyle</item>
    </style>

    <style name="CreateAdsBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">1000dp</item>
    </style>

    <style name="CardView.CountView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="typographyType">body_3</item>
        <item name="typographyWeight">bold</item>
        <item name="android:textColor">@color/topads_heading_color</item>
    </style>

    <style name="CardView.Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="typographyWeight">reguler</item>
        <item name="typographyType">small</item>
        <item name="android:textColor">@color/topads_common_select_color_unchecked</item>
    </style>


    <style name="TopAdsTabTheme">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SheetTitleStyle">
        <item name="typographyType">body_3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="typographyWeight">bold</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>

    </style>

    <style name="SheetDescStyle">
        <item name="typographyType">body_3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
    </style>
</resources>