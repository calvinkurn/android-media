<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TopadsProductSortRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/topads_create_radio_btn_sort_selector</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#F531353B</item>
    </style>
    <style name="TopadsProductFilterRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/topads_radio_btn_filter_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/topads_text_filter_color_selector</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CreateAdsBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CreateAdsBottomSheetStyle</item>
    </style>

    <style name="CreateAdsBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">1000dp</item>
    </style>

    <style name="TopAdsTabTheme">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>