<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="12dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageUnify"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="@string/topads_autoads_advantage_title_1"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageUnify"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/topads_autoads_advantage_body_1"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:typographyType="paragraph_3" />

    <androidx.legacy.widget.Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/body"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageUnify_2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/body_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="@string/topads_autoads_advantage_title_2"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageUnify"
        app:layout_constraintTop_toBottomOf="@id/space"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/body_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/topads_autoads_advantage_body_2"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@id/title_2"
        app:layout_constraintStart_toStartOf="@id/title_2"
        app:layout_constraintTop_toBottomOf="@+id/title_2"
        app:typographyType="paragraph_3" />

    <androidx.legacy.widget.Space
        android:id="@+id/space_2"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/body_2" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageUnify_3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/body_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="@string/topads_autoads_advantage_title_3"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageUnify"
        app:layout_constraintTop_toBottomOf="@id/space_2"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/body_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/topads_autoads_advantage_body_3"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@id/title_3"
        app:layout_constraintStart_toStartOf="@id/title_3"
        app:layout_constraintTop_toBottomOf="@+id/title_3"
        app:typographyType="paragraph_3" />

    <androidx.legacy.widget.Space
        android:id="@+id/space_3"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/body_3"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageUnify_4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/body_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="@string/topads_autoads_advantage_title_4"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageUnify"
        app:layout_constraintTop_toBottomOf="@id/space_3"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/body_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/topads_autoads_advantage_body_4"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@id/title_4"
        app:layout_constraintStart_toStartOf="@id/title_4"
        app:layout_constraintTop_toBottomOf="@+id/title_4"
        app:typographyType="paragraph_3" />

    <androidx.legacy.widget.Space
        android:id="@+id/space_4"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/body_4"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/auto_ads_advantage_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/topads_autoads_advantage_cta"
        app:layout_constraintTop_toBottomOf="@+id/space_4" />

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/auto_ads_advantage_cta"/>
</androidx.constraintlayout.widget.ConstraintLayout>