<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_lvl6">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtBidTitleEditKeyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autobid_otomatis_title"
        android:textAllCaps="true"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_6" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivBidInfoEditKeyword"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:src="@drawable/iconunify_information"
        android:tint="@color/Unify_NN900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtBidTitleEditKeyword"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
        android:id="@+id/switchBidEditKeyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>