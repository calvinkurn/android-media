<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/Unify_N0">


    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/tooltip_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tooltip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:textAllCaps="false"
        android:textColor="@color/light_G500"
        app:layout_constraintBottom_toBottomOf="@id/tooltip_icon"
        app:layout_constraintStart_toEndOf="@id/tooltip_icon"
        app:layout_constraintTop_toTopOf="@id/tooltip_icon"
        app:typographyType="heading_6" />

</androidx.constraintlayout.widget.ConstraintLayout>