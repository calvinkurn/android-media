<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Three Line List" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/ad_item_title"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/ad_item_title"
        app:typographyType="display_3"
        tools:text="Group 01" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconUnify"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:rotation="90"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_item_subtitle_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/Unify_NN600"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/ad_item_title"
        app:layout_constraintTop_toBottomOf="@id/ad_item_title"
        app:typographyType="display_3"
        tools:text="Biaya iklan"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_item_subtitle_one_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/ad_item_subtitle_one"
        app:typographyType="display_3"
        tools:text="Rp800 per klik"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_item_subtitle_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/Unify_NN600"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/ad_item_subtitle_one"
        app:layout_constraintTop_toBottomOf="@id/ad_item_subtitle_one"
        app:typographyType="display_3"
        tools:text="Kata Kunci"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_item_subtitle_two_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/ad_item_subtitle_two"
        app:typographyType="display_3"
        tools:text="10 kata kunci\n
Rp400 - Rp800 per klik"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="@color/Unify_NN100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ad_item_subtitle_two_value" />
</androidx.constraintlayout.widget.ConstraintLayout>

