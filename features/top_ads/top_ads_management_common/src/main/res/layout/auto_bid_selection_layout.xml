<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/atur_otomatis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:id="@+id/radiobtn_otomatis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/top_ads_common_dp_20"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:checked="true"
            android:clickable="false"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_otomatis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/top_ads_common_dp_10"
            android:text="@string/autobid_otomatis_title"
            app:layout_constraintStart_toEndOf="@+id/radiobtn_otomatis"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/otomatis_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:background="@drawable/bg_unify_g200_corner_3dp"
            android:paddingHorizontal="@dimen/spacing_lvl2"
            android:paddingVertical="@dimen/spacing_lvl1"
            android:text="@string/top_ads_auto_bid_lebih_praktis"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/fontSize_lvl1"
            app:layout_constraintBottom_toBottomOf="@id/title_otomatis"
            app:layout_constraintCircleRadius="@dimen/spacing_lvl4"
            app:layout_constraintStart_toEndOf="@id/title_otomatis"
            app:layout_constraintTop_toTopOf="@id/title_otomatis" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/otomatis_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/top_ads_common_dp_1"
            android:text="@string/top_ads_auto_bid_learn_more"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/fontSize_lvl2"
            app:layout_constraintStart_toStartOf="@id/desc_otomatis"
            app:layout_constraintTop_toBottomOf="@id/desc_otomatis"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/desc_otomatis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:text="@string/autobid_otomatis_desc"
            app:layout_constraintStart_toEndOf="@+id/radiobtn_otomatis"
            app:layout_constraintTop_toBottomOf="@+id/title_otomatis"
            app:typographyType="body_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl1"
        android:layout_marginStart="@dimen/top_ads_common_dp_80"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atur_otomatis" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/atur_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:padding="@dimen/spacing_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:id="@+id/radiobtn_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/top_ads_common_dp_20"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:clickable="false"
            android:padding="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/top_ads_common_dp_10"
            android:text="@string/autobid_manual_title"
            app:layout_constraintStart_toEndOf="@+id/radiobtn_manual"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="bold" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/desc_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:text="@string/autobid_manual_desc"
            app:layout_constraintStart_toEndOf="@+id/radiobtn_manual"
            app:layout_constraintTop_toBottomOf="@+id/title_manual"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/manual_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/top_ads_common_dp_1"
            android:text="@string/top_ads_auto_bid_learn_more"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/fontSize_lvl2"
            app:layout_constraintStart_toStartOf="@id/desc_manual"
            app:layout_constraintTop_toBottomOf="@id/desc_manual"
            app:typographyType="body_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.tokopedia.unifycomponents.floatingbutton.FloatingButtonUnify
        android:id="@+id/tip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:fbType="group"
        app:layout_constraintBottom_toTopOf="@+id/save_autobid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/save_autobid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:padding="@dimen/spacing_lvl4"
        android:text="@string/lanjutkan"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />
</androidx.constraintlayout.widget.ConstraintLayout>