<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/keywordName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="@tools:sample/first_names" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/keywordData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="@string/topads_create_keyword_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/keywordName"
            app:typographyType="body_3"
            tools:text="Specific" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typeKeyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/keywordData"
            app:typographyType="body_3"
            tools:text="Luas" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/editType"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            app:icon_color_light_enable="@color/Unify_GN600"
            app:icon_name="EDIT"
            app:layout_constraintStart_toEndOf="@id/typeKeyword"
            app:layout_constraintBottom_toBottomOf="@id/typeKeyword" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/keywordBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/editType"
            app:typographyType="body_3"
            tools:text="800" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/editBudget"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            app:icon_color_light_enable="@color/Unify_GN600"
            app:icon_name="EDIT"
            app:layout_constraintStart_toEndOf="@id/keywordBudget"
            app:layout_constraintBottom_toBottomOf="@id/keywordBudget" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btnDelete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            app:icon_name="DELETE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/editType" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>
