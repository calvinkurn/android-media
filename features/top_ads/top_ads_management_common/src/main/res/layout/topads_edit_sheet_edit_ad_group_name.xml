<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unify_text_field_label="@string/top_ads_create_edit_ad_group_name_bottom_sheet_label"
        app:unify_text_field_label_static="true"
        app:unify_text_field_input_type="text" />
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/edit_ad_group_name_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/top_ads_create_edit_ad_group_name_bottom_sheet_cta"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

</LinearLayout>