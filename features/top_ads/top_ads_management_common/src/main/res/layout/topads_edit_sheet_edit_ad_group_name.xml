<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unify_text_field_input_type="text"
        app:unify_text_field_label="@string/top_ads_create_edit_ad_group_name_bottom_sheet_label"
        app:unify_text_field_label_static="true" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beri nama berdasarkan kategori atau tema iklanmu."
        app:typographyType="paragraph_3"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/Unify_NN600"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/edit_ad_group_name_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/top_ads_create_edit_ad_group_name_bottom_sheet_cta" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</LinearLayout>