<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.tokopedia.header.HeaderUnify
        android:id="@+id/onboarding_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unify_header_title="@string/topads_create_onboarding_title"
        />
 <com.tokopedia.unifycomponents.ImageUnify
     android:id="@+id/onboarding_image"
     android:layout_width="match_parent"
     android:layout_height="246dp"
     app:unify_image_type="rect"
     app:unify_image_corner_radius="0"
     />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        >
       <com.tokopedia.unifyprinciples.Typography
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/mp_ad_creation_onboarding_text"
           android:textAlignment="center"
           app:typographyType="paragraph_2"
           android:textColor="@color/Unify_NN600"
           android:layout_marginTop="15dp"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="24dp"
           android:baselineAligned="false"
           >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="0.3"
               >
               <com.tokopedia.unifyprinciples.Typography
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:typographyType="heading_2"
                   android:textColor="@color/Unify_GN500"
                   android:text="+200%"
                   android:layout_gravity="center_horizontal"
                   />
              <com.tokopedia.unifyprinciples.Typography
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:typographyType="display_3"
                  android:text="@string/mp_ad_creation_onboarding_num_text_1"
                  android:textColor="@color/Unify_NN600"
                  android:textAlignment="center"
                  android:layout_gravity="center_horizontal"
                  />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="0.3"
               android:layout_marginHorizontal="8dp"
               >
               <com.tokopedia.unifyprinciples.Typography
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:typographyType="heading_2"
                   android:textColor="@color/Unify_GN500"
                   android:layout_gravity="center_horizontal"
                   android:text="+100%"
                   />
               <com.tokopedia.unifyprinciples.Typography
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:typographyType="display_3"
                   android:text="@string/mp_ad_creation_onboarding_num_text_2"
                   android:textColor="@color/Unify_NN600"
                   android:textAlignment="center"
                   android:layout_gravity="center_horizontal"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="0.3"
               >
               <com.tokopedia.unifyprinciples.Typography
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:typographyType="heading_2"
                   android:textColor="@color/Unify_GN500"
                   android:layout_gravity="center_horizontal"
                   android:text="+15%"
                   />
               <com.tokopedia.unifyprinciples.Typography
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:typographyType="display_3"
                   android:text="@string/mp_ad_creation_onboarding_num_text_3"
                   android:textColor="@color/Unify_NN600"
                   android:textAlignment="center"
                   android:layout_gravity="center_horizontal"
                   />
           </LinearLayout>
       </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="small"
            android:layout_marginTop="24dp"
            android:text="@string/mp_ad_creation_onboarding_subtext"
            android:textColor="@color/Unify_NN600"
            />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/onboarding_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mp_ad_creation_onboarding_cta_text"
            android:layout_marginTop="24dp"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/footer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:typographyType="display_3"
            android:textColor="@color/Unify_NN600"
            android:textAlignment="center"
            />
    </LinearLayout>
</LinearLayout>