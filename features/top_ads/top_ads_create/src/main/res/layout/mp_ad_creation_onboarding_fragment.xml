<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/onboarding_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_header_title="@string/topads_create_onboarding_title" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/onboarding_image"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_header"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/onboarding_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="16dp"
        android:text="@string/mp_ad_creation_onboarding_text"
        android:textAlignment="center"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_image"
        app:typographyType="paragraph_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/onboarding_stat_num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="+200%"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintEnd_toEndOf="@+id/onboarding_stat_text_1"
        app:layout_constraintStart_toStartOf="@+id/onboarding_stat_text_1"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_desc"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/onboarding_stat_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/mp_ad_creation_onboarding_num_text_1"
        android:textAlignment="center"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_stat_num_1"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/onboarding_stat_num_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="+100%"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintEnd_toEndOf="@+id/onboarding_stat_text_2"
        app:layout_constraintStart_toStartOf="@+id/onboarding_stat_text_2"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_desc"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/onboarding_stat_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mp_ad_creation_onboarding_num_text_2"
        android:textAlignment="center"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toStartOf="@+id/onboarding_stat_text_3"
        app:layout_constraintStart_toEndOf="@+id/onboarding_stat_text_1"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_stat_num_2"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/onboarding_stat_num_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="+15%"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintEnd_toEndOf="@+id/onboarding_stat_text_3"
        app:layout_constraintStart_toStartOf="@+id/onboarding_stat_text_3"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_desc"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/onboarding_stat_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/mp_ad_creation_onboarding_num_text_3"
        android:textAlignment="center"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_stat_num_3"
        app:typographyType="display_3" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/onboarding_desc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/mp_ad_creation_onboarding_subtext"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_stat_text_1"
        app:typographyType="small" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/onboarding_cta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/mp_ad_creation_onboarding_cta_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_desc_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/footer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_cta"
        app:typographyType="display_3" />

</androidx.constraintlayout.widget.ConstraintLayout>