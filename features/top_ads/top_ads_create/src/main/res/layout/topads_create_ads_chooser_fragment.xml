<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"
        app:descriptionText="@string/ticker_desc"
        app:layout_constraintBottom_toTopOf="@+id/auto_ads"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerShapeType="loose"
        app:tickerType="announcement"
        app:titleText="@string/ticker_title"
        tools:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/auto_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/dp_8"
        app:contentPadding="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticker_info">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/topads_create_ic_thumb_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

            </ImageView>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/typography1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:gravity="left"
                android:text="@string/iklan_otomatis"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/icon1"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_5" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_shop_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/white"
                app:lineHeight="@dimen/dp_16"
                app:typographyType="small"
                app:layout_constraintBottom_toBottomOf="@id/typography1"
                app:layout_constraintStart_toEndOf="@id/typography1"
                app:layout_constraintTop_toTopOf="@id/typography1"
                tools:background="@drawable/active_status_green"
                tools:text="Aktif" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/typography2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:gravity="left"
                android:text="@string/select_ad_creation_option_auto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/constraint2"
                app:layout_constraintStart_toEndOf="@+id/icon1"
                app:layout_constraintTop_toBottomOf="@id/typography1"
                app:typographyType="body_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/manual_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/dp_8"
        app:contentPadding="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auto_ads">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/topads_create_ic_gear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

            </ImageView>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/typography3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:gravity="left"
                android:text="@string/iklan_manual"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/icon2"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_5" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/typography4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:gravity="start"
                android:text="@string/select_ad_creation_option_manual"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/constraint1"
                app:layout_constraintStart_toEndOf="@+id/icon2"
                app:layout_constraintTop_toBottomOf="@id/typography3"
                app:typographyType="body_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>