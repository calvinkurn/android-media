<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/group_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_iklan"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Kumpulan Sepatu Impor"
        android:textColor="@color/Unify_NN950"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_type"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <LinearLayout
        android:id="@+id/lihat_pengaturan_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_name">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_group_settings"
            android:textColor="@color/Unify_GN500"
            app:typographyType="display_2"
            app:typographyWeight="bold"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/group_detail_dropdown"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:tint="@color/Unify_GN500"
            app:srcCompat="@drawable/ic_dropdown_arrow"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/products_count_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/no_of_products"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lihat_pengaturan_group_btn"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/products_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="128"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="@id/products_count_heading"
        app:layout_constraintTop_toBottomOf="@id/products_count_heading"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:layout_marginTop="4dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keywords"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintTop_toTopOf="@id/products_count_heading"
        app:layout_constraintStart_toStartOf="@id/ad_cost_recommend_heading"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/keywords_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="128"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="@id/keywords"
        app:layout_constraintTop_toBottomOf="@id/keywords"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:layout_marginTop="4dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_cost_search_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/topads_common_iklan_pencarian_title"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/products_count"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_cost_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rp1.500"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="@id/ad_cost_search_heading"
        app:layout_constraintTop_toBottomOf="@id/ad_cost_search_heading"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:layout_marginTop="4dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_cost_recommend_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topads_common_iklan_recommendasi_title"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toEndOf="@id/ad_cost_search_heading"
        app:layout_constraintTop_toTopOf="@id/ad_cost_search_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_cost_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rp1.500"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="@id/ad_cost_recommend_heading"
        app:layout_constraintTop_toBottomOf="@id/ad_cost_recommend_heading"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:layout_marginTop="4dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/daily_budget_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/anggaran_harian"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ad_cost_search"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/daily_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rp.123.500"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="@id/daily_budget_heading"
        app:layout_constraintTop_toBottomOf="@id/daily_budget_heading"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:layout_marginTop="4dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/daily_budget_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="Rp12.000 dari Rp123.000"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daily_budget"
        app:typographyType="small" />

    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/daily_budget_progress_bar"
        android:layout_width="100dp"
        android:layout_height="10dp"
        app:unify_progress_bar_track_color="@color/Unify_NN50"
        app:unify_progress_bar_from_color="@color/Unify_GN500"
        app:layout_constraintStart_toStartOf="@id/daily_budget_desc"
        app:layout_constraintTop_toBottomOf="@id/daily_budget_desc"
        android:layout_marginTop="4dp"
        android:visibility="visible"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/lihat_pengaturan_grup_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="lihat_pengaturan_group_btn,daily_budget_desc,daily_budget_progress_bar"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/manual_btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:enabled="true"
        android:text="@string/manage_ads_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lihat_pengaturan_grup_barrier"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        app:unifyButtonSize="medium"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/lihat_pengaturan_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="products_count_heading,products_count,keywords,keywords_count,ad_cost_search_heading,ad_cost_search,ad_cost_recommend_heading,ad_cost_recommend,daily_budget_heading,daily_budget,daily_budget_desc"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>