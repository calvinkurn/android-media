<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:layout_marginTop="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/low_emphasis_border"
        >
        <LinearLayout
            android:id="@+id/ad_group_item_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingEnd="12dp"
            android:paddingStart="14dp"
            >
            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="match_parent"
                android:layout_height="14dp"
                app:loader_type="rect"
                />
            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="match_parent"
                android:layout_height="14dp"
                app:loader_type="rect"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/ad_group_item_header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_rounded_transparent_border"
            android:backgroundTint="@color/Unify_NN50"
            android:backgroundTintMode="add"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            >
            
            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="242dp"
                android:layout_height="14dp"
                app:loader_type="rect"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Unify_NN200"
                android:layout_marginVertical="8dp"
                />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="281dp"
                android:layout_height="14dp"
                app:loader_type="rect"
                />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>