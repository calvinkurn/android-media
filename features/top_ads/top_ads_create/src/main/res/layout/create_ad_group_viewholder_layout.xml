<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/add_btn"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="18dp"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="ADD_CIRCLE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/mp_ad_creation_grp_list_add_grp_text"
        app:layout_constraintBottom_toBottomOf="@+id/add_btn"
        app:layout_constraintStart_toEndOf="@+id/add_btn"
        app:layout_constraintTop_toTopOf="@+id/add_btn"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.iconunify.IconUnify
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginEnd="24dp"
        app:icon_color_light_enable="@color/Unify_NN900"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="15dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>
