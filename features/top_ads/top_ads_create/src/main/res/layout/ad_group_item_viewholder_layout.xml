<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:layout_marginTop="10dp"
    >
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/low_emphasis_border"
       >
       <LinearLayout
           android:id="@+id/ad_group_item_header"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingVertical="12dp"
           android:paddingEnd="12dp"
           android:paddingStart="14dp"
           >
           <com.tokopedia.iconunify.IconUnify
               android:id="@+id/folder_icon"
               android:layout_width="20dp"
               android:layout_height="18dp"
               app:icon_name="FOLDER"
               android:layout_gravity="center_vertical"
               />

           <com.tokopedia.unifyprinciples.Typography
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="Grup Kemeja Pria Baju Panjang Kerah Kancing Hitam Pekat Model Slim Fit Bahan Katun Diskon Murah"
               app:typographyType="display_3"
               app:typographyWeight="bold"
               android:layout_marginStart="10dp"
               android:layout_weight="1"
               android:maxLines="2"
               />
       </LinearLayout>
       <LinearLayout
           app:layout_constraintTop_toBottomOf="@+id/ad_group_item_header"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/bottom_rounded_transparent_border"
           android:backgroundTint="@color/Unify_NN50"
           android:backgroundTintMode="add"
           android:orientation="vertical"
           android:paddingVertical="8dp"
           android:paddingHorizontal="12dp"
           >
           <com.tokopedia.topads.view.customviews.AdStatsView
               android:id="@+id/ad_stats_top_row"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/Unify_NN200"
               android:layout_marginVertical="8dp"
               />

           <com.tokopedia.topads.view.customviews.AdStatsView
               android:id="@+id/ad_stats_bottom_row"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />

       </LinearLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>