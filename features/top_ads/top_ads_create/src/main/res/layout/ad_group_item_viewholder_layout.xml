<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_group_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/low_emphasis_border">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/folder_icon"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="14dp"
        app:icon_name="FOLDER"
        app:layout_constraintBottom_toTopOf="@+id/ad_group_footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_group_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Grup Kemeja Pria Baju Panjang Kerah Kancing Hitam Pekat Model Slim Fit Bahan Katun Diskon Murah"
        app:layout_constraintBottom_toTopOf="@+id/ad_group_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/folder_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold" />

    <LinearLayout
        android:id="@+id/ad_group_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bottom_rounded_transparent_border"
        android:orientation="vertical"
        android:paddingHorizontal="11dp"
        android:paddingTop="8dp"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_group_title_tv">

        <com.tokopedia.topads.view.customviews.AdStatsView
            android:id="@+id/ad_stats_top_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/Unify_NN200" />

        <com.tokopedia.topads.view.customviews.AdStatsView
            android:id="@+id/ad_stats_bottom_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>