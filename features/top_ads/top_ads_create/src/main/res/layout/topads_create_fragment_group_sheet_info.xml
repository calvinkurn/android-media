<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/topads_create_bg_top_round"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">


    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:srcCompat="@drawable/topads_create_ic_group_close" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="@string/apa_itu_group_iklan"
        android:textColor="@color/black"
        app:typographyType="heading_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_close"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@+id/subtitle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subtitle1"
        app:srcCompat="@drawable/topads_create_ic_checklist" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtitle1"
        style="@style/TextView.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="top"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="@string/gunakan_grup_iklan_untuk_mengiklankan_produkmu_sekaligus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic1"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:typographyType="body_2" />

    <ImageView
        android:id="@+id/ic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@+id/subtitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subtitle2"
        app:srcCompat="@drawable/topads_create_ic_checklist" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtitle2"
        style="@style/TextView.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/isi_group_iklan_dengan_produk_dalam_kategori_serupa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic1"
        app:layout_constraintTop_toBottomOf="@+id/subtitle1"
        app:typographyType="body_2" />

    <ImageView
        android:id="@+id/ic3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@+id/subtitle3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subtitle3"
        app:srcCompat="@drawable/topads_create_ic_checklist" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtitle3"
        style="@style/TextView.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/produk_dalam_1_group_akan_menggunakan_kata_kunci_yang_sama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic3"
        app:layout_constraintTop_toBottomOf="@+id/subtitle2"
        app:typographyType="body_2" />
</androidx.constraintlayout.widget.ConstraintLayout>