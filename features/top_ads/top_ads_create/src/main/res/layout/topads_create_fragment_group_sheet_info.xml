<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/topads_bg_top_round"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@+id/subtitle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subtitle1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtitle1"
        style="@style/TextView.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="top"
        android:text="@string/gunakan_grup_iklan_untuk_mengiklankan_produkmu_sekaligus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic1"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@+id/subtitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subtitle2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtitle2"
        style="@style/TextView.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/isi_group_iklan_dengan_produk_dalam_kategori_serupa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic1"
        app:layout_constraintTop_toBottomOf="@+id/subtitle1"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ic3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@+id/subtitle3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subtitle3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtitle3"
        style="@style/TextView.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/produk_dalam_1_group_akan_menggunakan_kata_kunci_yang_sama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic3"
        app:layout_constraintTop_toBottomOf="@+id/subtitle2"
        app:typographyType="body_2" />
</androidx.constraintlayout.widget.ConstraintLayout>