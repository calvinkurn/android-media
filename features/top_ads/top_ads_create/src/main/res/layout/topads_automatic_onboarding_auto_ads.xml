<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    app:layout_constraintTop_toBottomOf="@+id/subtitle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/top_corner_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/top_corner_bg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typography4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="start"
            android:text="@string/topads_common_iklan_otomatis"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_corner_bg1"
            app:typographyType="heading_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typography8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/iklan_otomatis_subtitle"
            app:layout_constraintTop_toBottomOf="@id/typography4"
            app:typographyType="body_3"
            tools:layout_editor_absoluteX="16dp" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/icon2"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentStart="true"
            app:layout_constraintBottom_toBottomOf="@+id/typography"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typography8"
            app:layout_constraintTop_toTopOf="@+id/typography" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="start"
            android:text="@string/iklan_otomatis_desc1"
            app:layout_constraintStart_toEndOf="@+id/icon2"
            app:layout_constraintTop_toBottomOf="@+id/typography8"
            app:typographyType="body_3" />


        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/icon3"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentStart="true"
            app:layout_constraintBottom_toBottomOf="@+id/typography2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon2"
            app:layout_constraintTop_toTopOf="@+id/typography2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typography2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="start"
            android:text="@string/iklan_otomatis_desc2"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/icon3"
            app:layout_constraintTop_toBottomOf="@+id/typography"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/icon4"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentStart="true"
            app:layout_constraintBottom_toBottomOf="@+id/typography3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon3"
            app:layout_constraintTop_toTopOf="@+id/typography3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typography3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="start"
            android:text="@string/iklan_otomatis_desc3"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/icon3"
            app:layout_constraintTop_toBottomOf="@+id/typography2"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_start_auto_ads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/mulai_iklan_otomatis"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typography3"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>