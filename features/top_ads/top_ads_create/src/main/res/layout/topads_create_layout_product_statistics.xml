<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/Unify_NN50"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_NN50"
        android:padding="8dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tampil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/topads_common_tampil"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toStartOf="@id/klik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tampil_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toStartOf="@id/klik_count"
            app:layout_constraintStart_toStartOf="@id/tampil"
            app:layout_constraintTop_toBottomOf="@id/tampil"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            tools:text="0" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/tampil_count_loader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@id/klik_count"
            app:layout_constraintStart_toStartOf="@id/tampil"
            app:layout_constraintTop_toBottomOf="@id/tampil"
            app:layout_constraintBottom_toBottomOf="@id/tampil_count"
            app:loader_type="rect"
            android:layout_marginEnd="10dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/pendapatan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/topads_common_pendapatan"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toStartOf="@id/pengeluaran"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tampil_count"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/pendapatan_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toStartOf="@id/pengeluaran_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pendapatan"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            tools:text="Rp 0" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/pendapatan_count_loader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@id/pengeluaran_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pendapatan"
            app:layout_constraintBottom_toBottomOf="@id/pendapatan_count"
            app:loader_type="rect"
            android:layout_marginEnd="10dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/klik"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/topads_common_klik"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toStartOf="@id/total_terjual"
            app:layout_constraintStart_toEndOf="@id/tampil"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/klik_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toStartOf="@id/total_terjual_count"
            app:layout_constraintStart_toEndOf="@id/tampil_count"
            app:layout_constraintTop_toBottomOf="@id/klik"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            tools:text="0" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/klik_count_loader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@id/total_terjual_count"
            app:layout_constraintStart_toEndOf="@id/tampil_count"
            app:layout_constraintTop_toBottomOf="@id/klik"
            app:layout_constraintBottom_toBottomOf="@id/klik_count"
            app:loader_type="rect"
            android:layout_marginEnd="10dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/pengeluaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="@string/topads_common_pengeluaran"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toStartOf="@id/efektivitas_iklan"
            app:layout_constraintStart_toEndOf="@id/pendapatan"
            app:layout_constraintTop_toBottomOf="@id/klik_count"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/pengeluaran_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toStartOf="@id/efektivitas_iklan_count"
            app:layout_constraintStart_toEndOf="@id/pendapatan_count"
            app:layout_constraintTop_toBottomOf="@id/pengeluaran"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            tools:text="Rp 0" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/pengeluaran_count_loader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@id/efektivitas_iklan_count"
            app:layout_constraintStart_toEndOf="@id/pendapatan_count"
            app:layout_constraintTop_toBottomOf="@id/pengeluaran"
            app:layout_constraintBottom_toBottomOf="@id/pengeluaran_count"
            app:loader_type="rect"
            android:layout_marginEnd="10dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/total_terjual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/topads_common_total_sold"
            android:layout_marginTop="8dp"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/klik"
            app:typographyType="small"
            tools:text="Total Terjual" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/total_terjual_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/klik_count"
            app:layout_constraintTop_toBottomOf="@id/total_terjual"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            tools:text="0.00 %"
            android:layout_marginTop="4dp"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/total_terjual_count_loader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/klik_count"
            app:layout_constraintTop_toBottomOf="@id/total_terjual"
            app:layout_constraintBottom_toBottomOf="@id/total_terjual_count"
            app:loader_type="rect"
            android:layout_marginEnd="10dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/efektivitas_iklan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/topads_common_efektivitas_iklan"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pengeluaran"
            app:layout_constraintTop_toBottomOf="@id/total_terjual_count"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/efektivitas_iklan_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pengeluaran_count"
            app:layout_constraintTop_toBottomOf="@id/efektivitas_iklan"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            tools:text="0"
            android:layout_marginTop="4dp"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/efektivitas_iklan_count_loader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pengeluaran_count"
            app:layout_constraintTop_toBottomOf="@id/efektivitas_iklan"
            app:layout_constraintBottom_toBottomOf="@id/efektivitas_iklan_count"
            app:loader_type="rect"
            android:layout_marginEnd="10dp" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/product_statistics_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tampil_count,klik_count,total_terjual_count,pendapatan_count,pengeluaran_count,efektivitas_iklan_count"
            android:visibility="invisible"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/product_statistics_loader_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tampil_count_loader,klik_count_loader,total_terjual_count_loader,pendapatan_count_loader,pengeluaran_count_loader,efektivitas_iklan_count_loader"
            android:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>