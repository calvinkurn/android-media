<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/container_btn"
        android:layout_marginBottom="-6dp"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">


        <com.tokopedia.unifyprinciples.Typography
            style="@style/TextView.TitleBig.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="left"
            android:text="@string/group_iklan" />

        <com.tokopedia.unifyprinciples.Typography
            style="@style/TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_35"
            android:gravity="left"
            android:text="@string/atur_beberapa_iklan_sekaligus_ke_dalam_satu_group_sesuai_kategori_produk"
            app:typographyType="body_3" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ketik_nama_group_iklan" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.tokopedia.unifyprinciples.Typography
            style="@style/TextView.Micro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contoh_spatu_lari_bando_wanita_gaun_pesta"
            app:typographyType="body_3" />

    </LinearLayout>

    <com.tokopedia.design.component.RoundFloatingButton
        android:id="@+id/tip_btn"
        style="@style/TextView.Micro.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/container_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_8"
        android:backgroundTint="#FFFCF5"
        android:gravity="center"
        android:text="@string/apa_itu_group_iklan"
        android:textAllCaps="false"
        app:buttonCompatSize="medium"
        app:buttonDrawableLeftCompat="@drawable/topads_create_ic_tips" />

    <LinearLayout
        android:id="@+id/container_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_6"
            android:layout_above="@+id/btn_submit"
            android:background="@drawable/topads_create_bg_shader_gray" />

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btn_submit"
            style="@style/Button.Submit.Green.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:text="@string/buat_group_iklan" />
    </LinearLayout>
</RelativeLayout>