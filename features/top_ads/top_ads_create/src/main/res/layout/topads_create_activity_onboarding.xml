<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/topads_create_bg_onboarding"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <com.tokopedia.unifyprinciples.Typography
            style="@style/TextView.SubHeadline.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_20"
            android:text="@string/yuk_iklankan_produkmu" />

        <com.tokopedia.unifyprinciples.Typography
            style="@style/TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_20"
            android:text="@string/pilih_cara_beriklan_yang_sesuai_kebutuhanmu" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                app:srcCompat="@drawable/topads_create_bg_top_corner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/topads_create_ic_thumb_up" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/icon1"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.SubHeadline.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Iklan Otomatis" />

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="body_3"
                            android:text="@string/beriklan_hanya_dengan_1x_klik" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        app:srcCompat="@drawable/topads_create_ic_iklan_otomatis_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/icon2"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.Title.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="heading_5"
                            android:text="@string/beriklan_jadi_mudah" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="body_3"
                            android:text="@string/iklan_produk_akan_otomatis_aktif_sesuai_jumlah_nominal_anggaran_harianmu" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        app:srcCompat="@drawable/topads_create_ic_iklan_otomatis_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/icon3"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.Title.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="heading_5"
                            android:text="@string/pengaturan_iklan_lebih_optimal" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="body_3"
                            android:text="@string/kami_akan_memilih_produk_dan_biaya_iklan_terbaik_untuk_optimalkan_iklanmu" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/icon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        app:srcCompat="@drawable/topads_create_ic_iklan_otomatis_3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/icon4"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.Title.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="heading_5"
                            android:text="@string/hemat_waktu_dalam_beriklan" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="body_3"
                            android:text="@string/pengaturan_iklan_akan_diperbarui_secara_berkala_untuk_tingkatkan_potensi_penjualanmu" />
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_start_auto_ads"
                    style="@style/Button.Submit.Green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="@string/mulai_iklan_otomatis" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardUseCompatPadding="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                app:srcCompat="@drawable/topads_create_bg_top_corner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/topads_create_ic_gear" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/icon5"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.SubHeadline.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Iklan Manual" />

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="body_3"
                            android:text="Buat iklan dengan pengaturan lengkap" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/icon6"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        app:srcCompat="@drawable/topads_create_ic_iklan_manual_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/icon6"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.Title.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="heading_5"
                            android:text="@string/atur_produk_manual" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="body_3"
                            android:text="@string/pilih_produk_produk_terbaik_yang_ingin_kamu_iklankan" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/icon7"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        app:srcCompat="@drawable/topads_create_ic_iklan_manual_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/icon7"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.Title.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="heading_5"
                            android:text="@string/atur_strategi_kata_kunci" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="body_3"
                            android:text="@string/masukkan_kata_kunci_yang_sesuai_untuk_produkmu_secara_manual" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/icon8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        app:srcCompat="@drawable/topads_create_ic_iklan_manual_3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/icon8"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            style="@style/TextView.Title.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="heading_5"
                            android:text="@string/atur_biaya_iklan_manual" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:typographyType="body_3"
                            android:text="@string/pasang_biaya_iklan_sesuai_dengan_rekomendasi" />
                    </LinearLayout>
                </RelativeLayout>

                <com.tokopedia.design.component.ButtonCompat
                    android:id="@+id/btn_start_manual_ads"
                    style="@style/Button.Submit.White.Border.Green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonCompatType="ghost"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="@string/gunakan_iklan_manual" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>