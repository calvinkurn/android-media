<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_20"
            android:text="@string/yuk_iklankan_produkmu"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_20"
            android:text="@string/pilih_cara_beriklan_yang_sesuai_kebutuhanmu"
            android:textColor="#AD31353B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/ticker_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:visibility="gone"
            app:descriptionText="@string/topads_create_ticker_desc_actiivate"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tickerShapeType="loose"
            app:tickerType="announcement"
            app:titleText="@string/topads_create_ticker_title_activate"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ticker_info">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16">

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/top_corner_bg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="start"
                    android:text="@string/topads_common_iklan_otomatis"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typographyType="heading_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:gravity="start"
                    android:text="@string/iklan_otomatis_subtitle"
                    app:layout_constraintTop_toBottomOf="@id/typography4"
                    app:typographyType="body_3"
                    tools:layout_editor_absoluteX="16dp" />

                <com.tokopedia.unifycomponents.CardUnify
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp_16"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.tokopedia.unifycomponents.ImageUnify
                        android:id="@+id/top_corner_icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </com.tokopedia.unifycomponents.CardUnify>

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/icon2"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/typography"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/typography8"
                    app:layout_constraintTop_toTopOf="@+id/typography" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="start"
                    android:text="@string/iklan_otomatis_desc1"
                    app:layout_constraintStart_toEndOf="@+id/icon2"
                    app:layout_constraintTop_toBottomOf="@+id/typography8"
                    app:typographyType="body_3" />


                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/icon3"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/typography2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon2"
                    app:layout_constraintTop_toTopOf="@+id/typography2" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="start"
                    android:text="@string/iklan_otomatis_desc2"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/icon3"
                    app:layout_constraintTop_toBottomOf="@+id/typography"
                    app:typographyType="body_3" />

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/icon4"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/typography3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon3"
                    app:layout_constraintTop_toTopOf="@+id/typography3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="start"
                    android:text="@string/iklan_otomatis_desc3"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/icon3"
                    app:layout_constraintTop_toBottomOf="@+id/typography2"
                    app:typographyType="body_3" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/btn_start_auto_ads"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="@string/mulai_iklan_otomatis"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/typography3"
                    app:unifyButtonSize="medium"
                    app:unifyButtonType="main"
                    app:unifyButtonVariant="filled" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.tokopedia.unifycomponents.CardUnify>

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16">

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/top_corner_bg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/iklan_manual"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typographyType="heading_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:text="@string/iklan_manual_subtitle"
                    app:layout_constraintTop_toBottomOf="@id/typography9"
                    app:typographyType="body_3" />

                <com.tokopedia.unifycomponents.CardUnify
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp_16"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.tokopedia.unifycomponents.ImageUnify
                        android:id="@+id/top_corner_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </com.tokopedia.unifycomponents.CardUnify>

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/icon6"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/desc1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/typography10"
                    app:layout_constraintTop_toTopOf="@+id/desc_1"
                    tools:ignore="UnknownIdInLayout" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/desc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="start"
                    android:text="@string/iklan_manual_desc1"
                    app:layout_constraintStart_toEndOf="@+id/icon6"
                    app:layout_constraintTop_toBottomOf="@+id/typography10"
                    app:typographyType="body_3" />

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/icon7"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="@id/desc_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon6"
                    app:layout_constraintTop_toTopOf="@id/desc_2" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/desc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/iklan_manual_desc2"
                    app:layout_constraintStart_toEndOf="@+id/icon7"
                    app:layout_constraintTop_toBottomOf="@+id/desc_1"
                    app:typographyType="body_3" />

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/icon8"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/desc_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon7"
                    app:layout_constraintTop_toTopOf="@+id/desc_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/desc_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/iklan_manual_desc3"
                    app:layout_constraintStart_toEndOf="@+id/icon8"
                    app:layout_constraintTop_toBottomOf="@+id/desc_2"
                    app:typographyType="body_3" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/btn_start_manual_ads"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:gravity="center"
                    android:text="@string/mulai_iklan_manual"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/desc_3"
                    app:unifyButtonSize="medium"
                    app:unifyButtonType="main"
                    app:unifyButtonVariant="filled" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.tokopedia.unifycomponents.CardUnify>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>