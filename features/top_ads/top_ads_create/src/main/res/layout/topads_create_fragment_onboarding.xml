<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/yuk_iklankan_produkmu"
            android:textColor="@color/Unify_NN1000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="@string/pilih_cara_beriklan_yang_sesuai_kebutuhanmu"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/ticker_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            app:descriptionText="@string/topads_create_ticker_desc_actiivate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            app:tickerShapeType="loose"
            app:tickerType="announcement"
            app:titleText="@string/topads_create_ticker_title_activate"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ticker_info">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/top_corner_bg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/dp_22"
                    android:gravity="start"
                    android:text="@string/topads_common_iklan_otomatis"
                    android:textColor="@color/Unify_NN1000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typographyType="heading_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="start"
                    android:text="@string/iklan_otomatis_subtitle"
                    app:layout_constraintTop_toBottomOf="@id/typography4"
                    app:typographyType="body_3"
                    tools:layout_editor_absoluteX="16dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.tokopedia.unifycomponents.ImageUnify
                        android:id="@+id/top_corner_icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </androidx.cardview.widget.CardView>

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_GN500"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/typography"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/typography8"
                    app:layout_constraintTop_toTopOf="@+id/typography"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:text="@string/iklan_otomatis_desc1"
                    app:layout_constraintStart_toEndOf="@+id/icon2"
                    app:layout_constraintTop_toBottomOf="@+id/typography8"
                    app:typographyType="body_3" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_GN500"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/typography2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon2"
                    app:layout_constraintTop_toTopOf="@+id/typography2"/>


                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:text="@string/iklan_otomatis_desc2"
                    android:textColor="@color/Unify_NN1000"
                    app:layout_constraintStart_toEndOf="@+id/icon3"
                    app:layout_constraintTop_toBottomOf="@+id/typography"
                    app:typographyType="body_3" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_GN500"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/typography3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon3"
                    app:layout_constraintTop_toTopOf="@+id/typography3"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:text="@string/iklan_otomatis_desc3"
                    android:textColor="@color/Unify_NN1000"
                    app:layout_constraintStart_toEndOf="@+id/icon3"
                    app:layout_constraintTop_toBottomOf="@+id/typography2"
                    app:typographyType="body_3" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/btn_start_auto_ads"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_36"
                    android:layout_marginBottom="16dp"
                    android:text="@string/mulai_iklan_otomatis"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/typography3"
                    app:unifyButtonSize="medium"
                    app:unifyButtonType="main"
                    app:unifyButtonVariant="filled" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/btn_learn_auto_ads"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/learn_more"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_start_auto_ads"
                    app:unifyButtonSize="medium"
                    app:unifyButtonVariant="text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.tokopedia.unifycomponents.CardUnify>

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card1">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/top_corner_bg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/dp_22"
                    android:text="@string/iklan_manual"
                    android:textColor="@color/Unify_NN1000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typographyType="heading_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/iklan_manual_subtitle"
                    app:layout_constraintTop_toBottomOf="@id/typography9"
                    app:typographyType="body_3" />

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.tokopedia.unifycomponents.ImageUnify
                        android:id="@+id/top_corner_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </androidx.cardview.widget.CardView>

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon6"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_GN500"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/desc1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/typography10"
                    app:layout_constraintTop_toTopOf="@+id/desc_1"
                    tools:ignore="UnknownIdInLayout"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/desc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:text="@string/iklan_manual_desc1"
                    app:layout_constraintStart_toEndOf="@+id/icon6"
                    app:layout_constraintTop_toBottomOf="@+id/typography10"
                    app:typographyType="body_3" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon7"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_GN500"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/desc_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon6"
                    app:layout_constraintTop_toTopOf="@id/desc_2" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/desc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/iklan_manual_desc2"
                    app:layout_constraintStart_toEndOf="@+id/icon7"
                    app:layout_constraintTop_toBottomOf="@+id/desc_1"
                    app:typographyType="body_3" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon8"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_GN500"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/desc_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon7"
                    app:layout_constraintTop_toTopOf="@+id/desc_3"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/desc_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/iklan_manual_desc3"
                    app:layout_constraintStart_toEndOf="@+id/icon8"
                    app:layout_constraintTop_toBottomOf="@+id/desc_2"
                    app:typographyType="body_3" />


                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon9"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_GN500"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/desc_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon8"
                    app:layout_constraintTop_toTopOf="@+id/desc_4"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/desc_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/iklan_manual_desc4"
                    app:layout_constraintStart_toEndOf="@+id/icon8"
                    app:layout_constraintTop_toBottomOf="@+id/desc_3"
                    app:typographyType="body_3" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/btn_start_manual_ads"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_36"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="@string/gunakan_iklan_manual"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/desc_4"
                    app:unifyButtonSize="medium"
                    app:unifyButtonType="main"
                    app:unifyButtonVariant="filled" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/btn_learn_manual_ads"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/learn_more"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_start_manual_ads"
                    app:unifyButtonSize="medium"
                    app:unifyButtonVariant="text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.tokopedia.unifycomponents.CardUnify>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>