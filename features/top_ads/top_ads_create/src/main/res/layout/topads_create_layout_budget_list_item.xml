<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/dp_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/budget_parent"
            style="@style/TextInputLayout"
            android:layout_width="0dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.VerySmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            app:layout_constraintWidth_percent=".70">

            <com.tokopedia.seller.common.widget.PrefixEditText
                android:id="@+id/budget"
                style="@style/EditText.Currency"
                android:layout_width="match_parent"
                android:maxLines="1"
                app:prefix="Rp " />
        </com.google.android.material.textfield.TextInputLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="@string/biaya_per_klik"
            android:textColor="@color/topads_heading_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5" />

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:srcCompat="@drawable/topads_create_ic_close_button" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            style="@style/TextView.Micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="@string/biaya_per_klik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bright_red"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/budget_parent"
            app:layout_constraintTop_toBottomOf="@+id/budget_parent"
            app:typographyType="body_3"
            tools:text="@string/error_max_length_keyword"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/recom_txt"
            style="@style/TextView.Micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommendated_bid_message"
            app:layout_constraintStart_toStartOf="@+id/budget_parent"
            app:layout_constraintTop_toBottomOf="@+id/budget_parent"
            app:typographyType="body_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>