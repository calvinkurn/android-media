<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="@string/biaya_per_klik"
        android:textColor="@color/topads_heading_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_info"
        app:typographyType="heading_6" />

    <ImageView
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:contentDescription="INFO"
        android:padding="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/typography24"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topads_create_ic_information" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_info">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:hint="Rp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitle" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/recom_txt"
                style="@style/TextView.Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommendated_bid_message"
                app:layout_constraintStart_toStartOf="@+id/budget"
                app:layout_constraintTop_toBottomOf="@+id/budget"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bright_red"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/budget"
                app:layout_constraintTop_toBottomOf="@+id/budget"
                app:typographyType="body_3"
                tools:text="@string/error_max_length_keyword"
                tools:visibility="visible" />


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:text="@string/biaya_per_klik"
                android:textColor="@color/topads_heading_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/selected_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="20dp"
        android:text="@string/kata_kunci_count"
        android:textColor="@color/topads_heading_color"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:typographyType="heading_6" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bid_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_keyword"
        tools:itemCount="10"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/topads_create_layout_budget_list_item"
        tools:visibility="visible">

    </androidx.recyclerview.widget.RecyclerView>

    <com.tokopedia.design.component.RoundFloatingButton
        android:id="@+id/tip_btn"
        style="@style/TextView.Micro.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:backgroundTint="#FFFCF5"
        android:text="@string/tip_biaya_iklan"
        android:textAllCaps="false"
        app:buttonCompatSize="medium"
        app:buttonDrawableLeftCompat="@drawable/topads_create_ic_tips"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:layout_above="@+id/btn_submit"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/topads_create_bg_shader_gray"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        tools:layout_editor_absoluteX="6dp" />

    <Button
        android:id="@+id/btn_next"
        style="@style/Button.Submit.Green.Full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="@string/lanjutkan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>