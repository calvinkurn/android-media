<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.tokopedia.design.text.SearchInputView
        android:id="@+id/searchInputView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_filter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siv_search_hint="@string/cari_produk"
        app:siv_search_icon="@drawable/topads_create_ic_search" />

    <ImageButton
        android:id="@+id/btn_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:srcCompat="@drawable/topads_create_ic_sort" />


    <View
        android:id="@+id/view3"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="#E5E7E9"
        app:layout_constraintBottom_toBottomOf="@+id/btn_filter"
        app:layout_constraintEnd_toStartOf="@+id/btn_sort"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_filter"
        app:layout_constraintTop_toTopOf="@+id/btn_filter" />

    <ImageButton
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/searchInputView"
        app:layout_constraintEnd_toStartOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/searchInputView"
        app:layout_constraintTop_toTopOf="@+id/searchInputView"
        app:srcCompat="@drawable/topads_create_ic_filter" />

    <RadioGroup
        android:id="@+id/promotedGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchInputView">

        <RadioButton
            android:id="@+id/not_promoted"
            style="@style/TopadsProductFilterRadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_weight="1"
            android:text="@string/belum_diiklankan" />

        <RadioButton
            android:id="@+id/promoted"
            style="@style/TopadsProductFilterRadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"
            android:text="@string/sudah_diiklankan" />

    </RadioGroup>

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/topads_create_bg_shader_gray"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promotedGroup" />

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/shadow_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="10"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/topads_create_layout_product_list_item_product" />

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <com.tokopedia.design.component.RoundFloatingButton
        android:id="@+id/tip_btn"
        style="@style/TextView.Micro.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFCF5"
        android:text="@string/tip_memilih_produk"
        android:textAllCaps="false"
        app:buttonCompatSize="medium"
        app:buttonDrawableLeftCompat="@drawable/topads_create_ic_tips"
        app:layout_constraintBottom_toTopOf="@+id/shadow_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/shadow_bottom"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/topads_create_bg_shader_gray"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn_next"
        style="@style/Button.Submit.Green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:text="@string/lanjutkan"
        android:visibility="gone"
        tools:visibility="visible"
        app:buttonCompatType="primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/select_product_info" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/select_product_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:padding="@dimen/dp_16"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_next"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_next"
        app:typographyType="heading_6"
        tools:text="2 produk dipilih" />

</androidx.constraintlayout.widget.ConstraintLayout>

