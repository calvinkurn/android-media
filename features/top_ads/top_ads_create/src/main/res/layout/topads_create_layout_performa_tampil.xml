<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topads_ads_performance_performa_tampil"
        tools:text="Performa Tampil"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="small"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ad_performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sering Teratas"
        android:textColor="@color/Unify_NN900"
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ad_performance_info"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:tint="@color/Unify_NN500"
        app:layout_constraintBottom_toBottomOf="@id/ad_performance"
        app:layout_constraintTop_toTopOf="@id/ad_performance"
        app:layout_constraintStart_toEndOf="@id/ad_performance"
        app:srcCompat="@drawable/ic_info_topads"
        android:layout_marginStart="5dp"/>

    <include
        android:id="@+id/ads_performance_indicator"
        layout="@layout/ads_performance_indicator"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ad_performance_info"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>