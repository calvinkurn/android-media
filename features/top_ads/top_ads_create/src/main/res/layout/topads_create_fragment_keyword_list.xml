<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:hint="@string/ketik_kata_kunci"
        app:layout_constraintBottom_toBottomOf="@+id/add_btn"
        app:layout_constraintEnd_toStartOf="@+id/add_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_btn" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/add_btn"
        style="@style/Button.Submit.Green.Full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/tambah"
        app:buttonCompatSize="medium"
        app:buttonCompatType="primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sparator"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="#F3F4F5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/keyword_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sparator"
        tools:itemCount="20"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/topads_create_layout_keyword_list_item" />

    <com.tokopedia.design.component.RoundFloatingButton
        android:id="@+id/tip_btn"
        style="@style/TextView.Micro.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFCF5"
        android:text="@string/tip_memilih_kata_kunci"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/dp_8"
        app:buttonCompatSize="medium"
        app:buttonDrawableLeftCompat="@drawable/topads_create_ic_tips"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/topads_create_bg_shader_gray"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn_next"
        style="@style/Button.Submit.Green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lanjutkan"
        app:buttonCompatType="primary"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selected_info" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/selected_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/btn_next"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_next"
        app:typographyType="body_3"
        android:text="@string/_0_kata_kunci_dipilih"
        tools:text="@string/format_selected_keyword" />

</androidx.constraintlayout.widget.ConstraintLayout>