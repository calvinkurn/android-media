<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="circular" />

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/date_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipImageSrc="@drawable/ic_calendar_outlined"
            app:chipSize="medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:chipText="3 hari terakhir"
            tools:chipText="3 hari terakhir" />

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/ad_placement_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:chipImageSrc="@drawable/ic_speaker_black"
            app:chipSize="medium"
            app:chipText="Semua Penempatan"
            app:layout_constraintStart_toEndOf="@id/date_filter"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/product_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_filter" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintBottom_toBottomOf="@id/product_image"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toTopOf="@id/product_image"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            tools:text="Sepatu Adidas dummyads 3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_status_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/ad_status"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_image"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/btn_ad_status"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:tint="@color/Unify_YN300"
            app:layout_constraintBottom_toTopOf="@id/group_status_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_status_heading"
            app:srcCompat="@drawable/topads_green_dot" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/manual_ad_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="------"
            tools:text="Aktif"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toEndOf="@id/btn_ad_status"
            app:layout_constraintTop_toBottomOf="@id/group_status_heading"
            app:typographyType="display_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ad_status_dropdown"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:tint="@color/Unify_NN900"
            app:layout_constraintTop_toTopOf="@id/manual_ad_status"
            app:layout_constraintStart_toEndOf="@id/manual_ad_status"
            app:layout_constraintBottom_toBottomOf="@id/manual_ad_status"
            app:srcCompat="@drawable/ic_dropdown_arrow"
            android:layout_marginStart="8dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_status_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ads_not_delivered"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manual_ad_status"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/card_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/Unify_NN50"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/group_status_info">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Unify_NN50"
                android:padding="8dp">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tampil"
                    style="@style/CardView.Text"
                    android:layout_marginTop="8dp"
                    android:text="@string/topads_common_tampil"
                    app:layout_constraintEnd_toStartOf="@id/klik"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tampil_count"
                    style="@style/CardView.CountView"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toStartOf="@id/klik_count"
                    app:layout_constraintStart_toStartOf="@id/tampil"
                    app:layout_constraintTop_toBottomOf="@id/tampil"
                    android:text="0"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/pendapatan"
                    style="@style/CardView.Text"
                    android:layout_marginTop="8dp"
                    android:text="@string/topads_common_pendapatan"
                    app:layout_constraintEnd_toStartOf="@id/produk_terjual"
                    app:layout_constraintStart_toEndOf="@id/pengeluaran"
                    app:layout_constraintTop_toBottomOf="@id/klik_count" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/pendapatan_count"
                    style="@style/CardView.CountView"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toStartOf="@id/produk_terjual_count"
                    app:layout_constraintStart_toEndOf="@id/pengeluaran_count"
                    app:layout_constraintTop_toBottomOf="@id/pendapatan"
                    android:text="Rp 0" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/klik"
                    style="@style/CardView.Text"
                    android:layout_marginTop="8dp"
                    android:text="@string/topads_common_klik"
                    app:layout_constraintEnd_toStartOf="@id/persentase_klik"
                    app:layout_constraintStart_toEndOf="@id/tampil"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/klik_count"
                    style="@style/CardView.CountView"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/Unify_N700_96"
                    app:layout_constraintEnd_toStartOf="@id/persentase_klik_count"
                    app:layout_constraintStart_toEndOf="@id/tampil_count"
                    app:layout_constraintTop_toBottomOf="@id/klik"
                    android:text="0" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/pengeluaran"
                    style="@style/CardView.Text"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:text="@string/topads_common_pengeluaran"
                    app:layout_constraintEnd_toStartOf="@id/pendapatan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tampil_count" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/pengeluaran_count"
                    style="@style/CardView.CountView"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toStartOf="@id/pendapatan_count"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pengeluaran"
                    android:text="Rp 0" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/persentase_klik"
                    style="@style/CardView.Text"
                    android:text="@string/topads_common_persentase_klik"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/klik"
                    app:layout_constraintTop_toBottomOf="@id/klik_count"
                    app:layout_constraintTop_toTopOf="@id/tampil"
                    tools:text="Persentase Klik" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/persentase_klik_count"
                    style="@style/CardView.CountView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/klik_count"
                    app:layout_constraintTop_toBottomOf="@id/pendapatan"
                    app:layout_constraintTop_toTopOf="@id/tampil_count"
                    android:text="0.00 %" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/produk_terjual"
                    style="@style/CardView.Text"
                    android:text="@string/topads_common_efektivitas_iklan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pendapatan"
                    app:layout_constraintTop_toBottomOf="@id/klik_count"
                    app:layout_constraintTop_toTopOf="@id/pengeluaran" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/produk_terjual_count"
                    style="@style/CardView.CountView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pendapatan_count"
                    app:layout_constraintTop_toTopOf="@id/pengeluaran_count"
                    android:text="0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.tokopedia.unifycomponents.CardUnify>

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/Unify_NN50"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/card_statistics">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Unify_NN50"
                android:padding="8dp">

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/tips_logo"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/topads_horn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tips_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_lvl3"
                    android:text="@string/see_ads_performance_tips_heading"
                    android:textColor="@color/Unify_NN950"
                    app:layout_constraintBottom_toBottomOf="@id/tips_logo"
                    app:layout_constraintStart_toEndOf="@id/tips_logo"
                    app:layout_constraintTop_toTopOf="@id/tips_logo"
                    app:typographyType="display_3"
                    app:typographyWeight="bold" />

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/tips_expand_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown_arrow"
                    android:tint="@color/Unify_NN900"
                    app:layout_constraintBottom_toBottomOf="@id/tips_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tips_logo" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tips_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/tips_logo"
                    app:layout_constraintTop_toBottomOf="@id/tips_logo"
                    app:typographyType="paragraph_2"
                    tools:text="Buat produk lebih dikenal pembeli:\n   •  Tulis nama produk sesuai rumus Tokopedia: Nama Produk + Merek + Keterangan\n   •  Gunakan foto produk yang jernih\n   •  Tambahkan video produk yang menarik\n   •  Atur biaya iklan sesuai rekomendasi\n   •  Gunakan rekomendasi kata kunci\n\nTingkatkan penjualan produkmu\n   •  Tulis deskripsi produk yang informatif\n   •  Buat Diskon Toko untuk tarik minat pembeli\n   •  Upgrade toko ke Power Merchant untuk tingkatkan kepercayaan pembeli" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.tokopedia.unifycomponents.CardUnify>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/statistics_tips_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="card_statistics,tips"/>

        <View
            android:id="@+id/statistics_sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@color/Unify_NN300"
            app:layout_constraintTop_toBottomOf="@id/statistics_tips_barrier" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/ad_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/group_iklan"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statistics_sep"
            app:typographyType="display_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/ad_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-------------"
            tools:text="Kumpulan Sepatu Impor"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_type"
            app:typographyType="display_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/ad_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_group_settings"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_name"
            app:typographyType="display_2" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ad_detail_dropdown"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:tint="@color/Unify_GN500"
            app:layout_constraintTop_toTopOf="@id/ad_detail"
            app:layout_constraintStart_toEndOf="@id/ad_detail"
            app:layout_constraintBottom_toBottomOf="@id/ad_detail"
            app:srcCompat="@drawable/ic_dropdown_arrow"
            android:layout_marginStart="8dp"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/manual_btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:enabled="true"
            android:text="@string/manage_ads_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_detail"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/group_status_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_topads_automatic"
            app:layout_constraintTop_toBottomOf="@id/statistics_sep"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/auto_ads_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintBottom_toBottomOf="@id/group_status_logo"
            app:layout_constraintStart_toEndOf="@id/group_status_logo"
            app:layout_constraintTop_toTopOf="@id/group_status_logo"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            android:text="@string/iklan_otomatis" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_status_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="@id/group_status_logo"
            app:layout_constraintTop_toBottomOf="@id/group_status_logo"
            app:typographyType="paragraph_3"
            android:text="@string/product_and_advertising_costs_are_set_automatically_by_topads"
            android:layout_marginTop="5dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/ad_status_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="@id/group_status_description"
            app:layout_constraintTop_toBottomOf="@id/group_status_description"
            app:typographyType="display_3"
            android:text="@string/ad_status"
            android:layout_marginTop="16dp"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ad_status_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:tint="@color/Unify_GN500"
            app:srcCompat="@drawable/topads_green_dot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ad_status"
            app:layout_constraintBottom_toBottomOf="@id/ad_status"
            android:layout_marginStart="5dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/ad_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="------"
            tools:text="Aktif"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintTop_toBottomOf="@id/ad_status_heading"
            app:layout_constraintStart_toEndOf="@id/ad_status_indicator"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            android:layout_marginStart="8dp" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/automatic_btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:enabled="true"
            android:text="@string/setup_auto_ads"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_status"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/group_status_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="manual_btn_submit,automatic_btn_submit"/>

        <View
            android:id="@+id/credit_sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@color/Unify_NN300"
            app:layout_constraintTop_toBottomOf="@id/group_status_barrier" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credit_sep">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/creditHistoryImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/iconunify_wallet"
                android:tint="@color/Unify_NN900"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/credit_topads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginTop="16dp"
                android:text="@string/topads_dash_desc_credit_label"
                app:layout_constraintBottom_toTopOf="@id/creditAmount"
                app:layout_constraintStart_toEndOf="@id/creditHistoryImage"
                app:layout_constraintTop_toTopOf="@id/creditHistoryImage"
                app:typographyType="small" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/creditAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/credit_topads"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginBottom="16dp"
                android:textColor="@color/Unify_NN1000"
                app:layout_constraintBottom_toBottomOf="@id/creditHistoryImage"
                app:layout_constraintStart_toEndOf="@id/creditHistoryImage"
                app:layout_constraintTop_toBottomOf="@id/credit_topads"
                app:typographyType="heading_6"
                app:typographyWeight="bold"
                tools:text="Rp 10.000.0000" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/btnRefreshCredits"
                android:layout_width="@dimen/unify_space_12"
                android:layout_height="@dimen/unify_space_12"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:layout_toEndOf="@id/creditAmount"
                app:layout_constraintBottom_toBottomOf="@id/creditAmount"
                app:layout_constraintStart_toEndOf="@id/creditAmount"
                app:layout_constraintTop_toTopOf="@id/creditAmount"
                app:srcCompat="@drawable/icon_refresh_credit" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/addCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="@string/label_add_credit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unifyButtonSize="small"
                app:unifyButtonType="alternate"
                app:unifyButtonVariant="ghost" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/manual_ad_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tips,ad_type,ad_name,ad_detail,ad_detail_dropdown,manual_btn_submit" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/automatic_ad_group"
            android:layout_width="wrap_content"
