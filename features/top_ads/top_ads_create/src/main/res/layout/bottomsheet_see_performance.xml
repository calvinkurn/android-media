<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width = "match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width = "21dp"
            android:layout_height="21dp"
            app:loader_type="circular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/date_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:chipText="3 hari terakhir"
            app:chipImageSrc="@drawable/topads_ic_calendar"
            />
        <LinearLayout
            android:id="@+id/product_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/date_filter"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/product_image"
                android:layout_width = "40dp"
                android:layout_height="40dp"
                />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sepatu Adidas dummyads 3"
                app:typographyType="display_2"
                android:textColor="@color/Unify_NN950"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:maxLines="2"
                app:typographyWeight="bold"/>

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_status_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Iklan"
            app:typographyType="small"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintTop_toBottomOf="@id/product_heading"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktif"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintTop_toBottomOf="@id/group_status_heading"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/topads_green_dot"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_status_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tidak Tampil"
            app:typographyType="small"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintTop_toBottomOf="@id/group_status"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/Unify_NN50"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/group_status_info"
            android:layout_marginEnd="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Unify_NN50"
                android:padding="8dp">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tampil"
                    style="@style/CardView.Text"
                    android:layout_marginTop="8dp"
                    android:text="@string/topads_common_tampil"
                    app:layout_constraintEnd_toStartOf="@id/klik"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tampil_count"
                    style="@style/CardView.CountView"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toStartOf="@id/klik_count"
                    app:layout_constraintStart_toStartOf="@id/tampil"
                    app:layout_constraintTop_toBottomOf="@id/tampil"
                    android:text="0" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/pengeluaran"
                    style="@style/CardView.Text"
                    android:layout_marginTop="8dp"
                    android:text="@string/topads_common_pendapatan"
                    app:layout_constraintEnd_toStartOf="@id/pendapatan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tampil_count" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/pengeluaran_count"
                    style="@style/CardView.CountView"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toStartOf="@id/pendapatan_count"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pengeluaran"
                    android:text="Rp 0" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/klik"
                    style="@style/CardView.Text"
                    android:layout_marginTop="8dp"
                    android:text="@string/topads_common_klik"
                    app:layout_constraintEnd_toStartOf="@id/persentase_klik"
                    app:layout_constraintStart_toEndOf="@id/tampil"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/klik_count"
                    style="@style/CardView.CountView"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/Unify_N700_96"
                    app:layout_constraintEnd_toStartOf="@id/persentase_klik_count"
                    app:layout_constraintStart_toEndOf="@id/tampil_count"
                    app:layout_constraintTop_toBottomOf="@id/klik"
                    android:text="0" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/pendapatan"
                    style="@style/CardView.Text"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:text="@string/topads_common_pengeluaran"
                    app:layout_constraintEnd_toStartOf="@id/produk_terjual"
                    app:layout_constraintStart_toEndOf="@id/pengeluaran"
                    app:layout_constraintTop_toBottomOf="@id/klik_count" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/pendapatan_count"
                    style="@style/CardView.CountView"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toStartOf="@id/produk_terjual_count"
                    app:layout_constraintStart_toEndOf="@id/pengeluaran_count"
                    app:layout_constraintTop_toBottomOf="@id/pendapatan"
                    android:text="Rp 0" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/persentase_klik"
                    style="@style/CardView.Text"
                    android:text="@string/topads_common_persentase_klik"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/klik"
                    app:layout_constraintTop_toBottomOf="@id/klik_count"
                    app:layout_constraintTop_toTopOf="@id/tampil"
                    tools:text="Persentase Klik" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/persentase_klik_count"
                    style="@style/CardView.CountView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/klik_count"
                    app:layout_constraintTop_toBottomOf="@id/pendapatan"
                    app:layout_constraintTop_toTopOf="@id/tampil_count"
                    android:text="0.00 %" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/produk_terjual"
                    style="@style/CardView.Text"
                    android:text="@string/topads_common_efektivitas_iklan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pendapatan"
                    app:layout_constraintTop_toBottomOf="@id/klik_count"
                    app:layout_constraintTop_toTopOf="@id/pengeluaran" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/produk_terjual_count"
                    style="@style/CardView.CountView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pendapatan_count"
                    app:layout_constraintTop_toTopOf="@id/pengeluaran_count"
                    android:text="0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.tokopedia.unifycomponents.CardUnify>

        <View
            android:id="@+id/statistics_sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/card"
            android:background="@color/Unify_NN300"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grup Iklan"
            app:typographyType="display_3"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintTop_toBottomOf="@id/statistics_sep"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kumpulan Sepatu Impor"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintTop_toBottomOf="@id/group_type"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Pengaturan Grup"
            app:typographyType="display_2"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintTop_toBottomOf="@id/group_name"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/manage_ads_group"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost"
            app:layout_constraintTop_toBottomOf="@id/group_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:enabled="true"
            android:layout_marginEnd="16dp"/>

        <View
            android:id="@+id/credit_sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/btn_submit"
            android:background="@color/Unify_NN300"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"/>

<!--        <include-->
<!--            android:id="@+id/tambahKreditLayout"-->
<!--            layout="@layout/layout_tambah_kredit_topads_dashboard"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginEnd="16dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/credit_sep" />-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credit_sep"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/creditHistoryImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/iconunify_wallet"
                android:tint="@color/Unify_NN900"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/credit_topads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:text="@string/topads_dash_desc_credit_label"
            app:layout_constraintStart_toEndOf="@id/creditHistoryImage"
            app:layout_constraintTop_toTopOf="@id/creditHistoryImage"
            app:layout_constraintBottom_toTopOf="@id/creditAmount"
            app:typographyType="small"
            android:layout_marginTop="16dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/creditAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credit_topads"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:textColor="@color/Unify_NN1000"
            app:layout_constraintStart_toEndOf="@id/creditHistoryImage"
            app:layout_constraintTop_toBottomOf="@id/credit_topads"
            app:layout_constraintBottom_toBottomOf="@id/creditHistoryImage"
            app:typographyType="heading_6"
            app:typographyWeight="bold"
            android:text="Rp 10.000.0000"
            android:layout_marginBottom="16dp"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/btnRefreshCredits"
            android:layout_width="@dimen/unify_space_12"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_toEndOf="@id/creditAmount"
            app:srcCompat="@drawable/icon_refresh_credit"
            app:layout_constraintBottom_toBottomOf="@id/creditAmount"
            app:layout_constraintStart_toEndOf="@id/creditAmount"
            app:layout_constraintTop_toTopOf="@id/creditAmount" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/addCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_add_credit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyButtonSize="small"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost"
            android:enabled="false"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>