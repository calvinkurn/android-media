<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    android:clickable="true"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardUseCompatPadding="true"
    android:padding="@dimen/dp_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/keyword_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textColor="@color/topads_heading_color"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".66"
            app:typographyType="heading_5"
            tools:text="@tools:sample/lorem" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/topads_edit_select_sort"
            android:textColor="@color/tkpd_green_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/keyword_name"
            app:typographyType="heading_6"
            tools:text="Pencarian Luas" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/drop_down_arrow"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:tint="@color/tkpd_green_header"
            app:layout_constraintBottom_toBottomOf="@+id/sort"
            app:layout_constraintStart_toEndOf="@id/sort"
            app:layout_constraintTop_toBottomOf="@+id/keyword_name"
            app:layout_constraintTop_toTopOf="@+id/sort" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>