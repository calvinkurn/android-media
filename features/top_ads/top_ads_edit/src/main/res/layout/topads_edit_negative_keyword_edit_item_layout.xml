<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:clickable="true"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/keyword_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950_96"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".66"
            app:typographyType="heading_5"
            tools:text="@tools:sample/lorem" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/topads_edit_select_sort"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/keyword_name"
            app:typographyType="body_2"
            tools:text="Pencarian Luas" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/drop_down_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:tint="@color/Unify_GN500"
            app:layout_constraintBottom_toBottomOf="@+id/sort"
            app:layout_constraintStart_toEndOf="@id/sort"
            app:layout_constraintTop_toBottomOf="@+id/keyword_name"
            app:layout_constraintTop_toTopOf="@+id/sort" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/delete"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/drop_down_arrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>