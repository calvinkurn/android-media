<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/topads_bg_top_round">


    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="@dimen/dp_2"
        app:layout_constraintEnd_toStartOf="@+id/typography30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topads_create_ic_group_close" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:text="@string/topads_edit_urutkan"
        app:typographyType="heading_3"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_close" />


    <RadioGroup
        android:id="@+id/rb_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/topads_create_h_divider"
        android:dividerPadding="@dimen/dp_16"
        android:inputType="text"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typography30">

        <RadioButton
            android:id="@+id/rb_terlaris"
            style="@style/TopadsProductSortRadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:checked="true"
            android:layoutDirection="rtl"
            android:text="@string/topads_edit_terlaris"
            android:textAlignment="textStart"
            android:layout_gravity="start" />

        <RadioButton
            android:id="@+id/rb_terbaru"
            style="@style/TopadsProductSortRadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layoutDirection="rtl"
            android:text="@string/topads_edit_terbaru"
            android:textAlignment="textStart"
            android:layout_gravity="start" />

        <RadioButton
            android:id="@+id/rb_tertinggi"
            style="@style/TopadsProductSortRadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layoutDirection="rtl"
            android:text="@string/topads_edit_harga_tertinggi"
            android:textAlignment="textStart"
            android:layout_gravity="start" />

        <RadioButton
            android:id="@+id/rb_terendah"
            style="@style/TopadsProductSortRadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layoutDirection="rtl"
            android:text="@string/topads_edit_harga_terendah"
            android:textAlignment="textStart"
            android:layout_gravity="start" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>