<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtEditKeywordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/topads_edit_keyword_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cvBidLayoutEditKeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        app:layout_constraintTop_toBottomOf="@id/txtEditKeywordTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl6">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/txtBidTitleEditKeyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:text="@string/autobid_otomatis_title"
                android:textAllCaps="true"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/ivBidInfoEditKeyword"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:src="@drawable/iconunify_information"
                android:tint="@color/Unify_NN900"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txtBidTitleEditKeyword"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
                android:id="@+id/switchBidEditKeyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/unify_space_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/autobid_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/unify_space_12"
        app:closeButtonVisibility="gone"
        app:descriptionText="@string/topads_edit_auto_bid_ticker_title"
        app:layout_constraintTop_toBottomOf="@+id/cvBidLayoutEditKeyword"
        app:tickerShapeType="loose"
        app:tickerType="announcement" />

    <LinearLayout
        android:id="@+id/keyword_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autobid_ticker">

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:centerText="true"
            app:chipSize="medium"
            app:chipText="@string/topads_edit_kata_kunci"
            app:chipType="normal" />

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/neg_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:centerText="true"
            app:chipSize="medium"
            app:chipText="@string/topads_edit_kata_kunci_neg"
            app:chipType="normal" />
    </LinearLayout>

    <com.tokopedia.topads.common.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyword_grp" />
</androidx.constraintlayout.widget.ConstraintLayout>