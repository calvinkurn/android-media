<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_NN0">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtEditKeywordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/topads_edit_keyword_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cvBidLayoutEditKeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtEditKeywordTitle">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.tokopedia.topads.common.view.TopadsAutoBidSwitchPartialLayout
                android:id="@+id/autoBidSwitchLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl6"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/desc_auto_ads_advantage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="18dp">

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_NN900"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/title_otomatis_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pengaturan_iklan_auto_1"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_1"
                    app:layout_constraintStart_toEndOf="@+id/icon_1"
                    app:layout_constraintTop_toTopOf="@+id/icon_1"
                    app:typographyType="paragraph_3" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_NN900"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    app:layout_constraintEnd_toEndOf="@+id/icon_1"
                    app:layout_constraintStart_toStartOf="@+id/icon_1"
                    app:layout_constraintTop_toBottomOf="@+id/icon_1" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/title_otomatis_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pengaturan_iklan_auto_2"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_2"
                    app:layout_constraintStart_toEndOf="@+id/icon_2"
                    app:layout_constraintTop_toBottomOf="@+id/icon_1"
                    app:typographyType="paragraph_3" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_NN900"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    app:layout_constraintEnd_toEndOf="@+id/icon_2"
                    app:layout_constraintStart_toStartOf="@+id/icon_2"
                    app:layout_constraintTop_toBottomOf="@+id/icon_2" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/title_otomatis_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pengaturan_iklan_auto_3"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_3"
                    app:layout_constraintStart_toEndOf="@+id/icon_3"
                    app:layout_constraintTop_toBottomOf="@+id/icon_2"
                    app:typographyType="paragraph_3" />


                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_NN900"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    app:layout_constraintEnd_toEndOf="@+id/icon_3"
                    app:layout_constraintStart_toStartOf="@+id/icon_3"
                    app:layout_constraintTop_toBottomOf="@+id/icon_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/title_otomatis_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pengaturan_iklan_auto_4"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_4"
                    app:layout_constraintStart_toEndOf="@+id/icon_4"
                    app:layout_constraintTop_toBottomOf="@+id/icon_3"
                    app:typographyType="paragraph_3" />
                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    app:layout_constraintTop_toBottomOf="@id/icon_4"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/autobid_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/unify_space_12"
        app:closeButtonVisibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cvBidLayoutEditKeyword"
        app:tickerShapeType="loose"
        app:tickerType="announcement" />

    <LinearLayout
        android:id="@+id/keyword_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autobid_ticker">

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:centerText="true"
            app:chipSize="medium"
            app:chipText="@string/topads_edit_kata_kunci"
            app:chipType="normal" />

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/neg_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:centerText="true"
            app:chipSize="medium"
            app:chipText="@string/topads_edit_kata_kunci_neg"
            app:chipType="normal" />
    </LinearLayout>

    <com.tokopedia.topads.common.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyword_grp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>