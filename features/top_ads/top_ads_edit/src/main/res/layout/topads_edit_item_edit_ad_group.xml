<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/edit_ad_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@id/edit_ad_item_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/iconUnify"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Three Line List" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/edit_ad_item_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:maxLines="2"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toStartOf="@+id/iconUnify"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_ad_item_title"
        app:typographyType="paragraph_3"
        tools:text="Put description here, use maximum of two lines please :)" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/edit_ad_item_shimmer"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_ad_item_title"
        app:layout_constraintWidth_percent="0.5"
        app:loader_type="rect"
        app:typographyType="paragraph_3" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconUnify"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginRight="16dp"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Unify_NN100"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

