<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_error_state"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardUseCompatPadding="true"
    tools:visibility="visible">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/topads_widget_mask_error_state" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_retry"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.Title.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konten gagal ditampilkan" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Klik icon disamping buat coba lagi"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/topads_widhget_ic_retry" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>