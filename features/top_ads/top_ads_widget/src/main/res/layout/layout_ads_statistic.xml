<androidx.cardview.widget.CardView
    android:id="@+id/layout_ads_statistic"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                app:srcCompat="@drawable/topads_widget_ic_stat" />

            <TextView
                style="@style/TextView.Micro.Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/statistik_topads_minggu_ini" />

            <ImageView
                android:id="@+id/btn_expander"
                style="@style/TextView.Title.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="right"
                app:srcCompat="@drawable/topads_widget_ic_up" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/statistic_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/detail_statistic_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/topads_widget_bg_statistic"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView
                            style="@style/TextView.Micro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tampil" />

                        <TextView
                            android:id="@+id/txt_impresion_count"
                            style="@style/TextView.Title.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="0" />
                    </LinearLayout>

                    <com.tokopedia.topads.widget.dashboard.view.DividerView
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layerType="software"
                        app:color="#DBDEE2"
                        app:dashGap="5dp"
                        app:dashLength="5dp"
                        app:dashThickness="1dp"
                        app:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView
                            style="@style/TextView.Micro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/klik" />

                        <TextView
                            android:id="@+id/txt_click_count"
                            style="@style/TextView.Title.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <com.tokopedia.topads.widget.dashboard.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layerType="software"
                    app:color="#DBDEE2"
                    app:dashGap="5dp"
                    app:dashLength="5dp"
                    app:dashThickness="1dp"
                    app:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView
                            style="@style/TextView.Micro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pengeluaran" />

                        <TextView
                            android:id="@+id/txt_spend_count"
                            style="@style/TextView.Title.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="0" />
                    </LinearLayout>

                    <com.tokopedia.topads.widget.dashboard.view.DividerView
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layerType="software"
                        app:color="#DBDEE2"
                        app:dashGap="5dp"
                        app:dashLength="5dp"
                        app:dashThickness="1dp"
                        app:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView
                            style="@style/TextView.Micro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pendapatan" />

                        <TextView
                            android:id="@+id/txt_profit_count"
                            style="@style/TextView.Title.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="0" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/container_topads_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:background="@drawable/topads_widget_bg_orange"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/topads_widget_ic_warning" />

                <TextView
                    android:id="@+id/wording_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="Iklanmu nonaktif. Yuk, kembali beriklan dengan TopAds agar produkmu tampil teratas." />

                <TextView
                    android:id="@+id/btn_start_active_topads"
                    style="@style/TextView.Micro.Green.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wording_title"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="Aktifkan Sekarang" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_empty_wording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="@string/wording_empty_ads" />


            <Button
                android:id="@+id/btn_go_to_dashboard_topads"
                style="@style/Button.Submit.Green.Full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat Dashboard" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>