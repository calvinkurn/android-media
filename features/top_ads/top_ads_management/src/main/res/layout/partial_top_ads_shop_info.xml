<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LabelLayout.Border"
    android:id="@+id/view_group_deposit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_shop_icon"
        android:scaleType="fitXY"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/icon_penjualan"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_shop_title"
            style="@style/TextView.Small.Bold"
            android:text="@string/top_ads_statistic_info_default_value"/>

        <TextView
            android:id="@+id/text_view_deposit_desc"
            android:maxLines="3"
            style="@style/TextView.Small.BlackSecondary"
            android:text="@string/top_ads_statistic_info_default_value"/>
    </LinearLayout>

    <ImageButton
        android:scaleType="fitXY"
        android:id="@+id/image_button_add_deposit"
        android:layout_width="@dimen/topads_dashboard_size_image_plus"
        android:layout_height="@dimen/topads_dashboard_size_image_plus"
        android:background="@null"
        app:srcCompat="@drawable/ic_add_green"/>
</LinearLayout>