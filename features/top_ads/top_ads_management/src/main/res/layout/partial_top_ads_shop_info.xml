<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LabelLayout.Border"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_group_deposit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_shop_icon"
        android:scaleType="fitXY"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/icon_penjualan"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_add_deposit"
            style="@style/TextView.Small.Orange"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_view_deposit_desc"
            android:text="@string/label_add_credit"/>

        <TextView
            android:id="@+id/text_view_shop_title"
            style="@style/TextView.Title.Bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/text_view_add_deposit"
            android:layout_toStartOf="@+id/text_view_add_deposit"
            android:text="@string/top_ads_statistic_info_default_value"/>

        <TextView
            android:id="@+id/text_view_deposit_desc"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_view_shop_title"
            android:layout_toLeftOf="@+id/text_view_add_deposit"
            android:layout_toStartOf="@+id/text_view_add_deposit"
            android:text="@string/top_ads_desc_credit_label"/>

        <TextView
            android:id="@+id/text_view_deposit_value"
            style="@style/TextView.Small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_view_deposit_desc"
            android:layout_toLeftOf="@+id/text_view_add_deposit"
            android:layout_toStartOf="@+id/text_view_add_deposit"
            android:text="@string/top_ads_statistic_info_default_value"/>
    </RelativeLayout>

</LinearLayout>