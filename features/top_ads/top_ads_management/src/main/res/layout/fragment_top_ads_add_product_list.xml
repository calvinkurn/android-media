<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/top_ads_add_product_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/top_ads_add_product_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/container_button_next" />

            <LinearLayout
                android:id="@+id/container_button_next"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/container_counter_selection"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view_shadow_gray"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@drawable/cover_shader_gray"/>
                    <TextView
                        android:id="@+id/counter_product"
                        style="@style/TextView.Title.BlackSecondary"
                        android:padding="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image_pipe_count"
                        android:text="@string/top_ads_label_total_selected_product" />
                    <include layout="@layout/partial_separator_horizontal"/>
                </LinearLayout>

                <Button
                    android:id="@+id/top_ads_btn_next_"
                    style="@style/Button.Submit.Green"
                    android:layout_width="match_parent"
                    android:text="@string/title_save" />
            </LinearLayout>

        </RelativeLayout>
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</LinearLayout>
