<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            style="@style/LabelLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false">

            <TextView
                style="@style/TextView.Small.Bold"
                android:text="@string/top_ads_title_keyword_add_keyword"/>

            <TextView
                android:id="@+id/totalKeyAdded"
                style="@style/TextView.Micro.BlackSecondary"
                android:text="@string/top_ads_keywords_total_current_and_max"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardview_light_background"
                android:layout_margin="@dimen/dp_2"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_3"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/sp_8">

                    <com.tokopedia.design.text.TkpdHintTextInputLayout
                        android:id="@+id/textInputLayoutDescription"
                        style="@style/HintTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editTextDescription"
                            style="@style/EditText"
                            android:layout_width="match_parent"
                            android:gravity="top"
                            android:textSize="@dimen/sp_14"
                            android:hint="@string/keyword_enter_product_description"
                            android:inputType="textMultiLine"
                            android:lines="6"/>
                    </com.tokopedia.design.text.TkpdHintTextInputLayout>

                    <TextView
                        style="@style/TextView.Micro.BlackDisabled"
                        android:text="@string/top_ads_keywords_add_how_to"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/TextView.Small.Bold"
                android:layout_marginTop="@dimen/sp_16"
                android:text="@string/top_ads_title_keyword_add_keyword"/>

            <RadioGroup
                android:id="@+id/keywordRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/TopAdsCustomRadioGroup">

                <RadioButton
                    android:id="@+id/keywordPhraseRadioButton"
                    style="@style/RadioButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minHeight="@dimen/dp_64"
                    android:checked="true"
                    android:text="@string/top_ads_keyword_phrase_match_2"/>

                <RadioButton
                    android:id="@+id/keywordExactRadioButton"
                    style="@style/RadioButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minHeight="@dimen/dp_64"
                    android:text="@string/top_ads_keyword_exact_match_2"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.Small.BlackSecondary"
                    android:text="@string/topads_keyword_example" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.Small.BlackSecondary"
                    android:text="@string/topads_keyword_example_value"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.Small.BlackSecondary"
                    android:text="@string/topads_keyword_search_example" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textKeywordExample"
                    style="@style/TextView.Small.BlackSecondary"
                    tools:text="@string/topads_keyword_search_example_value_phrase"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/sp_12">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/seeDetailTextView"
                    style="@style/TextView.Micro.Green"
                    android:text="@string/lihat_detail"/>

                <ImageView
                    android:id="@+id/seeDetailToggleIcon"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    app:srcCompat="@drawable/arrow_drop_down"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_4"
                    tools:ignore="ContentDescription"/>

            </LinearLayout>

            <com.tkpd.library.ui.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/seeDetailToggleDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:ael_duration="400"
                app:ael_expanded="true">

                <TextView
                    android:id="@+id/keywordTypeDesc"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:text="@string/top_ads_see_detail_info_keyword_phrase"/>

            </com.tkpd.library.ui.expandablelayout.ExpandableRelativeLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout style="@style/LabelLayout"
        android:orientation="vertical"
        android:clickable="false"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="0dp">

        <Button
            android:id="@+id/buttonSave"
            style="@style/Button.Submit.Green"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/top_ads_keyword_save" />
    </LinearLayout>

</LinearLayout>