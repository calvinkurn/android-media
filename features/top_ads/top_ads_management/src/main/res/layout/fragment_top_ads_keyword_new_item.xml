<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            style="@style/LabelLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false">

            <TextView
                style="@style/TextView.Small.Bold"
                android:text="@string/top_ads_title_keyword_add_keyword"/>

            <TextView
                style="@style/TextView.Micro.BlackSecondary"
                android:text="@string/top_ads_keywords_total_current_and_max"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardview_light_background"
                android:layout_margin="@dimen/dp_2"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_3"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/sp_8">

                    <com.tokopedia.design.text.TkpdHintTextInputLayout
                        android:id="@+id/text_input_layout_description"
                        style="@style/HintTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edit_text_description"
                            style="@style/EditText"
                            android:layout_width="match_parent"
                            android:gravity="top"
                            android:textSize="@dimen/sp_14"
                            android:hint="@string/keyword_enter_product_description"
                            android:inputType="textMultiLine"
                            android:lines="6"/>
                    </com.tokopedia.design.text.TkpdHintTextInputLayout>

                    <TextView
                        style="@style/TextView.Micro.BlackDisabled"
                        android:text="@string/top_ads_keywords_add_how_to"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/TextView.Small.Bold"
                android:layout_marginTop="@dimen/sp_16"
                android:text="@string/top_ads_title_keyword_add_keyword"/>

            <RadioGroup
                android:id="@+id/keywordRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TopAdsCustomRadioGroup">

                <RadioButton
                    android:id="@+id/keywordPositiveRadioButton"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:minHeight="@dimen/dp_64"
                    android:checked="true"
                    android:text="@string/top_ads_keyword_phrase_match_2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/bg_line_separator"/>

                <RadioButton
                    android:id="@+id/keywordNegativeRadioButton"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:minHeight="@dimen/dp_64"
                    android:text="@string/top_ads_keyword_exact_match_2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/bg_line_separator"/>

            </RadioGroup>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_keyword_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingTop="@dimen/dp_5"
                tools:text="@string/top_ads_keyword_phrase_match_example_2"
                android:maxLines="4"
                style="@style/TextView.Small.BlackSecondary"/>



            <com.tokopedia.topads.keyword.view.widget.KeywordRecyclerView
                android:id="@+id/keywordRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </ScrollView>

    <LinearLayout style="@style/LabelLayout"
        android:orientation="vertical"
        android:clickable="false"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="0dp">

        <Button
            android:id="@+id/buttonSave"
            style="@style/Button.Submit.Green"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/top_ads_keyword_save" />
    </LinearLayout>

</LinearLayout>