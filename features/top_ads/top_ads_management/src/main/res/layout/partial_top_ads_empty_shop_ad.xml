<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_empty_title_text"
        style="@style/TextView.Small"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/top_ads_empty_shop_title_text"/>

    <TextView
        android:id="@+id/text_view_empty_content_text"
        style="@style/TextView.Small.BlackSecondary"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:maxLines="3"
        android:text="@string/top_ads_empty_shop_content_text"/>

    <Button
        android:id="@+id/button_add_promo"
        style="@style/Button.Submit.Green"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/menu_top_ads_add_promo_shop"/>
</LinearLayout>