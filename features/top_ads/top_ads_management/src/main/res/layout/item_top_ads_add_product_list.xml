<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/top_ads_add_product_list_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:src="@color/tkpd_main_green" />

    <TextView
        android:id="@+id/top_ads_add_product_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/top_ads_add_product_list_imageview"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/top_ads_add_product_list_imageview"
        android:layout_toRightOf="@id/top_ads_add_product_list_imageview"
        android:textColor="#B3000000"
        android:textSize="16sp"
        tools:text="Tiento Baselayer Manset Rash Guard \nCompression Long Pants Black Red" />

    <TextView
        android:id="@+id/top_ads_add_product_list_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/top_ads_add_product_list_description"
        android:layout_alignStart="@id/top_ads_add_product_list_description"
        android:layout_below="@id/top_ads_add_product_list_description"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_bg_white_border"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:textSize="11sp"
        tools:text="[Nama_Grup]" />

    <View
        android:id="@+id/empty_space"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/top_ads_add_product_list_description"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#1E000000" />
</RelativeLayout>
