<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/dp_16">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/partial_top_ads_search_group" />

            <com.tokopedia.design.text.SpinnerTextView
                android:id="@+id/spinner_keyword_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:spinner_entries="@array/top_ads_keyword_type_entries"
                app:spinner_hint="@string/top_ads_choose_keyword_type"
                app:spinner_selection_index="-1"
                app:spinner_values="@array/top_ads_keyword_type_values"
                app:spinner_text_size="@dimen/font_medium"/>

            <include layout="@layout/partial_top_ads_keyword_info" />

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

    <Button
        android:id="@+id/button_next"
        style="@style/Button.Submit.Green"
        android:enabled="false"
        android:text="@string/next"
        android:layout_marginBottom="@dimen/dp_16"/>

</LinearLayout>