<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/dp_16">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.Title.BlackPrimary"
                android:textSize="@dimen/sp_18"
                android:text="@string/label_top_ads_choose_group"/>

            <TextView
                style="@style/TextView.Micro.BlackDisabled"
                android:text="@string/label_top_ads_choose_group_desc"
                android:layout_marginBottom="@dimen/dp_24"/>

            <include layout="@layout/partial_top_ads_search_group" />

            <TextView
                android:id="@+id/view_info"
                style="@style/TextView.Micro.BlackSecondary"
                android:lineSpacingExtra="@dimen/line_spacing_6"
                android:text="@string/label_top_ads_choose_group_info"/>

            <TextView
                style="@style/TextView.Title.BlackPrimary"
                android:textSize="@dimen/sp_18"
                android:text="@string/label_top_ads_choose_type"
                android:layout_marginTop="@dimen/dp_40"/>

            <com.tokopedia.topads.common.view.widget.TopAdsSubtitledRadioGroup
                android:id="@+id/keywordRadioGroup"
                style="@style/TopAdsCustomRadioGroup">

                <com.tokopedia.topads.common.view.widget.TopAdsSubtitledRadioButton
                    android:gravity="center_vertical"
                    android:id="@+id/keywordPositiveRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_64"
                    app:radio_id="@+id/keywordPositiveRadioButton"
                    app:title_radio="@string/top_ads_keyword_title"
                    app:subtitle_radio="@string/top_ads_keyword_subtitle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/bg_line_separator"/>

                <com.tokopedia.topads.common.view.widget.TopAdsSubtitledRadioButton
                    android:gravity="center_vertical"
                    android:id="@+id/keywordNegativeRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_64"
                    app:radio_id="@+id/keywordNegativeRadioButton"
                    app:title_radio="@string/top_ads_keyword_title_negative"
                    app:subtitle_radio="@string/top_ads_keyword_subtitle_negative"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/bg_line_separator"/>

            </com.tokopedia.topads.common.view.widget.TopAdsSubtitledRadioGroup>

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

    <Button
        android:id="@+id/buttonNext"
        style="@style/Button.Submit.Green"
        android:enabled="false"
        android:text="@string/next"
        android:layout_marginBottom="@dimen/dp_16"/>

</LinearLayout>