<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="@android:color/white">
        <com.tokopedia.design.label.DateLabelView
            android:id="@+id/date_label_view"
            style="@style/LabelLayout.BorderBottom"
            app:layout_scrollFlags="scroll|snap|enterAlways" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/partial_top_ads_header_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.tokopedia.seller.common.widget.LabelView
                    android:id="@+id/items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/topads_detail_padding_item"
                    app:title="@string/top_ads_title_product" />

                <include layout="@layout/partial_top_ads_content_detail" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</androidx.coordinatorlayout.widget.CoordinatorLayout>