<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_choose_group"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.VerySmall"
        style="@style/TextInputLayout"
        android:hint="@string/topads_title_promo_grup_activity">

        <com.tokopedia.topads.dashboard.view.widget.TopAdsCustomAutoCompleteTextView
            android:id="@+id/choose_group_auto_text"
            style="@style/EditText.GreenHighlight.TopAdsCustomAutoCompleteTextView" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:text="@string/label_top_ads_info_group_option_exist"
        android:id="@+id/view_info_radio_choose_group"
        style="@style/TextView.Micro.BlackSecondary"/>

</LinearLayout>