<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/topads_detail_padding_item"
    android:paddingLeft="@dimen/topads_detail_padding_item"
    android:paddingRight="@dimen/topads_detail_padding_item"
    android:paddingStart="@dimen/topads_detail_padding_item">

    <FrameLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/top_ads_filter_item_min_height">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/group_filter_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="@string/top_ads_keyword_search_group"
            android:imeOptions="actionSearch"
            android:background="@drawable/background_edittext_line"
            android:maxLines="1"
            android:paddingEnd="24dp"
            android:paddingRight="24dp"
            android:singleLine="true"
            android:textColor="@drawable/color_state_disable_text"
            android:textColorHighlight="@android:color/transparent"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/group_filter_search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/ic_group_magnifier" />

        <View
            android:id="@+id/hide_things"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_ads_filter_item_min_height"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</LinearLayout>