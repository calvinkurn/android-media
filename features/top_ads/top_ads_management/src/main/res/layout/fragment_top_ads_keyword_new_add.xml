<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_24"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false">

        <TextView
            style="@style/TextView.Title.BlackPrimary"
            android:textSize="@dimen/sp_18"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/top_ads_title_keyword_add_keyword"/>

        <TextView
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/top_ads_title_keyword_add_keyword_desc"/>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/keywordCurrentLabelView"
            style="@style/LabelLayout.TopAdsLabelView"
            android:layout_height="@dimen/dp_72"
            app:lv_content="@string/see_label"
            app:lv_sub_title="@string/top_ads_keyword_total_keyword_in_group_2"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/keyword_group_label_view"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/bg_list_separator"/>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/keywordGroupLabelView"
            style="@style/LabelLayout.TopAdsLabelView"
            android:layout_height="@dimen/dp_64"
            app:lv_content="@string/top_ads_keyword_add"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/top_ads_keywords_total_current_and_max"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/bg_list_separator"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/cardview_light_background"
                android:layout_margin="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_2"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_3"
                app:cardPreventCornerOverlap="false">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/keywordRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

            <include
                android:id="@+id/emptyLayout"
                layout="@layout/top_ads_empty_layout"
                android:visibility="gone" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout style="@style/LabelLayout"
        android:orientation="vertical"
        android:clickable="false"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="0dp">

        <Button
            android:id="@+id/buttonSave"
            style="@style/Button.Submit.Green"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/top_ads_keyword_save" />
    </LinearLayout>

</LinearLayout>