<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_4"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_3"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_sm">

        <ImageView
            android:id="@+id/thumb"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32" />

        <include
            layout="@layout/partial_top_ads_ad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/image_button_option"
            android:layout_width="@dimen/dp_24"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_topads_more_vert_grey"
                tools:src="@drawable/ic_topads_more_vert_grey" />
        </FrameLayout>


        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check_box_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/checkBoxStyleSeller"
            android:visibility="gone"
            tools:visibility="gone" />

    </LinearLayout>

</android.support.v7.widget.CardView>
