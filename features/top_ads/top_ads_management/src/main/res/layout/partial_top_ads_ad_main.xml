<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_product"
        style="@style/TextView.Small.Bold"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/total_sold"
        style="@style/TextView.Micro.BlackDisabled"
        android:visibility="gone"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/profit"
        style="@style/TextView.Micro.BlackDisabled"
        android:visibility="gone"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/group_name"
        style="@style/TextView.Micro.BlackDisabled"
        tools:text="@string/app_name" />

    <LinearLayout
        android:id="@+id/status_active_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/status_active_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/ic_status_green" />

        <TextView
            android:id="@+id/status_active"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            tools:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/promo_per_click_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView.Micro.Bold"
            android:text="@string/label_top_ads_max_price_hint" />

        <TextView
            android:id="@+id/price_promo_per_click"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            tools:text="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/promo_price_used_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_ads_dashboard_padding_cards_small"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView.Micro.Bold"
            android:text="@string/label_top_ads_sent" />

        <TextView
            android:id="@+id/promo_price_used"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            tools:text="@string/app_name" />

    </LinearLayout>
</LinearLayout>