<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_cost_per_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_top_ads_cost_per_click"
            style="@style/TextInputLayout"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.VerySmall"
            android:layout_marginBottom="@dimen/top_ads_margin_layout_very_small"
            android:hint="@string/top_ads_keyword_cost_per_click">

            <com.tokopedia.seller.common.widget.PrefixEditText
                android:id="@+id/edit_text_top_ads_cost_per_click"
                style="@style/EditText.Currency"
                android:layout_width="match_parent"
                app:prefix="@string/top_ads_label_currency_rupiah_editext" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text_view_top_ads_max_price_description"
            style="@style/TextView.Small.BlackSecondary"
            android:layout_marginBottom="@dimen/top_ads_margin_layout_small"
            android:maxLines="3"
            android:text="@string/top_ads_label_price_desc" />

    </LinearLayout>

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:buttonCompatType="primary"
        app:buttonCompatSize="big"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/margin_sm"
        android:text="@string/save"/>
</LinearLayout>