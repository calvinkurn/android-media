<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditText.GreenHighlight.TopAdsCustomAutoCompleteTextView">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="TopAdsProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/top_ads_progressbar</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>

    <style name="TopAdsCustomRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TopAdsRadioExpandView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="RadioButton.TopAds">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:lineSpacingExtra">@dimen/sp_2</item>
    </style>

    <style name="LabelLayout.TopAdsLabelView">
        <item name="android:minHeight">@dimen/dp_64</item>
        <item name="lv_image_width">@dimen/dp_28</item>
        <item name="lv_image_margin_right">@dimen/dp_24</item>
        <item name="lv_sub_title_text_size">@dimen/sp_14</item>
    </style>

    <style name="LabelLayout.TopAdsLabelView.BorderBottom">
        <item name="android:background">@drawable/bg_border_bottom</item>
    </style>

    <style name="CoolDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
