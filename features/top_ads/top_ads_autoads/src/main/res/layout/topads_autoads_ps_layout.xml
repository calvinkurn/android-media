<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loading"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circular"
        android:elevation="50dp"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/create_auto_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_auto_ads_create"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/potential_broadcast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/potential_ads_reach"
        android:textColor="@color/Unify_NN950"
        android:textSize="12sp"
        app:typographyType="display_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/potential_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        tools:text="534.984"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potential_broadcast_text" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/time_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_range"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/potential_broadcast"
        app:layout_constraintTop_toTopOf="@id/potential_broadcast"
        app:layout_constraintBottom_toBottomOf="@id/potential_broadcast"/>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/daily_budget_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potential_broadcast">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/topads_auto_ps_set_daily_budget_title"
                android:textColor="@color/Unify_NN950"
                app:typographyType="display_3"
                app:typographyWeight="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/range_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp25.000"
                android:textSize="12sp"
                app:typographyType="display_3"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@id/title"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/range_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp10.000.000"
                android:textSize="12sp"
                app:typographyType="display_3"
                android:textColor="@color/Unify_NN600"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintEnd_toEndOf="@id/title"/>

            <com.tokopedia.topads.auto.view.widget.RangeSeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:progress="0"
                android:progressTint="@color/Unify_GN200"
                android:thumb="@drawable/seekbar_thumb"
                app:layout_constraintTop_toBottomOf="@id/range_start"
                app:layout_constraintStart_toStartOf="@id/range_start"
                app:layout_constraintEnd_toEndOf="@id/range_end"/>

            <com.tokopedia.unifycomponents.TextFieldUnify2
                android:id="@+id/daily_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:unify_text_field_append_text="@string/topads_common_hari_"
                app:unify_text_field_prepend_text="Rp"
                app:unify_text_field_input_type="number"
                app:layout_constraintTop_toBottomOf="@id/seekbar"/>

            <com.tokopedia.unifycomponents.floatingbutton.FloatingButtonUnify
                android:id="@+id/tip_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                app:fbType="group"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/daily_budget"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/manual_ads_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_budget_card"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/manual_ads_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topads_auto_ps_set_manual_ads_title"
                app:typographyType="display_3"
                android:textSize="12sp"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/manual_ads_cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="display_3"
                android:text="@string/topads_auto_ps_set_manual_ads_cta"
                android:textSize="12sp"
                app:typographyWeight="bold"
                android:textColor="@color/Unify_GN500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/manual_ads_title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/auto_ads_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_budget_card"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/auto_ads_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topads_auto_ps_set_auto_ads_title"
                app:typographyType="display_3"
                android:textSize="12sp"
                android:textColor="@color/Unify_NN950"
                app:typographyWeight="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/auto_ads_cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="display_3"
                tools:text="@string/topads_auto_ps_set_auto_ads_cta_desc"
                android:textSize="12sp"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/auto_ads_title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:enabled="true"
        android:text="@string/iklankan"
        app:layout_constraintBottom_toTopOf="@+id/info_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topads_auto_ps_info_text"
        android:textColor="@color/Unify_NN600"
        app:typographyType="small"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/info_text_cta"
        app:layout_constraintStart_toStartOf="@id/btn_submit"
        app:layout_constraintEnd_toEndOf="@id/btn_submit"
        android:layout_marginTop="8dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/info_text_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topads_auto_ps_info_text_cta"
        android:textColor="@color/Unify_GN500"
        app:typographyType="small"
        app:typographyWeight="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn_submit"
        app:layout_constraintEnd_toEndOf="@id/btn_submit"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>