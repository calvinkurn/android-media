<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.tokopedia.design.component.TextViewCompat
                        android:id="@+id/title"
                        style="@style/TextView.TitleMedium.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/iklan_otomatis" />

                    <ImageView
                        android:id="@+id/btn_info"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/title"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/ic_autoads_info_black" />

                    <Switch
                        android:id="@+id/switch_ads"
                        style="@style/Switch"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <TextView
                    style="@style/TextView.Micro.Black40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="left"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/sistem_cerdas_iklan_otomatis_akan_npromosikan_produkmu_lebih_efektif" />

                <LinearLayout
                    android:id="@+id/budget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        app:cardCornerRadius="8dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/card_daily_budget"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/potensi_tayang_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/potensi_iklan_tayang"
                                android:textColor="#f531353b"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:id="@+id/daily_budget_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/potensi_tayang_txt"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/price_range"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="2sp"
                                    android:text="7.500 - 15.000"
                                    android:textColor="#41b54a"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:lineSpacingExtra="6sp"
                                    android:padding="4dp"
                                    android:text="@string/kali_per_hari"
                                    android:textColor="#61000000"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        style="@style/TextView.Title.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="6sp"
                        android:padding="4dp"
                        android:text="@string/anggaran_harian" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_budget_price"
                        style="@style/TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/budget"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Small">

                        <com.tokopedia.seller.common.widget.PrefixEditText
                            android:id="@+id/edit_text_max_price"
                            style="@style/EditText.Currency"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="@dimen/dp_10"
                            app:prefix="@string/title_currency_rp_space"
                            tools:text="100000" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>

            <com.tokopedia.topads.auto.view.widget.RangeSeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_16"
                android:progress="100000" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/save"
            style="@style/Button.Submit.Green.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/simpan" />


    </RelativeLayout>
</LinearLayout>