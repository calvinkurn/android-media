<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top"
                    android:layout_weight="2"
                    android:src="@drawable/ilustration_empty_product" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/oops_kamu_belum_npunya_produk"
                    style="@style/TextView.SubHeadline.Bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    style="@style/TextView.Micro.FontMedium.Black40"
                    android:text="@string/yuk_isi_tokomu_dengan_produk_jualan_untuk_mulai_beriklan_dengan_topads" />


                <Button
                    android:id="@+id/add_product"
                    style="@style/Button.Submit.Green.Full"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:text="@string/tambah_produk_ads"
                    android:textAllCaps="false" />
            </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>