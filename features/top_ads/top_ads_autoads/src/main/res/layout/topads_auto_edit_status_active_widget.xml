<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auto_ad_status_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/topads_green_bg"
        android:padding="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/iklan_otomatis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iklan_otomatis"
            android:textColor="@color/black"
            android:typeface="normal"
            app:layout_constraintStart_toEndOf="@id/auto_ad_status_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_6"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.Label
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/ads_active"
            app:labelType="general_light_green"
            app:layout_constraintEnd_toEndOf="@id/iklan_otomatis"
            app:layout_constraintStart_toStartOf="@id/iklan_otomatis"
            app:layout_constraintTop_toBottomOf="@id/iklan_otomatis" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/daily_usage_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/anggaran_harian"
        android:textColor="@color/topads_light_shadow"
        app:layout_constraintEnd_toStartOf="@id/btn_switch"
        app:layout_constraintStart_toEndOf="@id/auto_ad_status_image"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="small" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:progress="0"
        app:layout_constraintEnd_toStartOf="@id/btn_switch"
        app:layout_constraintStart_toEndOf="@id/auto_ad_status_image"
        app:layout_constraintTop_toBottomOf="@id/daily_usage_status" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/progress_status1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_2"
        android:includeFontPadding="false"
        android:text="@string/topads_dash_group_item_progress_status"
        app:layout_constraintBottom_toBottomOf="@id/auto_ad_status_image"
        app:layout_constraintStart_toEndOf="@id/auto_ad_status_image"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        app:typographyType="heading_6"
        tools:text="Rp 400" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/progress_status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_2"
        android:text="@string/topads_dash_group_item_progress_status"
        android:textColor="@color/topads_light_shadow"
        app:layout_constraintBottom_toBottomOf="@id/auto_ad_status_image"
        app:layout_constraintStart_toEndOf="@id/progress_status1"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        app:typographyType="small"
        tools:text=" dari Rp 400.00" />

    <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
        android:id="@+id/btn_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn_switch"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topads_setting" />

</androidx.constraintlayout.widget.ConstraintLayout>