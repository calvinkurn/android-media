<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/autops_feedback_form_title"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_3"
            app:typographyWeight="bold" />

        <View
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/Unify_NN50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heading" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/rating_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/autops_feedback_form_what_is_your_exp"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator1"
            app:typographyType="display_3"
            app:typographyWeight="bold" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/rating1"
            android:tag="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:icon_name="STAR"
            app:layout_constraintStart_toStartOf="@id/rating_title"
            app:layout_constraintTop_toBottomOf="@id/rating_title" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/rating2"
            android:tag="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:icon_name="STAR"
            app:layout_constraintStart_toEndOf="@id/rating1"
            app:layout_constraintTop_toBottomOf="@id/rating_title" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/rating3"
            android:tag="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:icon_name="STAR"
            app:layout_constraintStart_toEndOf="@id/rating2"
            app:layout_constraintTop_toBottomOf="@id/rating_title" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/rating4"
            android:tag="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:icon_name="STAR"
            app:layout_constraintStart_toEndOf="@id/rating3"
            app:layout_constraintTop_toBottomOf="@id/rating_title" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/rating5"
            android:tag="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:icon_name="STAR"
            app:layout_constraintStart_toEndOf="@id/rating4"
            app:layout_constraintTop_toBottomOf="@id/rating_title" />

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/Unify_NN50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating1" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/qna_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/autops_feedback_form_what_made_you_turn_off_autops"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator2"
            app:typographyType="display_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qna_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/autops_feedback_form_review_item_1"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toEndOf="@id/checkbox1"
            app:layout_constraintTop_toTopOf="@id/checkbox1"
            app:typographyType="paragraph_3" />

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkbox1" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/autops_feedback_form_review_item_2"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toEndOf="@id/checkbox2"
            app:layout_constraintTop_toTopOf="@id/checkbox2"
            app:typographyType="paragraph_3" />

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkbox2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/autops_feedback_form_review_item_3"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toEndOf="@id/checkbox3"
            app:layout_constraintTop_toTopOf="@id/checkbox3"
            app:typographyType="paragraph_3" />

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkbox3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/item4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/autops_feedback_form_review_item_4"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toEndOf="@id/checkbox4"
            app:layout_constraintTop_toTopOf="@id/checkbox4"
            app:typographyType="paragraph_3" />

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/checkbox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkbox4" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/item5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/autops_feedback_form_review_item_5"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toEndOf="@id/checkbox5"
            app:layout_constraintTop_toTopOf="@id/checkbox5"
            app:typographyType="paragraph_3" />

        <View
            android:id="@+id/separator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/Unify_NN50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkbox5" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/suggestion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/autops_feedback_form_do_you_have_any_suggestions"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator3"
            app:typographyType="display_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.TextAreaUnify2
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/suggestion_title"
            app:unify_text_field_counter="250"
            app:unify_text_field_label="Masukkan saran atau kritikmu disini" />


        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/submit_cta"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/topads_common_save_butt"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/feedback"
            app:layout_constraintStart_toStartOf="parent"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            android:enabled="false"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/cancel_cta"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/topads_common_later_keyword"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/submit_cta"
            app:layout_constraintStart_toStartOf="parent"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>