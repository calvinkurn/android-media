<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@drawable/card_ads_dialog_bg"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <TextView
                style="@style/TextView.TitleBig.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:text="Siap beralih ke Iklan Otomatis?" />

            <TextView
                style="@style/TextView.Micro.FontMedium.BlackDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_20"
                android:text="Semua grup iklan yang sudah kamu buat akan diganti dengan Iklan Otomatis." />


            <Button
                android:id="@+id/positive_button"
                style="@style/Button.Submit.Green.Full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/ya_saya_mau" />

            <Button
                android:id="@+id/negative_button"
                style="@style/Button.Submit.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/batalkan" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_autoads_thumb" />

    </RelativeLayout>
</FrameLayout>