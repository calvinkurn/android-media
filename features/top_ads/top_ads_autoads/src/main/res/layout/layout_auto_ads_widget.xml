<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/status_ads_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/ilustration_autoads_inprogress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/title_otomatis"
                    style="@style/TextView.TitleMedium.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/iklan_otomatis" />

                <TextView
                    android:id="@+id/active_status"
                    style="@style/AutoAdsText.Inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/title_otomatis"
                    android:text="@string/ads_deactive" />

                <ImageView
                    android:id="@+id/btn_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    app:srcCompat="@drawable/ic_chevron_autoads" />
            </RelativeLayout>

            <TextView
                android:id="@+id/subtitle"
                style="@style/TextView.Micro.Black40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="left"
                android:lineSpacingExtra="6sp"
                tools:text="@string/akan_aktif_dalam_beberapa_menit" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorGray"/>
    <LinearLayout
        android:id="@+id/container_progress_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/daily_usage_status"
            style="@style/TextView.Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/terpakai" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0" />

        <TextView
            android:id="@+id/daily_budget_status"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/anggaran_harian_status" />
    </LinearLayout>

    <Button
        android:id="@+id/button_start_autoads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:text="@string/mulai_iklan_otomatis"
        style="@style/Button.Submit.Border.Green"/>

</LinearLayout>