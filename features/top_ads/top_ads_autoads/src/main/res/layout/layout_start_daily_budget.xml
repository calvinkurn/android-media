<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView.TitleBig.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="6sp"

                    android:text="@string/iklan_otomatis" />

                <TextView
                    style="@style/TextView.Micro.Black40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/sistem_cerdas_iklan_otomatis_akan_npromosikan_produkmu_lebih_efektif" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/card_daily_budget"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/potensi_tayang_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="6sp"
                            android:text="@string/potensi_iklan_tayang"
                            android:textColor="#f531353b"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/daily_budget_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/potensi_tayang_txt"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="2sp"
                                android:text="7.500 - 15.000"
                                android:textColor="#41b54a"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:lineSpacingExtra="6sp"
                                android:padding="4dp"
                                android:text="@string/kali_per_hari"
                                android:textColor="#61000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/TextView.Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:padding="4dp"
                    android:text="@string/anggaran_harian" />

                <com.tokopedia.seller.common.widget.PrefixEditText
                    android:id="@+id/edit_text_max_price"
                    style="@style/EditText.Currency"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:focusable="false"
                    app:prefix="@string/title_currency_rp_space"
                    tools:text="100000" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-13dp"
                    android:layout_marginEnd="-13dp"
                    android:max="1000000"
                    android:progress="100000" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/start_autoads_btn"
                style="@style/Button.Submit.Green.Full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:text="@string/mulai_iklan_otomatis" />


            <Button
                android:id="@+id/start_manual_ads_btn"
                style="@style/Button.Submit.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/buat_iklan_manual" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>