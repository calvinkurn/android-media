<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_16"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_weight="1"
                android:layout_gravity="center|top"
                android:src="@drawable/ilustration_insufficient_balance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/yuk_isi_kredit_untuk_mengaktifkan_iklanmu"
                style="@style/TextView.TitleBig.Bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                style="@style/TextView.Micro.FontMedium.Black40"
                android:text="@string/tinggal_1_langkah_lagi_isi_kredit_topads_untuk_mengaktifkan_promosi_produkmu_secara_otomatis" />


            <Button
                style="@style/Button.Submit.Green.Full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:text="Tambah Kredit Sekarang"
                android:textAllCaps="false" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>