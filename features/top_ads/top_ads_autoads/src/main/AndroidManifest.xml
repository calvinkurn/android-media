<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.topads.auto">

    <application
        android:allowBackup="true"
        android:label="@string/auto_ads_app_name">
        <activity
            android:name=".view.activity.AutoAdsRouteActivity"
            android:label=""
            android:theme="@style/Theme.AutoAds.Transparent"  >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/sellerapp_scheme"
                    android:host="@string/host_topads"
                    android:path="@string/path_topads_autoads"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.StartAutoAdsActivity"
            android:label="@string/autoads_topads"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.DailyBudgetActivity"
            android:label="@string/autoads_pengaturan_iklan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.AutoAdsActivatedActivity"
            android:label="@string/autoads_iklan_otomatis"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.InsufficientBalanceActivity"
            android:label="@string/tambah_kredit_topads"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.EmptyProductActivity"
            android:label="@string/autoads_iklan_otomatis"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.SettingBudgetAdsActivity"
            android:label="@string/autoads_pengaturan_iklan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.ConfirmationDialogActivity"
            android:theme="@style/AppTheme.NoActionBar.ActivityDialog" />
    </application>

</manifest>