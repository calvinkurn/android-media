<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.topads.auto">

    <application
        android:allowBackup="true"
        android:label="@string/app_name">
        <activity
            android:name="com.tokopedia.topads.auto.view.activity.StartAutoAdsActivity"
            android:label="@string/autoads_topads"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.topads.auto.view.activity.DailyBudgetActivity"
            android:label="@string/autoads_pengaturan_iklan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name="com.tokopedia.topads.auto.view.activity.AutoAdsActivatedActivity"
            android:label="@string/autoads_iklan_otomatis"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".view.activity.InsufficientBalanceActivity"
            android:label="@string/tambah_kredit_topads"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.EmptyProductActivity"
            android:label="@string/autoads_iklan_otomatis"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.SettingBudgetAdsActivity"
            android:label="@string/autoads_pengaturan_iklan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

    </application>

</manifest>