<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LabelLayout.TopAdsLabelView">
        <item name="android:minHeight">@dimen/dp_64</item>
        <item name="content_text_size">@dimen/sp_14</item>
        <item name="lv_image_width">@dimen/dp_28</item>
        <item name="lv_image_margin_right">@dimen/dp_24</item>
        <item name="title_text_size">@dimen/sp_14</item>
        <item name="lv_sub_title_text_size">@dimen/sp_14</item>
    </style>

    <style name="LineChartView">
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TopadsDashboardFilterRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/topads_text_filter_color_selector</item>
        <item name="typographyType">body_2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetInsight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="typographyType">heading_6</item>
        <item name="android:textColor">@color/topads_light_shadow</item>
    </style>

    <style name="BottomSheetInsightTitle">
        <item name="typographyType">heading_6</item>
        <item name="android:textColor">#F531353B</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
    </style>
</resources>