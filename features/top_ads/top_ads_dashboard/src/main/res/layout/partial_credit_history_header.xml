<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll">

    <android.support.v7.widget.CardView
        android:id="@+id/card_auto_topup_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding = "@dimen/dp_16">

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_topads_automatic_topup"
                app:fontSize="small"
                app:textViewTheme="lightSecondary"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/auto_topup_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/topads_active"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                app:fontSize="small"
                android:textColor="@color/tkpd_main_green"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_date_periode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16">

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_date_period"
                app:fontSize="small"
                app:textViewTheme="lightSecondary"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/selected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/topads_active"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                app:fontSize="small"
                android:textColor="@color/tkpd_main_green"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_credit_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        tools:visibility="visible"
        android:visibility="gone">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16">

            <View android:id="@+id/divider"
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                android:background="@color/grey_300"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/label_credit_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_credit_addition"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:textSize="@dimen/sp_10"
                app:textViewTheme="lightDisabled"
                app:weight="medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/divider"
                app:layout_constraintEnd_toStartOf="@+id/divider"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/topads_credit_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/topads_active"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                app:fontSize="subHeadline"
                app:textViewTheme="lightPrimary"
                app:layout_constraintTop_toBottomOf="@+id/label_credit_addition"
                app:layout_constraintLeft_toLeftOf="@+id/label_credit_addition"
                app:layout_constraintStart_toStartOf="@+id/label_credit_addition"
                app:layout_constraintRight_toRightOf="@+id/label_credit_addition"
                app:layout_constraintEnd_toEndOf="@+id/label_credit_addition"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/label_credit_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_credit_used"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:textSize="@dimen/sp_10"
                app:textViewTheme="lightDisabled"
                app:weight="medium"
                app:layout_constraintTop_toTopOf="@+id/label_credit_addition"
                app:layout_constraintBottom_toBottomOf="@+id/label_credit_addition"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/divider"
                app:layout_constraintStart_toEndOf="@+id/divider"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/topads_credit_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/topads_active"
                app:fontSize="subHeadline"
                app:textViewTheme="lightPrimary"
                app:layout_constraintTop_toTopOf="@+id/topads_credit_addition"
                app:layout_constraintLeft_toLeftOf="@+id/label_credit_used"
                app:layout_constraintStart_toStartOf="@+id/label_credit_used"
                app:layout_constraintRight_toRightOf="@+id/label_credit_used"
                app:layout_constraintEnd_toEndOf="@+id/label_credit_used"
                app:layout_constraintBottom_toBottomOf="@+id/topads_credit_addition"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <View android:layout_marginTop="@dimen/dp_24"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_300"/>

</LinearLayout>