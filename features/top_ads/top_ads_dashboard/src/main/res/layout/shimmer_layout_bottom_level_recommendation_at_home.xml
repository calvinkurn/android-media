<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shimmer_layout_bottom_level_recommendation_at_home">

    <include
        android:id="@+id/groupCardShimmer1"
        layout="@layout/shimmer_group_card_item_recommendation_at_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/groupCardShimmer2"
        layout="@layout/shimmer_group_card_item_recommendation_at_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupCardShimmer1" />

    <include
        android:id="@+id/groupCardShimmer3"
        layout="@layout/shimmer_group_card_item_recommendation_at_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupCardShimmer2" />

    <include
        android:id="@+id/groupCardShimmer4"
        layout="@layout/shimmer_group_card_item_recommendation_at_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupCardShimmer3" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/bottomShimmer"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupCardShimmer4"
        app:loader_type="rect"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>