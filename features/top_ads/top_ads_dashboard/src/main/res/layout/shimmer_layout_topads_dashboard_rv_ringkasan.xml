<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="@dimen/top_ads_common_dp_80"
        android:layout_weight="1"
        app:card_type="shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_lvl4"
            android:paddingVertical="@dimen/spacing_lvl3">

            <com.tokopedia.unifycomponents.LoaderUnify
                style="@style/TopAdsHomeShimmerStyle"
                android:layout_width="@dimen/layout_lvl7" />

            <com.tokopedia.unifycomponents.LoaderUnify
                style="@style/TopAdsHomeShimmerStyle"
                android:layout_width="@dimen/layout_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl3" />
        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="@dimen/top_ads_common_dp_80"
        android:layout_weight="1"
        app:card_type="shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_lvl4"
            android:paddingVertical="@dimen/spacing_lvl3">

            <com.tokopedia.unifycomponents.LoaderUnify
                style="@style/TopAdsHomeShimmerStyle"
                android:layout_width="@dimen/layout_lvl7" />

            <com.tokopedia.unifycomponents.LoaderUnify
                style="@style/TopAdsHomeShimmerStyle"
                android:layout_width="@dimen/layout_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl3" />
        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>
</LinearLayout>