<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/daily_buget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/topads_dash_recom_daily_budget_title"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/daily_buget_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:text="@string/topads_dash_recom_daily_budget_desc"
        app:layout_constraintTop_toBottomOf="@id/daily_buget_title"
        app:typographyType="small" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDailyBudget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daily_buget_desc"
        tools:itemCount="2"
        tools:listitem="@layout/topads_dash_recon_daily_budget_item" />

</androidx.constraintlayout.widget.ConstraintLayout>