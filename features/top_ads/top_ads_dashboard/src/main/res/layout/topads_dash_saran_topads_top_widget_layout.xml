<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/top_ads_widget_background"
    tools:ignore="MissingDefaultResource">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/insightWidgetIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/performance_widget_default_icon" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/insightWidgetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:textColor="@color/Unify_NN950"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/insightWidgetIcon"
        app:layout_constraintStart_toEndOf="@+id/insightWidgetIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/insightWidgetIcon"
        tools:text="Tingkatkan performa 5 grup iklanmu, yuk!"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <include
        android:id="@+id/topLevelWidgetShimmer"
        layout="@layout/shimmer_layout_top_level_recommendation" />

</androidx.constraintlayout.widget.ConstraintLayout>