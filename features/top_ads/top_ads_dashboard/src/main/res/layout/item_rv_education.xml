<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_lvl6">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivEducation"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:tint="@color/Unify_B900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtTitleEducation"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/top_ads_common_dp_10"
        android:textSize="@dimen/unify_font_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivEducationRightIcon"
        app:layout_constraintStart_toEndOf="@id/ivEducation"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="title" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivEducationRightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconunify_chevron_right"
        android:tint="@color/Unify_B900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="1dp"
        android:background="@color/Unify_N75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txtTitleEducation" />
</androidx.constraintlayout.widget.ConstraintLayout>