<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/shimmerView"
        android:visibility="visible"
        layout="@layout/shimmer_layout_topads_dashboard_beranda_fragment"
        tools:visibility="gone" />

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/spacing_lvl3"
                android:paddingBottom="@dimen/spacing_lvl4">

                <include
                    android:id="@+id/hari_ini"
                    android:visibility="gone"
                    layout="@layout/topads_dash_layout_hari_ini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_height="40dp" />

                <com.tokopedia.unifycomponents.CardUnify
                    android:id="@+id/credit_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl2"
                    app:card_type="shadow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hari_ini">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/unify_space_12">

                        <com.tokopedia.unifycomponents.ImageUnify
                            android:id="@+id/creditHistoryImage"
                            android:layout_width="@dimen/top_ads_common_dp_20"
                            android:layout_height="@dimen/top_ads_common_dp_20"
                            android:layout_marginStart="@dimen/unify_space_12"
                            android:src="@drawable/topads_ic_wallet"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_height="40dp"
                            tools:layout_width="40dp" />

                        <RelativeLayout
                            android:id="@+id/creditLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_lvl3"
                            android:gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="@id/creditHistoryImage"
                            app:layout_constraintStart_toEndOf="@id/creditHistoryImage"
                            app:layout_constraintTop_toTopOf="@id/creditHistoryImage">

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/credit_topads"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:text="@string/topads_dash_desc_credit_label"
                                app:typographyType="small" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/creditAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/credit_topads"
                                android:textColor="@color/black"
                                app:typographyType="heading_6"
                                app:typographyWeight="bold"
                                tools:text="Rp 10.000.0000" />

                            <com.tokopedia.unifycomponents.ImageUnify
                                android:id="@+id/btnRefreshCredits"
                                android:layout_width="@dimen/unify_space_12"
                                android:layout_height="@dimen/unify_space_12"
                                android:layout_alignBottom="@id/creditAmount"
                                android:layout_marginStart="@dimen/spacing_lvl2"
                                android:layout_toEndOf="@id/creditAmount"
                                android:src="@drawable/topads_dash_auto_debit" />
                        </RelativeLayout>

                        <com.tokopedia.unifycomponents.ImageUnify
                            android:id="@+id/imgAutoDebit"
                            android:layout_width="@dimen/unify_space_12"
                            android:layout_height="@dimen/unify_space_12"
                            android:layout_marginEnd="@dimen/spacing_lvl1"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/autoTopUp"
                            app:layout_constraintEnd_toStartOf="@id/autoTopUp"
                            app:layout_constraintTop_toTopOf="@id/autoTopUp" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/autoTopUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_lvl3"
                            android:text="@string/topads_dash_auto_topup_on"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/creditLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typographyType="body_3"
                            app:typographyWeight="bold"
                            tools:text="Rp 10.000.0000" />

                        <com.tokopedia.unifycomponents.UnifyButton
                            android:id="@+id/addCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_lvl3"
                            android:text="@string/label_add_credit"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:unifyButtonSize="small"
                            app:unifyButtonType="main"
                            app:unifyButtonVariant="ghost" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.tokopedia.unifycomponents.CardUnify>

                <include
                    android:id="@+id/layoutRingkasan"
                    layout="@layout/layout_ringkasan_topads_dashboard_beranda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl4"
                    app:layout_constraintTop_toBottomOf="@id/credit_history" />

                <include
                    layout="@layout/layout_latest_reading_topads_dashboard_beranda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl4"
                    app:layout_constraintTop_toBottomOf="@id/layoutRingkasan" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>
</androidx.constraintlayout.widget.ConstraintLayout>