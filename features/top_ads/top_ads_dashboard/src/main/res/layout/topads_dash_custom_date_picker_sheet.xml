<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/dateStart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:text_field_label_static="true"
            app:text_field_label="Mulai dari"
            android:layout_alignParentStart="true"
            app:text_field_placeholder="Pilih Tanggal"/>
        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/dateEnd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:text_field_label_static="true"
            app:text_field_label="@string/sampai_dengan"
            app:text_field_placeholder="Pilih Tanggal"
            android:clickable="false"
            android:gravity="end"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <com.tokopedia.calendar.UnifyCalendar
        android:id="@+id/calendarUnify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_12" />

</LinearLayout>