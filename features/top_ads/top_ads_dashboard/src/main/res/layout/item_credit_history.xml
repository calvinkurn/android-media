<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16"
    android:background="@color/white">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_amount"
        app:typographyType="heading_5"
        android:textColor="@color/light_secondary"
        tools:text="+Rp5000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:typographyType="heading_5"
        android:textColor="@color/light_secondary"
        tools:text="Auto Debet"
        app:layout_constraintTop_toTopOf="@+id/txt_amount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_amount"
        app:layout_constraintEnd_toStartOf="@+id/txt_amount"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_date"
        tools:text="+Rp5000"
        app:typographyType="heading_5"
        android:textColor="@color/light_disabled"
        android:layout_marginTop="@dimen/dp_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintLeft_toLeftOf="@+id/txt_title"
        app:layout_constraintStart_toStartOf="@+id/txt_title"
        app:layout_constraintRight_toRightOf="@+id/txt_title"
        app:layout_constraintEnd_toEndOf="@+id/txt_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

