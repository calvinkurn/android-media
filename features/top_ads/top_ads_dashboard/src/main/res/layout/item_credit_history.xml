<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/spacing_lvl4"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_title"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            tools:text="Auto Debet" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_date"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:textColor="@color/light_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            app:typographyType="small"
            app:typographyWeight="reguler"
            tools:text="04 Mei 2020, 17:16" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            tools:text="+Rp5000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_YN500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_amount"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="Menunggu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>
