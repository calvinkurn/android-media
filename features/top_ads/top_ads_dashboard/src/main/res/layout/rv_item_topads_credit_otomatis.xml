<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image"
        android:layout_width="@dimen/top_ads_common_dp_20"
        android:layout_height="@dimen/top_ads_common_dp_20"
        android:tint="@color/Unify_GN500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconunify_check_circle" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        android:text="@string/topads_credit_otomatis_title_1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:typographyType="paragraph_3"
        android:text="@string/topads_credit_otomatis_desc_1" />
</androidx.constraintlayout.widget.ConstraintLayout>