<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupListItemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:card_type="border"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader1"
            android:layout_width="0dp"
            android:layout_height="16dp"
            app:loader_type="rect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cta"
            android:layout_marginEnd="12dp"/>


        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader2"
            android:layout_width="150dp"
            android:layout_height="16dp"
            app:loader_type="rect"
            app:layout_constraintTop_toBottomOf="@id/loader1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:id="@+id/cta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/loader1"
            app:layout_constraintBottom_toBottomOf="@id/loader2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>