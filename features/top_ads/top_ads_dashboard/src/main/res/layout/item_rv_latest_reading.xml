<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/creditHistoryImage"
        android:layout_width="@dimen/unify_space_40"
        android:layout_height="@dimen/unify_space_40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/creditHistoryImage"
        app:layout_constraintTop_toTopOf="@id/creditHistoryImage"
        tools:text="topads_dash_text_bacaan_terbaru_untukmudd" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/creditHistoryImage"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:typographyType="body_2"
        tools:text="topads_dash_text_bacaan_terbaru_untukmudd" />

</androidx.constraintlayout.widget.ConstraintLayout>