<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topads_dashboard_dp_56"
    android:layout_marginTop="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerImage"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerTitle"
        style="@style/TopAdsHomeShimmerStyle"
        android:layout_width="@dimen/topads_dashboard_dp_140"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintStart_toEndOf="@id/shimmerImage"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        style="@style/TopAdsHomeShimmerStyle"
        android:layout_width="@dimen/topads_dashboard_dp_210"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="@id/shimmerTitle"
        app:layout_constraintTop_toBottomOf="@id/shimmerTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>