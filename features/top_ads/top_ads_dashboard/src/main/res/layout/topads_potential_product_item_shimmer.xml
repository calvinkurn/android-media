<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/checkboxLoader"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/imageLoader"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="@id/checkboxLoader"
        app:layout_constraintStart_toEndOf="@id/checkboxLoader"
        android:layout_marginStart="16dp"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/titleLoader"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@id/imageLoader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageLoader"
        android:layout_marginStart="16dp"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/descLoader"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="@id/titleLoader"
        app:layout_constraintEnd_toEndOf="@id/titleLoader"
        app:layout_constraintBottom_toBottomOf="@id/imageLoader"/>

</androidx.constraintlayout.widget.ConstraintLayout>