<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:id="@+id/date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_NN0"
    app:layout_constraintTop_toTopOf="parent">


    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/date_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/iconunify_calendar"
        android:tint="@color/Unify_NN900"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:gravity="bottom"
        android:text="@string/topads_hari_ini"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN1000"
        app:layout_constraintBottom_toBottomOf="@id/date_image"
        app:layout_constraintStart_toEndOf="@id/date_image"
        app:layout_constraintTop_toTopOf="@id/date_image"
        app:typographyType="small" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/next_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_19"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/iconunify_chevron_right"
        android:tint="@color/Unify_NN900"/>

</androidx.constraintlayout.widget.ConstraintLayout>
