<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/card_auto_topup_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_topads_automatic_topup"
                android:textColor="@color/light_secondary"
                app:typographyType="body_3" />

            <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
                android:id="@+id/auto_topup_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                app:typographyType="body_2" />

        </LinearLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/selectCreditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:padding="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/card_auto_topup_status">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/settingsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topads_dash_pengaturan"
                app:layout_constraintBottom_toBottomOf="@id/saveChoice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/saveChoice"
                app:typographyType="heading_5" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/saveChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topads_common_simpan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unifyButtonSize="small"
                app:unifyButtonType="main"
                app:unifyButtonVariant="filled" />

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_12"
                app:layout_constraintBottom_toTopOf="@id/chooseCredit"
                app:layout_constraintTop_toBottomOf="@id/saveChoice" />

            <include
                android:id="@+id/chooseCredit"
                layout="@layout/topads_dash_choose_topup_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/div" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <include
        android:id="@+id/offLayout"
        layout="@layout/topads_dash_auto_topup_off_layout"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>