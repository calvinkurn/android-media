<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/topads_dashboard_gradient_background_white_ug100"
    android:layout_height="@dimen/layout_lvl7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutIvWallet"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:background="@drawable/topads_dashboard_green_200_circular_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivWallet"
            android:layout_width="@dimen/spacing_lvl5"
            android:layout_height="@dimen/spacing_lvl5"
            android:src="@drawable/iconunify_wallet"
            android:tint="@color/Unify_GN500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/topads_dashboard_dp_60" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/topads_dashboard_potensi_tampil"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topads_dashboard_kali_hari_value"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:typographyType="body_3" />

</androidx.constraintlayout.widget.ConstraintLayout>