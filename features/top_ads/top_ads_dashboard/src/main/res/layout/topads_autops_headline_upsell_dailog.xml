<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/autops_ad_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        android:textAlignment="center"
        android:text="@string/topads_autops_headline_upsell_modal_title" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_width="match_parent"
        tools:layout_height="100dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/autops_ad_type_title" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="10dp"
        app:typographyType="display_3"
        android:text="@string/topads_ad_type_selection_shop_subtitle" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/accordian_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        android:text="@string/topads_ad_type_selection_product_accordian_title" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/accordian_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/accordian_text"
        app:layout_constraintStart_toEndOf="@id/accordian_text"
        app:layout_constraintTop_toTopOf="@id/accordian_text"
        app:srcCompat="@drawable/ic_dropdown_arrow"
        app:tint="@color/Unify_GN500" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/check1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accordian_text"
        app:srcCompat="@drawable/ic_check_green_24dp"
        app:tint="@color/Unify_GN500" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/item1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/check1"
        app:layout_constraintTop_toTopOf="@id/check1"
        app:typographyType="display_3"
        android:text="@string/topads_ad_type_selection_shop_accordian_item1" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/check2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check1"
        app:srcCompat="@drawable/ic_check_green_24dp"
        app:tint="@color/Unify_GN500" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/item2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/check2"
        app:layout_constraintTop_toTopOf="@id/check2"
        app:typographyType="display_3"
        android:text="@string/topads_ad_type_selection_shop_accordian_item2" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/check3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check2"
        app:srcCompat="@drawable/ic_check_green_24dp"
        app:tint="@color/Unify_GN500" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/item3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/check3"
        app:layout_constraintTop_toTopOf="@id/check3"
        app:typographyType="display_3"
        android:text="@string/topads_ad_type_selection_shop_accordian_item3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/topads_common_later_keyword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item3"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="text"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/topads_dashboard_create_shop_advertisement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item3"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/accordian_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="check1,check2,check3,item1,item2,item3" />

</androidx.constraintlayout.widget.ConstraintLayout>