<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/item1Shimmer"
        android:layout_width="144dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/item2Shimmer"
        android:layout_width="107dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/item4Shimmer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item1Shimmer"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/item3Shimmer"
        android:layout_width="128dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/item2Shimmer"
        app:layout_constraintTop_toBottomOf="@+id/item2Shimmer"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/item4Shimmer"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item3Shimmer"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>
