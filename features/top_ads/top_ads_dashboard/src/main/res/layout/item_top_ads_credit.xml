<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/unify_space_12"
    android:layout_marginEnd="@dimen/unify_space_12"
    android:orientation="vertical"
    android:paddingStart="@dimen/unify_space_12"
    android:paddingEnd="@dimen/unify_space_12"
    tools:viewBindingIgnore="true">

    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
        android:id="@+id/radio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topads_dashboard_dp_14"
        android:layout_marginBottom="@dimen/topads_dashboard_dp_14"
        android:layoutDirection="rtl"
        android:textAlignment="textStart"
        android:textStyle="bold" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_ads_common_dp_1" />
</LinearLayout>