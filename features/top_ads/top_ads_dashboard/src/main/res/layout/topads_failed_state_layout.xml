<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/emptyStateImage"
        android:layout_width="280dp"
        android:layout_height="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/emptyStateTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="heading_2"
        android:textSize="20sp"
        android:textColor="@color/Unify_NN950"
        android:text="@string/topads_insight_centre_potential_products_empty_state_title"
        app:layout_constraintTop_toBottomOf="@id/emptyStateImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textAlignment="center"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/emptyStateDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:typographyType="paragraph_2"
        android:textColor="@color/Unify_NN600"
        android:text="@string/topads_insight_centre_potential_products_empty_state_desc"
        app:layout_constraintTop_toBottomOf="@id/emptyStateTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:textAlignment="center" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/emptyStateCta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emptyStateDesc"
        android:layout_marginTop="24dp"
        app:unifyButtonType="main"
        app:unifyButtonSize="large"
        android:text="@string/topads_insight_centre_potential_products_emtpy_state_cta"/>

</androidx.constraintlayout.widget.ConstraintLayout>