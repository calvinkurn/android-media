<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/selectAllLoader"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/selectAllTitle"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="@id/selectAllLoader"
        app:layout_constraintStart_toEndOf="@id/selectAllLoader"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/selectAllTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp">

        <include layout="@layout/topads_potential_product_item_shimmer" />

        <include
            layout="@layout/topads_potential_product_item_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />


        <include
            layout="@layout/topads_potential_product_item_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <include
            layout="@layout/topads_potential_product_item_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <include
            layout="@layout/topads_potential_product_item_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <include
            layout="@layout/topads_potential_product_item_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>