<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <include
                    android:id="@+id/hari_ini"
                    layout="@layout/topads_dash_layout_hari_ini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.tokopedia.unifycomponents.CardUnify
                    android:id="@+id/credit_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_16"
                    app:card_type="shadow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hari_ini">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10">

                        <com.tokopedia.unifycomponents.ImageUnify
                            android:id="@+id/image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_11"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RelativeLayout
                            android:id="@+id/creditLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_7"
                            android:gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="@id/image"
                            app:layout_constraintStart_toEndOf="@id/image"
                            app:layout_constraintTop_toTopOf="@id/image">

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/credit_topads"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:text="@string/topads_dash_desc_credit_label"
                                app:typographyType="small" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/credits"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/credit_topads"
                                android:textColor="@color/black"
                                app:typographyType="heading_6"
                                app:typographyWeight="bold"
                                tools:text="Rp 10.000.0000" />

                        </RelativeLayout>

                        <com.tokopedia.unifycomponents.ImageUnify
                            android:id="@+id/img_auto_debit"
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginEnd="@dimen/dp_2"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/autoTopUp"
                            app:layout_constraintEnd_toStartOf="@id/autoTopUp"
                            app:layout_constraintTop_toTopOf="@id/autoTopUp"
                            tools:visibility="visible" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/autoTopUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:text="@string/topads_dash_auto_topup_on"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/creditLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typographyType="body_3"
                            app:typographyWeight="bold"
                            tools:text="Rp 10.000.0000"
                            tools:visibility="visible" />

                        <com.tokopedia.unifycomponents.UnifyButton
                            android:id="@+id/addCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:text="@string/label_add_credit"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:unifyButtonSize="small"
                            app:unifyButtonType="transaction"
                            app:unifyButtonVariant="ghost" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.tokopedia.unifycomponents.CardUnify>

                <com.tokopedia.unifycomponents.CardUnify
                    android:id="@+id/statistic_graph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:padding="@dimen/dp_8"
                    app:layout_constraintBottom_toTopOf="@id/insightCard"
                    app:layout_constraintTop_toBottomOf="@id/credit_history">

                    <LinearLayout
                        android:id="@+id/topads_dashboard_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/partial_top_ads_dashboard_statistics" />

                    </LinearLayout>
                </com.tokopedia.unifycomponents.CardUnify>

                <com.tokopedia.unifycomponents.CardUnify
                    android:id="@+id/insightCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:visibility="gone"
                    app:cardPreventCornerOverlap="false"
                    app:layout_constraintBottom_toTopOf="@id/help_section"
                    app:layout_constraintTop_toBottomOf="@id/statistic_graph">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_16">

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/txtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/topads_dash_insight_title_beranda"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typographyType="heading_4" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/txtDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/topads_dash_insight_desc_beranda"
                            app:layout_constraintTop_toBottomOf="@id/txtTitle"
                            app:typographyType="body_3" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvTabInsight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/txtDesc" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/goToInsights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:text="@string/topads_dash_go_to_insights"
                            android:textColor="@color/tkpd_main_green"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/viewPagerInsight" />

                        <com.tokopedia.unifycomponents.ImageUnify
                            android:id="@+id/arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/tkpd_main_green"
                            app:layout_constraintStart_toEndOf="@id/goToInsights"
                            app:layout_constraintTop_toTopOf="@id/goToInsights" />

                        <com.tokopedia.topads.common.CustomViewPager
                            android:id="@+id/viewPagerInsight"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rvTabInsight" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.tokopedia.unifycomponents.CardUnify>

                <com.tokopedia.unifycomponents.CardUnify
                    android:id="@+id/help_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_20"
                    app:card_type="shadow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/insightCard">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_16">

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/help_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_16"
                            android:text="@string/topads_dash_topads_help"
                            android:textColor="@android:color/black"
                            app:layout_constraintBottom_toTopOf="@id/ques1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typographyType="heading_4"
                            app:typographyWeight="bold" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/ques1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/topads_dash_help_ques_1"
                            android:textColor="@color/text_color"
                            app:layout_constraintBottom_toTopOf="@id/div1"
                            app:layout_constraintStart_toStartOf="@id/help_title"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typographyType="body_3" />

                        <View
                            android:id="@+id/div1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/divider_notif_big"
                            app:layout_constraintBottom_toTopOf="@id/ques2"
                            app:layout_constraintTop_toBottomOf="@id/ques1" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/ques2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/topads_dash_help_ques_2"
                            android:textColor="@color/text_color"
                            app:layout_constraintBottom_toTopOf="@id/div2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/div1"
                            app:typographyType="body_3" />

                        <View
                            android:id="@+id/div2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/divider_notif_big"
                            app:layout_constraintBottom_toTopOf="@id/ques3"
                            app:layout_constraintTop_toBottomOf="@id/ques2" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/ques3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/topads_dash_help_ques_3"
                            android:textColor="@color/text_color"
                            app:layout_constraintBottom_toTopOf="@id/div3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/div2"
                            app:typographyType="body_3" />

                        <View
                            android:id="@+id/div3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/divider_notif_big"
                            app:layout_constraintBottom_toTopOf="@id/ques4"
                            app:layout_constraintTop_toBottomOf="@id/ques3" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/ques4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/topads_dash_help_ques_4"
                            android:textColor="@color/text_color"
                            app:layout_constraintBottom_toTopOf="@id/div4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/div3"
                            app:typographyType="body_3" />

                        <View
                            android:id="@+id/div4"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/divider_notif_big"
                            app:layout_constraintBottom_toTopOf="@id/ques5"
                            app:layout_constraintTop_toBottomOf="@id/ques4" />


                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/ques5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/topads_dash_help_ques_5"
                            android:textColor="@color/text_color"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/div4"
                            app:typographyType="body_3" />

                        <View
                            android:id="@+id/div5"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/divider_notif_big"
                            app:layout_constraintTop_toBottomOf="@id/ques5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.tokopedia.unifycomponents.CardUnify>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</androidx.constraintlayout.widget.ConstraintLayout>