<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/top_ads_widget_background"
    android:id="@+id/shimmer_layout_top_level_recommendation"
    tools:ignore="MissingDefaultResource">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/insightWidgetIconShimmer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect"
        tools:srcCompat="@drawable/performance_widget_default_icon" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/insightWidgetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/insightWidgetIconShimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/insightWidgetIconShimmer"
        app:layout_constraintTop_toTopOf="@+id/insightWidgetIconShimmer"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>