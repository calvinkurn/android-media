<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/current_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topads_insight_current_budget"
        android:textColor="@color/Unify_NN600"
        app:typographyType="small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/current_cost_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rp30.000"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="@id/current_cost"
        app:layout_constraintTop_toBottomOf="@id/current_cost" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/back_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/iconunify_arrow_back"
        android:tint="@color/Unify_NN900"
        app:layout_constraintTop_toTopOf="@id/current_cost"
        app:layout_constraintStart_toEndOf="@id/current_cost"
        app:layout_constraintBottom_toBottomOf="@id/current_cost_value"
        android:rotation="180"
        android:layout_marginStart="12dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/recommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topads_insight_recommended"
        android:textColor="@color/Unify_NN600"
        app:typographyType="small"
        app:layout_constraintStart_toEndOf="@id/back_arrow"
        app:layout_constraintTop_toTopOf="@id/current_cost"
        android:layout_marginStart="12dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/recommended_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rp35.000"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="@id/recommended"
        app:layout_constraintTop_toBottomOf="@id/recommended" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/keyword_cost_cta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:unify_text_field_label="@string/topads_insight_daily_budget"
        app:layout_constraintTop_toBottomOf="@id/current_cost_value"
        app:layout_constraintStart_toStartOf="@id/current_cost_value"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:unify_text_field_prepend_text="Rp"/>

</androidx.constraintlayout.widget.ConstraintLayout>