<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:card_background_color="@color/Unify_Background"
    app:card_type="border_disabled">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:padding="8dp">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_sample_ref"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:icon_enable_state="true"
            app:icon_name="FIRE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Cek produk berpotensi"
            app:typographyType="body_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_sample_ref"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chevron"
            android:layout_marginStart="8dp"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/chevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:icon_enable_state="true"
            app:icon_name="CHEVRON_RIGHT"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>