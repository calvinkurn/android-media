<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tkpd.remoteresourcerequest.view.DeferredImageView
            android:id="@+id/image_empty"
            android:layout_width="@dimen/topads_dashboard_empty_image_height"
            android:layout_height="@dimen/topads_dashboard_empty_image_width"
            app:layout_constraintBottom_toTopOf="@+id/text_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl4"
            android:gravity="center_horizontal"
            android:text="@string/topads_dash_empty_group_title"
            app:layout_constraintBottom_toTopOf="@id/text_desc"
            app:layout_constraintTop_toBottomOf="@id/image_empty"
            app:typographyType="heading_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_lvl4"
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginRight="@dimen/layout_lvl4"
            android:gravity="center_horizontal"
            android:text="@string/topads_dash_empty_group_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            app:typographyType="body_2" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/unify_space_16"
            android:text="@string/topads_dash_empty_group_butt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_desc"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>