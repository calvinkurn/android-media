<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/creditOptionChipItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <View
        android:id="@+id/creditItem"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/top_ads_credit_item_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/creditItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Rp25.000"
        android:textColor="#212121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/creditItem"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_1"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/creditItemBonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:text="Bonus Rp3.250"
        android:textColor="#6D7588"
        app:layout_constraintBottom_toBottomOf="@+id/creditItem"
        app:layout_constraintEnd_toEndOf="@+id/creditItemText"
        app:layout_constraintStart_toStartOf="@+id/creditItemText"
        app:layout_constraintTop_toBottomOf="@+id/creditItemText"
        app:typographyType="display_2" />

</androidx.constraintlayout.widget.ConstraintLayout>