<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llFolder"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4"
            android:layout_gravity="center"
            android:layerType="software"
            android:src="@drawable/iconunify_folder"
            android:tint="@color/Unify_NN900" />
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="@string/topads_dashboard_atur_iklannya"
        android:textColor="@color/light_N700_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/llFolder"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2" />
</androidx.constraintlayout.widget.ConstraintLayout>