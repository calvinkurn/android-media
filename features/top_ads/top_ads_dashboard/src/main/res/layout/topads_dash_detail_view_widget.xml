<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:viewBindingIgnore="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/unify_font_12">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="12dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="12dp" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/group_name"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/btn_switch"
                app:layout_constraintEnd_toStartOf="@id/btn_switch"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toTopOf="@id/btn_switch"
                app:typographyType="heading_5"
                tools:text="group name - mamamoo" />

            <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
                android:id="@+id/btn_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_12"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_lvl1"
                android:layout_marginTop="@dimen/unify_space_12"
                app:layout_constraintTop_toBottomOf="@id/btn_switch"
                tools:layout_editor_absoluteX="0dp" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/anggaran_harian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_12"
                android:text="@string/topads_dash_anggaran_harian"
                android:textColor="@color/Unify_NN950_68"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/daily_budget_spent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/anggaran_harian"
                app:typographyType="heading_5"
                tools:text="Rp 400" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/daily_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:textColor="@color/Unify_NN950_96"
                app:layout_constraintBottom_toBottomOf="@id/daily_budget_spent"
                app:layout_constraintStart_toEndOf="@+id/daily_budget_spent"
                app:layout_constraintTop_toTopOf="@id/daily_budget_spent"
                app:typographyType="small"
                tools:text=" dari Rp 400.00" />

            <com.tokopedia.unifycomponents.ProgressBarUnify
                android:id="@+id/daily_budget_progress_bar"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl2"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/daily_budget_spent"
                app:unify_progress_bar_height="6" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:viewBindingIgnore="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="12dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="12dp" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/biaya_pencarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topads_dash_biaya_pencarian"
                android:textColor="@color/Unify_NN950_68"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/budgetPerClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@id/biaya_pencarian"
                app:typographyType="heading_5"
                tools:text="Rp 800 " />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/per_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:text="@string/topads_dash_perclick"
                app:layout_constraintBottom_toBottomOf="@id/budgetPerClick"
                app:layout_constraintStart_toEndOf="@id/budgetPerClick"
                app:layout_constraintTop_toTopOf="@id/budgetPerClick"
                app:typographyType="body_3" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/editpancarianBudget"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:icon_name="EDIT"
                app:layout_constraintBottom_toBottomOf="@id/per_click"
                app:layout_constraintEnd_toEndOf="@id/right_guide"
                app:layout_constraintTop_toTopOf="@id/biaya_pencarian" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/biaya_rekommendasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_12"
                android:text="@string/topads_dash_biaya_rekomendasi"
                android:textColor="@color/Unify_NN950_68"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@id/per_click"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/budgetPerClick_rekomendasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@id/biaya_rekommendasi"
                app:typographyType="heading_5"
                tools:text="Rp 800 " />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/per_click_rekomendasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:text="@string/topads_dash_perclick"
                app:layout_constraintBottom_toBottomOf="@id/budgetPerClick_rekomendasi"
                app:layout_constraintStart_toEndOf="@id/budgetPerClick_rekomendasi"
                app:layout_constraintTop_toTopOf="@id/budgetPerClick_rekomendasi"
                app:typographyType="body_3" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/editRekomendasiBudget"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:icon_name="EDIT"
                app:layout_constraintBottom_toBottomOf="@id/per_click_rekomendasi"
                app:layout_constraintEnd_toEndOf="@id/right_guide"
                app:layout_constraintTop_toTopOf="@id/biaya_rekommendasi" />

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/per_click_rekomendasi"
                android:layout_marginTop="@dimen/unify_space_12"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintEnd_toStartOf="@id/right_guide"
                tools:layout_editor_absoluteX="0dp" />

            <com.tokopedia.topads.common.view.TopadsAutoBidSwitchPartialLayout
                android:id="@+id/switchAutoBidLayout"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="@dimen/layout_lvl5"
                app:layout_constraintEnd_toEndOf="@id/right_guide"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@+id/divider1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/desc_auto_ads_advantage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/right_guide"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/left_guide"
                app:layout_constraintTop_toBottomOf="@+id/switchAutoBidLayout"
                android:visibility="gone"
                tools:visibility="visible">

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_NN900"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    app:layout_constraintStart_toStartOf="@+id/desc_auto_ads_advantage" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/title_otomatis_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pengaturan_iklan_auto_1"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_1"
                    app:layout_constraintStart_toEndOf="@+id/icon_1"
                    app:layout_constraintTop_toTopOf="@+id/icon_1"
                    app:typographyType="paragraph_3" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_NN900"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    app:layout_constraintEnd_toEndOf="@+id/icon_1"
                    app:layout_constraintStart_toStartOf="@+id/icon_1"
                    app:layout_constraintTop_toBottomOf="@+id/icon_1" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/title_otomatis_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pengaturan_iklan_auto_2"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_2"
                    app:layout_constraintStart_toEndOf="@+id/icon_2"
                    app:layout_constraintTop_toBottomOf="@+id/icon_1"
                    app:typographyType="paragraph_3" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_NN900"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    app:layout_constraintEnd_toEndOf="@+id/icon_2"
                    app:layout_constraintStart_toStartOf="@+id/icon_2"
                    app:layout_constraintTop_toBottomOf="@+id/icon_2" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/title_otomatis_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pengaturan_iklan_auto_3"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_3"
                    app:layout_constraintStart_toEndOf="@+id/icon_3"
                    app:layout_constraintTop_toBottomOf="@+id/icon_2"
                    app:typographyType="paragraph_3" />


                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_color_light_enable="@color/Unify_NN900"
                    app:icon_enable_state="true"
                    app:icon_name="CHECK"
                    app:layout_constraintEnd_toEndOf="@+id/icon_3"
                    app:layout_constraintStart_toStartOf="@+id/icon_3"
                    app:layout_constraintTop_toBottomOf="@+id/icon_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/title_otomatis_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pengaturan_iklan_auto_4"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_4"
                    app:layout_constraintStart_toEndOf="@+id/icon_4"
                    app:layout_constraintTop_toBottomOf="@+id/icon_3"
                    app:typographyType="paragraph_3" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>
</LinearLayout>