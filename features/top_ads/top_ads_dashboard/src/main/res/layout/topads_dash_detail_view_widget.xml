<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/btn_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            tools:text="group name - mamamoo" />

        <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_name"
            app:layout_constraintTop_toTopOf="@id/group_name" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/group_name" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/biaya_pencarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:text="@string/topads_dash_biaya_pencarian"
            android:layout_marginEnd="24dp"
            android:textColor="@color/topads_clr_7031353b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/budgetPerClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:textColor="@color/topads_heading_color"
            app:layout_constraintStart_toStartOf="@id/biaya_pencarian"
            app:layout_constraintTop_toBottomOf="@id/biaya_pencarian"
            app:typographyType="heading_5"
            tools:text="Rp 800 " />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/per_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:gravity="bottom"
            android:text="@string/topads_dash_perclick"
            android:textColor="@color/topads_light_shadow"
            app:layout_constraintStart_toEndOf="@id/budgetPerClick"
            app:layout_constraintTop_toBottomOf="@id/biaya_pencarian"
            app:typographyType="small" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/editpancarianBudget"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:icon_name="EDIT"
            app:layout_constraintStart_toEndOf="@id/per_click"
            app:layout_constraintTop_toBottomOf="@id/biaya_pencarian" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/biaya_rekommendasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/dp_50"
            android:text="@string/topads_dash_biaya_rekomendasi"
            android:textColor="@color/topads_clr_7031353b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/budgetPerClick_rekomendasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:textColor="@color/topads_heading_color"
            app:layout_constraintStart_toStartOf="@id/biaya_rekommendasi"
            app:layout_constraintTop_toBottomOf="@id/biaya_rekommendasi"
            app:typographyType="heading_5"
            android:text="Rp 800 " />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/per_click_rekomendasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:gravity="bottom"
            android:text="@string/topads_dash_perclick"
            android:textColor="@color/topads_light_shadow"
            app:layout_constraintStart_toEndOf="@id/budgetPerClick_rekomendasi"
            app:layout_constraintTop_toBottomOf="@id/biaya_rekommendasi"
            app:typographyType="small" />


        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/editRekomendasiBudget"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:icon_name="EDIT"
            app:layout_constraintStart_toEndOf="@id/per_click_rekomendasi"
            app:layout_constraintTop_toBottomOf="@id/biaya_rekommendasi" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/anggaran_harian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topads_dash_anggaran_harian"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/topads_clr_7031353b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/budgetPerClick"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/daily_budget_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/anggaran_harian"
            app:typographyType="heading_5"
            tools:text="Rp 400" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/daily_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:textColor="@color/topads_light_shadow"
            app:layout_constraintStart_toEndOf="@+id/daily_budget_spent"
            app:layout_constraintTop_toBottomOf="@id/anggaran_harian"
            app:typographyType="small"
            tools:text=" dari Rp 400.00" />

        <com.tokopedia.unifycomponents.ProgressBarUnify
            android:id="@+id/daily_budget_progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/anggaran_harian"
            app:layout_constraintTop_toBottomOf="@id/daily_budget_spent"
            app:unify_progress_bar_height="6" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>