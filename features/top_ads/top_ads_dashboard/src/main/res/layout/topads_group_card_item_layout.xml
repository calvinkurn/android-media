<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/groupCardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Cuci Gudang Agustus fhgrhtghuuhuhh"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toTopOf="@id/groupCardSubTitle"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/groupCardSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupCardTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Cuci Gudang Agustus fhgrhtghuuhuhh"
        android:textColor="@color/Unify_NN600"

        app:typographyType="small" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/groupCardCountWarning"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:icon_color_light_enable="@color/Unify_R500"
        app:icon_name="WARNING"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/groupCardInsightCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        tools:text="4 saran untukmu"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toEndOf="@+id/groupCardCountWarning"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/groupCardProgressBar"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/groupCardChevronIcon"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/groupCardInsightCount"
        app:unify_progress_bar_value="75" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/groupCardChevronIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
