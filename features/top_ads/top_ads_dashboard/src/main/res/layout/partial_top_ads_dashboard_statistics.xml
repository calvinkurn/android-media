<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.topads.auto.view.widget.AutoAdsWidgetView
        android:id="@+id/autoads_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/dp_14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/bg_list_separator">

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_statistics"
            style="@style/LabelLayout.TopAdsLabelView"
            android:layout_height="@dimen/dp_64"
            app:lv_content="@string/title_top_ads_store"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_image="@drawable/ic_top_ads_statistik"
            app:lv_title="@string/topads_dashboard_label_statistics"/>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/date_label_view"
            style="@style/LabelLayout.TopAdsLabelView"
            android:layout_height="@dimen/dp_64"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_image="@drawable/ic_top_ads_dashboard_kalender"
            app:lv_title="@string/label_date_period"
            app:lv_content_max_width_percentage="0.4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topads_content_statistics"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_tabLayout"
            android:paddingStart="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>

        <com.tokopedia.abstraction.base.view.widget.TouchViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewpager_statistics_height" />

    </LinearLayout>

</LinearLayout>