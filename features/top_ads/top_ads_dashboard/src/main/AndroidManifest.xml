<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.topads.dashboard"
    xmlns:tools="http://schemas.android.com/tools">

    <application android:label="@string/app_name"
        tools:replace="android:label"
        android:allowBackup="true">

        <activity
            android:name=".view.activity.TopAdsDashboardActivity"
            android:label="@string/top_ads_title_dashboard"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Green" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_topads"
                    android:pathPattern="@string/path_topads_dashboard"/>
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_topads"
                    android:pathPattern="@string/path_topads_dashboard"/>
                <data
                    android:scheme="@string/sellerapp_scheme"
                    android:host="@string/host_topads"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.TopAdsAddCreditActivity"
            android:label="@string/title_top_ads_add_credit"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/sellerapp_scheme"
                    android:host="@string/host_topads"
                    android:path="@string/path_topads_buy_credit"/>
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_topads"
                    android:path="@string/path_topads_buy_credit"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.topads.credit.history.view.activity.TopAdsCreditHistoryActivity"
            android:label="@string/title_top_ads_credit_history"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_topads"
                    android:path="@string/path_topads_history_credit"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.topads.debit.autotopup.view.activity.TopAdsAutoTopUpActivity"
            android:label="@string/title_top_ads_auto_topup"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.TopAdsPaymentCreditActivity"
            android:label="@string/title_top_ads_add_credit"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SellerCenterActivity"
            android:label="@string/topads_menu_seller_centre"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />
    </application>
</manifest>
