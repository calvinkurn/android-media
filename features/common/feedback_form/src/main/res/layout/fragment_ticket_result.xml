<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Neutral_N0"
    android:orientation="vertical">

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/iv_ticket_created"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_140"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_72"
        android:layout_marginBottom="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ticket_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_40"
        android:text="@string/link_ticket"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/iv_ticket_created"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ticket_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_40"
        android:text="@string/link_ticket"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ticket_text_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"
        android:visibility="visible"/>
    
    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/openLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/ticket_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonSize="small"
        android:text="@string/open_link"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ticket_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_40"
        android:text="@string/link_ticket"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/openLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"/>

    <ImageView
        android:id="@+id/copy_ticket"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@id/ticket_url"
        app:layout_constraintTop_toTopOf="@id/ticket_url"
        app:layout_constraintBottom_toBottomOf="@id/ticket_url"
        app:srcCompat="@drawable/ic_copy_feedback"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>