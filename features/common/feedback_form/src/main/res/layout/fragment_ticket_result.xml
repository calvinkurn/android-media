<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/iv_ticket_created"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ticket_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="40dp"
        android:text="@string/link_ticket"
        android:textColor="@color/Unify_N700"
        app:layout_constraintTop_toBottomOf="@id/iv_ticket_created"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ticket_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:text="@string/link_ticket"
        android:textColor="@color/Unify_N700"
        app:layout_constraintTop_toBottomOf="@id/ticket_text_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"
        android:visibility="visible"/>
    
    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/openLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ticket_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonSize="small"
        android:text="@string/open_link"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ticket_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:text="@string/link_ticket"
        android:textColor="@color/Unify_N700"
        app:layout_constraintTop_toBottomOf="@id/openLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"/>

    <ImageView
        android:id="@+id/copy_ticket"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/ticket_url"
        app:layout_constraintTop_toTopOf="@id/ticket_url"
        app:layout_constraintBottom_toBottomOf="@id/ticket_url"
        app:srcCompat="@drawable/ic_copy_feedback"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>