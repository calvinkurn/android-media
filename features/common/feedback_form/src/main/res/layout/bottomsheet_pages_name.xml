<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.design.text.SearchInputView
        android:layout_marginTop="4dp"
        android:id="@+id/search_input_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:search_bar_show_icon="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@id/search_input_page"
        app:layout_constraintTop_toBottomOf="@id/search_input_page"
        app:layout_constraintStart_toStartOf="parent"/>


</RelativeLayout>