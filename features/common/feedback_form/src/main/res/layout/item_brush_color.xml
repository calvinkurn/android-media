<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/layout_lvl3"
    android:layout_height="@dimen/layout_lvl3"
    android:layout_marginLeft="@dimen/spacing_lvl2"
    android:layout_marginTop="@dimen/spacing_lvl2"
    android:layout_marginRight="@dimen/spacing_lvl2"
    android:layout_marginBottom="@dimen/spacing_lvl2"
    android:gravity="center">

    <View
        android:id="@+id/brushColorOption"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:background="@drawable/bg_color_round_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBrushColorCheck"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_devops_check_white"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>