<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_is_test_device"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/unify_space_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Device Hansel Test: True"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_device_id"
        android:layout_margin="@dimen/unify_space_4"
        app:layout_constraintTop_toBottomOf="@id/tv_is_test_device"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Device ID: 12323444"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_copy"
        android:layout_width="@dimen/unify_space_24"
        android:layout_height="@dimen/unify_space_24"
        app:layout_constraintStart_toEndOf="@id/tv_device_id"
        app:layout_constraintTop_toTopOf="@id/tv_device_id"
        app:layout_constraintBottom_toBottomOf="@id/tv_device_id"
        app:icon_name="COPY"
        android:layout_marginStart="@dimen/unify_space_8"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_hansel_patch"
        app:layout_constraintTop_toBottomOf="@id/tv_device_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btn_title_hansel"
        app:unifyButtonType="main"
        app:unifyButtonSize="medium" />
</androidx.constraintlayout.widget.ConstraintLayout>