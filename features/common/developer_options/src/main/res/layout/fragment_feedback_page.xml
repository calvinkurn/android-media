<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:lines="1"
            android:gravity="center_vertical"
            android:hint="@string/email"
            app:backgroundTint="@color/Green_G500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/bug_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            android:weightSum="5">

            <TextView
                android:id="@+id/bug_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                style="@style/TextView.Title.Bold"
                android:text="@string/bug_type"/>

            <Spinner
                android:id="@+id/spinner_bug_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/affected_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:lines="1"
            android:gravity="center_vertical"
            android:inputType="text"
            android:hint="@string/affected_page"
            app:backgroundTint="@color/Green_G500"
            app:layout_constraintTop_toBottomOf="@id/bug_layout"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/step_to_reproduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:maxLines="10"
            android:inputType="textMultiLine"
            android:hint="@string/step_to_reproduce"
            app:backgroundTint="@color/Green_G500"
            app:layout_constraintTop_toBottomOf="@id/affected_page"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/actual_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:maxLines="10"
            android:inputType="textMultiLine"
            android:hint="@string/actual_result"
            app:backgroundTint="@color/Green_G500"
            app:layout_constraintTop_toBottomOf="@id/step_to_reproduce"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/expected_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:maxLines="10"
            android:inputType="textMultiLine"
            android:hint="@string/expected_result"
            app:backgroundTint="@color/Green_G500"
            app:layout_constraintTop_toBottomOf="@id/actual_result"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/image_feedback"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@+id/expected_result"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:background="@color/white"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@id/image_feedback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.tokopedia.unifycomponents.UnifyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="Submit"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>