<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/rollence_ab_testing"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/input_rollence_key_tf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:text_field_placeholder="@string/input_rollence_key"
        app:text_field_label_static="true"
        app:text_field_label=""
        app:text_field_input_type="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/input_rollence_variant_tf"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:text_field_placeholder="@string/input_rollence_variant"
            app:text_field_label_static="true"
            app:text_field_label=""
            app:text_field_input_type="text"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/apply_rollence_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            app:unifyButtonType="alternate"
            app:unifyButtonSize="medium"
            app:unifyButtonVariant="ghost"/>
    </LinearLayout>

</LinearLayout>