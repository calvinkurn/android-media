<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_ok_http_timeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok_http_timeout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/text_field_ok_http_timeout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintHorizontal_weight="3"
        app:text_field_label_static="true"
        app:text_field_label=""
        app:text_field_input_type="number"
        app:layout_constraintTop_toBottomOf="@id/tg_ok_http_timeout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_update_ok_http_timeout"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button_update_ok_http_timeout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/change_ok_http_timeout"
        app:layout_constraintHorizontal_weight="2"
        app:unifyButtonType="main"
        app:unifyButtonSize="medium"
        app:layout_constraintStart_toEndOf="@id/text_field_ok_http_timeout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_field_ok_http_timeout"/>

</androidx.constraintlayout.widget.ConstraintLayout>