<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/Unify_Background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvApplinkTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_1"
            app:typographyWeight="bold"
            android:textColor="@color/Unify_NN950_96"
            tools:text="tokopedia-android-internal://marketplace/product-detail/.*\/.*\/" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvApplinkVariable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvApplinkTitle"
            app:typographyType="body_2"
            tools:text="ApplinkConstInternalMarketplace.PRODUCT_DETAIL_DOMAIN"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDestActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:typographyType="body_2"
            android:textColor="@color/Unify_NN950_68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvApplinkVariable"
            tools:text="com.tokopedia.product.detail.view.activity.ProductDetailActivity" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>