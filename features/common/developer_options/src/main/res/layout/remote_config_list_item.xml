<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/config_container"
    android:orientation="vertical"
    android:background="?selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl4">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textAlignment="center"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl1"
        android:textStyle="bold"
        android:background="@drawable/remote_config_key_bg"
        android:text="@string/remote_config_key_label" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/config_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textColor="#273238"
        android:textSize="@dimen/fontSize_lvl4"
        android:maxLines="2"
        android:background="@drawable/remote_config_value_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        android:textAlignment="center"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl1"
        android:textStyle="bold"
        android:background="@drawable/remote_config_key_bg"
        android:text="@string/remote_config_value_label" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/config_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textColor="#273238"
        android:textSize="@dimen/fontSize_lvl4"
        android:maxLines="2"
        android:background="@drawable/remote_config_value_bg" />

</LinearLayout>
