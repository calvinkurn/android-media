<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/edit_text_search_ab_test_key"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_height="wrap_content"
        app:text_field_placeholder="@string/ab_test_rollence_edit_text_search_hint"
        app:text_field_label_static="true"
        app:text_field_label=""
        app:text_field_input_type="text"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_ab_test_revision"
        android:paddingStart="@dimen/dp_2"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content"
        app:typographyType="body_1"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/empty_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lvl4"
        android:textSize="@dimen/fontSize_lvl7"
        android:gravity="center"
        android:text="@string/remote_config_empty_result_message"
        android:visibility="gone"
        app:typographyType="heading_2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/config_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
