<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl4">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnDoPBack"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:srcCompat="@drawable/ic_back_white" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/layout_lvl3"
            android:id="@+id/btnDoPUndo"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            app:srcCompat="@drawable/ic_undo_active" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_lvl3"
            android:gravity="center_vertical"
            android:text="Pencil Icon"
            android:textColor="@color/white" />

        <!--        <androidx.appcompat.widget.AppCompatImageView-->
        <!--            android:layout_width="@dimen/layout_lvl3"-->
        <!--            android:layout_height="@dimen/layout_lvl3"-->
        <!--            app:srcCompat="@drawable/ic_edit" />-->

    </LinearLayout>

    <com.tokopedia.developer_options.presentation.feedbackpage.widgets.DrawOnPictureView
        android:id="@+id/dopFeedbackForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

</LinearLayout>