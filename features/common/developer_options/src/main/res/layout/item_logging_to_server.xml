<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/logging_to_server"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/logging_to_server_tf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:text_field_placeholder="@string/required_server_logging"
        app:text_field_label_static="true"
        app:text_field_label=""
        app:text_field_input_type="text"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/logging_to_server_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/send_log_to_server"
        app:unifyButtonType="main"
        app:unifyButtonSize="medium"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/view_server_logger_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/view_server_logger"
        app:unifyButtonType="main"
        app:unifyButtonSize="medium"/>

</LinearLayout>