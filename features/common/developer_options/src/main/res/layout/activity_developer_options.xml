<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/review_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Review Notification"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/access_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Access Token"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/app_auth_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="App Auth Secret (IT Risk)"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/reset_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Reset OnBoarding"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/test_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Test OnBoarding"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/force_crash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Force Crash"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_firebase_crash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:lines="1"
            android:gravity="center_vertical"
            android:inputType="text"
            android:hint="crash message"
            app:backgroundTint="@color/Green_G500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_send_firebase_crash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="Send Firebase Exception"
            android:textColor="@color/Neutral_N0" />

        <TextView
            android:id="@+id/goto_screen_recorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Open Screen Recorder"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/toggle_chuck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable Network Log on Notification" />

        <TextView
            android:id="@+id/goto_chuck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View Network Log"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Device ID: 1213124" />

        <CheckBox
            android:id="@+id/toggle_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Force Dark Mode" />

        <CheckBox
            android:id="@+id/toggle_topads_debugger_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable TopAds Log on Notification" />

        <TextView
            android:id="@+id/goto_topads_debugger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View TopAds Log"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/toggle_applink_debugger_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable Applink Log on Notification" />

        <TextView
            android:id="@+id/goto_applink_debugger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View Applink Log"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/toggle_fpm_auto_file_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable FPM Log on File (Download/fpm-auto-log.txt)" />

        <CheckBox
            android:id="@+id/toggle_fpm_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable FPM Log on Notification" />

        <TextView
            android:id="@+id/goto_fpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View FPM Log"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/toggle_analytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable Analytics Log on Notification" />

        <TextView
            android:id="@+id/goto_cassava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Cassava"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/goto_analytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View Analytics Log"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/goto_iris_save_log"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/btn_share"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="View Iris Save Log"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/goto_iris_send_log"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/btn_share"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="View Iris Send Log"
                android:textColor="@color/white" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_block_canary_delay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:lines="1"
            android:gravity="center_vertical"
            android:inputType="text"
            android:hint="Minimum Block Delay to Captured in ms (default = 500)"
            app:backgroundTint="@color/Green_G500" />

        <CheckBox
            android:id="@+id/toggle_ui_block_debugger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable ANR Debugger" />

        <CheckBox
            android:id="@+id/toggle_leak_canary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable Leak Canary" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/remote_config_prefix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:lines="1"
            android:gravity="center_vertical"
            android:inputType="text"
            android:hint="@string/remote_config_prefix_placeholder"
            app:backgroundTint="@color/Green_G500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/remote_config_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="@string/remote_config_start_button"
            android:textColor="@color/Neutral_N0" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_route_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:lines="1"
            android:gravity="center_vertical"
            android:inputType="text"
            android:hint="String to be put in RouteManager.route(...)"
            app:backgroundTint="@color/Green_G500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_route_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="Try RouteManager.route"
            android:textColor="@color/Neutral_N0" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ip_groupchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:hint="IP Groupchat" />

        <TableLayout
            android:stretchColumns="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>

                <ToggleButton
                    android:id="@+id/groupchat_log"
                    android:background="@drawable/btn_share"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/ip_groupchat_save"
                    android:background="@drawable/btn_share"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Save IP"/>

            </TableRow>
        </TableLayout>

        <TableLayout
            android:stretchColumns="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:text="Logging To Server"
                    android:paddingRight="25dip"
                    style="@style/TextView.Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_timber_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            android:lines="1"
            android:gravity="center_vertical"
            android:inputType="text"
            android:hint="Pno##TAG##message (message: abc=123##edf=4) (required Server Logging ON)"
            app:backgroundTint="@color/Green_G500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_send_timber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="Send Log to Server"
            android:textColor="@color/Neutral_N0" />

        <CheckBox
            android:id="@+id/toggle_seller_app_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable Seller App Review Debugging" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_lvl4">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_change_version_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/fontSize_lvl4"
                android:inputType="text"
                android:hint="3.99"
                app:backgroundTint="@color/Green_G500" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_change_version_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="@dimen/fontSize_lvl4"
                android:inputType="number"
                android:maxLength="9"
                android:hint="399123456"
                app:backgroundTint="@color/Green_G500" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_change_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/btn_share"
                android:gravity="center"
                android:padding="@dimen/spacing_lvl3"
                android:text="Change"
                android:textColor="@color/Neutral_N0" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:text="Version change is for api purpose - app kill will change back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                style="@style/TextView.Title.Bold"
                android:text="Choose URL Env"/>

            <Spinner
                android:id="@+id/spinner_env_chooser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_fake_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Fake response Activity"
            android:textColor="@color/white" />

        <com.tokopedia.translator.ui.TranslatorSettingView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/requestFcmToken"
            android:text="Request New FCM Token" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resetOnboardingNavigation"
            android:text="RESET ONBOARDING NAVIGATION!" />


        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rollance AB Testing Manual Switcher : "/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_rollence_key"
            android:hint="input rollence key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_4">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_rollence_variant"
                android:hint="input rollence variant"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_apply_rollence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPLY"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ab_test_rollence_editor_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="@string/ab_test_rollence_start_button"
            android:textColor="@color/Neutral_N0" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home and Navigation Revamp Switcher : "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonAlwaysOldNavigation"
                android:text="ALWAYS_OLD_NAVIGATION" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonAlwaysNewNavigation"
                android:text="ALWAYS_NEW_NAVIGATION" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonAlwaysOldHome"
                android:text="ALWAYS_OLD_HOME" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonAlwaysNewHome"
                android:text="ALWAYS_NEW_HOME" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonAlwaysOldBalanceWidget"
                android:text="ALWAYS_OLD_BALANCE_WIDGET" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonAlwaysNewBalanceWidget"
                android:text="ALWAYS_NEW_BALANCE_WIDGET" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:id="@+id/btn_always_old_inbox"
                android:text="Always Old Inbox" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:id="@+id/btn_always_new_inbox"
                android:text="Always New Inbox" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:id="@+id/btn_always_old_notifcenter"
                android:text="Always Old Notifcenter" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:id="@+id/btn_always_new_notifcenter"
                android:text="Always New Notifcenter" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>