<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/review_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Review Notification"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/access_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Access Token"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/reset_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Reset OnBoarding"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/test_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Test OnBoarding"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/force_crash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Force Crash"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/goto_screen_recorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Open Screen Recorder"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/toggle_chuck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable Network Log on Notification" />

        <TextView
            android:id="@+id/goto_chuck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View Network Log"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Device ID: 1213124" />

        <CheckBox
            android:id="@+id/toggle_topads_debugger_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable TopAds Log on Notification" />

        <TextView
            android:id="@+id/goto_topads_debugger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View TopAds Log"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/toggle_applink_debugger_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable Applink Log on Notification" />

        <TextView
            android:id="@+id/goto_applink_debugger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View Applink Log"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/toggle_fpm_auto_file_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable FPM Log on File (Download/fpm-auto-log.txt)" />

        <CheckBox
            android:id="@+id/toggle_fpm_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable FPM Log on Notification" />

        <TextView
            android:id="@+id/goto_fpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View FPM Log"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/toggle_analytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable Analytics Log on Notification" />

        <TextView
            android:id="@+id/goto_cassava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Client Analytics Validator"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/goto_analytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View Analytics Log"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/goto_analytics_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="View Analytics Error Log"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goto_iris_save_log"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/btn_share"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="View Iris Save Log"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/goto_iris_send_log"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/btn_share"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="View Iris Send Log"
                android:textColor="@color/white" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_block_canary_delay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:gravity="center_vertical"
            android:hint="Minimum Block Delay to Captured in ms (default = 500)"
            android:inputType="text"
            android:lines="1"
            android:textSize="@dimen/fontSize_lvl4"
            app:backgroundTint="@color/Green_G500" />

        <CheckBox
            android:id="@+id/toggle_ui_block_debugger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Enable ANR Debugger" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/remote_config_prefix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:gravity="center_vertical"
            android:hint="@string/remote_config_prefix_placeholder"
            android:inputType="text"
            android:lines="1"
            android:textSize="@dimen/fontSize_lvl4"
            app:backgroundTint="@color/Green_G500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/remote_config_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="@string/remote_config_start_button"
            android:textColor="@color/Neutral_N0" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_route_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:gravity="center_vertical"
            android:hint="String to be put in RouteManager.route(...)"
            android:inputType="text"
            android:lines="1"
            android:textSize="@dimen/fontSize_lvl4"
            app:backgroundTint="@color/Green_G500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_route_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="Try RouteManager.route"
            android:textColor="@color/Neutral_N0" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ip_groupchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:hint="IP Groupchat" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>

                <ToggleButton
                    android:id="@+id/groupchat_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_share"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/ip_groupchat_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_share"
                    android:gravity="center"
                    android:text="Save IP"
                    android:textColor="@color/white" />

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    style="@style/TextView.Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="25dip"
                    android:text="Enable Timber Logging To Server" />

                <ToggleButton
                    android:id="@+id/toggle_timber_dev_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/btn_share"
                    android:textColor="@color/white" />
            </TableRow>
        </TableLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_timber_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:gravity="center_vertical"
            android:hint="Pno#TAG#message (required Server Logging ON)"
            android:inputType="text"
            android:lines="1"
            android:textSize="@dimen/fontSize_lvl4"
            app:backgroundTint="@color/Green_G500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_send_timber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="Send Log to Server"
            android:textColor="@color/Neutral_N0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_change_version_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="3.99"
                android:inputType="text"
                android:textSize="@dimen/fontSize_lvl4"
                app:backgroundTint="@color/Green_G500" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_change_version_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="399123456"
                android:inputType="number"
                android:maxLength="9"
                android:textSize="@dimen/fontSize_lvl4"
                app:backgroundTint="@color/Green_G500" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_change_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/btn_share"
                android:gravity="center"
                android:padding="@dimen/spacing_lvl3"
                android:text="Change"
                android:textColor="@color/Neutral_N0" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:text="Version change is for api purpose - app kill will change back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                style="@style/TextView.Title.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Choose URL Env" />

            <Spinner
                android:id="@+id/spinner_env_chooser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_fake_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Fake response Activity"
            android:textColor="@color/white" />

        <com.tokopedia.translator.ui.TranslatorSettingView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/requestFcmToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request New FCM Token" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_delay_gratif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:gravity="center_vertical"
            android:hint="Delay in Gratif pop-up"
            android:inputType="number"
            android:lines="1"
            android:text="0"
            android:textSize="@dimen/fontSize_lvl4"
            app:backgroundTint="@color/Green_G500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_delay_gratif_pop_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="Enter seconds to add delay in Gratif pop-up"
            android:textColor="@color/Neutral_N0" />

        <CheckBox
            android:id="@+id/cb_gratif_debug_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="Show debug toast"
            android:visibility="gone" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_log_viewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="View Logs"
            android:textColor="@color/Neutral_N0" />

        <CheckBox
            android:id="@+id/cb_update_gratif_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exclude params in update notification(Gratif Engine)" />

    </LinearLayout>
</ScrollView>