<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/app_version_tf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:text_field_placeholder="@string/v_3_99"
            app:text_field_label_static="true"
            app:text_field_label=""
            app:text_field_input_type="text"/>

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/specific_version_tf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:layout_marginStart="5dp"
            app:text_field_placeholder="@string/example_version_code"
            app:text_field_label_static="true"
            app:text_field_label=""
            app:text_field_counter="9"
            app:text_field_input_type="number"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/change_version_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/change_the_version"
            android:layout_weight="2"
            app:unifyButtonType="main"
            app:unifyButtonSize="medium" />

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="@string/version_change_api"/>

</LinearLayout>
