<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.SearchBarUnify
        android:id="@+id/searchbarAppLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:layout_margin="8dp"
        app:search_bar_show_icon="false"
        app:search_bar_placeholder="@string/search_applink_here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshAppLink"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnAppLinkRoute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchbarAppLink">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAppLinkList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvAppLinkNotFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/applink_no_data"
        android:visibility="gone"
        tools:visibility="visible"
        app:typographyType="body_1"
        app:layout_constraintBottom_toTopOf="@id/searchbarAppLink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swipeRefreshAppLink" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnAppLinkRoute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/route_to_applink"
        app:layout_constraintTop_toBottomOf="@id/swipeRefreshAppLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>