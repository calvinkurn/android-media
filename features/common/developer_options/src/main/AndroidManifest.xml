<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.developer_options">

    <application>
        <activity
            android:name=".presentation.activity.DeveloperOptionActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" >

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_setting"
                    android:pathPrefix="@string/path_dev_opt"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".presentation.feedbackpage.ui.FeedbackPageActivity"
            android:label="@string/feedback_page_title"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" >

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/internal_feedback"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".remote_config.RemoteConfigFragmentActivity"
            android:label="@string/remote_config_title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <service android:name=".presentation.service.DeleteFirebaseTokenService"
            android:exported="false"/>

        <receiver android:name=".notification.ReviewNotificationUpdateExample" />

        <activity
            android:name=".presentation.feedbackpage.ui.TicketCreatedActivity"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>