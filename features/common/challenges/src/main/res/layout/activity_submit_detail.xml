<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/card_share"
        android:paddingBottom="@dimen/dp_5"
        android:background="@color/white"
        android:visibility="visible"
        android:scrollbars="none">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/conditional_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/background_lightyellow_voucher"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@drawable/line_yellow" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_8"
                    android:padding="@dimen/dp_8"
                    android:text="@string/approval_wait"
                    android:textColor="#8a000000"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/close_status"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_margin="@dimen/dp_8"
                android:src="@drawable/yellow_close_btn"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@+id/conditional_status"
                app:layout_constraintTop_toTopOf="@id/conditional_status" />

            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@+id/conditional_status">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/green_hollow_circle"
                    android:src="@drawable/ic_action_back" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/challenge_img_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/profile">

                <com.tokopedia.challenges.view.customview.CustomVideoPlayer
                    android:id="@+id/img_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginBottom="@dimen/dp_30" />

                <TextView
                    android:id="@+id/tv_winner_number"
                    style="@style/TextView.Small.White"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/ic_winner_badge"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/sp_10"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:visibility="gone"/>

            </RelativeLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/like_btn"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                app:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/challenge_img_layout"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/ic_wishlist_unchecked"
                android:visibility="gone"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/challenge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="@color/black_39"
                android:textSize="@dimen/sp_20"
                app:layout_constraintTop_toBottomOf="@+id/challenge_img_layout" />

            <ImageView
                android:id="@+id/points_img"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@drawable/ic_buzz_points"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/challenge_title" />

            <TextView
                android:id="@+id/tv_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:text="0"
                app:layout_constraintLeft_toRightOf="@+id/points_img"
                app:layout_constraintTop_toBottomOf="@+id/challenge_title" />


            <ImageView
                android:id="@+id/likes_img"
                android:layout_width="@dimen/sp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@drawable/ic_wishlist_unchecked"
                app:layout_constraintLeft_toRightOf="@+id/tv_points"
                app:layout_constraintTop_toBottomOf="@+id/challenge_title" />

            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:text="0"
                app:layout_constraintLeft_toRightOf="@+id/likes_img"
                app:layout_constraintTop_toBottomOf="@+id/challenge_title" />


            <TextView
                android:id="@+id/approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:visibility="visible"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/challenge_title" />

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/detail_title_text"
                android:layout_marginTop="@dimen/dp_16"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16"
                app:layout_constraintTop_toBottomOf="@+id/approved" />

            <TextView
                android:id="@+id/detail_content"
                style="@style/TextView.Micro.FontMedium.BlackSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toBottomOf="@+id/detail_title" />

            <TextView
                android:id="@+id/participate_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:textColor="@color/black"
                android:text="@string/participate_in"
                android:textSize="@dimen/sp_16"
                app:layout_constraintTop_toBottomOf="@+id/detail_content" />

            <TextView
                android:id="@+id/participate_content"
                style="@style/TextView.Micro.FontMedium.BlackSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/tkpd_main_green"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/participate_title" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_share"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_8">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buzz_point_request" />

            <TextView
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_round_corner_solid_green"
                android:paddingLeft="@dimen/dp_32"
                android:paddingRight="@dimen/dp_32"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="@string/share"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </LinearLayout>
        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_12"
            android:visibility="gone"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:background="@drawable/bg_round_corner_solid_green"
            android:gravity="center"
            android:text="Resubmit other content"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:elevation="@dimen/dp_18"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/dp_18"
        android:background="@color/white"
        android:orientation="vertical">
        <include layout="@layout/details_loader" />
    </LinearLayout>


</RelativeLayout>