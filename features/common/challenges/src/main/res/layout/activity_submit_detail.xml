<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_weight="1"
        android:scrollbars="none">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_16">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_hollow_circle"
                    android:src="@drawable/ic_action_back" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="Donald Trump"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <com.google.android.youtube.player.YouTubeThumbnailView
                android:id="@+id/img_challenge"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:adjustViewBounds="true"
                android:background="@color/grey_200"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_big_notif_customerapp"
                android:tint="@color/cardview_shadow_start_color"
                app:layout_constraintTop_toBottomOf="@+id/profile"
                tools:layout_editor_absoluteY="56dp" />


            <ImageView
                android:id="@+id/likes_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@drawable/ic_info_black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_challenge" />

            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:text="211"
                app:layout_constraintLeft_toRightOf="@+id/likes_img"
                app:layout_constraintTop_toBottomOf="@+id/img_challenge" />


            <ImageView
                android:id="@+id/points_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@drawable/ic_info_black"
                app:layout_constraintLeft_toRightOf="@+id/tv_likes"
                app:layout_constraintTop_toBottomOf="@+id/img_challenge" />

            <TextView
                android:id="@+id/tv_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:text="2,100"
                app:layout_constraintLeft_toRightOf="@+id/points_img"
                app:layout_constraintTop_toBottomOf="@+id/img_challenge" />

            <ImageView
                android:id="@+id/share_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="140dp"
                android:background="@color/grey_400"
                android:padding="@dimen/dp_12"
                android:src="@drawable/ic_share_white"
                app:layout_constraintRight_toRightOf="@+id/img_challenge"
                app:layout_constraintTop_toTopOf="@+id/img_challenge" />

            <ImageView
                android:id="@+id/calender_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@drawable/ic_calendar_grey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_likes" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_16"
                android:text="1 August 2018"
                app:layout_constraintLeft_toRightOf="@+id/calender_img"
                app:layout_constraintTop_toBottomOf="@+id/tv_likes" />

            <TextView
                android:id="@+id/approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_round_solid_green_radius_huge"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_3"
                android:text="Approved"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/likes_img" />

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Coexistence of Nature and Humans"
                android:textColor="#000000"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/calender_img" />

            <TextView
                android:id="@+id/detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Its' time to GO SNAP! We are looking for some beautiful snapshot from our Orange County community in this month."
                android:textSize="@dimen/sp_16"
                app:layout_constraintTop_toBottomOf="@+id/detail_title" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Help your post to gain more buzz point by sharing"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_32"
                android:paddingRight="@dimen/dp_32"
                android:background="@drawable/bg_round_corner_solid_green"
                android:text="Share"
                android:textColor="@color/white"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>