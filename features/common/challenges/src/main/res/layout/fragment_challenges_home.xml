<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ChallengesHomeActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_challenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tabIndicatorColor="@color/tkpd_main_green"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/tkpd_main_green">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Challenges"
            android:textAlignment="textStart" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="My Subscriptions"
            android:textAlignment="textStart" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tab_challenges">

    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>