<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HomeActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_challenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tabIndicatorColor="@color/tkpd_main_green"
        android:layout_marginLeft="@dimen/dp_5"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/tkpd_main_green">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Challenges"
            android:textAlignment="textStart" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="My Subscriptions"
            android:textAlignment="textStart" />
    </android.support.design.widget.TabLayout>


    <LinearLayout
        android:id="@+id/ll_challenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tab_challenges">

        <TextView
            android:id="@+id/tv_active_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ch_bubble_selected"
            android:padding="@dimen/dp_5"
            android:text="Active Challenges" />

        <TextView
            android:id="@+id/tv_post_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/bg_ch_bubble_default"
            android:padding="@dimen/dp_5"
            android:text="Past Challenges" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_challenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/ll_challenges">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>