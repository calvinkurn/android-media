<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_award"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_award_item"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/award_image"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/white" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_award_title"
                        style="@style/TextView.Micro.WhitePrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_16"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider2"
                        tools:text="First Place Buzz Winner" />

                    <TextView
                        android:id="@+id/tv_award_price"
                        style="@style/TextView.Small.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_16"
                        android:ellipsize="end"
                        android:lines="2"
                        android:paddingBottom="@dimen/dp_16"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider2"
                        tools:text="$50 &amp; $25 Gift Card" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        app:layout_constraintRight_toRightOf="@+id/cv_award"
        app:layout_constraintTop_toTopOf="@+id/cv_award"
        app:srcCompat="@color/tkpd_main_green" />
</android.support.constraint.ConstraintLayout>