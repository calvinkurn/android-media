<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.ChallengesFragment">

    <LinearLayout
        android:id="@+id/ll_challenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_active_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ch_bubble_selected"
            android:padding="@dimen/dp_5"
            android:text="Active Challenges" />

        <TextView
            android:id="@+id/tv_post_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/bg_ch_bubble_default"
            android:padding="@dimen/dp_5"
            android:text="Past Challenges" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_challenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>