<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_8"
    android:elevation="@dimen/dp_6">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5">

    <ImageView
            android:id="@+id/img_challenge"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:adjustViewBounds="true"
            android:background="@color/grey_200"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_round_solid_green_radius_huge"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_3"
            android:text="Approved"
            android:textColor="@color/green_800"
            app:layout_constraintLeft_toRightOf="@+id/img_challenge" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_8"
            android:text="Show me the slice"
            app:layout_constraintLeft_toLeftOf="@+id/tv_status"
            app:layout_constraintTop_toBottomOf="@+id/tv_status" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@color/gray_background"
            app:layout_constraintTop_toBottomOf="@+id/img_challenge" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@drawable/ic_share_via_card"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            app:layout_constraintLeft_toLeftOf="parent" />


        <ImageView
            android:id="@+id/img_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@drawable/ic_wishlist_unchecked"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            app:layout_constraintLeft_toRightOf="@+id/img_share" />


        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:drawableLeft="@drawable/ic_new_checkout_cart"
            android:drawablePadding="@dimen/dp_5"
            android:text="12 points"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>