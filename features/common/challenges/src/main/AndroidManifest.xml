<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.challenges">

    <application>
        <activity
            android:name=".view.activity.ChallengesSubmitActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White.PopupTransparent"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".view.activity.ChallengesHomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.ChallengeDetailActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.SubmitDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.FullScreenPortraitVideoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".view.activity.FullScreenLandscapeActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <service android:name=".view.service.UploadChallengeService" />

    </application>

</manifest>