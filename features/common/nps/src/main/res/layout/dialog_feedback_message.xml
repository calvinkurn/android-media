<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/image_message_request"
        android:layout_marginTop="16dp" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/black_n700_96"
        android:textSize="18sp"
        android:text="@string/message_feedback_title" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/black_n700_68"
        android:textSize="12sp"
        android:text="@string/message_feedback_message" />

    <com.tokopedia.design.component.EditTextCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:lines="2"
        android:gravity="top|left"
        android:inputType="textMultiLine" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:text="@string/message_feedback_send_button_label" />

</LinearLayout>