<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl4">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:adjustViewBounds="true"
        android:src="@drawable/image_message_request" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/message_feedback_title"
        android:textColor="@color/Neutral_N700_96"
        android:gravity="center"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/message_feedback_message"
        android:textColor="@color/Neutral_N700_68"
        android:gravity="center"
        app:typographyType="body_3" />

    <com.tokopedia.design.component.EditTextCompat
        android:id="@+id/message_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:textSize="@dimen/fontSize_lvl4"
        android:lines="2"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:hint="@string/message_feedback_hint" />

    <FrameLayout
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:background="@drawable/rounded_button">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_feedback_send_button_label"
            android:textColor="@color/Neutral_N0"
            android:layout_gravity="center"
            app:typographyType="heading_5" />

    </FrameLayout>

</LinearLayout>