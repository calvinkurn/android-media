<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/image_message_request"
        android:layout_marginTop="16dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/message_feedback_title"
        android:textColor="@color/black_n700_96"
        android:gravity="center"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/message_feedback_message"
        android:textColor="@color/black_n700_68"
        android:gravity="center"
        app:typographyType="body_3" />

    <com.tokopedia.design.component.EditTextCompat
        android:id="@+id/message_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:textSize="16sp"
        android:lines="1"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:hint="@string/message_feedback_hint" />

    <FrameLayout
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:background="@drawable/rounded_button">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_feedback_send_button_label"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            app:typographyType="heading_5" />

    </FrameLayout>

</LinearLayout>