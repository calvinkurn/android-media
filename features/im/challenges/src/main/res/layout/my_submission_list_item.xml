<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8">

        <ImageView
            android:id="@+id/img_challenge"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200"
            android:adjustViewBounds="true"
            android:background="@drawable/placeholder_image_bg"
            android:scaleType="centerCrop"
            android:src="@color/grey_1100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextView.Title.FontMedium.BlackPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:ellipsize="end"
            android:lines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_status"
            app:layout_constraintTop_toBottomOf="@+id/img_challenge"
            tools:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)" />

        <TextView
            android:id="@+id/tv_status"
            style="@style/TextView.Micro11.FontMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            tools:text="jdajsdkjsa" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/grey_200"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:srcCompat="@drawable/ic_share_via_card" />

        <ImageView
            android:id="@+id/img_likes"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/img_share"
            app:layout_constraintLeft_toRightOf="@+id/img_share"
            app:layout_constraintTop_toTopOf="@+id/img_share" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:paddingRight="@dimen/dp_2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_points"
            app:layout_constraintRight_toLeftOf="@+id/tv_points"
            app:layout_constraintTop_toTopOf="@+id/tv_points" />
        <TextView
            android:id="@+id/tv_points"
            style="@style/TextView.Micro.FontMedium.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:drawableLeft="@drawable/ic_buzz_epoints"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="500" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>