<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_continue"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:contentScrim="@color/white"
                app:expandedTitleGravity="left|bottom"
                app:expandedTitleMarginBottom="@dimen/dp_8"
                app:expandedTitleMarginStart="@dimen/dp_16"
                app:expandedTitleTextAppearance="@style/ToolbarExpandedTitle2"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_16">

                    <RelativeLayout
                        android:id="@+id/fl_header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200">

                        <ImageView
                            android:id="@+id/image_challenge"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:scaleType="centerCrop" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:layout_alignTop="@+id/image_challenge"
                            android:layout_alignBottom="@+id/image_challenge"
                            android:background="@drawable/background_blur_header" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/base_main_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <TextView
                            android:id="@+id/tv_title"
                            style="@style/TextView.TitleBig.FontMedium.BlackPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            tools:text="Show me the Slice!" />

                        <TextView
                            android:id="@+id/tv_hashtag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_8"
                            tools:text="#challenge" />

                        <RelativeLayout
                            android:id="@+id/cl_expiry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_hashtag"
                            android:layout_marginTop="@dimen/dp_8">

                            <TextView
                                android:id="@+id/tv_expiry_date"
                                style="@style/TextView.Micro.Black40"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_16"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                tools:text="Due date: 30th July 2018" />


                            <TextView
                                android:id="@+id/tv_participated"
                                style="@style/TextView.Micro11.FontMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_16"
                                android:background="@drawable/bg_round_solid_green_radius_huge"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_4"
                                android:paddingRight="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_6"
                                tools:text="Participated" />

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/cl_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_16"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="28dp"
                                    android:layout_marginTop="@dimen/dp_16"
                                    android:indeterminate="false"
                                    android:progress="50"
                                    android:progressDrawable="@drawable/background_progress_timer"
                                    app:layout_constraintLeft_toLeftOf="@+id/count_down"
                                    app:layout_constraintRight_toRightOf="@+id/count_down" />

                                <com.tokopedia.challenges.view.customview.CountDownView
                                    android:id="@+id/count_down"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_8"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/progressBar" />
                            </android.support.constraint.ConstraintLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="parallax" />

            </android.support.design.widget.CollapsingToolbarLayout>

            <com.tokopedia.design.component.Tabs
                android:id="@+id/tab_challenges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                app:tabIndicatorColor="@color/tkpd_main_green"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/tkpd_main_green"
                app:tabTextAppearance="@style/Tabs.Challenges"
                app:tabTextColor="@color/black_38">

                <android.support.design.widget.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/ch_challenges"
                    android:textAlignment="textStart" />

                <android.support.design.widget.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/ch_my_submissions"
                    android:textAlignment="textStart" />
            </com.tokopedia.design.component.Tabs>
        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            app:backgroundTint="@color/white"
            app:layout_anchor="@id/base_main_content"
            app:layout_anchorGravity="top|end|right"
            app:srcCompat="@drawable/ic_share_via_card"
            tools:ignore="VectorDrawableCompat" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_challengeDetailsMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:visibility="invisible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/tv_most_recent"
                style="@style/TextView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ch_bubble_selected"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_8"
                android:text="@string/ch_most_recent"
                android:textColor="@color/black_56" />

            <TextView
                android:id="@+id/tv_buzz_points"
                style="@style/TextView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/bg_ch_bubble_default"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_8"
                android:text="@string/ch_buzz_points"
                android:textColor="@color/black_56" />
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <View
        android:id="@+id/bottom_margin_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@+id/ll_continue"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/ll_continue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/dp_8">

        <TextView
            android:id="@+id/submit_photo"
            style="@style/TextView.Small.White"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_14"
            android:background="@drawable/background_submit_btn"
            android:gravity="center"
            android:text="@string/ch_submit_photo" />
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>