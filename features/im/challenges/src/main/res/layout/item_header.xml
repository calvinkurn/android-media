<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_challenges"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_most_recent"
        style="@style/TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ch_bubble_selected"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/ch_most_recent"
        android:textColor="@color/black_56" />

    <TextView
        android:id="@+id/tv_buzz_points"
        style="@style/TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@drawable/bg_ch_bubble_default"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/ch_buzz_points"
        android:textColor="@color/black_56" />
</LinearLayout>