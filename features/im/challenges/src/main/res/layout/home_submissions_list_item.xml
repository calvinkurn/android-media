<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:elevation="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_upper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_img_challenge"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                app:cardCornerRadius="@dimen/dp_4"
                android:elevation="@dimen/dp_2"
                android:padding="@dimen/dp_2">

                <ImageView
                    android:id="@+id/img_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@color/grey_200"
                    android:scaleType="centerCrop" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_status"
                style="@style/TextView.Micro11.FontMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_4"
                app:layout_constraintLeft_toRightOf="@+id/cv_img_challenge" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextView.Title.FontMedium.BlackPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintLeft_toRightOf="@+id/cv_img_challenge"
                app:layout_constraintTop_toBottomOf="@+id/tv_status"
                tools:text="My Challenge Title" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/gray_background"
            app:layout_constraintTop_toBottomOf="@+id/cl_upper" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_6"
            android:padding="@dimen/dp_3"
            android:src="@drawable/ic_share_via_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line" />


        <ImageView
            android:id="@+id/img_likes"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_7"
            android:clickable="true"
            android:padding="@dimen/dp_3"
            android:src="@drawable/ic_wishlist_unchecked"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/img_share"
            app:layout_constraintTop_toBottomOf="@+id/view_line" />


        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_buzz_points"
            android:drawablePadding="@dimen/dp_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>