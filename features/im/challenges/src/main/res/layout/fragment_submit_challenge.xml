<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/challenge_title"
                style="@style/TextView.TitleBig.FontMedium.BlackPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Workout Photo Challenge" />

            <TextView
                android:id="@+id/challenge_description"
                style="@style/TextView.Small.Black40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:ellipsize="end"
                android:lineSpacingExtra="3sp"
                android:maxLines="4"
                android:paddingRight="@dimen/dp_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_title"
                tools:text="The focus of this year's Challenge is Plants and Animal of California We are asking UCI students to capture,through a photographic image, the flora and fauna of our state. Exapmle images can be seen in the introductory Video ..." />

            <WebView
                android:id="@+id/markdownView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/challenge_description" />

            <TextView
                android:id="@+id/show_more"
                style="@style/TextView.Micro.Green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_12"
                android:ellipsize="end"
                android:lineSpacingExtra="3sp"
                android:maxLines="4"
                android:text="@string/ch_see_more"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/markdownView" />

            <TextView
                android:id="@+id/txt_choose_image_title"
                style="@style/TextView.Medium.FontMedium.BlackPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/ch_choose_image_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/show_more" />

            <ImageView
                android:id="@+id/selected_image"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/rounded_rectangle_grey_border"
                android:focusable="true"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_choose_image_title"
                app:srcCompat="@drawable/ic_upload"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/delete_image"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/selected_image"
                app:layout_constraintTop_toTopOf="@id/selected_image"
                app:srcCompat="@drawable/ic_black_cross"
                tools:ignore="VectorDrawableCompat" />


            <TextView
                android:id="@+id/img_title"
                style="@style/TextView.Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:text="@string/ch_image_title"
                android:textColor="@color/black_56"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_image" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/titleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_title">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_image_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="@string/ch_image_title"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:textColor="@color/black_39"
                    android:textColorHint="@color/black_18"
                    android:textSize="@dimen/sp_16" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/txt_image_description"
                style="@style/TextView.Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/ch_description"
                android:textColor="@color/black_56"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleContainer" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/descContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                app:counterEnabled="true"
                app:counterMaxLength="300"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_image_description">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_image_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/dp_4"
                    android:hint="@string/ch_description"
                    android:inputType="textMultiLine"
                    android:maxLength="300"
                    android:textColor="@color/black_39"
                    android:textColorHint="@color/black_18"
                    android:textSize="@dimen/sp_16" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/bottom_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descContainer">

                <TextView
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="@drawable/bg_button_green"
                    android:gravity="center"
                    android:text="@string/ch_submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@drawable/bg_button_white_border"
                    android:gravity="center"
                    android:text="@string/ch_cancel"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</RelativeLayout>