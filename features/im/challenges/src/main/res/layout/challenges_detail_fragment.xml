<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_continue">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:contentScrim="@color/white"
                app:expandedTitleGravity="left|bottom"
                app:expandedTitleMarginBottom="@dimen/dp_8"
                app:expandedTitleMarginStart="@dimen/dp_16"
                app:expandedTitleTextAppearance="@style/ToolbarExpandedTitle2"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:id="@+id/fl_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200">

                    <ImageView
                        android:id="@+id/image_challenge"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:layout_alignBottom="@+id/image_challenge"
                        android:layout_alignTop="@+id/image_challenge"
                        android:background="@drawable/background_blur_header" />

                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            app:backgroundTint="@color/white"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom|end"
            app:srcCompat="@drawable/ic_share_via_card"
            tools:ignore="VectorDrawableCompat" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:id="@+id/base_main_content"
                android:layout_width="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextView.TitleBig.FontMedium.BlackPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    tools:text="Show me the Slice!" />

                <TextView
                    android:id="@+id/tv_hashtag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_below="@+id/tv_title"
                    tools:text="#challenge" />

                <RelativeLayout
                    android:id="@+id/cl_expiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_below="@+id/tv_hashtag">

                    <TextView
                        android:id="@+id/tv_expiry_date"
                        style="@style/TextView.Micro.Black40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        tools:text="Due date: 30th July 2018" />


                    <TextView
                        android:id="@+id/tv_participated"
                        style="@style/TextView.Micro11.FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:background="@drawable/bg_round_solid_green_radius_huge"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_6"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_4"
                        tools:text="Participated" />

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cl_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="@dimen/dp_16"
                            android:indeterminate="false"
                            android:progress="50"
                            android:progressDrawable="@drawable/background_progress_timer"
                            app:layout_constraintLeft_toLeftOf="@+id/count_down"
                            app:layout_constraintRight_toRightOf="@+id/count_down" />

                        <com.tokopedia.challenges.view.customview.CountDownView
                            android:id="@+id/count_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/progressBar" />
                    </android.support.constraint.ConstraintLayout>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/cl_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/cl_expiry">

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@color/grey_200"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_about"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/ch_description"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider" />

                    <TextView
                        android:id="@+id/short_description"
                        style="@style/TextView.Small.Black40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:ellipsize="end"
                        android:lines="3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_about"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. " />

                    <WebView
                        android:id="@+id/markdownView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/short_description" />

                    <TextView
                        android:id="@+id/seemorebutton_description"
                        style="@style/TextView.Micro.Green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/ch_see_more"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/markdownView" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/cl_video_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/cl_about">

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@color/grey_200"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_video"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/ch_video"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider2" />


                    <com.tokopedia.challenges.view.customview.CustomVideoPlayer
                        android:id="@+id/video_player"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_240"
                        android:layout_marginTop="@dimen/dp_8"
                        android:padding="@dimen/dp_8"
                        app:layout_constraintTop_toBottomOf="@+id/tv_video" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cl_awards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/cl_video_player">

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@color/grey_200"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_awards"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/ch_awards"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider5" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_awards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:clipToPadding="false"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/tv_awards"
                        tools:listitem="@layout/challenges_award_item" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cl_winners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_below="@+id/cl_awards">


                    <View
                        android:id="@+id/divider7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@color/grey_200"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_winners"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/ch_challenege_winners"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider7" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_winners"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:clipToPadding="false"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        app:layout_constraintTop_toBottomOf="@id/tv_winners" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cl_submissions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_below="@+id/cl_winners">


                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@color/grey_200" />

                    <TextView
                        android:id="@+id/tv_submissions"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/ch_recent_submissions" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_submissions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:clipToPadding="false"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8" />

                    <TextView
                        android:id="@+id/tv_see_all"
                        style="@style/TextView.Micro.Green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:text="@string/ch_see_all" />
                </LinearLayout>


                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/grey_200"
                    android:layout_below="@+id/cl_submissions" />


                <LinearLayout
                    android:id="@+id/cl_how_buzzpoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_below="@+id/divider4">

                    <TextView
                        android:id="@+id/tv_how_buzz_points"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/ch_generate_buzz_points"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/tv_how_buzz_points_text"
                        style="@style/TextView.Small.Black40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/tv_how_buzz_points"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniamâ€¦" />

                    <TextView
                        android:id="@+id/seemorebutton_buzzpoints"
                        style="@style/TextView.Micro.Green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/ch_see_more"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/tv_how_buzz_points_text" />
                </LinearLayout>

                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/grey_200"
                    android:layout_below="@+id/cl_how_buzzpoints" />

                <TextView
                    android:id="@+id/tv_tnc"
                    style="@style/TextView.Medium.FontMedium.BlackPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_16"
                    android:text="@string/ch_terms_conditions"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    android:layout_below="@+id/divider6" />

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
    <View
        android:id="@+id/bottom_margin_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@+id/ll_continue"
        android:visibility="gone" />
    <android.support.v7.widget.CardView
        android:id="@+id/ll_continue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/dp_8">

        <TextView
            android:id="@+id/submit_photo"
            style="@style/TextView.Small.White"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_14"
            android:background="@drawable/background_submit_btn"
            android:gravity="center"
            android:text="@string/ch_submit_photo" />
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>