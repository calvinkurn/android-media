<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <ScrollView
            android:id="@+id/submit_detail_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8">

                    <ImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/circle_light_grey" />

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/challenge_img_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile">

                    <com.tokopedia.challenges.view.customview.CustomVideoPlayer
                        android:id="@+id/img_challenge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:background="@color/video_background" />

                    <TextView
                        android:id="@+id/tv_winner_number"
                        style="@style/TextView.Small.White"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@drawable/ic_winner_badge"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/sp_10"
                        android:visibility="gone" />

                </RelativeLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/like_btn"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:visibility="gone"
                    app:backgroundTint="@color/white"
                    android:layout_alignBottom="@+id/challenge_img_layout"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_wishlist_unchecked"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/challenge_title"
                    style="@style/TextView.TitleBig.FontMedium.BlackPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_below="@+id/challenge_img_layout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_2"
                    android:text="Scrore: "
                    android:visibility="gone"
                    android:layout_alignBottom="@+id/points_img"
                    android:layout_toLeftOf="@+id/points_img"
                    android:layout_toStartOf="@+id/points_img"
                    android:layout_alignTop="@+id/points_img" />

                <ImageView
                    android:id="@+id/points_img"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_16"
                    android:src="@drawable/ic_buzz_points"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                    android:layout_below="@+id/challenge_title" />

                <TextView
                    android:id="@+id/tv_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_toRightOf="@+id/points_img"
                    android:layout_toEndOf="@+id/points_img"
                    android:layout_below="@+id/challenge_title"
                    tools:text="0" />


                <ImageView
                    android:id="@+id/likes_img"
                    android:layout_width="@dimen/sp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:src="@drawable/ic_wishlist_unchecked"
                    android:layout_toRightOf="@+id/tv_points"
                    android:layout_toEndOf="@+id/tv_points"
                    android:layout_below="@+id/challenge_title" />

                <TextView
                    android:id="@+id/tv_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_toRightOf="@+id/likes_img"
                    android:layout_toEndOf="@+id/likes_img"
                    android:layout_below="@+id/challenge_title"
                    tools:text="0" />


                <TextView
                    android:id="@+id/approved"
                    style="@style/TextView.Micro11.FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_4"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/challenge_title" />

                <LinearLayout
                    android:id="@+id/conditional_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/background_light_bluish_grey"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_16"
                    android:visibility="gone"
                    android:layout_below="@+id/points_img">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/ic_info_black"
                        android:tint="#999999" />


                    <TextView
                        android:id="@+id/status_text"
                        style="@style/TextView.Micro.Black40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/ch_approval_wait" />
                </LinearLayout>

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/ch_description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:layout_below="@+id/conditional_status" />

                <TextView
                    android:id="@+id/detail_content"
                    style="@style/TextView.Small.FontMedium.BlackPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_below="@+id/detail_title" />

                <TextView
                    android:id="@+id/participate_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/ch_participate_in"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:layout_below="@+id/detail_content" />

                <TextView
                    android:id="@+id/participate_content"
                    style="@style/TextView.Small.FontMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/participate_title"
                     />


            </RelativeLayout>
        </ScrollView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp_16">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/ch_buzz_point_request" />

                <TextView
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_round_corner_solid_green"
                    android:paddingBottom="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_32"
                    android:paddingRight="@dimen/dp_32"
                    android:paddingTop="@dimen/dp_12"
                    android:text="@string/ch_share_submission"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_12"
                android:background="@drawable/bg_round_corner_solid_green"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_12"
                android:paddingTop="@dimen/dp_12"
                android:text="@string/ch_resubmit_text"
                android:textColor="@color/white"
                android:visibility="gone" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:elevation="@dimen/dp_18"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>

    <include layout="@layout/details_loader" />

</RelativeLayout>
