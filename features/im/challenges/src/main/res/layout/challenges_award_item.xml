<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_constrant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:background="@drawable/bg_green_gradient"
    android:paddingLeft="@dimen/dp_8"
    android:paddingRight="@dimen/dp_5">

    <ImageView
        android:id="@+id/award_image"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@drawable/award_circular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_award_title"
        style="@style/TextView.Micro.WhitePrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/award_image"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_toRightOf="@+id/award_image" />

    <TextView
        android:id="@+id/tv_award_price"
        style="@style/TextView.Small.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_award_title"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_toRightOf="@+id/award_image"
        android:ellipsize="end"
        android:gravity="left"
        android:textStyle="bold"
        android:lines="2"
        android:paddingBottom="@dimen/dp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tv_award_title" />
</RelativeLayout>