<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8">

        <ImageView
            android:id="@+id/iv_challenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:scaleType="centerCrop"
            android:src="@color/grey_1100"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_winner_number"
            style="@style/TextView.Small.White"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/iv_challenge"
            app:layout_constraintTop_toTopOf="@id/iv_challenge" />

        <TextView
            android:id="@+id/tv_submission_title"
            style="@style/TextView.Title.FontMedium.BlackPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:ellipsize="end"
            android:lines="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_challenge"
            tools:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/grey_200"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_submission_title" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:srcCompat="@drawable/ic_share_via_card" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            app:layout_constraintLeft_toRightOf="@+id/iv_share"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/iv_share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:paddingRight="@dimen/dp_2"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@+id/iv_buzz_points"
            app:layout_constraintBottom_toBottomOf="@+id/iv_buzz_points"
            app:layout_constraintRight_toLeftOf="@+id/iv_buzz_points" />

        <ImageView

            android:id="@+id/iv_buzz_points"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            app:layout_constraintRight_toLeftOf="@+id/tv_buzz_points"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_buzz_points" />

        <TextView
            android:id="@+id/tv_buzz_points"
            style="@style/TextView.Micro.FontMedium.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_8"
            android:gravity="center_vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="500" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>