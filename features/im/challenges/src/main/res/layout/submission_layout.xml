<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_participant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_userAvatar"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_participantUserName"
                style="@style/TextView.Title.FontMedium.BlackPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_userAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_userAvatar"
                app:layout_constraintTop_toTopOf="@+id/iv_userAvatar"
                tools:text="User Name" />

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_challenge"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@color/grey_1100"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_participant" />

        <ImageView
            android:id="@+id/play_icon"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_submission_title"
            app:layout_constraintEnd_toEndOf="@+id/iv_challenge"
            app:layout_constraintStart_toStartOf="@+id/iv_challenge"
            app:layout_constraintTop_toTopOf="@+id/iv_challenge"
            app:srcCompat="@drawable/ic_play" />

        <TextView
            android:id="@+id/tv_winner_number"
            style="@style/TextView.Small.White"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/iv_challenge"
            app:layout_constraintTop_toTopOf="@id/iv_challenge" />

        <TextView
            android:id="@+id/tv_submission_title"
            style="@style/TextView.Small.FontMedium.BlackPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_challenge"
            tools:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)" />

        <com.tokopedia.challenges.view.customview.MExpandableTextView
            android:id="@+id/tv_submission_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_submission_title">

        </com.tokopedia.challenges.view.customview.MExpandableTextView>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/grey_200"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_submission_description" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:srcCompat="@drawable/ic_share_via_card" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/iv_share"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/iv_share" />


        <ImageView
            android:id="@+id/iv_buzz_points"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            app:layout_constraintRight_toLeftOf="@+id/tv_buzz_points"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:srcCompat="@drawable/ic_buzz_points" />

        <TextView
            android:id="@+id/tv_buzz_points"
            style="@style/TextView.Micro.FontMedium.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/iv_buzz_points"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_buzz_points"
            tools:text="500" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>