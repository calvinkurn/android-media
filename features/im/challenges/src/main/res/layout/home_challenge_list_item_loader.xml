<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:elevation="@dimen/dp_6"
    app:cardCornerRadius="@dimen/dp_4">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/img_challenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:adjustViewBounds="true"
            android:background="@color/grey_200"
            android:scaleType="centerCrop"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            app:corners="20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_challenge"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_hastags"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            app:corners="20"
            android:textColor="@color/tkpd_main_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:use_gradient="true" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/dp_16"
            android:background="@color/gray_background"
            app:layout_constraintTop_toBottomOf="@+id/tv_hastags" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_time_remaining"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            app:corners="20"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>