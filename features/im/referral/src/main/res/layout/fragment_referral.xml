<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_med"
            android:paddingRight="@dimen/padding_med">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_med"
                android:paddingRight="@dimen/padding_med">

                <TextView
                    android:id="@+id/tv_referral_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_sm"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="@string/referral_title_desc"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_20" />


                <TextView
                    android:id="@+id/tv_referral_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="@string/app_share_referral_label_desc"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:id="@+id/rl_referral_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_referral_desc"
                    android:layout_marginTop="@dimen/margin_med">

                    <RelativeLayout
                        android:id="@+id/rl_referral_code_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@drawable/shape_referral_code_copy"
                        android:padding="@dimen/dp_1">

                        <TextView
                            android:id="@+id/tv_referral_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_toLeftOf="@+id/btn_copy_referral_code"
                            android:fontFamily="sans-serif"
                            android:gravity="center_horizontal"
                            android:paddingBottom="@dimen/padding_small"
                            android:paddingLeft="@dimen/padding_small"
                            android:paddingRight="@dimen/padding_small"
                            android:paddingTop="@dimen/padding_small"
                            android:textColor="@color/deep_orange_500"
                            android:textSize="@dimen/font_medium"
                            android:textStyle="normal" />


                        <TextView
                            android:id="@+id/btn_copy_referral_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/tv_referral_code"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/tv_referral_code"
                            android:background="@drawable/rounded_corner_right"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/margin_xlarge"
                            android:paddingRight="@dimen/margin_large"
                            android:text="@string/menu_copy"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium" />


                        <ImageView
                            android:id="@+id/img_tick"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_alignBottom="@+id/btn_copy_referral_code"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:layout_toRightOf="@+id/tv_referral_code"
                            android:src="@drawable/checked_thin"
                            android:tint="@color/green_250"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rl_referral_code_main"
                        android:layout_marginBottom="@dimen/margin_med"
                        android:layout_marginTop="@dimen/margin_large"
                        android:background="@color/grey_hint_full" />

                    <TextView
                        android:id="@+id/tv_Bagikan_ke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_referral_code_main"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_med"
                        android:background="@color/white"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingLeft="@dimen/padding_vvs"
                        android:paddingRight="@dimen/padding_vvs"
                        android:text="@string/bagikan_ke"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/fonts" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_share_icons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_referral_help_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="@dimen/font_medium"
                    android:padding="@dimen/padding_med"
                    android:text="Bagaimana cara kerjanya?"
                    android:textColor="@color/green_btn"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small"
            android:background="@color/grey_300" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_sm"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_med"
            android:paddingRight="@dimen/padding_med">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="@dimen/margin_small"
                    app:srcCompat="@drawable/ic_group_referral" />

                <TextView
                    android:id="@+id/referral_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_70"
                    android:text="@string/referral_count_label"
                    android:textSize="18sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar_referral"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_referral_progress_label"
                android:maxHeight="10dip"
                android:minHeight="10dip"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:max="100"
                android:progress="0"

                android:progressDrawable="@drawable/horizontal_progressbar" />

            <TextView
                android:id="@+id/tv_referral_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar_referral"
                android:layout_marginBottom="@dimen/margin_sm"
                android:textColor="@color/black_38"
                android:text="@string/referral_percent_label"
                android:textSize="@dimen/fonts" />

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small"
            android:background="@color/grey_300" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_referral_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:tabIndicatorColor="@color/tkpd_main_green"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/tkpd_main_green">

                <android.support.design.widget.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/cara_kerja"
                    android:textAlignment="textStart" />

                <android.support.design.widget.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/ketentuan"
                    android:textAlignment="textStart" />
            </android.support.design.widget.TabLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_vs"
                android:background="@drawable/shadow_background" />

            <com.tokopedia.referral.view.HeightWrappingViewPager
                android:id="@+id/view_pager_referral_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_sm"
                android:measureAllChildren="true" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
