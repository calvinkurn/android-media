<?xml version="1.0" encoding="utf-8"?>

<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_cm_home_widget_card"
    android:layout_width="@dimen/cm_home_widget_dp_144"
    android:layout_height="@dimen/cm_home_widget_dp_174"
    android:padding="0dp"
    app:card_background_color="#6BFFFFFF"
    app:card_type="shadow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cm_home_widget_card_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unify_image_corner_radius="0" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_cm_home_widget_card_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_2"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            tools:text="Cek produk lainnya di Keranjang mu" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_cm_home_widget_card_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            android:drawablePadding="@dimen/cm_home_widget_dp_5"
            android:ellipsize="end"
            android:paddingStart="@dimen/cm_home_widget_dp_0"
            android:paddingEnd="@dimen/cm_home_widget_dp_5"
            android:singleLine="true"
            android:textColor="@color/Unify_Static_White"
            app:drawableRightCompat="@drawable/ic_cm_home_widget_card_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Lihat Semua" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>