<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_select_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/unify_space_12"
    android:paddingHorizontal="@dimen/unify_space_16"
    app:layout_constraintVertical_chainStyle="packed">

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/product_select_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/unify_space_4"
        android:visibility="gone"
        app:labelType="general_dark_red"
        app:textAllCaps="true"
        tools:text="test"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_select_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_select_item_label"
        android:layout_alignParentStart="true"
        android:maxLines="2"
        app:typographyType="heading_6"
        tools:text="Insert Product Title Here, It can accomodate 2 Lines. But keep it short for simple and clean design" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_select_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_select_item_title"
        android:layout_alignParentStart="true"
        android:maxLines="2"
        app:typographyType="body_3"
        tools:text="Lorem Ipsum Dolor Sit Amet. Put product description here." />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_select_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_select_item_desc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/unify_space_8"
        android:textColor="@color/Unify_YN500"
        app:typographyType="small"
        app:typographyWeight="bold"
        tools:text="Rp190.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_select_item_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/product_select_item_price"
        android:layout_marginStart="@dimen/unify_space_0"
        android:layout_toEndOf="@+id/product_select_item_price"
        app:typographyType="small"
        tools:text="Rp190.000" />

</RelativeLayout>