<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/recharge_general_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.tokopedia.unifycomponents.ticker.Ticker
                    android:id="@+id/recharge_general_ticker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_16"
                        android:orientation="vertical">

                        <com.tokopedia.common.topupbills.widget.TopupBillsInputFieldWidget
                            android:id="@+id/operator_cluster_select"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:visibility="gone"
                            app:isDropdown="true"
                            tools:visibility="visible" />

                        <com.tokopedia.common.topupbills.widget.TopupBillsInputFieldWidget
                            android:id="@+id/operator_select"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:visibility="gone"
                            app:isDropdown="true" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_digital_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:listitem="@layout/view_topup_bills_input_field" />

                        <com.tokopedia.unifycomponents.ticker.Ticker
                            android:id="@+id/ticker_recharge_general_product_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:tickerType="announcement" />

                        <com.tokopedia.unifycomponents.UnifyButton
                            android:id="@+id/recharge_general_enquiry_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="@string/enquiry_label"
                            app:unifyButtonType="main" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <com.tokopedia.design.component.Tabs
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/white"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:visibility="gone"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/tkpd_main_green"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/tkpd_main_green"
                    app:tabTextAppearance="@style/Tabs.Secondary"
                    app:tabTextColor="@color/font_black_disabled_38"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/separator_voucher"
                    android:visibility="gone" />

                <com.tokopedia.design.viewpager.WrapContentViewPager
                    android:id="@+id/product_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:visibility="visible"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <FrameLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:visibility="gone">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />

    </FrameLayout>

</RelativeLayout>