<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tg_total_price_title"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:text="@string/total_price"
        />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tg_total_price"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Rp15.000"
        />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toBottomOf="@+id/tg_total_price_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/unify_space_12"
        android:id="@+id/tg_total_discount_title"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:visibility="gone"
        app:typographyWeight="reguler"
        android:text="@string/total_discount"
        />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toBottomOf="@+id/tg_total_price_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/unify_space_12"
        android:id="@+id/tg_total_discount"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:visibility="gone"
        app:typographyWeight="bold"
        tools:text="Rp15.000"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_NN50"
        android:id="@+id/view_separator_summary"
        android:layout_marginTop="@dimen/unify_space_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_total_discount_title"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toBottomOf="@+id/view_separator_summary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        android:id="@+id/tg_total_pay_title"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:text="@string/total_pay"
        />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toBottomOf="@+id/view_separator_summary"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/unify_space_12"
        android:id="@+id/tg_total_pay"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Rp15.000"
        />

</androidx.constraintlayout.widget.ConstraintLayout>