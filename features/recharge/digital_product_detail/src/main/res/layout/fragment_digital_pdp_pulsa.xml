<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recharge_pdp_pulsa_page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <View
        android:id="@+id/recharge_pdp_pulsa_action_bar_spacer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <include layout="@layout/view_background_banner"
        app:layout_constraintTop_toBottomOf="@id/recharge_pdp_pulsa_action_bar_spacer"/>

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/recharge_pdp_pulsa_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recharge_pdp_pulsa_action_bar_spacer"
        android:visibility="gone"
        app:closeButtonVisibility="visible"
        app:enableAutoSlide="true"
        app:layout_scrollFlags="scroll"
        app:tickerShapeType="full"
        tools:visibility="gone"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/recharge_pdp_pulsa_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/recharge_pdp_pulsa_ticker">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/recharge_pdp_pulsa_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical"
            app:elevation="0dp">

            <View
                android:id="@+id/recharge_pdp_pulsa_banner_spacer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_space"
                app:layout_scrollFlags="scroll"/>

            <View
                android:id="@+id/recharge_pdp_pulsa_dynamic_banner_spacer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/recharge_pdp_pulsa_banner_spacer"
                app:layout_scrollFlags="scroll" />

            <com.tokopedia.recharge_component.widget.RechargeClientNumberWidget
                android:id="@+id/recharge_pdp_pulsa_client_number_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recharge_pdp_pulsa_dynamic_banner_spacer"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl4"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/layout_lvl7">

                <com.tokopedia.recharge_component.widget.RechargeEmptyStateWidget
                    android:id="@+id/recharge_pdp_pulsa_empty_state_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/empty_state_margin"
                    android:layout_marginEnd="@dimen/empty_state_margin"
                    android:layout_marginTop="@dimen/spacing_lvl4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.tokopedia.recharge_component.widget.RechargeRecommendationCardWidget
                    android:id="@+id/recharge_pdp_pulsa_recommendation_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.tokopedia.recharge_component.widget.MCCMFlashSaleGridWidget
                    android:id="@+id/recharge_pdp_pulsa_promo_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/recharge_pdp_pulsa_recommendation_widget"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.tokopedia.recharge_component.widget.DenomGridWidget
                    android:id="@+id/recharge_pdp_pulsa_denom_grid_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/recharge_pdp_pulsa_promo_widget"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.tokopedia.recharge_component.widget.RechargeBuyWidget
        android:id="@+id/recharge_pdp_pulsa_buy_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>