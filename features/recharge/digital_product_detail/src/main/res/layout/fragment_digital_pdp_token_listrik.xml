<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recharge_pdp_token_listrik_page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/recharge_pdp_token_listrik_action_bar_spacer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        android:id="@+id/recharge_pdp_token_listrik_background_image"
        layout="@layout/view_background_banner"
        app:layout_constraintTop_toBottomOf="@id/recharge_pdp_token_listrik_action_bar_spacer"/>

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/recharge_pdp_token_listrik_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recharge_pdp_token_listrik_action_bar_spacer"
        android:visibility="gone"
        app:closeButtonVisibility="visible"
        app:enableAutoSlide="true"
        app:layout_scrollFlags="scroll"
        app:tickerShapeType="full"
        tools:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/recharge_pdp_token_listrik_sv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/layout_lvl6"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/recharge_pdp_token_listrik_background_image"
        app:layout_constraintBottom_toTopOf="@id/recharge_pdp_token_listrik_buy_widget">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/layout_lvl7">

            <com.tokopedia.recharge_component.widget.RechargeEmptyStateWidget
                android:id="@+id/recharge_pdp_token_listrik_empty_state_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="@dimen/empty_state_margin"
                android:layout_marginEnd="@dimen/empty_state_margin"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.tokopedia.recharge_component.widget.RechargeTickerWidget
                android:id="@+id/recharge_pdp_ticker_widget_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.recharge_component.widget.RechargeRecommendationCardWidget
                android:id="@+id/recharge_pdp_token_listrik_recommendation_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/recharge_pdp_ticker_widget_product_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.tokopedia.recharge_component.widget.DenomGridWidget
                android:id="@+id/recharge_pdp_token_listrik_denom_grid_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recharge_pdp_token_listrik_recommendation_widget"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.tokopedia.recharge_component.widget.RechargeClientNumberWidget
        android:id="@+id/recharge_pdp_token_listrik_client_number_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recharge_pdp_token_listrik_ticker"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"/>

    <com.tokopedia.recharge_component.widget.RechargeBuyWidget
        android:id="@+id/recharge_pdp_token_listrik_buy_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>