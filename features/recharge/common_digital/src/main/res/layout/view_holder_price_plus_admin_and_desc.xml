<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/digital_common_bg_chooser_operator_product_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/unify_space_8"
        android:paddingTop="@dimen/unify_space_8">

        <TextView
            android:id="@+id/product_price_no_addition"
            style="@style/TextProductName"
            tools:text="additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8"
            android:paddingBottom="@dimen/unify_space_2"/>

        <TextView
            android:id="@+id/product_plain_description"
            style="@style/TextProductDescription"
            tools:text="plain desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price_no_addition"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginRight="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_font_8"
            android:paddingBottom="@dimen/unify_space_2"
            android:paddingTop="@dimen/unify_space_2"/>

        <TextView
            android:id="@+id/product_total_price"
            style="@style/TextProductPrice"
            tools:text="Rp. 20.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_plain_description"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8"
            android:paddingTop="@dimen/unify_space_2"/>

        <TextView
            android:id="@+id/empty_stock_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/product_price_no_addition"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:layout_marginRight="@dimen/unify_space_12"
            android:background="@drawable/digital_common_bg_out_of_stock"
            android:paddingEnd="@dimen/unify_space_12"
            android:paddingLeft="@dimen/unify_space_12"
            android:paddingRight="@dimen/unify_space_12"
            android:paddingStart="@dimen/unify_space_12"
            android:text="@string/digital_common_title_empty_stock"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"/>

    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/unify_space_4"
        android:background="@color/separator_voucher"/>

</LinearLayout>