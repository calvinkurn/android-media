<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/digital_common_bg_chooser_operator_product_item"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_lvl1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_price"
            style="@style/TextView.Small.BlackPrimary"
            android:textColor="#b3000000"
            android:textSize="@dimen/fontSize_lvl3"
            tools:text="Rp 25.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:paddingBottom="3dp"/>

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextView.Small.BlackPrimary"
            tools:text="Rp. 20.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_price"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:paddingTop="3dp"/>

        <TextView
            android:id="@+id/empty_stock_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/title_price"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl3"
            android:background="@drawable/digital_common_bg_out_of_stock"
            android:paddingEnd="@dimen/dp_10"
            android:paddingLeft="@dimen/unify_space_12"
            android:paddingRight="@dimen/unify_space_12"
            android:paddingStart="@dimen/unify_space_12"
            android:text="@string/digital_common_title_empty_stock"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:background="@color/separator_voucher" />

</LinearLayout>