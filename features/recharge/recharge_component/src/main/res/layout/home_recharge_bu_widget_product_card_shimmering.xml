<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="132dp"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spacing_lvl1"
    app:cardCornerRadius="@dimen/spacing_lvl3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="132dp"
            app:custom_color="@color/Neutral_N50" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="116dp"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            app:custom_color="@color/Neutral_N50" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl8"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            app:custom_color="@color/Neutral_N50" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            app:custom_color="@color/Neutral_N50" />

    </LinearLayout>

</androidx.cardview.widget.CardView>