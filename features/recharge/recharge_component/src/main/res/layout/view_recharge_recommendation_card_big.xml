<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/widget_recommendation_card_width"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl3"
        >

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/img_recharge_recommendation_card_big"
            android:layout_width="@dimen/spacing_lvl5"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginRight="@dimen/spacing_lvl4"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_title_recharge_recommendation_card_big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_recharge_recommendation_card_big"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/unify_space_12"
            tools:text="Token Listrik 100 ribu"
            app:typographyType="body_2"
            android:textColor="@color/Unify_N700_96"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_product_type_recharge_recommendation_card_big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tg_title_recharge_recommendation_card_big"
            app:layout_constraintLeft_toRightOf="@+id/img_recharge_recommendation_card_big"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/spacing_lvl2"
            tools:text="3 GB"
            app:typographyType="body_1"
            android:textColor="@color/Unify_N700_96"
            />

        <View
            android:id="@+id/view_separator_type_recharge_recommendation_card_big"
            app:layout_constraintTop_toTopOf="@+id/tg_product_type_recharge_recommendation_card_big"
            app:layout_constraintLeft_toRightOf="@+id/tg_product_type_recharge_recommendation_card_big"
            app:layout_constraintBottom_toBottomOf="@+id/tg_product_type_recharge_recommendation_card_big"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_width="1dp"
            android:layout_height="@dimen/widget_view_separator_recommendation_big_card_height"
            android:background="@color/Unify_N700_96"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_expired_recharge_recommendation_card_big"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/view_separator_type_recharge_recommendation_card_big"
            app:layout_constraintTop_toTopOf="@+id/view_separator_type_recharge_recommendation_card_big"
            app:layout_constraintBottom_toBottomOf="@+id/view_separator_type_recharge_recommendation_card_big"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            app:layout_goneMarginLeft="0dp"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            android:textColor="@color/Unify_NN600"
            tools:text="30 Days"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_special_recommendation_card_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_YN500"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:typographyType="small"
            app:typographyWeight="bold"
            app:layout_goneMarginTop="@dimen/spacing_lvl2"
            app:layout_constraintTop_toBottomOf="@id/tg_product_type_recharge_recommendation_card_big"
            app:layout_constraintLeft_toRightOf="@id/img_recharge_recommendation_card_big"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Special Campaign"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_price_recharge_recommendation_card_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tg_special_recommendation_card_big"
            app:layout_constraintLeft_toRightOf="@+id/img_recharge_recommendation_card_big"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            tools:text="Rp100.000"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:textColor="@color/Unify_N700_96"
            />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_discount_recharge_recommendation_card_big"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintLeft_toRightOf="@+id/tg_price_recharge_recommendation_card_big"
            app:layout_constraintTop_toTopOf="@+id/tg_price_recharge_recommendation_card_big"
            app:layout_constraintBottom_toBottomOf="@+id/tg_price_recharge_recommendation_card_big"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_slash_price_recharge_recommendation_card_big"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_N400"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/label_discount_recharge_recommendation_card_big"
            app:layout_constraintTop_toTopOf="@+id/tg_price_recharge_recommendation_card_big"
            app:layout_constraintBottom_toBottomOf="@+id/tg_price_recharge_recommendation_card_big"
            app:typographyType="small"
            tools:text="Rp16.000"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>