<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/check_balance_otp_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/check_balance_otp_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:icon_name="PHONE_BALANCE"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:layout_constraintTop_toBottomOf="@id/check_balance_otp_divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/check_balance_otp_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:typographyType="display_3"
        app:layout_constraintTop_toTopOf="@id/check_balance_otp_icon"
        app:layout_constraintBottom_toBottomOf="@id/check_balance_otp_icon"
        app:layout_constraintStart_toEndOf="@id/check_balance_otp_icon"
        tools:text="Mau tampilin sisa kuota kamu?"/>

    <com.tokopedia.unifycomponents.NotificationUnify
        android:id="@+id/check_balance_otp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/check_balance_otp_icon"
        app:layout_constraintBottom_toBottomOf="@id/check_balance_otp_icon"
        app:layout_constraintStart_toEndOf="@id/check_balance_otp_title"
        app:notificationColor="color_primary"
        app:notificationType="text_type"
        tools:text="BARU" />
    
    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/check_balance_otp_chevron"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="12dp"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintTop_toTopOf="@id/check_balance_otp_icon"
        app:layout_constraintBottom_toBottomOf="@id/check_balance_otp_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>