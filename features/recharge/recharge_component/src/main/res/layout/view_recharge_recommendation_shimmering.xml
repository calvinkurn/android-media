<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="@dimen/widget_denom_full_desc_shimmering_width"
        android:layout_height="@dimen/spacing_lvl5"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_recommendation_single_card_shimmering_height"
        android:layout_marginLeft="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginRight="@dimen/unify_space_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loader_img"
                android:layout_width="@dimen/spacing_lvl6"
                android:layout_height="@dimen/spacing_lvl6"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loader_title"
                android:layout_width="@dimen/widget_denom_full_desc_shimmering_width"
                android:layout_height="@dimen/spacing_lvl4"
                android:layout_marginLeft="@dimen/unify_space_12"
                android:layout_marginTop="@dimen/spacing_lvl3"
                app:layout_constraintLeft_toRightOf="@+id/loader_img"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loader_desc"
                android:layout_width="@dimen/widget_recommendation_card_shimmering_width"
                android:layout_height="@dimen/unify_space_12"
                android:layout_marginLeft="@dimen/unify_space_12"
                android:layout_marginTop="@dimen/spacing_lvl2"
                app:layout_constraintLeft_toRightOf="@+id/loader_img"
                app:layout_constraintTop_toBottomOf="@+id/loader_title"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loader_price"
                android:layout_width="@dimen/widget_recommendation_card_shimmering_price_width"
                android:layout_height="@dimen/unify_space_12"
                android:layout_marginLeft="@dimen/unify_space_12"
                android:layout_marginTop="@dimen/spacing_lvl2"
                app:layout_constraintLeft_toRightOf="@+id/loader_img"
                app:layout_constraintTop_toBottomOf="@+id/loader_desc"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</LinearLayout>