<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_denom_full_shimmering"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    app:card_type="border"
    android:layout_marginTop="@dimen/unify_space_12"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/unify_space_12"
        android:orientation="vertical">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl5"
            app:corners="16" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/widget_denom_full_desc_shimmering_width"
            android:layout_height="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:corners="16" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/widget_denom_full_price_shimmering_width"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:corners="16" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/widget_denom_full_progress_bar_shimmering_width"
            android:layout_height="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:corners="16" />



    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>
