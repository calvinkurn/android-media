<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/widget_denom_grid_width"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="@dimen/unify_space_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_denom_grid_title"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            tools:text="15 ribu"
            android:lines="1"
            android:ellipsize="end"
            app:typographyType="body_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_denom_grid_special"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            app:labelType="highlight_light_orange"
            app:layout_constraintTop_toBottomOf="@+id/tg_denom_grid_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/spacing_lvl2"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_denom_grid_periode"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/label_denom_grid_special"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/spacing_lvl3"
            tools:text="Desember 2021"
            android:lines="1"
            android:ellipsize="end"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_denom_grid_price"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tg_denom_grid_periode"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/spacing_lvl2"
            tools:text="Rp14.400"
            android:lines="1"
            android:ellipsize="end"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_denom_grid_discount"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tg_denom_grid_price"
            app:layout_constraintLeft_toRightOf="@+id/tg_slash_price"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:labelType="general_light_red"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_slash_price"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            app:typographyType="small"
            app:layout_constraintTop_toBottomOf="@+id/tg_denom_grid_price"
            app:layout_constraintLeft_toRightOf="@+id/label_denom_grid_discount"
            tools:text="Rp16.000"
            android:textColor="@color/Neutral_N400"
            android:layout_marginTop="@dimen/spacing_lvl3"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>