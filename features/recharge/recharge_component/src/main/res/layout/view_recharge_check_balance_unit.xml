<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/check_balance_unit_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/check_balance_unit_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="left"
        app:typographyType="small"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@id/check_balance_unit_icon"
        app:layout_constraintStart_toEndOf="@id/check_balance_unit_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/check_balance_unit_icon"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/check_balance_unit_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/check_balance_unit_icon"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>