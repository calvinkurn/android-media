<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/img_omni_shimmer_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/tg_omni_shimmer_title"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tg_omni_shimmer_desc_1"
        app:layout_constraintStart_toEndOf="@id/img_omni_shimmer_icon"
        app:layout_constraintEnd_toStartOf="@id/icon_omni_shimmer_chevron"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/tg_omni_shimmer_desc_1"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="64dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/tg_omni_shimmer_title"
        app:layout_constraintBottom_toBottomOf="@id/tg_omni_shimmer_desc_2"
        app:layout_constraintStart_toEndOf="@id/img_omni_shimmer_icon"
        app:layout_constraintEnd_toStartOf="@id/icon_omni_shimmer_chevron"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/tg_omni_shimmer_desc_2"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="64dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/tg_omni_shimmer_desc_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_omni_shimmer_icon"
        app:layout_constraintEnd_toStartOf="@id/icon_omni_shimmer_chevron"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/icon_omni_shimmer_chevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>