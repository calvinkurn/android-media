<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/widget_recommendation_card_width"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/img_recharge_recommendation_card_small"
            android:layout_width="@dimen/spacing_lvl5"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/unify_space_12"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_title_recharge_recommendation_card_small"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tg_price_recharge_recommendation_card_small"
            app:layout_constraintLeft_toRightOf="@+id/img_recharge_recommendation_card_small"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginLeft="@dimen/unify_space_12"
            tools:text="Token Listrik 100 ribu"
            app:typographyType="body_2"
            android:textColor="@color/Unify_N700_96"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_price_recharge_recommendation_card_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tg_title_recharge_recommendation_card_small"
            app:layout_constraintLeft_toRightOf="@+id/img_recharge_recommendation_card_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            tools:text="Rp100.000"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:textColor="@color/Unify_N700_96"
            />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_discount_recharge_recommendation_card_small"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintLeft_toRightOf="@+id/tg_price_recharge_recommendation_card_small"
            app:layout_constraintTop_toTopOf="@+id/tg_price_recharge_recommendation_card_small"
            app:layout_constraintBottom_toBottomOf="@+id/tg_price_recharge_recommendation_card_small"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_slash_price_recharge_recommendation_card_small"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:textColor="@color/Neutral_N400"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/label_discount_recharge_recommendation_card_small"
            app:layout_constraintTop_toTopOf="@+id/tg_price_recharge_recommendation_card_small"
            app:layout_constraintBottom_toBottomOf="@+id/tg_price_recharge_recommendation_card_small"
            app:typographyType="small"
            tools:text="Rp16.000"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>