<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_recharge_home_product_cards_item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_lvl1"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/spacing_lvl2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_recharge_home_product_cards_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H, 2:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_recharge_home_product_cards_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_recharge_home_product_cards_item"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_recharge_home_product_cards_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:ellipsize="end"
            android:maxLines="3"
            android:minHeight="@dimen/product_card_title_min_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recharge_home_product_cards_item_category"
            app:typographyType="heading_5" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_recharge_home_product_cards_item_price_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recharge_home_product_cards_item_title"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_recharge_home_product_cards_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_Y500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recharge_home_product_cards_item_price_info"
            app:typographyType="heading_4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>