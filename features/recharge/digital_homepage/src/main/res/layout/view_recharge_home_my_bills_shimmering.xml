<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_header"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/loader_header">

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/card_1"
            android:layout_width="236dp"
            android:layout_height="110dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/iv_product_icon1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loader_corner_radius="4dp"
                    app:loader_type="rect" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/tv_product_detail_name1"
                    android:layout_width="128dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@id/iv_product_icon1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/tv_product_detail_number1"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_product_icon1"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_detail_name1"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/tv_main_price"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_detail_number1"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/tv_expired1"
                    android:layout_width="128dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_main_price"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.tokopedia.unifycomponents.CardUnify>

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/card_2"
            android:layout_width="236dp"
            android:layout_height="110dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/iv_product_icon2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loader_corner_radius="4dp"
                    app:loader_type="rect" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/tv_product_detail_name2"
                    android:layout_width="128dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@id/iv_product_icon2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/tv_product_detail_number2"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_product_icon2"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_detail_name2"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/tv_main_price2"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_detail_number2"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/tv_expired2"
                    android:layout_width="128dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_main_price2"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.tokopedia.unifycomponents.CardUnify>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
