<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_double_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tg_main_title_double_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerInside"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_main_title_double_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_double_line"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:textColor="@color/Unify_NN950_96"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_main_desc_double_line"
        app:layout_constraintTop_toBottomOf="@+id/tg_main_title_double_line"
        app:layout_constraintLeft_toRightOf="@+id/img_double_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:textColor="@color/Unify_NN950_68"
        />

</androidx.constraintlayout.widget.ConstraintLayout>