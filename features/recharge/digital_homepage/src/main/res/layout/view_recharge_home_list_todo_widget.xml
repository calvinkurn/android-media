<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_todo_widget_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyWeight="bold"
        app:typographyType="display_1"
        tools:text="Saatnya bayar dan beli ini"
        android:layout_marginStart="8dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_todo_widget_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_todo_widget_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyWeight="bold"
        app:typographyType="display_1"
        tools:text="Bebas cemas pakai Bayar Otomatis"
        android:layout_marginStart="8dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_todo_widget_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        />

</LinearLayout>