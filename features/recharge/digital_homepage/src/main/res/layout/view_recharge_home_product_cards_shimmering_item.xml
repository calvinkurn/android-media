<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/layout_lvl9"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/spacing_lvl1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl7"
            android:layout_marginBottom="@dimen/spacing_lvl3"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:corners="@integer/section_shimmering_corner" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl8"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:corners="@integer/section_shimmering_corner" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl8"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:corners="@integer/section_shimmering_corner" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:corners="@integer/section_shimmering_corner" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:corners="@integer/section_shimmering_corner" />

    </LinearLayout>

</androidx.cardview.widget.CardView>