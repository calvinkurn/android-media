<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/spacing_lvl1">

    <LinearLayout
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl7"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:loader_corner_radius="0dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/layout_lvl8"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/layout_lvl8"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:loader_corner_radius="8dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

    </LinearLayout>

</androidx.cardview.widget.CardView>