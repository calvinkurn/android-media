<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/digital_homepage_spotlight_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_lvl4">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/digital_homepage_spotlight_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4"
            app:typographyType="heading_5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_digital_homepage_spotlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4" />

    </LinearLayout>

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/digital_homepage_spotlight_shimmering"
        android:layout_width="@dimen/spotlight_item_width"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:corners="16" />

</LinearLayout>