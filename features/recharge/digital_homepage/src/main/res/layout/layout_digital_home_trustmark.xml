<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginRight="@dimen/spacing_lvl4"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_digital_homepage_trust_mark_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:cardElevation="@dimen/spacing_lvl1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_digital_homepage_trust_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_lvl3" />

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/view_digital_homepage_trust_mark_shimmering"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl4"
        android:visibility="gone"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"/>

</LinearLayout>