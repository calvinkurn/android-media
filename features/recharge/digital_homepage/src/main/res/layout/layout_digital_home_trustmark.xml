<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingRight="@dimen/spacing_lvl4"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/digital_homepage_trust_mark_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl1"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_digital_homepage_trust_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8" />

    </androidx.cardview.widget.CardView>

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:visibility="gone"
        android:id="@+id/digital_homepage_trust_mark_shimmering"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_16"
        app:corners="16" />

</LinearLayout>