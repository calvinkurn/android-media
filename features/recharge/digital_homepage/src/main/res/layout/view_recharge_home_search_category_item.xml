<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingBottom="@dimen/spacing_lvl3">

    <ImageView
        android:id="@+id/digital_homepage_search_category_image"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/spacing_lvl4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/digital_homepage_search_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:typographyType="body_2"
        tools:text="Digital Home" />
</LinearLayout>
