<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.banner.dynamic.BannerViewDynamicBackground
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/banner_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Neutral_N0"
        android:visibility="gone"
        tools:visibility="visible">

        <FrameLayout
            android:id="@+id/container_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_banner_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_dynamic_background_height"
                android:background="@color/Green_G500" />

            <ImageView
                android:id="@+id/overlay_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_dynamic_background_height"
                android:alpha="0.32"
                android:background="#31353B"
                android:scaleType="centerCrop" />

            <View
                android:id="@+id/overlay_round"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl4"
                android:layout_gravity="bottom"
                android:background="@drawable/layer_background_banner_image_mask"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </FrameLayout>

        <View
            android:id="@+id/white_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl5"
            android:layout_gravity="bottom"
            android:background="@color/Neutral_N0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_background" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="?actionBarSize"
            tools:layout_constraintGuide_begin="@dimen/spacing_lvl6" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl9"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl6"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            app:corners="@integer/section_shimmering_corner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
