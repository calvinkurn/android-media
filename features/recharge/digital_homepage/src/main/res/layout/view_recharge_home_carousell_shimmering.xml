<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_lvl4"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4"
    android:orientation="horizontal">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="@dimen/recharge_custom_image_carousel_width"
        android:layout_height="@dimen/recharge_custom_image_carousel_height"
        app:corners="@integer/section_shimmering_corner" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_width="@dimen/recharge_custom_image_carousel_width"
        android:layout_height="@dimen/recharge_custom_image_carousel_height"
        app:corners="@integer/section_shimmering_corner" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_width="@dimen/recharge_custom_image_carousel_width"
        android:layout_height="@dimen/recharge_custom_image_carousel_height"
        app:corners="@integer/section_shimmering_corner" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_width="@dimen/recharge_custom_image_carousel_width"
        android:layout_height="@dimen/recharge_custom_image_carousel_height"
        app:corners="@integer/section_shimmering_corner" />

</LinearLayout>