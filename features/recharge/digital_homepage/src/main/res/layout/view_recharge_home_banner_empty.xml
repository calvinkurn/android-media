<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_recharge_home_banner_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_banner_empty" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_recharge_home_banner_empty_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/banner_margin_top"
        android:layout_marginRight="@dimen/layout_lvl3"
        android:text="@string/recharge_home_empty_banner_title"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_recharge_home_banner_empty_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/layout_lvl3"
        android:text="@string/recharge_home_empty_banner_desc"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintTop_toBottomOf="@id/tv_recharge_home_banner_empty_title"
        app:typographyType="body_3" />

</androidx.constraintlayout.widget.ConstraintLayout>