<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_recharge_home_banner_empty"
        tools:ignore="contentDescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recharge_empty_banner_bg_height"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_banner_empty" />

    <LinearLayout
        android:id="@+id/recharge_home_banner_empty_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/layout_lvl3"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_recharge_home_banner_empty_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recharge_home_empty_banner_title"
            android:textColor="@color/Unify_NN0"
            app:typographyType="heading_4" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_recharge_home_banner_empty_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:text="@string/recharge_home_empty_banner_desc"
            android:textColor="@color/Unify_NN0"
            app:typographyType="body_3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>