<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_digital_homepage_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4" />

    <LinearLayout
        android:id="@+id/digital_homepage_subscription_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:orientation="horizontal">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/subscription_item_width"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            app:loader_corner_radius="8dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/subscription_item_width"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            app:loader_corner_radius="8dp"
            app:loader_type="rect"/>

    </LinearLayout>

</LinearLayout>