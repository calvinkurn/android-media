<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_image_container"
    android:layout_width="@dimen/layout_lvl6"
    android:layout_height="@dimen/layout_lvl6"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/card_image_corner_radius"
    app:cardElevation="@dimen/spacing_lvl1">

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_margin="@dimen/spacing_lvl2"
        android:layout_gravity="center"/>

</androidx.cardview.widget.CardView>
