<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/shimmering_text_view_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:corners="@integer/section_shimmering_corner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_lvl3">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl5"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:corners="@integer/section_shimmering_corner" />

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl9"
                android:layout_height="@dimen/layout_lvl8"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:corners="@integer/section_shimmering_corner" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_lvl3">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl5"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:corners="@integer/section_shimmering_corner" />

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl9"
                android:layout_height="@dimen/layout_lvl8"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:corners="@integer/section_shimmering_corner" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_lvl3">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl5"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:corners="@integer/section_shimmering_corner" />

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl9"
                android:layout_height="@dimen/layout_lvl8"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:corners="@integer/section_shimmering_corner" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_lvl3">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl5"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:corners="@integer/section_shimmering_corner" />

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl9"
                android:layout_height="@dimen/layout_lvl8"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:corners="@integer/section_shimmering_corner" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>