<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="@dimen/shimmering_text_view_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_lvl3">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/layout_lvl5"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/layout_lvl9"
                android:layout_height="@dimen/layout_lvl8"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_lvl3">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/layout_lvl5"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/layout_lvl9"
                android:layout_height="@dimen/layout_lvl8"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:loader_corner_radius="8dp"
                app:loader_type="rect" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_lvl3">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/layout_lvl5"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:loader_corner_radius="8dp"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/layout_lvl9"
                android:layout_height="@dimen/layout_lvl8"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:loader_corner_radius="8dp"
                app:loader_type="rect" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_lvl3">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/layout_lvl5"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/layout_lvl9"
                android:layout_height="@dimen/layout_lvl8"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>