<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Unify_Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl7"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify1"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toTopOf="@id/loaderUnify2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:loader_corner_radius="10dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify2"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderUnify1"
            app:layout_constraintWidth_percent="0.6"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/loading_divider_view_height"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@color/Unify_NN200" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify3"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toTopOf="@id/loaderUnify4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify4"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderUnify3"
            app:layout_constraintWidth_percent="0.6"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/loading_divider_view_height"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@color/Unify_NN200" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify5"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toTopOf="@id/loaderUnify6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify6"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderUnify5"
            app:layout_constraintWidth_percent="0.6"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/loading_divider_view_height"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@color/Unify_NN200" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify7"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toTopOf="@id/loaderUnify8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify8"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderUnify8"
            app:layout_constraintWidth_percent="0.6"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/loading_divider_view_height"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@color/Unify_NN200" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify9"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toTopOf="@id/loaderUnify10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify10"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderUnify9"
            app:layout_constraintWidth_percent="0.6"
            app:loader_corner_radius="10dp"
            app:loader_type="rect"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/loading_divider_view_height"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@color/Unify_NN200" />

</LinearLayout>