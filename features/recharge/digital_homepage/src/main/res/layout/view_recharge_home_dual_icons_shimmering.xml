<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_lvl1"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/spacing_lvl1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:corners="16" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/layout_lvl7"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_marginLeft="@dimen/spacing_lvl2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:corners="16" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/layout_lvl7"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_marginLeft="@dimen/spacing_lvl2" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>