<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="@dimen/layout_lvl8"
        android:layout_marginLeft="@dimen/spacing_lvl1"
        android:layout_marginTop="@dimen/quick_buy_margin_top"
        android:layout_marginRight="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        app:cardCornerRadius="@dimen/spacing_lvl2"
        app:cardElevation="@dimen/spacing_lvl1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="@dimen/layout_lvl7"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                android:layout_marginRight="@dimen/spacing_lvl3"
                android:ellipsize="end"
                android:gravity="right"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textColor="@color/Unify_N700_68"
                android:textSize="@dimen/quick_buy_text_size"
                android:visibility="gone"
                tools:text="PAKET DATA"
                tools:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/unify_space_12"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                android:layout_marginRight="@dimen/spacing_lvl3"
                android:layout_marginBottom="@dimen/spacing_lvl3">

                <include
                    android:id="@+id/footer"
                    layout="@layout/layout_quick_buy_widget_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/Unify_N700_96"
                    android:textSize="@dimen/unify_space_12"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="BRONET 4G OWS"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/footer"
                    android:layout_below="@id/title"
                    android:layout_marginTop="@dimen/spacing_lvl1"
                    android:layout_marginBottom="@dimen/spacing_lvl1"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/quick_buy_text_spacing"
                    android:maxLines="1"
                    android:textColor="@color/Unify_N700_96"
                    android:textSize="@dimen/quick_buy_text_size"
                    android:visibility="gone"
                    tools:text="081234567890"
                    tools:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/quick_buy_icon_card_size"
        android:layout_height="@dimen/quick_buy_icon_card_size"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginRight="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        app:cardCornerRadius="@dimen/spacing_lvl4"
        app:cardElevation="@dimen/spacing_lvl1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_lvl2"
            app:srcCompat="@drawable/ic_home_my_bills"
            tools:ignore="VectorDrawableCompat" />

    </androidx.cardview.widget.CardView>

</FrameLayout>