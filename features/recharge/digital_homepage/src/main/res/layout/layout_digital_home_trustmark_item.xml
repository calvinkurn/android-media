<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trustmark_image"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/trustmark_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_lvl1"
        android:paddingLeft="@dimen/spacing_lvl1"
        android:paddingEnd="@dimen/spacing_lvl1"
        android:paddingRight="@dimen/spacing_lvl1"
        app:typographyType="small"
        tools:text="Terpercaya" />

</LinearLayout>