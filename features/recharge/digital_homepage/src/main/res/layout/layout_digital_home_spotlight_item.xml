<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/spotlight_item_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl1"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:cardElevation="@dimen/spacing_lvl1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/spotlight_image"
                android:layout_width="@dimen/layout_lvl6"
                android:layout_height="@dimen/layout_lvl6" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/spotlight_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/unify_space_12"
                android:layout_marginRight="@dimen/spacing_lvl4"
                android:maxLines="2"
                android:paddingStart="@dimen/spacing_lvl1"
                android:paddingLeft="@dimen/spacing_lvl1"
                android:paddingEnd="@dimen/spacing_lvl1"
                android:paddingRight="@dimen/spacing_lvl1"
                app:typographyType="body_3"
                tools:text="Sekarang bisa bayar biaya universitas kamu. Lihat disini" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>