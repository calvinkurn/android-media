<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/unify_space_16"
    android:layout_marginRight="@dimen/unify_space_16"
    android:elevation="0dp"
    app:cardCornerRadius="@dimen/unify_space_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_recharge_home_offering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/unify_space_12"
        android:paddingBottom="@dimen/unify_space_12"
        tools:background="@color/Unify_NN950_44">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_recharge_home_offering_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintEnd_toStartOf="@id/btn_recharge_home_offering_other"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="display_1"
            app:typographyWeight="bold"
            tools:text="Diskon pulsa Rp15.000!" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_recharge_home_offering_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintEnd_toEndOf="@id/tg_recharge_home_offering_title"
            app:layout_constraintStart_toStartOf="@id/tg_recharge_home_offering_title"
            app:layout_constraintTop_toBottomOf="@id/tg_recharge_home_offering_title"
            app:typographyType="display_3"
            tools:text="Spesial untuk pembelian pertama" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_recharge_home_offering_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="@string/recharge_home_others_label"
            app:layout_constraintBottom_toBottomOf="@id/tg_recharge_home_offering_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tg_recharge_home_offering_title"
            app:unifyButtonInvers="true"
            app:unifyButtonSize="small"
            app:unifyButtonVariant="ghost" />

        <com.tokopedia.digital.home.presentation.customview.DigitalHorizontalProductCard
            android:id="@+id/recharge_home_digital_horizontal_product_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tg_recharge_home_offering_subtitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>