<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_digital_homepage_favorites_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_digital_homepage_favorites_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:typographyType="heading_5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_digital_homepage_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </LinearLayout>

    <include
        android:id="@+id/view_digital_homepage_favorites_shimmering"
        layout="@layout/content_digital_hone_shimmering_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>