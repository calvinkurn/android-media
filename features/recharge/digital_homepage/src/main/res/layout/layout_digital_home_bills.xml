<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_digital_homepage_bills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:clipToPadding="false"
        android:orientation="horizontal" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/digital_homepage_bills_shimmering"
        android:layout_width="@dimen/bills_shimmering_width"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        app:corners="16" />

</LinearLayout>