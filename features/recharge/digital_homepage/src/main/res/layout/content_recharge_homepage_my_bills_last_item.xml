<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_recharge_homepage_last_item"
    android:layout_width="132dp"
    android:layout_height="120dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:view_all_card_unify_mode="normal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="paragraph_3"
            app:typographyWeight="reguler"
            tools:text="Bayar Tagihan Lainnya" />

        <View
            android:id="@+id/container_cta"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_cta_last_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/cta_last_item"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:icon_color_light_enable="@color/Unify_GN500"
            app:icon_name="CHEVRON_RIGHT"
            app:layout_constraintBottom_toBottomOf="@id/container_cta"
            app:layout_constraintEnd_toEndOf="@id/container_cta"
            app:layout_constraintStart_toStartOf="@id/container_cta"
            app:layout_constraintTop_toTopOf="@id/container_cta" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify2>
