<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_recharge_home_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:closeButtonVisibility="visible"
        app:tickerShapeType="loose"
        android:visibility="visible"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:id="@+id/ticker_recharge_home_page_shimmering"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl7"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>