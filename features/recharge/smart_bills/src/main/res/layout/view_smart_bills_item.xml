<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/smart_bills_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/smart_bills_item_icon_container"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        app:cardCornerRadius="@dimen/spacing_lvl4">

        <ImageView
            android:id="@+id/smart_bills_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smart_bills_item_text_margin"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/smart_bills_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Pascabayar" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/smart_bills_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            app:typographyType="body_3"
            tools:text="081298587943 - Telkomsel" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/smart_bills_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Rp 200.000.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/smart_bills_item_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:visibility="gone"
            app:typographyType="body_3"
            tools:text="Terdapat kendala pada tagihan ini"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>