<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/smart_bills_item_padding"
    android:paddingBottom="@dimen/smart_bills_item_padding">

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cb_smart_bills_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_smart_bills_item_icon_container"
        android:layout_width="@dimen/smart_bills_icon_size"
        android:layout_height="@dimen/smart_bills_icon_size"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:focusable="false"
        app:cardCornerRadius="@dimen/smart_bills_icon_corner_size">

        <ImageView
            android:id="@+id/iv_smart_bills_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smart_bills_item_text_margin"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_smart_bills_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Pascabayar" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_smart_bills_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            app:typographyType="body_3"
            tools:text="081298587943 - Telkomsel" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_smart_bills_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:textColor="@color/tkpd_main_orange"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Rp 200.000.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_smart_bills_item_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:text="@string/smart_bills_item_default_error"
            android:textColor="@color/red_500"
            android:visibility="gone"
            app:typographyType="body_3"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>