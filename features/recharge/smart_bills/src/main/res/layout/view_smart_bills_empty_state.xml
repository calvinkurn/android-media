<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lvl5">

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:remoteFileName="ic_smartbills_emptystate.png"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:gravity="center"
        android:text="@string/smart_bills_empty_state_title"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        android:gravity="center"
        android:maxLines="4"
        android:text="@string/smart_bills_empty_state_description" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/smart_bills_empty_state_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/smart_bills_empty_state_button_label"
        app:unifyButtonSize="large"
        app:unifyButtonType="main" />

</LinearLayout>
