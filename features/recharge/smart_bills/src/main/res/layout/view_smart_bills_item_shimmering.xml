<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:corners="8" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        app:corners="16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl8"
            android:layout_height="wrap_content" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl9"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl8"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1" />

    </LinearLayout>

</LinearLayout>