<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_marginTop="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/image_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            android:background="@drawable/bg_sbm_squircle_category_white"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_highligted_category"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                tools:src="@tools:sample/avatars"
                />

        </FrameLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_highlighted_category_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/image_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Bayar sekaligus Pajak PBB 2022"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_highlighted_category_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/image_container"
            app:layout_constraintTop_toBottomOf="@+id/tg_highlighted_category_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            app:typographyType="display_3"
            app:typographyWeight="reguler"
            android:textColor="@color/Unify_NN600"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Tagihan PBB 2022"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_highlighted_category_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/image_container"
            app:layout_constraintTop_toBottomOf="@+id/tg_highlighted_category_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/Unify_GN500"
            tools:text="Masukkan nomor PBB disini"
            />
        
        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_highlighted_category_close"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:icon_name="CLOSE"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>