<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/smart_bills_onboarding_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_onboarding_bg" />

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/smart_bills_onboarding_illustration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/smart_bills_onboarding_background"
        app:layout_constraintTop_toTopOf="parent"
        app:remoteFileName="ic_smartbills_onboard.png" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/smart_bills_onboarding_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl7"
        android:layout_marginRight="@dimen/spacing_lvl5"
        android:text="@string/smart_bills_onboarding_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/smart_bills_onboarding_background"
        app:typographyType="heading_1"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/smart_bills_onboarding_desc_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/smart_bills_onboarding_title"
        app:typographyType="body_1"
        tools:text="@string/smart_bills_onboarding_desc_1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/smart_bills_onboarding_desc_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/smart_bills_onboarding_desc_1"
        app:typographyType="body_1"
        tools:text="@string/smart_bills_onboarding_desc_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/smart_bills_onboarding_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        android:layout_marginRight="@dimen/spacing_lvl5"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        android:text="@string/smart_bills_onboarding_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:unifyButtonType="main" />

</androidx.constraintlayout.widget.ConstraintLayout>