<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.smartbills">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".presentation.activity.SmartBillsOnboardingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify" />

        <activity
            android:name=".presentation.activity.SmartBillsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify"
            android:windowSoftInputMode="stateAlwaysHidden">

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_recharge"
                    android:pathPattern="@string/path_smart_bills"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>

        </activity>

        <activity
            android:name=".presentation.activity.SmartBillsAddTelcoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify"
            android:label="@string/smart_bills_action_bar_title"
            android:windowSoftInputMode="stateAlwaysHidden">

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_recharge"
                    android:pathPattern="@string/path_smart_bills_add_telco"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>

        </activity>

    </application>

</manifest>
