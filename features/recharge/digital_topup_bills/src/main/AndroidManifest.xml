<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.topupbills">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application>

        <activity
            android:name="com.tokopedia.topupbills.telco.prepaid.activity.TelcoPrepaidActivity"
            android:label="@string/digital_title_prepaid_page"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/Theme.WhiteUnify" >

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_digital"
                    android:path="@string/path_telco_prepaid" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.tokopedia.topupbills.telco.postpaid.activity.TelcoPostpaidActivity"
            android:label="@string/digital_title_postpaid_page"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/Theme.WhiteUnify" >

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_digital"
                    android:path="@string/path_telco_postpaid" />
            </intent-filter>

        </activity>

        <activity
            android:name=".searchnumber.view.DigitalSearchNumberActivity"
            android:label="@string/digital_title_fav_number"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:theme="@style/Theme.WhiteUnify" />

    </application>

</manifest>
