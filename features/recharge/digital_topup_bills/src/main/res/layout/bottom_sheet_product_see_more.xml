<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/layout_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/telco_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:lines="1"
        android:text="@string/digital_title_details"
        app:typographyType="heading_5"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/telco_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl1"
        app:typographyType="body_3"
        tools:text="Nikmati kuota 800MB - 1.5GB. BONUS:
Bonus 1GB Kuota Midnight (00:01-6:59) + 1GB Kuota Midnight RAFI + 3GB Videomax" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/telco_title_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:lines="1"
        android:text="@string/digital_title_price"
        app:typographyType="heading_5" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/Unify_Y500"
            app:typographyType="heading_5"
            tools:text="Rp 40.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_product_promo_price"
            style="@style/TextView.Micro10"
            android:layout_below="@+id/telco_desc_product"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:lines="1"
            android:textColor="@color/Unify_N700_44"
            tools:text="40.000"
            app:typographyType="small"/>
    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/telco_button_select_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/telco_pick_product"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:unifyButtonVariant="filled"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"/>

</LinearLayout>