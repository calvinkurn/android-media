<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/layout_lvl1"
    android:padding="@dimen/spacing_lvl3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/view_telco_input_number" />

        <LinearLayout
            android:id="@+id/signal_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:layout_marginHorizontal="@dimen/spacing_lvl4"
            android:orientation="vertical"
            android:visibility="gone" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/signal_checkout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_lvl4"
            android:layout_marginVertical="@dimen/layout_lvl1"
            android:enabled="true"
            android:text="@string/digital_btn_check_bill"
            android:visibility="visible"
            app:unifyButtonSize="large"
            app:unifyButtonVariant="filled" />

    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify>