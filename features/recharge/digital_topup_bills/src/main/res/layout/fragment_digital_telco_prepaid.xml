<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_shimmering_product_telco" />

    <com.tokopedia.topupbills.telco.prepaid.widget.TelcoNestedCoordinatorLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_input_number_telco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            app:elevation="4dp">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_scrollFlags="scroll"
                app:tckv_content_text_size="@dimen/dp_11"
                app:tckv_indicator_off_color="@color/grey_550"
                app:tckv_indicator_on_color="@color/tkpd_main_green"
                tools:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/input_number_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticker_view"
                android:layout_marginLeft="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/layout_lvl2"
                android:layout_marginBottom="@dimen/spacing_lvl4"
                app:cardCornerRadius="@dimen/layout_lvl1">

                <com.tokopedia.topupbills.telco.prepaid.widget.DigitalClientNumberWidget
                    android:id="@+id/telco_input_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_lvl1"
                    android:layout_marginTop="@dimen/layout_lvl1"
                    android:layout_marginRight="@dimen/layout_lvl1"
                    android:layout_marginBottom="@dimen/layout_lvl1" />

            </androidx.cardview.widget.CardView>

            <com.tokopedia.design.component.Tabs
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_below="@+id/input_number_area"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/tkpd_main_green"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/tkpd_main_green"
                app:tabTextAppearance="@style/Tabs.Secondary.Bold"
                app:tabTextColor="@color/Neutral_N700_68"
                tools:visibility="visible" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@drawable/bg_line_separator"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/buy_widget"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.tokopedia.design.viewpager.WrapContentViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/buy_widget"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4" />

        </androidx.core.widget.NestedScrollView>

    </com.tokopedia.topupbills.telco.prepaid.widget.TelcoNestedCoordinatorLayout>

    <com.tokopedia.common.topupbills.widget.TopupBillsCheckoutWidget
        android:id="@+id/buy_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4" />

</RelativeLayout>

