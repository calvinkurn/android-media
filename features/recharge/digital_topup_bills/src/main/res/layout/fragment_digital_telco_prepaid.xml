<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buy_widget"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/digital_bg_pdp" />

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:tckv_content_text_size="@dimen/dp_11"
                app:tckv_indicator_off_color="@color/grey_550"
                app:tckv_indicator_on_color="?attr/G400"
                tools:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/input_number_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticker_view"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                app:cardCornerRadius="@dimen/spacing_lvl3">

                <com.tokopedia.topupbills.telco.view.widget.DigitalClientNumberWidget
                    android:id="@+id/telco_input_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_lvl2"
                    android:layout_marginTop="@dimen/spacing_lvl2"
                    android:layout_marginRight="@dimen/spacing_lvl2" />

            </androidx.cardview.widget.CardView>

            <com.tokopedia.common.topupbills.widget.TopupBillsRecentTransactionWidget
                android:id="@+id/recent_numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_number_area"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4" />

            <com.tokopedia.common.topupbills.widget.TopupBillsPromoListWidget
                android:id="@+id/promo_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recent_numbers"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4" />

            <com.tokopedia.design.component.Tabs
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl5"
                android:layout_below="@+id/input_number_area"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:background="@color/white"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:visibility="gone"
                app:tabGravity="fill"
                app:tabIndicatorColor="?attr/G400"
                app:tabMode="fixed"
                app:tabSelectedTextColor="?attr/G400"
                app:tabTextAppearance="@style/Tabs.Secondary"
                app:tabTextColor="@color/font_black_disabled_38"
                tools:visibility="visible" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tab_layout"
                android:background="@color/separator_voucher"
                android:visibility="gone" />

            <com.tokopedia.design.viewpager.WrapContentViewPager
                android:id="@+id/product_view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4"
                android:visibility="visible"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <ProgressBar
                android:id="@+id/layout_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.tokopedia.common.topupbills.widget.TopupBillsCheckoutWidget
        android:id="@+id/buy_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4" />

</RelativeLayout>

