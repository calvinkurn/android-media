<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.tokopedia.topupbills.telco.view.widget.DigitalTelcoProductWidget
        android:id="@+id/telco_product_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        layout="@layout/view_digital_empty_product_list" />

    <include
        layout="@layout/layout_shimmering_product_grid" />

    <include
        layout="@layout/layout_shimmering_product_list" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>