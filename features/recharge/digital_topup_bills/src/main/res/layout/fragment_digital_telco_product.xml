<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <com.tokopedia.sortfilter.SortFilter
        android:id="@+id/sort_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2" />

    <com.tokopedia.topupbills.telco.view.widget.DigitalTelcoProductWidget
        android:id="@+id/telco_product_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_filter"/>

    <include
        layout="@layout/view_telco_digital_empty_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_filter" />

    <include
        layout="@layout/layout_shimmering_product_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_filter" />

    <include
        layout="@layout/layout_shimmering_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_filter" />

</RelativeLayout>