<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/digital_bg_pdp" />

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/ticker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:tckv_content_text_size="@dimen/dp_11"
            app:tckv_indicator_off_color="@color/grey_550"
            app:tckv_indicator_on_color="@color/tkpd_main_green"
            tools:visibility="gone" />

        <com.tokopedia.topupbills.telco.view.widget.DigitalPostpaidClientNumberWidget
            android:id="@+id/telco_input_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticker_view"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15" />

        <com.tokopedia.common.topupbills.widget.TopupBillsRecentTransactionWidget
            android:id="@+id/recent_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telco_input_number"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15" />

        <ProgressBar
            android:id="@+id/layout_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <com.tokopedia.common.topupbills.widget.TopupBillsPromoListWidget
            android:id="@+id/promo_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recent_numbers"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15" />

        <com.tokopedia.common.topupbills.widget.TopupBillsCheckoutWidget
            android:id="@+id/buy_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
