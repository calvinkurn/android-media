<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants">

    <include layout="@layout/layout_shimmering_product_telco" />

    <com.tokopedia.topupbills.telco.prepaid.widget.TelcoNestedCoordinatorLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:tckv_content_text_size="@dimen/dp_11"
                app:tckv_indicator_off_color="@color/grey_550"
                app:tckv_indicator_on_color="@color/tkpd_main_green"
                tools:visibility="gone" />

            <com.tokopedia.topupbills.telco.postpaid.widget.DigitalPostpaidClientNumberWidget
                android:id="@+id/telco_input_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticker_view"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:layout_marginRight="@dimen/spacing_lvl4" />


            <com.tokopedia.unifycomponents.TabsUnify
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telco_input_number"
                tools:visibility="visible" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tab_layout"
                android:background="@color/separator_voucher" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4"
                android:orientation="horizontal"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <com.tokopedia.common.topupbills.widget.TopupBillsCheckoutWidget
                android:id="@+id/buy_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4" />

        </RelativeLayout>
    </com.tokopedia.topupbills.telco.prepaid.widget.TelcoNestedCoordinatorLayout>
</RelativeLayout>
