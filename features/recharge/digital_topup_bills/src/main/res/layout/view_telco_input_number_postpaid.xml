<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_lvl2"
    app:cardCornerRadius="@dimen/layout_lvl1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/view_telco_input_number" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/telco_enquiry_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/digital_btn_check_bill"
            android:enabled="true"
            app:unifyButtonVariant="filled"
            app:unifyButtonSize="large"
            app:unifyButtonType="transaction"
            android:layout_margin="@dimen/layout_lvl1"
            android:visibility="visible"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_title_enquiry_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/digital_title_details_bills"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingTop="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            app:typographyType="heading_5"
            android:textColor="@color/Neutral_N700_96"/>

        <LinearLayout
            android:id="@+id/telco_enquiry_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl2" />

    </LinearLayout>

</androidx.cardview.widget.CardView>