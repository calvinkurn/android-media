<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/layout_lvl1"
    android:padding="@dimen/spacing_lvl3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/view_telco_input_number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/telco_secondary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:enabled="true"
                android:text="@string/digital_btn_check_bill"
                android:visibility="gone"
                tools:visibility="visible"
                app:unifyButtonSize="large"
                app:unifyButtonVariant="ghost"
                />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/telco_main_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="@string/digital_btn_check_bill"
                android:visibility="visible"
                app:unifyButtonSize="large"
                app:unifyButtonVariant="filled" />

        </LinearLayout>

    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify>