<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telco_empty_state_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:padding="@dimen/layout_lvl2">

    <ImageView
        android:id="@+id/telco_image_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/unify_globalerrors_404"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="contentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/telco_title_empty_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:lines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telco_image_empty"
        app:typographyType="heading_2"
        tools:text="@string/title_telco_product_empty_state" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/telco_desc_empty_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl3"
        android:gravity="center_horizontal"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telco_title_empty_product"
        app:typographyType="body_2"
        tools:text="@string/desc_telco_product_empty_state" />

</androidx.constraintlayout.widget.ConstraintLayout>