<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_lvl1">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_input_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_8"
        android:text="@string/digital_title_input_number"
        android:textColor="@color/Neutral_N700_96"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hint_input_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_8"
        android:textColor="@color/font_black_disabled_38"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/ac_input_number"
        app:layout_constraintEnd_toStartOf="@+id/img_operator"
        app:layout_constraintStart_toStartOf="@+id/ac_input_number"
        app:layout_constraintTop_toTopOf="@+id/ac_input_number"
        app:typographyType="body_1"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/img_operator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@+id/ac_input_number"
        app:layout_constraintEnd_toStartOf="@+id/contact_picker_layout"
        app:layout_constraintLeft_toRightOf="@+id/hint_input_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ac_input_number"
        tools:ignore="contentDescription" />

    <AutoCompleteTextView
        android:id="@+id/ac_input_number"
        style="@style/HintTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:focusable="false"
        android:hint="@string/digital_hint_input_numbers"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:popupBackground="@color/white"
        android:textColor="@color/Neutral_N700_96"
        android:textColorHint="@color/grey_400"
        android:textSize="@dimen/sp_14"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/contact_picker_layout"
        app:layout_constraintTop_toBottomOf="@+id/label_input_number"
        tools:layout_editor_absoluteY="12dp" />

    <LinearLayout
        android:id="@+id/contact_picker_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="visible"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/ac_input_number"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ac_input_number">

        <ImageView
            android:id="@+id/btn_clear_input_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_5"
            app:srcCompat="@drawable/digital_topup_ic_close" />

        <ImageView
            android:id="@+id/btn_contact_picker"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            app:srcCompat="@drawable/digital_topup_ic_contact" />

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/error_input_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@color/red_600"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/ac_input_number"
        app:typographyType="body_3"
        tools:text="@string/digital_common_title_empty_stock"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>