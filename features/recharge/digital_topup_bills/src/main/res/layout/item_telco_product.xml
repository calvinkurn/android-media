<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telco_layout_product_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_lvl2">

    <RelativeLayout
        android:id="@+id/telco_layout_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/telco_bg_product_item"
        android:paddingBottom="@dimen/spacing_lvl3">

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/telco_label_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            tools:visibility="visible"
            tools:labelTitle="Eksklusif" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_prepaid_title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/telco_label_product"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:maxLines="2"
            app:typographyType="heading_5"
            tools:text="Pulsa 40.000 Pulsa 40.000 Pulsa Pulsa 40.000 Pulsa 40.000" />

        <View
            android:id="@+id/telco_empty_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/telco_space_1"
            android:layout_below="@id/telco_prepaid_title_product"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:visibility="gone"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_desc_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telco_empty_view"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:lines="1"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            tools:text="Masa aktif 30 hari"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telco_product_promo_price"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:lines="1"
            app:typographyType="heading_6"
            app:typographyWeight="bold"
            tools:text="Pulsa 40.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/telco_product_promo_price"
            android:layout_below="@+id/telco_desc_product"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/Unify_N700_44"
            tools:text="Pulsa 40.000"
            app:typographyType="small" />


        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/telco_see_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telco_desc_product"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/product_promo_price"
            android:layout_alignBottom="@+id/telco_product_price"
            android:gravity="center_vertical"
            android:lines="1"
            app:unifyButtonSize="micro"
            app:unifyButtonVariant="ghost"
            android:text="@string/digital_see_more_btn" />

    </RelativeLayout>

</com.tokopedia.unifycomponents.CardUnify>