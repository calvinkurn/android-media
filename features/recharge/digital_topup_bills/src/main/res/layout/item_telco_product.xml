<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_lvl2"
    android:layout_marginLeft="@dimen/spacing_lvl3"
    android:layout_marginRight="@dimen/spacing_lvl3"
    android:layout_marginBottom="@dimen/spacing_lvl2"
    app:cardCornerRadius="@dimen/layout_lvl1"
    app:cardElevation="@dimen/telco_space_3">

    <RelativeLayout
        android:id="@+id/telco_layout_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/telco_bg_product_item"
        android:paddingBottom="@dimen/spacing_lvl3">

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/telco_label_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            tools:labelTitle="Eksklusif" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_prepaid_title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telco_label_product"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:lines="2"
            app:typographyType="heading_5"
            tools:text="Pulsa 40.000" />

        <View
            android:id="@+id/telco_empty_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/telco_space_1"
            android:layout_below="@id/telco_prepaid_title_product"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:visibility="gone"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_desc_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telco_empty_view"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:lines="1"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            tools:text="Masa aktif 30 hari"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telco_product_promo_price"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:lines="1"
            app:typographyType="heading_6"
            app:typographyWeight="bold"
            tools:text="Pulsa 40.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/telco_product_promo_price"
            style="@style/TextView.Micro10"
            android:layout_below="@+id/telco_desc_product"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/Unify_N700_44"
            tools:text="Pulsa 40.000"
            app:typographyType="small"/>


        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/telco_see_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telco_desc_product"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/product_promo_price"
            android:layout_alignBottom="@+id/telco_product_price"
            android:gravity="center_vertical"
            android:lines="1"
            app:unifyButtonSize="micro"
            app:unifyButtonVariant="ghost"
            android:text="@string/digital_see_more_btn"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>