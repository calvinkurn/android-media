<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/layout_lvl1"
        android:paddingBottom="@dimen/layout_lvl1">

        <com.tokopedia.common_digital.common.widget.DigitalSearchInputView
            android:id="@+id/telco_search_number_input_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16" />

        <ImageView
            android:id="@+id/telco_search_number_contact_picker"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="end|center"
            app:srcCompat="@drawable/digital_topup_ic_contact" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="#f3f4f5"/>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/telco_search_number_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:listitem="@layout/item_autocomplete_fav_num" />

</LinearLayout>