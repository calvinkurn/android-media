<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_lvl1"
    app:cardCornerRadius="@dimen/layout_lvl1"
    app:cardElevation="@dimen/dp_2">

    <RelativeLayout
        android:id="@+id/layout_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            tools:labelTitle="Eksklusif" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_product"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:lines="2"
            app:typographyType="heading_5"
            tools:text="Pulsa 40.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/desc_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_product"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:lines="1"
            android:textColor="@color/light_N700_68"
            app:typographyType="body_3"
            tools:text="Masa aktif 30 hari" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_promo_price"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:lines="1"
            app:typographyType="heading_6"
            app:typographyWeight="bold"
            tools:text="Pulsa 40.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_promo_price"
            style="@style/TextView.Micro10"
            android:layout_below="@+id/desc_product"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/Neutral_N700_44"
            tools:text="Pulsa 40.000"
            app:typographyType="small"/>


        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/see_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_product"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/product_promo_price"
            android:layout_alignBottom="@+id/product_price"
            android:gravity="center_vertical"
            android:lines="1"
            app:unifyButtonSize="micro"
            app:unifyButtonVariant="ghost"
            android:text="@string/digital_see_more_btn"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>