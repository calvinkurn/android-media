<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxWidth="100dp"
    android:padding="@dimen/layout_lvl1">

    <androidx.cardview.widget.CardView
        android:id="@+id/telco_recent_img_layout"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_margin="@dimen/dp_2"
        android:scaleType="fitCenter"
        android:elevation="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_16" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/telco_recent_icon_operator"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_4"
            tools:ignore="VectorDrawableCompat" />

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/telco_recent_client_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_toRightOf="@+id/telco_recent_img_layout"
        android:layout_alignTop="@+id/telco_recent_img_layout"
        android:layout_alignBottom="@+id/telco_recent_img_layout"
        android:gravity="center_vertical"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_5"
        tools:text="081322867354" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/telco_recent_img_layout"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:background="@color/separator_voucher" />

</RelativeLayout>