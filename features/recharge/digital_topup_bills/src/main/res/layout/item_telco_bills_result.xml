<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_lvl2"
    android:layout_marginRight="@dimen/layout_lvl2"
    android:visibility="visible">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/telco_postpaid_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:lines="1"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_3"
        tools:text="Operator" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/telco_postpaid_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:lines="1"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Simpati" />

</RelativeLayout>