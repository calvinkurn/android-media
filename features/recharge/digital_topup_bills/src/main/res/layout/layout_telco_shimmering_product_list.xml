<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telco_shimmering_product_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify1"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginRight="@dimen/unify_space_12"
        android:layout_marginLeft="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_telco_shimmering_product_list_1"
        app:loader_corner_radius="2dp"
        app:loader_type="rect"
        app:layout_constraintWidth_percent="0.6"/>

    <include
        android:id="@+id/item_telco_shimmering_product_list_1"
        layout="@layout/item_telco_shimmering_product_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify1"/>

    <include
        android:id="@+id/item_telco_shimmering_product_list_2"
        layout="@layout/item_telco_shimmering_product_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_telco_shimmering_product_list_1"/>

    <include
        android:id="@+id/item_telco_shimmering_product_list_3"
        layout="@layout/item_telco_shimmering_product_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_telco_shimmering_product_list_2"/>

    <include
        android:id="@+id/item_telco_shimmering_product_list_4"
        layout="@layout/item_telco_shimmering_product_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_telco_shimmering_product_list_3"/>

</androidx.constraintlayout.widget.ConstraintLayout>