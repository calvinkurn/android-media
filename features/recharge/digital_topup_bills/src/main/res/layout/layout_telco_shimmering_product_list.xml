<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telco_shimmering_product_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginRight="@dimen/unify_space_12"
        android:layout_marginLeft="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:width_weight="0.6"
        app:corners="4" />

    <include
        layout="@layout/item_telco_shimmering_product_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_lvl2" />

    <include
        layout="@layout/item_telco_shimmering_product_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_lvl2" />

    <include
        layout="@layout/item_telco_shimmering_product_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_lvl2" />

    <include
        layout="@layout/item_telco_shimmering_product_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_lvl2" />

</LinearLayout>