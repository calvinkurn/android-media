<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/telco_mccm_title_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingStart="@dimen/layout_lvl1"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingEnd="@dimen/layout_lvl1"
        android:paddingBottom="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_4"
        tools:text="Rekomendasi Untukmu" />


    <com.tokopedia.topupbills.telco.prepaid.widget.NestedScrollableHost
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/telco_mccm_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.tokopedia.topupbills.telco.prepaid.widget.NestedScrollableHost>
</LinearLayout>
