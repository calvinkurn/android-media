<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/telco_input_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_lvl1">

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/telco_field_input_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_44"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            app:text_field_input_type="phone"
            app:text_field_label="Nomor Telepon"
            app:layout_constraintEnd_toStartOf="@id/telco_contact_picker_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/telco_img_operator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_lvl5"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:paddingBottom="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="@id/telco_field_input_number"
            app:layout_constraintEnd_toStartOf="@id/telco_contact_picker_layout"
            app:layout_constraintTop_toTopOf="@id/telco_field_input_number"
            tools:ignore="contentDescription" />

        <LinearLayout
            android:id="@+id/telco_contact_picker_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/telco_field_input_number"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/telco_field_input_number">

            <ImageView
                android:id="@+id/telco_clear_input_number_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/layout_lvl1"
                app:srcCompat="@drawable/ic_system_action_close_grayscale_16" />

            <ImageView
                android:id="@+id/telco_contact_picker_btn"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:srcCompat="@drawable/digital_topup_ic_contact" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/view_telco_input_number_prepaid"/>
</merge>