<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/telco_input_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3">

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/telco_field_input_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_44"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            app:text_field_input_type="phone"
            app:text_field_label="@string/digital_client_label"
            app:layout_constraintEnd_toStartOf="@id/telco_contact_picker_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/telco_img_operator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_lvl5"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:paddingBottom="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="@id/telco_field_input_number"
            app:layout_constraintEnd_toStartOf="@id/telco_contact_picker_layout"
            app:layout_constraintTop_toTopOf="@id/telco_field_input_number"
            tools:ignore="contentDescription" />

        <LinearLayout
            android:id="@+id/telco_contact_picker_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toBottomOf="@id/telco_field_input_number"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/telco_field_input_number">

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/telco_clear_input_number_btn"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl1"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                app:icon_name="CLEAR"/>

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/telco_contact_picker_btn"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:icon_name="CONTACT" />

        </LinearLayout>

        <com.tokopedia.common.topupbills.widget.TopupBillsSortFilter
            android:id="@+id/telco_filter_chip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:layout_constraintTop_toBottomOf="@id/telco_contact_picker_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/telco_filter_chip_shimmer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:layout_constraintTop_toBottomOf="@id/telco_contact_picker_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:corners="@integer/corner_radius_shimmering" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/view_telco_input_number_prepaid"/>
</merge>