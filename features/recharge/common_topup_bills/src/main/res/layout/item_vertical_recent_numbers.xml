<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_lvl1">

    <androidx.cardview.widget.CardView
        android:id="@+id/common_topup_bills_recent_img_layout"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_margin="@dimen/spacing_lvl1"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="@dimen/spacing_lvl1"
        app:cardCornerRadius="@dimen/layout_lvl2" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/common_topup_bills_recent_icon_operator"
            android:layout_width="@dimen/spacing_lvl7"
            android:layout_height="@dimen/spacing_lvl7"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_lvl2"
            tools:ignore="VectorDrawableCompat" />

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/common_topup_bills_recent_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/common_topup_bills_recent_img_layout"
        app:layout_constraintBottom_toTopOf="@id/common_topup_bills_recent_product_name"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_NN950_96"
        app:typographyType="heading_5"
        tools:text="081322867354" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/common_topup_bills_recent_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:layout_constraintStart_toEndOf="@id/common_topup_bills_recent_img_layout"
        app:layout_constraintTop_toBottomOf="@id/common_topup_bills_recent_label"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_NN950_96"
        app:typographyType="body_3"
        tools:text="100.000" />

</androidx.constraintlayout.widget.ConstraintLayout>