<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_lvl2">

    <LinearLayout
        android:id="@+id/promo_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_lvl2"
        android:paddingTop="@dimen/spacing_lvl2"
        android:paddingBottom="@dimen/spacing_lvl4">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/desc_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginRight="@dimen/unify_space_12"
            android:lines="2"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            tools:text="Cashback hingga Rp400.000 (khusus pengguna baru). SK lengkap klik di sini." />

        <RelativeLayout
            android:id="@+id/layout_promo_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_voucher"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_alignTop="@+id/btn_copy_promo"
                android:layout_alignBottom="@id/btn_copy_promo"
                android:layout_marginLeft="@dimen/unify_space_12"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/common_topup_ic_voucher"
                android:contentDescription="null" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/title_promo_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_copy_promo"
                android:layout_alignBottom="@id/btn_copy_promo"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:layout_marginRight="@dimen/spacing_lvl2"
                android:layout_toRightOf="@+id/img_voucher"
                android:gravity="center_vertical"
                android:text="@string/common_topup_title_promo_code"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/promo_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_copy_promo"
                android:layout_alignBottom="@id/btn_copy_promo"
                android:layout_toRightOf="@+id/title_promo_code"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_Y500"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="TOPED" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_copy_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/promo_code"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:layout_marginRight="@dimen/spacing_lvl3"
                app:unifyButtonSize="micro"
                android:paddingLeft="@dimen/spacing_lvl3"
                android:paddingTop="@dimen/spacing_lvl2"
                android:paddingRight="@dimen/spacing_lvl3"
                android:paddingBottom="@dimen/spacing_lvl2"
                app:typographyType="heading_6"
                tools:background="@drawable/digital_bg_green_rounded"
                tools:text="Disalin"
                tools:textColor="@color/Unify_N0"
                android:minWidth="@dimen/telco_promo_item_min_width"
                android:gravity="center" />

        </RelativeLayout>

    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify>


