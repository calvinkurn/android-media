<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_topupbills_favorite_number_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/unify_space_12"
    android:paddingEnd="@dimen/spacing_lvl2">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/common_topupbills_favorite_number_shimmer_icon"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:corners="8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/common_topupbills_favorite_number_shimmer_client_name"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:corners="8"
        app:layout_goneMarginBottom="@dimen/unify_space_12"
        app:layout_constraintStart_toEndOf="@id/common_topupbills_favorite_number_shimmer_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/common_topupbills_favorite_number_shimmer_client_number" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/common_topupbills_favorite_number_shimmer_client_number"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:corners="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/common_topupbills_favorite_number_shimmer_icon"
        app:layout_constraintTop_toBottomOf="@id/common_topupbills_favorite_number_shimmer_client_name" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/common_topupbills_favorite_number_menu"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl1"
        app:corners="8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/common_topupbills_favorite_number_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/Unify_N75"
        app:layout_constraintStart_toStartOf="@id/common_topupbills_favorite_number_shimmer_client_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>