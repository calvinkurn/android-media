<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vg_input_dropdown_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/input_dropdown_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/vg_input_dropdown_icon"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_marginEnd="@dimen/unify_space_12"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:unify_image_type="rect"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/vg_input_dropdown_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        app:typographyType="heading_5"
        tools:text="463274678324" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/vg_input_dropdown_selected"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="CHECK_BIG"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
