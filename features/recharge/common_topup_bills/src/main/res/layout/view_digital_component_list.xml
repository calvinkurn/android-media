<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:lines="1"
        android:paddingStart="@dimen/spacing_lvl2"
        android:paddingLeft="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_5"
        tools:text="Transaksi Terakhir" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_menu_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3" />
</LinearLayout>