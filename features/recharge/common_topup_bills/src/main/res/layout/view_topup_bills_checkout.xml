<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buy_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_12"
    android:visibility="gone"
    tools:visibility="visible">

    <com.tokopedia.promocheckout.common.view.widget.TickerPromoStackingCheckoutView
        android:id="@+id/recharge_checkout_promo_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dp_12" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_recharge_checkout_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recharge_checkout_promo_ticker"
        android:lineHeight="@dimen/dp_18"
        android:lines="1"
        android:text="Total Pembayaran"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_recharge_checkout_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_recharge_checkout_label"
        android:layout_marginTop="@dimen/dp_8"
        android:lines="1"
        android:textColor="@color/tkpd_main_orange"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        tools:text="Rp 25.200" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_recharge_checkout_next"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_recharge_checkout_label"
        android:layout_alignBottom="@+id/txt_recharge_checkout_price"
        android:layout_alignParentRight="true"
        android:text="@string/common_topup_enquiry_default_label"
        app:unifyButtonType="transaction" />

</RelativeLayout>