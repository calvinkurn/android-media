<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_topupbills_favorite_number_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_3">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/common_topupbills_favorite_number_icon"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/common_topupbills_favorite_number_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        app:typographyType="heading_5"
        tools:text="Nabilla Sabbaha"
        app:layout_constraintStart_toEndOf="@id/common_topupbills_favorite_number_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/common_topupbills_favorite_number_client_number" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/common_topupbills_favorite_number_client_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/common_topupbills_favorite_number_icon"
        app:layout_constraintTop_toBottomOf="@id/common_topupbills_favorite_number_client_name"
        app:typographyType="body_3"
        tools:text="081234567890" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/common_topupbills_favorite_number_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_name="MENU_KEBAB_VERTICAL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- TODO: [Misael] Ini nanti background color diganti -->
    <View
        android:id="@+id/common_topupbills_favorite_number_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E5E7E9"
        app:layout_constraintStart_toStartOf="@id/common_topupbills_favorite_number_client_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>