<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/common_topup_bills_container_contact_number"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/unify_space_12"
    android:paddingEnd="@dimen/spacing_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/common_topup_bills_initial"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:background="@drawable/common_topup_bills_bg_grey_rounded"
        app:typographyType="heading_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        tools:text="T"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/common_topup_bills_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_goneMarginBottom="@dimen/spacing_lvl4"
        app:typographyType="heading_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/common_topup_bills_initial"
        app:layout_constraintBottom_toTopOf="@id/common_topup_bills_contact_number"
        tools:text="Tokopedia"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/common_topup_bills_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:visibility="gone"
        app:typographyType="body_3"
        app:layout_constraintTop_toBottomOf="@id/common_topup_bills_contact_name"
        app:layout_constraintStart_toEndOf="@id/common_topup_bills_initial"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="081234567890"/>

    <View
        android:id="@+id/common_topupbills_favorite_number_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintStart_toStartOf="@id/common_topup_bills_contact_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>