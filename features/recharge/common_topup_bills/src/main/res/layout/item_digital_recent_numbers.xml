<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:maxWidth="100dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_4"
    android:paddingLeft="@dimen/dp_4"
    android:paddingEnd="@dimen/dp_4"
    android:paddingRight="@dimen/dp_4"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_margin="@dimen/dp_2"
        android:scaleType="fitCenter"
        android:elevation="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_16" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/topupbills_recent_icon_operator"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_4"
            tools:ignore="VectorDrawableCompat" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/topupbills_recent_client_number"
        style="@style/TextView.Micro.Bold"
        android:layout_marginBottom="@dimen/dp_4"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:text="081322867354" />

    <TextView
        android:id="@+id/topupbills_text_product_name"
        style="@style/TextView.Micro.BlackSecondary"
        android:lines="1"
        tools:text="Rp 1.000.000" />

</LinearLayout>