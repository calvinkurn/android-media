<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/layout_lvl8"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:maxWidth="@dimen/layout_lvl8"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_lvl2"
    android:paddingLeft="@dimen/spacing_lvl2"
    android:paddingEnd="@dimen/spacing_lvl2"
    android:paddingRight="@dimen/spacing_lvl2"
    android:background="@color/Unify_Background">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_margin="@dimen/spacing_lvl1"
        android:scaleType="fitCenter"
        android:elevation="@dimen/spacing_lvl1"
        app:cardCornerRadius="@dimen/spacing_lvl4" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/topupbills_recent_icon_operator"
            android:layout_width="@dimen/layout_lvl5"
            android:layout_height="@dimen/layout_lvl5"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_lvl2"
            tools:ignore="VectorDrawableCompat" />

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/topupbills_recent_client_number"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textAlignment="center"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="081322867354" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/topupbills_text_product_name"
        android:lines="1"
        app:typographyType="body_3"
        tools:text="Rp 1.000.000"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</LinearLayout>