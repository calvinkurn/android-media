<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:background="@color/Unify_N50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/fl_holder_input_client_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.88"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                tools:ignore="UselessLeaf" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_label_client_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_32"
                android:visibility="gone"
                tools:text="@string/digital_common_prompt_phone"
                app:typographyType="body_2"
                tools:visibility="visible" />

            <AutoCompleteTextView
                android:id="@+id/ac_client_number"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_client_number"
                android:focusableInTouchMode="true"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:popupBackground="@color/Unify_N0"
                android:textColor="@color/Unify_N700_68"
                android:textColorHint="@color/Unify_N150"
                android:textSize="@dimen/unify_font_16"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ac_client_number"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_label_client_number"
                android:layout_gravity="end"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pic_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_lvl3"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/spacing_lvl2"
                    android:layout_marginRight="@dimen/spacing_lvl2"
                    android:contentDescription="@string/app_name"
                    android:paddingBottom="@dimen/spacing_lvl2"
                    tools:src="@drawable/digital_common_ic_close_24dp" />

                <ImageView
                    android:id="@+id/btn_clear_client_number"
                    android:layout_width="@dimen/spacing_lvl5"
                    android:layout_height="@dimen/spacing_lvl5"
                    android:layout_gravity="end|center_vertical"
                    app:srcCompat="@drawable/digital_bg_widget_close" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.12"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:paddingBottom="@dimen/spacing_lvl1"
            tools:visibility="visible">

            <Button
                android:id="@+id/btn_contact_picker"
                android:layout_width="@dimen/spacing_lvl5"
                android:layout_height="@dimen/spacing_lvl5"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="@dimen/layout_lvl1"
                android:visibility="gone"
                android:background="@drawable/digital_ic_phonebook_widget" />

            <ImageView
                android:id="@+id/btn_camera_picker"
                android:layout_width="@dimen/spacing_lvl5"
                android:layout_height="@dimen/spacing_lvl5"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="@dimen/layout_lvl1"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_product_action_camera_grayscale_24" />

        </RelativeLayout>

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_error_client_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_lvl2"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/spacing_lvl2"
        android:paddingRight="@null"
        android:paddingStart="@dimen/spacing_lvl2"
        android:text="@string/digital_common_title_empty_stock"
        android:textColor="@color/Unify_R600"
        app:typographyType="body_3"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>


