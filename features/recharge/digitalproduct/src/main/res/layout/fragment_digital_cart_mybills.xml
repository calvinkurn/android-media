<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".newcart.presentation.fragment.DigitalCartMyBillsFragment">

    <com.tokopedia.empty_state.EmptyStateUnify xmlns:emptyState="http://schemas.android.com/apk/res-auto"
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        emptyState:unifyEmptyStateOrientation="vertical"
        emptyState:unifyEmptyStateType="page" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_checkout_holder"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_lvl2">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_category_name"
                        app:typographyType="heading_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Listrik PLN" />

                    <com.tokopedia.digital.newcart.presentation.compoundview.DigitalCartDetailHolderView
                        android:id="@+id/view_cart_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/input_price_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_lvl1"
                            android:background="@drawable/bg_line_separator" />

                        <com.tokopedia.digital.newcart.presentation.compoundview.InputPriceHolderView
                            android:id="@+id/input_price_holder_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_lvl1"
                    android:background="@drawable/bg_line_separator" />

                <com.tokopedia.digital.newcart.presentation.compoundview.DigitalCartMyBillsView
                    android:id="@+id/subscription_mybill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_lvl2"
                    android:elevation="@dimen/layout_lvl1" />

                <com.tokopedia.digital.newcart.presentation.compoundview.DigitalCartMyBillsView
                    android:id="@+id/egold_mybill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_lvl2"
                    android:layout_marginRight="@dimen/layout_lvl2"
                    android:layout_marginBottom="@dimen/layout_lvl2"
                    android:elevation="@dimen/layout_lvl1"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <com.tokopedia.digital.newcart.presentation.compoundview.DigitalCartCheckoutHolderView
            android:id="@+id/view_checkout_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom" />

    </RelativeLayout>
</RelativeLayout>