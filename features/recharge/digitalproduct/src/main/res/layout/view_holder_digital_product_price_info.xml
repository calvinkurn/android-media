<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@null"
        android:paddingRight="@null"
        android:paddingStart="@null"
        android:text="@string/label_title_price_info_digital"
        app:typographyType="body_2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        tools:ignore="RelativeOverlap">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_price_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/spacing_lvl2"
            android:paddingRight="@null"
            android:paddingStart="@dimen/spacing_lvl2"
            app:typographyType="body_2"
            tools:text="Rp.100.000"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_price_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/layout_lvl1"
            android:paddingRight="@null"
            android:paddingStart="@dimen/layout_lvl1"
            app:typographyType="body_3"
            tools:text="Rp.100.000"/>

    </LinearLayout>

</RelativeLayout>