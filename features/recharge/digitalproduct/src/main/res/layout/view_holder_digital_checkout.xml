<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl1"
        android:background="@drawable/bg_line_separator" />

    <com.tokopedia.promocheckout.common.view.widget.TickerCheckoutView
        android:id="@+id/promo_ticker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/container_checkout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/digital_dimen_75"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:orientation="horizontal"
        android:paddingTop="@dimen/layout_lvl1"
        android:paddingBottom="@dimen/layout_lvl1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/digital_cart_total_payment_label"
                app:typographyType="body_3"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_total_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Rp102.500"
                app:typographyType="heading_3"
                android:textColor="@color/Unify_Y500"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_checkout"
            style="@style/Button.Submit.Orange"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl5"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/layout_lvl0"
            android:layout_weight="1"
            android:text="@string/digital_cart_checkout_pay_label" />
    </LinearLayout>
</LinearLayout>