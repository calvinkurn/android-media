<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.tokopedia.digital.product.additionalfeature.etoll.view.compoundview.CheckETollBalanceView
                android:id="@+id/digital_holder_check_emoney_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_lvl1"
                tools:visibility="visible"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/digital_holder_product_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/digital_holder_check_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/digital_container_promo"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl2"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/indicator"
                    style="@style/Tabs.Secondary"
                    footerColor="@color/Unify_G500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Unify_N0"
                    android:elevation="@dimen/spacing_lvl1"
                    app:tabIndicatorColor="@color/Unify_G500"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/Unify_G500"
                    app:tabTextAppearance="@style/TitlePageWhiteIndicator"
                    app:tabTextColor="@color/Unify_N700_32" />

                <com.tokopedia.digital.product.view.compoundview.DigitalWrapContentViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/digital_dimen_350">

                </com.tokopedia.digital.product.view.compoundview.DigitalWrapContentViewPager>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/pb_main_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>