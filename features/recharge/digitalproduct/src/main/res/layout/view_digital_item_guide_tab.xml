<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_lvl1"
    android:paddingLeft="@dimen/layout_lvl2"
    android:paddingRight="@dimen/layout_lvl2"
    android:paddingTop="@dimen/spacing_lvl2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        card_view:cardElevation="@dimen/spacing_lvl1"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layout_lvl1"
            android:paddingLeft="@dimen/layout_lvl1"
            android:paddingRight="@dimen/layout_lvl1"
            android:paddingTop="@dimen/spacing_lvl2">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_guide_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:paddingBottom="@dimen/spacing_lvl2"
                android:scrollHorizontally="false"
                card_view:typographyType="heading_5"
                android:text="Langkah mudah membeli pulsa di Tokopedia" />

            <include layout="@layout/view_digital_guide_youtube" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>