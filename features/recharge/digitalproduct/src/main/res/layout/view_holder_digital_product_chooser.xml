<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:background="@color/Unify_N50">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_label_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_32"
        app:typographyType="body_2"
        android:visibility="gone"
        tools:text="@string/digital_common_prompt_phone"
        tools:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/layout_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_operator_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:layout_toStartOf="@+id/iv_arrow"
            android:paddingTop="@dimen/spacing_lvl2"
            android:paddingBottom="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_1"
            tools:text="Extra Combo 6GB"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_operator_product_name"
            android:background="@color/Unify_N300"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl1"
            app:srcCompat="@drawable/ic_system_action_arrow_down_normal_24"
            android:tint="@color/Unify_N700_44"
            tools:ignore="ContentDescription"/>

    </RelativeLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_error_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/spacing_lvl2"
        android:paddingRight="@null"
        android:paddingStart="@dimen/spacing_lvl2"
        android:text="@string/digital_common_title_empty_stock"
        android:textColor="@color/Unify_R600"
        app:typographyType="body_3"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>