<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingLeft="@dimen/layout_lvl2"
        android:paddingRight="@dimen/layout_lvl2"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingTop="@dimen/layout_lvl2">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/layout_lvl2"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/spacing_lvl2"
            android:paddingRight="@null"
            android:paddingStart="@dimen/spacing_lvl2"
            app:typographyType="body_1"
            tools:text="Beli Pulsa" />

        <LinearLayout
            android:id="@+id/holder_radio_chooser_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/holder_client_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/holder_chooser_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/holder_additional_info_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/holder_price_info_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/layout_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:visibility="gone"
            tools:visibility="visible">

            <CheckBox
                android:id="@+id/cb_instant_checkout"
                app:theme="@style/DigitalCheckboxAndRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/digital_dimen_min_7"
                android:layout_marginStart="@dimen/digital_dimen_min_7"
                android:text="@string/label_instant_payment_digital"
                android:textColor="@color/Unify_N700_32"
                android:textSize="@dimen/unify_font_12" />

            <ImageView
                android:id="@+id/tooltip_instant_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_lvl1"
                android:layout_toRightOf="@+id/cb_instant_checkout"
                app:srcCompat="@drawable/info_icon" />

        </RelativeLayout>
    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_buy_digital"
        android:layout_margin="@dimen/layout_lvl2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:unifyButtonType="transaction"
        app:unifyButtonSize="large"
        app:unifyButtonVariant="filled"
        android:text="@string/label_btn_buy_digital" />

</LinearLayout>