<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    card_view:cardElevation="@dimen/spacing_lvl1"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_lvl2"
        tools:ignore="MissingDefaultResource">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rl_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                app:typographyType="heading_3"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/ic_more_info"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Bayar Otomatis" />

            <ImageView
                android:id="@+id/ic_more_info"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                app:layout_constraintEnd_toStartOf="@+id/cb_subscription"
                app:layout_constraintStart_toEndOf="@id/tv_header_title"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_coupon_info" />

            <CheckBox
                android:id="@+id/cb_subscription"
                android:layout_width="@dimen/spacing_lvl6"
                android:layout_height="@dimen/spacing_lvl6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:theme="@style/DigitalCheckboxAndRadioButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl1"
            app:typographyType="body_2"
            tools:text="Pembayaran akan dilakukan secara otomatis pada 2 November 2018 dengan OvoCash." />
    </LinearLayout>
</androidx.cardview.widget.CardView>