<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@color/Unify_N0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layout_lvl1">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/digital_ic_digital_deal_empty" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="heading_5"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:gravity="center"
        android:text="@string/digital_deal_empty_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:text="@string/digital_deal_empty_detail_label" />

</LinearLayout>