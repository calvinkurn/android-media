<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/digital_bg_chooser_operator_product_item">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_promo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:typographyType="body_2"
        tools:text="Promo title" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/empty_stock_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:background="@drawable/digital_bg_out_of_stock"
        android:paddingStart="@dimen/layout_lvl1"
        android:paddingLeft="@dimen/layout_lvl1"
        android:paddingEnd="@dimen/layout_lvl1"
        android:paddingRight="@dimen/layout_lvl1"
        android:text="@string/digital_common_title_empty_stock"
        android:textColor="@color/Unify_N0"
        app:typographyType="heading_5"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_promo_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_promo_title"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/layout_lvl1"
        app:typographyType="body_2"
        android:textColor="@color/Unify_Y500"
        tools:text="Promo tag" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_promo_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_promo_tag"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        app:typographyType="body_3"
        android:textColor="@color/Unify_N200"
        tools:text="Promo description" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_promo_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_promo_description"
        android:layout_alignTop="@+id/product_promo_price"
        android:layout_alignBottom="@+id/product_promo_price"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:gravity="center_vertical"
        app:typographyType="body_3"
        tools:text="Rp. 22.500" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_promo_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_promo_description"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_toRightOf="@+id/product_promo_old_price"
        app:typographyType="heading_4"
        tools:text="Rp. 20.000" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/product_promo_old_price"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:background="@color/Unify_N700_20" />

</RelativeLayout>