<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    tools:context=".newcart.presentation.fragment.DigitalCartDealsFragment">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/deal_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_deal"
            style="@style/Tabs.Secondary"
            footerColor="@color/Unify_G400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            android:elevation="@dimen/spacing_lvl1"
            app:tabBackground="@color/Unify_N0"
            app:tabIndicatorColor="@color/Unify_G400"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/Unify_G400"
            app:tabTextAppearance="@style/TitlePageWhiteIndicator"
            app:tabTextColor="@color/Unify_N700_32" />

        <com.tokopedia.abstraction.base.view.widget.TouchViewPager
            android:id="@+id/pager_deals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/digital_dimen_210"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">

        <View
            android:id="@+id/checkout_dim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/checkout_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:visibility="gone" />

    </FrameLayout>
</FrameLayout>