<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_lvl1"
    android:paddingRight="@dimen/layout_lvl1"
    android:paddingTop="@dimen/layout_lvl1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/Unify_N0"
        app:cardElevation="@dimen/layout_lvl0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/layout_lvl1">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/input_price_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Masukkan jumlah yang dibayar"/>

            <EditText
                android:id="@+id/input_price_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"
                android:hint="@string/digital_hint_input_price"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/error_input_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="body_3"
                android:textColor="@color/Unify_R600"
                android:text="@string/digital_error_input_price"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>