<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_see_detail_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:textColor="@color/Unify_G500"
        android:layout_marginBottom="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:text="@string/digital_cart_detail_see_detail_label"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>