<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container_additional"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_lvl2"
    android:background="@drawable/digital_keterangan_card"
    android:padding="@dimen/layout_lvl1">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl1"
        android:text="@string/label_title_desc_promo_digital"
        app:typographyType="body_3"
        android:textColor="@color/Unify_G400"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_info"
        android:layout_below="@+id/tv_label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        tools:text="Harga Kuota 2.5GB - 4.5GB (sesuai zona terkait)+Bonus 5GB 4G. Lihat detailnya"/>

</RelativeLayout>