<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/digital_bg_chooser_operator_product_item">

    <TextView
        android:id="@+id/product_price_no_addition"
        style="@style/TextProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingBottom="@dimen/digital_padding_2"
        tools:text="additional" />

    <TextView
        android:id="@+id/empty_stock_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/digital_bg_out_of_stock"
        android:paddingStart="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/digital_common_title_empty_stock"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/product_plain_description"
        style="@style/TextProductDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price_no_addition"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:paddingTop="@dimen/digital_padding_2"
        android:paddingBottom="@dimen/digital_padding_2"
        tools:text="plaim desc" />

    <TextView
        android:id="@+id/product_total_price"
        style="@style/TextProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_plain_description"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_5"
        android:paddingTop="@dimen/digital_padding_2"
        tools:text="Rp. 20.000" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/product_total_price"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/digital_separator" />

</RelativeLayout>
