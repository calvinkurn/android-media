<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_lvl2"
    android:layout_marginTop="@dimen/spacing_lvl2"
    android:layout_marginRight="@dimen/layout_lvl2"
    android:layout_marginBottom="@dimen/spacing_lvl1"
    android:background="?attr/selectableItemBackground"
    card_view:cardElevation="@dimen/spacing_lvl1"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_lvl1"
        android:paddingTop="@dimen/spacing_lvl2"
        android:paddingRight="@dimen/layout_lvl1"
        android:paddingBottom="@dimen/layout_lvl1"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/holder_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_voucher_code"
                card_view:typographyType="heading_6"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_voucher_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:layout_marginRight="@dimen/spacing_lvl2"
                android:paddingStart="@dimen/spacing_lvl2"
                android:paddingLeft="@dimen/spacing_lvl2"
                android:paddingEnd="@dimen/spacing_lvl2"
                android:paddingRight="@dimen/spacing_lvl2"
                card_view:typographyType="heading_6"
                tools:text="ANGGAKERENABIS" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/layout_lvl1"
                android:paddingRight="@dimen/layout_lvl1">

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/btn_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_lvl2"
                    android:paddingStart="@dimen/layout_lvl1"
                    android:paddingLeft="@dimen/layout_lvl1"
                    android:paddingEnd="@dimen/layout_lvl1"
                    android:paddingRight="@dimen/layout_lvl1"
                    card_view:unifyButtonVariant="ghost"
                    card_view:unifyButtonSize="micro"
                    card_view:unifyButtonType="alternate"
                    android:text="@string/button_copy" />
            </LinearLayout>
        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_desc_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/layout_lvl1"
            card_view:typographyType="body_3"
            tools:text="Beli voucher game lebih hemat, diskon langsung sebesar Rp5.000. Banyak pilihan!" />

    </LinearLayout>

</androidx.cardview.widget.CardView>