<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_lvl1"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_category_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/digital_dimen_56"
        android:background="@color/Unify_N0"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:padding="@dimen/layout_lvl2">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_category_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:typographyType="heading_4"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/iv_expand_collapse"
            android:layout_width="@dimen/spacing_lvl4"
            android:layout_height="@dimen/spacing_lvl4"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_lvl2"
            app:srcCompat="@drawable/ic_arrow_down_grey" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_cart_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Unify_N0"
                android:orientation="vertical"
                android:paddingStart="@dimen/layout_lvl2"
                android:paddingLeft="@dimen/layout_lvl2"
                android:paddingEnd="@dimen/layout_lvl2"
                android:paddingRight="@dimen/layout_lvl2"
                android:paddingBottom="@dimen/layout_lvl2">

                <com.tokopedia.digital.newcart.presentation.compoundview.DigitalCartDetailHolderView
                    android:id="@+id/view_cart_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/input_price_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_lvl1"
                        android:background="@drawable/bg_line_separator" />

                    <com.tokopedia.digital.newcart.presentation.compoundview.InputPriceHolderView
                        android:id="@+id/input_price_holder_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_selected_deals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/layout_lvl2"
                android:paddingBottom="@dimen/layout_lvl2"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_lvl1"
                    android:background="@drawable/bg_line_separator" />

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_lvl2"
                    android:layout_marginBottom="@dimen/layout_lvl2"
                    android:paddingStart="@dimen/layout_lvl2"
                    android:paddingLeft="@dimen/layout_lvl2"
                    android:paddingEnd="@dimen/layout_lvl2"
                    android:paddingRight="@dimen/layout_lvl2"
                    android:text="@string/digital_cart_deal_selected_label"
                    app:typographyType="heading_4" />

                <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
                    android:id="@+id/rv_selected_deals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:has_divider_left_padding="true" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <com.tokopedia.digital.newcart.presentation.compoundview.DigitalCartCheckoutHolderView
        android:id="@+id/view_checkout_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:foregroundGravity="bottom"
        android:minHeight="@dimen/digital_dimen_150" />

</LinearLayout>