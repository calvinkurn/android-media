<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_lvl2"
    android:layout_marginBottom="@dimen/layout_lvl2"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingLeft="@dimen/layout_lvl2"
    android:paddingEnd="@dimen/layout_lvl2"
    android:paddingRight="@dimen/layout_lvl2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:layout_weight="1"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            tools:text="Diva Karaoke" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title"
            app:typographyType="body_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            tools:text="Gratis 1 jam Karaoke Large Room for amazing alvarisi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_slashed_price"
                app:typographyType="body_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/layout_lvl1"
                android:layout_marginRight="@dimen/layout_lvl1"
                android:background="@drawable/digital_bg_textview_strikethrough"
                tools:text="Rp.100" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_price"
                app:typographyType="heading_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp.200" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/spacing_lvl5"
        android:layout_height="@dimen/spacing_lvl5"
        android:layout_gravity="top"
        android:paddingStart="@dimen/spacing_lvl2"
        android:paddingLeft="@dimen/spacing_lvl2"
        android:paddingBottom="@dimen/layout_lvl1"
        app:srcCompat="@drawable/ic_close"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/spacing_lvl4"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl2"
        android:layout_weight="0.2"
        app:srcCompat="@drawable/ic_check"
        android:visibility="gone"
        tools:visibility="visible" />


    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl2"
        android:layout_weight="0.2"
        android:gravity="center"
        app:unifyButtonVariant="ghost"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        android:text="@string/digital_deal_buy_label" />
</LinearLayout>