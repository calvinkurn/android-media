<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/field_search_operator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl7"
        android:layout_margin="@dimen/layout_lvl1"
        android:background="@color/Unify_N50"
        android:drawablePadding="@dimen/layout_lvl1"
        android:hint="@string/digital_action_search"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_chooser_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_search_operator"
        android:layout_marginTop="@dimen/spacing_lvl2" />

    <ProgressBar
        android:id="@+id/pb_main_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>