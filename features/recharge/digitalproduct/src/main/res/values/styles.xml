<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CardViewDigital" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TextTitleMedium">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitleLarge">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextProductName">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextProductDescription">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextProductPrice">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextProductOldPrice">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextProductPromoPrice">
        <item name="android:textColor">@color/deep_orange_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextProductPromoTag">
        <item name="android:textColor">@color/deep_orange_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DigitalButtonBuy">
        <item name="android:background">@drawable/digital_bg_buy_button_orange</item>
        <item name="android:layout_height">@dimen/digital_height_60</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DigitalDealBuy">
        <item name="android:background">@drawable/digital_bg_deal_buy_button</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green_250</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DigitalCheckboxAndRadioButton">
        <item name="colorControlNormal">#bdbdbd</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Secondary.Green">
        <item name="android:background">@drawable/digital_bg_button_secondary_green</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/green_250</item>
    </style>

</resources>