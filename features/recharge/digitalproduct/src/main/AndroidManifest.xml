<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.digital">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".product.view.activity.DigitalSearchNumberActivity"
            android:label="@string/digital_title_fav_number"
            android:theme="@style/Theme.WhiteUnify"
            android:screenOrientation="portrait" />

        <activity android:name=".product.view.activity.DigitalYoutubeActivity" />

        <activity
            android:name=".product.view.activity.DigitalChooserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify"/>

        <activity
            android:name=".product.view.activity.DigitalProductActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.WhiteUnify">

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_digital"
                    android:path="@string/path_digital_product"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newcart.presentation.activity.DigitalCartActivity"
            android:theme="@style/Theme.WhiteUnify"
            android:label="@string/digital_cart_toolbar_title"
            android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_digital"
                    android:path="@string/path_digital_cart" />

                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_digital"
                    android:path="@string/path_digital_cart" />
            </intent-filter>
        </activity>
    </application>

</manifest>