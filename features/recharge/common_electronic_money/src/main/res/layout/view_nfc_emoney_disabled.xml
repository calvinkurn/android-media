<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lvl4">

    <ImageView
        android:id="@+id/img_inactive_nfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_32" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/emoney_nfc_is_not_activated_title"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_2"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:gravity="center"
        android:text="@string/emoney_nfc_is_not_activated_label"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button_activate_nfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emoney_activate_nfc"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

</LinearLayout>