<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/emoneyBottomSheetProductTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Emoney Rp25.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/emoneyBottomSheetProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_2"
        tools:text="Ini Descripsi" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/recharge_pdp_emoney_product_price_label"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/emoneyBottomSheetProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:layout_marginBottom="@dimen/spacing_lvl4" />

</LinearLayout>