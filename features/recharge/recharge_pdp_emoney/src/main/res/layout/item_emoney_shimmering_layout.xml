<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_lvl1"
    app:cardBackgroundColor="@color/Unify_N0"
    app:cardCornerRadius="@dimen/layout_lvl1"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify1"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.9"
            app:loader_corner_radius="2dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify2"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/layout_lvl1"
            app:layout_constraintBottom_toTopOf="@id/loaderUnify3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderUnify1"
            app:layout_constraintWidth_percent="0.7"
            app:loader_corner_radius="2dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify3"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderUnify2"
            app:layout_constraintWidth_percent="0.7"
            app:loader_corner_radius="2dp"
            app:loader_type="rect" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>