<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify1"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:loader_corner_radius="2dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify2"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/layout_lvl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify1"
        app:layout_constraintBottom_toTopOf="@id/loaderUnify3"
        app:layout_constraintWidth_percent="0.7"
        app:loader_corner_radius="2dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify3"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify2"
        app:layout_constraintBottom_toTopOf="@id/loaderUnify4"
        app:layout_constraintWidth_percent="0.9"
        app:loader_corner_radius="2dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify4"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/layout_lvl1"
        app:loader_corner_radius="2dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify3"
        app:layout_constraintBottom_toTopOf="@id/loaderUnify5"
        app:layout_constraintWidth_percent="0.7"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify5"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:loader_corner_radius="2dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify4"
        app:layout_constraintBottom_toTopOf="@id/loaderUnify6"
        app:layout_constraintWidth_percent="0.9" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/layout_lvl1"
        app:width_weight="0.7"
        app:loader_corner_radius="2dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.7"/>

</androidx.constraintlayout.widget.ConstraintLayout>