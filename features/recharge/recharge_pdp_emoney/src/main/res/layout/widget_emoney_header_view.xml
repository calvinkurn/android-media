<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lvl4">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/emoneyHeaderViewCtaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyButtonSize="small"
            android:paddingHorizontal="@dimen/unify_space_12"
            tools:text="@string/recharge_pdp_emoney_check_saldo" />

        <LinearLayout
            android:id="@+id/emoneyHeaderViewWoCardNum"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/emoneyHeaderViewCtaButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/emoneyHeaderViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/unify_space_12"
                app:typographyType="heading_5"
                tools:text="Cek saldo kamu di sini" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/emoneyHeaderViewSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/unify_space_12"
                app:typographyType="body_3"
                tools:text="Yuk, coba cek sisa saldo di kartu e-money kamu. Yuk, coba cek sisa saldo di kartu e-money kamu." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emoneyHeaderViewWithCardNum"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/emoneyHeaderViewCtaButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typographyType="body_3"
                android:textColor="@color/Unify_N700_68"
                android:text="@string/recharge_pdp_emoney_card_number_label" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/emoneyHeaderViewCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typographyType="body_3"
                android:textColor="@color/Unify_N700_96"
                tools:text="9930 4903 9403 4903" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/emoneyHeaderViewCardBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_96"
                app:typographyWeight="bold"
                app:typographyType="body_2"
                tools:text="Rp60.000"
                android:layout_marginTop="@dimen/spacing_lvl1" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.tokopedia.unifycomponents.CardUnify>