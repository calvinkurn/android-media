<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lvl4">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/emoneyHeaderViewCtaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyButtonSize="small"
            tools:text="@string/recharge_pdp_emoney_check_saldo" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/emoneyHeaderViewTitle"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/unify_space_12"
            app:layout_constraintBottom_toTopOf="@id/emoneyHeaderViewSubtitle"
            app:layout_constraintEnd_toStartOf="@id/emoneyHeaderViewCtaButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="heading_5"
            tools:text="Cek saldo kamu di sini" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/emoneyHeaderViewSubtitle"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/unify_space_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/emoneyHeaderViewCtaButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emoneyHeaderViewTitle"
            app:typographyType="body_3"
            tools:text="Yuk, coba cek sisa saldo di kartu e-money kamu. Yuk, coba cek sisa saldo di kartu e-money kamu." />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>