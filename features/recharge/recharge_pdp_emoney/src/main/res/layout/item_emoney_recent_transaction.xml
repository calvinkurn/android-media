<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/emoneyRecentNumberImage"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        app:layout_constraintTop_toTopOf="@id/emoneyRecentNumberTitle"
        app:layout_constraintBottom_toBottomOf="@id/emoneyRecentNumberDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/unify_space_12"
        android:scaleType="fitCenter" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/emoneyRecentNumberTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/emoneyRecentNumberImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Product Title"
        android:layout_marginStart="@dimen/unify_space_12"
        android:lines="1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/emoneyRecentNumberDescription"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:layout_constraintTop_toBottomOf="@id/emoneyRecentNumberTitle"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:layout_constraintStart_toStartOf="@id/emoneyRecentNumberTitle"
        tools:text="Description"
        android:textColor="@color/Unify_N700_68" />

    <View
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="0.5dp"
        android:background="@color/Unify_N75"
        app:layout_constraintTop_toBottomOf="@id/emoneyRecentNumberDescription"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="@id/emoneyRecentNumberTitle"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>