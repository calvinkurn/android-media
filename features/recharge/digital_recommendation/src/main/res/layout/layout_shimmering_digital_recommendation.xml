<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderDetailDgRecommendation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_margin="@dimen/unify_space_12"
        app:loader_corner_radius="@dimen/unify_space_8"
        app:loader_type="line" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <include layout="@layout/item_shimmering_digital_recommendation" />
            <include layout="@layout/item_shimmering_digital_recommendation" />
            <include layout="@layout/item_shimmering_digital_recommendation" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>