<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_lvl2">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/cc_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text_field_placeholder="@string/cc_placeholder_input_number"
        app:text_field_input_type="phone"
        app:text_field_label_static="true" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="?actionBarSize"
        tools:layout_constraintGuide_begin="@dimen/cc_space_90" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/cc_button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cc_cta_btn_primary"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:unifyButtonVariant="filled"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"/>

</androidx.constraintlayout.widget.ConstraintLayout>