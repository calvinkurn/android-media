<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/digital_common_empty_state_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/digital_common_ic_empty_state"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/digital_ic_empty_state_title"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/digital_ic_empty_state_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/digital_common_recom_empty_state_title"
        android:maxLines="2"
        app:typographyType="paragraph_1"
        app:typographyWeight="bold"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/digital_common_empty_state_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/digital_ic_empty_state_desc"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/digital_ic_empty_state_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:typographyType="paragraph_3"
        android:text="@string/digital_common_recom_empty_state_desc"
        app:layout_constraintStart_toEndOf="@id/digital_common_empty_state_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/digital_ic_empty_state_title"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>