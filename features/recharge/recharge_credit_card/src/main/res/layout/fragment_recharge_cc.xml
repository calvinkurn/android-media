<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/input_number_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_8">

        <com.tokopedia.recharge_credit_card.widget.CCClientNumberWidget
            android:id="@+id/cc_widget_client_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"/>

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/list_bank_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_number_area"
        android:text="List Bank"/>

    <ProgressBar
        android:id="@+id/cc_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cc_space_1"
        android:background="@color/cc_separator"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_above="@+id/cc_logo_verified"/>

    <ImageView
        android:id="@+id/cc_logo_verified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cc_ic_logo_verified"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/layout_lvl2"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>