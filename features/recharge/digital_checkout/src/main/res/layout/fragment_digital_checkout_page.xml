<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentCheckout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintBottom_toTopOf="@id/layout_digital_checkout_bottom_view"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Unify_N0"
                android:paddingHorizontal="@dimen/spacing_lvl4"
                android:paddingVertical="@dimen/spacing_lvl3">

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/iconCheckout"
                    android:layout_width="@dimen/layout_lvl5"
                    android:layout_height="@dimen/layout_lvl5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/productTitle"
                    android:layout_width="@dimen/layout_lvl0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_lvl3"
                    android:textColor="@color/Unify_N700_96"
                    app:layout_constraintBottom_toBottomOf="@id/iconCheckout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iconCheckout"
                    app:layout_constraintTop_toTopOf="@id/iconCheckout"
                    app:typographyType="heading_4"
                    tools:text="Listrik PLN" />

                <View
                    android:id="@+id/titleViewSeperator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_lvl3"
                    android:background="@color/Unify_N75"
                    app:layout_constraintTop_toBottomOf="@id/iconCheckout" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/unify_space_12"
                    app:layout_constraintTop_toBottomOf="@id/titleViewSeperator" />

                <LinearLayout
                    android:id="@+id/containerSeeDetailToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/spacing_lvl3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rvDetails"
                    tools:visibility="visible">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tvSeeDetailToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digital_cart_detail_see_detail_label"
                        android:textColor="@color/Unify_G500"
                        app:typographyType="body_3"
                        app:typographyWeight="bold" />

                    <com.tokopedia.unifycomponents.ImageUnify
                        android:id="@+id/ivSeeDetail"
                        android:layout_width="@dimen/layout_lvl2"
                        android:layout_height="@dimen/layout_lvl2"
                        android:layout_marginStart="@dimen/spacing_lvl1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_system_action_arrow_down_normal_24" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/inputPriceContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <com.tokopedia.digital_checkout.presentation.widget.DigitalCartInputPriceWidget
                    android:id="@+id/inputPriceHolderView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMyBills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inputPriceContainer"
                android:orientation="vertical"
                android:paddingBottom="@dimen/spacing_lvl4">

                <com.tokopedia.digital_checkout.presentation.widget.DigitalCartMyBillsWidget
                    android:id="@+id/subscriptionWidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl3"
                    android:visibility="gone" />

                <com.tokopedia.digital_checkout.presentation.widget.DigitalCartMyBillsWidget
                    android:id="@+id/fintechProductWidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl3"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_digital_checkout_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@color/Unify_N0"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.tokopedia.promocheckout.common.view.widget.ButtonPromoCheckoutView
            android:id="@+id/digitalPromoBtnView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTotalPaymentLabel"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:text="@string/digital_checkout_total_payment_label"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toStartOf="@id/btnCheckout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/digitalPromoBtnView"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTotalPayment"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tvTotalPaymentLabel"
            app:layout_constraintStart_toStartOf="@id/tvTotalPaymentLabel"
            app:layout_constraintTop_toBottomOf="@id/tvTotalPaymentLabel"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp.102.500" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:minWidth="@dimen/digital_checkout_checkout_button_min_width"
            android:text="@string/digital_cart_checkout_pay_label"
            app:layout_constraintBottom_toBottomOf="@id/tvTotalPayment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTotalPaymentLabel"
            app:unifyButtonSize="medium" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.tokopedia.empty_state.EmptyStateUnify
        android:id="@+id/viewEmptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        app:unifyEmptyStateOrientation="vertical"
        app:unifyEmptyStateType="page"
        android:background="@color/Unify_N0" />

    <LinearLayout
        android:id="@+id/loaderCheckout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_N0"
        android:gravity="center"
        android:visibility="gone">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/layout_lvl5"
            android:layout_height="@dimen/layout_lvl5"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>