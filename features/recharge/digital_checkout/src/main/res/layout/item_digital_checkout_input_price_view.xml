<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacing_lvl4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDigitalCheckoutInputPriceLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Masukkan jumlah yang dibayar"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="body_2"
            />
        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/etDigitalCheckoutInputPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="@dimen/spacing_lvl6"
            app:text_field_placeholder="@string/digital_cart_hint_input_price"
            />
    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify>