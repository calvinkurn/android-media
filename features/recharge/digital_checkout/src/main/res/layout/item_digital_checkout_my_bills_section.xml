<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:paddingVertical="@dimen/spacing_lvl4"
    android:paddingStart="@dimen/spacing_lvl4">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCheckoutMyBillsHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_96"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/icCheckoutMyBillsInfo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/checkBoxCheckoutMyBills"
        app:layout_constraintTop_toTopOf="@id/checkBoxCheckoutMyBills"
        app:layout_goneMarginRight="@dimen/spacing_lvl4"
        app:typographyType="body_2"
        tools:text="Otomatis Bayar Otomatis" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/icCheckoutMyBillsInfo"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCheckoutMyBillsHeaderTitle"
        app:layout_constraintTop_toTopOf="@id/tvCheckoutMyBillsHeaderTitle"
        app:srcCompat="@drawable/ic_system_action_information_16" />

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/checkBoxCheckoutMyBills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCheckoutMyBillsDescription"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintTop_toBottomOf="@id/tvCheckoutMyBillsHeaderTitle"
        app:layout_constraintStart_toStartOf="@id/tvCheckoutMyBillsHeaderTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="@dimen/spacing_lvl1"
        app:typographyType="body_2"
        tools:text="Pembayaran akan dilakukan secara otomatis pada 2 November 2018 dengan OvoCash." />

</androidx.constraintlayout.widget.ConstraintLayout>