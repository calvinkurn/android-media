<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/spacing_lvl4"
    android:paddingStart="@dimen/spacing_lvl4"
    android:background="@color/Unify_N0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_dg_checkout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvCheckoutMyBillsHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_N700_96"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/icCheckoutMyBillsInfo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginRight="@dimen/spacing_lvl4"
            app:typographyType="body_3"
            tools:text="Bayar Otomatis Bayar Bayar Otomatis Otomatis Bayar Otomatis Bayar Otomatis Bayar Otomatis" />


        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/icCheckoutMyBillsInfo"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:tint="@color/Unify_N200"
            app:layout_constraintEnd_toStartOf="@id/checkBoxCheckoutMyBills"
            app:layout_constraintStart_toEndOf="@id/tvCheckoutMyBillsHeaderTitle"
            app:layout_constraintTop_toTopOf="@id/tvCheckoutMyBillsHeaderTitle"
            app:srcCompat="@drawable/ic_system_status_additional_info_normal_40" />

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/checkBoxCheckoutMyBills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCheckoutMyBillsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintTop_toBottomOf="@id/layout_dg_checkout_header"
        app:typographyType="small"
        tools:text="Pembayaran akan dilakukan secara otomatis pada 2 November 2018 dengan OvoCash." />

</LinearLayout>