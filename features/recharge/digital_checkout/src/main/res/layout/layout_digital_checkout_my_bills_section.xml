<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCheckoutMyBillsHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_NN950_96"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/tvCheckoutMyBillsDescription"
        app:layout_constraintEnd_toStartOf="@id/icCheckoutMyBillsInfo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/checkBoxCheckoutMyBills"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginRight="16dp"
        app:layout_goneMarginStart="16dp"
        app:layout_goneMarginTop="12dp"
        app:typographyType="display_2"
        app:layout_goneMarginBottom="12dp"
        tools:text="Otomatis Bayar Otomatis Otomatis
        Bayar Otomatis Otomatis Bayar Otomatis" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/icCheckoutMyBillsInfo"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/bgAdditionalFintechImage"
        app:layout_constraintStart_toEndOf="@id/tvCheckoutMyBillsHeaderTitle"
        app:layout_constraintTop_toTopOf="@id/tvCheckoutMyBillsHeaderTitle"
        app:srcCompat="@drawable/ic_system_action_information_16"
        tools:visibility="gone" />

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/checkBoxCheckoutMyBills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_goneMarginTop="12dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCheckoutMyBillsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingTop="2dp"
        app:layout_goneMarginTop="12dp"
        app:layout_goneMarginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bgAdditionalFintechImage"
        app:layout_constraintStart_toEndOf="@id/checkBoxCheckoutMyBills"
        app:layout_constraintTop_toBottomOf="@id/tvCheckoutMyBillsHeaderTitle"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="paragraph_3"
        tools:text="Pembayaran akan dilakukan secara Pembayaran akan dilakukan secara Pembayaran akan dilakukan secara " />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/bgAdditionalFintechImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:maxWidth="@dimen/layout_lvl7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:srcCompat="@drawable/bg_tebus_murah_icon"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivAdditionalFintechImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/bgAdditionalFintechImage"
        app:layout_constraintEnd_toEndOf="@id/bgAdditionalFintechImage"
        app:layout_constraintStart_toStartOf="@id/bgAdditionalFintechImage"
        app:layout_constraintTop_toTopOf="@id/bgAdditionalFintechImage"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect"
        tools:srcCompat="@drawable/ic_system_action_information_16"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>