<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_sample"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,9:16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorPrimary"
        tools:ignore="ContentDescription" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/btn_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:icon_name="DELETE"
        app:icon_color_light_enable="@color/white"
        app:icon_color_night_enable="@color/white"
        android:background="@drawable/editor_bg_button_removal"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/canvas"
        app:layout_constraintEnd_toEndOf="@+id/canvas"
        app:layout_constraintStart_toStartOf="@+id/canvas"
        tools:visibility="visible"/>

    <com.tokopedia.editor.ui.widget.DynamicTextCanvasView
        android:id="@+id/canvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,9:16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
