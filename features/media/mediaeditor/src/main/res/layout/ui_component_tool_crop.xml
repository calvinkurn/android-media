<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/uc_tool_crop"
    android:visibility="gone"
    tools:visibility="visible"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/box_crop_1_1"
        android:layout_marginRight="16dp"
        android:background="@drawable/editor_tool_crop_border"
        app:layout_constraintRight_toLeftOf="@id/box_crop_3_4"
        app:layout_constraintBottom_toBottomOf="@id/box_crop_3_4"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <View
        android:id="@+id/box_crop_3_4"
        android:background="@drawable/editor_tool_crop_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="45dp"
        android:layout_height="60dp"/>

    <View
        android:id="@+id/box_crop_2_1"
        android:background="@drawable/editor_tool_crop_border"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@id/box_crop_3_4"
        app:layout_constraintBottom_toBottomOf="@id/box_crop_3_4"
        android:layout_width="70dp"
        android:layout_height="35dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:text="1 : 1"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/box_crop_1_1"
        app:layout_constraintRight_toRightOf="@id/box_crop_1_1"
        app:layout_constraintTop_toBottomOf="@id/box_crop_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:text="3 : 4"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/box_crop_3_4"
        app:layout_constraintRight_toRightOf="@id/box_crop_3_4"
        app:layout_constraintTop_toBottomOf="@id/box_crop_3_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:text="2 : 1"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/box_crop_2_1"
        app:layout_constraintRight_toRightOf="@id/box_crop_2_1"
        app:layout_constraintTop_toBottomOf="@id/box_crop_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>