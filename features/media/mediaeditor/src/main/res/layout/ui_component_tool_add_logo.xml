<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:id="@+id/uc_tool_add_logo"
    android:visibility="gone"
    tools:visibility="visible"
    android:orientation="horizontal"
    android:gravity="center_horizontal">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.CardUnify2
            android:id="@+id/add_logo_upload_button"
            android:padding="10dp"
            app:card_type="border"
            app:cardCornerRadius="8dp"
            android:layout_width="64dp"
            android:layout_height="64dp">

            <com.tokopedia.iconunify.IconUnify
                android:layout_gravity="center"
                app:icon_name="UPLOAD"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

        </com.tokopedia.unifycomponents.CardUnify2>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginTop="6dp"
            app:typographyType="small"
            android:text="Ubah Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_logo_upload_avatar_wrapper"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.CardUnify2
                android:padding="10dp"
                app:card_type="border"
                app:cardCornerRadius="8dp"
                android:layout_width="64dp"
                android:layout_height="64dp">

                <ImageView
                    android:id="@+id/add_logo_upload_avatar"
                    android:layout_gravity="center"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>

            </com.tokopedia.unifycomponents.CardUnify2>

            <com.tokopedia.unifyprinciples.Typography
                android:gravity="center_horizontal"
                android:layout_marginTop="6dp"
                app:typographyType="small"
                android:text="Logo Terakhir"
                android:maxWidth="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginLeft="14dp"
            android:background="@color/Unify_NN300"
            android:layout_width="0.8dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="13dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.CardUnify2
            android:padding="10dp"
            app:card_type="border"
            app:cardCornerRadius="8dp"
            android:layout_width="64dp"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/add_logo_shop_avatar"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

        </com.tokopedia.unifycomponents.CardUnify2>

        <com.tokopedia.unifyprinciples.Typography
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp"
            app:typographyType="small"
            android:text="Foto Profil Tokomu"
            android:maxWidth="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>