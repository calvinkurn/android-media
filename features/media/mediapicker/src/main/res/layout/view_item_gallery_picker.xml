<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.media.picker.ui.widget.layout.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundGravity="center">

    <com.tokopedia.media.picker.ui.widget.thumbnail.MediaThumbnailWidget
        android:id="@+id/img_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/view_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="@drawable/bg_picker_gallery_selected"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_picker_circle_white_color"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_color_night_enable="@color/Unify_GN500"
        app:icon_name="CHECK_CIRCLE"
        android:visibility="gone"
        tools:visibility="visible"/>

</com.tokopedia.media.picker.ui.widget.layout.SquareFrameLayout>
