<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/picker_page_margin_bottom"
    tools:layout_marginTop="0dp"
    android:orientation="vertical">

    <include
        android:id="@+id/album_selector"
        layout="@layout/widget_album_selector" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lst_media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_drawer"
        app:layout_constraintTop_toBottomOf="@+id/album_selector" />

    <com.tokopedia.picker.ui.widget.selectornav.MediaSelectionNavigationWidget
        android:id="@+id/bottom_nav_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:backgroundColorPlaceHolder="@color/Unify_N0"
        app:canReorder="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:placeholder="@drawable/picker_ic_placeholder_media_preview"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>