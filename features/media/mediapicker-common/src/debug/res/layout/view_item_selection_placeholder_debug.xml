<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_image"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/picker_cd_item_selection_placeholder_border"
        android:src="@drawable/picker_rect_grey_thumbnail" />

    <ImageView
        android:id="@+id/image_view_placeholder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:contentDescription="@string/picker_cd_item_selection_placeholder_image"
        tools:src="@drawable/picker_ic_placeholder_media_preview" />

</FrameLayout>