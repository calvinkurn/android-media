<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uc_navigation_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/btn_action"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_name="ARROW_BACK"
        tools:icon_color_night_enable="@color/Unify_Static_Black"
        tools:icon_color_light_enable="@color/Unify_Static_Black"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@color/Unify_Static_White"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_action"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/picker_toolbar_main_title"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picker_toolbar_continue"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unifyButtonSize="medium"
        app:unifyButtonVariant="text"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>