<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_ssa_entry"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ssa_promo_entry"
    android:paddingVertical="16dp"
    android:paddingStart="12dp"
    android:paddingEnd="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_ssa_entry"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_url_src="https://images.tokopedia.net/img/affiliate/ssa/SSAshoplisticon.png" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ssa_entry_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/ssa_entry_promo_title"
        android:textColor="@color/Unify_NN0"
        app:layout_constraintEnd_toStartOf="@id/ssa_action_icon"
        app:layout_constraintStart_toEndOf="@id/image_ssa_entry"
        app:layout_constraintTop_toTopOf="@id/image_ssa_entry"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ssa_entry_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="@string/ssa_entry_promo_desc"
        android:textColor="@color/Unify_NN0"
        app:layout_constraintEnd_toStartOf="@id/ssa_action_icon"
        app:layout_constraintStart_toEndOf="@id/image_ssa_entry"
        app:layout_constraintTop_toBottomOf="@id/ssa_entry_title"
        app:typographyType="small" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ssa_action_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_color_light_disabled="@color/Unify_NN0"
        app:icon_color_light_enable="@color/Unify_NN0"
        app:icon_color_night_disabled="@color/Unify_NN0"
        app:icon_color_night_enable="@color/Unify_NN0"
        app:icon_enable_state="true"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify2>