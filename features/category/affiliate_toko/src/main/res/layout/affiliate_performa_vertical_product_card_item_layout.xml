<?xml version="1.0" encoding="utf-8"?>

<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:card_background_color="@color/Unify_N0"
    app:card_type="shadow"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/product_image"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_image"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="VAIA Sepatu Heels Callya Pink 7CM - Merah Muda, 36" />


        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/status_bullet"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/affiliate_circle_active"
            app:layout_constraintBottom_toBottomOf="@id/product_status"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintTop_toTopOf="@id/product_status" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintLeft_toRightOf="@id/status_bullet"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Aktif" />


        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:id="@+id/pendapatan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pendapatan"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toStartOf="@+id/klik"
            app:layout_constraintStart_toEndOf="@+id/product_image"
            app:layout_constraintTop_toBottomOf="@+id/product_status"
            app:typographyType="body_3" />
        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginTop="@dimen/dp_8"
            android:id="@+id/klik"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Klik"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toStartOf="@+id/terjual"
            app:layout_constraintStart_toEndOf="@+id/pendapatan"
            app:layout_constraintTop_toBottomOf="@+id/product_status"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginTop="@dimen/dp_8"
            android:id="@+id/terjual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Terjual"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/klik"
            app:layout_constraintTop_toBottomOf="@+id/product_status"
            app:typographyType="body_3" />
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/pendapatan_value"
            android:layout_marginTop="@dimen/dp_3"
            android:text="Rp100.000"
            app:layout_constraintTop_toBottomOf="@id/pendapatan"
            app:layout_constraintStart_toStartOf="@id/pendapatan"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/pendapatan_icon"
            app:icon_color_light_enable="@color/Unify_G500"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:rotation="90"
            app:icon_name="ARROW_BACK"
            app:layout_constraintBottom_toBottomOf="@+id/pendapatan_value"
            app:layout_constraintStart_toEndOf="@+id/pendapatan_value"
            app:layout_constraintTop_toTopOf="@+id/pendapatan_value" />
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/klik_value"
            android:layout_marginTop="@dimen/dp_3"
            android:text="100"
            app:layout_constraintTop_toBottomOf="@id/klik"
            app:layout_constraintStart_toStartOf="@id/klik"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/klik_icon"
            app:icon_color_light_enable="@color/Unify_G500"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:rotation="90"
            app:icon_name="ARROW_BACK"
            app:layout_constraintBottom_toBottomOf="@+id/klik_value"
            app:layout_constraintStart_toEndOf="@+id/klik_value"
            app:layout_constraintTop_toTopOf="@+id/klik_value" />
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/terjual_value"
            android:layout_marginTop="@dimen/dp_3"
            android:text="14"
            app:layout_constraintTop_toBottomOf="@id/terjual"
            app:layout_constraintStart_toStartOf="@id/terjual"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/terjual_icon"
            app:icon_color_light_enable="@color/Unify_G500"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:rotation="90"
            app:icon_name="ARROW_BACK"
            app:layout_constraintBottom_toBottomOf="@+id/terjual_value"
            app:layout_constraintStart_toEndOf="@+id/terjual_value"
            app:layout_constraintTop_toTopOf="@+id/terjual_value" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>