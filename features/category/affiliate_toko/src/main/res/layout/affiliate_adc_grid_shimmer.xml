<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/date_picker_loader"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        app:corners="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:alpha="0.8"
        android:id="@+id/date_picker_text_loader"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        app:corners="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/date_picker_loader"
        app:layout_constraintTop_toBottomOf="@id/date_picker_loader" />
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:id="@+id/title_adp"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_24"
        app:corners="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_picker_text_loader"/>

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/title_adp"
        android:layout_marginStart="@dimen/dp_10"
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/card2"
        app:layout_constraintStart_toStartOf="parent" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_margin="@dimen/dp_8"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_12"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="@dimen/dp_112"
                android:layout_height="@dimen/dp_12"/>
        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@id/card1"
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_adp" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_margin="@dimen/dp_8"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_12"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="@dimen/dp_112"
                android:layout_height="@dimen/dp_12"/>
        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>
    <com.tokopedia.unifycomponents.CardUnify
        android:layout_marginStart="@dimen/dp_10"
        android:id="@+id/card3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/card2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_margin="@dimen/dp_8"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_12"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="@dimen/dp_112"
                android:layout_height="@dimen/dp_12"/>
        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@id/card1"
        android:id="@+id/card4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card2" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_margin="@dimen/dp_8"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_12"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:corners="16"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="@dimen/dp_112"
                android:layout_height="@dimen/dp_12"/>
        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_margin="@dimen/dp_16"
        android:id="@+id/title_product"
        android:layout_width="@dimen/dp_140"
        android:layout_height="wrap_content"
        app:corners="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card3"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/title_product_value"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:corners="16"
        app:layout_constraintBottom_toBottomOf="@id/title_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_product" />
</androidx.constraintlayout.widget.ConstraintLayout>