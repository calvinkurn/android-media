<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl4"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/error_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/error_image"
        app:layout_constraintTop_toTopOf="@id/error_image"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl5"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="heading_3"
        android:text="Oops, produk nggak ditemukan"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/error_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/error_image"
        app:layout_constraintTop_toBottomOf="@id/error_title"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginStart="@dimen/spacing_lvl5"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"
        android:textColor="@color/Unify_NN600"
        android:text="Cek ulang atau coba link lain untuk temukan produk yang diinginkan."
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="error_image,error_msg"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/granti_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="@id/barrier"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/lihat_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/barrier"
        android:layout_marginStart="@dimen/spacing_lvl3"
        app:layout_constraintStart_toEndOf="@id/granti_link"
        />

</androidx.constraintlayout.widget.ConstraintLayout>