<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.White"
    android:paddingBottom="60dp">

    <com.tokopedia.unifycomponents.SearchBarUnify
        android:id="@+id/edukasi_navToolbar"
        app:search_bar_placeholder="Mau cari tahu apa?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        app:search_bar_show_icon="false" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_education_page"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edukasi_navToolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>