<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    android:theme="@style/Theme.White">

    <com.tokopedia.searchbar.navigation_component.NavToolbar
        android:id="@+id/edu_navToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:minHeight="?actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:toolbarBackButton="back"
        app:toolbarContentType="typeSearchbar"
        app:toolbarDefaultHint="@string/affiliate_landing_page_search_passive_placeholder"
        app:toolbarInitialFillColor="@color/Unify_NN0"
        app:toolbarInitialTheme="light"
        app:toolbarInvertSearchBarColor="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_education_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edu_navToolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>