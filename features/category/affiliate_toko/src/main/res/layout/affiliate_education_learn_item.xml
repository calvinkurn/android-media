<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/learn_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/learn_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/pelajari_affiliate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/learn_divider"
        app:typographyType="heading_4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kamus_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/learn_header">


        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_text"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            app:icon_color_light_disabled="@color/Unify_NN900"
            app:icon_color_light_enable="@color/Unify_NN900"
            app:icon_color_night_disabled="@color/Unify_NN900"
            app:icon_color_night_enable="@color/Unify_NN900"
            app:icon_name="TEXT"
            app:layout_constraintBottom_toBottomOf="@id/learn_dictionary_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/learn_dictionary_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/learn_dictionary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/kamus_affiliate"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintStart_toEndOf="@id/icon_text"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="display_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/learn_dictionary_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="@string/istilah_dalam_affiliate"
            android:textColor="@color/Unify_NN950_68"
            app:layout_constraintStart_toEndOf="@id/icon_text"
            app:layout_constraintTop_toBottomOf="@id/learn_dictionary_title"
            app:typographyType="display_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bantuan_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/kamus_container">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_help"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            app:icon_color_light_disabled="@color/Unify_NN900"
            app:icon_color_light_enable="@color/Unify_NN900"
            app:icon_color_night_disabled="@color/Unify_NN900"
            app:icon_color_night_enable="@color/Unify_NN900"
            app:icon_name="HELP"
            app:layout_constraintBottom_toBottomOf="@id/learn_help_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/learn_help_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/learn_help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/affiliate_bantuan"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintStart_toEndOf="@id/icon_help"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="display_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/learn_help_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="@string/bantuan_seputar_tokopedia_affiliate"
            android:textColor="@color/Unify_NN950_68"
            app:layout_constraintStart_toEndOf="@id/icon_help"
            app:layout_constraintTop_toBottomOf="@id/learn_help_title"
            app:typographyType="display_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/privasi_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/bantuan_container">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_privacy"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            app:icon_color_light_disabled="@color/Unify_NN900"
            app:icon_color_light_enable="@color/Unify_NN900"
            app:icon_color_night_disabled="@color/Unify_NN900"
            app:icon_color_night_enable="@color/Unify_NN900"
            app:icon_name="POLICY_PRIVACY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/learn_privacy_policy_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/learn_privacy_policy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/affiliate_kebijakan_privasi"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintStart_toEndOf="@id/icon_privacy"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="display_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>