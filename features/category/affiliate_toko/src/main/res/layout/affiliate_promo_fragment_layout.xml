<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.tokopedia.searchbar.navigation_component.NavToolbar
        android:id="@+id/navToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:toolbarAlwaysShowShadow="false"
        app:toolbarBackButton="back"
        app:toolbarContentType="typeTitle"
        app:toolbarInitialTheme="light"
        app:toolbarTitle="@string/affiliate_promo" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_link_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navToolbar"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        android:text="@string/affiliate_paste_product_link" />

    <com.tokopedia.exploreCategory.ui.custom.AffiliateLinkTextField
        android:id="@+id/product_link_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/product_link_text"
        app:layout_constraintStart_toStartOf="@id/product_link_text"
        app:unify_text_field_placeholder="https://tokopedia.com/lipstick..."
        app:unify_text_field_clearable="true"
        app:unify_text_field_label_static="true"
        />

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/global_error"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/Unify_N0"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_link_et"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/affiliate_progress_bar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circular" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/products_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dim_layer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/Unify_NN900"
        android:alpha="0.7"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_link_et"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>