<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_event_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_article_widget"
        android:layout_width="104dp"
        android:layout_height="57dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/article_widget_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_article_widget"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_6"
        tools:text="Produk Trending Bulan Juni 2022, Nomor 5 Bikin Kaget" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/article_widget_item_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_article_widget"
        app:layout_constraintTop_toBottomOf="@id/article_widget_item_title"
        app:typographyType="small"
        tools:text="@string/article_widget_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>


