<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|start"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/navbar_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Affiliate"
            android:text="@string/label_affiliate"
            app:typographyType="heading_3"
            android:gravity="center"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:visibility="gone"
            android:id="@+id/product_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/affiliate_beta"
            android:textColor="@color/Unify_Static_White"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/unify_font_8"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:background="@drawable/beta_tag_bg"
            />
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/navbar_sub_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        tools:text="Affiliate"
        app:typographyType="body_3"
        android:textColor="@color/Unify_NN600"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        />
</LinearLayout>