<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_marginStart="@dimen/dp_16"
        android:id="@+id/iconUnify"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        app:srcCompat="@drawable/affiliate_circle_inactive"
        app:layout_constraintBottom_toBottomOf="@+id/rules_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rules_tv" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/Unify_NN950"
        app:typographyType="body_2"
        android:layout_marginStart="16dp"
        android:id="@+id/rules_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconUnify"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>