<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/affiliate_parent_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_lvl3"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        android:id="@+id/traffic_attribution_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:typographyType="body_2"
        android:layout_marginBottom="@dimen/unify_space_12"
        />

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:visibility="gone"
            android:id="@+id/affiliate_metric_announcement_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/unify_space_48"
            app:closeButtonVisibility="gone"
            app:descriptionText="@string/affiliate_traffic_hari_ini_ticker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tickerShapeType="loose"
            app:tickerType="announcement"
            android:layout_marginBottom="@dimen/unify_space_16"
            android:layout_marginHorizontal="@dimen/spacing_lvl4"
            />

    <com.tokopedia.unifycomponents.DividerUnify
        android:visibility="gone"
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl4"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        android:id="@+id/traffic_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

