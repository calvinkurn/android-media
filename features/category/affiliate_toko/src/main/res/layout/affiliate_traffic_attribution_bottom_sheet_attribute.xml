<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/affiliate_parent_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_lvl3"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/traffic_attribution_text"
        android:text="Jumlah komisi yang kamu dapatkan dari tingkat pembelian produk dan kunjungan."
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:typographyType="body_2"
        android:layout_marginBottom="@dimen/unify_space_12"
        />
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:id="@+id/affilitate_recylerview_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="0dp">

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/affiliate_filter_announcement_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:closeButtonVisibility="gone"
            app:descriptionText="@string/affiliate_traffic_hari_ini_ticker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tickerType="announcement" />
    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_marginHorizontal="-16dp"
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl4"/>
    <androidx.constraintlayout.widget.Group
        android:visibility="gone"
        android:id="@+id/ticker_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="affilitate_recylerview_ticker,divider_2"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/traffic_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

