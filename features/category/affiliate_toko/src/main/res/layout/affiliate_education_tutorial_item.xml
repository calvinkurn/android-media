<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="152dp"
    android:layout_height="72dp">

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/cv_tutorial_topic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="@color/Unify_NN0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tkpd.remoteresourcerequest.view.DeferredImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="26dp"
            app:completeUrl="https://images.tokopedia.net/img/android/res/singleDpi/affiliate_education_tutorial_card_bg.webp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tutorial_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/tutorial_cover_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:unify_image_url_src="https://images.tokopedia.net/img/https:/images.tokopedia.net/img/android/res/singleDpi/affiliate/education_tutorial_background.png"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/ic_tutorial_topic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_tutorial_topic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ic_tutorial_topic"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="paragraph_3"
                tools:text="@tools:sample/first_names" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify2>

</androidx.constraintlayout.widget.ConstraintLayout>