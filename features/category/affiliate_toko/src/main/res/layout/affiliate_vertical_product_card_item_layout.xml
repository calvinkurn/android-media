<?xml version="1.0" encoding="utf-8"?>

<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_4"
    android:paddingBottom="@dimen/dp_4"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    app:card_background_color="@color/Unify_N0"
    app:card_type="shadow"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/product_image"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_image"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="VAIA Sepatu Heels Callya Pink 7CM - Merah Muda, 36" />


        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/status_bullet"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:src="@drawable/affiliate_circle_active"
            app:layout_constraintBottom_toBottomOf="@id/product_status"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintTop_toTopOf="@id/product_status" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/dp_4"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintLeft_toRightOf="@id/status_bullet"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Aktif" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/badge"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_8"
            app:icon_name="BADGE_OS_FILLED"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintTop_toBottomOf="@id/product_status" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_4"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintBottom_toBottomOf="@id/badge"
            app:layout_constraintLeft_toRightOf="@id/badge"
            app:layout_constraintTop_toTopOf="@id/badge"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="VAIA Official" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>