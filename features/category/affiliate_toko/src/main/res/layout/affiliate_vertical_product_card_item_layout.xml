<?xml version="1.0" encoding="utf-8"?>

<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:card_background_color="@color/Unify_N0"
    app:card_type="shadow"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/product_image"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_image"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="VAIA Sepatu Heels Callya Pink 7CM - Merah Muda, 36" />


        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/status_bullet"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/affiliate_circle_active"
            app:layout_constraintBottom_toBottomOf="@id/product_status"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintTop_toTopOf="@id/product_status" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintLeft_toRightOf="@id/status_bullet"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Aktif" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/badge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:icon_name="BADGE_OS_FILLED"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintTop_toBottomOf="@id/product_status" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintBottom_toBottomOf="@id/badge"
            app:layout_constraintLeft_toRightOf="@id/badge"
            app:layout_constraintTop_toTopOf="@id/badge"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="VAIA Official" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>