<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.affiliate_toko">

    <application>
        <activity android:name="com.tokopedia.affiliate.ui.activity.AffiliateActivity"
            android:label="@string/label_affiliate"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify"
            android:launchMode="singleTop"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="@string/host_affiliate_toko"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>
