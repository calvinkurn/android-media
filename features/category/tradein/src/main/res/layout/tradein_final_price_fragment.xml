<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@drawable/bg_toolbar_drop_shadow"
        android:elevation="@dimen/dp_2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="@dimen/dp_56">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_system_action_back_grayscale_24" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/typography_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12"
                android:text="@string/harga_final"
                android:textColor="@color/clr_f531353b"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_4"
                app:typographyWeight="bold" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tkpd.remoteresourcerequest.view.DeferredImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_120"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:scaleType="fitCenter"
                app:imageDpiSupportType="singleDpi"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:remoteFileName="tradein_final_price_img.png" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:gravity="center"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:text="@string/tradein_congrats_message"
                android:textColor="@color/clr_f531353b"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:typographyType="heading_5"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/price_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:gravity="center"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:textColor="@color/clr_fa591d"
                app:layout_constraintTop_toBottomOf="@id/heading"
                app:typographyType="heading_3"
                app:typographyWeight="bold"
                tools:text="Rp3.650.000" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/valid_till"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:gravity="center"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:textColor="@color/clr_AD31353B"
                app:layout_constraintTop_toBottomOf="@id/price_heading"
                app:typographyType="body_3"
                tools:text="Harga valid hingga 10 Jul 2020, 14:00 WIB" />

            <View
                android:id="@+id/divider_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:background="@color/clr_f3f4f5"
                app:layout_constraintTop_toBottomOf="@id/valid_till" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/price_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingTop="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:paddingBottom="@dimen/spacing_lvl3"
                android:text="@string/tradein_detail_harga"
                android:textColor="@color/clr_f531353b"
                app:layout_constraintTop_toBottomOf="@id/divider_view"
                app:typographyType="heading_4"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:textColor="@color/clr_AD31353B"
                app:flow_horizontalBias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/product_price"
                app:layout_constraintTop_toBottomOf="@id/price_details"
                app:typographyType="body_3"
                tools:text="iPhone Xs 256GB Garansi Resmi - Space Gray" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:gravity="end"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:textColor="@color/clr_f531353b"
                app:flow_horizontalBias="0.5"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintLeft_toRightOf="@id/product_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_details"
                app:typographyType="heading_5"
                app:typographyWeight="bold"
                tools:text="Rp22.650.000" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tukar_tambah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:text="@string/tukar_tambah"
                android:textColor="@color/clr_AD31353B"
                app:flow_horizontalBias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tukar_tambah_price"
                app:layout_constraintTop_toBottomOf="@id/product_name"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tukar_tambah_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:gravity="end"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:textColor="@color/clr_f531353b"
                app:flow_horizontalBias="0.5"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintLeft_toRightOf="@id/tukar_tambah"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_name"
                app:typographyType="heading_5"
                app:typographyWeight="bold"
                tools:text="- Rp3.650.000" />

            <View
                android:id="@+id/divider_view_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4"
                android:background="@color/clr_f3f4f5"
                app:layout_constraintTop_toBottomOf="@id/tukar_tambah" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/total_price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:text="@string/tradein_total_product_price"
                android:textColor="@color/clr_f531353b"
                app:flow_horizontalBias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/total_price"
                app:layout_constraintTop_toBottomOf="@id/divider_view_1"
                app:typographyType="heading_4"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:gravity="end"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:textColor="@color/clr_fa591d"
                app:flow_horizontalBias="0.5"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintLeft_toRightOf="@id/total_price_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_view_1"
                app:typographyType="heading_4"
                app:typographyWeight="bold"
                tools:text="Rp19.000.000" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/installment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:textColor="@color/clr_AD31353B"
                app:layout_constraintTop_toBottomOf="@id/total_price_text"
                app:typographyType="body_3"
                android:text="Tersedia cicilan 0% hingga 24 bulan." />

            <View
                android:id="@+id/divider_view_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:background="@color/clr_f3f4f5"
                app:layout_constraintTop_toBottomOf="@id/installment_text" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/checking_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_lvl4"
                android:text="@string/tradein_checking_detail"
                android:textColor="@color/clr_f531353b"
                app:layout_constraintTop_toBottomOf="@id/divider_view_2"
                app:typographyType="heading_4"
                app:typographyWeight="bold" />

            <ImageView
                android:id="@+id/ec_icon_chevron"
                android:layout_width="@dimen/dp_30"
                android:layout_height="0dp"
                android:rotation="-90"
                android:src="@drawable/unify_chips_ic_chevron_normal"
                app:layout_constraintBottom_toBottomOf="@id/checking_details"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/checking_details" />

            <View
                android:id="@+id/divider_view_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_lvl3"
                android:background="@color/clr_f3f4f5"
                app:layout_constraintTop_toBottomOf="@id/checking_details" />

            <View
                android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/btn_continue"
                app:layout_constraintTop_toBottomOf="@id/divider_view_3" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_lvl4"
                android:gravity="center_horizontal"
                android:text="@string/buy_now"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline" />

            <RelativeLayout
                android:id="@+id/progress_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                tools:visibility="gone">

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <com.tokopedia.globalerror.GlobalError
                android:id="@+id/global_error"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>