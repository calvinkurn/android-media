<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/card_background">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_promo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="PROMO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/promo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toTopOf="@id/promo_detail"
        app:layout_constraintLeft_toRightOf="@id/iv_promo"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Promo Tukar Tambah buatmu" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/promo_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_promo"
        app:layout_constraintTop_toBottomOf="@id/promo_title"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="Kamu bisa hemat Rp1.000.000" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>