<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/phone_detail_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tradein_rincian_hp_kamu"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_info"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:icon_name="INFORMATION"
        app:layout_constraintBottom_toBottomOf="@id/phone_detail_heading"
        app:layout_constraintLeft_toRightOf="@id/phone_detail_heading"
        app:layout_constraintTop_toTopOf="@id/phone_detail_heading" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_layout_hp_kamu"
        app:layout_constraintTop_toBottomOf="@id/phone_detail_heading"
        android:layout_marginTop="12dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/linear_layout_hp_kamu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/help_device_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tradein_help_device_text"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parent_layout_hp_kamu"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />


</androidx.constraintlayout.widget.ConstraintLayout>