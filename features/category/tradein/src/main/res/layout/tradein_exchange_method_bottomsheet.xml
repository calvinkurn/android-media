<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:closeButtonVisibility="gone"
        app:descriptionText="@string/tradein_exchange_ticker"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerShapeType="loose"
        app:tickerType="announcement" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tradein_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tradein_ditukar_di_alamatmu"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ticker_address_info"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/tradein_p1_tick"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="CHECK_BIG"
        app:layout_constraintBottom_toBottomOf="@id/tradein_p1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tradein_p1"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tradein_p1_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintTop_toBottomOf="@id/tradein_p1"
        app:typographyType="heading_5"
        tools:text="Rp2.500.000 - Rp3.500.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tradein_p1_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/tradein_undiagnosed_info_text"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintTop_toBottomOf="@id/tradein_p1_price"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <View
        android:id="@+id/tradein_p1_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ticker_address_info"
        app:layout_constraintBottom_toTopOf="@id/divider"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tradein_p1_info" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tradein_p3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tradein_ditukar_di_indomaret"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/tradein_p3_tick"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="CHECK_BIG"
        app:layout_constraintBottom_toBottomOf="@id/tradein_p3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tradein_p3"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tradein_p3_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintTop_toBottomOf="@id/tradein_p3"
        app:typographyType="heading_5"
        tools:text="Rp2.500.000 - Rp3.500.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tradein_p3_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/tradein_undiagnosed_info_text"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintTop_toBottomOf="@id/tradein_p3_price"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <View
        android:id="@+id/tradein_p3_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>