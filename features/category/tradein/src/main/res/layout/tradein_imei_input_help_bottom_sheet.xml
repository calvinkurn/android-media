<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N700_68">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none"
        android:background="@drawable/header_bottom_sheet_rounded_white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16">

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close_default" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_96"
                android:lineSpacingExtra="6sp"
                app:typographyWeight="bold"
                app:typographyType="heading_3"
                android:layout_marginLeft="@dimen/dp_16"
                app:layout_constraintLeft_toRightOf="@id/close_button"
                app:layout_constraintTop_toTopOf="@id/close_button"
                app:layout_constraintBottom_toBottomOf="@id/close_button"
                android:text="@string/tradein_check_imei"
                />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/heading_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6sp"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/tradein_you_can_find_imei"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintTop_toBottomOf="@id/close_button"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/heading_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintTop_toBottomOf="@id/heading_1"
                app:typographyType="heading_5"
                app:typographyWeight="reguler"
                android:text="@string/tradein_find_imei_settings" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/point_1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:lineSpacingExtra="6sp"
                android:text="@string/tradein_imei_label_1"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/heading_2"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/point_1_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_8"
                android:lineSpacingExtra="6sp"
                android:text="@string/tradein_imei_txt_1"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintLeft_toRightOf="@id/point_1_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/heading_2"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tkpd.remoteresourcerequest.view.DeferredImageView
                android:id="@+id/point_1_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_marginTop="@dimen/dp_16"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="H,3:4"
                app:layout_constraintTop_toBottomOf="@id/point_1_txt"
                app:remoteFileName="tradein_help_one.png" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/point_2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="6sp"
                android:text="@string/tradein_imei_label_2"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/point_1_img"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/point_2_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="6sp"
                android:text="@string/tradein_imei_txt_2"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintLeft_toRightOf="@id/point_2_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/point_1_img"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tkpd.remoteresourcerequest.view.DeferredImageView
                android:id="@+id/point_2_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_marginTop="@dimen/dp_16"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="H,3:4"
                app:layout_constraintTop_toBottomOf="@id/point_2_txt"
                app:remoteFileName="tradein_help_two.png"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/point_3_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="6sp"
                android:text="@string/tradein_imei_label_3"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/point_2_img"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/point_3_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="6sp"
                android:text="@string/tradein_imei_txt_3"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintLeft_toRightOf="@id/point_3_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/point_2_img"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tkpd.remoteresourcerequest.view.DeferredImageView
                android:id="@+id/point_3_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_marginTop="@dimen/dp_16"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="H,3:4"
                app:layout_constraintTop_toBottomOf="@id/point_3_txt"
                app:remoteFileName="tradein_help_three.png"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/point_4_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="6sp"
                android:text="@string/tradein_imei_label_4"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/point_3_img"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/point_4_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="6sp"
                android:text="@string/tradein_imei_txt_4"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintLeft_toRightOf="@id/point_4_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/point_3_img"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tkpd.remoteresourcerequest.view.DeferredImageView
                android:id="@+id/point_4_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_24"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@id/point_4_txt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:remoteFileName="tradein_help_four.png"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>