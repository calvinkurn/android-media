<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_8"
    android:elevation="@dimen/dp_4"
    tools:parentTag="view.customview.TradeInTextView">

    <ImageView
        android:id="@+id/iv_tukar_tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@id/tv_text_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_tambah_title"
        app:srcCompat="@drawable/tradein_blue" />

    <TextView
        android:id="@+id/tv_tambah_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:lineSpacingExtra="@dimen/dp_6"
        android:text="Tukar tambah sekarang juga!"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_tukar_tambah"
        app:layout_constraintRight_toLeftOf="@id/iv_arrow_right"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_text_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/text_price_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_tukar_tambah"
        app:layout_constraintRight_toLeftOf="@id/iv_arrow_right"
        app:layout_constraintTop_toBottomOf="@id/tv_tambah_title" />

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/tv_text_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_tambah_title"
        app:srcCompat="@drawable/ic_arrow_right_grey" />

</merge>