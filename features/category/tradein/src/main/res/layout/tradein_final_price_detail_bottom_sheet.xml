<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_ae31353b">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_16"
        android:background="@drawable/header_bottom_sheet_rounded_white">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_default" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:lineSpacingExtra="6sp"
            android:text="@string/tradein_detail_pengecekan"
            android:textColor="@color/clr_f531353b"
            app:layout_constraintBottom_toBottomOf="@id/close_button"
            app:layout_constraintLeft_toRightOf="@id/close_button"
            app:layout_constraintTop_toTopOf="@id/close_button"
            app:typographyType="heading_2"
            app:typographyWeight="bold" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/close_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>