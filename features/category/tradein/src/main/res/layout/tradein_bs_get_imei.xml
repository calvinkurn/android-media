<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <com.tokopedia.unifycomponents.TextAreaUnify
        android:id="@+id/wrapper_imei"
        style="@style/HintTextInputLayout"
        app:text_area_label="@string/tradein_imei_label"
        app:text_area_message="@string/tradein_imei_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_radio_group"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:clickable="false">
    </com.tokopedia.unifycomponents.TextAreaUnify>

    <TextView
        android:id="@+id/exchange_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:lineSpacingExtra="4sp"
        android:text="IMEI di pengaturan"
        android:textColor="@color/clr_f531353b"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shipper_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="1. Buka Pengaturan > Umum > Mengenai. \n2. Cari nomor seri, IMEI perangkat kamu.
\n3. Sentuh dan tahan nomor IMEI hingga tersalin."
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exchange_text" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_96"
        android:layout_marginBottom="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="@string/tradein_lanjut" />

</LinearLayout>
