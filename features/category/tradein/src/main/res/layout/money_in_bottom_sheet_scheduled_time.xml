<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.tokopedia.profilecompletion.addbod.view.widget.numberpicker.NumberPicker
        android:id="@+id/date_spinner"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_120"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:np_align="CENTER"
        app:np_fadingEdgeEnabled="false"
        app:np_selectedTextColor="@android:color/black"
        app:np_textColor="@color/unify_N700_44"
        app:np_textSize="14sp"
        app:np_wheelItemCount="3"
        app:np_wrapSelectorWheel="true" />

    <com.tokopedia.profilecompletion.addbod.view.widget.numberpicker.NumberPicker
        android:id="@+id/time_spinner"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_120"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:np_align="CENTER"
        app:np_fadingEdgeEnabled="false"
        app:np_selectedTextColor="@android:color/black"
        app:np_textColor="@color/unify_N700_44"
        app:np_textSize="14sp"
        app:np_wheelItemCount="3"
        app:np_wrapSelectorWheel="true"  />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/grey_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_spinner" />


    <Button
        android:id="@+id/courier_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_44"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_green_rounded_tradein"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/choose"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

</android.support.constraint.ConstraintLayout>
