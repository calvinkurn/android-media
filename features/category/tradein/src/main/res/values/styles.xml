<resources>

    <style name="Theme.AppCompat.Translucent" parent="Theme.WhiteUnify">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TradeInHintTextInputLayout" parent="TextInputLayout">
        <item name="defaultTextColorLabel">@color/Unify_N700_44</item>
        <item name="focusedTextColorLabel">@color/Unify_N700_44</item>
        <item name="disabledTextColorLabel">@color/Unify_N700_44</item>
        <item name="android:theme">@style/TradeInHintTextInputLayoutColorLine</item>
    </style>

    <style name="TradeInHintTextInputLayoutColorLine" parent="TextInputLayoutColorLine">
        <item name="android:textColorHint">@color/Unify_N100</item>
    </style>
</resources>
