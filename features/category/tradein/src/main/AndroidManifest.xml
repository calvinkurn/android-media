<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.tradein">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:label="Tukar Tambah"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.viewcontrollers.TradeInHomeActivity"
            android:label="@string/tukar_tambah">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_moneyin"
                    android:pathPattern="@string/path_device_validation"/>
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_category"
                    android:path="@string/path_tradein"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".view.viewcontrollers.FinalPriceActivity"
            android:label="@string/harga_final" >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_category"
                    android:path="@string/path_final_price"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".view.viewcontrollers.MoneyInCheckoutActivity"
            android:label="@string/checkout" />
    </application>
</manifest>
