<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Samsung Galaxy Tab 4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clShopInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_rounded_border_dark"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProductName">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/lnShopInfo" />

        <LinearLayout
            android:id="@+id/lnShopInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBadge"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                tools:text="Samsung Indonesia" />

            <View
                android:id="@+id/tvPoint"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_circle_border_dark" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvShopLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                tools:text="Jakarta" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvShopCredibility"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/lnShopInfo"
            app:layout_constraintTop_toBottomOf="@id/lnShopInfo">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvShopResposiveChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                app:typographyType="display_3"
                tools:text="± 40 menit balas chat" />

            <View
                android:id="@+id/tvPointCredibility"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_circle_border_dark" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvShopResponsiveOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                app:typographyType="display_3"
                tools:text="± 3 jam pesanan diproses" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_border_dark"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clShopInfo">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvVariantLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            android:layout_marginTop="6dp"
            tools:text="Pilih varian: " />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvVariantValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toEndOf="@id/tvVariantLabel"
            app:layout_constraintTop_toTopOf="@id/tvVariantLabel"
            app:layout_constraintBottom_toBottomOf="@id/tvVariantLabel"
            app:typographyType="body_2"
            tools:text="Variant 1, Variant 2"
            android:layout_marginStart="4dp"
            />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/dividerVariant"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvVariantLabel"
            app:layout_constraintBottom_toTopOf="@id/barrierTop"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tvVariantValue,tvVariantLabel,dividerVariant"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvVariantLabel,tvVariantValue,dividerVariant"
            app:barrierDirection="bottom"/>

        <com.tokopedia.unifycomponents.CardUnify2
            android:id="@+id/cvProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:card_border_color="@color/transparent"
            app:card_type="clear"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/barrierTop"
            app:layout_constraintBottom_toTopOf="@id/barrier">

            <LinearLayout
                android:layout_width="98dp"
                android:layout_height="116dp"
                android:background="@color/Unify_NN800"
                android:orientation="vertical">

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/ivProduct"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    app:unify_image_corner_radius="0"

                    />

                <com.tokopedia.unifycomponents.ProgressBarUnify
                    android:id="@+id/progressProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    app:unify_progress_bar_color_type="color_red"
                    app:unify_progress_bar_height="6"
                    app:unify_progress_bar_value="80" />

            </LinearLayout>
        </com.tokopedia.unifycomponents.CardUnify2>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clProductInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cvProduct"
            app:layout_constraintStart_toEndOf="@id/cvProduct">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="display_2"
                tools:text="Rp9.500.000" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvSlashPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintStart_toEndOf="@id/tvPrice"
                app:layout_constraintTop_toTopOf="@id/tvPrice"
                app:layout_constraintBottom_toBottomOf="@id/tvPrice"
                app:typographyType="small"
                tools:text="Rp9.500.000"
                android:layout_marginStart="2dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/flPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrice">

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/ivPromo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    app:layout_constraintStart_toStartOf="@id/tvLabelPromo"
                    app:layout_constraintEnd_toEndOf="@id/tvLabelPromo"
                    app:layout_constraintTop_toTopOf="@id/tvLabelPromo"
                    app:layout_constraintBottom_toBottomOf="@id/tvLabelPromo"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tvLabelPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_NN950"
                    app:typographyType="small"
                    android:visibility="visible"
                    tools:text="Rp9.500.000"
                    android:padding="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvLabelDisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_YN500"
                app:layout_constraintStart_toEndOf="@id/flPromo"
                app:layout_constraintTop_toTopOf="@id/flPromo"
                app:layout_constraintBottom_toBottomOf="@id/flPromo"
                app:typographyType="small"
                app:typographyWeight="bold"
                android:visibility="visible"
                tools:text="+2 lain, disc 10%"
                android:layout_marginStart="4dp"
                />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/productCardImageSalesRatingFloat"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="@string/product_card_content_desc_imageRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvSalesRatingFloat"
                app:layout_constraintBottom_toBottomOf="@id/tvSalesRatingFloat"
                app:icon_color_light_enable="@color/Unify_YN300"
                app:icon_color_night_enable="@color/Unify_YN600"
                app:icon_name="STAR_FILLED"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvSalesRatingFloat"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="2dp"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_NN950_68"
                app:layout_constraintStart_toEndOf="@id/productCardImageSalesRatingFloat"
                app:layout_constraintTop_toBottomOf="@id/flPromo"
                app:typographyType="body_3"
                tools:text="4.8"
                tools:visibility="visible" />

            <View
                android:id="@+id/salesRatingFloatLine"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/bg_circle_border_dark"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tvSalesRatingFloat"
                app:layout_constraintStart_toEndOf="@+id/tvSalesRatingFloat"
                app:layout_constraintTop_toTopOf="@id/tvSalesRatingFloat"
                app:layout_constraintEnd_toStartOf="@+id/tvTotalSold"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvTotalSold"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/Unify_NN950_68"
                app:layout_constraintStart_toEndOf="@id/salesRatingFloatLine"
                app:layout_constraintTop_toTopOf="@id/tvSalesRatingFloat"
                app:layout_constraintBottom_toBottomOf="@id/tvSalesRatingFloat"
                app:layout_constraintEnd_toEndOf="parent"
                app:typographyType="body_3"
                tools:text="Terjual 122"
                tools:visibility="visible"
                />


            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/ivFreeOngkir"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="@string/product_card_content_desc_imageRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvEstimation"
                app:layout_constraintBottom_toBottomOf="@id/tvEstimation"
                tools:visibility="visible" />

            <View
                android:id="@+id/vFreeOngkir"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/bg_circle_border_dark"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ivFreeOngkir"
                app:layout_constraintStart_toEndOf="@+id/ivFreeOngkir"
                app:layout_constraintTop_toTopOf="@id/ivFreeOngkir"
                app:layout_constraintEnd_toStartOf="@+id/tvEstimation"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvEstimation"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_NN950_68"
                app:layout_constraintStart_toEndOf="@id/vFreeOngkir"
                app:layout_constraintTop_toBottomOf="@id/tvSalesRatingFloat"
                app:typographyType="body_3"
                tools:text="Tiba Hari ini"
                tools:visibility="visible" />

            <View
                android:id="@+id/vGuarantee"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/bg_circle_border_dark"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tvEstimation"
                app:layout_constraintStart_toEndOf="@+id/tvEstimation"
                app:layout_constraintTop_toTopOf="@id/tvEstimation"
                app:layout_constraintEnd_toStartOf="@+id/tvGuarantee"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvGuarantee"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/Unify_NN950_68"
                app:layout_constraintStart_toEndOf="@id/vGuarantee"
                app:layout_constraintTop_toTopOf="@id/tvEstimation"
                app:layout_constraintBottom_toBottomOf="@id/tvEstimation"
                app:layout_constraintEnd_toEndOf="parent"
                app:typographyType="body_3"
                tools:text="Garansi Toko"
                tools:visibility="visible" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/ivInstallment"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="@string/product_card_content_desc_imageRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvInstallment"
                app:layout_constraintBottom_toBottomOf="@id/tvInstallment"
                app:icon_color_light_enable="@color/Unify_NN500"
                app:icon_color_night_enable="@color/Unify_NN500"
                app:icon_name="SERVICE_FILLED"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvInstallment"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="2dp"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintStart_toEndOf="@id/productCardImageSalesRatingFloat"
                app:layout_constraintTop_toBottomOf="@id/tvEstimation"
                app:typographyType="body_3"
                tools:text="Cicil dari Rp450.000/bulan"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="ivInstallment,tvInstallment"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="cvProduct,clProductInfo"
            app:barrierDirection="bottom"/>
        
        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/barrier" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnAtc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:text="@string/catalog_add_to_cart"
            app:unifyButtonSize="medium"
            android:layout_marginTop="12dp"
            app:unifyButtonLeftDrawable="@drawable/iconunify_cart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnChat"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:unifyButtonSize="medium"
            app:unifyButtonVariant="ghost"
            app:unifyButtonInvers="true"
            app:unifyButtonLeftDrawable="@drawable/iconunify_chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnAtc"
            app:layout_constraintTop_toTopOf="@id/btnAtc"
            app:layout_constraintBottom_toBottomOf="@id/btnAtc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>