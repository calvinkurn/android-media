<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tfSpecCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/Unify_NN950"
        tools:text="Tahun Rilis"
        android:maxLines="1"
        android:ellipsize="end"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <View
        android:id="@+id/divSpecCategory"
        android:background="@color/dms_static_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tfSpecTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        tools:text="Tipe"
        android:maxLines="1"
        android:ellipsize="end"
        app:typographyType="small"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tfSpecValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/Unify_NN950"
        tools:text="2021"
        app:typographyType="small"/>

    <View
        android:id="@+id/divSpecValue"
        android:background="@color/dms_static_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>