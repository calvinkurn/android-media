<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/buyer_review_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_border_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/card_br_shop_info_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beli di"
                    android:textColor="@color/Unify_NN600"
                    android:textSize="12sp"
                    app:typographyType="display_3"
                    app:typographyWeight="reguler" />

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/card_br_shop_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="5dp"
                    tools:src="@drawable/ic_official_store" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/card_br_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/Unify_NN950"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:typographyType="display_3"
                    app:typographyWeight="reguler"
                    tools:text="Lamer Indonesia" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/divShopInfo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/card_br_reviewer_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter"
                    app:unify_image_type="circle"
                    tools:srcCompat="@tools:sample/avatars" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/card_br_reviewer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="2dp"
                            android:textColor="@color/Unify_NN950"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:typographyType="display_3"
                            app:typographyWeight="bold"
                            tools:text="Karina" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/card_br_separator_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" • "
                            app:typographyType="display_3"
                            android:textColor="@color/Unify_NN950"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:typographyWeight="reguler" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/card_br_reviewer_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="2dp"
                            android:textColor="@color/dms_static_green_reviewer_status"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:typographyType="display_3"
                            app:typographyWeight="reguler"
                            tools:text="Juara Ulasan Fashion Wanita" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llUserReputation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/card_br_total_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Unify_NN600"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:typographyType="display_3"
                            app:typographyWeight="reguler"
                            tools:text="6 ulasan lengkap" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/card_br_separator_total_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" • "
                            app:typographyType="display_3"
                            android:textColor="@color/Unify_NN950"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:typographyWeight="reguler" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/card_br_review_total_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Unify_NN600"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:typographyType="display_3"
                            app:typographyWeight="reguler"
                            tools:text="6 terbantu" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llAdditionalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/card_br_product_rating"
                    style="@style/RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4.5" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/card_br_separator_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    app:typographyType="display_3"
                    android:textColor="@color/Unify_NN600"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:typographyWeight="reguler" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/card_br_variant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_NN600"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:typographyType="display_3"
                    app:typographyWeight="reguler"
                    tools:text="Avocado Green" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/card_br_separator_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    app:typographyType="display_3"
                    android:textColor="@color/Unify_NN600"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:typographyWeight="reguler" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/card_br_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_NN600"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:typographyType="display_3"
                    app:typographyWeight="reguler"
                    tools:text="3 hari lalu" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/card_br_product_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:textColor="@color/Unify_NN950"
                android:textSize="12sp"
                app:typographyType="paragraph_3"
                app:typographyWeight="reguler"
                tools:text="I'm 57 years old and I have dry skin! I absolutely love this product. Has nice consistency that slips in nicely after I wash my face. When I...Selengkapnya" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_img_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_buyer_image_product_review"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>