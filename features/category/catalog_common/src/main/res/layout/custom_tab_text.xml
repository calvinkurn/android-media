<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/tab_item_padding"
    android:paddingRight="@dimen/tab_item_padding"
    android:orientation="horizontal"
    tools:ignore="DimageUsage">

    <LinearLayout
        android:id="@+id/tab_item_text_wrapper_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tab_item_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Tes"
            android:textColor="@color/tab_text_selector_color"
            app:typographyType="display_2"
            android:singleLine="true"
            app:typographyWeight="bold"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>