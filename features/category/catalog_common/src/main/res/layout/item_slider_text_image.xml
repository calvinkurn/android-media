<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="8dp"
    android:paddingTop="16dp"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvHighlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="display_3"
        tools:text="Highlight has a max. 1 line"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="paragraph_2"
        tools:text="The title has a max. of 2 lines, make sure to make it as concise as possible"
        android:textColor="@color/Unify_NN950"
        android:layout_marginTop="4dp"
        app:typographyWeight="bold"
        android:ellipsize="end"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="display_3"
        tools:text="The description must have 4 lines! so please give as much context as possible but make it concise! Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:lines="4"
        />
</LinearLayout>