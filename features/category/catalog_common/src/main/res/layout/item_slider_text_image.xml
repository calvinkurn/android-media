<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="135dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="display_3"
            tools:text="Highlight has a max. 1 line"
            android:textColor="@color/Unify_NN600"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="35"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="paragraph_2"
            tools:text="Highlight has a max. 1 line"
            android:textColor="@color/Unify_NN950"
            android:layout_marginTop="8dp"
            app:typographyWeight="bold"
            android:maxLength="55"
            android:ellipsize="end"
            android:maxLines="2"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="display_3"
            tools:text="The description must have 4 lines! so please give as much context as possible but make it concise! Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed"
            android:textColor="@color/Unify_NN600"
            android:layout_marginTop="4dp"
            android:maxLength="145"
            android:ellipsize="end"
            android:maxLines="4"
            />
    </LinearLayout>

</LinearLayout>