<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/t_promo_white_50"
   >

    <com.tokopedia.discovery2.CardConstraintLayout
        android:id="@+id/couponView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:padding="10dp"
        app:cornerRadius="8dp"
        tools:background="@color/colorAccent">

        <com.tokopedia.discovery2.view.RoundImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tiger_square" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hellosdaw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />
    </com.tokopedia.discovery2.CardConstraintLayout>

</LinearLayout>