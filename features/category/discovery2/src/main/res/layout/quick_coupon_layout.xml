<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_4FD15A"
    android:layout_marginVertical="@dimen/dp_8"
    tools:visibility="visible">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/applied_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/title_tv"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        tools:src="@drawable/discovery_gold_merchant_icon"
        tools:visibility="gone"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_marginVertical="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/apply_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/applied_img"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:layout_marginLeft="@dimen/dp_8"
        tools:text="Kupon Cashback 80%"
        app:layout_goneMarginLeft="@dimen/dp_12"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/apply_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintLeft_toRightOf="@id/title_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:text="@string/pakai"
        tools:text="Pakai"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/shimmer_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>