<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/vertical_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/filter_image_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_28"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:remoteFileName="ic_product_empty_state.png"
        tools:src="@drawable/empty_photo" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/filter_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:contentDescription="@string/content_desc_title_tv"
        android:text="@string/filter_empty_state_title"
        android:textColor="@color/clr_f531353b"
        app:layout_constraintEnd_toEndOf="@id/filter_image_empty_state"
        app:layout_constraintStart_toStartOf="@id/filter_image_empty_state"
        app:layout_constraintTop_toBottomOf="@id/filter_image_empty_state"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/filter_decription_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_25"
        android:text="@string/filter_empty_state_description"
        android:textColor="@color/clr_ae31353b"
        app:layout_constraintEnd_toEndOf="@id/filter_title_tv"
        app:layout_constraintStart_toStartOf="@id/filter_title_tv"
        app:layout_constraintTop_toBottomOf="@id/filter_title_tv"
        app:typographyType="body_3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_25"
        android:text="@string/filter_empty_state_description"
        android:textColor="@color/clr_ae31353b"
        app:layout_constraintTop_toBottomOf="@+id/filter_decription_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyType="body_3" />

</androidx.constraintlayout.widget.ConstraintLayout>
