<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shop_cpm_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:clipChildren="false"
    android:clipToPadding="false">

    <View
        android:id="@+id/card_background"
        android:layout_width="@dimen/shop_card_width"
        android:layout_height="@dimen/shop_card_height"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@drawable/card_background_with_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_11"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/sp_2"
        android:maxLines="3"
        android:textColor="@color/black_70"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintStart_toEndOf="@+id/shop_image"
        app:layout_constraintTop_toTopOf="@+id/card_background"
        app:typographyType="small"
        tools:text="Kamera terbaik yang dibuat\nkhusus fotografer profesional.Kunjungi Tokoesfrggregreg" />


    <ImageView
        android:id="@+id/shop_image"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/discovery_bg_image_circular_shadow"
        android:elevation="@dimen/dp_4"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintEnd_toStartOf="@id/card_background"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintTop_toTopOf="@id/card_background" />


</androidx.constraintlayout.widget.ConstraintLayout>