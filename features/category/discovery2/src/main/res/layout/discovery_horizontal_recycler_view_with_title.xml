<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/horizontal_rv_withTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/discovery_horizontal_rv_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/horizontal_rv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/Unify_N700"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/discovery_horizontal_rv_background"
        app:layout_constraintTop_toTopOf="@id/discovery_horizontal_rv_background"
        app:typographyType="heading_3"
        tools:text="Preview with Brand Logo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/discovery_horizontal_rv_background"
        app:layout_constraintLeft_toLeftOf="@id/discovery_horizontal_rv_background"
        app:layout_constraintTop_toBottomOf="@id/horizontal_rv_title"
        tools:itemCount="2"
        tools:listitem="@layout/brand_recommendation_layout_item" />

</androidx.constraintlayout.widget.ConstraintLayout>