<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/horizontal_rv_withTitle"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/discovery_horizontal_rv_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@color/orange_100"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/horizontal_rv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="heading_3"
        android:textColor="@color/black"
        android:lineSpacingExtra="6sp"
        android:layout_marginBottom="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/discovery_horizontal_rv_background"
        app:layout_constraintTop_toTopOf="@id/discovery_horizontal_rv_background"
        tools:text="Preview with Brand Logo"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="@id/discovery_horizontal_rv_background"
        app:layout_constraintTop_toBottomOf="@id/horizontal_rv_title"
        app:layout_constraintBottom_toBottomOf="@id/discovery_horizontal_rv_background"
        tools:listitem="@layout/brand_recommendation_layout_item"
        tools:itemCount="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>