<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/discovery_cpm_promoted_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#61000000"
        android:textSize="@dimen/sp_8"
        android:layout_margin ="@dimen/dp_5"
        app:layout_constraintBaseline_toBaselineOf="@+id/discovery_cpm_promoted_brand_name"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Promoted by" />

    <ImageView
        android:id="@+id/discovery_cpm_badge"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@id/discovery_cpm_promoted_text"
        app:layout_constraintBottom_toBottomOf="@id/discovery_cpm_promoted_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/black_70"/>

    <TextView
        android:id="@+id/discovery_cpm_promoted_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:textColor="@color/black_70"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@id/discovery_cpm_badge"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Canon Official"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/discovery_cpm_topads_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discovery_cpm_promoted_text"
        tools:listitem="@layout/item_cpm_topads_shop_layout"
        tools:itemCount="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>