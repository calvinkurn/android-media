<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:textColor="@color/clr_f531353b"
        app:layout_constraintBottom_toTopOf="@id/sub_header"
        app:layout_constraintEnd_toStartOf="@id/lihat_semua_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        tools:text="Title" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/sub_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:textColor="@color/clr_61000000"
        app:layout_constraintEnd_toStartOf="@id/lihat_semua_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:typographyType="body_3"
        tools:text="Sub header" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/lihat_semua_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:textColor="@color/clr_03AC0E"
        app:layout_constraintBottom_toBottomOf="@id/sub_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        app:unifyButtonType="alternate"
        tools:text="Lihat Semua" />
</merge>