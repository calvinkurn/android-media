<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/image_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_28"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/empty_photo"
        app:remoteFileName="sale_end_state.png"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        android:textColor="@color/clr_f531353b"
        android:text="@string/ongoing_end_title"
        app:layout_constraintEnd_toEndOf="@id/image_empty_state"
        app:layout_constraintStart_toStartOf="@id/image_empty_state"
        app:layout_constraintTop_toBottomOf="@id/image_empty_state" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/decription_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:paddingHorizontal="@dimen/dp_25"
        android:textColor="@color/clr_ae31353b"
        app:typographyType="body_3"
        android:gravity="center"
        android:text="@string/ongoing_end_description"
        app:layout_constraintEnd_toEndOf="@id/image_empty_state"
        app:layout_constraintStart_toStartOf="@id/image_empty_state"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/saleStateCTA"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_24"
        android:text="@string/ongoing_end_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/decription_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>