<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/unify_space_12"
    android:paddingBottom="@dimen/unify_space_8">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/Unify_N700_96"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/sub_header_tv"
        app:layout_constraintEnd_toStartOf="@id/lihat_semua_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Title"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/sub_header_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_68"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/lihat_semua_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:typographyType="body_3"
        tools:text="Sub header"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/lihat_semua_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/lihat_semua"
        android:textColor="@color/Unify_G500"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/sub_header_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        app:unifyButtonType="alternate"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>