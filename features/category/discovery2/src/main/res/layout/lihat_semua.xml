<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/unify_space_12"
    android:paddingBottom="@dimen/unify_space_8">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_iv_parent"
        android:padding="@dimen/dp_4"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_iv"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:id="@+id/bg_iv"
        android:scaleType="fitXY"
        tools:background="@color/green_300"
        app:layout_constraintStart_toEndOf="@+id/title_iv_parent"
        app:layout_constraintEnd_toEndOf="@id/data_parent"
        app:layout_constraintTop_toTopOf="@+id/data_parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data_parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/lihat_semua_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_iv_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_20"
                android:textColor="@color/Unify_N700_96"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/sub_header_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:typographyType="heading_4"
                app:typographyWeight="bold"
                tools:text="Title"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/sub_header_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:layout_marginEnd="@dimen/dp_20"
                android:textColor="@color/Unify_N700_68"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/timer_lihat_semua"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle = "packed"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:typographyType="body_3"
                tools:text="Sub header"
                tools:visibility="visible" />

            <com.tokopedia.unifycomponents.timer.TimerUnifySingle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/timer_lihat_semua"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sub_header_tv"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/lihat_semua_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/dp_20"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/lihat_semua"
        android:textColor="@color/Unify_G500"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        app:unifyButtonType="alternate"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>