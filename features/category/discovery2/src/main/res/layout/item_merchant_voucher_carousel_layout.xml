<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardBackgroundColor="@color/Unify_PN100"
    tools:parentTag="com.google.android.material.card.MaterialCardView">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/card_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxHeight="150dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_parent"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/shop_logo_border"
            app:layout_constraintStart_toStartOf="@id/shop_logo"
            app:layout_constraintTop_toTopOf="@id/shop_logo"
            app:layout_constraintEnd_toEndOf="@id/shop_logo"
            app:layout_constraintBottom_toBottomOf="@id/shop_logo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/shop_card_shop_border_image" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/shop_logo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="fitXY"
            android:background="@drawable/shop_card_shop_border_image"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unify_image_type="circle" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950_96"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/shop_logo_border"
            app:layout_constraintTop_toTopOf="@id/shop_logo_border"
            app:layout_constraintBottom_toBottomOf="@id/shop_logo_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_goneMarginTop="@dimen/unify_space_4"
            app:typographyType="body_2"
            tools:text="Samsung Official Store"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/unify_space_8"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/Unify_NN950_96"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shop_logo_border"
            app:layout_goneMarginTop="@dimen/unify_space_4"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Cashback"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/unify_space_8"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/Unify_NN950_96"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_goneMarginTop="@dimen/unify_space_4"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="10% s.d Rp500rb"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_min_purchase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/unify_space_8"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/Unify_NN600"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            app:layout_goneMarginTop="@dimen/unify_space_4"
            app:typographyType="small"
            tools:text="Min pembelian 100rb"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layerType="software"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_min_purchase"
            app:unify_image_placeholder="@android:color/transparent"
            android:src="@drawable/dash_line" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/action_btn"
            android:contentDescription="@string/content_desc_claim_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            tools:text="Lihat Produk"
            app:unifyButtonSize="micro"
            app:unifyButtonVariant="ghost"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>