<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chips_parent_view"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bannerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:orientation="horizontal"
        tools:listitem="@layout/navigation_chips_item" />

    <ImageView
        android:id="@+id/dropdown_arrow"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_1"
        android:padding="8dp"
        android:background="@drawable/bg_rect_white_round"
        android:elevation="2dp"
        android:src="@drawable/unify_chips_ic_chevron_normal"
        app:layout_constraintTop_toTopOf="@id/bannerRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bannerRecyclerView"/>


</androidx.constraintlayout.widget.ConstraintLayout>