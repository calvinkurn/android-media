<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bannerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dropdown_arrow"
        android:layout_width="@dimen/dp_40"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_1"
        android:padding="@dimen/dp_8"
        android:background="@drawable/bg_rect_white_round"
        android:elevation="@dimen/dp_2"
        android:src="@drawable/unify_chips_ic_chevron_normal"
        app:layout_constraintTop_toTopOf="@id/bannerRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bannerRecyclerView"/>


</androidx.constraintlayout.widget.ConstraintLayout>