<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/img_no_data"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:completeUrl="https://images.tokopedia.net/img/android/res/singleDpi/ic_category_no_product_found.png"
        app:imageDpiSupportType="singleDpi"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_no_data_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toTopOf="@+id/txt_no_data_description"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/img_no_data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        tools:text="Oops, Produk Nggak Ditemukan" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_no_data_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_no_data"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/img_no_data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_no_data_header"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="Coba kurangi salah satu filter yang kamu gunakan :" />

</androidx.constraintlayout.widget.ConstraintLayout>