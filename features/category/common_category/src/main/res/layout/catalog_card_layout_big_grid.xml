<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewCatalogCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imageCatalog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/Unify_RN100"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/katalog_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/category_ic_katalog_icon"
            app:layout_constraintBottom_toBottomOf="@+id/imageCatalog"
            app:layout_constraintLeft_toLeftOf="@+id/imageCatalog" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_catalog_count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="5dp"
            app:labelType="general_dark_grey"
            app:layout_constraintBottom_toBottomOf="@id/imageCatalog"
            app:layout_constraintLeft_toRightOf="@+id/katalog_image"
            tools:text="64rb produk"
            tools:visibility="visible" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewCatalogName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_NN950_96"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toLeftOf="@id/imageCatalog"
            app:layout_constraintTop_toBottomOf="@id/imageCatalog"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="Apple iPhone X 256GB"
            tools:visibility="visible" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewCatalogDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLength="40"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950_96"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="@id/imageCatalog"
            app:layout_constraintTop_toBottomOf="@id/textViewCatalogName"
            app:typographyType="body_1"
            tools:text="Panjang deskripsi (max adalah 40 Charhbjhkjknk)â€¦"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_mula_dari"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950_44"
            app:layout_constraintLeft_toLeftOf="@id/imageCatalog"
            app:layout_constraintTop_toBottomOf="@id/textViewCatalogDescription"
            app:typographyType="body_1"
            tools:text="Mulai dari"
            tools:visibility="visible" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/Unify_YN500"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/imageCatalog"
            app:layout_constraintTop_toBottomOf="@id/text_mula_dari"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp 14.655.000"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>