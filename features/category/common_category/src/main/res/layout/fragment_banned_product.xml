<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/img_banned_product"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24"
        app:layout_constraintBottom_toTopOf="@+id/txt_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:remoteFileName="cat_ic_banned_item.png" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center_horizontal"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toTopOf="@id/txt_sub_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_banned_product"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        tools:text="Produk dibatasi di Android" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_sub_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_6"
        android:paddingStart="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_header"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="Pencarian â€™Paket Vaporizer' dibatasi. Coba cari dengan browser." />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/category_btn_banned_navigation"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_48"
        android:layout_marginBottom="@dimen/dp_60"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/banned_fragment_buka_browser"
        android:textAllCaps="false"
        android:textColor="@color/Unify_N0"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sub_header"
        app:layout_constraintWidth_default="wrap" />

</androidx.constraintlayout.widget.ConstraintLayout>