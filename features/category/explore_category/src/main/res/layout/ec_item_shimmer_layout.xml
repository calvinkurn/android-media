<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ec_accordion1"
        layout="@layout/ec_item_shimmer_accordian_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/ec_grid_layout1"
        layout="@layout/ec_item_shimmer_icon_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ec_accordion1" />

    <include
        android:id="@+id/ec_grid_layout2"
        layout="@layout/ec_item_shimmer_icon_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ec_grid_layout1" />


    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/ec_divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="20dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/ec_grid_layout2" />

    <include
        android:id="@+id/ec_accordion2"
        layout="@layout/ec_item_shimmer_accordian_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ec_divider1" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/ec_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="20dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/ec_accordion2" />

    <include
        android:id="@+id/ec_accordion3"
        layout="@layout/ec_item_shimmer_accordian_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ec_divider2" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/ec_divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="20dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/ec_accordion3" />

    <include
        android:id="@+id/ec_accordion4"
        layout="@layout/ec_item_shimmer_accordian_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ec_divider3" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/ec_divider4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="20dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/ec_accordion4" />

    <include
        android:id="@+id/ec_accordion5"
        layout="@layout/ec_item_shimmer_accordian_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ec_divider4" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/ec_divider5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="20dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/ec_accordion5" />

    <include
        android:id="@+id/ec_accordion6"
        layout="@layout/ec_item_shimmer_accordian_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ec_divider5" />


</androidx.constraintlayout.widget.ConstraintLayout>