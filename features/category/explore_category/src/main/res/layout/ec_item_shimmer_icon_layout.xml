<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_4">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/ec_icon_shimmer"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_margin="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/ec_txt1"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ec_icon_shimmer" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/ec_txt2"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ec_txt1" />


</androidx.constraintlayout.widget.ConstraintLayout>