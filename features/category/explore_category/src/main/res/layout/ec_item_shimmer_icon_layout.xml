<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/ec_icon_shimmer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/ec_txt1"
        android:layout_width="85dp"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ec_icon_shimmer" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/ec_txt2"
        android:layout_width="64dp"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ec_txt1" />


</androidx.constraintlayout.widget.ConstraintLayout>