<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/catalog_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_lvl3">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/catalog_comparison_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                tools:ignore="ContentDescription"
                android:scaleType="fitCenter"
                tools:src="@tools:sample/backgrounds/scenic" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/catalog_comparison_product_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_8"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_marginEnd="@dimen/unify_space_8"
                android:textColor="@color/Unify_NN950_68"
                app:typographyType="small"
                tools:text="Apple" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/catalog_comparison_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_8"
                android:layout_marginTop="@dimen/unify_space_4"
                android:layout_marginEnd="@dimen/unify_space_8"
                app:typographyType="body_3"
                tools:text="iPhone 12 - 64GB" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/catalog_comparison_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_8"
                android:layout_marginTop="@dimen/unify_space_4"
                android:layout_marginEnd="@dimen/unify_space_8"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Rp15.500.000 - Rp16.150.000" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/catalog_comparison_bandingkan_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/unify_space_24"
                android:layout_marginStart="@dimen/unify_space_8"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_marginEnd="@dimen/unify_space_8"
                android:text="@string/catalog_bandingkan"
                app:unifyButtonSize="micro"
                app:unifyButtonType="main"
                app:unifyButtonVariant="ghost"
                />


        </LinearLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</LinearLayout>
