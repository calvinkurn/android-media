<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2" >

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subcategory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/comparision_layout"
        tools:text="Kamera Belakang"
        android:layout_marginStart="8dp"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/catalog_feature_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/diff_guideline"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/comparision_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/diff_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/first_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginEnd="@dimen/unify_space_8"
            tools:text="Dua kamera 12MP Ultra Wide dan Wide"
            app:typographyType="body_3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/diff_guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl3" >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/second_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginEnd="@dimen/unify_space_8"
            tools:text="Belakang 12MP (Ultra Wide, Wide and Tele) Depan 12MP, 8MP (Ultra Wide, Wide and Tele)"
            app:typographyType="body_3" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>