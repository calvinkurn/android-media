<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/container_price_cta"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_catalog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_NN950"
            app:typographyType="display_3"
            app:typographyWeight="reguler"
            tools:text="{05} Out west" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_price_ranges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="2dp"
            android:textColor="@color/Unify_NN950"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            tools:text="Rp100 rb - 250 rb" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnProductList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="@string/catalog_action_product_list"
        app:unifyButtonSize="medium" />

</LinearLayout>
