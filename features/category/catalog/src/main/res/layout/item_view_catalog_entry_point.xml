<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entry_point_parent"
        >

        <com.tkpd.remoteresourcerequest.view.DeferredImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"
            app:imageDpiSupportType="singleDpi"
            android:scaleType="fitXY"
            app:completeUrl="https://images.tokopedia.net/img/android/res/singleDpi/catalog_entry_point_background.png"
            />

        <com.tkpd.remoteresourcerequest.view.DeferredImageView
            android:id="@+id/entry_point_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            tools:ignore="ContentDescription"
            app:imageDpiSupportType="singleDpi"
            android:scaleType="fitXY"
            app:completeUrl="https://images.tokopedia.net/img/android/res/singleDpi/catalog_library_logo.png"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/entry_point_icon"
            app:layout_constraintStart_toEndOf="@id/entry_point_icon"
            app:layout_constraintBottom_toBottomOf="@id/entry_point_icon"
            android:layout_marginStart="8dp"
            android:text="@string/catalog_katalog_tokopedia"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            android:textColor="@color/Unify_Static_White"
            />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/entry_point_chevron"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/entry_point_icon"
            app:layout_constraintBottom_toBottomOf="@id/entry_point_icon"
            android:layout_marginEnd="8dp"
            app:icon_name="CHEVRON_RIGHT"
            app:icon_color_light_enable="@color/Unify_Static_White"
            app:icon_color_light_disabled="@color/Unify_Static_White"
            />
        
        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/entry_point_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/entry_point_icon"
            android:layout_marginTop="8dp"
            />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/catalog_image_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/entry_point_divider"
            app:layout_constraintEnd_toEndOf="@id/entry_point_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/catalog_image_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/entry_point_divider"
            app:layout_constraintEnd_toStartOf="@id/catalog_image_right"
            android:layout_marginEnd="8dp"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/catalog_lib_product_count_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/entry_point_divider"
            app:layout_constraintStart_toStartOf="@id/entry_point_divider"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:typographyWeight="bold"
            app:typographyType="display_2"
            app:layout_constraintEnd_toStartOf="@id/catalog_image_left"
            tools:text="Temukan 403 Katalog lainnya"
            android:textColor="@color/Unify_Static_White"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/catalog_lib_category_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/catalog_lib_product_count_tv"
            app:layout_constraintStart_toStartOf="@id/entry_point_divider"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            app:typographyType="small"
            app:layout_constraintEnd_toStartOf="@id/catalog_image_left"
            tools:text="di TV"
            android:textColor="@color/Unify_NN400"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>
