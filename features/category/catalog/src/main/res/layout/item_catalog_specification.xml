<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_140"
    android:layout_height="@dimen/dp_140"
    android:minWidth="@dimen/dp_140"
    android:minHeight="@dimen/dp_140"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        >

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/specification_iv"
            android:layout_width="@dimen/unify_space_24"
            android:layout_height="@dimen/unify_space_24"
            tools:src="@tools:sample/avatars"
            tools:ignore="ContentDescription"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/specification_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:typographyType="heading_6"
            tools:text="Layar"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/specification_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_110"
            android:layout_marginTop="@dimen/dp_6"
            app:typographyType="body_3"
            android:ellipsize="end"
            android:maxLines="3"
            tools:text="6.1 inch Super Retina HDR Display, 1170 x 2532 pixels"
            />

    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify>