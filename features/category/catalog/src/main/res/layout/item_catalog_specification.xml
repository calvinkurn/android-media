<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    android:id="@+id/catalog_specifications_card_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_140"
    android:layout_height="@dimen/dp_140"
    android:minWidth="@dimen/dp_140"
    android:minHeight="@dimen/dp_140"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_gravity="center"
        >

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/specification_iv"
            android:layout_width="@dimen/unify_space_24"
            android:layout_height="@dimen/unify_space_24"
            tools:src="@tools:sample/avatars"
            tools:ignore="ContentDescription"
            android:visibility="gone"
            tools:visibility="gone"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/specification_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:typographyType="heading_6"
            tools:text="Layar"
            android:visibility="gone"
            tools:visibility="gone"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/specification_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_110"
            android:layout_marginTop="@dimen/dp_6"
            app:typographyType="body_3"
            android:ellipsize="end"
            android:lines="3"
            android:visibility="gone"
            tools:visibility="gone"
            tools:text="6.1 inch Super Retina HDR Display, 1170 x 2532 pixels"
            />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/lihat_logo"
            android:layout_width="@dimen/unify_space_48"
            android:layout_height="@dimen/unify_space_48"
            app:srcCompat="@drawable/ic_product_action_see_more_arrow_normal_352"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/lihat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/catalog_lihat_selengkapnya_two_lines"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:textColor="@color/Unify_G500"
            android:visibility="gone"
            tools:visibility="visible"
            />

    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify>