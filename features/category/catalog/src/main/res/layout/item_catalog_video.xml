<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/video_thumbnail_iv"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_112"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/video_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_thumbnail_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Review iPhone 11 - Ga bikin sirik lagi."
        android:lines="2"
        />

    <ImageView
        android:id="@+id/channel_icon"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/video_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_5"
        tools:ignore="ContentDescription"
        tools:src="@tools:sample/avatars"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_title_tv"
        app:layout_constraintStart_toEndOf="@id/channel_icon"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_4"
        app:typographyType="body_3"
        android:textColor="@color/Unify_N700_68"
        tools:text="GadgetIn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>