<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingBottom="@dimen/spacing_lvl3"
    android:weightSum="2"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/first_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_8"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Kamera Belakang"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/first_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_8"
            app:typographyType="body_3"
            android:textColor="@color/Unify_N700_68"
            tools:text="Dua kamera 12MP Ultra Wide dan Wide"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/second_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_8"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Kamera Belakang"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/second_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_8"
            app:typographyType="body_3"
            android:textColor="@color/Unify_N700_68"
            tools:text="Belakang 12MP (Ultra Wide, Wide and Tele) Depan 12MP, 8MP (Ultra Wide, Wide and Tele)"
            />


    </LinearLayout>


</LinearLayout>