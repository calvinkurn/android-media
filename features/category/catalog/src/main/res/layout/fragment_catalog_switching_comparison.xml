<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_NN0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.CatalogSwitchingComparisonFragment">

    <com.tokopedia.catalogcommon.customview.CatalogToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCatalogSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/loaderCatalogSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <include
                layout="@layout/item_loader_catalog_selection"/>

            <include
                layout="@layout/item_loader_catalog_selection"/>

            <include
                layout="@layout/item_loader_catalog_selection"/>
            <include
                layout="@layout/item_loader_catalog_selection"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCatalogSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_product_selection_comparison"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/clCatalogSelection"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSearch"
        android:layout_width="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:typographyType="display_1"
            app:typographyWeight="bold"
            android:text="@string/catalog_text_title_catalog_listing"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sbCatalog"
            app:layout_constraintHorizontal_weight="1"/>

        <com.tokopedia.unifycomponents.SearchBarUnify
            android:id="@+id/sbCatalog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:search_bar_show_icon="false"
            app:search_bar_placeholder="@string/catalog_text_title_find_catalog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loaderSearch"
        android:layout_width="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/loaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:typographyType="display_1"
            app:typographyWeight="bold"
            android:text="@string/catalog_text_title_catalog_listing"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/loaderCatalog"
            app:layout_constraintHorizontal_weight="1"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderCatalog"
            android:layout_width="0dp"
            android:layout_height="36dp"
            app:search_bar_show_icon="false"
            app:loader_type="rect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/loaderTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="clSearch,loaderSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:barrierDirection="bottom"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCatalogList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        android:paddingHorizontal="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_catalog_list_in_change_comparison"
        app:layout_constraintTop_toBottomOf="@id/clSearch"
        app:layout_constraintBottom_toTopOf="@id/btnSeeCompare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"/>

    <LinearLayout
        android:id="@+id/loaderCatalogList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp">
        <include
            layout="@layout/layout_loading_load_more_catalog_listing"/>
        <include
            layout="@layout/layout_loading_load_more_catalog_listing"/>
        <include
            layout="@layout/layout_loading_load_more_catalog_listing"/>
        <include
            layout="@layout/layout_loading_load_more_catalog_listing"/>
        <include
            layout="@layout/layout_loading_load_more_catalog_listing"/>
        <include
            layout="@layout/layout_loading_load_more_catalog_listing"/>

    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnSeeCompare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:text="@string/catalog_action_see_comparison"
        app:unifyButtonSize="medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/globalError"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />

    <include
        android:id="@+id/includeEmptyState"
        layout="@layout/layout_empty_catalog_listing_switching_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>