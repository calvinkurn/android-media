<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:paddingTop="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnReset"
        app:typographyType="body_1"
        app:layout_constraintVertical_weight="2"
        android:text="@string/catalog_text_reset_comparison" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@id/btnDeleteComparison"
        app:layout_constraintTop_toBottomOf="@id/tvMessage"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled"
        android:text="@string/catalog_btn_title_reset" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnDeleteComparison"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnReset"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        android:text="@string/catalog_btn_title_remove_all" />

</androidx.constraintlayout.widget.ConstraintLayout>