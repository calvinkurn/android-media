<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_no_data"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_110"
        android:src="@drawable/ic_no_product_found"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_no_data_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700"
        app:layout_constraintBottom_toTopOf="@+id/txt_no_data_description"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/img_no_data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="heading_4"
        android:text="@string/no_products_title"
         />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_no_data_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_68"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:paddingTop="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="@+id/img_no_data"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/img_no_data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_no_data_header"
        android:text="@string/no_products_body"
        app:typographyType="body_3"
         />

</androidx.constraintlayout.widget.ConstraintLayout>