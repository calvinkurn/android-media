<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/step_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heading_title"
        app:layout_constraintBottom_toBottomOf="@id/para_subtitle"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/heading_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:textColor="@color/Unify_NN950"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            tools:text="Tambah barang ke Keranjang"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/step_icon"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/para_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/Unify_NN600"
            app:typographyType="paragraph_3"
            tools:text="Atau kamu juga bisa Beli Langsung biar lebih cepat prosesnya."
            app:layout_constraintTop_toBottomOf="@id/heading_title"
            app:layout_constraintStart_toStartOf="@id/heading_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>