<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/chat_dokter_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:icon_name="STETHOSCOPE"
        app:icon_color_light_enable="@color/Unify_G500"
        app:icon_color_night_enable="@color/Unify_G500"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_chat_dokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/chat_dokter_icon"
        app:layout_constraintBottom_toBottomOf="@id/chat_dokter_icon"
        app:layout_constraintStart_toEndOf="@id/chat_dokter_icon"
        android:layout_marginStart="16dp"
        android:text="@string/epharmacy_chat_dokter"
        app:typographyType="heading_4"
        />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_icon"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/chat_dokter_icon"
        />

    <include
        android:id="@+id/epharmacy_checkout_detail_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/epharmacy_name_detail_view_item"
        />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/epharmacy_checkout_detail_view"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:text="@string/epharmacy_ringkasan_pembayaran"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtotal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subtotal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:typographyType="body_2"
        android:text="@string/epharmacy_subtotal_tagihan"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtotal_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/subtotal_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:typographyType="body_2"
        tools:text="Rp10.000"
        />

    <com.tokopedia.totalamount.TotalAmount
        android:id="@+id/total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/epharmacy_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="title_chat_dokter,total_amount,subtotal,subtotal_value,subtotal_text,divider,divider_icon,chat_dokter_icon,epharmacy_checkout_detail_view"
        android:visibility="gone"
        />

    <include
        android:id="@+id/epharmacy_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chat_dokter_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        layout="@layout/epharmacy_attachment_shimmer"
        />

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/epharmacy_global_error"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>