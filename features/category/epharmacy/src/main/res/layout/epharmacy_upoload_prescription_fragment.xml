<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/epharmacy_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/epharmacy_upload_title"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/epharmacy_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tooltip"
        tools:listitem="@layout/epharmacy_product_view_item"
        tools:itemCount="3"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tooltip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fotoResepButton"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:textColor="@color/light_N700_68"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Dengan klik “Foto Resep” kamu setuju dengan
Syarat dan Ketentuan."
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/fotoResepButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:text="@string/epharmacy_foto_resep"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        app:unifyButtonSize="large"
        />

</androidx.constraintlayout.widget.ConstraintLayout>