<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginEnd="@dimen/spacing_lvl5"
    android:layout_marginTop="@dimen/unify_space_12"
    android:layout_marginBottom="@dimen/spacing_lvl1">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ketentuan_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:text="@string/epharmacy_ketentuan_foto_resep"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/sample_image"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_150"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/ketentuan_title_text"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/instruction_tv_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/unify_space_16"
        app:layout_constraintStart_toEndOf="@id/sample_image"
        app:layout_constraintTop_toTopOf="@id/sample_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/epharmacy_upload_instruction_1"
        android:textColor="@color/Unify_NN950"
        app:typographyType="body_2"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iconUnify1"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_width="@dimen/unify_space_8"
        android:layout_height="@dimen/unify_space_8"
        app:srcCompat="@drawable/epharmacy_circle_active"
        app:layout_constraintTop_toTopOf="@id/instruction_tv_1"
        app:layout_constraintBottom_toBottomOf="@id/instruction_tv_1"
        app:layout_constraintStart_toEndOf="@id/sample_image"
        app:layout_goneMarginStart="@dimen/spacing_lvl4"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/instruction_tv_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/unify_space_16"
        app:layout_constraintStart_toEndOf="@id/sample_image"
        app:layout_constraintTop_toBottomOf="@id/instruction_tv_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/epharmacy_upload_instruction_2"
        android:textColor="@color/Unify_NN950"
        app:typographyType="body_2"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iconUnify2"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_width="@dimen/unify_space_8"
        android:layout_height="@dimen/unify_space_8"
        app:srcCompat="@drawable/epharmacy_circle_active"
        app:layout_constraintTop_toTopOf="@id/instruction_tv_2"
        app:layout_constraintBottom_toBottomOf="@id/instruction_tv_2"
        app:layout_constraintStart_toEndOf="@id/sample_image"
        app:layout_goneMarginStart="@dimen/spacing_lvl4"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/instruction_tv_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/unify_space_16"
        app:layout_constraintStart_toEndOf="@id/sample_image"
        app:layout_constraintTop_toBottomOf="@id/instruction_tv_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/epharmacy_upload_instruction_3"
        android:textColor="@color/Unify_NN950"
        app:typographyType="body_2"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iconUnify3"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_width="@dimen/unify_space_8"
        android:layout_height="@dimen/unify_space_8"
        app:srcCompat="@drawable/epharmacy_circle_active"
        app:layout_constraintTop_toTopOf="@id/instruction_tv_3"
        app:layout_constraintBottom_toBottomOf="@id/instruction_tv_3"
        app:layout_constraintStart_toEndOf="@id/sample_image"
        app:layout_goneMarginStart="@dimen/spacing_lvl4"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="instruction_tv_3,sample_image"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/foto_resep_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/barrier"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:text="@string/epharmacy_ketentuan_foto_resep"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:itemCount="4"
        tools:listitem="@layout/epharmacy_prescription_gallery_view_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>