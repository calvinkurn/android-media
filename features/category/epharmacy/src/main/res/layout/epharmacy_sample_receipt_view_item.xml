<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ketentuan_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:text="@string/epharmacy_ketentuan_foto_resep"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_150"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/ketentuan_title_text"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_marginStart="@dimen/dp_16"
        android:id="@+id/iconUnify"
        android:layout_width="@dimen/unify_space_8"
        android:layout_height="@dimen/unify_space_8"
        app:srcCompat="@drawable/epharmacy_circle_active"
        app:layout_constraintBottom_toBottomOf="@+id/rules_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rules_tv" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_12"
        android:textColor="@color/Unify_NN950"
        app:typographyType="body_2"
        android:layout_marginStart="16dp"
        android:id="@+id/rules_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconUnify"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>