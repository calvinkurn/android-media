<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image"
            android:layout_width="@dimen/unify_space_64"
            android:layout_height="@dimen/unify_space_64"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/spacing_lvl2"
            />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/cross_image_button"
            android:layout_width="@dimen/unify_space_16"
            android:layout_height="@dimen/unify_space_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon_name="CLEAR"
            />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/retry_upload_button"
            android:layout_width="@dimen/unify_space_32"
            android:layout_height="@dimen/unify_space_32"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:icon_name="RELOAD"
            app:icon_color_light_disabled="@color/Unify_G500"
            app:icon_color_night_enable="@color/Unify_G500"
            app:icon_color_night_disabled="@color/Unify_G500"
            tools:visibility="gone"
            />


        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/camera_button"
            android:layout_width="@dimen/unify_space_32"
            android:layout_height="@dimen/unify_space_32"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:icon_name="CAMERA"
            app:icon_color_light_enable="@color/Unify_G500"
            app:icon_color_light_disabled="@color/Unify_G500"
            app:icon_color_night_enable="@color/Unify_G500"
            app:icon_color_night_disabled="@color/Unify_G500"
            android:visibility="gone"
            tools:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify2>
