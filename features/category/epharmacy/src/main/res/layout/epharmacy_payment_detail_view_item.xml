<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_payment_top"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/detail_payment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="heading_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_payment_top"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/epharmacy_rincian_pembayaran"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/payment_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_payment_header"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_3"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:text="@string/epharmacy_metode_pembayaran"
        />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_type"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/payment_mode"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ep_total_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider_type"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:typographyType="body_3"
        android:text="@string/epharmacy_total_harga"
        />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_provider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ep_total_harga"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ep_total_bayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider_provider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:text="@string/epharmacy_total_bayar"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/payment_mode_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/payment_mode"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:typographyType="body_3"
        tools:text="BCA Virtual Account"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ep_total_harga_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ep_total_harga"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:typographyType="body_3"
        tools:text="Rp10.000"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ep_total_bayar_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ep_total_bayar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp10.000"
        />
    
    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/payment_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/ep_total_bayar"
        android:layout_marginTop="12dp"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/about_order_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/payment_divider"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/epharmacy_tentang_pesananmu"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pusat_bantuan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/info_icon"
        app:layout_constraintTop_toBottomOf="@id/about_order_header"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:typographyType="heading_5"
        android:text="@string/epharmacy_pusat_bantuan"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pusat_bantuan_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/info_icon"
        app:layout_constraintTop_toBottomOf="@id/pusat_bantuan_title"
        android:layout_marginStart="16dp"
        app:typographyType="body_3"
        android:text="@string/epharmacy_info_lebih_lanjut"
        />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pusat_bantuan_title"
        app:layout_constraintBottom_toBottomOf="@id/pusat_bantuan_description"
        android:layout_marginStart="16dp"
        app:icon_name="CALL_CENTER"
        />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/pusat_bantuan_title"
        app:layout_constraintBottom_toBottomOf="@id/pusat_bantuan_description"
        app:icon_name="CHEVRON_RIGHT"
        />

    <View
        android:id="@+id/help_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/info_icon"
        app:layout_constraintStart_toStartOf="@id/info_icon"
        app:layout_constraintEnd_toEndOf="@id/chevron"
        app:layout_constraintBottom_toBottomOf="@id/pusat_bantuan_description"
        />
</androidx.constraintlayout.widget.ConstraintLayout>