<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/spacing_lvl3"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl3"
    android:paddingStart="@dimen/spacing_lvl1"
    android:paddingEnd="@dimen/spacing_lvl1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/badge_icon"
        android:layout_width="@dimen/unify_space_12"
        android:layout_height="@dimen/unify_space_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:icon_name="BADGE_OS_FILLED"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/badge_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl3"
        app:typographyType="heading_6"
        tools:text="Apotek Century Meruya Raden Saleh"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/storeLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/storeName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="small"
        tools:text="Jakarta Bharat"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/productImage"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/storeLocation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl3"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/productImage"
        app:layout_constraintTop_toBottomOf="@id/storeLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/productQuantity"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:typographyType="paragraph_3"
        tools:text="Rhinos SR Pseudoephedrine HCL Loratadine 1 Strip 10 Kapsul"
        android:textColor="@color/Unify_NN950"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/productImage"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/spacing_lvl3"
        app:typographyType="small"
        tools:text="1 Barang (1kg)"
        android:textColor="@color/Unify_NN600"
        />



</androidx.constraintlayout.widget.ConstraintLayout>