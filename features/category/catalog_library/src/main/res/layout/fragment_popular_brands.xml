<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/popular_brands_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unify_header_is_show_back_button="true"
        app:unify_header_is_show_shadow="false"
        app:layout_constraintStart_toStartOf="parent"
        app:title="@string/brand_terpopuler"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/global_error_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:background="@color/Unify_N0"
        android:gravity="center"
        android:paddingTop="12dp"
        android:visibility="gone"
        app:layout_anchor="@+id/popular_brands_rv"
        app:layout_anchorGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_brands_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@+id/popular_brands_header"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>