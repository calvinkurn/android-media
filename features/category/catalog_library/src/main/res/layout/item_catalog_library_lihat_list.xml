<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="8dp"
    >

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/lihat_item_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/lihat_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/lihat_item_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/lihat_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/lihat_item_icon"
        app:typographyType="display_3"
        tools:text="TitleTitleTitleTitleTitleTitleTitleTitleTitle" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/lihat_item_icon_checked"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lihat_item_title"
        app:layout_constraintBottom_toBottomOf="@id/lihat_item_title"
        app:icon_name="CHECK_CIRCLE"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_color_light_disabled="@color/Unify_GN500"
        app:icon_color_night_enable="@color/Unify_GN500"
        app:icon_color_night_disabled="@color/Unify_GN500"
        android:layout_marginStart="2dp"
        android:visibility="gone"
        />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/lihat_item_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lihat_item_icon"
        app:layout_constraintStart_toStartOf="@id/lihat_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>