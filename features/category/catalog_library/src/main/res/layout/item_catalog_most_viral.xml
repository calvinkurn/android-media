<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:padding="16dp"
    android:id="@+id/catalog_most_viral_item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/catalog_most_viral_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_name="FIRE"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:text="@string/most_viral_lagi_viral_nih"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="@id/catalog_most_viral_icon"
        app:layout_constraintStart_toEndOf="@id/catalog_most_viral_icon"
        app:layout_constraintTop_toTopOf="@id/catalog_most_viral_icon"
        app:typographyType="display_1"
        app:typographyWeight="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/catalog_product_viral_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/catalog_viral_product_white_bg"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/catalog_most_viral_icon">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/catalog_product_viral_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/catalog_product_viral_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Product Title"
            app:typographyType="heading_5"
            android:layout_marginStart="8dp"
            app:typographyWeight="bold"
            app:layout_constraintBottom_toTopOf="@id/catalog_product_viral_category"
            app:layout_constraintTop_toTopOf="@id/catalog_product_viral_image"
            app:layout_constraintStart_toEndOf="@id/catalog_product_viral_image" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/catalog_product_viral_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Category"
            app:typographyType="body_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/catalog_product_viral_title"
            app:layout_constraintStart_toStartOf="@id/catalog_product_viral_title"
            app:layout_constraintBottom_toBottomOf="@id/catalog_product_viral_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>