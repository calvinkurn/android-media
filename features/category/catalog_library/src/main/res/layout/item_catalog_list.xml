<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:padding="8dp"

    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/catalog_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/catalog_list_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:unify_image_corner_radius="0"
            app:unify_image_type="rect" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/catalog_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                tools:text="Product Title" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/catalog_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="display_3"
                tools:text="Market Price" />

        </LinearLayout>
    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify2>