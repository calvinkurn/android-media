<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/lihat_semua_page_header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:unify_header_is_show_shadow="false"
        app:unify_header_is_show_back_button="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_header_title="Semua Kategori" />

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/global_error_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:background="@color/Unify_N0"
        android:gravity="center"
        android:paddingTop="12dp"
        android:visibility="gone"
        app:layout_anchor="@+id/catalog_lihat_semua_rv"
        app:layout_anchorGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <include
        android:id="@+id/shimmer_layout"
        layout="@layout/item_shimmer_catalog_product_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:id="@+id/sort_order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lihat_semua_page_header"
        app:layout_constraintStart_toStartOf="parent" >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sort_order_0"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:text="A-Z"
            app:typographyType="display_2"
            android:background="@drawable/catalog_sort_order_border"
            android:paddingTop="4dp"
            android:paddingStart="12dp"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sort_order_1"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:text="Z-A"
            app:typographyType="display_2"
            android:background="@drawable/catalog_sort_order_border"
            android:backgroundTint="@color/Unify_Static_White"
            android:paddingTop="4dp"
            android:paddingStart="12dp"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catalog_lihat_semua_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sort_order_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>