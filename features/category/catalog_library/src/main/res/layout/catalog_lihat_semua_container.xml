<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/sort_order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sort_order_0"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:text="A-Z"
            app:typographyType="display_2"
            android:background="@drawable/catalog_sort_order_border"
            android:paddingTop="4dp"
            android:paddingStart="12dp"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sort_order_1"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:text="Z-A"
            app:typographyType="display_2"
            android:background="@drawable/catalog_sort_order_border"
            android:backgroundTint="@color/Unify_Static_White"
            android:paddingTop="4dp"
            android:paddingStart="12dp"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lihat_category_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort_order_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>