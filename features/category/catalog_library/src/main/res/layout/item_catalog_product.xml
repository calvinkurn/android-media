<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/catalog_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unify_image_corner_radius="0"
            app:unify_image_type="rect" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/catalog_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@id/catalog_product_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/catalog_product_image"
            app:layout_constraintTop_toTopOf="@id/catalog_product_image"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            tools:text="Infinix Smart 2 Lorem ipsum Infinix Smart 2 Lorem ipsum dolor sit amet Lorem ipsum dolor sit amet dolor sit amet Lorem ipsum dolor sit amet Infinix Smart 2 Lorem ipsum dolor sit amet Lorem ipsum dolor sit amet" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/catalog_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/catalog_product_title"
            app:layout_constraintTop_toBottomOf="@id/catalog_product_title"
            app:typographyType="display_3"
            tools:text="Market Price" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>