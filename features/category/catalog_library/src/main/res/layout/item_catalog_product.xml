<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="2dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/catalog_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:unify_image_corner_radius="0"
            app:unify_image_type="rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/catalog_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            tools:text="Product Title"
            app:layout_constraintTop_toTopOf="@id/catalog_product_image"
            app:layout_constraintStart_toEndOf="@id/catalog_product_image"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/catalog_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:typographyType="display_3"
            tools:text="Market Price"
            app:layout_constraintTop_toBottomOf="@id/catalog_product_title"
            app:layout_constraintStart_toStartOf="@id/catalog_product_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify2>