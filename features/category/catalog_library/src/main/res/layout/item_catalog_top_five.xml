<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/catalog_top_five_layout"
    android:layout_margin="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/catalog_top_five_product_image"
            android:layout_width="104dp"
            android:layout_height="104dp"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/catalog_top_five_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            tools:text="Product Name" />

    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify2>