<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:theme="@style/Toolbar.White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextAppearance="@style/SubTitleTextAppearance"
        app:titleTextAppearance="@style/TitleTextAppearance"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/progress_bar_layout"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_model"
        app:layout_constraintRight_toRightOf="@+id/carc_background_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_final_price"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/moneyin_price_elligible"
        android:textColor="@color/Unify_N700_68"
        app:typographyWeight="bold"
        app:typographyType="heading_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_valid_till"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="@string/price_valid_until"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:visibility="visible" />

    <View
        android:id="@+id/carc_background_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_rect_white_round"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/space"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_valid_till"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:elevation="4dp"
        android:text="@string/text_model"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_5"
        app:layout_constraintLeft_toLeftOf="@+id/carc_background_white"
        app:layout_constraintTop_toTopOf="@+id/carc_background_white"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_model_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:elevation="4dp"
        android:textColor="@color/Unify_N700_68"
        app:typographyWeight="bold"
        app:typographyType="heading_5"
        app:layout_constraintRight_toRightOf="@+id/carc_background_white"
        app:layout_constraintTop_toTopOf="@+id/tv_model"
        tools:text="Samsung Note 9"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:text="@string/text_final_price"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_model"
        app:layout_constraintTop_toBottomOf="@+id/divider_model"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_selling_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="16dp"
        android:elevation="4dp"
        android:textColor="@color/Unify_N700_68"
        app:typographyWeight="bold"
        app:typographyType="heading_6"
        app:layout_constraintLeft_toRightOf="@+id/tv_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_price"
        tools:text="Rp 3.650.000"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_device_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:elevation="4dp"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_6"
        app:layout_constraintLeft_toLeftOf="@+id/tv_model"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        tools:text="	•	Body Belakang : Mulus
	•	Body Depan : Mulus
	•	Tampilan Depan : Dead Pixel Besar (Tompel), Kerusakan jelas pada layar
	•	Fisik Layar : Didalam layar display
	•	Tes Fungsional : Berhasil"
        tools:visibility="visible" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_final_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:text="@string/total_price"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_5"
        app:layout_constraintLeft_toLeftOf="@+id/tv_model"
        app:layout_constraintRight_toLeftOf="@+id/tv_final_amount"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_final_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:elevation="4dp"
        android:textColor="@color/Unify_Y500"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        app:layout_constraintLeft_toRightOf="@+id/tv_final_price"
        app:layout_constraintRight_toRightOf="@+id/carc_background_white"
        app:layout_constraintTop_toTopOf="@+id/tv_final_price"
        app:layout_constraintWidth_default="wrap"
        tools:text="Rp 22.650.000"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_button_pay_or_ktp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_tradein_button_orange"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/buy_now"
        android:textColor="@color/Unify_N0"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_tnc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/harga_tnc_kyc"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_6"
        app:layout_constraintBottom_toTopOf="@+id/tv_button_pay_or_ktp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider_model"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N75"
        android:elevation="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/carc_background_white"
        app:layout_constraintRight_toRightOf="@+id/carc_background_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_model"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N75"
        android:elevation="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/carc_background_white"
        app:layout_constraintRight_toRightOf="@+id/carc_background_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_device_review"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N75"
        android:elevation="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/carc_background_white"
        app:layout_constraintRight_toRightOf="@+id/carc_background_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_device_review"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
