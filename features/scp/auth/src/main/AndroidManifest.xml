<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.scp.auth">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application>

        <activity
            android:name="com.scp.auth.authentication.ScpAuthActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="false" >

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_user"
                    android:pathPattern="@string/applink_scp_login" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.scp.auth.verification.ScpVerificationActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="false" >

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_user"
                    android:pathPattern="@string/applink_scp_otp" />
            </intent-filter>

        </activity>
        <service
            android:name="com.scp.auth.service.GetDefaultChosenAddressService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>
</manifest>