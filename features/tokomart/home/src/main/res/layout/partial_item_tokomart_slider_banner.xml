<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/unify_space_16"
        app:cardBackgroundColor="#F3F4F5"
        app:cardCornerRadius="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tp_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_16"
                android:layout_marginTop="@dimen/unify_space_16"
                android:layout_marginEnd="@dimen/unify_space_16"
                android:layout_marginBottom="@dimen/unify_space_8"
                android:gravity="center"
                android:text="Selamat Datang di TokoMart!"
                app:layout_constraintBottom_toTopOf="@+id/tp_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_4"
                tools:text="Selamat Datang di TokoMart!" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tp_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tp_title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/unify_space_16"
                android:gravity="center"
                android:text="Kamu bisa beli beragam kebutuhan sehari-hari dengan pengantaran hanya 2 jam saja!"
                app:layout_constraintBottom_toTopOf="@+id/tp_small_desc"
                app:layout_constraintEnd_toEndOf="@+id/tp_title"
                app:layout_constraintStart_toStartOf="@+id/tp_title"
                app:typographyType="body_2"
                tools:text="Kamu bisa beli beragam kebutuhan sehari-hari dengan pengantaran hanya 2 jam saja!" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tp_small_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tp_desc"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/unify_space_8"
                android:layout_marginBottom="@dimen/unify_space_8"
                android:text="Saat ini hanya tersedia di Jakarta Barat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:typographyType="small"
                app:typographyWeight="reguler"
                tools:text="Saat ini hanya tersedia di Jakarta Barat" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
