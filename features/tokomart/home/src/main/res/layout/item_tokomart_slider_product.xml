<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_marginBottom="@dimen/dp_4">

    <include
        android:id="@+id/header_carousel_product"
        layout="@layout/partial_item_tokomart_slider_product" />

    <com.tokopedia.carouselproductcard.CarouselProductCardView
        android:id="@+id/carousel_product_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:descendantFocusability="blocksDescendants"
        android:scrollbars="none"
        app:useDefaultItemDecorator="false" />

</LinearLayout>