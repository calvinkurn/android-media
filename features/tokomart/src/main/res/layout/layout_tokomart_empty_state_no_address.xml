<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:padding="@dimen/dp_16">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/tokonowEmptyStateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tokonowEmptyStateTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/tokomart_ic_empty_state_no_address" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokonowEmptyStateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tokomart_common_empty_state_title"
        app:layout_constraintBottom_toTopOf="@id/tokonowEmptyStateDesc1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokonowEmptyStateIcon"
        app:typographyType="heading_2" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/tokonowEmptyStateIcon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tokonowEmptyStateDesc1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tokonowEmptyStateDesc1"
        app:srcCompat="@drawable/tokomart_ic_empty_state_watch" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokonowEmptyStateDesc1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/tokomart_common_empty_state_desc_1"
        app:layout_constraintBottom_toTopOf="@id/tokonowEmptyStateDesc2"
        app:layout_constraintStart_toEndOf="@id/tokonowEmptyStateIcon1"
        app:layout_constraintTop_toBottomOf="@id/tokonowEmptyStateTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/tokonowEmptyStateIcon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tokonowEmptyStateDesc2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tokonowEmptyStateDesc2"
        app:srcCompat="@drawable/tokomart_ic_empty_state_map" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokonowEmptyStateDesc2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/tokomart_common_empty_state_desc_2"
        app:layout_constraintBottom_toTopOf="@id/tokonowEmptyStateButtonChangeAddress"
        app:layout_constraintEnd_toEndOf="@id/tokonowEmptyStateDesc1"
        app:layout_constraintStart_toEndOf="@id/tokonowEmptyStateIcon2"
        app:layout_constraintTop_toBottomOf="@id/tokonowEmptyStateDesc1"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/tokonowEmptyStateButtonChangeAddress"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/tokomart_common_empty_state_button_change_address"
        app:layout_constraintBottom_toTopOf="@id/tokonowEmptyStateButtonReturn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokonowEmptyStateDesc2"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/tokonowEmptyStateButtonReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/tokomart_common_empty_state_button_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokonowEmptyStateButtonChangeAddress"
        app:unifyButtonSize="medium"
        app:unifyButtonVariant="text" />

</androidx.constraintlayout.widget.ConstraintLayout>