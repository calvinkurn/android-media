<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/Unify_N0"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/view_background_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/home_header_background_content_description"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/tokomart_ic_header_background" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:descendantFocusability="beforeDescendants" />

        <com.tokopedia.searchbar.navigation_component.NavToolbar
            android:id="@+id/navToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:minHeight="?actionBarSize"
            android:visibility="visible"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:toolbarAlwaysShowShadow="true"
            app:toolbarBackButton="back"
            app:toolbarContentType="typeSearchbar"
            app:toolbarInitialFillColor="transparent"
            app:toolbarInitialTheme="light"
            app:toolbarInvertSearchBarColor="true"
            app:toolbarPageName="/" />

        <View
            android:id="@+id/status_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="top"
            android:background="@color/Unify_G500"
            android:visibility="visible" />
    </FrameLayout>

    <com.tokopedia.minicart.common.widget.MiniCartWidget
        android:id="@+id/miniCartWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        tools:layout_height="100dp"
        tools:visibility="visible" />
</LinearLayout>