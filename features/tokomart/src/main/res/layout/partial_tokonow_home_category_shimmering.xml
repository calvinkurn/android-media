<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="@dimen/spacing_lvl3"
    app:card_type="shadow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/imageCategoryShimmering"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl6"
            app:loader_corner_radius="@dimen/dp_8"
            app:loader_type="rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderTextView"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_8"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:loader_corner_radius="@dimen/dp_5"
            app:loader_type="line"
            app:layout_constraintBottom_toTopOf="@+id/loaderTextView2"
            app:layout_constraintStart_toEndOf="@+id/imageCategoryShimmering"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderTextView2"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_8"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:loader_corner_radius="@dimen/dp_5"
            app:loader_type="line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageCategoryShimmering"
            app:layout_constraintTop_toBottomOf="@+id/loaderTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>