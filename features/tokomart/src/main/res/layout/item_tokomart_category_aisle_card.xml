<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify android:id="@+id/card_tokonow_category"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:card_type="shadow"
    android:padding="@dimen/dp_12"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_category_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="body_2"
            android:text="@string/tokomart_category_aisle_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/img_category"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_3"
            android:src="@drawable/ic_delete_soon_18"
            app:layout_constraintTop_toBottomOf="@id/txt_category_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:typographyType="heading_4"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_11"
            app:layout_constraintTop_toBottomOf="@id/txt_category_header"
            app:layout_constraintStart_toEndOf="@id/img_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Kategori"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>