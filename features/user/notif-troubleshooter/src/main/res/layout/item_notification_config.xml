<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16">

    <ProgressBar
        android:id="@+id/pgLoader"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/green_50" />

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_status_notif_red_error"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        tools:text="Test Push Notification"
        android:textColor="@color/charcoal_grey_96"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/pgLoader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pgLoader"
        app:layout_constraintTop_toTopOf="@+id/pgLoader" />

    <TextView
        android:id="@+id/txtMessage"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        app:layout_constraintEnd_toEndOf="@+id/txtTitle"
        app:layout_constraintStart_toStartOf="@+id/txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        android:textColor="@color/charcoal_grey_68"
        tools:text="Reminder, Feeds, dan Aktivitas akun kamu. This is really long text" />

</androidx.constraintlayout.widget.ConstraintLayout>