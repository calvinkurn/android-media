            android:name="com.tokopedia.phoneverification.view.activity.PhoneVerificationActivationActivity"
            android:label="@string/title_activity_phone_verification"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.tokopedia.phoneverification.view.activity.PhoneVerificationProfileActivity"
            android:label="@string/title_activity_phone_verification"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
