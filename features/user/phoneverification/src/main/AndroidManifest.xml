            android:name="com.tokopedia.phoneverification.view.activity.ChangePhoneNumberActivity"
            android:label="@string/title_activity_change_phone_number"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.tokopedia.phoneverification.view.activity.ReferralPhoneNumberVerificationActivity"
