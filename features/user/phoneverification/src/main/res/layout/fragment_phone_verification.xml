<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/view_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/phoneverification_dp_10"
            android:orientation="vertical"
            android:paddingLeft="@dimen/phoneverification_dp_20"
            android:paddingRight="@dimen/phoneverification_dp_20"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/phoneverification_dp_10"
                android:text="@string/title_phone_number"
                android:textSize="@dimen/fontSize_lvl2" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:textColor="@color/phoneverification_grey_500"
                android:textSize="@dimen/fontSize_lvl4"
                tools:text="08123401923" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/phoneverification_dp_10"
                android:background="@color/phoneverification_grey_400" />


            <TextView
                android:id="@+id/send_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/phoneverification_dp_30"
                android:background="@drawable/verify_button_background"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/phoneverification_dp_5"
                android:padding="@dimen/phoneverification_dp_10"
                android:text="@string/phone_verification_next"
                android:textColor="@drawable/verify_button_textcolor"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/countdown_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/phoneverification_dp_30"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/phoneverification_dp_5"
                android:padding="@dimen/phoneverification_dp_10"
                android:textColor="@color/phoneverification_grey_500"
                android:textSize="@dimen/fontSize_lvl2"
                android:visibility="gone"
                tools:text="Verifikasi sudah dikirim\nharap menunggu selama 50 detik."
                tools:visibility="gone" />

            <TextView
                android:id="@+id/send_otp_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/phoneverification_dp_5"
                android:gravity="center"
                android:padding="@dimen/phoneverification_dp_10"
                android:text="@string/action_send_otp_with_call_2"
                android:textColor="@color/phoneverification_grey_500"
                android:textSize="@dimen/fontSize_lvl2"
                android:visibility="gone"
                tools:visibility="gone" />

            <LinearLayout
                android:id="@+id/input_otp_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/phoneverification_dp_20"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/phoneverification_dp_20"
                    android:gravity="center"
                    android:text="@string/title_otp" />


                <com.tokopedia.design.widget.PinEditText
                    android:id="@+id/input_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/phoneverification_dp_40"
                    android:layout_marginRight="@dimen/phoneverification_dp_40"
                    android:layout_marginBottom="@dimen/phoneverification_dp_30"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:digits="1234567890"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingBottom="@dimen/phoneverification_dp_10"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/fontSize_lvl8"
                    app:LineColors="@color/pin_line_colors" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/phoneverification_dp_20"
        android:layout_marginRight="@dimen/phoneverification_dp_20"
        android:layout_marginBottom="@dimen/phoneverification_dp_10"
        android:background="@drawable/grey_button_rounded"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/title_confirm_otp"
        android:textColor="@color/phoneverification_grey_600"
        android:textStyle="bold"
        android:visibility="gone" />


    <TextView
        android:id="@+id/skip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/phoneverification_dp_10"
        android:gravity="center"
        android:padding="@dimen/phoneverification_dp_10"
        android:text="@string/skip"
        android:textColor="@color/phoneverification_grey_500"
        android:textStyle="bold" />


</LinearLayout>