<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl6"
        app:srcCompat="@drawable/invoice_empty_state" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:gravity="center"
        android:paddingStart="@dimen/dp_28_attachinvoice"
        android:paddingEnd="@dimen/dp_28_attachinvoice"
        android:text="@string/title_attachinvoice_empty_state"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_2" />
</LinearLayout>