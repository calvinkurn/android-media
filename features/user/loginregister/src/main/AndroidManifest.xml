                <data
                    android:host="@string/host_user"
                    android:pathPattern="@string/applink_email_register"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shopcreation.view.landingshop.LandingShopCreationActivity"
            android:exported="false"
            android:label="@string/app_name"
