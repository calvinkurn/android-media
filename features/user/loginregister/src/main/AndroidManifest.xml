<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.loginregister">

    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"
        android:maxSdkVersion="22"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".login.view.activity.LoginActivity"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>

        <activity
            android:name=".registerinitial.view.activity.RegisterInitialActivity"
            android:label="@string/title_register"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".registeremail.view.activity.RegisterEmailActivity"
            android:label="@string/title_activity_register_2"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

        <activity
            android:name=".loginthirdparty.google.SmartLockActivity"
            android:theme="@style/AppTheme.Dialog"/>

        <activity
            android:name=".activation.view.activity.ChangeEmailActivity"
            android:label="@string/button_change_email"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".activation.view.activity.ActivationActivity"
            android:label="@string/title_activity_activation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>

        <activity
            android:name="com.tokopedia.sessioncommon.view.forbidden.activity.ServiceActivity"
            android:label="@string/title_activity_service"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>

        <activity
            android:name=".welcomepage.WelcomePageActivity"
            android:label="@string/title_verify"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize"/>

    </application>
</manifest>