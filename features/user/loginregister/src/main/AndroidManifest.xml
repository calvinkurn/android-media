<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.loginregister">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".login.view.activity.LoginActivity"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>

        <activity
            android:name=".register.RegisterInitialActivity"
            android:label="@string/title_register"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".loginthirdparty.google.SmartLockActivity"
            android:theme="@style/AppTheme.Dialog"/>

        <activity
            android:name=".loginthirdparty.google.GoogleSignInActivity"
            android:theme="@style/AppTheme.Dialog"/>

        <activity
            android:name=".activation.view.activity.ChangeEmailActivity"
            android:label="@string/button_change_email"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".activation.view.activity.ActivationActivity"
            android:label="@string/title_activity_activation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>

        <activity
            android:name=".forbidden.activity.ForbiddenActivity"
            android:label="@string/title_activity_forbidden"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>

        <activity
            android:name=".forbidden.activity.ServiceActivity"
            android:label="@string/title_activity_service"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>
    </application>
</manifest>