        <service
            android:name=".seamlesslogin.RemoteService"
            android:exported="true"
            android:permission="com.tokopedia.sellerapp.REMOTE_SERVICE_SEAMLESS">
            <intent-filter>
                <action android:name="com.tokopedia.loginregister.seamlesslogin.RemoteService" />
            </intent-filter>
        </service>
        <service
            android:name=".login.service.GetDefaultChosenAddressService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>