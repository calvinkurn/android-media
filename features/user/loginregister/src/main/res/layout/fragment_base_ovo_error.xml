<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/Unify_N0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginTop="@dimen/unify_space_40"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_ovo_error" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ovo_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_24"
        android:text="Ada kendala saat akses OVO"
        android:textAlignment="center"
        android:textSize="@dimen/fontSize_lvl6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ovo_error_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:text="Kamu bisa lanjut daftar dulu &amp; hubungkan akun ini ke OVO lewat home Tokopedia nanti."
        android:textAlignment="center"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ovo_error_title" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/ovo_error_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_24"
        android:text="Lanjut Daftar"
        app:layout_constraintEnd_toEndOf="@+id/ovo_error_description"
        app:layout_constraintStart_toStartOf="@+id/ovo_error_description"
        app:layout_constraintTop_toBottomOf="@+id/ovo_error_description" />

</androidx.constraintlayout.widget.ConstraintLayout>