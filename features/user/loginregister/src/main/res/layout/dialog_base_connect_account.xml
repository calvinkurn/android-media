<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.CardUnify
        android:padding="@dimen/unify_space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/unify_space_8">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/dialog_external_register_title"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/unify_space_4"
                android:textColor="@color/Unify_N700_96"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ovo_connect_account_title"
                app:typographyType="heading_2" />

            <com.tokopedia.unifyprinciples.Typography
                android:textColor="@color/Unify_N700_68"
                android:id="@+id/dialog_external_register_description"
                android:layout_marginTop="@dimen/unify_space_16"
                android:textAlignment="center"
                android:text="@string/ovo_connect_account_description"
                android:layout_width="match_parent"
                app:typographyType="body_2"
                android:layout_height="wrap_content"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/dialog_external_register_btn_positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_24"
                android:text="@string/dialog_connect_account_positive_btn_text" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:textColor="@color/Unify_N700_68"
                android:id="@+id/dialog_external_register_btn_negative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_8"
                android:text="@string/dialog_connect_account_negative_btn_text"
                app:unifyButtonVariant="text" />

        </LinearLayout>

    </com.tokopedia.unifycomponents.CardUnify>
    
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:background="@color/Unify_N0"
        app:cardCornerRadius="6dp"
        android:paddingTop="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginLeft="@dimen/unify_space_16"
            android:layout_marginRight="@dimen/unify_space_16"
            android:id="@+id/dialog_external_register_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@drawable/img_ovo_collaboration" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>