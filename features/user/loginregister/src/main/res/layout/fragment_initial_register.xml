<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">

    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      app:layout_constraintBottom_toTopOf="@+id/emailExtension">

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_announcement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:tickerType="announcement"
                app:tickerShapeType="full" />

            <com.tokopedia.loginregister.registerinitial.view.customview.PartialRegisterInputView
                android:id="@+id/register_input_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8">

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_centerVertical="true"
                    android:background="@color/grey_300"/>

                <TextView
                    android:id="@+id/register_option_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/sp_4"
                    android:padding="@dimen/dp_16"
                    android:text="@string/register_now"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/sp_12"
                    />
            </RelativeLayout>

            <com.tokopedia.design.component.ButtonCompat
                android:id="@+id/socmed_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:text="@string/social_media"
                android:textAllCaps="false"
                app:buttonCompatType="white"/>

            <com.tokopedia.loginregister.common.view.LoginTextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                app:backgroundColor="@color/black"
                app:cornerSize="5"
                app:customText="@string/register_with_email"
                app:iconButton="@drawable/bg_transparent"
                app:textColor="@color/black_70"/>

            <TextView
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/dp_20"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="@dimen/dp_52"
                tools:text="Sudah punya akun? Masuk"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_login"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_login"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-light"
            android:text="@string/login_progress_signing_in"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone"/>
    </RelativeLayout>
  
  <com.tokopedia.loginregister.common.view.EmailExtension
    android:id="@+id/emailExtension"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"/>
  
</androidx.constraintlayout.widget.ConstraintLayout>