<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/unify_space_32"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/goto_seamless_main_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_goto_seamless_illustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/goto_seamless_title_txt"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goto_seamless_main_img"
        app:typographyType="heading_1"
        android:text="Masuk untuk Lanjut" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="@dimen/unify_space_8"
        android:id="@+id/goto_seamless_description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karena akunmu udah terhubung sama Gojek, jadi masuknya bisa instan!"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goto_seamless_title_txt"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/goto_seamless_primary_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_24"
        android:text="Masuk dengan Akun ini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goto_seamless_description_txt" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="@integer/int_3"
        app:layout_constraintEnd_toEndOf="@+id/goto_seamless_primary_btn"
        app:layout_constraintStart_toStartOf="@+id/goto_seamless_primary_btn"
        app:layout_constraintTop_toBottomOf="@+id/goto_seamless_primary_btn">

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/Unify_NN200" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="atau"
            app:typographyType="display_3"
            android:textAlignment="center" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/Unify_NN200" />

    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_marginTop="@dimen/unify_space_16"
        android:id="@+id/goto_seamless_secondary_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Masuk ke Akun Lain"
        app:layout_constraintEnd_toEndOf="@+id/goto_seamless_primary_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/goto_seamless_primary_btn"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:unifyButtonVariant="ghost"
        app:unifyButtonType="alternate" />


</androidx.constraintlayout.widget.ConstraintLayout>