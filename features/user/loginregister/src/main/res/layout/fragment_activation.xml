<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/register_icon"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_32"
            />

        <TextView
            android:id="@+id/title_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/register_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/validation_title"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/activation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_verify"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_3"

            android:textColor="@color/black_54"
            tools:text="Kode aktivasi akun telah dikirimkan ke tjangjialie@gmail.com"/>

        <LinearLayout
            android:id="@+id/llotp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/activation_text"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <com.tokopedia.design.widget.PinEditText
                android:id="@+id/input_verify_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:fontFamily="sans-serif-medium"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/black_70"
                android:textIsSelectable="false"
                android:textSize="@dimen/sp_32"
                android:textStyle="normal"
                android:visibility="visible"
                app:LineColors="@color/pin_line_colors"
                tools:text="123123"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/error_image"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignBottom="@id/llotp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/llotp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_cancel_red"/>

        <TextView
            android:id="@+id/error_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llotp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:text="@string/error_wrong_otp"
            android:textColor="@color/red_500"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            android:visibility="invisible"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/verify_button"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@id/llotp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/grey_button_rounded"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/title_validation_otp"
            android:textColor="@color/black_12"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify_button"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/validation_resend_email"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"/>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>