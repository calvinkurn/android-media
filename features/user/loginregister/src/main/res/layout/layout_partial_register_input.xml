<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginHorizontal="16dp"
    android:background="@color/Unify_Background">

    <RelativeLayout
        android:id="@+id/email_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.TextFieldUnify2
            android:id="@+id/input_email_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/partial_input_3"
            android:imeOptions="actionDone"
            app:unify_text_field_input_type="textEmailAddress"
            app:unify_text_field_label="@string/phone_or_email_input"
            app:unify_text_field_message="@string/default_placeholder" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/change_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/input_email_phone"
            android:layout_alignBottom="@id/input_email_phone"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/partial_input_5"
            android:gravity="center"
            android:padding="@dimen/spacing_lvl3"
            android:text="@string/change_2"
            android:textColor="@color/Unify_G400"
            android:visibility="gone"
            app:typographyType="display_3"
            app:typographyWeight="bold" />
    </RelativeLayout>

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/wrapper_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_phone_layout"
        android:visibility="gone"
        app:unify_text_field_input_type="textPassword"
        app:unify_text_field_label="@string/title_password"
        app:unify_text_field_label_static="true" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrapper_password"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/partial_input_minus_10"
        android:contentDescription="@string/content_desc_forgot_pass"
        android:gravity="end"
        android:paddingLeft="@dimen/partial_input_10"
        android:paddingTop="@dimen/spacing_lvl2"
        android:paddingRight="@dimen/partial_input_10"
        android:paddingBottom="@dimen/spacing_lvl2"
        android:text="@string/title_forgot_password"
        android:textColor="@color/Unify_G400"
        android:visibility="gone"
        app:typographyType="display_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_pass"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/register"
        android:textAllCaps="false"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

</RelativeLayout>