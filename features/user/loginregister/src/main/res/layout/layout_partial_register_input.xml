<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30">

        <LinearLayout
            android:id="@+id/email_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/input_layout"
                style="@style/HintTextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_weight="1"
                android:hint="@string/phone_or_email_input"
                android:inputType="phone"
                android:paddingLeft="-5dp">

                <EditText
                    android:id="@+id/input_email_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"/>

            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <TextView
                android:id="@+id/change_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/change_2"
                android:visibility="gone"
                android:textColor="@color/medium_green"
                android:textSize="12sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_phone_layout"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="@string/we_will_send_verification_code"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email_phone_layout"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:textColor="@color/red_500"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <com.tokopedia.design.text.TkpdHintTextInputLayout
            android:id="@+id/wrapper_password"
            style="@style/HintTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_message"
            android:paddingLeft="-5dp"
            android:hint="@string/title_password"
            android:visibility="gone"
            app:passwordToggleDrawable="@drawable/asl_password_visibility"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionId="@+id/ime_login"
                android:imeActionLabel="Lanjut"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:typeface="sans"/>
        </com.tokopedia.design.text.TkpdHintTextInputLayout>

        <TextView
            android:id="@+id/forgot_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrapper_password"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:lineSpacingExtra="9sp"
            android:padding="@dimen/dp_10"
            android:text="@string/title_forgot_password"
            android:textColor="@color/medium_green"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textStyle="normal"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"

            android:layout_below="@+id/forgot_pass"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/green_button_rounded"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/register"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>