<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/layout_lvl5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_forbidden"
            android:layout_gravity="center"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginTop="@dimen/layout_lvl3"
            android:id="@+id/tv_title_forbidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="body_1"
            android:gravity="center"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_message_forbidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl1"
            app:typographyType="body_2"
            android:gravity="center"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_retry_forbidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="@dimen/layout_lvl4"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled"
            android:text="@string/forbidden_button"/>

    </LinearLayout>

</RelativeLayout>