<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/spacing_lvl3"
    android:layout_marginBottom="@dimen/spacing_lvl3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_background_tokopedia"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/seamless_fragment_avatar"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:srcCompat="@drawable/ic_shop_greyscale"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/login_layout_12"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/main_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/seamless_fragment_avatar"
            app:layout_constraintTop_toTopOf="@id/main_view">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/seamless_fragment_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:drawablePadding="@dimen/spacing_lvl2"
                android:drawableLeft="@drawable/ic_shop_greyscale"
                android:textColor="@color/black_70"
                app:typographyType="body_2"
                tools:text="Toko Saya ini"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/seamless_fragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:maxLines="1"
                app:typographyType="body_3"
                tools:text="Albert Wesker" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/seamless_fragment_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl2"
                app:typographyType="body_3"
                tools:text="a*******@g****.com"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>