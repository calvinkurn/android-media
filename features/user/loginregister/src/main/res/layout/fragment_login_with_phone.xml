<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/parent_container"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_announcement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:tickerShapeType="full"
                app:tickerType="announcement" />

            <ImageView
                android:id="@+id/banner_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <com.tokopedia.loginregister.registerinitial.view.customview.PartialRegisterInputView
                android:id="@+id/login_input_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8">

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_centerVertical="true"
                    android:background="@color/grey_300"/>

                <TextView
                    android:id="@+id/login_option_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:padding="@dimen/dp_16"
                    android:text="@string/or_login_with_space"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/sp_12"
                  />
            </RelativeLayout>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/fingerprint_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:text="@string/fingerprint_login"
                android:textAllCaps="false"
                android:visibility="gone"
                app:unifyButtonVariant="ghost"
                app:unifyButtonType="alternate"
                android:layout_marginBottom="@dimen/dp_8" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/socmed_btn"
                android:contentDescription="@string/content_desc_socmed_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:text="@string/social_media"
                android:textAllCaps="false"
                app:unifyButtonVariant="ghost"
                app:unifyButtonType="alternate"/>

            <TextView
                android:id="@+id/register_button"
                android:contentDescription="@string/content_desc_register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/dp_20"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="@dimen/dp_52"
                tools:text="Belum punya akun Tokopedia? Daftar"/>

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/to_tokopedia_care"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/spacing_lvl5"
            android:text="@string/need_help_call_tokopedia_care"
            android:textAlignment="center"
            app:typographyWeight="reguler"
            app:typographyType="body_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_login"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_login"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-light"
            android:text="@string/login_progress_signing_in"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone"/>
    </RelativeLayout>

  <com.tokopedia.loginregister.common.view.EmailExtension
    android:id="@+id/emailExtension"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>