<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/provider_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_lvl6"
    android:layout_gravity="center"
    android:layout_margin="@dimen/spacing_lvl1"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingRight="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/provider_image"
        android:layout_width="@dimen/login_text_view_18"
        android:layout_height="@dimen/login_text_view_18"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/provider_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/login_text_view_18"
        android:layout_weight="4"
        android:gravity="center"
        android:textColor="@color/Unify_N700_68"
        tools:text="masuk dengan facebook" />
</LinearLayout>