<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Tkpd Design -->
    <style name="TextInputLayoutColorLine" parent="Theme.Design.Light">
        <item name="android:textColorHint">@color/Unify_Static_Black_44</item>
        <item name="colorControlNormal">@color/Unify_NN500</item>
        <item name="colorControlActivated">@color/Unify_GN500</item>
        <item name="colorControlHighlight">@color/Unify_GN500</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutColorLine</item>
    </style>

    <style name="HintTextInputLayout" parent="TextInputLayout">
        <item name="defaultTextColorLabel">@color/Unify_Static_Black_44</item>
        <item name="focusedTextColorLabel">@color/Unify_Static_Black_44</item>
        <item name="disabledTextColorLabel">@color/Unify_Static_Black_44</item>
        <item name="android:theme">@style/HintTextInputLayoutColorLine</item>
    </style>
</resources>