<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Dialog" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <!-- removing the dialog's action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="loginRegisterHelperText">
        <item name="android:textColor">@color/Unify_N700_44</item>
    </style>

    <!-- Tkpd Design -->
    <style name="TextInputLayoutColorLine" parent="Theme.Design.Light">
        <item name="android:textColorHint">@color/font_black_secondary_54</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/tkpd_main_green</item>
        <item name="colorControlHighlight">@color/tkpd_main_green</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutColorLine</item>
    </style>

    <style name="HintTextInputLayout" parent="TextInputLayout">
        <item name="defaultTextColorLabel">@color/font_black_secondary_54</item>
        <item name="focusedTextColorLabel">@color/font_black_secondary_54</item>
        <item name="disabledTextColorLabel">@color/font_black_secondary_54</item>
        <item name="android:theme">@style/HintTextInputLayoutColorLine</item>
    </style>
</resources>