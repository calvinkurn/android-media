<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.groupchat">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:label="@string/groupchat_title">

        <activity
            android:name=".channel.view.activity.ChannelActivity"
            android:label="@string/activity_channel"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />

        <activity
            android:name=".chatroom.view.activity.GroupChatActivity"
            android:label="@string/groupchat_title"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent"
            android:configChanges="orientation|screenSize|locale"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

        <activity
            android:name=".room.view.activity.PlayActivity"
            android:label="@string/groupchat_title"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|locale"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_groupchat_channel_id"/>
            </intent-filter>
        </activity>


        <activity
            android:name=".room.view.activity.PlayWebviewActivity"
            android:label="@string/groupchat_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_groupchat_webview"
                    android:pathPattern="@string/path_groupchat_webview"/>
            </intent-filter>
        </activity>

    </application>

</manifest>