<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    tools:background="@color/red_150">


    <android.support.v7.widget.CardView
        android:id="@+id/card_group_chat_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_chat_image"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_sprint_sale_inactive"
                />

            <android.widget.Space
                android:id="@+id/spac"
                android:layout_width="@dimen/dp_4"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/quiz_start"
                android:textColorLink="@color/quiz_start"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/spac"
                android:layout_toEndOf="@+id/spac"
                android:layout_alignTop="@id/icon"
                android:layout_alignBottom="@id/icon"
                android:gravity="center"
                tools:text="Quiz Telah berakhir"/>

            <android.widget.Space
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_4"
                android:layout_below="@id/title"/>

            <android.support.v7.widget.CardView
                android:id="@+id/content_image_container"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:contentPadding="0dp"
                android:layout_below="@id/space"
                android:layout_alignLeft="@id/title"
                android:layout_alignStart="@id/title">

                <com.tokopedia.design.image.SquareImageView
                    android:id="@+id/content_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red_400"/>
            </android.support.v7.widget.CardView>

            <android.widget.Space
                android:id="@+id/space2"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_4"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/content_image_container"
                android:layout_toEndOf="@id/content_image_container"
                />

            <LinearLayout
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/content_image_container"
                android:layout_alignBottom="@id/content_image_container"
                android:layout_toRightOf="@id/space2"
                android:layout_toEndOf="@id/space2"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_24"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/price_before_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/black_38"

                    tools:text="Rp4.655.000"
                    />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#ff5722"
                    android:textStyle="bold"
                    android:lineSpacingExtra="4sp"
                    tools:text="Rp2.150.000"
                    android:layout_weight="1"
                    />
                <ProgressBar
                    android:id="@+id/stock_progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:indeterminate="false"
                    tools:progress="100"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_bar_stock"
                    />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>