<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/header_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="@dimen/dp_15"
              android:fontFamily="sans-serif"
              android:gravity="center"
              android:textAllCaps="true"
              android:textColor="@color/font_black_disabled_38"
              android:textSize="@dimen/sp_12"
              android:textStyle="normal"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:text="HARI INI"/>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/groupchat_avatar_size"
        android:layout_height="@dimen/groupchat_avatar_size"
        android:layout_below="@id/header_time"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_5"
        tools:src="@color/background_notification"/>

    <include
        android:id="@+id/chat_header"
        layout="@layout/chat_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_time"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginStart="@dimen/space_small"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_header"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginStart="@dimen/space_small"
        android:layout_marginTop="@dimen/space_mini"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:orientation="horizontal"
        android:weightSum="9">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sprintsale_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@drawable/chat_vote_background"
                android:minWidth="@dimen/max_size_bubble"
                android:paddingBottom="@dimen/space_med"
                android:paddingLeft="@dimen/space_average"
                android:paddingRight="@dimen/space_average"
                android:paddingTop="@dimen/space_med"
                >

                <ImageView
                    android:id="@+id/sprintsale_icon"
                    android:layout_width="@dimen/sprint_sale_announcement_icon_size"
                    android:layout_height="@dimen/sprint_sale_announcement_icon_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_sprint_sale_inactive"
                    tools:layout_editor_absoluteX="12dp"/>

                <TextView
                    android:id="@+id/sprintsale_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_mini"
                    android:layout_marginStart="@dimen/space_mini"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/sprintsale_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="SPRINT SALE TELAH DIMULAI"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sprintsale_title"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>