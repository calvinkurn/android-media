<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    tools:background="@color/yellow_200">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_rounded_chat_input"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.design.text.BackEditText
            android:id="@+id/reply_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/chat_hint"
            android:inputType="textMultiLine"
            android:gravity="center_vertical"
            android:background="@null"
            android:maxLength="200"
            android:maxLines="5"
            android:textColor="@color/white"
            android:textColorHint="@color/play_transparent_hint_reply"
            android:textSize="@dimen/sp_14"
            android:visibility="visible"
            tools:hint="afd"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingStart="@dimen/dp_12"
            android:paddingRight="@dimen/dp_0"
            android:paddingEnd="@dimen/dp_0"
            android:text="@string/button_send"
            android:textColor="@color/play_send"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_2"
        android:visibility="gone"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/interaction_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        tools:itemCount="3"
        tools:listitem="@layout/dynamic_icon_item"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_2" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/interaction_button"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="lovebutton1.json"/>

</android.support.constraint.ConstraintLayout>