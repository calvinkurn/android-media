<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_8"
    android:paddingTop="@dimen/dp_8"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_12"
    tools:background="@color/yellow_200">
        <com.tokopedia.design.text.BackEditText
            android:id="@+id/reply_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_chat_input"
            android:hint="@string/chat_hint"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:maxLines="5"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:textColor="@color/white"
            android:textColorHint="@color/play_transparent_hint_reply"
            android:textSize="@dimen/sp_14"
            android:visibility="visible"
            android:layout_gravity="center"
            tools:hint="afdfink"
            android:layout_weight="1"
            tools:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:listitem = "@layout/dynamic_icon_item"
        tools:itemCount="3"
        android:paddingRight="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_2"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:layout_gravity="bottom"/>


    <ImageView
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:visibility="gone"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/ic_send_24dp_green"
        tools:visibility="gone" />


</LinearLayout>