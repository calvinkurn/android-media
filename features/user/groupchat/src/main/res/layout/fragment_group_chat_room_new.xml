<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/button_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="@id/bottom"
                app:layout_constraintEnd_toEndOf="@id/bottom"
                app:layout_constraintRight_toRightOf="@id/bottom"
                app:layout_constraintTop_toTopOf="@id/reply_edit_text"
                app:srcCompat="@drawable/ic_send_24dp_green"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="460dp"
                tools:visibility="visible" />

            <com.tokopedia.design.text.BackEditText
                android:id="@+id/reply_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_chat_input"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:maxLines="5"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@id/bottom"
                app:layout_constraintEnd_toStartOf="@+id/button_send"
                app:layout_constraintRight_toLeftOf="@+id/button_send"
                app:layout_constraintStart_toStartOf="@id/bottom"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="dsajj\nfdfidjidfijdfijd\n asd\basd"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/top_shadow"
                android:elevation="@dimen/elevation_login_group_chat"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_20"
                android:paddingTop="@dimen/dp_30"
                android:text="@string/login_to_chat"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"
                tools:visibility="gone" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/pinned_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1"
            app:reverseLayout="true"
            app:stackFromEnd="true"
            tools:itemCount="1"
            tools:listitem="@layout/chat_view_holder"/>

        <LinearLayout
            android:id="@+id/layout_new_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/label_new_chat"
            android:elevation="@dimen/cardview_default_elevation"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space_small"
            android:paddingLeft="@dimen/space_med"
            android:paddingRight="@dimen/space_med"
            android:paddingTop="@dimen/space_small"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/chat_list"
            app:layout_constraintEnd_toEndOf="@id/pinned_message"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/new_message"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"/>

            <Space
                android:layout_width="@dimen/space_mini"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="@dimen/arrow_size"
                android:layout_height="@dimen/arrow_size"
                android:layout_gravity="center_vertical"
                android:rotation="180"
                app:srcCompat="@drawable/ic_arrow_up_green"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/sprintsale_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_15"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/pinned_message"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/sprintsale_icon"
                android:layout_width="@dimen/sprint_sale_icon_size"
                android:layout_height="@dimen/sprint_sale_icon_size"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_ss_svg_fin"/>

            <TextView
                android:id="@+id/sprintsale_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sprintsale_icon"
                android:background="@drawable/bg_rounded_red_label"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/font_tinier"
                android:textStyle="bold"
                tools:text="Berlangsung"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/quick_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone"
            />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey_300"
            app:layout_constraintStart_toStartOf="@id/quick_reply"
            app:layout_constraintTop_toTopOf="@id/quick_reply"
            android:visibility="gone"
            tools:visibility="gone"/>


        <include
            android:id="@+id/pinned_message"
            layout="@layout/pinned_message_view_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_12"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/quick_reply"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"/>


</RelativeLayout>