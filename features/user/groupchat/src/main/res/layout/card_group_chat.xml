<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_med"
    android:layout_marginRight="@dimen/space_med"
    android:elevation="@dimen/card_channel_elevation"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="3dp"
    app:cardElevation="@dimen/card_channel_elevation"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="2:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:src="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_med" />

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="4sp"
            android:maxLines="2"
            android:paddingLeft="@dimen/space_avg_small"
            android:paddingRight="@dimen/space_med"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal"
            tools:text="2018 FIFA World Cup" />

        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_mini" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="3sp"
            android:maxLines="2"
            android:paddingLeft="@dimen/space_avg_small"
            android:paddingRight="@dimen/space_med"
            android:textColor="@color/black_55"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            tools:text="Hai para pecinta sepak bola,Ramaikan pialadunia 2018 bersama Tokopedia!â€¦ luar biasa menang jfeijeij" />

        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_med" />

        <RelativeLayout
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_avg_small"
            android:paddingRight="@dimen/space_med">

            <ImageView
                android:id="@+id/prof_pict"
                android:layout_width="@dimen/groupchat_avatar_size_large"
                android:layout_height="@dimen/groupchat_avatar_size_large"
                android:layout_marginRight="@dimen/space_small"
                tools:src="@drawable/ic_badge_diamond" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/prof_pict"
                android:layout_toRightOf="@+id/prof_pict"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                tools:text="Darius Sinathrya" />

            <ImageView
                android:id="@+id/logo_participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/participant"
                android:layout_toStartOf="@+id/participant"
                app:srcCompat="@drawable/ic_eyes_view" />


            <TextView
                android:id="@+id/participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_mini"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_38"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="2.546.000" />

        </RelativeLayout>

        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_med" />

    </LinearLayout>
</androidx.cardview.widget.CardView>