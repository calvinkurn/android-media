<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/gc_component_width"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_transparent_quiz"
    android:padding="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        app:srcCompat="@drawable/ic_quiz_start"
        android:layout_alignTop="@+id/title"
        android:layout_alignBottom="@+id/title" />

    <android.widget.Space
        android:id="@+id/spac"
        android:layout_width="@dimen/dp_4"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/quiz_start"
        android:textColorLink="@color/quiz_start"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:layout_toRightOf="@id/spac"
        android:layout_toEndOf="@id/spac"
        tools:text="Quiz Telah berakhir"/>

    <android.widget.Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_4"
        android:layout_below="@id/title"/>


    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/charcoal_grey"
        android:layout_below="@id/space"
        android:layout_alignLeft="@id/title"
        tools:text="Menurut Topper, siapakah bintang tamu acara buka pua.."
        />

</RelativeLayout>