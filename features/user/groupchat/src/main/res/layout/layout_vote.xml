<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vote_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_vote"
                android:layout_width="@dimen/size_icon_vote"
                android:layout_height="@dimen/size_icon_vote"
                app:srcCompat="@drawable/ic_timer" />

            <Space
                android:layout_width="@dimen/space_mini"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/vote_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingBottom="@dimen/space_med"
                android:paddingTop="@dimen/space_med"
                android:text="@string/time_remaining"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <Space
                android:layout_width="@dimen/space_small"
                android:layout_height="wrap_content" />

            <com.tokopedia.groupchat.channel.view.ProgressBarWithTimer
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layout_voted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space_average"
                android:paddingTop="@dimen/space_average"
                android:visibility="gone"
                tools:visibility="visible">

                <View
                    android:layout_width="@dimen/space_micro"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_avg_small"
                    android:layout_marginRight="@dimen/space_avg_small"
                    android:background="@color/grey_hint" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_choose" />

                <Space
                    android:layout_width="@dimen/space_mini"
                    android:layout_height="match_parent"
                    android:background="@color/red_50"
                    android:paddingLeft="@dimen/space_avg_small"
                    android:paddingRight="@dimen/space_avg_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/has_voted_label"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vote_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_med"
        android:paddingLeft="@dimen/space_sm"
        android:paddingRight="@dimen/space_sm"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/vote_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5sp"
            android:paddingLeft="@dimen/space_med"
            android:paddingRight="@dimen/space_med"
            android:text="Menurut Toppers, siapa ya yang akan jadi pemain MVP di Piala Dunia Tahun Ini?"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_med" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vote_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false"
            tools:itemCount="2"
            tools:listitem="@layout/vote_option_image" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_med" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/vote_participant"
                app:srcCompat="@drawable/ic_info_green_groupchat"/>


            <TextView
                android:id="@+id/vote_info_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/badge"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="@dimen/dp_10"
                tools:text="Info Hadiah"
                android:textColor="@color/medium_green"
                android:textSize="12sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/vote_participant_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:textColor="@color/black_38"
                android:textSize="@dimen/font_label"
                android:textStyle="normal"
                tools:text="Telah memilih"/>

            <TextView
                android:id="@+id/vote_participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/vote_participant_label"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                tools:text="1.725.000"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_2"
                android:textColor="@color/black_38"
                android:textSize="@dimen/font_label"
                android:textStyle="normal" />



        </RelativeLayout>
    </LinearLayout>
</LinearLayout>