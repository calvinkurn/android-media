<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@color/second_white_image"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/groupchat_avatar_size"
                android:layout_height="@dimen/groupchat_avatar_size"
                android:layout_below="@id/header_time"
                android:layout_marginTop="@dimen/space_mini"
                tools:src="@color/background_notification"/>

            <include
                android:id="@+id/chat_header"
                layout="@layout/chat_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_time"
                android:layout_marginLeft="@dimen/space_small"
                android:layout_marginStart="@dimen/space_small"
                android:layout_toEndOf="@id/avatar"
                android:layout_toRightOf="@id/avatar"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat_header"
                android:layout_marginLeft="@dimen/space_small"
                android:layout_marginStart="@dimen/space_small"
                android:layout_toEndOf="@id/avatar"
                android:layout_toRightOf="@id/avatar"
                android:fontFamily="sans-serif"
                android:textColor="@color/font_black_primary_70"
                android:textColorLink="@color/font_black_primary_70"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="visible"
                android:maxLines="1"
                tools:text="Wuuu baik om! Go Brazil go!"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/bar_size"
            android:layout_height="@dimen/bar_size"
            android:src="@color/colorRed"/>
    </LinearLayout>
</RelativeLayout>