<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_8"
                android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:text="@string/see"
        android:paddingRight="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:textStyle="bold"
        android:background="@drawable/rounded_transparent_right"
        android:paddingBottom="@dimen/dp_4"/>

    <LinearLayout
        android:background="@drawable/rounded_transparent_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/see"
        android:layout_toStartOf="@id/see"
        android:paddingRight="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pinned"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:textColor="@color/black_26"
            android:textSize="@dimen/font_label"
            android:textStyle="normal"
            app:srcCompat="@drawable/ic_pin"
            android:scaleX="-1"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_5"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/admin"
            android:textColor="@color/new_green"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_8"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Tantangan Kuis Emoji Berhadiah Perâ€¦" />
    </LinearLayout>

</RelativeLayout>