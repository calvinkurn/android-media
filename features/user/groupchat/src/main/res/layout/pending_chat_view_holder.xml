<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/groupchat_avatar_size"
        android:layout_height="@dimen/groupchat_avatar_size"
        android:layout_marginEnd="@dimen/new_margin_small"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_small"
        android:layout_marginStart="@dimen/new_margin_med"
        android:layout_marginTop="@dimen/margin_sm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/background_notification"/>

    <ImageView
        android:id="@+id/influencer_badge"
        android:layout_width="@dimen/badge_size"
        android:layout_height="@dimen/badge_size"
        android:layout_marginTop="@dimen/margin_sm"
        android:layout_marginLeft="@dimen/margin_vs"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_badge_bronze"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sm"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:layout_marginLeft="@dimen/margin_vs"
        android:fontFamily="sans-serif"
        android:padding="@dimen/padding_vvvs"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/influencer_badge"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Atalarikzyah"/>

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vvs"
        android:layout_marginRight="@dimen/margin_vvs"
        android:layout_marginTop="@dimen/margin_sm"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/dot"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/dot_size"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintStart_toEndOf="@+id/nickname"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sm"
        android:layout_toEndOf="@id/nickname"
        android:layout_toRightOf="@id/nickname"
        android:fontFamily="sans-serif"
        android:padding="@dimen/padding_vvvs"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/pending"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname"
        android:layout_marginBottom="@dimen/new_margin_small"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_primary_70"
        android:textColorLink="@color/font_black_primary_70"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        tools:text="Wuuu baik om! Go Brazil go!"/>

</android.support.constraint.ConstraintLayout>