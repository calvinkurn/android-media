<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_med"
    android:paddingTop="@dimen/space_med">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_med">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/size_icon_share_app"
            android:layout_height="@dimen/size_icon_share_app"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/ic_btn_g" />

        <Space
            android:layout_width="@dimen/space_sm"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="2sp"
            android:maxLines="1"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            tools:text="Google+" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_atomic"
        android:background="@color/grey_hint" />
</LinearLayout>