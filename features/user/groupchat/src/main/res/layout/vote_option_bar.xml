<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_view"
        android:layout_alignTop="@+id/text_view"
        android:indeterminate="false"
        android:minHeight="@dimen/bar_size"
        android:progress="80"
        android:progressDrawable="@drawable/vote_option_bar_default"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="273dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:drawablePadding="@dimen/padding_vs"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:paddingBottom="@dimen/space_average"
                android:paddingLeft="@dimen/space_med"
                android:paddingRight="@dimen/space_small"
                android:paddingTop="@dimen/space_average"
                android:textColor="@color/font_black_secondary_54"
                android:textSize="@dimen/font_small"
                tools:text="Donald Duck "/>

        </RelativeLayout>

        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/space_average"
            android:paddingLeft="@dimen/space_small"
            android:paddingRight="@dimen/space_small"
            android:paddingTop="@dimen/space_average"
            android:textColor="@color/black_26"
            android:textSize="@dimen/font_micro"
            android:textStyle="bold"
            tools:text="90%"
            />

    </LinearLayout>
</RelativeLayout>