<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_12">

    <ImageView
        android:id="@+id/pinned_message_avatar"
        android:layout_width="@dimen/groupchat_avatar_size"
        android:layout_height="@dimen/groupchat_avatar_size"
        android:layout_below="@id/header_time"
        android:layout_marginTop="@dimen/space_mini"
        tools:src="@color/background_notification" />

    <include
        android:id="@+id/chat_header"
        layout="@layout/chat_header_pinned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pinned_message_avatar"
        android:layout_toRightOf="@+id/pinned_message_avatar"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginStart="@dimen/space_small"
        android:visibility="visible" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chat_header"
        android:layout_alignStart="@+id/chat_header"
        android:layout_below="@+id/chat_header"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_primary_70"
        android:textColorLink="@color/font_black_primary_70"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="visible"
        tools:text="Wuuu baik om! Go Brazil go!" />

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/message"
        android:layout_alignStart="@id/message"
        android:layout_below="@id/message"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/dp_8"
        android:src="@color/colorRed" />


</RelativeLayout>