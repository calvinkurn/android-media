<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/space_med"
    android:layout_marginRight="@dimen/space_med"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_group_points"
        android:paddingBottom="@dimen/space_avg_small"
        android:paddingLeft="@dimen/space_mini"
        android:paddingRight="@dimen/space_mini"
        android:paddingTop="@dimen/space_avg_small">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_centerInParent="true"
                android:contentDescription="@string/title_group_chat"
                app:srcCompat="@drawable/ic_gratification_points" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_avg_small"
            android:layout_marginLeft="@dimen/space_avg_small"
            android:textColor="@color/orange_group_points_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Selamat! Anda mendapatkan 20 poin dari channel ini." />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
