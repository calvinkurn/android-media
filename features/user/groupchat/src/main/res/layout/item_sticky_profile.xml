<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dp_8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="@dimen/dp_210"
    app:cardElevation="@dimen/dp_0"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4">

        <android.support.v7.widget.CardView
            android:id="@+id/layout_image"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            app:cardCornerRadius="@dimen/dp_6"
            app:cardElevation="@dimen/dp_0"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/dp_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.design.image.SquareImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/iv_byme"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/layout_image"
            app:layout_constraintRight_toRightOf="@id/layout_image"
            app:srcCompat="@drawable/ic_byme_card"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/recommendation_from"
            android:textSize="@dimen/sp_10"
            app:layout_constraintStart_toEndOf="@id/layout_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_subtitle"
            app:layout_constraintEnd_toStartOf="@+id/atc_sticky_play"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/sp_16"
            tools:text="asdfadfsfafdfasdafasfaadfadfa"
            app:layout_constraintStart_toEndOf="@id/layout_image"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/atc_sticky_play"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_12" />

        <ImageView
            android:id="@+id/atc_sticky_play"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            app:srcCompat = "@drawable/ic_atc_sticky_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>