<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/black_dimmed"
                android:centerY="0.75"
                android:endColor="@color/black_dimmed"
                android:startColor="@color/black_dimmed" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/second_white_image"
                    android:startColor="@color/first_white_image" />
            </shape>
        </clip>
    </item>
</layer-list>

