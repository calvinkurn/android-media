<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<android.support.constraint.ConstraintLayout
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_20">

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapper_old"
        style="@style/TextInputLayout.ChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="@string/title_old_password"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.changepassword.common.util.PasswordView
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/font_black_primary_70"
            android:textSize="@dimen/sp_16"/>

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <TextView
        android:id="@+id/forgot_pass_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="9sp"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:paddingTop="@dimen/dp_9"
        android:text="@string/forgot_password_tokopedia"
        android:textColor="@color/medium_green"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wrapper_old"
        />

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapper_new"
        style="@style/TextInputLayout.ChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:hint="@string/title_new_password"
        app:layout_constraintTop_toBottomOf="@id/forgot_pass_tv">

        <com.tokopedia.changepassword.common.util.PasswordView
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/font_black_primary_70"
            android:textSize="@dimen/sp_16"/>

    </com.tokopedia.design.text.TkpdHintTextInputLayout>


    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapper_conf"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:hint="@string/title_new_password_confirmation"
        app:layout_constraintTop_toBottomOf="@id/wrapper_new">

        <com.tokopedia.changepassword.common.util.PasswordView
            android:id="@+id/new_password_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/font_black_primary_70"
            android:textSize="@dimen/sp_16"/>
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <TextView
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/grey_button_rounded"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/button_save"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toBottomOf="@id/wrapper_conf"/>

</android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
      android:layout_centerInParent="true"/>
</RelativeLayout>