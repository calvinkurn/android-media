            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/wrapper_old"
                app:text_field_input_type="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:text_field_label="@string/insert_old_password"
                app:text_field_label_static="false"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/forgot_pass_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="9sp"
                android:text="@string/forgot_password_tokopedia"
                android:textColor="@color/medium_green"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wrapper_old"
                />

            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/wrapper_new"
                app:text_field_input_type="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:text_field_label="@string/insert_new_password"
                app:text_field_label_static="false"
                app:layout_constraintTop_toBottomOf="@id/forgot_pass_tv" />

            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/wrapper_conf"
                app:text_field_input_type="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:text_field_label="@string/reenter_password"
                app:text_field_label_static="false"
                app:layout_constraintTop_toBottomOf="@id/wrapper_new" />

            <TextView
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/bg_button_disabled"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/button_save"
                android:textSize="@dimen/sp_13"
                app:layout_constraintTop_toBottomOf="@id/wrapper_conf"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>