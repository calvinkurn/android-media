query ($Page: Int, $FilterId: Int, $NotifLang: String) {
  notifcenter_list(page: 1, filter_id: 0, notif_center_lang: "") {
    paging {
      has_next
      has_prev
    }
    list {
      notif_id
      user_id
      shop_id
      section_key
      subsection_key
      title
      short_description
      content
      type_of_user
      create_time
      create_time_unix
      update_time
      update_time_unix
      status
      read_status
      data_notification {
        app_link
        desktop_link
        info_thumbnail_url
        mobile_link
      }
    }
    section_list {
      id
      key
      subsection_list {
        key
        text
      }
    }
  }
}
