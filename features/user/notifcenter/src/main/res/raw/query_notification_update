query get_notification_update($page: Int, $typeId: Int, $tagId: Int, $lastNotifId: String, $typeOfNotif: Int){
  notifcenter_detail(page: $page, type_id: $typeId, tag_id: $tagId, last_notif_id: $lastNotifId, type_of_notif: $typeOfNotif) {
    paging {
      has_next
      has_prev
    }
    list {
      notif_id
      user_id
      shop_id
      section_id
      section_key
      section_icon
      subsection_key
      template_key
      title
      short_description
      short_description_html
      is_longer_content
      button_text
      content
      type_of_user
      create_time
      create_time_unix
      update_time
      update_time_unix
      status
      read_status
      type_link
      show_bottomsheet
      type_bottomsheet
      data_notification {
        app_link
        desktop_link
        info_thumbnail_url
        mobile_link
        checkout_url
      }
      product_data {
        stock
        product_id
        name
        url
        image_url
        price
        price_fmt
        currency
        price_idr
        is_buyable
        is_topads
        is_wishlist
        rating
        count_review
        has_reminder
        labels {
            title
            color
        }
        campaign {
            active
            original_price
            original_price_fmt
            discount_percentage
            discount_price
            discount_price_fmt
        }
        variant {
            value
            identifier
            hex
        }
        shop {
            id
            name
            location
            free_shipping_icon
            badges {
                title
                image_url
            }
        }
      }
      total_product
    }
    options {
      longer_content
    }
    user_info {
      user_id
      shop_id
      email
      fullname
    }
  }

}