<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/notif_dp_16">

    <include
        android:id="@+id/parent_layout"
        layout="@layout/item_notification_update_parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="@dimen/notif_dp_0"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/notif_sp_4"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_96"
        android:textSize="@dimen/notif_sp_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parent_layout"
        tools:text="Hari Terakhir Promo Cashback untuk Dapat Ekstra Lebih" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/body"
        android:layout_width="@dimen/notif_dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/notif_sp_4"
        android:textColor="@color/Unify_N700_44"
        android:textSize="@dimen/notif_sp_14"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Spesial untuk Anda! Ekstra cashback 25% Rp 250.000" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recommendation"
        android:layout_width="@dimen/notif_dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notif_dp_8"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body"
        tools:itemCount="4"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_notification_product_recommendation"
        tools:orientation="vertical"
        tools:spanCount="4"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>