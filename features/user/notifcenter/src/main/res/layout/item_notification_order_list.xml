<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_N50"
    android:paddingHorizontal="@dimen/unify_space_16"
    android:paddingVertical="@dimen/unify_space_12">

    <com.tokopedia.notifcenter.widget.ItemOrderListLinearLayout
        android:id="@+id/ll_first_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_8"
        android:orientation="horizontal"
        android:padding="@dimen/unify_space_4"
        app:layout_constraintEnd_toStartOf="@+id/ll_second_card"
        app:layout_constraintHorizontal_weight="6.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.notifcenter.widget.ItemOrderListLinearLayout
        android:id="@+id/ll_second_card"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:padding="@dimen/unify_space_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3.25"
        app:layout_constraintStart_toEndOf="@+id/ll_first_card"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>