<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_N50"
    android:paddingHorizontal="@dimen/notif_dp_10"
    android:paddingVertical="@dimen/notif_dp_6">

    <com.tokopedia.notifcenter.widget.ItemOrderListLinearLayout
        android:id="@+id/ll_first_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/unify_space_32"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/ll_second_card"
        app:layout_constraintHorizontal_weight="6.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <com.tokopedia.notifcenter.widget.ItemOrderListLinearLayout
        android:id="@+id/ll_second_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/unify_space_32"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3.25"
        app:layout_constraintStart_toEndOf="@+id/ll_first_card"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>