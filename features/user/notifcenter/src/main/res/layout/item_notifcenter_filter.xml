<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_filter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/notif_dp_56"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_lvl4"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <ImageView
        android:id="@+id/iv_setting_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/notif_dp_6"
        android:background="?selectableItemBackgroundBorderless"
        android:paddingHorizontal="@dimen/notif_dp_6"
        android:paddingVertical="@dimen/notif_dp_6"
        app:srcCompat="@drawable/ic_notifcenter_setting" />
</merge>