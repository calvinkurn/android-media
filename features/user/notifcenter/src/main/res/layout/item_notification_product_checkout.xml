<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/notif_dp_16"
        android:paddingTop="@dimen/notif_dp_16"
        android:paddingEnd="@dimen/notif_dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/parent_layout"
            layout="@layout/item_notification_update_parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/notif_sp_4"
            android:maxLines="2"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/notif_sp_14"
            android:textStyle="bold"
            tools:text="Hari Terakhir Promo Cashback untuk Dapat Ekstra Lebih" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/notif_dp_2"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/notif_sp_4"
            android:textColor="@color/Unify_N700_44"
            android:textSize="@dimen/notif_sp_14"
            tools:text="Spesial untuk Anda! Ekstra cashback 25% Rp 250.000" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container_product_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginStart="@dimen/notif_dp_4"
        android:layout_marginEnd="@dimen/notif_dp_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_caption"
        android:layout_marginTop="@dimen/notif_dp_6">

        <include layout="@layout/item_notification_product_card" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lst_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_caption"
        android:clipToPadding="false"
        android:paddingStart="@dimen/notif_dp_4"
        android:paddingEnd="@dimen/notif_dp_4"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_notification_product_card"
        android:layout_marginTop="@dimen/notif_dp_6"
        android:layout_marginBottom="@dimen/notif_dp_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>