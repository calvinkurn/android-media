<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgMenuIcon"
        android:layout_width="@dimen/notif_dp_40"
        android:layout_height="@dimen/notif_dp_40"
        tools:src="@tools:sample/avatars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCounter"
        android:layout_width="@dimen/notif_dp_16"
        android:layout_height="@dimen/notif_dp_16"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_red"
        android:gravity="center"
        android:textColor="@color/Unify_N0"
        android:textSize="@dimen/notif_sp_10"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/imgMenuIcon"
        app:layout_constraintTop_toTopOf="@+id/imgMenuIcon"
        tools:text="99+"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtSubItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/notif_sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMenuIcon"
        tools:text="Menunggu Konfirmasi" />

</androidx.constraintlayout.widget.ConstraintLayout>