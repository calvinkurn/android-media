<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/notif_sp_14"
        android:textColor="@color/Unify_N300"
        android:lineSpacingExtra="@dimen/notif_sp_4"
        android:gravity="center_horizontal"
        tools:text="Update (99+)"
        android:textStyle="bold"/>

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/circle"
        android:layout_width="@dimen/notif_dp_8"
        android:layout_height="@dimen/notif_dp_8"
        android:layout_marginLeft="@dimen/notif_dp_4"
        android:layout_marginStart="@dimen/notif_dp_4"
        android:src="@drawable/circle_red"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>