<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_top_line"
        android:layout_width="@dimen/notif_dp_1"
        android:layout_height="@dimen/unify_space_8"
        android:background="@color/Unify_G400"
        app:layout_constraintBottom_toTopOf="@+id/iv_mark_seen"
        app:layout_constraintEnd_toEndOf="@+id/iv_mark_seen"
        app:layout_constraintStart_toStartOf="@+id/iv_mark_seen"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_mark_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/notif_dp_22"
        android:layout_marginTop="@dimen/unify_space_8"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notifcenter_success_mark" />

    <View
        android:id="@+id/view_bottom_line"
        android:layout_width="@dimen/notif_dp_1"
        android:layout_height="0dp"
        android:background="@color/Unify_G400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_mark_seen"
        app:layout_constraintStart_toStartOf="@+id/iv_mark_seen"
        app:layout_constraintTop_toBottomOf="@+id/iv_mark_seen" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_timeline_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/notif_dp_14"
        android:layout_marginEnd="@dimen/unify_space_12"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mark_seen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_mark_seen"
        app:layout_constraintTop_toTopOf="@+id/iv_mark_seen"
        app:typographyType="body_3"
        tools:text="@string/lorem" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_timeline_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/notif_dp_14"
        android:layout_marginEnd="@dimen/unify_space_12"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_mark_seen"
        app:layout_constraintTop_toBottomOf="@+id/tp_timeline_title"
        app:typographyType="small"
        tools:text="Timeline desc" />

</androidx.constraintlayout.widget.ConstraintLayout>