<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/notif_dp_10"
    android:paddingBottom="@dimen/notif_dp_12">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_notification_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_icon"
        app:typographyType="body_3"
        tools:text="Promo" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="23 Jam" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_notification_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/txt_notification_type"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Semakin lancar dengan Power Merchant" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_notification_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:maxLines="2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/txt_notification_title"
        app:typographyType="body_2"
        tools:text="@string/lorem" />

</androidx.constraintlayout.widget.ConstraintLayout>