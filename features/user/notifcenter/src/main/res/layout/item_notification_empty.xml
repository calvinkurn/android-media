<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/notif_dp_280"
        android:layout_height="@dimen/notif_dp_210"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:adjustViewBounds="true"
        android:contentDescription="@string/desc_notifcenter_empty_state_illustration"
        android:scaleType="fitCenter" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_empty_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:gravity="center"
        android:text="@string/notification_empty_message"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_empty_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:gravity="center"
        android:text="@string/notification_empty_filter_message"
        android:visibility="gone"
        app:typographyType="body_2"
        tools:visibility="visible" />
</LinearLayout>