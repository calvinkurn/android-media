<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/notif_dp_10"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jordan x Tokopedia Exclusive Launch"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/notif_dp_8"
            android:layout_marginBottom="@dimen/notif_dp_8"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Dapatkan kesempatan mendapatkan sneakers terbaru Air Jordan I Retro"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_1" />

        <include layout="@layout/item_notification_product_reminder" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/notif_dp_16"
            android:text="@string/notifcenter_title_product_highlight"
            android:layout_marginBottom="@dimen/notif_dp_8"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_3"
            app:typographyWeight="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lstProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_notification_product_highlight"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <include layout="@layout/item_empty_state"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>