<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/img_shimmer_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_explicit_question"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/img_shimmer_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:corners="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/img_shimmer_dismiss"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            app:corners="4"
            app:layout_constraintCircleRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/txt_shimmer_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:corners="8"
            app:layout_constraintStart_toEndOf="@+id/img_shimmer_icon"
            app:layout_constraintTop_toTopOf="@+id/img_shimmer_icon" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/txt_shimmer_description"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="2dp"
            app:corners="8"
            app:layout_constraintStart_toEndOf="@+id/img_shimmer_icon"
            app:layout_constraintTop_toBottomOf="@+id/txt_shimmer_title" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/btn_shimmer_positif_action"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="12dp"
            app:corners="16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_shimmer_negatif_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_shimmer_description"/>

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/btn_shimmer_negatif_action"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            app:corners="16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_shimmer_positif_action"
            app:layout_constraintTop_toBottomOf="@+id/txt_shimmer_description"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>