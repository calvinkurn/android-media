<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_sticky_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_login_widget"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/sticky_icon"
        android:src="@drawable/ic_tokopedia_login_widget"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toEndOf="@id/image_login_widget"
        app:layout_constraintTop_toTopOf="@id/image_login_widget"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:text="@string/login_widget_title" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="@id/text_greetings"
        app:layout_constraintTop_toBottomOf="@id/text_greetings"
        app:typographyType="small"
        android:text="@string/login_widget_subtitle" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:text="@string/login_widget_login"
        app:layout_constraintBottom_toBottomOf="@id/image_login_widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonSize="small"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

</androidx.constraintlayout.widget.ConstraintLayout>