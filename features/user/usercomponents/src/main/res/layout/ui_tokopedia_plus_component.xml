<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_lvl1"
    android:background="@drawable/bg_border">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iconTokopediaPlus"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/titleTokopediaPlus"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl1"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/descriptionTokopediaPlus"
        app:layout_constraintStart_toEndOf="@+id/iconTokopediaPlus"
        app:layout_constraintEnd_toStartOf="@+id/iconDirectionTokopediaPlusPage"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/descriptionTokopediaPlus"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl1"
        app:typographyType="small"
        app:typographyWeight="reguler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTokopediaPlus"
        app:layout_constraintStart_toEndOf="@+id/iconTokopediaPlus"
        app:layout_constraintEnd_toStartOf="@+id/iconDirectionTokopediaPlusPage"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconDirectionTokopediaPlusPage"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl0"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>