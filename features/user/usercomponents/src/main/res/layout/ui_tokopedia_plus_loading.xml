<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp"
    android:background="@drawable/bg_border">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerList1"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="12dp"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl4"
        app:loader_type="rect"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shimmerList2"
        app:layout_constraintStart_toEndOf="@id/shimmerIcon"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerList2"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/layout_lvl1"
        app:layout_constraintVertical_chainStyle="packed"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/shimmerList1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmerIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>