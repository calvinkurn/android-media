<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/main_image_telephony"
        android:layout_width="210dp"
        android:layout_height="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_telephony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_image_telephony"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:typographyType="heading_2"
        android:gravity="center"
        android:text="@string/telephony_title"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/desc_telephony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_telephony"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_2"
        android:gravity="center"
        android:text="@string/telephony_desc"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/privacy_telephony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc_telephony"
        android:textColor="@color/Unify_G500"
        app:typographyType="body_2"
        android:gravity="center"
        android:text="@string/telephony_privacy"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/telephony_save_button"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/privacy_telephony"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled"
        android:text="@string/telephony_save_button"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/telephony_skip_button"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telephony_save_button"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:unifyButtonType="alternate"
        app:unifyButtonVariant="text"
        android:gravity="center"
        android:text="@string/telephony_skip_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>