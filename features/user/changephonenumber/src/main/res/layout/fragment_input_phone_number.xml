<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="24.5dp"
                android:layout_marginRight="24.5dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4sp"
                android:text="@string/for_your_safety"
                android:textColor="@color/black_54"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:text="@string/old_phone_number"
                android:textColor="@color/grey_hint"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/old_phone_number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/grey_hint"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="0821-1201-0377" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dashed_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/new_phone_number"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/new_phone_number_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-3dp"
                android:layout_marginLeft="-3dp"
                android:layout_marginRight="-3dp"
                android:layout_marginStart="-3dp"
                android:digits="0987654321+"
                android:inputType="phone"
                android:paddingBottom="15dp"
                android:paddingTop="3dp"
                android:theme="@style/PhoneNumberTextInput"
                tools:hint="0800-0000-0000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/we_will_send_verification_code"
                android:textColor="@color/black_38"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/next_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/grey_button_rounded"
                android:clickable="false"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/button_continue"
                android:textColor="@color/black_12"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>