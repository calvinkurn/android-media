<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_N0"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lvl4">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="body_3"
                android:layout_marginBottom="@dimen/spacing_lvl6"
                android:layout_marginLeft="@dimen/changephonenumber_dp_24_5"
                android:layout_marginRight="@dimen/changephonenumber_dp_24_5"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/changephonenumber_sp_4"
                android:textColor="@color/Unify_N700_44"
                android:text="@string/for_your_safety"/>

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/changephonenumber_dp_3"
                android:text="@string/old_phone_number"
                android:textColor="@color/Unify_N100"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/old_phone_number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="body_1"
                android:layout_marginBottom="@dimen/changephonenumber_dp_3"
                android:textColor="@color/Unify_N100"
                tools:text="0821-1201-0377" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/changephonenumber_dp_1"
                android:layout_marginBottom="@dimen/spacing_lvl5"
                android:layout_marginTop="@dimen/changephonenumber_dp_5"
                android:background="@drawable/dashed_line" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="body_3"
                android:text="@string/new_phone_number"
                android:textColor="@color/Unify_N700_44" />

            <EditText
                android:id="@+id/new_phone_number_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/changephonenumber_dp_minus_3"
                android:layout_marginLeft="@dimen/changephonenumber_dp_minus_3"
                android:layout_marginRight="@dimen/changephonenumber_dp_minus_3"
                android:layout_marginStart="@dimen/changephonenumber_dp_minus_3"
                android:digits="0987654321+"
                android:inputType="phone"
                android:paddingBottom="@dimen/changephonenumber_dp_15"
                android:paddingTop="@dimen/changephonenumber_dp_3"
                android:theme="@style/PhoneNumberTextInput"
                tools:hint="0800-0000-0000" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/we_will_send_verification_code"
                android:textColor="@color/Unify_N700_32"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/next_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl6"
                android:layout_marginTop="@dimen/spacing_lvl5"
                android:background="@drawable/changephonenumber_grey_button_rounded"
                android:clickable="false"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/button_continue"
                app:typographyType="body_3"
                android:textColor="@color/Unify_N700_20"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_N0"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>