<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/changephonenumber_dp_12"
            android:layout_marginEnd="@dimen/changephonenumber_dp_12"
            android:layout_marginRight="@dimen/changephonenumber_dp_12"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:srcCompat="@drawable/ic_warning_triangle_yellow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Dana dari Tokocash sebelumnya tidak dapat dipindahkan ke Tokocash dengan nomor yang baru.*" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/changephonenumber_dp_1"
        android:layout_marginBottom="@dimen/changephonenumber_dp_20"
        android:layout_marginTop="@dimen/changephonenumber_dp_20"
        android:background="@color/Unify_N100" />
</LinearLayout>