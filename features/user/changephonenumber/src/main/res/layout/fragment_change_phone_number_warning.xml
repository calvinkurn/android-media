<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="@dimen/sp_6"
                android:paddingBottom="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                android:text="@string/are_you_sure_change_phone_number"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/card_background_with_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="9sp"
                        android:text="@string/you_have"
                        android:textColor="@color/black_38"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/tokopedia_balance_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:orientation="horizontal">

                        <com.tokopedia.design.component.TextViewCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="9dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:text="@string/tokopedia_balance"
                            android:textColor="@color/black_70"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tokopedia_balance_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="end|center_vertical"
                            android:textColor="@color/black_70"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold"
                            tools:text="Rp 2.430.034,123" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tokocash_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:orientation="horizontal">

                        <com.tokopedia.design.component.TextViewCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="9dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:text="@string/tokocash"
                            android:textColor="@color/black_70"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tokocash_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="end|center_vertical"
                            android:textColor="@color/black_70"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="Rp 100.000" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="7sp"
                android:paddingTop="8dp"
                android:text="@string/if_you_change_phone_number_then"
                android:textColor="@color/black_70"
                android:textSize="14sp"
                android:textStyle="normal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/warning_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="8dp"
                tools:listitem="@layout/item_change_phone_number_warning" />

            <TextView
                android:id="@+id/next_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/green_button_rounded"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/change_phone_number"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/withdraw_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/white_button_rounded"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/withdraw_tokopedia_balance"
                android:textColor="@color/black_54"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />
</RelativeLayout>