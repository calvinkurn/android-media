<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/method_icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_lvl7"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_lvl7"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unify_image_type="rect" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/prefix_text_method_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl7"
                android:layout_marginLeft="@dimen/layout_lvl7"
                android:layout_marginTop="120dp"
                android:text="@string/cotp_miscall_verification_phone_code"
                android:textColor="@color/Neutral_N0"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/method_icon"
                app:layout_constraintTop_toTopOf="@+id/method_icon"
                app:typographyType="heading_1"
                app:typographyWeight="bold" />

            <com.tokopedia.pin.PinUnify
                android:id="@+id/pin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl8"
                android:layout_marginTop="@dimen/spacing_lvl6"
                android:layout_marginEnd="@dimen/spacing_lvl8"
                app:has_clear_button="true"
                app:is_disabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/method_icon"
                app:pin_count="6"
                app:pin_primary_action_text="@string/button_verify"
                app:pin_title="@string/enter_verification_code"
                app:pin_type="shown"
                tools:pin_description="Kode verifikasi telah dikirimkan melalui SMS ke xxxx-xxxx-xxxxx"
                tools:pin_message="Tidak menerima kode? \n Kirim ulang atau gunakan metode verifikasi lain"
                tools:pin_prefix="@string/cotp_miscall_verification_phone_code" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>