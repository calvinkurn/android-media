<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/otp_dp_20"
    android:layout_marginRight="@dimen/otp_dp_20"
    android:layout_marginTop="@dimen/otp_dp_10"
    android:background="@color/Neutral_N0"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/otp_dp_15">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/verification_icon"
            android:layout_height="@dimen/verification_icon"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/method_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/otp_dp_15"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="@dimen/otp_sp_5"
            android:textColor="@color/otp_black_secondary"
            android:textSize="@dimen/fontSize_lvl3"
            android:textStyle="normal"
            tools:text="Melalui SMS ke nomor 0856-1552-0031."
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>