<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_lvl4">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/img_animation_miscall_onboarding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_miscall_onboarding_height"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/otp_miscall_animation" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/spacing_lvl5"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginEnd="@dimen/spacing_lvl5"
            android:text="@string/cotp_miscall_onboarding_title"
            android:textAlignment="center"
            android:textColor="@color/Neutral_N700"
            app:layout_constraintTop_toBottomOf="@id/img_animation_miscall_onboarding"
            app:typographyType="heading_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/spacing_lvl5"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl5"
            android:text="@string/cotp_miscall_onboarding_desc"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_call_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:text="@string/cotp_miscall_onboarding_send_call"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>