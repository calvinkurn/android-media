<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl6"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/success_result_push_notif"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Akses masuk diterima"
        android:textColor="@color/Neutral_N700_96"
        android:textSize="@dimen/fontSize_lvl6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_image"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginTop="12dp"
        android:text="Kamu berhasil masuk ke Tokopedia lewat perangkat lain. Selamat berbelanja, ya!"
        android:textAlignment="center"
        android:textColor="@color/otp_black_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl6"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        android:layout_marginRight="@dimen/spacing_lvl5"
        app:layout_constraintTop_toBottomOf="@id/text_subtitle"
        android:text="Tutup"/>


</androidx.constraintlayout.widget.ConstraintLayout>