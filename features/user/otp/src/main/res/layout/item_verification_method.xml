<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl5"
    android:layout_marginTop="@dimen/spacing_lvl2"
    android:layout_marginBottom="@dimen/spacing_lvl2"
    android:layout_marginEnd="@dimen/spacing_lvl5"
    android:background="@color/Unify_N0"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lvl4">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/method_icon"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/spacing_lvl3"
            android:scaleType="fitCenter"
            app:unify_image_corner_radius="0"
            app:unify_image_type="rect" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/method_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            tools:text="Melalui SMS ke nomor xxxx-xxxx-xxxxx" />

    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify>