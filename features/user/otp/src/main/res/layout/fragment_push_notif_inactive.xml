<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_push_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        app:closeButtonVisibility="gone"
        app:descriptionText="Fitur ini akan tersedia jika perangkatmu telah memenuhi standar keamanan Tokopedia & sudah mengaktifkan Push Notification Tokopedia."
        app:tickerShapeType="loose"
        app:tickerType="announcement" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>