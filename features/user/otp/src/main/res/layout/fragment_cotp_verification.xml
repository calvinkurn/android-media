<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/limit_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fdebec"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f05f68"/>

        <TextView
            android:id="@+id/limit_otp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/dp_24"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_24"
            android:text="@string/limit_otp_reached"
            android:textColor="@color/font_black_primary_70"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Anda sudah 3 kali melakukan pengiriman  ulang, silakan coba lagi dalam 60 menit."/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/limit_otp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/verification_icon"
                android:layout_height="@dimen/verification_icon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_30"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="@string/enter_verification_code"
                android:textColor="@color/font_black_primary_70"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/font_black_secondary_54"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"
                tools:text="Kode verifikasi telah dikirimkan ke
**** - **** - *041."
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="33dp"
                android:orientation="horizontal">

                <com.tokopedia.otp.common.design.PinInputEditText
                    android:id="@+id/input_otp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:digits="1234567890"
                    android:fontFamily="sans-serif-medium"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingBottom="@dimen/dp_10"
                    android:textColor="@color/font_black_primary_70"
                    android:textIsSelectable="false"
                    android:textSize="32sp"
                    android:textStyle="normal"
                    android:visibility="visible"
                    app:PinInputLineColors="@color/pin_input_line_colors"/>

                <ImageView
                    android:id="@+id/error_image"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_cancel_red"
                    tools:visibility="visible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/error_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_16"
                android:text="@string/error_wrong_otp"
                android:textColor="@color/red_500"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:visibility="invisible"
                tools:visibility="visible" />


            <TextView
                android:id="@+id/verify_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/grey_button_otp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/button_verify"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/countdown_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:padding="@dimen/dp_10"
                android:textColor="@color/font_black_disabled_38"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:visibility="visible"
                tools:text="Gunakan metode verifikasi lain"
                tools:visibility="gone"
                />

            <TextView
                android:id="@+id/no_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="@string/not_received_code"
                android:textColor="@color/font_black_disabled_38"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible"
                />

            <RelativeLayout
                android:id="@+id/finish_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="6sp"
                    android:padding="@dimen/dp_5"
                    android:text="@string/resend"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal"
                    />

                <TextView
                    android:id="@+id/or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/resend"
                    android:layout_toRightOf="@+id/resend"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="6sp"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:text="@string/or_small"
                    android:textColor="@color/font_black_disabled_38"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal"
                    />

                <TextView
                    android:id="@+id/use_other_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/or"
                    android:layout_toRightOf="@+id/or"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="6sp"
                    android:padding="@dimen/dp_5"
                    android:text="@string/use_other_method"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal"
                    tools:text="gunakan metode verifikasi lain"
                    />


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>