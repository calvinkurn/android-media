<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white">
  
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_0"
    app:layout_constraintBottom_toTopOf="@+id/frameLayout"
    app:layout_constraintTop_toTopOf="parent">
    
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_0">
      
      <ImageView
        android:id="@+id/imgVerify"
        android:layout_width="@dimen/verification_icon"
        android:layout_height="@dimen/verification_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
  
      <TextView
        android:id="@+id/textTitleVerify"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_16"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineHeight="@dimen/dp_22"
        android:text="@string/cotp_miscall_verification_title"
        android:textColor="@color/grey_796"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgVerify" />
      
      <LinearLayout
        android:id="@+id/layoutInputOtp"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_6"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleVerify">
    
        <TextView
          android:id="@+id/textPhoneHint"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="@dimen/dp_2"
          android:fontFamily="sans-serif"
          android:textColor="@color/grey_500"
          android:text="@string/cotp_miscall_verification_phone_code"
          android:textSize="@dimen/sp_20"
          android:visibility="visible" />
    
        <com.tokopedia.otp.common.design.PinInputEditText
          android:id="@+id/textInputOtp"
          android:layout_width="@dimen/dp_0"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dp_8"
          android:layout_marginLeft="@dimen/dp_8"
          android:layout_weight="1"
          android:background="@null"
          android:cursorVisible="false"
          android:digits="1234567890"
          android:fontFamily="sans-serif-medium"
          android:imeOptions="actionDone"
          android:inputType="number"
          android:maxLength="6"
          android:textColor="@color/font_black_primary_70"
          android:textIsSelectable="false"
          android:textSize="@dimen/sp_32"
          android:textStyle="normal"
          android:visibility="visible"
          app:PinInputLineColors="@color/pin_input_line_colors" />
  
      </LinearLayout>
      
      <TextView
        android:id="@+id/textErrorVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/error_wrong_otp"
        android:textColor="@color/red_500"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutInputOtp"
        tools:visibility="visible" />
      
      <TextView
        android:id="@+id/textMessageVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_32"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/sp_6"
        android:gravity="center"
        android:text="@string/error_wrong_otp"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textErrorVerify"
        tools:visibility="visible" />
      
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textMessageVerify">
    
        <TextView
          android:id="@+id/textResend"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="@dimen/sp_6"
          android:padding="@dimen/dp_5"
          android:text="@string/cotp_miscall_verification_resend"
          android:visibility="gone"
          android:textColor="@color/tkpd_main_green"
          android:textSize="@dimen/sp_12"
          android:textStyle="normal" />
    
        <TextView
          android:id="@+id/textOr"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="@dimen/sp_6"
          android:paddingTop="@dimen/dp_5"
          android:paddingBottom="@dimen/dp_5"
          android:text="@string/or_small"
          android:textColor="@color/font_black_disabled_38"
          android:textSize="@dimen/sp_12"
          android:textStyle="normal" />
    
        <TextView
          android:id="@+id/textUseOtherMethod"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="@dimen/sp_6"
          android:padding="@dimen/dp_5"
          android:text="@string/use_other_method"
          android:textColor="@color/tkpd_main_green"
          android:textSize="@dimen/sp_12"
          android:textStyle="normal" />
  
      </LinearLayout>
      
    </androidx.constraintlayout.widget.ConstraintLayout>
  
  </ScrollView>
  
  <ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:visibility="gone" />
  
  <FrameLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow_top"
    app:layout_constraintBottom_toBottomOf="parent">
    
    <com.tokopedia.unifycomponents.UnifyButton
      android:id="@+id/buttonVerify"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/grey_button_otp"
      android:fontFamily="sans-serif"
      android:gravity="center"
      android:padding="@dimen/dp_10"
      android:text="@string/button_verify"
      android:textColor="@color/grey_500"
      android:textSize="@dimen/sp_14"
      android:textStyle="bold"
      android:enabled="false"
      android:layout_marginStart="@dimen/dp_16"
      android:layout_marginTop="@dimen/dp_16"
      android:layout_marginEnd="@dimen/dp_16"
      android:layout_marginBottom="@dimen/dp_16" />
  
  </FrameLayout>
  
</androidx.constraintlayout.widget.ConstraintLayout>