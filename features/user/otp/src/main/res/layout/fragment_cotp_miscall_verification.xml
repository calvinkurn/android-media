<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white">
  
  <ProgressBar
    android:id="@+id/progress_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:visibility="gone" />
  
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true">
    
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      
      <ImageView
        android:id="@+id/cotp_verify_icon"
        android:layout_width="@dimen/verification_icon"
        android:layout_height="@dimen/verification_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30" />
  
      <TextView
        android:id="@+id/cotp_verify_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineHeight="@dimen/dp_22"
        android:text="@string/cotp_miscall_verification"
        android:textColor="@color/grey_796"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"/>
      
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:orientation="horizontal">
        
        <TextView
          android:id="@+id/cotp_verify_text_phone_hint"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center_horizontal"
          android:fontFamily="sans-serif"
          android:gravity="center"
          android:text="@string/cotp_miscall_phone_code"
          android:textColor="@color/grey_500"
          android:textSize="@dimen/sp_20" />
        
        <com.tokopedia.otp.common.design.PinInputEditText
          android:id="@+id/cotp_verify_text_title_input_otp"
          android:layout_width="@dimen/dp_0"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dp_8"
          android:layout_marginLeft="@dimen/dp_8"
          android:layout_weight="1"
          android:background="@null"
          android:cursorVisible="false"
          android:digits="1234567890"
          android:fontFamily="sans-serif-medium"
          android:imeOptions="actionDone"
          android:inputType="number"
          android:maxLength="6"
          android:paddingBottom="@dimen/dp_10"
          android:textColor="@color/font_black_primary_70"
          android:textIsSelectable="false"
          android:textSize="@dimen/sp_32"
          android:textStyle="normal"
          android:visibility="visible"
          app:PinInputLineColors="@color/pin_input_line_colors" />
      
      </LinearLayout>
      
      <TextView
        android:id="@+id/cotp_verify_text_title_error_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/error_wrong_otp"
        android:textColor="@color/red_500"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        android:visibility="invisible"
        tools:visibility="visible" />
      
      <RelativeLayout
        android:id="@+id/finish_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">
        
        <TextView
          android:id="@+id/cotp_verify_text_title_resend"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="@dimen/sp_6"
          android:padding="@dimen/dp_5"
          android:text="@string/resend"
          android:textColor="@color/tkpd_main_green"
          android:textSize="@dimen/sp_12"
          android:textStyle="normal" />
        
        <TextView
          android:id="@+id/or"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/cotp_verify_text_title_resend"
          android:layout_toRightOf="@+id/cotp_verify_text_title_resend"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="@dimen/sp_6"
          android:paddingTop="@dimen/dp_5"
          android:paddingBottom="@dimen/dp_5"
          android:text="@string/or_small"
          android:textColor="@color/font_black_disabled_38"
          android:textSize="@dimen/sp_12"
          android:textStyle="normal" />
        
        <TextView
          android:id="@+id/cotp_verify_text_title_use_other_method"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/or"
          android:layout_toRightOf="@+id/or"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="@dimen/sp_6"
          android:padding="@dimen/dp_5"
          android:text="@string/use_other_method"
          android:textColor="@color/tkpd_main_green"
          android:textSize="@dimen/sp_12"
          android:textStyle="normal"
          tools:text="gunakan metode verifikasi lain" />
      
      
      </RelativeLayout>
      
      <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/sp_6"
        android:padding="@dimen/dp_10"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        android:visibility="visible"
        tools:text="Gunakan metode verifikasi lain"
        tools:visibility="gone" />
    
    </LinearLayout>
  
  </ScrollView>
  
  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow_top"
    app:layout_constraintBottom_toBottomOf="parent">
  
    <com.tokopedia.unifycomponents.UnifyButton
      android:id="@+id/cotp_verify_button"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_40"
      android:background="@drawable/grey_button_otp"
      android:fontFamily="sans-serif"
      android:gravity="center"
      android:text="@string/button_verify"
      android:textColor="@color/grey_500"
      android:textSize="@dimen/sp_14"
      android:textStyle="bold"
      android:layout_marginStart="@dimen/dp_16"
      android:layout_marginTop="@dimen/dp_16"
      android:layout_marginEnd="@dimen/dp_16"
      android:layout_marginBottom="@dimen/dp_16"/>

  </FrameLayout>

</android.support.constraint.ConstraintLayout>