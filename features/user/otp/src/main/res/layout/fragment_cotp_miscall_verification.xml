<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/Neutral_N0">
  
  <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_lvl0"
    android:scrollbars="none"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/layout_lvl0"
      android:paddingBottom="@dimen/spacing_lvl4">
      
      <ImageView
        android:id="@+id/imgVerify"
        android:layout_width="@dimen/dp_288"
        android:layout_height="@dimen/dp_245"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/otp_dp_40"
        android:layout_margin="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
  
      <TextView
        android:id="@+id/textTitleVerify"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginLeft="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/otp_dp_25"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        android:layout_marginRight="@dimen/spacing_lvl6"
        android:layout_marginBottom="@dimen/spacing_lvl6"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineHeight="@dimen/spacing_lvl5"
        android:text="@string/cotp_miscall_verification_title"
        android:textColor="@color/Neutral_N700_96"
        android:textSize="@dimen/fontSize_lvl5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgVerify" />
      
      <LinearLayout
        android:id="@+id/layoutInputOtp"
        android:layout_width="@dimen/dp_288"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginLeft="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/otp_dp_30"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        android:layout_marginRight="@dimen/spacing_lvl6"
        android:layout_marginBottom="@dimen/otp_dp_6"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleVerify">
    
        <TextView
          android:id="@+id/textPhoneHint"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="@dimen/spacing_lvl1"
          android:fontFamily="sans-serif"
          android:textColor="@color/otp_grey_500"
          android:text="@string/cotp_miscall_verification_phone_code"
          android:textSize="@dimen/fontSize_lvl6"
          android:lineHeight="@dimen/otp_dp_22"
          android:visibility="visible" />
    
        <com.tokopedia.otp.common.design.PinInputEditText
          android:id="@+id/textInputOtp"
          android:layout_width="@dimen/layout_lvl0"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/spacing_lvl3"
          android:layout_marginLeft="@dimen/spacing_lvl3"
          android:layout_weight="1"
          android:background="@null"
          android:cursorVisible="false"
          android:digits="1234567890"
          android:fontFamily="sans-serif-medium"
          android:imeOptions="actionDone"
          android:inputType="number"
          android:textColor="@color/otp_black_primary_70"
          android:textIsSelectable="false"
          android:textSize="@dimen/otp_sp_32"
          android:textStyle="normal"
          android:visibility="visible"
          app:PinInputLineColors="@color/pin_input_line_colors" />
  
      </LinearLayout>
      
      <TextView
        android:id="@+id/textErrorVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/error_wrong_otp"
        android:textColor="@color/otp_red_500"
        android:textSize="@dimen/fontSize_lvl2"
        android:textStyle="normal"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl6"
        android:layout_marginRight="@dimen/spacing_lvl6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutInputOtp"
        tools:visibility="visible" />
      
      <TextView
        android:id="@+id/textMessageVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/otp_sp_6"
        android:gravity="center"
        android:text="@string/error_wrong_otp"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/fontSize_lvl2"
        android:textStyle="normal"
        android:visibility="invisible"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textErrorVerify"
        tools:visibility="visible" />
      
      <LinearLayout
        android:id="@+id/layoutResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/textMessageVerify">
    
        <TextView
          android:id="@+id/textResend"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="@dimen/otp_sp_6"
          android:padding="@dimen/otp_dp_5"
          android:text="@string/cotp_miscall_verification_resend"
          android:visibility="gone"
          android:textColor="@color/otp_tkpd_main_green"
          android:textSize="@dimen/fontSize_lvl2"
          android:textStyle="normal" />
    
        <TextView
          android:id="@+id/textOr"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="@dimen/otp_sp_6"
          android:paddingTop="@dimen/otp_dp_5"
          android:paddingBottom="@dimen/otp_dp_5"
          android:text="@string/or_small"
          android:textColor="@color/font_black_disabled_38"
          android:textSize="@dimen/fontSize_lvl2"
          android:textStyle="normal"
          android:visibility="gone"/>
    
        <TextView
          android:id="@+id/textUseOtherMethod"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="@dimen/otp_sp_6"
          android:padding="@dimen/otp_dp_5"
          android:text="@string/use_other_method"
          android:textColor="@color/otp_tkpd_main_green"
          android:textSize="@dimen/fontSize_lvl2"
          android:textStyle="normal"
          android:visibility="gone"/>
  
      </LinearLayout>
  
      <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/buttonVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_button_otp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/button_verify"
        android:textColor="@color/otp_grey_500"
        android:textSize="@dimen/fontSize_lvl3"
        android:textStyle="bold"
        android:enabled="false"
        android:layout_margin="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@+id/layoutResend"/>
      
    </androidx.constraintlayout.widget.ConstraintLayout>
  
  </ScrollView>
  
  <ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:visibility="gone" />
  
</androidx.constraintlayout.widget.ConstraintLayout>