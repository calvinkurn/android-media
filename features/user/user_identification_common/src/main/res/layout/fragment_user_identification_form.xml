<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_64"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/correct_image"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_128"
            android:layout_marginBottom="@dimen/dp_16"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/wrong_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/wrong_image"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_128"
            app:layout_constraintBottom_toBottomOf="@+id/correct_image"
            app:layout_constraintLeft_toRightOf="@+id/correct_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/correct_image" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correct_image"
            tools:text="Foto Diri Bersama KTP" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/sp_6"
            android:paddingEnd="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_14"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="Tunjukkan bagian depan KTP dengan posisi di bawah dagu tanpa menutupi wajah." />

        <TextView
            android:id="@+id/subtitle_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:lineSpacingExtra="@dimen/sp_6"
            android:paddingEnd="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:visibility="gone"
            tools:visibility="visible"
            android:paddingStart="@dimen/dp_16"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_14"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            tools:text="Tunjukkan bagian depan KTP dengan posisi di bawah dagu tanpa menutupi wajah." />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_margin="@dimen/dp_16"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Ambil Foto KTP" />
</androidx.constraintlayout.widget.ConstraintLayout>