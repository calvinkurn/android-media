<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_48">

    <ImageView
        android:id="@+id/image_ktp"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/change_ktp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/image_face"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/change_ktp"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/white_button_rounded"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:text="@string/change_button"
        android:textColor="@color/black_38"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_ktp"
        app:layout_constraintRight_toRightOf="@+id/image_ktp"
        app:layout_constraintTop_toBottomOf="@+id/image_ktp"
        tools:text="Ubah" />

    <ImageView
        android:id="@+id/image_face"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        app:layout_constraintBottom_toBottomOf="@+id/image_ktp"
        app:layout_constraintLeft_toRightOf="@+id/image_ktp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_ktp" />

    <TextView
        android:id="@+id/change_face"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/white_button_rounded"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:text="@string/change_button"
        android:textColor="@color/black_38"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_face"
        app:layout_constraintRight_toRightOf="@+id/image_face"
        app:layout_constraintTop_toBottomOf="@+id/image_face"
        tools:text="Ubah" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:paddingEnd="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:text="@string/form_final_info"
        android:textColor="@color/black_54"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_ktp"
        tools:text="Sebelum klik “Unggah”, pastikan foto yang Anda ambil sudah benar dan terlihat jelas.
Dengan mengunggah, saya menyatakan bahwa data yang saya berikan adalah benar dan telah menyetujui Syarat &amp; Ketentuan." />

    <TextView
        android:id="@+id/upload_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="64dp"
        android:background="@drawable/green_button_rounded"
        android:gravity="center"
        android:text="@string/upload_button"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_info"
        tools:text="Unggah" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>