<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.useridentification">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera.autofocus"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity android:name=".view.activity.UserIdentificationCameraActivity"/>
        <activity
            android:name=".view.activity.UserIdentificationInfoActivity"
            android:label="@string/title_kyc_info"
            android:theme="@style/Theme.White"/>
        <activity
            android:name=".view.activity.UserIdentificationFormActivity"
            android:label="Upload Foto"
            android:theme="@style/Theme.White"/>
    </application>

</manifest>