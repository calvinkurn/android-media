<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="bottom"
              android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_22"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:text="Judul"
        />


    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="@dimen/sp_4"
        android:minLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:textStyle="normal"
        android:visibility="invisible"
        tools:text="Deskripsi"
        />

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="@dimen/dp_16"
                android:text="@string/title_skip_2"
                android:textColor="@color/transparent"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/button_start_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:lines="1"
                android:padding="@dimen/dp_16"
                android:text="@string/title_activity_login"
                android:textSize="14sp"
                tools:layout_width="match_parent"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/dummy_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/footer"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/next_ic"/>
    </RelativeLayout>

</LinearLayout>