<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.chatbot">


    <application android:label="@string/app_name">
        <activity
            android:name=".view.activity.ChatbotActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:label="@string/title_chat_bot"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize|stateHidden"
            >
            <intent-filter >
                <action android:name="com.tokopedia.internal.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="/chatbot/.*"
                    />

            </intent-filter>
        </activity>

        <activity
            android:name=".attachinvoice.view.activity.AttachInvoiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name=".view.activity.ChatBotProvideRatingActivity"
            android:theme="@style/ChatBotProvideRatingActivityTheme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name=".view.activity.ChatBotCsatActivity"
            android:theme="@style/ChatBotProvideRatingActivityTheme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
    </application>
</manifest>
