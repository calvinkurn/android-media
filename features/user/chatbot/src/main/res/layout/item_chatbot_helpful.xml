<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/chat_rating"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/helpfull_question_option"
        app:layout_constraintBottom_toBottomOf="@id/helpfull_question_option"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@null"
        tools:src="@drawable/emoji_inactive_1"
        tools:visibility="visible"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/helpfull_question_option"
        app:typographyType="body_2"
        tools:text="Ya, sudah membantu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintLeft_toRightOf="@id/chat_rating"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_option_list_arrow"
        app:layout_constraintTop_toTopOf="@id/helpfull_question_option"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/helpfull_question_option"/>

</androidx.constraintlayout.widget.ConstraintLayout>
