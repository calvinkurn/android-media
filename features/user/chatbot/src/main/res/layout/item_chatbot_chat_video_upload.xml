<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_lvl3"
    android:paddingLeft="@dimen/unify_space_12"
    android:paddingRight="@dimen/unify_space_12">

    <androidx.cardview.widget.CardView
        android:id="@+id/dateContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/chatbot_ticker"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:cardCornerRadius="@dimen/unify_space_12"
        app:cardBackgroundColor="#E5F5FF"
        android:layout_centerHorizontal="true">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:paddingTop="@dimen/spacing_lvl1"
            android:paddingBottom="@dimen/spacing_lvl1"
            android:paddingLeft="@dimen/unify_space_12"
            android:paddingRight="@dimen/unify_space_12"
            app:typographyType="body_3"
            tools:text="1 Jan"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_group_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/dateContainer"
        app:cardBackgroundColor="@color/Unify_N0"
        app:cardCornerRadius="@dimen/chatcommon_3dp"
        app:cardElevation="@dimen/layout_lvl0"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">


    <FrameLayout
        android:id="@+id/fl_image_container"
        android:layout_width="@dimen/dp_chatbot_240"
        android:layout_height="@dimen/dp_chatbot_240"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dateContainer"
        tools:ignore="RtlHardcoded">


        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/video_player"
            app:use_controller="false"
            app:surface_type="texture_view"
            app:resize_mode="fill"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_chatbot_image_upload_gradient">

            <include
                android:id="@+id/progress_bar"
                layout="@layout/image_loading_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="visible"
                tools:visibility="visible" />

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
           >

            <com.tokopedia.iconunify.IconUnify
                android:layout_width="@dimen/dp_chatbot_18"
                android:layout_height="@dimen/dp_chatbot_18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/unify_space_8"
                app:icon_name="PLAY"
                app:icon_color_light_enable="@color/Unify_N0"
                android:id="@+id/play_icon"
                />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/play_icon"
                tools:text="11:00"
                android:id="@+id/video_length"
                android:textColor="@color/Unify_N0"
                app:typographyType="body_3"

                />

            <LinearLayout
                android:id="@+id/llReadStatusContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:paddingTop="@dimen/spacing_lvl2"
                android:paddingEnd="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:paddingBottom="@dimen/dp_chatbot_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlSymmetry">

                <include
                    layout="@layout/item_chatcommon_chat_read_status_attachment" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </FrameLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/left_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card_group_chat_message"
        android:layout_alignBottom="@+id/card_group_chat_message"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:layout_toStartOf="@+id/card_group_chat_message"
        android:layout_toLeftOf="@+id/card_group_chat_message"
        android:contentDescription="@null"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_retry_image_send" />

</RelativeLayout>