<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/bot_reason_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginLeft="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_8"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginRight="@dimen/unify_space_16"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="@color/Unify_N700"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/cb_bot_reason_text" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginLeft="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_8"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginRight="@dimen/unify_space_16"
        android:hint="@string/cb_bot_other_reason_text_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="bottom"
        android:backgroundTint="@color/Unify_N150"
        app:layout_constraintTop_toBottomOf="@+id/bot_reason_text" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/warning_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginLeft="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginRight="@dimen/unify_space_16"
        android:textSize="@dimen/sp_chatbot_11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_state"
        android:text="@string/minimum_30_character" />

</androidx.constraintlayout.widget.ConstraintLayout>