<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:textColor="@color/grey_500"
        tools:text="13:16 wib"
        android:textAllCaps="true"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_below="@id/date"
        android:id="@+id/attach_invoice_sent_item_container"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/right_bubble"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/attach_invoice_sent_item_product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@color/yellow_1" />

        <TextView
            android:id="@+id/attach_invoice_sent_item_product_name"
            style="@style/TextView.Small.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/attach_invoice_sent_item_product_image"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:text="Helm Cargloss MXC Supertrack Ice Brown" />

        <TextView
            android:id="@+id/attach_invoice_sent_item_product_desc"
            style="@style/TextView.Micro.WhitePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/attach_invoice_sent_item_product_image"
            android:layout_alignLeft="@id/attach_invoice_sent_item_product_name"
            android:layout_below="@id/attach_invoice_sent_item_product_name"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:maxLines="3"
            android:text="+4 barang lainnya" />

        <View
            android:id="@+id/attach_invoice_sent_item_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/attach_invoice_sent_item_product_desc"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/attach_invoice_sent_item_invoice_total_container"
            style="@style/TextView.Small.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/attach_invoice_sent_item_separator"
            android:layout_below="@id/attach_invoice_sent_item_separator"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="Total: " />

        <TextView
            android:id="@+id/attach_invoice_sent_item_invoice_total"
            style="@style/TextView.Small.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/attach_invoice_sent_item_separator"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/attach_invoice_sent_item_invoice_total_container"
            android:fontFamily="sans-serif-medium"
            android:text="Rp 10.000.000" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/left_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/attach_invoice_sent_item_container"
        android:layout_alignBottom="@id/attach_invoice_sent_item_container"
        android:layout_toLeftOf="@id/attach_invoice_sent_item_container"
        android:layout_toStartOf="@id/attach_invoice_sent_item_container"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_error_to_send"/>

    <ImageView
        android:id="@+id/chat_status"
        android:layout_width="11dp"
        android:layout_height="6dp"
        android:layout_toLeftOf="@+id/hour"
        android:layout_toStartOf="@+id/hour"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/attach_invoice_sent_item_container"
        android:layout_alignTop="@+id/hour"
        android:layout_alignBottom="@+id/hour"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_read_thin"/>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/time_color"
        android:textSize="@dimen/sp_10"
        tools:text="10:13 pm"
        tools:visibility="visible"
        android:layout_below="@id/attach_invoice_sent_item_container"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_alignEnd="@id/attach_invoice_sent_item_container"
        android:layout_alignRight="@id/attach_invoice_sent_item_container"
        />
</RelativeLayout>
