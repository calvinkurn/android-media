<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="com.tokopedia.chatbot.view.customview.MessageBubbleLayout">

    <com.tokopedia.chatbot.view.customview.CustomChatbotChatLayout
        android:id="@+id/chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/chatcommon_10dp"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/chatcommon_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.tokopedia.chatbot.view.customview.reply.ReplyBubbleAreaMessage
        android:id="@+id/reply_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="27dp"
        app:layout_constraintEnd_toEndOf="@+id/chat_message"
        app:layout_constraintStart_toStartOf="@+id/chat_message"
        app:layout_constraintTop_toTopOf="parent" />



</merge>