<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    style="@style/ImageUploadProgress">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/progress_bar_loding"
        android:layout_width="@dimen/spacing_lvl8"
        android:layout_height="@dimen/spacing_lvl8"
        android:layout_gravity="center"
        app:loader_type="circular_white"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/progress_cross"
        android:layout_width="@dimen/spacing_lvl5"
        android:layout_height="@dimen/spacing_lvl4"
        android:src="@drawable/ic_action_x"
        android:tint="@color/Unify_NN0"
        android:layout_gravity="center"
        android:visibility="visible"
        android:contentDescription="@null"
        tools:visibility="visible" />

</FrameLayout>