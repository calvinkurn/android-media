<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/float_chat_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/chatbot_chat_background"
            android:visibility="gone"
            tools:visibility="visible">

            <include
                android:id="@+id/attach_invoice_float_chat_item"
                layout="@layout/attached_invoice_float_chat_item"
                android:layout_width="@dimen/dp_chatbot_220"
                android:layout_height="wrap_content">

            </include>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/add_comment_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_quick_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_chatbot_3"
                android:layout_marginRight="@dimen/dp_chatbot_3"
                android:background="@color/chatbot_chat_background"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingTop="@dimen/spacing_lvl3"
                android:visibility="gone"
                tools:itemCount="1"
                tools:listitem="@layout/chatbot_item_quick_reply"
                tools:visibility="visible" />

            <include
                android:id="@+id/compose_area"
                layout="@layout/compose_message_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/rv_attachment_menu_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="top"
                    android:background="@drawable/bg_shadow_attachment_menu_chat_common" />

                <com.tokopedia.chat_common.view.widget.AttachmentMenuRecyclerView
                    android:id="@+id/rv_attachment_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:spanCount="2" />
            </FrameLayout>
        </LinearLayout>

        <include
            android:id="@+id/chatbot_view_help_rate"
            layout="@layout/chatbot_layout_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/spacing_lvl3"
            android:visibility="gone" />


    </LinearLayout>

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/chatbot_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:tickerShapeType="full" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dateIndicatorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatbot_ticker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#E5F5FF"
        tools:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/dateIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chatbot_color_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/spacing_lvl1"
            android:paddingBottom="@dimen/spacing_lvl1"
            android:paddingLeft="@dimen/unify_space_12"
            android:paddingRight="@dimen/unify_space_12"
            app:typographyType="body_3"
            tools:text="1 Jan"/>

    </androidx.cardview.widget.CardView>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@id/chatbot_ticker"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/unify_space_8">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:descendantFocusability="beforeDescendants"
            android:scrollbars="vertical" />

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/header_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/swipe_refresh_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_yellow_border_yelow"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:singleLine="true"
        android:visibility="gone"
        app:typographyType="body_3" />

    <LinearLayout
        android:id="@+id/notifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:gravity="center_vertical"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            tools:text="JJJJ"
            app:typographyType="body_2" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/action"
            app:loader_type="circular"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>

