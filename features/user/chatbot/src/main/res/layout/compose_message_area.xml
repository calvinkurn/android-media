<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:background="@color/chatbot_dms_compose_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reply_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/send_but"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_reply_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <com.tokopedia.chatbot.view.customview.reply.ReplyBubbleAreaMessage
            android:id="@+id/reply_bubble_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_compose_background"
            android:visibility="gone"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/new_comment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="48dp"
            android:paddingBottom="10dp"
            android:background="@color/chatbot_dms_compose_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_reply_bubble">

            <EditText
                android:id="@+id/new_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/cb_bot_reply_text"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:textColorHint="@color/chatbot_dms_compose_msg_hint"
                android:textSize="@dimen/sp_chatbot_16"
                tools:text="@tools:sample/lorem/random" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/new_comment_container"
            android:layout_alignBottom="@+id/new_comment_container"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/new_comment_container"
            app:layout_constraintBottom_toBottomOf="@id/new_comment_container"
            app:layout_constraintTop_toTopOf="@+id/new_comment_container"
            android:background="@drawable/bg_oval_transparent">

            <ImageView
                android:id="@+id/iv_chat_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_add_attachment_chatbot" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/send_but"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_chatbot_send" />

</androidx.constraintlayout.widget.ConstraintLayout>