<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingEnd="@dimen/unify_space_12"
    tools:paddingStart="@dimen/spacing_lvl4"
    tools:paddingTop="@dimen/unify_space_8"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.chatbot.view.customview.reply.ReplyBubbleAreaMessage
        android:id="@+id/reply_bubble_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_compose_background"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/view_border_radius"
        app:layout_constraintStart_toStartOf="@+id/view_border_radius" />

    <View
        android:id="@+id/view_border_radius"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/unify_space_2"
        app:layout_constraintEnd_toEndOf="@+id/new_comment_container"
        app:layout_constraintStart_toStartOf="@+id/new_comment_container"
        app:layout_constraintTop_toBottomOf="@id/reply_bubble_container"/>


    <ImageView
        android:id="@+id/send_but"
        android:layout_width="@dimen/unify_space_40"
        android:layout_height="@dimen/unify_space_40"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="@dimen/unify_space_8"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/new_comment_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_chatbot_send" />

    <LinearLayout
        android:id="@+id/new_comment_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/view_border_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/send_but"
        >

        <EditText
            android:id="@+id/new_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/chatcommon_10dp"
            android:layout_marginBottom="@dimen/chatcommon_10dp"
            android:hint="@string/chat_edit_text"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:paddingStart="@dimen/spacing_lvl7"
            android:paddingTop="@dimen/chatcommon_10dp"
            android:paddingEnd="@dimen/spacing_lvl8"
            android:textColor="@color/Unify_N700_96"
            android:textColorHint="@color/Unify_N700_32"
            android:textSize="@dimen/fontSize_lvl4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/send_but"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@tools:sample/lorem/random" />


        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iv_chat_menu"
            android:layout_width="@dimen/spacing_lvl7"
            android:layout_height="@dimen/spacing_lvl7"
            android:layout_marginEnd="@dimen/spacing_lvl1"
            android:layout_marginBottom="1dp"
            android:padding="@dimen/spacing_lvl3"
            app:icon_name="ADD_CIRCLE"
            app:layout_constraintBottom_toBottomOf="@+id/new_comment"
            app:layout_constraintEnd_toEndOf="@+id/new_comment" />

    </LinearLayout>



</merge>