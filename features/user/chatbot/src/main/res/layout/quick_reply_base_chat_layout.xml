<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_3"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:textAllCaps="true"
        android:textColor="@color/grey_500"
        app:typographyType="body_3"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="13:16 wib"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_18"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_8"
        android:background="@drawable/chatbot_left_bubble"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:maxWidth="@dimen/max_width_chat_bubble"
            android:paddingBottom="@dimen/dp_8"
            android:textColor="@color/Unify_N700_96"
            android:textColorLink="@color/read_more_color"
            android:textIsSelectable="true"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            tools:text="opesjkajd aasdfkalskdjfla;ksdfajsdlfkjalsdjflaksjdfl;aks;dlfalskdfj;alksdflaksdjfsdfkj" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxWidth="@dimen/max_width_chat_bubble"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/read_more"
            android:textColor="@color/read_more_color"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/message"
            app:layout_constraintTop_toBottomOf="@id/message"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_6"
            android:textColor="@color/unify_N700_32"
            android:visibility="gone"
            app:layout_goneMarginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_4"
            app:layout_constraintTop_toBottomOf="@id/message"
            app:layout_constraintLeft_toRightOf="@id/message"
            app:layout_constraintBottom_toBottomOf="@id/bottom_view"
            tools:text="11:50"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
