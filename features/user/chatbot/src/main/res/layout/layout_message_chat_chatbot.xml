<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="3dp"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="3dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:textAllCaps="true"
        android:textColor="@color/grey_500"
        app:typographyType="body_3"
        tools:text="13:16 wib" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_alignEnd="@+id/main"
        android:layout_marginStart="@dimen/dp_3"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_11"
        android:textStyle="normal"
        tools:text="Pengguna" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/label"
        android:layout_alignBottom="@id/label"
        android:layout_marginStart="3dp"
        android:layout_toStartOf="@+id/label"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/cb_dot"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_5"
        android:textStyle="normal" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toStartOf="@id/dot"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_11"
        android:textStyle="normal"
        tools:text="AHAJA" />

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:background="@drawable/chatbot_right_bubble">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:linksClickable="true"
                android:maxWidth="@dimen/chat_width"
                android:paddingBottom="@dimen/dp_8"
                android:textColor="@color/Unify_N700_96"
                android:textColorLink="@color/white"
                android:textIsSelectable="true"
                app:typographyType="body_2"
                app:layout_constraintRight_toRightOf="@id/main"
                app:layout_constraintLeft_toLeftOf="@id/main"
                app:layout_constraintTop_toTopOf="@id/main"
                tools:text="Guawsssssssssssssssssssssssssssssssssssssssssswwsqwswqswqswqswqsxw" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/bottom_view"
                android:layout_width="@dimen/chat_width"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_8"
                android:text="@string/read_more"
                android:textColor="@color/read_more_color"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@id/message"
                app:layout_constraintTop_toBottomOf="@id/message"
                tools:visibility="visible" />


            <ImageView
                android:id="@+id/chat_status"
                android:layout_width="11dp"
                android:layout_height="6dp"
                android:layout_marginLeft="@dimen/dp_4"
                app:layout_constraintBottom_toBottomOf="@id/message"
                app:layout_constraintLeft_toRightOf="@id/message"

                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_read_thin" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_32"
                android:layout_marginLeft="@dimen/dp_4"
                app:layout_goneMarginLeft="@dimen/dp_4"
                app:layout_constraintBottom_toBottomOf="@+id/chat_status"
                app:layout_constraintStart_toEndOf="@+id/chat_status"
                app:layout_constraintTop_toTopOf="@+id/chat_status"
                app:typographyType="heading_6"
                tools:text="10:13 pm"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dp_24"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main"
        android:layout_alignBottom="@+id/main"
        android:layout_toStartOf="@+id/main"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="gone"
        tools:visibility="gone" />

</RelativeLayout>
