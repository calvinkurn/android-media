<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:backgroundTint="@color/chatbot_dms_transparent">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/progress_bar_loding"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        app:loader_type="circular_white"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/progress_cross"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_action_x"
        android:tint="@color/Unify_NN0"
        android:layout_gravity="center"
        android:visibility="visible"
        android:contentDescription="@null"
        tools:visibility="visible" />

</merge>