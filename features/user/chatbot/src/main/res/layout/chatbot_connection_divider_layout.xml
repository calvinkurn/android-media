<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_left"
        android:layout_width="@dimen/dp_chatbot_50"
        android:layout_height="@dimen/dp_chatbot_1"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginLeft="@dimen/unify_space_16"
        android:background="@color/Unify_N150"
        app:layout_constraintBottom_toBottomOf="@+id/chatbot_tv_divider_message"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/chatbot_tv_divider_message"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/chatbot_tv_divider_message"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginLeft="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginRight="@dimen/unify_space_16"
        android:gravity="center"
        tools:text="Agen kami fasfsafsadcddcdcdxcvxvxfvxfgfdsgsgweweggwgedcd"
        app:layout_constraintEnd_toStartOf="@+id/view_right"
        app:layout_constraintStart_toEndOf="@+id/view_left"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    <View
        android:id="@+id/view_right"
        android:layout_width="@dimen/dp_chatbot_50"
        android:layout_height="@dimen/dp_chatbot_1"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginRight="@dimen/unify_space_16"
        android:background="@color/Unify_N150"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chatbot_tv_divider_message"
        app:layout_constraintTop_toBottomOf="@+id/guideline2"
        app:layout_constraintBottom_toBottomOf="@+id/chatbot_tv_divider_message" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/chatbot_tv_divider_button"
        android:layout_width="@dimen/dp_chatbot_130"
        android:layout_height="@dimen/unify_space_40"
        android:layout_marginTop="@dimen/unify_space_16"
        android:background="@drawable/ineractive_button_background"
        android:gravity="center"
        android:text="@string/cb_bot_leave_queue"
        android:textColor="@color/Unify_G400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatbot_tv_divider_message"
        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
       />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/unify_space_16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/unify_space_40"
        />

</androidx.constraintlayout.widget.ConstraintLayout>