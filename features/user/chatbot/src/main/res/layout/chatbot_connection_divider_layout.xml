<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_left"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/grey_350"
        app:layout_constraintBottom_toBottomOf="@+id/chatbot_tv_divider_message"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/chatbot_tv_divider_message"/>

    <TextView
        android:id="@+id/chatbot_tv_divider_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        tools:text="Agen kami fasfsafsadcddcdcdxcvxvxfvxfgfdsgsgweweggwgedcd"
        app:layout_constraintEnd_toStartOf="@+id/view_right"
        app:layout_constraintStart_toEndOf="@+id/view_left"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    <View
        android:id="@+id/view_right"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/grey_350"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chatbot_tv_divider_message"
        app:layout_constraintTop_toBottomOf="@+id/guideline2"
        app:layout_constraintBottom_toBottomOf="@+id/chatbot_tv_divider_message" />
    <TextView
        android:id="@+id/chatbot_tv_divider_button"
        android:layout_width="@dimen/dp_130"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ineractive_button_background"
        android:gravity="center"
        android:text="@string/cb_bot_leave_queue"
        android:textColor="@color/tkpd_main_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatbot_tv_divider_message"
        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
       />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>