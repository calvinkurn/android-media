<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="com.tokopedia.chatbot.view.customview.CustomChatbotChatLayout">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="left|top"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@color/chatbot_dms_message_text"
        android:textIsSelectable="true"
        android:textColorLink="@color/Unify_GN500"
        app:typographyType="body_1"
        tools:ignore="RtlHardcoded"
        android:ellipsize="end"
        tools:text="Mau cari susu yang bisa buat keker dlm satu malam ada gak ya gan?" />

    <LinearLayout
        android:id="@+id/llStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom|center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCheckMark"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp"
            tools:srcCompat="@drawable/ic_chat_read"
            android:contentDescription="@null"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/chatbot_dms_time_text"
            app:typographyType="body_3"
            tools:text="11:00" />
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/read_more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="6dp"
        android:text="@string/read_more"
        android:textColor="@color/chatbot_dms_message_see_more"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:visibility="gone"
        app:typographyType="heading_6"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        tools:visibility="visible" />

</merge>