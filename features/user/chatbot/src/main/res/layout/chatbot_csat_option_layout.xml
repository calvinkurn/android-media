<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        tools:text="13:16 wib"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_goneMarginTop="@dimen/dp_0"
        android:linksClickable="true"
        android:maxWidth="@dimen/chat_width"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black_70"
        android:textColorLink="@color/read_more_color"
        android:textIsSelectable="true"
        android:background="@drawable/left_bubble"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Gukguk meong meongaksjdkajshdkajhsdkajhsdkajhsdaksdjhaksjhkahsdk"/>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/chat_csat_option_list_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_csat_option_list_selection"
            android:layout_width="@dimen/chat_width"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_chat_helpfull"
            tools:itemCount="2"/>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hour"
        tools:text="10:13 pm"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="small"
        android:layout_marginTop="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_8"
        android:textColor="@color/time_color"
        app:layout_constraintTop_toBottomOf="@id/chat_csat_option_list_container"
        app:layout_constraintLeft_toLeftOf="@id/message"/>

</androidx.constraintlayout.widget.ConstraintLayout>