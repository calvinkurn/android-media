<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_layout">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/toolbar_textview"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="@dimen/unify_space_4"
            android:gravity="center"
            android:text="@string/csat_survey_toolbar_text"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/dp_chatbot_18"
            app:typographyWeight="bold"
            android:theme="?toolbarTheme"
            app:elevation="@dimen/unify_space_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unify_space_2"
            android:layout_marginBottom="@dimen/unify_space_16"
            android:background="@color/Unify_N100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_textview" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginLeft="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_24"
            android:layout_marginBottom="@dimen/unify_space_8"
            android:gravity="center"
            android:paddingTop="@dimen/dp_chatbot_20"
            android:text="@string/csat_txt_help_title"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            app:layout_constraintTop_toBottomOf="@+id/divider_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

        <LinearLayout
            android:id="@+id/smile_layout"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp_chatbot_10"
            android:weightSum="5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_help_title"
            android:orientation="horizontal">

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_smile_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_24"
            android:gravity="center"
            android:textColor="@color/Unify_G400"
            android:textSize="@dimen/unify_font_14"
            app:layout_constraintTop_toBottomOf="@id/smile_layout"
            tools:layout_editor_absoluteX="@dimen/unify_space_16"
            tools:text="Memuaskan" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unify_space_2"
            android:layout_marginTop="@dimen/dp_chatbot_20"
            android:layout_marginBottom="@dimen/unify_space_16"
            android:background="@color/Unify_N100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_smile_selected" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_feedback_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_24"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:textColor="@color/Unify_N700"
            android:textSize="@dimen/unify_font_14"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:text="Apa yang sebaiknya dipertahankan dari layanan kami?" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_chatbot_6"
            android:paddingBottom="@dimen/dp_chatbot_6"
            android:showDividers="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_feedback_question"
            app:layout_scrollFlags="enterAlways">

            <com.tokopedia.csat_rating.adapter.CustomQuickOptionView
                android:id="@+id/filter_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>


        <include
            android:id="@+id/top_bot_reason_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_8"
            android:layout_marginRight="@dimen/unify_space_8"
            android:layout_marginBottom="@dimen/unify_space_24"
            layout="@layout/bot_reason_layout"
            app:layout_constraintBottom_toTopOf="@+id/txt_finished"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_finished"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_chatbot_50"
            android:layout_margin="@dimen/unify_space_24"
            android:layout_marginBottom="@dimen/unify_space_8"
            app:layout_goneMarginTop="@dimen/dp_chatbot_60"
            android:background="@drawable/bg_button_state"
            android:gravity="center"
            android:text="@string/csat_submit"
            android:textColor="@color/Unify_N0"
            android:textSize="@dimen/unify_font_14"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/top_bot_reason_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
