<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/invoice_height"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/attach_invoice_item_cardview"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:clipToPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/attach_invoice_item_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/attach_invoice_item_invoice_no"
                style="@style/TextView.Micro.Green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:textColor="@color/Unify_G400"
                app:typographyType="display_3"
                tools:text="IVR/20171010/XVII/X/24225245" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/attach_invoice_item_invoice_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/attach_invoice_item_invoice_no"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/Unify_N700_32"
                android:textStyle="italic"
                app:typographyType="display_3"
                tools:text="10 Oct 2017" />

            <ImageView
                android:id="@+id/attach_invoice_item_product_image"
                android:layout_width="@dimen/invoice_thumbnail_size"
                android:layout_height="@dimen/invoice_thumbnail_size"
                android:layout_below="@id/attach_invoice_item_invoice_date"
                android:layout_alignLeft="@id/attach_invoice_item_invoice_date"
                android:layout_marginTop="6dp"
                android:background="@color/grey_300"
                android:padding="@dimen/dp_1"
                android:scaleType="fitXY"
                android:src="@color/colorAccent"
                android:contentDescription="attach_invoice_item_product_image" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/attach_invoice_item_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attach_invoice_item_invoice_date"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/attach_invoice_item_product_image"
                android:maxLines="2"
                app:typographyType="display_2"
                tools:text="Helm Cargloss MXC Supertrack Ice Brown" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/attach_invoice_item_product_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attach_invoice_item_product_name"
                android:layout_alignLeft="@id/attach_invoice_item_product_name"
                android:layout_alignBottom="@id/attach_invoice_item_product_image"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="3"
                android:textColor="@color/Unify_N700_32"
                app:typographyType="display_3"
                tools:text="+4 barang lainnya" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/attach_invoice_item_invoice_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attach_invoice_item_product_desc"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_attach_invoice_status"
                android:gravity="center_horizontal"
                android:maxWidth="@dimen/dp_200"
                android:maxLines="1"
                android:minWidth="@dimen/invoice_status_min_width"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:textAlignment="center"
                android:textColor="#f5a623"
                android:textSize="11sp"
                app:typographyType="display_3"
                tools:text="Kode resi pengiriman tidak valid" />


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/attach_invoice_item_invoice_total_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/attach_invoice_item_invoice_status"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/total_invoice"
                android:textColor="@color/Unify_N700_32"
                app:typographyType="display_2" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/attach_invoice_item_invoice_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/attach_invoice_item_invoice_total_container"
                android:textColor="@color/Unify_Y500"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                tools:text="Rp 10.000.000" />

            <View
                android:id="@+id/attach_invoice_item_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_above="@id/attach_invoice_item_invoice_total_container"
                android:layout_marginTop="12dp"
                android:background="@color/grey_hint" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>