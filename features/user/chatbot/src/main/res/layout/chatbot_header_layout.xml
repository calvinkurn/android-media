<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chatcommon_56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/chatcommon_40dp"
        android:layout_height="@dimen/chatcommon_40dp"
        android:src="@color/Unify_Y500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="user_avatar"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/chatcommon_9dp"
        android:layout_marginEnd="@dimen/chatcommon_60dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/user_avatar"
        app:layout_constraintTop_toTopOf="@id/user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyType="heading_4"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/chatbotHeaderBadge"
        android:layout_width="@dimen/dp_chatbot_87"
        android:layout_height="@dimen/dp_chatbot_20"
        android:layout_marginStart="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title"
        android:contentDescription="@null"/>


</androidx.constraintlayout.widget.ConstraintLayout>