<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dp_chatbot_2"
    android:paddingTop="@dimen/dp_chatbot_12"
    android:paddingBottom="@dimen/dp_chatbot_12">

    <com.tokopedia.iconunify.IconUnify
        android:layout_width="@dimen/dp_chatbot_30"
        android:layout_height="@dimen/dp_chatbot_26"
        android:id="@+id/icon"
        app:icon_color_light_enable="@color/Unify_NN900"
        app:icon_color_night_enable="@color/Unify_NN900"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_chatbot_17"
        android:textColor="@color/Unify_NN950"
        tools:text="Balas"/>

</androidx.constraintlayout.widget.ConstraintLayout>