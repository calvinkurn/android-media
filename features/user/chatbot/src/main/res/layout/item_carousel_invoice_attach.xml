<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/invoice_height"
    android:background="@color/white">

    <include
        android:id="@+id/container_all_invoice_attach"
        layout="@layout/item_include_invoice_attach"
        android:layout_width="@dimen/invoice_item_carousel_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8" />

    <RelativeLayout
        android:id="@+id/container_invoice_attach_get_all_invoice_button"
        android:layout_width="@dimen/item_carousel_next_invoice_width"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/container_all_invoice_attach"
        android:background="@color/white">

        <ImageView
            android:id="@+id/all_invoice_button"
            android:layout_width="@dimen/item_carousel_next_arrow_size"
            android:layout_height="@dimen/item_carousel_next_arrow_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/circle_white_invoice"
            android:elevation="@dimen/dp_4"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_arrow_forward_right_with_circle" />

        <TextView
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/all_invoice_button"
            android:layout_alignRight="@id/all_invoice_button"
            android:layout_below="@id/all_invoice_button"
            android:layout_marginTop="@dimen/dp_8"
            android:text="Lihat semua"
            android:textAlignment="center" />

    </RelativeLayout>

</RelativeLayout>