<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:padding="@dimen/unify_space_8"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/reply_icon"
        android:layout_width="22dp"
        android:layout_height="18dp"
        app:icon_name="REPLY_FILLED"
        android:layout_marginLeft="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/chatcommon_10dp"
        android:visibility="gone"
        app:icon_color_light_enable="@color/Unify_NN500"
        app:layout_constraintBottom_toBottomOf="@+id/reply_from"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reply_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN600"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/close_btn"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/reply_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        android:text="@tools:sample/lorem/random" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reply_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN600"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/close_btn"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reply_from"
        app:typographyType="display_3"
        android:text="@tools:sample/lorem/random"
        android:paddingBottom="@dimen/unify_space_12"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/close_btn"
        android:layout_width="@dimen/unify_space_16"
        android:layout_height="@dimen/unify_space_16"
        app:icon_name="CLOSE"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</merge>