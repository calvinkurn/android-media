<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <View
        android:id="@+id/bubble_bg"
        android:layout_width="@dimen/chat_width"
        android:layout_height="0dp"
        android:background="@drawable/left_bubble"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="13:16 wib" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:maxWidth="@dimen/chat_width"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black_70"
        android:textColorLink="@color/read_more_color"
        android:textIsSelectable="true"
        app:layout_constraintLeft_toLeftOf="@id/bubble_bg"
        app:layout_constraintTop_toTopOf="@id/bubble_bg"
        app:layout_goneMarginTop="@dimen/dp_0"
        app:typographyType="body_2"
        tools:text="Gukguk meong meongaksjdkajshdkajhsdkajhsdkajhsdaksdjhaksjhkahsdk" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/actionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Beli"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/bubble_bg"
        app:layout_constraintLeft_toLeftOf="@id/bubble_bg"
        app:layout_constraintRight_toRightOf="@id/bubble_bg"
        app:layout_constraintTop_toBottomOf="@id/message"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_8"
        android:textColor="@color/time_color"
        app:layout_constraintLeft_toLeftOf="@id/message"
        app:layout_constraintTop_toBottomOf="@id/bubble_bg"
        app:typographyType="small"
        tools:text="10:13 pm"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/dp_15" />

</androidx.constraintlayout.widget.ConstraintLayout>