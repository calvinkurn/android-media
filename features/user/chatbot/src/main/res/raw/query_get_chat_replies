query get_chat_replies($msgId: Int!) {
  chatReplies(msgId: $msgId) {
    contacts {
      role
      userId
      shopId
      interlocutor
      name
      tag
      thumbnail
      domain
    }
    list {
      date
      chats {
        time
        replies {
          msgId
          replyId
          senderId
          senderName
          role
          msg
          replyTime
          status
          attachmentID
          attachment {
            id
            type
            attributes{
              url
            }
            fallback {
              message
              html
            }
          }
           isOpposite
           isHighlight
           isRead
        }
      }
    }
  }
}
