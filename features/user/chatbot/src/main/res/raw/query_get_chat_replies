query get_chat_replies($msgId: Int!) {
  chatReplies(msgId: $msgId) {
    hasNext
    contacts {
      role
      userId
      shopId
      interlocutor
      name
      tag
      thumbnail
      domain
      status {
        timestamp
        isOnline
      }
    }
    list {
      date
      chats {
        time
        replies {
          msgId
          replyId
          senderId
          senderName
          role
          msg
          replyTime
          status
          attachmentID
          attachment {
            id
            type
            fallback{
              message
              html
            }
            attributes
          }
          oldMsgId
        }
      }
    }
  }
}
