<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/attach_product_chat_container"
        android:layout_alignRight="@+id/attach_product_chat_container"
        android:layout_below="@+id/date"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_38"
        android:textSize="11sp"
        android:layout_marginLeft="3dp"
        android:textStyle="normal"
        tools:text="Pengguna" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/label"
        android:layout_alignBottom="@id/label"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/label"
        android:layout_toStartOf="@+id/label"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:text="●"
        android:gravity="center_vertical"
        android:textColor="@color/grey_500"
        android:textSize="5sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_54"
        android:textSize="11sp"
        android:textStyle="normal"
        android:layout_toLeftOf="@id/dot"
        android:layout_marginBottom="@dimen/dp_5"
        tools:text="AHAJA"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:textColor="@color/grey_500"
        tools:text="13:16 wib"
        android:textAllCaps="true"
        android:textSize="@dimen/sp_12" />

    <include layout="@layout/attach_product_base_layout"
            android:id="@+id/attach_product_chat_container"
            android:layout_below="@id/name"
            android:layout_width="@dimen/dp_240"
            android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dp_24"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/attach_product_chat_container"
        android:layout_alignBottom="@id/attach_product_chat_container"
        android:layout_toLeftOf="@id/attach_product_chat_container"
        android:layout_toStartOf="@id/attach_product_chat_container"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="visible"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/chat_status"
        android:layout_width="11dp"
        android:layout_height="6dp"
        android:layout_toLeftOf="@+id/hour"
        android:layout_toStartOf="@+id/hour"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/attach_product_chat_container"
        android:layout_alignTop="@+id/hour"
        android:layout_alignBottom="@+id/hour"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_chat_pending"/>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/time_color"
        android:textSize="@dimen/sp_10"
        tools:text="10:13 pm"
        tools:visibility="visible"
        android:layout_below="@id/attach_product_chat_container"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_alignEnd="@id/attach_product_chat_container"
        android:layout_alignRight="@id/attach_product_chat_container"
        />
</RelativeLayout>
