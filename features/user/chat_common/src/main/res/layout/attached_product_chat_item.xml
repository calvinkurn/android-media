<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_1"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="1dp">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_alignEnd="@+id/attach_product_chat_container"
        android:layout_alignRight="@+id/attach_product_chat_container"
        android:layout_marginLeft="3dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_38"
        android:textSize="11sp"
        android:textStyle="normal"
        tools:text="Pengguna" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/label"
        android:layout_alignBottom="@id/label"
        android:layout_marginLeft="3dp"
        android:layout_toStartOf="@+id/label"
        android:layout_toLeftOf="@+id/label"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="●"
        android:textColor="@color/grey_500"
        android:textSize="5sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toLeftOf="@id/dot"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_54"
        android:textSize="11sp"
        android:textStyle="normal"
        tools:text="AHAJA" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_12"
        tools:text="13:16 wib" />

    <include
        android:id="@+id/attach_product_chat_container"
        layout="@layout/attach_product_base_layout"
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        android:layout_below="@id/name" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dp_24"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/attach_product_chat_container"
        android:layout_alignBottom="@id/attach_product_chat_container"
        android:layout_toStartOf="@id/attach_product_chat_container"
        android:layout_toLeftOf="@id/attach_product_chat_container"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="visible"
        tools:visibility="gone" />
</RelativeLayout>
