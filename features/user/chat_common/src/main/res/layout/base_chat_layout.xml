<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:textAllCaps="true"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        tools:text="13:16 wib"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginEnd="@dimen/margin_selected_rating"
        android:layout_marginRight="@dimen/margin_selected_rating"
        android:background="@drawable/left_bubble"
        android:linksClickable="true"
        android:maxWidth="@dimen/max_width_chat_bubble"
        android:paddingBottom="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_18"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:textColor="@color/black_70"
        android:textColorLink="@color/black_70"
        android:textIsSelectable="true"
        android:textSize="@dimen/sp_14"
        android:visibility="visible"
        tools:text="opesjkajd aasdfkalskdjfla;ksdfajsdlfkjalsdjflaksjdfl;aks;dlfalskdfj;alksdflaksdjfsdfkj"/>


    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="@color/time_color"
        android:textSize="@dimen/sp_10"
        android:visibility="gone"
        tools:text="11:50"/>

</RelativeLayout>
