<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/cards_ui_with_padding"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/reputation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/chatcommon_5dp"
            android:layout_marginRight="@dimen/chatcommon_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/chatcommon_10dp"
            android:paddingRight="@dimen/chatcommon_10dp">

            <ImageView
                android:id="@+id/rep_icon"
                android:layout_width="@dimen/chatcommon_15dp"
                android:layout_height="@dimen/chatcommon_15dp" />

            <TextView
                android:id="@+id/rep_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/chatcommon_5dp"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_G400"
                android:textSize="@dimen/fontSize_lvl2" />

        </LinearLayout>

        <TextView
            android:id="@+id/msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/reputation_view"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/chatcommon_10dp"
            android:paddingRight="@dimen/chatcommon_10dp"
            android:singleLine="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/chat_blocked_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/chatcommon_5dp"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl2"
            android:background="@drawable/border_green_white_box"
            android:padding="@dimen/layout_lvl1"
            android:visibility="gone">

            <TextView
                android:id="@+id/blocked_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chat_blocked_text"
                android:textColor="@color/Unify_N700_68"
                android:textSize="@dimen/fontSize_lvl2" />

            <TextView
                android:id="@+id/enable_chat_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blocked_text"
                android:text="@string/enable_chat_settings"
                android:textColor="@color/Unify_G400"
                android:textSize="@dimen/fontSize_lvl2" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/add_comment_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingStart="@dimen/layout_lvl2"
                android:paddingTop="@dimen/fontSize_lvl2"
                android:paddingEnd="@dimen/layout_lvl2"
                android:visibility="gone"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:orientation="horizontal"
                tools:scrollbars="horizontal" />

            <include layout="@layout/layout_product_preview" />

            <RelativeLayout
                android:id="@+id/reply_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/layout_lvl2"
                android:paddingTop="@dimen/fontSize_lvl2"
                android:paddingEnd="@dimen/layout_lvl2"
                android:paddingBottom="@dimen/layout_lvl2">

                <ImageView
                    android:id="@+id/send_but"
                    android:layout_width="@dimen/layout_lvl5"
                    android:layout_height="@dimen/layout_lvl5"
                    android:layout_alignBottom="@+id/new_comment"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_chat_common_send_grey" />

                <EditText
                    android:id="@+id/new_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/layout_lvl1"
                    android:layout_toStartOf="@+id/send_but"
                    android:background="@drawable/bg_rounded_chat_input"
                    android:hint="@string/chat_edit_text"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:paddingStart="@dimen/chatcommon_12dp"
                    android:paddingTop="@dimen/chatcommon_10dp"
                    android:paddingEnd="@dimen/layout_lvl6"
                    android:paddingBottom="@dimen/chatcommon_10dp"
                    android:textSize="@dimen/fontSize_lvl4"
                    tools:text="@tools:sample/lorem/random" />

                <FrameLayout
                    android:layout_width="@dimen/layout_lvl5"
                    android:layout_height="@dimen/layout_lvl5"
                    android:layout_alignEnd="@+id/new_comment"
                    android:layout_alignBottom="@+id/new_comment"
                    android:layout_marginEnd="@dimen/layout_lvl1"
                    android:background="@drawable/bg_oval_transparent">

                    <ImageView
                        android:id="@+id/iv_chat_menu"
                        android:layout_width="@dimen/layout_lvl5"
                        android:layout_height="@dimen/layout_lvl5"
                        android:padding="@dimen/layout_lvl1"
                        app:srcCompat="@drawable/ic_add_grey_chat_common" />
                </FrameLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/rv_attachment_menu_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_lvl1"
                    android:layout_gravity="top"
                    android:background="@drawable/bg_shadow_attachment_menu_chat_common" />

                <com.tokopedia.chat_common.view.widget.AttachmentMenuRecyclerView
                    android:id="@+id/rv_attachment_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingTop="@dimen/layout_lvl3"
                    android:paddingBottom="@dimen/layout_lvl3"
                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:spanCount="2" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@id/header"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@id/header"
        android:layout_gravity="center"
        android:descendantFocusability="beforeDescendants"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/header_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recycler_view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_yellow_border_yelow"
        android:gravity="center_horizontal"
        android:padding="@dimen/chatcommon_5dp"
        android:singleLine="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/notifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N700"
        android:gravity="center_vertical"
        android:minHeight="@dimen/chatcommon_56dp"
        android:orientation="horizontal"
        android:padding="@dimen/layout_lvl2"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/Unify_N0"
            tools:text="Title" />

        <ProgressBar
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N0" />

    </LinearLayout>

</RelativeLayout>

