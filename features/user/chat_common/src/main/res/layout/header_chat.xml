<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_56"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/avatar_thumb_size"
        android:layout_height="@dimen/avatar_thumb_size"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/online_status"
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_7"
        android:layout_alignEnd="@+id/user_avatar"
        android:layout_alignRight="@+id/user_avatar"
        android:layout_alignBottom="@+id/user_avatar"
        android:visibility="gone"
        app:srcCompat="@drawable/status_indicator_offline"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/header_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:background="@color/white"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_toolbar_overflow_level_two_black"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/user_avatar"
        android:layout_toRightOf="@id/user_avatar"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_7"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/label"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            tools:text="Store name" />

        <TextView
            android:id="@id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_7"
            android:background="@drawable/label_user_chat"
            android:fontFamily="sans-serif"
            android:padding="@dimen/dp_4"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/chat_person_tag_text_size"
            android:textStyle="normal"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Penjual" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="@dimen/online_status_text_line_spacing"
            android:textColor="@color/black_38"
            android:textSize="@dimen/online_status_text_size"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Terakhir online 3 menit yang lalu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>