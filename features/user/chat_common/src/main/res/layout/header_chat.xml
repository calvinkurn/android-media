<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_56"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flPhotoContainer"
        android:layout_width="@dimen/avatar_thumb_size"
        android:layout_height="@dimen/avatar_thumb_size"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/avatar_thumb_size"
            android:layout_height="@dimen/avatar_thumb_size"
            tools:src="@color/red_800" />

        <ImageView
            android:id="@+id/online_status"
            android:layout_width="@dimen/chatcommon_14dp"
            android:layout_height="@dimen/chatcommon_14dp"
            android:layout_gravity="end|bottom"
            android:visibility="gone"
            tools:srcCompat="@drawable/status_indicator_offline"
            tools:visibility="visible" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/header_menu"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"
        android:background="@color/white"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_toolbar_overflow_level_two_black"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/chatcommon_60dp"
        android:layout_marginRight="@dimen/chatcommon_60dp"
        android:layout_toEndOf="@+id/flPhotoContainer"
        android:layout_toRightOf="@+id/flPhotoContainer"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/clTitleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/chatcommon_9dp"
            android:layout_marginLeft="@dimen/chatcommon_9dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBadge"
                android:layout_width="@dimen/chatcommon_22dp"
                android:layout_height="@dimen/chatcommon_22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:layout_marginRight="@dimen/spacing_lvl2"
                android:visibility="gone"
                tools:src="@drawable/ic_badge_shop_official"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxEms="8"
                android:maxLines="1"
                android:textColor="@color/black_70"
                app:typographyType="heading_4"
                tools:text="Really Long text that cuts tasdfasdf" />

            <TextView
                android:id="@id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:background="@drawable/label_user_chat"
                android:fontFamily="sans-serif"
                android:padding="@dimen/dp_4"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/chat_person_tag_text_size"
                android:textStyle="normal"
                android:visibility="gone"
                tools:text="Penjual"
                tools:visibility="visible" />
        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/chatcommon_9dp"
            android:layout_marginLeft="@dimen/chatcommon_9dp"
            android:includeFontPadding="false"
            android:textColor="@color/black_38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clTitleContainer"
            app:typographyType="body_3"
            tools:text="Terakhir online 3 menit yang lalu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>