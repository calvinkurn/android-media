<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="3dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:textAllCaps="true"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_12"
        tools:text="13:16 wib"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main"
        android:layout_alignRight="@+id/main"
        android:layout_below="@+id/date"
        android:layout_marginLeft="3dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_11"
        android:textStyle="normal"
        tools:text="Pengguna"/>

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/label"
        android:layout_alignTop="@id/label"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/label"
        android:layout_toStartOf="@+id/label"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="â—"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_5"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toLeftOf="@id/dot"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_11"
        android:textStyle="normal"
        tools:text="AHAJA"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:background="@drawable/right_bubble">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:maxWidth="@dimen/chat_width"
            android:padding="@dimen/dp_10"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp_14"
            tools:text="Gukguk meong meongaksjdkajshdkajhsdkajhsdkajhsdaksdjhaksjhkahsdk"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dp_24"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main"
        android:layout_alignTop="@+id/main"
        android:layout_toLeftOf="@+id/main"
        android:layout_toStartOf="@+id/main"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="gone"
        tools:visibility="gone"/>

    <ImageView
        android:id="@+id/chat_status"
        android:layout_width="11dp"
        android:layout_height="6dp"
        android:layout_alignBottom="@+id/hour"
        android:layout_alignTop="@+id/hour"
        android:layout_below="@+id/main"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/hour"
        android:layout_toStartOf="@+id/hour"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_read_thin"/>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/card_group_chat_message"
        android:layout_alignRight="@id/card_group_chat_message"
        android:layout_below="@id/main"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="@color/time_color"
        android:textSize="@dimen/sp_10"
        tools:text="10:13 pm"
        tools:visibility="visible"
        />
</RelativeLayout>