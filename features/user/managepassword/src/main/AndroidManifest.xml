<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.tokopedia.managepassword">
  
  <application
    android:allowBackup="true"
    android:label="@string/app_name"
    android:supportsRtl="true">
    <activity
      android:theme="@style/Theme.White"
      android:name=".changepassword.view.activity.ChangePasswordActivity"
      android:label="@string/change_password_app_name"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="adjustResize|stateHidden">
      <intent-filter>
        <action android:name="com.tokopedia.internal.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data
          android:host="@string/host_global"
          android:pathPattern="@string/path_change_password"
          android:scheme="@string/internal_scheme" />
      </intent-filter>
    </activity>
    
    <activity
      android:theme="@style/Theme.White"
      android:name=".haspassword.view.activity.HasPasswordActivity"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="com.tokopedia.internal.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data
          android:host="@string/host_global"
          android:pathPattern="@string/path_has_password"
          android:scheme="@string/internal_scheme" />
      </intent-filter>
    </activity>
    
    <activity
      android:theme="@style/Theme.White"
      android:name=".addpassword.view.activity.AddPasswordActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
      <intent-filter>
        <action android:name="com.tokopedia.internal.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data
          android:scheme="@string/internal_scheme"
          android:host="@string/host_global"
          android:path="@string/path_add_password"/>
      </intent-filter>
    </activity>
    
    <activity
      android:theme="@style/Theme.White"
      android:name=".forgotpassword.view.activity.ForgotPasswordActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
      <intent-filter>
        <action android:name="com.tokopedia.internal.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data
          android:host="@string/host_global"
          android:path="@string/path_forgot_password"
          android:scheme="@string/internal_scheme" />
      </intent-filter>
    </activity>
    
    <activity
      android:theme="@style/Theme.White"
      android:name=".ManagePasswordWebViewActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
  </application>

</manifest>