<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/filterCashBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSize="medium"
            app:chipText="@string/title_attachvoucher_cashback"
            app:chipType="alternate" />

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/filterFreeOngkir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            app:chipSize="medium"
            app:chipText="@string/title_attachvoucher_free_ongkir"
            app:chipType="alternate" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintBottom_toTopOf="@+id/flAttach"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterContainer">

        <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/attachShadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl3"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_attachvoucher_shadow_attachment" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flAttach"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnAttach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/title_attachvoucher_button_attach"
            android:textAllCaps="false" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>