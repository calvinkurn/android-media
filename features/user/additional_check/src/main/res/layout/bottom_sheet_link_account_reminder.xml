<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/unify_space_16"
    android:paddingLeft="@dimen/unify_space_16"
    android:paddingRight="@dimen/unify_space_16">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/link_account_bs_reminder_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/link_account_bs_reminder_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/unify_space_16"
        android:text="@string/link_account_reminder_bottom_sheet_title"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/link_account_bs_reminder_image"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/link_account_bs_reminder_description"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:textColor="@color/Neutral_N700_68"
        android:text="@string/link_account_reminder_bottom_sheet_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/link_account_bs_reminder_title" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/link_account_bs_reminder_primary_btn"
        android:layout_marginTop="@dimen/unify_space_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/link_account_reminder_bottom_sheet_btn_primary_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/link_account_bs_reminder_description" />
</androidx.constraintlayout.widget.ConstraintLayout>