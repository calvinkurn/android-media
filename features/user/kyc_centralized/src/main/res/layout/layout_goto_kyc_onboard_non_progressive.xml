<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Verifikasi buat jadi Power Merchant, yuk! Gampang banget, lho~"
        android:gravity="center"
        app:typographyType="heading_3"/>

    <include
        android:id="@+id/layout_account_linking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        layout="@layout/item_goto_kyc_onboard_non_progressive"/>

    <include
        android:id="@+id/layout_ktp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        layout="@layout/item_goto_kyc_onboard_non_progressive"/>

    <include
        android:id="@+id/layout_selfie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        layout="@layout/item_goto_kyc_onboard_non_progressive"/>

</LinearLayout>