<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_status_submission"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="300dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_disable_shimmering_placeholder="true" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        tools:text="Makasih ya udah kirim dokumenmu!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_status_submission"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        tools:text="Sebentar ya, datamu diproses dalam 24 jam. Kamu bisa tutup dan kami kabarin saat selesai."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:typographyType="paragraph_2" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/card_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="16dp"
        app:card_type="clear"
        app:card_background_color="@color/Unify_NN50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/ic_reason_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_dot"
                android:visibility="gone"
                tools:visibility="visible"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_reason_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Foto KTP atau selfie kamu buram, terpotong, gelap atau terlalu terang."
                android:layout_marginStart="16dp"
                app:typographyType="paragraph_2"
                app:layout_constraintStart_toEndOf="@id/ic_reason_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                tools:visibility="visible"/>

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/ic_reason_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_1"
                app:srcCompat="@drawable/ic_dot"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_reason_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Selfie menggunakan aksesoris atau menutupi wajah."
                android:layout_marginStart="16dp"
                app:typographyType="paragraph_2"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@id/ic_reason_2"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_1"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                tools:visibility="visible"/>

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/ic_reason_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_2"
                app:srcCompat="@drawable/ic_dot"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_reason_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Foto KTP atau selfie kamu buram, terpotong, gelap atau terlalu terang."
                android:layout_marginStart="16dp"
                app:typographyType="paragraph_2"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@id/ic_reason_3"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_2"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                tools:visibility="visible"/>

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/ic_reason_4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_3"
                app:srcCompat="@drawable/ic_dot"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_reason_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Foto KTP atau selfie kamu buram, terpotong, gelap atau terlalu terang."
                android:layout_marginStart="16dp"
                app:typographyType="paragraph_2"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@id/ic_reason_2"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_3"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                tools:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        tools:text="Balik ke Power Merchant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_reason" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        tools:text="Hubungi Tokopedia Care"
        app:unifyButtonVariant="ghost"
        app:unifyButtonType="alternate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_primary" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_secondary"
        app:typographyType="paragraph_2"
        tools:text="Meluncur otomatis dalam 7 detik." />

</androidx.constraintlayout.widget.ConstraintLayout>