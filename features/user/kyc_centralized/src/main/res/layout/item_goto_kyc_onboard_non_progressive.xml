<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_item_onboard"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:drawablePadding="6dp"
        tools:drawableEnd="@drawable/ic_checklist_circle_green"
        app:layout_constraintStart_toEndOf="@+id/img_item_onboard"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ambil foto KTP"
        app:typographyType="display_2"
        app:typographyWeight="bold"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_item_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_item_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title"
        app:typographyType="paragraph_3"
        tools:text="Mantap, kamu udah ambil foto KTP." />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_show_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintStart_toStartOf="@+id/tv_item_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_subtitle"
        android:text="@string/goto_kyc_onboard_non_progressive_item_ktp_view_image"
        android:visibility="gone"
        tools:visibility="visible"
        app:typographyType="display_3"
        app:typographyWeight="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>