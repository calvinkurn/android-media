<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_lvl2">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/benefit_icon"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/benefit_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_lvl1"
        android:text="@string/kyc_benefit_complete_shopping_feature_title"
        android:layout_marginStart="@dimen/unify_space_12"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        app:layout_constraintStart_toEndOf="@id/benefit_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/benefit_description"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_lvl1"
        android:layout_marginStart="@dimen/unify_space_12"
        android:text="@string/kyc_benefit_account_more_safer_dsc"
        app:typographyType="paragraph_3"
        app:layout_constraintStart_toEndOf="@id/benefit_icon"
        app:layout_constraintTop_toBottomOf="@id/benefit_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>