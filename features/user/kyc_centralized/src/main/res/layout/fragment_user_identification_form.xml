<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_identification_form_container"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lvl4"
            android:background="@color/Neutral_N0">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/form_onboarding_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_width="@dimen/kyc_centralized_218dp"
            android:layout_height="@dimen/kyc_centralized_144dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            app:typographyType="heading_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/kyc_centralized_f531353b"
            android:textSize="@dimen/fontSize_lvl5"
            android:layout_marginTop="@dimen/kyc_centralized_17_9dp"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_onboarding_image"
            tools:text="Foto bagian depan KTP"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            app:typographyType="body_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:lineSpacingExtra="@dimen/kyc_centralized_6sp"
            android:fontFamily="SFProText-Regular"
            android:paddingEnd="@dimen/spacing_lvl4"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4"
            android:paddingStart="@dimen/spacing_lvl4"
            android:gravity="center"
            android:textColor="@color/Neutral_N700_68"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="@string/face_subtitle" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle_body"
            app:typographyType="body_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/kyc_centralized_4dp"
            android:lineSpacingExtra="@dimen/kyc_centralized_6sp"
            android:paddingEnd="@dimen/spacing_lvl4"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4"
            android:paddingStart="@dimen/spacing_lvl4"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@color/Neutral_N700_68"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintLeft_toLeftOf="@id/subtitle"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            tools:text="@string/ktp_body" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/security_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginStart="@dimen/spacing_lvl3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle_body"
            android:layout_marginTop="@dimen/kyc_centralized_33dp"
            android:layout_marginBottom="@dimen/kyc_centralized_17dp"
            android:drawableLeft="@drawable/ic_shield"
            android:drawableStart="@drawable/ic_shield"
            android:drawablePadding="@dimen/spacing_lvl3"
            android:text="@string/kyc_data_security" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_margin="@dimen/spacing_lvl4"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/security_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Ambil Foto KTP" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>