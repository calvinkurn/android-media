<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_lvl4"
    android:background="@color/Neutral_N0">

        <ImageView
            android:id="@+id/ktp_onboarding_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/title"
            android:layout_width="@dimen/useridentification_common_288dp"
            android:layout_height="@dimen/useridentification_common_216_5dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            app:typographyType="heading_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/useridentification_common_f531353b"
            android:textSize="@dimen/fontSize_lvl5"
            android:layout_marginTop="@dimen/useridentification_common_17_9dp"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ktp_onboarding_image"
            tools:text="Foto bagian depan KTP"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            app:typographyType="body_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:lineSpacingExtra="@dimen/useridentification_common_6sp"
            android:paddingEnd="@dimen/spacing_lvl4"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4"
            android:paddingStart="@dimen/spacing_lvl4"
            android:gravity="center"
            android:textColor="@color/Neutral_N700_68"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="@string/face_subtitle" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle_body"
            app:typographyType="body_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/useridentification_common_4dp"
            android:lineSpacingExtra="@dimen/useridentification_common_6sp"
            android:paddingEnd="@dimen/spacing_lvl4"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4"
            android:paddingStart="@dimen/spacing_lvl4"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@color/Neutral_N700_68"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            tools:text="@string/ktp_body" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/security_textview"
            app:typographyType="small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginStart="@dimen/spacing_lvl3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle_body"
            android:layout_marginTop="@dimen/useridentification_common_33dp"
            android:layout_marginBottom="@dimen/useridentification_common_17dp"
            android:drawableLeft="@drawable/ic_shield"
            android:drawableStart="@drawable/ic_shield"
            android:drawablePadding="@dimen/spacing_lvl3"
            android:text="@string/kyc_data_security" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_margin="@dimen/spacing_lvl4"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/security_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Ambil Foto KTP" />

</androidx.constraintlayout.widget.ConstraintLayout>