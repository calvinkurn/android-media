<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_background_tokopedia"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/avatar"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/loginphone_dp_12"
            android:layout_marginLeft="@dimen/loginphone_dp_12"
            android:layout_marginTop="@dimen/loginphone_dp_18"
            android:layout_marginBottom="@dimen/loginphone_dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/deleteIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:icon_name="DELETE"
            android:paddingRight="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/loginphone_dp_12"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/main_view"
            app:layout_constraintEnd_toStartOf="@+id/deleteIcon"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="@id/main_view">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:typographyType="display_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl2"
                app:typographyType="display_3"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

