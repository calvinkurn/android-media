<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_lvl4"
        android:visibility="visible">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="@dimen/liveness_224"
            android:layout_height="@dimen/liveness_179"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            app:typographyType="heading_2"
            app:typographyWeight="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:textColor="@color/Neutral_N700_96"
            android:textSize="@dimen/fontSize_lvl6"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_image"
            tools:text="Yaa, waktu habis" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl5"
            android:layout_marginRight="@dimen/spacing_lvl5"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/liveness_text_spacing_6"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="Kamu telah melebih batas waktu. Coba lagi dan ikuti instruksinya, ya." />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl6"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginLeft="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_52"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            android:text="@string/liveness_retry"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>