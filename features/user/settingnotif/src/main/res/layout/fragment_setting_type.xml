<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:text="@string/settingnotif_onboarding_message"
        android:textColor="@color/charcoal_grey_68"
        app:typographyType="body_1"
        app:typographyWeight="reguler" />

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/rv_setting_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:has_divider_left_padding="true"
        tools:listitem="@layout/item_setting_type"/>

</LinearLayout>