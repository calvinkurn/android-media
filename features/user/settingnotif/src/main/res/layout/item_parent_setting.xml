<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_sw_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_32"
        android:gravity="center_vertical"
        android:textColor="@color/charcoal_grey_96"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/sw_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Activity" />

    <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
        android:id="@+id/sw_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        android:paddingEnd="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="@+id/tv_sw_title"
        app:layout_constraintStart_toStartOf="@+id/tv_sw_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_sw_title"
        android:textColor="@color/grey_600"
        tools:text="Reminder, Feeds, dan Aktivitas akun kamu. This is really long text" />

</androidx.constraintlayout.widget.ConstraintLayout>