<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_16">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="center"
        android:src="@drawable/ic_smiley_bad"
        app:layout_constraintBottom_toBottomOf="@+id/tv_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_sw_title" />

    <TextView
        android:id="@+id/tv_sw_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:gravity="center_vertical"
        android:textColor="@color/charcoal_grey_96"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/sw_setting"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Activity" />

    <Switch
        android:id="@+id/sw_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_sw_title" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        android:paddingEnd="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tv_sw_title"
        app:layout_constraintStart_toStartOf="@+id/tv_sw_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_sw_title"
        tools:text="Reminder, Feeds, dan Aktivitas akun kamu. This is really long text" />
</android.support.constraint.ConstraintLayout>