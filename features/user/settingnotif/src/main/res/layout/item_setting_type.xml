<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_setting_field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spacing_lvl4"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/setting_notif_dp_18"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:paddingRight="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/setting_notif_dp_18">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/img_main_setting"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_notifsetting_notification" />

    <TextView
        android:id="@+id/tv_setting_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="@color/Unify_N700_96"
        android:textStyle="bold"
        tools:text="Push Notification" />

    <ImageView
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/spacing_lvl2"
        app:srcCompat="@drawable/ic_notifsetting_arrow_right_grey" />

</LinearLayout>