<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/card_shadow_top_bottom"
    android:layout_height="@dimen/dp_56">

    <ImageView
        android:id="@+id/talkProductAvatar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_round_corner"
        app:layout_constraintBottom_toTopOf="@+id/separator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/red_100"/>

    <TextView
        android:id="@+id/talkProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:lines="2"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/separator"
        app:layout_constraintLeft_toRightOf="@id/talkProductAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginRight="@dimen/dp_16"
        tools:text="Iphone X - Space Gray, 256 GB"
        />

    <TextView
        android:id="@+id/talkProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/talkProductAvatar"
        app:layout_constraintTop_toBottomOf="@id/talkProductName"
        app:layout_goneMarginRight="@dimen/dp_16"
        />


    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_300"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>

