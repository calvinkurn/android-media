<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/talk_details_reply_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/cards_ui_chat"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/talk_details_attach_product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/add_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/new_comment"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="@dimen/dp_10"
                app:srcCompat="@drawable/ic_attach"/>

            <ImageView
                android:id="@+id/maximize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/new_comment"
                android:layout_toRightOf="@id/add_url"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_maximize"/>

            <ImageView
                android:id="@+id/send_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/new_comment"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:padding="@dimen/dp_8"
                app:srcCompat="@drawable/ic_send_24dp_green"/>

            <EditText
                android:id="@+id/new_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/talk_details_attach_product_list"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_toEndOf="@+id/maximize"
                android:layout_toLeftOf="@+id/send_but"
                android:layout_toRightOf="@+id/maximize"
                android:layout_toStartOf="@+id/send_but"
                android:background="@drawable/bg_rounded_chat_input_talk"
                android:hint="@string/hint_send_discussion"
                android:inputType="textMultiLine"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                tools:text="dsajj\ndifjidfi\nidjfidj\nfdfidjidfijdfijd"/>

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_20"
                android:layout_alignBottom="@+id/add_url"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:visibility="gone"
                tools:visibility="visible"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/talk_details_reply_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/talk_details_reply_container"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>