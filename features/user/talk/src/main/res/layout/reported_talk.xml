<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_reported_talk"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/reportedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5sp"
        android:text="@string/reported_talk_seller_message"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_12"
        android:textStyle="italic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:drawableLeft="@drawable/ic_warning_alert"
        android:drawablePadding="@dimen/dp_8"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:text="@string/report_this_talk"
        android:textColor="@color/black_54"
        android:textSize="12sp"
        android:textStyle="normal"
        />

    <TextView
        android:id="@+id/reportYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_8"
        android:fontFamily="sans-serif"
        android:padding="@dimen/dp_8"
        android:text="@string/yes_report"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        />

    <TextView
        android:id="@+id/reportNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_8"
        android:fontFamily="sans-serif"
        android:padding="@dimen/dp_8"
        android:text="@string/no_show_talk"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/grey_300"/>

    <TextView
        android:id="@+id/rawMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        tools:text="Bisa langsung kontek ke WA ga? Ini nomornya 086789678989"
        />

</LinearLayout>