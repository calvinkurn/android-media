<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

    <TextView
            android:id="@+id/title_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black_70"
            tools:text="Ada pertanyaan?"
    />

    <ImageView
            android:id="@+id/q_a_logo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/circle_red"
            app:layout_constraintTop_toBottomOf="@+id/title_question"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_54"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@id/q_a_logo"
            tools:text="Diskusikan dengan penjual atau pengguna lain"
            app:layout_constraintTop_toTopOf="@+id/q_a_logo" app:layout_constraintBottom_toBottomOf="@+id/q_a_logo"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_40"
            android:textSize="@dimen/sp_13"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black_54"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Tulis Pertanyaan"
            android:background="@drawable/rect_white_rounded_stroke_gray"
            app:layout_constraintTop_toBottomOf="@+id/q_a_logo"/>

    <ImageView
            android:id="@+id/dashed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:src="@drawable/universal_dashed_line"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@+id/ask"
            app:layout_constraintBottom_toTopOf="@id/bubble_logo"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
            android:id="@+id/bubble_logo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/circle_red"
            app:layout_constraintTop_toBottomOf="@+id/dashed"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_54"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@id/q_a_logo"
            tools:text="Atau hubungi langsung penjual"
            app:layout_constraintTop_toTopOf="@+id/bubble_logo"
            app:layout_constraintBottom_toBottomOf="@+id/bubble_logo"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_40"
            android:textSize="@dimen/sp_13"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black_54"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Chat Penjual"
            android:background="@drawable/rect_white_rounded_stroke_gray"
            app:layout_constraintTop_toBottomOf="@+id/bubble_logo"/>

</android.support.constraint.ConstraintLayout>
