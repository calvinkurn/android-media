<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_16"
        >


        <TextView
            android:id="@+id/send_new_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_40"
            android:textSize="@dimen/sp_13"
            android:fontFamily="sans-serif"
            android:background="@drawable/green_button_rounded"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/send"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentBottom="true"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/send_new_talk"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/item_quick_reply" />


        <ScrollView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_above="@id/list_template">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/what_question"
                    android:textColorHint="@color/text_hint"
                    android:minLines="3"
                    android:clickable="false"
                    android:gravity="top"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    />
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</android.support.v7.widget.CardView>
