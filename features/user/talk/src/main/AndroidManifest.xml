<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.talk">

    <application android:label="@string/app_name">
        <activity
            android:name=".inboxtalk.view.activity.InboxTalkActivity"
            android:label="@string/title_product_discussion"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize|stateHidden">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_inbox_talk"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".producttalk.view.activity.TalkProductActivity"
            android:label="@string/title_product_discussion"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:configChanges="keyboardHidden|orientation|screenSize">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_product_talk"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".reporttalk.view.activity.ReportTalkActivity"
            android:label="@string/title_report_talk"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan|stateHidden">
        </activity>

        <activity
            android:name=".talkdetails.view.activity.TalkDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize|stateHidden">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_detail_talk"/>
            </intent-filter>
        </activity>

        <activity android:name=".addtalk.view.activity.AddTalkActivity"
            android:label="@string/write_new_talk"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_add_talk"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".shoptalk.view.activity.ShopTalkActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
    </application>

</manifest>