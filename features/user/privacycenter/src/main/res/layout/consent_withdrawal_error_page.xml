<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/consentErrorPageImage"
        android:layout_width="320dp"
        android:layout_height="210dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/consentErrorPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_center_error_network_title"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consentErrorPageImage"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/consentErrorPageDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_center_error_network_detail"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consentErrorPageTitle"
        app:typographyType="display_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/consentErrorPageBackHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/consent_withdrawal_error_page_back_home"
        app:layout_constraintTop_toBottomOf="@id/consentErrorPageDescription"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/consentErrorPageTryAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/consent_withdrawal_error_page_try_again"
        app:unifyButtonVariant="ghost"
        app:layout_constraintTop_toBottomOf="@id/consentErrorPageBackHome"/>

</androidx.constraintlayout.widget.ConstraintLayout>