<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:layout_gravity="center">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgIllustration"
        android:layout_width="280dp"
        android:layout_height="210dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:text="@string/dsar_add_email_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSuccess"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:id="@+id/txtSuccessDescription"
        app:typographyType="paragraph_2"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typography5"
        android:text="@string/dsar_success_description" />


    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/txtFieldEmail"
        android:layout_marginTop="16dp"
        app:unify_text_field_label="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_marginTop="16dp"
        android:id="@+id/btnAddEmail"
        android:text="@string/dsar_btn_add_email_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>