<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSuccess"
        android:layout_width="280dp"
        android:layout_height="210dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:text="@string/dsar_on_progress_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSuccess"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:id="@+id/txtProgressDescription"
        app:typographyType="paragraph_2"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typography5"
        tools:text="Kami bakal kabari lewat e-mail Nikolas.saputra@gmail.com maks. 20 Des 2023. Silahkan cek secara berkala, ya!" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_marginTop="30dp"
        android:id="@+id/btnBack"
        android:text="@string/dsar_btn_on_progress_back_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifycomponents.UnifyButton
        app:unifyButtonType="alternate"
        app:unifyButtonVariant="ghost"
        android:layout_marginTop="12dp"
        android:id="@+id/btnDetail"
        android:text="@string/dsar_btn_on_progress_details_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>