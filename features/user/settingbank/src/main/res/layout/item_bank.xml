<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RadioButton
        android:id="@+id/bank_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/green_radio_button"
        android:button="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dp_16"
        />


    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@color/grey_300"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:maxLines="2"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/separator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bank_radio"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PT Bank Central Asia (BCA), TBK alskjdlaksjdlakjsldajlsdkjlajskdlakjsldajlaksj"/>


</androidx.constraintlayout.widget.ConstraintLayout>