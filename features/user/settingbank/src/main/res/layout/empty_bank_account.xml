<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_image"
        android:layout_width="@dimen/empty_icon_width"
        android:layout_height="@dimen/empty_icon_height"
        android:layout_gravity="center"

        android:layout_marginTop="@dimen/dp_60"
        tools:src="@drawable/ic_arrow_down"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/sp_8"
        android:text="@string/empty_bank_title"
        android:textColor="@color/font_black_secondary_54"
        android:textSize="@dimen/sp_16"
        android:textStyle="normal"
        />

    <TextView
        android:text="@string/empty_bank_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_8"
        android:lineSpacingExtra="@dimen/sp_5"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        />

    <TextView
        android:id="@+id/add_account_button_empty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_margin="@dimen/dp_24"
        android:background="@drawable/bg_button_green_enabled"
        android:textSize="@dimen/sp_14"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/add_bank_account"
        />
</LinearLayout>