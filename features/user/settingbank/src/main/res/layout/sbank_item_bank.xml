<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBankNameWithAbbreviation"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700_96"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sbank_dp_1"
        android:background="@color/Unify_N75"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvBankNameWithAbbreviation"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>