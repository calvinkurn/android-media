<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_16" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCompanyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/sbank_company_account"
        android:textColor="@color/Neutral_N700_96"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvLiability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sbank_limited_liability"
        android:textColor="@color/Neutral_N700_68"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/tvCompanyAccount"
        app:typographyType="body_3" />

    <View
        android:id="@+id/viewCompanyAccount"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/Neutral_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/tvLiability" />

    <ImageView
        android:id="@+id/ivCompanyAccount"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:rotation="270"
        android:src="@drawable/unify_chips_ic_chevron_normal"
        app:layout_constraintBottom_toTopOf="@+id/viewCompanyAccount"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintTop_toTopOf="parent" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvFamilyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sbank_family_account"
        android:textColor="@color/Neutral_N700_96"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/viewCompanyAccount"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDontHavePersonalAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sbank_dont_have_personal_Account"
        android:textColor="@color/Neutral_N700_68"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/tvFamilyAccount"
        app:typographyType="body_3" />

    <View
        android:id="@+id/viewFamilyAccount"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/Neutral_N75"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/tvDontHavePersonalAccount" />

    <ImageView
        android:id="@+id/ivFamilyAccount"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:rotation="270"
        android:src="@drawable/unify_chips_ic_chevron_normal"
        app:layout_constraintBottom_toBottomOf="@+id/viewFamilyAccount"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintTop_toBottomOf="@+id/viewCompanyAccount" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOtherAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sbank_other_account"
        android:textColor="@color/Neutral_N700_96"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/viewFamilyAccount"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvErrorInInputData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sbank_error_input_data"
        android:textColor="@color/Neutral_N700_68"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/tvOtherAccount"
        app:typographyType="body_3" />

    <View
        android:id="@+id/viewOtherAccount"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_height="@dimen/dp_1"
        android:background="@color/Neutral_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/tvErrorInInputData" />

    <ImageView
        android:id="@+id/ivOtherAccount"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:rotation="270"
        android:src="@drawable/unify_chips_ic_chevron_normal"
        app:layout_constraintBottom_toTopOf="@+id/viewOtherAccount"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintTop_toBottomOf="@+id/viewFamilyAccount" />


    <View
        android:id="@+id/viewCompanyAccountClickable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewCompanyAccount"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewFamilyAccountClickable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewFamilyAccount"
        app:layout_constraintTop_toTopOf="@id/viewCompanyAccount" />

    <View
        android:id="@+id/viewOtherAccountClickable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewOtherAccount"
        app:layout_constraintTop_toTopOf="@id/viewFamilyAccount" />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupOtherAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="viewOtherAccount,viewOtherAccountClickable,ivOtherAccount,tvOtherAccount,tvErrorInInputData"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_16" />
</androidx.constraintlayout.widget.ConstraintLayout>