<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:elevation="@dimen/dp_1"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/main_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_main_account"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/sp_10"
            android:padding="@dimen/dp_5"
            android:textColor="@color/green_250"
            android:textSize="@dimen/sp_11"
            android:textStyle="normal"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/main_account"
            tools:visibility="visible"
            />


        <ImageView
            android:id="@+id/dropdown_menu"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_account"
            app:srcCompat="@drawable/ic_3_dot"
            />


        <ImageView
            android:id="@+id/bank_icon"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_account"
            tools:srcCompat="@drawable/ic_arrow_down"
            />

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="9sp"
            android:maxLines="1"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:layout_constraintLeft_toRightOf="@id/bank_icon"
            app:layout_constraintRight_toLeftOf="@id/dropdown_menu"
            app:layout_constraintTop_toBottomOf="@id/main_account"
            tools:text="PT Bank Central Asia (BCA) yg unyu yg apapun yg penting panjang"/>

        <TextView
            android:id="@+id/account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="@dimen/sp_5"
            android:textColor="@color/font_black_primary_70"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@id/bank_name"
            app:layout_constraintTop_toBottomOf="@id/bank_name"
            tools:text="1829373625"
            />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="7sp"
            android:maxLines="2"
            android:textColor="#8a000000"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/account_number"
            app:layout_constraintTop_toBottomOf="@id/account_number"
            tools:text="Ignatius Gregory Wade Wilson"
            />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>