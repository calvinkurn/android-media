<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:text="@string/add_bank_prompt"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        />

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapper_bank_name"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_32"
        android:clickable="false"
        android:hint="@string/bank_name_title"
        app:layout_constraintTop_toBottomOf="@id/prompt_text">

        <com.tokopedia.design.component.EditTextCompat
            android:id="@+id/bank_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asd"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="@color/font_black_primary_70"
            app:drawableRightCompat="@drawable/ic_arrow_down_grey"/>
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapper_account_number"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_32"
        android:clickable="false"
        android:hint="@string/account_number_title"
        app:layout_constraintTop_toBottomOf="@id/wrapper_bank_name">

        <com.tokopedia.design.component.EditTextCompat
            android:id="@+id/account_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="01234567890"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/font_black_primary_70"/>
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapper_account_name"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_32"
        android:clickable="false"
        android:hint="@string/account_name_title"
        app:layout_constraintTop_toBottomOf="@id/wrapper_account_number">

        <com.tokopedia.design.component.EditTextCompat
            android:id="@+id/account_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColor="@color/font_black_primary_70"/>
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <TextView
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="@color/font_black_disabled_38"
        android:background="@drawable/bg_button_disabled"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/button_next"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toBottomOf="@id/wrapper_account_name"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>