<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="@color/Neutral_N700_96"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2"
        tools:text="TITLE" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:typographyType="body_2"
        tools:text="MESSAGE" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/back_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/description"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/bg_green_border_rect"
        android:gravity="center"
        android:text="Batal"
        android:textColor="@color/green_500"
        app:layout_constraintEnd_toStartOf="@+id/continue_btn"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:typographyType="heading_5" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/continue_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/description"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/sbank_bg_button_green"
        android:enabled="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="Ya, Tambah"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:typographyType="heading_5" />
</androidx.constraintlayout.widget.ConstraintLayout>
