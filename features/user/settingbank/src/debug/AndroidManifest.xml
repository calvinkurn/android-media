<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.settingbank">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".banklist.view.activity.DebugSettingBankActivity"
            android:label="@string/title_setting_bank"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:path="@string/path_setting_bank"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".addeditaccount.view.activity.AddEditBankActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:path="@string/path_add_bank"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".choosebank.view.activity.ChooseBankActivity"
            android:label="@string/title_choose_bank"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

    </application>
</manifest>
