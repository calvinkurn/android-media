<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/fingerprint_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fingerprint_lottie_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_loop="false"
            app:lottie_fileName="fingerprint_animation_success.json"
            android:id="@+id/fingerprint_lottie_success_animation_view"/>

        <com.airbnb.lottie.LottieAnimationView
            android:visibility="invisible"
            app:lottie_loop="false"
            app:lottie_fileName="fingerprint_animation_failed.json"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fingerprint_lottie_error_animation_view"/>
    </FrameLayout>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/fingerprint_progressbar"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/fingerprint_body_text"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f531353b"
        android:gravity="center_horizontal"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="Sentuh sensor sidik jari"
        />
</LinearLayout>