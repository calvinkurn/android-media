<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/dp_16"
    android:id="@+id/fingerprint_onboarding_parent_view"
    tools:context=".view.fragment.RegisterFingerprintOnboardingFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:src="@drawable/login_with_fingerprint_illustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f531353b"
        android:layout_marginTop="16dp"
        android:text="@string/login_fingerprint_aktivasi_heading"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        tools:layout_editor_absoluteX="40dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/login_fingerprint_aktivasi_body"
        android:textColor="#f531353b"
        app:layout_constraintTop_toBottomOf="@+id/typography"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:layout_editor_absoluteX="64dp" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/fingerprint_onboarding_aktivasi_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/login_fingerprint_aktivasi_title"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/fingerprint_onboarding_skip_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:unifyButtonSize="medium" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/fingerprint_onboarding_skip_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_fingerprint_aktivasi_later"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:unifyButtonSize="medium"
        app:unifyButtonVariant="text"
        tools:layout_editor_absoluteX="40dp" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/fingerprint_onboarding_loader"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginBottom="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>