<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.profilecompletion">


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.tokopedia.profilecompletion.addname.AddNameRegisterPhoneActivity"
            android:label=""
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_add_name_register"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".ProfileCompletionActivity"
            android:label="@string/title_profile_completion"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_profile_completion"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".changegender.view.activity.ChangeGenderActivity"
            android:label="@string/title_change_gender"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_change_gender"/>
            </intent-filter>

        </activity>


    </application>

</manifest>
