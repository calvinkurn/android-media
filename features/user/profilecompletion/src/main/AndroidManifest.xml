<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.profilecompletion">


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".settingprofile.view.activity.SettingProfileActivity"
            android:label="@string/title_setting_profile"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_setting_profile"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>

        </activity>

