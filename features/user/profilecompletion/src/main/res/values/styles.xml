        <item name="colorControlActivated">#dc8f41</item>
    </style>

    <style name="CustomUnifyDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.TextInputLayout" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlActivated">@color/green_600</item>
        <item name="colorControlNormal">@color/grey_hint</item>
    </style>
</resources>