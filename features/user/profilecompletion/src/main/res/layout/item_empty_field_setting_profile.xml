<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  
  <com.tokopedia.unifyprinciples.Typography
    android:id="@+id/subtitleEmpty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/Unify_N700_68"
    android:textSize="@dimen/fontSize_lvl3"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
  
  <RelativeLayout
    android:id="@+id/layoutValueEmpty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_lvl2"
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@id/subtitleEmpty"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    
    <EditText
      android:id="@+id/valueEmpty"
      android:layout_width="match_parent"
      android:layout_height="@dimen/layout_lvl3"
      android:background="@drawable/text_box_underline_selector"
      android:clickable="true"
      android:cursorVisible="false"
      android:focusable="false"
      android:textColor="@color/Unify_N700_96"
      android:textColorHint="@color/Unify_N75"
      android:textSize="@dimen/fontSize_lvl4"
      android:visibility="gone" />
    
    <com.tokopedia.iconunify.IconUnify
      android:id="@+id/btnAdd"
      android:layout_width="@dimen/profile_completion_dp_20"
      android:layout_height="@dimen/profile_completion_dp_20"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="@dimen/layout_lvl1"
      android:visibility="gone"
      app:icon_name="EDIT" />
  </RelativeLayout>
  
  <com.tokopedia.unifyprinciples.Typography
    android:id="@+id/message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/Unify_N700_68"
    android:textSize="@dimen/fontSize_lvl2"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/layoutValueEmpty"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>