<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitleEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/fontSize_lvl3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/valueEmpty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl3"
                android:textColor="@color/Unify_N700_96"
                android:textSize="@dimen/fontSize_lvl4"
                android:clickable="true"
                android:cursorVisible="false"
                android:focusable="false"
                android:visibility="gone"
                android:textColorHint="@color/Unify_N75"
                android:background="@drawable/text_box_underline_selector"/>
  
            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/btnAdd"
                android:layout_width="@dimen/profile_completion_dp_20"
                android:layout_height="@dimen/profile_completion_dp_20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/layout_lvl1"
                android:visibility="gone"
                app:icon_name="EDIT"/>
        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSize_lvl2"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>