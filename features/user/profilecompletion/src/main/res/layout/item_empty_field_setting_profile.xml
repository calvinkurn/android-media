<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subtitleEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_subtitle_setting_profile"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/valueEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_subtitle_value_setting_profile"
                android:textSize="16sp"
                android:clickable="true"
                android:cursorVisible="false"
                android:focusable="false"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_change_setting_profile"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/add_setting_profile"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_subtitle_setting_profile"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>