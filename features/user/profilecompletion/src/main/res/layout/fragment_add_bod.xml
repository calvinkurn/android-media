<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4">

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/page_description"
            android:textColor="@color/Unify_N700_68" />

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/chooseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:layout_marginTop="@dimen/spacing_lvl6"
            app:text_field_append_drawable_icon_1="@drawable/ic_down_date"
            app:text_field_label="@string/hint_bod_setting_profile"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl8"
            android:gravity="center"
            android:text="@string/button_save"
            android:textAllCaps="false"
            android:textColor="@color/Unify_N0" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>