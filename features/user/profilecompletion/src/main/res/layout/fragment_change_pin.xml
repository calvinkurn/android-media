<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_lvl4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/changePinTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl7"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:text="@string/change_pin_title_old_pin"
            android:textAlignment="center"
            android:textSize="@dimen/fontSize_lvl4"
            app:typographyWeight="bold"
            app:typographyType="heading_2"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/changePinSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_pin_input_old_pin"
            android:textSize="@dimen/fontSize_lvl3"
            android:textAlignment="center"
            app:typographyType="body_1"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginStart="@dimen/spacing_lvl4"
            app:layout_constraintTop_toBottomOf="@+id/changePinTitle" />

        <com.tokopedia.pin.PinUnify
            android:id="@+id/changePinInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:orientation="horizontal"
            app:pin_count="6"
            app:pin_type="hidden"
            app:has_clear_button="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/changePinSubtitle"/>

        <TextView
            android:id="@+id/changePinForgotBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/change_pin_forgot_btn"
            android:gravity="center_horizontal"
            android:textSize="@dimen/fontSize_lvl3"
            android:textColor="@color/Green_G500"
            android:layout_marginTop="@dimen/spacing_lvl7"
            app:layout_constraintTop_toBottomOf="@+id/changePinInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/changePinProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>