<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/headerPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:contentDescription="photoHeader" />

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="@dimen/spacing_lvl4"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/profilePhoto"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="photoProfile" />

                    <ImageView
                        android:id="@+id/btnEditProfilePhoto"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="@dimen/spacing_lvl2"
                        android:layout_margin="@dimen/spacing_lvl1"
                        app:srcCompat="@drawable/ic_edit_pencil_photo"
                        android:elevation="@dimen/spacing_lvl1"
                        android:background="@drawable/rounded_bg_icon_with_shadow"
                        android:contentDescription="btnEditPhotoProfile" />
                </RelativeLayout>
            </RelativeLayout>
  
            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_default_name_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl2"
                app:descriptionText="@string/text_change_name_warning_message"
                app:closeButtonVisibility="gone"
                app:tickerType="warning"
                app:tickerShapeType="loose"
                app:layout_constraintTop_toBottomOf="@id/headerContainer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/spacing_lvl4"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                app:layout_constraintTop_toBottomOf="@+id/ticker_default_name_warning">

                <com.tokopedia.profilecompletion.settingprofile.view.widget.CustomFieldSettingProfile
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl4"/>

                <com.tokopedia.profilecompletion.settingprofile.view.widget.CustomFieldSettingProfile
                    android:id="@+id/bod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl5"/>

                <com.tokopedia.profilecompletion.settingprofile.view.widget.CustomFieldSettingProfile
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl5"/>

                <com.tokopedia.profilecompletion.settingprofile.view.widget.CustomFieldSettingProfile
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl5"/>

                <com.tokopedia.profilecompletion.settingprofile.view.widget.CustomFieldSettingProfile
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl5"/>

                <com.tokopedia.unifycomponents.ticker.Ticker
                    android:id="@+id/ticker_phone_verification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/spacing_lvl3"
                    app:closeButtonVisibility="gone"
                    android:layout_gravity="center_vertical"
                    app:tickerType="warning"
                    app:tickerShapeType="full"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/overlay_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
    </FrameLayout>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/progressBar"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>