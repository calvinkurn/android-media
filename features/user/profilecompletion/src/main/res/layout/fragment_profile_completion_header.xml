<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_11"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/Unify_N700_32"
            android:lineSpacingExtra="5sp"
            android:text="@string/your_profile_completion"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/txt_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_11"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/Unify_N700_68"
            android:lineSpacingExtra="5sp"
            android:gravity="end"
            tools:text="50%"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5mall_prof_comp" />

    <ProgressBar
        android:id="@+id/progressbar_top"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:maxHeight="10dip"
        android:minHeight="10dip"
        android:progress="50"
        android:progressDrawable="@drawable/profilecompletion_horizontal_progressbar"
        tools:layout_editor_absoluteY="273dp"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>
