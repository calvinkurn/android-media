<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/spacing_lvl4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/spacing_lvl3">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/add_email_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:text="@string/warning_add_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/et_email"
            app:layout_constraintTop_toBottomOf="@id/add_email_warning"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            app:text_field_label="@string/title_email"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl4"
            android:textSize="@dimen/fontSize_lvl4"
            />

        <com.tokopedia.unifyprinciples.Typography
            app:layout_constraintTop_toBottomOf="@id/et_email"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_will_send_email_verification_code"
            android:textSize="@dimen/fontSize_lvl2" />

        <com.tokopedia.unifyprinciples.Typography
            app:layout_constraintTop_toBottomOf="@id/et_email"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/we_will_send_email_verification_code"
            android:textSize="@dimen/fontSize_lvl2"
            android:visibility="gone"
            android:textColor="@color/Unify_R500"/>

        <com.tokopedia.unifycomponents.UnifyButton
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl8"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/button_save"
            android:layout_alignParentBottom="true"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>