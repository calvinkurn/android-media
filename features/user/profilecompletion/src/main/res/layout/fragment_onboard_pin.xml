<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacing_lvl4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/onboardImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="heading_2"
            android:id="@+id/titleOnboard"
            app:typographyWeight="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:textColor="@color/Neutral_N700_96"
            android:text="@string/title_onboard_pin"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/onboardImage" />

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_2"
            android:id="@+id/subtitleOnboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:text="@string/subtitle_onboard_pin"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/titleOnboard" />

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:text="@string/subtitle_onboard_pin_2"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/subtitleOnboard" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:gravity="center"
            android:text="@string/create_pin"
            app:layout_constraintBottom_toTopOf="@+id/btnIgnore" />

        <com.tokopedia.unifycomponents.UnifyButton
            app:unifyButtonVariant="ghost"
            app:unifyButtonType="alternate"
            android:id="@+id/btnIgnore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:gravity="center"
            android:text="@string/ignore_pin"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />
</FrameLayout>