<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changename.view.ChangeNameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/changeNameViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_lvl4">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/changeNameTextNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_name_note"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_1" />

        <com.tokopedia.unifycomponents.TextFieldUnify
            app:text_field_label="@string/change_name_fullname"
            android:id="@+id/changeNameTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:hint="@string/change_name_fullname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/changeNameTextNote"
            app:text_field_input_type="text"/>

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_2"
            android:id="@+id/changeNameTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:text="@string/change_name_visible_on_another_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/changeNameTextName" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/changeNameButtonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl6"
            android:enabled="false"
            android:text="@string/button_save"
            app:layout_constraintTop_toBottomOf="@id/changeNameTextMessage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/changeNameProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>