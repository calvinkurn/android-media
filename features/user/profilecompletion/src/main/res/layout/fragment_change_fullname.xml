<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".changename.view.ChangeNameFragment">
  
  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/changeNameViewMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_16">
    
    <com.tokopedia.unifyprinciples.Typography
      android:id="@+id/changeNameTextNote"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/change_name_note"
      app:typographyType="body_3"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
  
    <com.tokopedia.design.text.TkpdHintTextInputLayout
      android:id="@+id/changeNameWrapperName"
      android:layout_width="match_parent"
      android:hint="@string/change_name_fullname"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_32"
      android:layout_marginBottom="@dimen/dp_3"
      app:layout_constraintTop_toBottomOf="@id/changeNameTextNote"
      app:layout_constraintLeft_toLeftOf="parent"
      style="@style/HintTextInputLayout">
    
      <EditText
        android:id="@+id/changeNameTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black_54"
        android:textColor="@color/black_70"
        android:inputType="textPersonName"
        android:textSize="@dimen/sp_16" />
  
    </com.tokopedia.design.text.TkpdHintTextInputLayout>
  
    <TextView
      android:id="@+id/changeNameTextMessage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/change_name_visible_on_another_user"
      android:textSize="@dimen/sp_14"
      android:textColor="@color/black_38"
      android:layout_marginLeft="@dimen/dp_4"
      android:layout_marginStart="@dimen/dp_4"
      app:layout_constraintTop_toBottomOf="@id/changeNameWrapperName"
      app:layout_constraintLeft_toLeftOf="parent"/>
  
    <com.tokopedia.unifycomponents.UnifyButton
      android:id="@+id/changeNameButtonSave"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/button_save"
      android:enabled="false"
      android:layout_marginTop="@dimen/dp_32"
      app:layout_constraintTop_toBottomOf="@id/changeNameTextMessage"/>
    
  </androidx.constraintlayout.widget.ConstraintLayout>
  
  <ProgressBar
    android:id="@+id/changeNameProgressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_centerInParent="true"/>

</RelativeLayout>