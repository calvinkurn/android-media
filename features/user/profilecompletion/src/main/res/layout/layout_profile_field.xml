<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifycomponents.TextFieldUnify2
        app:unify_text_field_label="@string/change_username"
        app:unify_text_field_message="@string/description_textfield_username"
        app:unify_text_field_prepend_text="\@"
        app:unify_text_field_counter="20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:unify_text_field_append_drawable_icon_1="@drawable/ic_check_input"
        android:id="@+id/et_username"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_field_input_type="text" />

    <com.tokopedia.unifycomponents.TextAreaUnify2
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/et_bio"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unify_text_field_label="@string/label_bio"
        app:unify_text_field_counter="150"/>

</androidx.constraintlayout.widget.ConstraintLayout>