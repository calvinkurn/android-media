<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:textSize="@dimen/fontSize_lvl5"
        android:textStyle="bold"
        android:textColor="@color/Neutral_N700_96"
        android:text="Pilih Tanggal Lahir"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl1"
        android:background="#e5e7e9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_lvl2"
        android:paddingRight="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginBottom="@dimen/spacing_lvl5">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e7e9"/>

        <com.tokopedia.datepicker.DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e7e9"/>

    </LinearLayout>


    <TextView
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:background="@drawable/bg_button_green"
        android:gravity="center"
        android:text="Pilih"
        android:textAllCaps="false"
        android:textColor="@color/color_white"/>
</LinearLayout>