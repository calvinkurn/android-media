<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_title"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:unify_image_corner_radius="0"
        app:layout_constraintCircleRadius="0dp"
        app:layout_constraintDimensionRatio="145:60"
        app:layout_constraintTop_toTopOf="@id/txt_title"
        app:layout_constraintBottom_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="@string/title_profile_management_entry_point"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/img_title"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_profile_management_entry_point"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_title"
        app:typographyType="paragraph_3"/>

    <com.tokopedia.iconunify.IconUnify
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>