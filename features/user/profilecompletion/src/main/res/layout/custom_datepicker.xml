<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_corner"
            android:layout_centerInParent="true" />

    <LinearLayout
            android:id="@+id/pickerContainer"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@android:color/transparent">

        <com.tokopedia.profilecompletion.addbod.view.widget.wheelpicker.NumberPicker
                android:id="@+id/daySpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@android:color/transparent"
                app:np_align="CENTER"
                app:np_fadingEdgeEnabled="false"
                app:np_max="31"
                app:np_min="1"
                app:np_selectedTextColor="@android:color/black"
                app:np_textColor="#7031353b"
                app:np_textSize="14sp"
                app:np_wheelItemCount="5"
                app:np_wrapSelectorWheel="true"
        />

        <com.tokopedia.profilecompletion.addbod.view.widget.wheelpicker.NumberPicker
                android:id="@+id/monthSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@android:color/transparent"
                app:np_align="CENTER"
                app:np_fadingEdgeEnabled="false"
                app:np_max="12"
                app:np_min="1"
                app:np_selectedTextColor="@android:color/black"
                app:np_textColor="#7031353b"
                app:np_textSize="14sp"
                app:np_wheelItemCount="5"
                app:np_wrapSelectorWheel="true"
        />

        <com.tokopedia.profilecompletion.addbod.view.widget.wheelpicker.NumberPicker
                android:id="@+id/yearSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@android:color/transparent"
                app:np_align="CENTER"
                app:np_fadingEdgeEnabled="false"
                app:np_max="2019"
                app:np_min="1919"
                app:np_selectedTextColor="@android:color/black"
                app:np_textColor="#7031353b"
                app:np_textSize="14sp"
                app:np_wheelItemCount="5"
                app:np_wrapSelectorWheel="true"
        />
    </LinearLayout>
</RelativeLayout>