<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/subtitleFilled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_68"
                android:textSize="@dimen/fontSize_lvl3" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/verified"
                android:layout_width="86dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_toEndOf="@id/subtitleFilled"
                android:layout_toRightOf="@id/subtitleFilled"
                android:gravity="center"
                android:visibility="gone"
                app:labelType="general_light_green"
                app:labelTitle="\u2713  Terverifikasi"
                />
        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/valueFilled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/fontSize_lvl4"
            android:visibility="gone"/>
    </LinearLayout>
  
    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/spacing_lvl3"
        android:paddingStart="@dimen/spacing_lvl3"
        android:visibility="gone"
        android:gravity="bottom"
        app:icon_name="EDIT" />
</LinearLayout>