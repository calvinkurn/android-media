<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subtitleFilled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_subtitle_setting_profile"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/verified"
                android:layout_width="86dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@id/subtitleFilled"
                android:layout_toRightOf="@id/subtitleFilled"
                android:src="@drawable/ic_verified_profile_completion"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/valueFilled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_subtitle_value_setting_profile"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_setting_profile"
                android:textColor="@color/color_change_setting_profile"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>