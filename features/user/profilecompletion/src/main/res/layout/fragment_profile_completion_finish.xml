<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/rg_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:srcCompat="@drawable/profilecompletion_akun_terverifikasi"/>

    <androidx.legacy.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/space_slightly_med"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/text_size_8"
        android:text="@string/profile_completion_end_message"
        android:textColor="@color/Unify_N700_44"
        android:textSize="@dimen/text_size_16"
        android:textStyle="normal"
        />

    <androidx.legacy.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/space_med"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/text_size_6"
        android:text="@string/profile_completion_end_subtext"
        android:textColor="@color/Unify_N700_32"
        android:textSize="@dimen/text_size_14"
        android:textStyle="normal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:textColor="@color/Unify_N0"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Lihat Profil Anda"
        />

    <TextView
        android:id="@+id/txt_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Unify_G400"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:text="@string/see_your_profile"
        android:textColor="@color/Unify_N0"
        android:textSize="@dimen/text_size_14"
        android:textStyle="normal"
        />

</LinearLayout>
