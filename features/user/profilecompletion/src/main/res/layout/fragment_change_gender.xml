<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_16"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="vertical"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/choose_gender"
            app:typographyType="heading_1" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/can_only_choose_one_gender"
            app:typographyType="body_1" />

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/ava_man"
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/profile_man_button"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/profile_completion_man"
                android:textColor="@drawable/gender_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal" />

            <androidx.legacy.widget.Space
                android:layout_width="60dp"
                android:layout_height="0dp" />

            <RadioButton
                android:id="@+id/ava_woman"
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/profile_woman_button"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/profile_completion_woman"
                android:textColor="@drawable/gender_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal" />

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </RadioGroup>

    </LinearLayout>

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/button_save"
        android:textColor="@color/black_70"
        app:buttonCompatSize="big"
        app:buttonCompatType="primary_disabled"
        android:layout_alignParentBottom="true"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>