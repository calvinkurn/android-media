<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_lvl4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainView"
        android:padding="@dimen/spacing_lvl3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl7"
            android:text="@string/create_pin"
            android:textAlignment="center"
            app:typographyType="heading_2"
            app:typographyWeight="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_create_pin"
            android:textAlignment="center"
            app:typographyType="body_2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <com.tokopedia.pin.PinUnify
            android:id="@+id/inputPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:orientation="horizontal"
            app:pin_count="6"
            app:pin_type="hidden"
            app:has_clear_button="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/info_bottom_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl6"
            android:text="@string/info_create_pin"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputPin"
            app:typographyType="body_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>