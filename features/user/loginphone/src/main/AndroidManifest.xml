<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.loginphone">


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".chooseaccount.view.general.ChooseAccountActivity"
            android:label=""
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_choose_account"/>
            </intent-filter>

        </activity>

        <activity
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"
            android:label=""
            android:name=".chooseaccount.view.fingerprint.ChooseAccountFingerprintActivity"
            android:theme="@style/Theme.White">

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_global"
                    android:pathPattern="@string/applink_choose_account_fingerprint"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>

        </activity>

    </application>
</manifest>
