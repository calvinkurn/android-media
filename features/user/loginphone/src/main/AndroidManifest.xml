<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.loginphone">


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".checkloginphone.view.activity.CheckLoginPhoneNumberActivity"
            android:label="@string/login"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible"/>

        <activity
            android:name=".choosetokocashaccount.view.activity.ChooseTokocashAccountActivity"
            android:label=""
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_choose_account"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".checkloginphone.view.activity.NotConnectedTokocashActivity"
            android:label=""
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>
</manifest>
