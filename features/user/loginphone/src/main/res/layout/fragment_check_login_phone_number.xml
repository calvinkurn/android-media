<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/main_view"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/white"
                  android:orientation="vertical"
                  android:padding="@dimen/dp_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="@string/login_with_phone_number"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            tools:text="Masuk dengan nomor ponsel"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:paddingTop="@dimen/dp_24"
            android:text="@string/phone_number"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:text="Nomor ponsel"
            />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="phone"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="@string/we_will_send_verification_code"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:text="Kami akan mengirimkan SMS kode verifikasi"
            />

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/red_500"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:text="Nomor ponsel belum terdaftar"
            tools:visibility="invisible"
            />

        <TextView
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/green_button_rounded"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/login"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/change_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:text="@string/change_inactive_number"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            android:visibility="gone"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>