<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_view"
                android:background="@drawable/selectable_background_tokopedia"
                android:orientation="vertical">

    <com.tokopedia.core.customView.RoundedCornerImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/verification_icon"
        android:layout_height="@dimen/verification_icon"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/padding_activity"
        android:layout_marginTop="@dimen/dp_15"
        tools:src="@drawable/addproduct"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:maxLines="1"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        tools:text="Farrah Nurul Fatimah"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        tools:text="pendekar.naga@yahoo.com"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/avatar"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@color/grey_100"/>

</RelativeLayout>