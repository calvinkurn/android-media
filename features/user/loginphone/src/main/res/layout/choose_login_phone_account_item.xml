<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_background_tokopedia"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/verification_icon"
            android:layout_height="@dimen/verification_icon"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:maxLines="1"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_16"
                app:typographyType="body_1"
                app:typographyWeight="bold"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="@dimen/sp_6"
                android:textColor="@color/black_54"
                android:textSize="@dimen/sp_14"
                app:typographyType="body_1"
                app:typographyWeight="reguler"/>

            <LinearLayout
                android:id="@+id/shop_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_shop"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_shop_greyscale" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="6sp"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/sp_14"
                    app:typographyType="body_1"
                    app:typographyWeight="reguler"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>