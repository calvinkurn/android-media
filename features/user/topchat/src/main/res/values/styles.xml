<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SwitchCompatStyle">
        <item name="thumbTint">@color/switch_template</item>
        <item name="trackTint">@color/grey_300</item>
    </style>

    <style name="AttachProductToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AttachProductToolbarTitle.SansSerif" parent="ToolbarText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="AttachProductToolbarSubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AttachProductToolbarSubTitle.SansSerif" parent="ToolbarSubtitleText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_38</item>
    </style>

    <style name="ChatSettingsToolbarText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Tabs.ChatTabs">
        <item name="footerIndicatorHeight">1dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="footerColor">@color/tkpd_main_green</item>
        <item name="android:textColor">@color/tkpd_main_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_filter_message</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomFilterDialogTheme" parent="BaseBottomSheetDialog"/>

</resources>