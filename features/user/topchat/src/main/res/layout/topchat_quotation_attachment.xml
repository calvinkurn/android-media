<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_product_attach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:minWidth="270dp"
        android:paddingStart="@dimen/spacing_lvl3"
        android:paddingTop="@dimen/spacing_lvl3"
        tools:ignore="RtlSymmetry">

        <com.tokopedia.design.image.SquareImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="@dimen/spacing_lvl8"
            android:layout_height="@dimen/spacing_lvl8"
            android:adjustViewBounds="true"
            android:gravity="center"
            app:srcCompat="@drawable/ic_loading_toped" />

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_topchat_10"
            android:layout_toEndOf="@id/ivThumbnail"
            android:maxWidth="172dp">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvQuotationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/dp_topchat_19"
                android:ellipsize="end"
                android:maxWidth="172dp"
                android:maxLines="1"
                android:textColor="@color/Unify_N700"
                app:typographyType="heading_5"
                app:typographyWeight="bold"
                tools:text="Nama Produk YANG PANJAAAANG ASLKDAJLSKDJALSKJD" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvQuotationPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvQuotationName"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:textColor="@color/Unify_Y500"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Rp 2.099.000" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_product_attach"
        android:layout_alignEnd="@+id/main_product_attach"
        android:layout_marginEnd="@dimen/dp_topchat_12"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_lvl3">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_topchat_88"
            android:minWidth="@dimen/dp_topchat_80"
            android:text="@string/action_pay"
            android:textAllCaps="false"
            app:unifyButtonSize="small"
            app:unifyButtonType="transaction" />
    </LinearLayout>

</RelativeLayout>