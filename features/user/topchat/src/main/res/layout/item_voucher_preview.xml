<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_topchat_270"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/unify_space_4"
    android:orientation="vertical">

    <com.tokopedia.merchantvoucher.common.widget.MerchantVoucherView
        android:id="@+id/voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="@dimen/spacing_lvl3"
        app:vchElevation="@dimen/spacing_lvl3" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_topchat_30"
        android:layout_height="@dimen/dp_topchat_28"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_topchat_6"
        android:layout_marginEnd="@dimen/dp_topchat_10"
        android:contentDescription="@string/content_desc_close_voucher_btn"
        android:paddingStart="@dimen/dp_topchat_6"
        android:paddingTop="@dimen/dp_topchat_10"
        android:paddingEnd="@dimen/dp_topchat_14"
        android:paddingBottom="@dimen/dp_topchat_6"
        app:srcCompat="@drawable/topchat_ic_close_white" />
</FrameLayout>