<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:orientation="horizontal"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_broadcast_campaign_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_4"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="@tools:sample/lorem/random" />

    <com.tokopedia.unifycomponents.timer.TimerUnifySingle
        android:id="@+id/tu_bc_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="@+id/tv_status"
        app:layout_constraintStart_toEndOf="@+id/tv_end_date"
        app:layout_constraintTop_toTopOf="@+id/tv_status"
        app:timer_unify_single_showClockIcon="true"
        app:timer_unify_single_textWidth="wrap"
        app:timer_unify_single_type="auto" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iu_broadcast_start_date"
        android:layout_width="@dimen/unify_space_16"
        android:layout_height="@dimen/unify_space_16"
        android:layout_gravity="center_vertical"
        app:icon_color_light_enable="@color/Unify_Background"
        app:icon_name="CLOCK" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_broadcast_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_topchat_3"
        android:textColor="@color/Unify_Background"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="17 Feb 2021" />
</merge>