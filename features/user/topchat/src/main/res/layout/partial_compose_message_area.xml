<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingEnd="@dimen/unify_space_12"
    tools:paddingStart="@dimen/spacing_lvl4"
    tools:paddingTop="@dimen/unify_space_8"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_reply_preview_compose_area"
        android:paddingBottom="@dimen/dp_topchat_27"
        app:layout_constraintBottom_toTopOf="@+id/view_border_radius"
        app:layout_constraintEnd_toEndOf="@+id/view_border_radius"
        app:layout_constraintStart_toStartOf="@+id/view_border_radius">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_reply_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_topchat_15"
            android:layout_marginTop="@dimen/dp_topchat_10"
            android:text="Official Store"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_6" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_reply_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_topchat_15"
            android:text="Tampilan sisi penerima"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tp_reply_from"
            app:typographyType="body_3" />

        <ImageView
            android:layout_width="@dimen/dp_topchat_41"
            android:layout_height="@dimen/dp_topchat_35"
            android:paddingVertical="@dimen/unify_space_12"
            android:paddingHorizontal="@dimen/dp_topchat_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/topchat_ic_close" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_border_radius"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/unify_space_2"
        android:layout_marginTop="@dimen/dp_topchat_20"
        app:layout_constraintEnd_toEndOf="@+id/new_comment"
        app:layout_constraintStart_toStartOf="@+id/new_comment"
        app:layout_constraintTop_toTopOf="@+id/new_comment" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/send_but"
        android:layout_width="@dimen/spacing_lvl7"
        android:layout_height="@dimen/spacing_lvl7"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:background="@drawable/bg_topchat_send_btn_disabled"
        android:paddingStart="@dimen/dp_topchat_10"
        android:paddingTop="@dimen/dp_topchat_10"
        android:paddingEnd="@dimen/dp_topchat_9"
        android:paddingBottom="@dimen/dp_topchat_10"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="SEND_TEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/new_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_topchat_6"
        android:layout_marginBottom="@dimen/dp_topchat_14"
        android:hint="@string/chat_edit_text"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minHeight="@dimen/dp_topchat_40"
        android:paddingStart="@dimen/spacing_lvl7"
        android:paddingTop="@dimen/dp_topchat_10"
        android:paddingEnd="@dimen/spacing_lvl8"
        android:paddingBottom="@dimen/dp_topchat_10"
        android:textColor="@color/Unify_N700_96"
        android:textColorHint="@color/Unify_N700_32"
        android:textSize="@dimen/fontSize_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/send_but"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@tools:sample/lorem/random" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_chat_sticker"
        android:layout_width="@dimen/spacing_lvl7"
        android:layout_height="@dimen/spacing_lvl7"
        android:layout_marginBottom="@dimen/dp_topchat_1"
        android:padding="@dimen/spacing_lvl3"
        app:icon_color_light_enable="@color/topchat_dms_icon_compose"
        app:icon_name="STICKER"
        app:layout_constraintBottom_toBottomOf="@+id/new_comment"
        app:layout_constraintStart_toStartOf="@+id/new_comment" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_chat_menu"
        android:layout_width="@dimen/spacing_lvl7"
        android:layout_height="@dimen/spacing_lvl7"
        android:layout_marginEnd="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/dp_topchat_1"
        android:padding="@dimen/spacing_lvl3"
        app:icon_color_light_enable="@color/topchat_dms_icon_compose"
        app:icon_name="ADD_CIRCLE"
        app:layout_constraintBottom_toBottomOf="@+id/new_comment"
        app:layout_constraintEnd_toEndOf="@+id/new_comment" />
</merge>