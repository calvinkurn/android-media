<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_reply_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_2"
        android:paddingBottom="@dimen/dp_topchat_27"
        app:layout_constraintBottom_toTopOf="@+id/view_border_radius"
        app:layout_constraintEnd_toEndOf="@+id/view_border_radius"
        app:layout_constraintStart_toStartOf="@+id/view_border_radius"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/bg_chat_reply_preview_left_bubble">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_reply_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_topchat_15"
            android:layout_marginTop="@dimen/dp_topchat_10"
            android:text="Official Store"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_6" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_reply_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_topchat_15"
            android:text="Tampilan sisi penerima"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tp_reply_from"
            app:typographyType="body_3" />

        <ImageView
            android:layout_width="@dimen/dp_topchat_41"
            android:layout_height="@dimen/dp_topchat_35"
            android:paddingHorizontal="@dimen/dp_topchat_14"
            android:paddingVertical="@dimen/unify_space_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/topchat_ic_close" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_border_radius"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/unify_space_2"
        android:layout_marginTop="@dimen/dp_topchat_20"
        app:layout_constraintEnd_toEndOf="@+id/fxChat"
        app:layout_constraintStart_toStartOf="@+id/fxChat"
        app:layout_constraintTop_toTopOf="@+id/fxChat" />

    <com.tokopedia.topchat.chatroom.view.custom.FlexBoxChatLayout
        android:id="@+id/fxChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/dp_topchat_10"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/dp_topchat_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</merge>