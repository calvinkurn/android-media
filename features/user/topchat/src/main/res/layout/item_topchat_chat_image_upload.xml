<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="3dp"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="3dp">

    <LinearLayout
        android:id="@+id/llChatHeaderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/item_chatcommon_chat_header" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_group_chat_message"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/llChatHeaderContainer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/llReadStatusContainer"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_topchat_image_upload_gradient"
                android:gravity="end|bottom"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_lvl2"
                android:paddingEnd="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"
                android:paddingBottom="10dp"
                tools:ignore="RtlSymmetry">

                <include layout="@layout/item_chatcommon_chat_read_status_attachment" />

            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/left_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card_group_chat_message"
        android:layout_alignBottom="@+id/card_group_chat_message"
        android:layout_toStartOf="@+id/card_group_chat_message"
        android:layout_toLeftOf="@+id/card_group_chat_message"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_error_to_send" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dp_24"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card_group_chat_message"
        android:layout_alignBottom="@+id/card_group_chat_message"
        android:layout_toStartOf="@+id/card_group_chat_message"
        android:layout_toLeftOf="@+id/card_group_chat_message"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="visible"
        tools:visibility="gone" />


