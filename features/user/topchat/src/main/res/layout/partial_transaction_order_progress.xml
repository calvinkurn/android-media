<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_transaction_progress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout"
    tools:visibility="visible">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/chatcommon_1dp"
        android:background="@color/Neutral_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_topchat_12"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingEnd="@dimen/dp_topchat_12"
        android:paddingBottom="@dimen/spacing_lvl3">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/topchat_charcoal_grey_68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:text="Pesanan Menunggu Konfirmasi"
            tools:text="Pesanan Menunggu Konfirmasi" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_topchat_4"
        android:layout_gravity="top"
        android:background="@drawable/bg_shadow_transaction_order_progres" />
</merge>