<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topchat_voucher_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical">

    <include layout="@layout/item_chatcommon_chat_header" />

    <com.tokopedia.merchantvoucher.common.widget.MerchantVoucherView
        android:id="@+id/merchantVoucherView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:maxWidth="270dp"
        android:paddingLeft="@dimen/dp_3"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_3" />

    <LinearLayout
        android:id="@+id/llReadStatusContainer"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginEnd="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:background="@drawable/bg_topchat_chat_right_voucher"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="@dimen/spacing_lvl2"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        tools:ignore="RtlSymmetry">

        <include layout="@layout/item_chatcommon_chat_read_status_attachment" />

    </LinearLayout>

</LinearLayout>