<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topchat_voucher_container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_12"
        android:layout_gravity="center"
        tools:text="13:16 wib" />

    <com.tokopedia.merchantvoucher.common.widget.MerchantVoucherView
        android:id="@+id/merchantVoucherView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:maxWidth="270dp"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <ImageView
            android:id="@+id/chat_status"
            android:layout_width="11dp"
            android:layout_height="6dp"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:adjustViewBounds="true"
            android:layout_alignTop="@+id/hour"
            android:layout_alignBottom="@+id/hour"
            tools:src="@drawable/ic_read_thin"/>
        <TextView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/time_color"
            android:textSize="@dimen/sp_10"
            android:layout_toRightOf="@id/chat_status"
            tools:text="testtest" />
    </RelativeLayout>

</LinearLayout>