<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/small_space"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/small_space"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:textAllCaps="true"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/fontvs"
        tools:text="13:16 wib"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_group_chat_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/date"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/dp_0"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/dual_image_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"      
            tools:src="@drawable/drag_edit"
            android:scaleType="fitCenter"
            />
        <ImageView
            android:id="@+id/dual_image_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            tools:src="@drawable/drag_edit"
            android:scaleType="fitCenter"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_group_chat_message"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toRightOf="@id/user_ava"
        android:gravity="left"
        android:textColor="@color/time_color"
        android:textSize="@dimen/fontvvs"
        tools:text="testtest"
        />
</RelativeLayout>