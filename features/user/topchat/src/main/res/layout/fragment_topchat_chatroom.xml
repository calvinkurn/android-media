<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/rv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:descendantFocusability="beforeDescendants"
        android:scrollbars="vertical">

        <com.tokopedia.topchat.chatroom.view.customview.BackgroundImageView
            android:id="@+id/iv_bg_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:descendantFocusability="beforeDescendants"
            android:scrollbars="vertical" />

        <com.tokopedia.unifycomponents.floatingbutton.FloatingButtonUnify
            android:id="@+id/fb_new_unread_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:visibility="gone"
            app:fbType="group"
            tools:visibility="visible" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.tokopedia.topchat.chatroom.view.custom.TransactionOrderProgressLayout
        android:id="@+id/ll_transaction_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/notifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N700"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/dp_topchat_10"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/dp_topchat_10"
        android:visibility="gone"
        tools:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_topchat_85"
            android:layout_marginRight="@dimen/dp_topchat_85"
            android:layout_weight="1"
            android:textColor="@color/Unify_N0"
            app:typographyType="body_3"
            tools:text="@string/error_no_connection_retrying" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/action"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:textColor="@color/Unify_N0"
            app:loader_type="circular_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/chat_blocked_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl5"
            android:visibility="gone"
            tools:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/blocked_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/desc_chat_blocked"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/enable_chat_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blocked_text"
                android:gravity="center_horizontal"
                android:text="@string/enable_chat_settings"
                android:textColor="@color/Unify_G500"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/add_comment_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingStart="@dimen/spacing_lvl4"
                android:paddingTop="@dimen/dp_topchat_12"
                android:paddingEnd="@dimen/spacing_lvl4"
                android:visibility="gone"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:layout_marginBottom="@dimen/spacing_lvl3"
                tools:listitem="@layout/item_template_chat_layout"
                tools:orientation="horizontal"
                tools:scrollbars="horizontal"
                tools:visibility="visible" />

            <include layout="@layout/layout_product_preview" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reply_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_lvl4"
                android:paddingTop="@dimen/dp_topchat_12"
                android:paddingEnd="@dimen/spacing_lvl4">

                <ImageView
                    android:id="@+id/send_but"
                    android:layout_width="@dimen/spacing_lvl7"
                    android:layout_height="@dimen/spacing_lvl7"
                    android:layout_marginBottom="@dimen/spacing_lvl4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_chat_common_send_grey" />

                <EditText
                    android:id="@+id/new_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_lvl3"
                    android:layout_marginBottom="@dimen/dp_topchat_14"
                    android:hint="@string/chat_edit_text"
                    android:textColorHint="@color/Unify_N700_32"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:minHeight="@dimen/dp_topchat_40"
                    android:paddingStart="@dimen/spacing_lvl7"
                    android:paddingTop="@dimen/dp_topchat_10"
                    android:paddingEnd="@dimen/spacing_lvl8"
                    android:paddingBottom="@dimen/dp_topchat_10"
                    android:textSize="@dimen/fontSize_lvl4"
                    android:textColor="@color/Unify_N700_96"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/send_but"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="@tools:sample/lorem/random" />

                <ImageView
                    android:id="@+id/iv_chat_sticker"
                    android:layout_width="@dimen/spacing_lvl7"
                    android:layout_height="@dimen/spacing_lvl7"
                    android:layout_marginBottom="@dimen/dp_topchat_1"
                    android:padding="@dimen/spacing_lvl3"
                    app:layout_constraintBottom_toBottomOf="@+id/new_comment"
                    app:layout_constraintStart_toStartOf="@+id/new_comment"
                    app:srcCompat="@drawable/ic_topchat_sticker" />

                <ImageView
                    android:id="@+id/iv_chat_menu"
                    android:layout_width="@dimen/spacing_lvl7"
                    android:layout_height="@dimen/spacing_lvl7"
                    android:layout_marginEnd="@dimen/spacing_lvl1"
                    android:layout_marginBottom="@dimen/dp_topchat_1"
                    android:padding="@dimen/spacing_lvl3"
                    app:layout_constraintBottom_toBottomOf="@+id/new_comment"
                    app:layout_constraintEnd_toEndOf="@+id/new_comment"
                    app:srcCompat="@drawable/ic_add_grey_chat_common" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.tokopedia.topchat.chatroom.view.custom.ChatMenuView
                android:id="@+id/fl_chat_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>