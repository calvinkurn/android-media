<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:descendantFocusability="beforeDescendants"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/ll_transaction_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/chatcommon_1dp"
                android:background="@color/Neutral_N75"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="top"
            android:background="@drawable/bg_shadow_transaction_order_progres" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/topchat_header_chat"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_topchat_56"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_lvl4"
        android:visibility="gone"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            tools:text="Terjadi gangguan pada koneksi. mencoba menghubungkan..." />

        <ProgressBar
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/chat_blocked_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/dp_topchat_5"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:background="@drawable/border_green_white_box"
            android:padding="@dimen/spacing_lvl3"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/blocked_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chat_blocked_text"
                android:textColor="@color/black_70"
                android:textSize="@dimen/fontSize_lvl2" />

            <TextView
                android:id="@+id/enable_chat_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blocked_text"
                android:text="@string/enable_chat_settings"
                android:textColor="@color/tkpd_main_green"
                android:textSize="@dimen/fontSize_lvl2" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/add_comment_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingStart="@dimen/spacing_lvl4"
                android:paddingTop="@dimen/dp_topchat_12"
                android:paddingEnd="@dimen/spacing_lvl4"
                android:visibility="gone"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:orientation="horizontal"
                tools:scrollbars="horizontal"
                tools:visibility="visible" />

            <include layout="@layout/layout_product_preview" />

            <RelativeLayout
                android:id="@+id/reply_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_lvl4"
                android:paddingTop="@dimen/dp_topchat_12"
                android:paddingEnd="@dimen/spacing_lvl4"
                android:paddingBottom="@dimen/spacing_lvl4">

                <ImageView
                    android:id="@+id/send_but"
                    android:layout_width="@dimen/spacing_lvl7"
                    android:layout_height="@dimen/spacing_lvl7"
                    android:layout_alignBottom="@+id/new_comment"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_send_grey_chat_common" />

                <EditText
                    android:id="@+id/new_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginEnd="@dimen/spacing_lvl3"
                    android:layout_marginRight="@dimen/spacing_lvl3"
                    android:layout_toStartOf="@+id/send_but"
                    android:layout_toLeftOf="@+id/send_but"
                    android:background="@drawable/bg_rounded_chat_input"
                    android:hint="@string/chat_edit_text"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:paddingStart="@dimen/dp_topchat_12"
                    android:paddingLeft="@dimen/dp_topchat_12"
                    android:paddingTop="@dimen/dp_topchat_10"
                    android:paddingEnd="@dimen/spacing_lvl8"
                    android:paddingRight="@dimen/spacing_lvl8"
                    android:paddingBottom="@dimen/dp_topchat_10"
                    android:textSize="@dimen/fontSize_lvl4"
                    tools:text="@tools:sample/lorem/random" />

                <FrameLayout
                    android:layout_width="@dimen/spacing_lvl7"
                    android:layout_height="@dimen/spacing_lvl7"
                    android:layout_alignEnd="@+id/new_comment"
                    android:layout_alignRight="@+id/new_comment"
                    android:layout_alignBottom="@+id/new_comment"
                    android:layout_marginEnd="@dimen/spacing_lvl3"
                    android:layout_marginRight="@dimen/spacing_lvl3"
                    android:background="@drawable/bg_oval_transparent">

                    <ImageView
                        android:id="@+id/iv_chat_menu"
                        android:layout_width="@dimen/spacing_lvl7"
                        android:layout_height="@dimen/spacing_lvl7"
                        android:padding="@dimen/spacing_lvl3"
                        app:srcCompat="@drawable/ic_add_grey_chat_common" />
                </FrameLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/rv_attachment_menu_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_lvl3"
                    android:layout_gravity="top"
                    android:background="@drawable/bg_shadow_attachment_menu_chat_common" />

                <com.tokopedia.chat_common.view.widget.AttachmentMenuRecyclerView
                    android:id="@+id/rv_attachment_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingTop="@dimen/spacing_lvl5"
                    android:paddingBottom="@dimen/spacing_lvl5"
                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:spanCount="2" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>