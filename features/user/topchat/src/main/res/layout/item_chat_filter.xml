<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_filter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_topchat_56"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_lvl4"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_chat_setting"
        android:layout_width="@dimen/unify_space_48"
        android:layout_height="@dimen/unify_space_48"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:padding="@dimen/unify_space_12"
        app:icon_name="SETTING" />
</merge>