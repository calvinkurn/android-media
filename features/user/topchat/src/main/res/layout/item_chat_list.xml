<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_72"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_12"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_12"
    android:background="@drawable/interactive_adapter_template_chat">

    <com.tokopedia.design.image.SquareImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/red_400" />

    <Space
        android:id="@+id/space"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="@id/thumbnail"
        app:layout_constraintStart_toEndOf="@id/thumbnail"
        app:layout_constraintTop_toTopOf="@id/thumbnail" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/user_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toTopOf="@id/thumbnail"
        app:layout_constraintHorizontal_bias="0"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Steven Fredian" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/message"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700_68"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintBottom_toBottomOf="@id/thumbnail"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintEnd_toStartOf="@+id/space2"
        app:layout_constraintHorizontal_bias="0"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="lorem ipsum dolor sit amet" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/user_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_2"
        android:gravity="center_vertical"
        android:text="@string/title_official"
        android:visibility="gone"
        app:labelType="general_light_blue"
        app:layout_constraintBottom_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toEndOf="@id/user_name"
        app:layout_constraintEnd_toStartOf="@+id/space2"
        app:layout_constraintTop_toTopOf="@+id/user_name"
        app:layout_constraintHorizontal_bias="0"
        tools:visibility="visible" />

    <Space
        android:id="@+id/space2"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="@id/thumbnail"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintTop_toTopOf="@id/thumbnail" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:15"
        android:textColor="@color/Neutral_N700_44"
        app:layout_constraintBottom_toBottomOf="@id/user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_name"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/unread_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:15"
        android:textColor="@color/Neutral_N700_44"
        app:layout_constraintBottom_toBottomOf="@id/message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/message"
        app:typographyType="body_3" />


</android.support.constraint.ConstraintLayout>