<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="android.widget.FrameLayout">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_gravity="top"
        android:background="@drawable/bg_shadow_attachment_menu_chat_common" />

    <com.tokopedia.topchat.chatroom.view.custom.ChatMenuAttachmentView
        android:id="@+id/rv_topchat_attachment_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingTop="@dimen/spacing_lvl5"
        android:paddingBottom="@dimen/spacing_lvl5"
        android:visibility="gone"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:spanCount="2"
        tools:visibility="visible" />

    <com.tokopedia.topchat.chatroom.view.custom.ChatMenuStickerView
        android:id="@+id/ll_sticker_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_topchat_192"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible" />

</merge>