<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.design.text.SearchInputView
            android:id="@+id/simpleSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Search here" />

        <FrameLayout
            android:id="@+id/base_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simpleSearchView"
            android:orientation="horizontal"
            android:paddingStart="@dimen/spacing_lvl4"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingTop="@dimen/spacing_lvl3"
            android:paddingEnd="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4"
            android:paddingBottom="@dimen/spacing_lvl3">

            <TextView
                android:id="@+id/tv_organize_action"
                style="@style/TextView.Small.Green"
                android:text="@string/option_organize_chat" />

            <TextView
                android:id="@+id/tv_bm_action"
                style="@style/TextView.Small.Green"
                android:layout_gravity="end"
                android:background="@android:color/white"
                android:drawablePadding="@dimen/spacing_lvl2"
                android:text="@string/option_broadcast"
                android:visibility="gone" />

        </FrameLayout>

        <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/base_action">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chat_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:scrollbars="vertical" />
        </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

        <LinearLayout
            android:id="@+id/loading_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/simpleSearchView"
            android:alpha="0.8"
            android:background="#000000"
            tools:visibility="gone">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333333"
            android:gravity="center_vertical"
            android:minHeight="56dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                tools:text="JJJJ" />

            <ProgressBar
                android:id="@+id/action"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="@string/title_try_again"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:srcCompat="@drawable/ic_close" />

        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_lvl4"
        android:background="@color/tkpd_main_green"
        android:visibility="gone"
        app:backgroundTint="@color/green_500"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/ic_filter_button" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>