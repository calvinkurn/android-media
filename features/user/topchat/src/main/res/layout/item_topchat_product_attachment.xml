<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/item_chatcommon_chat_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_topchat_12"
        android:layout_marginEnd="@dimen/dp_topchat_12"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        android:background="@drawable/bg_shadow_attach_product"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_topchat_12"
        android:paddingLeft="@dimen/dp_topchat_12"
        android:paddingTop="@dimen/dp_topchat_12"
        android:paddingEnd="@dimen/dp_topchat_12"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/dp_topchat_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="@dimen/dp_topchat_96"
                android:layout_height="@dimen/dp_topchat_96"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[0]" />


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_topchat_12"
                android:layout_marginLeft="@dimen/dp_topchat_12"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/light_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3"
                tools:text="1 Line Product Name" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/tv_campaign_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_topchat_12"
                android:layout_marginLeft="@dimen/dp_topchat_12"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                android:layout_marginRight="@dimen/spacing_lvl3"
                android:maxLines="1"
                android:paddingStart="@dimen/spacing_lvl3"
                android:paddingEnd="@dimen/spacing_lvl3"
                android:textStyle="bold"
                android:visibility="gone"
                app:labelType="general_light_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
                app:lineHeight="@dimen/dp_20"
                tools:text="20%"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_campaign_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:maxLines="1"
                android:textColor="@color/light_N700_44"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_campaign_discount"
                app:layout_constraintStart_toEndOf="@+id/tv_campaign_discount"
                app:layout_constraintTop_toTopOf="@+id/tv_campaign_discount"
                app:typographyType="small"
                tools:text="Rp8.499.000"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_topchat_12"
                android:layout_marginLeft="@dimen/dp_topchat_12"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:maxLines="1"
                android:textColor="@color/light_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
                app:layout_constraintTop_toBottomOf="@+id/tv_campaign_discount"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Rp7.999.000" />

            <ImageView
                android:id="@+id/iv_free_shipping"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_topchat_20"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:scaleType="fitStart"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/tv_price"
                app:layout_constraintTop_toBottomOf="@+id/tv_price"
                tools:src="@drawable/ic_close_default"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/tv_atc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:text="@string/action_atc"
                android:textColor="@color/Green_G500"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/tv_buy"
                app:layout_constraintHorizontal_weight=".4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unifyButtonSize="small"
                app:unifyButtonType="transaction"
                app:unifyButtonVariant="ghost"
                tools:visibility="visible" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/tv_buy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:text="@string/action_buy"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/tv_atc"
                app:layout_constraintTop_toTopOf="parent"
                app:unifyButtonSize="small"
                app:unifyButtonType="transaction"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_topchat_12"
                android:layout_marginLeft="@dimen/dp_topchat_12"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:gravity="end"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_buy">

                <include layout="@layout/item_chatcommon_chat_read_status_attachment" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>