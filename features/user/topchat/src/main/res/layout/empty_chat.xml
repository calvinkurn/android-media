<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/interactive_adapter_template_chat"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/dp_topchat_12"
    android:paddingRight="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/dp_topchat_12">

    <com.tokopedia.design.image.SquareImageView
        android:id="@+id/thumbnail_empty_chat_list"
        android:layout_width="@dimen/dp_topchat_160"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/empty_chat" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_empty_chat_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginEnd="@dimen/spacing_lvl5"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_lvl5"
        android:paddingEnd="@dimen/spacing_lvl5"
        android:text="@string/title_topchat_empty_chat"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thumbnail_empty_chat_list"
        app:typographyType="heading_2"
        app:typographyWeight="reguler" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl5"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_lvl5"
        android:paddingEnd="@dimen/spacing_lvl5"
        android:text="@string/seller_empty_chat_subtitle"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_empty_chat_list"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnCta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:minWidth="@dimen/dp_topchat_180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        tools:text="@string/title_topchat_manage_product" />


</androidx.constraintlayout.widget.ConstraintLayout>