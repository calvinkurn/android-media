<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/interactive_adapter_template_chat"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/edit"
        android:layout_toLeftOf="@+id/edit"
        android:ellipsize="end"
        android:lineSpacingExtra="1sp"
        android:maxLines="2"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl5"
        android:paddingBottom="@dimen/spacing_lvl5"
        android:scrollbars="horizontal"
        android:textColor="@color/Unify_N700_68"
        android:textSize="@dimen/fontSize_lvl3"
        tools:text="Hai barang ini ready ga?Hai barang ini ready ga?Hai barang ini ready ga?Hai barang ini ready ga?Hai barang ini ready ga?" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl5"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl5"
        app:srcCompat="@drawable/ic_drag" />


    <ImageView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/setting"
        android:layout_toLeftOf="@+id/setting"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl5"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl5"
        app:srcCompat="@drawable/ic_edit_topchat" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/edit"
        android:layout_toRightOf="@+id/edit"
        android:background="@color/Unify_N100" />


    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/caption"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:background="@color/Unify_N100" />

</RelativeLayout>