<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:elevation="@dimen/dp_4"
        android:elevation="@dimen/dp_4"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:subtitleTextAppearance="?subtitleTextAppearance"
        app:titleTextAppearance="?titleTextAppearance" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24">

            <ImageView
                android:id="@+id/chat_promotion_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:src="@drawable/chat_img"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/chat_promotion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/black_70"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/chat_promotion_img"
                android:text="@string/chat_promotion_text" />

            <Switch
                android:id="@+id/chat_promotion_switch"
                style="@style/Switch"
                android:padding="@dimen/dp_4"
                app:layout_constraintRight_toRightOf="parent" />


            <TextView
                android:id="@+id/chat_information_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_8"
                android:lineSpacingExtra="6sp"
                android:textColor="#85000000"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/chat_promotion_text"
                app:layout_constraintRight_toLeftOf="@+id/chat_promotion_switch"
                app:layout_constraintTop_toBottomOf="@+id/chat_promotion_text"
                android:text="@string/chat_information_text" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/chat_promotion_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/chat_info_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/chat_information_text">

                <ImageView
                    android:id="@+id/chat_promotion_info_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:src="@drawable/ic_chat_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/chat_promotion_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/chat_promotion_info_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/chat_promotion_blocked_validity" />
            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/chat_personal_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@color/white">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24">

            <ImageView
                android:id="@+id/chat_personal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:src="@drawable/chat_img"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/chat_personal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/black_70"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/chat_personal_img"
                android:text="@string/chat_personal_text" />

            <Switch
                android:id="@+id/chat_personal_switch"
                style="@style/Switch"
                android:padding="@dimen/dp_4"
                app:layout_constraintRight_toRightOf="parent" />


            <TextView
                android:id="@+id/chat_personal_information_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_8"
                android:lineSpacingExtra="6sp"
                android:textColor="#85000000"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/chat_personal_text"
                app:layout_constraintRight_toLeftOf="@+id/chat_personal_switch"
                app:layout_constraintTop_toBottomOf="@+id/chat_personal_text"
                android:text="@string/chat_personal_info_text" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/chat_personal_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/chat_info_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/chat_personal_information_text">

                <ImageView
                    android:id="@+id/chat_personal_info_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:src="@drawable/ic_chat_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/chat_personal_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/chat_personal_info_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/chat_personal_blocked_validity" />
            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>