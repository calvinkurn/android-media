<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.FrameLayout">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="left|top"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@color/Neutral_N700_96"
        android:textIsSelectable="true"
        app:typographyType="body_1"
        tools:ignore="RtlHardcoded"
        tools:text="Mau cari susu yang bisa buat keker dlm satu malam ada gak ya gan?" />

    <LinearLayout
        android:id="@+id/llStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCheckMark"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/spacing_lvl1"
            android:layout_marginRight="@dimen/spacing_lvl1"
            tools:srcCompat="@drawable/ic_chat_read" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/topchat_chat_hour_time"
            app:typographyType="body_3"
            tools:text="11:00" />
    </LinearLayout>
</merge>