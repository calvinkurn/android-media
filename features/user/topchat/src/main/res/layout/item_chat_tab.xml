<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:src="@drawable/circle_red"
        android:visibility="visible"
        tools:src="@drawable/ic_chat_icon_account" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/sp_topchat_4"
        android:maxLines="1"
        android:textColor="@color/Unify_N300"
        android:textSize="@dimen/fontSize_lvl3"
        android:textStyle="bold"
        tools:text="Update (99+)" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="@dimen/spacing_lvl3"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:src="@drawable/circle_red"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>