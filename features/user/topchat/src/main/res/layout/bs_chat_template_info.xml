<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/unify_space_12">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/bs_chat_desc"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_8"
        app:layout_constraintBottom_toBottomOf="@+id/bs_chat_illustration"
        app:layout_constraintEnd_toStartOf="@+id/bs_chat_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="@string/body_info_list_template" />

    <ImageView
        android:id="@+id/bs_chat_illustration"
        android:layout_width="@dimen/unify_space_64"
        android:layout_height="@dimen/unify_space_64"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drag_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>