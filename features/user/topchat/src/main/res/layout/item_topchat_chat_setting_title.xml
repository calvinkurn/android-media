<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/dp_topchat_12"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/dp_topchat_12">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        tools:src="@drawable/ic_topchat_star" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_topchat_10"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Sebagai Pembeli" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_chat_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_topchat_6"
        android:text="@string/seller_migration_label_seller_app_only"
        android:visibility="gone"
        app:labelType="general_light_green"
        tools:visibility="visible" />

</LinearLayout>