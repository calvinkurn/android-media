<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_product_bundling_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_bundling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_product_bundling_thumbnail"
        app:layout_constraintLeft_toLeftOf="@id/iv_product_bundling_thumbnail"
        app:layout_constraintRight_toRightOf="@id/iv_product_bundling_thumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:typographyType="body_3"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="iPhone XR Garansi R..."/>

</androidx.constraintlayout.widget.ConstraintLayout>