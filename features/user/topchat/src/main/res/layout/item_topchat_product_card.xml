<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_lvl1"
    android:background="@drawable/bg_shadow_attach_product"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_topchat_12"
        android:paddingLeft="@dimen/dp_topchat_12"
        android:paddingTop="@dimen/dp_topchat_12"
        android:paddingEnd="@dimen/dp_topchat_12"
        android:paddingRight="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="@dimen/dp_topchat_96"
            android:layout_height="@dimen/dp_topchat_96"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lb_empty_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_lvl2"
            android:text="@string/title_topchat_empty_stock"
            app:layout_constraintBottom_toBottomOf="@id/iv_thumbnail"
            app:layout_constraintStart_toStartOf="@id/iv_thumbnail" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_topchat_12"
            android:layout_marginLeft="@dimen/dp_topchat_12"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/light_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            tools:text="@tools:sample/lorem/random" />

        <LinearLayout
            android:id="@+id/ll_variant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl3"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name">

            <LinearLayout
                android:id="@+id/ll_variant_color"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_topchat_20"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:layout_marginRight="@dimen/spacing_lvl2"
                android:background="@drawable/bg_attach_product_variant"
                android:orientation="horizontal"
                android:paddingStart="@dimen/spacing_lvl3"
                android:paddingEnd="@dimen/spacing_lvl3">

                <ImageView
                    android:id="@+id/iv_variant_color"
                    android:layout_width="@dimen/dp_topchat_6"
                    android:layout_height="@dimen/dp_topchat_6"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/spacing_lvl2"
                    android:layout_marginRight="@dimen/spacing_lvl2"
                    tools:background="@color/black" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_variant_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Neutral_N200"
                    app:typographyType="small"
                    app:typographyWeight="bold"
                    tools:text="Hitam" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_variant_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                android:layout_marginRight="@dimen/spacing_lvl3"
                android:background="@drawable/bg_attach_product_variant"
                android:orientation="horizontal"
                android:paddingStart="@dimen/spacing_lvl3"
                android:paddingEnd="@dimen/spacing_lvl3">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_variant_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Neutral_N200"
                    app:typographyType="small"
                    app:typographyWeight="bold"
                    tools:text="Besar" />

            </LinearLayout>

        </LinearLayout>

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/tv_campaign_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_topchat_12"
            android:layout_marginLeft="@dimen/dp_topchat_12"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl3"
            android:maxLines="1"
            android:paddingStart="@dimen/spacing_lvl3"
            android:paddingEnd="@dimen/spacing_lvl3"
            android:textStyle="bold"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/ll_variant"
            app:lineHeight="@dimen/dp_topchat_20"
            tools:text="20%"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_campaign_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:maxLines="1"
            android:textColor="@color/light_N700_44"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_campaign_discount"
            app:layout_constraintStart_toEndOf="@+id/tv_campaign_discount"
            app:layout_constraintTop_toTopOf="@+id/tv_campaign_discount"
            app:typographyType="small"
            tools:text="Rp8.499.000"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_topchat_12"
            android:layout_marginLeft="@dimen/dp_topchat_12"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:maxLines="1"
            android:textColor="@color/light_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/tv_campaign_discount"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp7.999.000" />

        <ImageView
            android:id="@+id/iv_free_shipping"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_topchat_20"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:scaleType="fitStart"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_price"
            tools:src="@drawable/ic_close_default"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_topchat_12"
        android:paddingLeft="@dimen/dp_topchat_12"
        android:paddingEnd="@dimen/dp_topchat_12"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/dp_topchat_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_info"
        app:layout_constraintVertical_bias="1">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/tv_atc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:gravity="center"
            android:text="@string/action_atc"
            android:textColor="@color/Green_G500"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/tv_buy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyButtonSize="small"
            app:unifyButtonType="transaction"
            app:unifyButtonVariant="ghost"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:gravity="center"
            android:text="@string/action_buy"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_atc"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyButtonSize="small"
            app:unifyButtonType="transaction"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/tv_wishlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:gravity="center"
            android:minWidth="@dimen/dp_topchat_96"
            android:text="@string/action_wishlist"
            android:textColor="@color/Green_G500"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyButtonSize="small"
            app:unifyButtonType="transaction"
            app:unifyButtonVariant="ghost"
            tools:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_topchat_12"
            android:layout_marginLeft="@dimen/dp_topchat_12"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_buy">

            <include layout="@layout/item_chatcommon_chat_read_status_attachment" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/iv_attachment_shimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect"
        tools:visibility="visible" />
</merge>