<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.topchat">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".chatlist.activity.ChatSearchActivity">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_chat_search"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chatsetting.view.activity.ChatSettingActivity"
            android:label="@string/title_chat_setting"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".chatlist.activity.ChatListActivity"
            android:label="@string/title_inbox_chat"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".chatlist.activity.InboxChatActivity"
            android:label="@string/title_inbox_chat"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".chattemplate.view.activity.TemplateChatActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:path="@string/path_chat_template_setting"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chattemplate.view.activity.EditTemplateChatActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".chatroom.view.activity.TopChatRoomActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".chatroom.view.activity.ChatRoomSettingsActivity"
            android:label="@string/chat_incoming_settings"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".attachproduct.view.activity.BroadcastMessageAttachProductActivity"
            android:screenOrientation="portrait" />


        <service
            android:name=".chatroom.service.NotificationChatService"
            android:exported="false">

            <intent-filter>
                <action android:name="com.tokopedia.topchat.chatroom.service.NotificationChatService.REPLY_CHAT" />
            </intent-filter>
        </service>
    </application>

</manifest>