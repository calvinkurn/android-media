<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/inbox_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_topchat_44"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inbox" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_contaier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/inbox_bottom_nav"
        app:layout_constraintTop_toBottomOf="@+id/inbox_toolbar" />

    <View
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/spacing_lvl2"
        android:background="@drawable/inbox_bottom_nav_shadow"
        app:layout_constraintBottom_toTopOf="@+id/inbox_bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/inbox_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_topchat_50"
        app:itemTextColor="@color/inbox_title_color_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_inbox"
        app:theme="@style/NavigationMenuItemTextAppearance" />

</androidx.constraintlayout.widget.ConstraintLayout>