<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/inbox_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_topchat_44"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/spacing_lvl4"
            app:srcCompat="@drawable/ic_arrow_back_black" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/txt_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:text="Inbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andi Nugroho"
                app:layout_constraintStart_toStartOf="@+id/txt_page_title"
                app:layout_constraintTop_toBottomOf="@+id/txt_page_title"
                app:typographyType="heading_4"
                app:typographyWeight="bold" />

            <ImageView
                android:id="@+id/iv_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                app:layout_constraintBottom_toBottomOf="@+id/txt_user_name"
                app:layout_constraintStart_toEndOf="@+id/txt_user_name"
                app:layout_constraintTop_toTopOf="@+id/txt_user_name"
                app:srcCompat="@drawable/ic_inbox_chevron_down" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/unread_counter"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:background="@drawable/bg_inbox_red_dot"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="1"
                android:textColor="@color/Neutral_N0"
                app:layout_constraintBottom_toBottomOf="@+id/txt_user_name"
                app:layout_constraintStart_toEndOf="@+id/iv_dropdown"
                app:layout_constraintTop_toTopOf="@+id/txt_user_name"
                app:typographyType="small"
                app:typographyWeight="bold"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_contaier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/inbox_bottom_nav"
        app:layout_constraintTop_toBottomOf="@+id/inbox_toolbar" />

    <View
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/spacing_lvl2"
        android:background="@drawable/inbox_bottom_nav_shadow"
        app:layout_constraintBottom_toTopOf="@+id/inbox_bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/inbox_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_topchat_50"
        app:itemTextColor="@color/inbox_title_color_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_inbox"
        app:theme="@style/NavigationMenuItemTextAppearance" />

</androidx.constraintlayout.widget.ConstraintLayout>