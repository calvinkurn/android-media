<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/unify_space_8">

    <ImageView
        android:id="@+id/imgTest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/media_state_default_placeholder"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtStatus"
        android:textSize="@dimen/unify_font_16"
        android:layout_marginTop="@dimen/unify_space_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Status"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/unify_space_4"
            android:orientation="vertical">

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnNormal"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loadImage()"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnRoundedProperties"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loadImage(rounded)"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnFitCenterProperties"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loadImage(fit_center)"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnCenterCropProperties"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loadImage(center_crop)"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnCircle"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loadImageCircle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/unify_space_4"
            android:orientation="vertical">

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnError"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unifyButtonType="transaction"
                android:text="loadImage(invalid url)"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnCustomError"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unifyButtonType="transaction"
                android:text="loadImage(custom_error)"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnWithoutPlaceHolder"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unifyButtonType="transaction"
                android:text="loadImageWithoutPlaceholder"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnCustomTarget"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unifyButtonType="transaction"
                android:text="loadImageWithTarget"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnBlurHash"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unifyButtonType="transaction"
                android:text="loadImage blurhash"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>