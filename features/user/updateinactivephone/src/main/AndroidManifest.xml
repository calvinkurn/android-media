<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.updateinactivephone">
  
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.tokopedia.updateinactivephone.view.activity.ChangeInactivePhoneActivity"
            android:label="Masuk"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>

        <activity
            android:name="com.tokopedia.updateinactivephone.view.activity.ChangeInactiveFormRequestActivity"
            android:label="Masuk"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_change_inactive_phone_form"/>

            </intent-filter>
        </activity>

        <activity
            android:name="com.tokopedia.updateinactivephone.view.activity.ChangeInactivePhoneRequestSubmittedActivity"
            android:label="Masuk"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>
  
        <activity android:name=".revamp.view.activity.InactivePhoneOnboardingActivity"/>
        <activity android:name=".revamp.view.activity.InactivePhoneImagePickerActivity"/>
    </application>

</manifest>