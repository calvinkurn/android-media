<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <com.tokopedia.abstraction.base.view.widget.TouchViewPager
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_lvl0"
    android:layout_weight="1"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:can_swipe="false"
    app:layout_constraintBottom_toTopOf="@+id/tabLayout"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  
  <com.tokopedia.unifycomponents.TabsUnify
    android:id="@+id/tabLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:tabMode="fixed"
    app:tabGravity="fill"
    app:tabMinWidth="@dimen/image_picker_tab_min_width"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />
  
  <com.tokopedia.unifycomponents.LoaderUnify
    android:id="@+id/progressBar"
    android:layout_width="@dimen/layout_lvl6"
    android:layout_height="@dimen/layout_lvl6"
    android:layout_centerInParent="true"
    android:indeterminate="true"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  
</androidx.constraintlayout.widget.ConstraintLayout>