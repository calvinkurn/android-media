<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="@dimen/updateinactivephone_4dp"
        android:gravity="top"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingEnd="@dimen/updateinactivephone_39dp"
        android:paddingLeft="@dimen/updateinactivephone_39dp"
        android:paddingRight="@dimen/updateinactivephone_39dp"
        android:paddingStart="@dimen/updateinactivephone_39dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/request_submitted" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/updateinactivephone_32dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/submission_sent"
            android:textAlignment="center"
            android:textColor="@color/black_70"
            android:textSize="@dimen/fontSize_lvl3"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/updateinactivephone_9dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/updateinactivephone_6dp"
            android:text="@string/submission_sent_desc"
            android:textAlignment="center"
            android:textColor="@color/black_54"
            android:textSize="@dimen/fontSize_lvl2"
            android:textStyle="normal" />

        <View
            android:layout_width="@dimen/updateinactivephone_112dp"
            android:layout_height="@dimen/updateinactivephone_1dp"
            android:layout_marginTop="@dimen/updateinactivephone_18dp"
            android:background="@color/grey_hint" />

        <TextView
            android:id="@+id/duplicate_request_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/updateinactivephone_18dp"
            android:fontFamily="sans-serif"
            android:text="@string/duplicate_submission_desc"
            android:textAlignment="center"
            android:textColor="@color/black_54"
            android:textSize="@dimen/fontSize_lvl2"
            android:textStyle="normal"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/first_request_submission_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/updateinactivephone_18dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/new_request_submission_desc"
                android:textAlignment="center"
                android:textColor="@color/black_54"
                android:textSize="@dimen/fontSize_lvl2"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/value_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/updateinactivephone_12dp"
                android:layout_marginBottom="@dimen/updateinactivephone_12dp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@color/black_70"
                android:textSize="@dimen/updateinactivephone_13sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/email_label"
                android:textAlignment="center"
                android:textColor="@color/black_54"
                android:textSize="@dimen/fontSize_lvl2"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/value_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/updateinactivephone_12dp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@color/black_70"
                android:textSize="@dimen/updateinactivephone_13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <Button
            android:id="@+id/button_return_to_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_lvl4"
            android:background="@drawable/green_button_rounded"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/goto_home"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize_lvl3"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>