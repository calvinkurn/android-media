<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl4"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/photo_id_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/updateinactivephone_10dp"
                android:layout_marginTop="@dimen/updateinactivephone_10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/foto_ktp_title"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/layout_lvl2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/updateinactivephone_7dp"
                    android:lineSpacingExtra="@dimen/updateinactivephone_7dp"
                    android:text="@string/foto_ktp_desc"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/updateinactivephone_14dp" />

                <ImageView
                    android:id="@+id/upload_id_photo_button"
                    android:layout_width="@dimen/updateinactivephone_210dp"
                    android:layout_height="@dimen/updateinactivephone_210dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_lvl3"
                    android:layout_marginBottom="@dimen/layout_lvl3"
                    android:padding="@dimen/updateinactivephone_5dp"
                    android:src="@drawable/ic_add_photo_change_inactive_form"
                    android:background="@drawable/bg_white_border_grey_rounded_upload_photo_button"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/upload_id_photo_view"
                    android:layout_width="@dimen/updateinactivephone_210dp"
                    android:layout_height="@dimen/updateinactivephone_210dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/spacing_lvl5"
                    android:layout_marginTop="@dimen/spacing_lvl5"
                    android:background="@drawable/bg_border"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/photo_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_add_photo" />

                    <ImageView
                        android:layout_width="@dimen/updateinactivephone_30dp"
                        android:layout_height="@dimen/updateinactivephone_30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bg_border"
                        android:padding="@dimen/updateinactivephone_5dp"
                        app:srcCompat="@drawable/ic_edit" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_id_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/foto_payment_title"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/layout_lvl2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/updateinactivephone_7dp"
                    android:lineSpacingExtra="@dimen/updateinactivephone_7dp"
                    android:text="@string/foto_payment_desc"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/updateinactivephone_14dp" />

                <ImageView
                    android:id="@+id/upload_account_book_button"
                    android:layout_width="@dimen/updateinactivephone_210dp"
                    android:layout_height="@dimen/updateinactivephone_210dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/updateinactivephone_30dp"
                    android:layout_marginTop="@dimen/spacing_lvl5"
                    android:padding="@dimen/updateinactivephone_5dp"
                    android:src="@drawable/ic_add_photo_change_inactive_form"
                    android:background="@drawable/bg_white_border_grey_rounded_upload_photo_button"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/upload_account_book_view"
                    android:layout_width="@dimen/updateinactivephone_210dp"
                    android:layout_height="@dimen/updateinactivephone_210dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/spacing_lvl5"
                    android:layout_marginTop="@dimen/spacing_lvl5"
                    android:background="@drawable/bg_border"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/account_book"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_add_photo" />

                    <ImageView
                        android:layout_width="@dimen/updateinactivephone_30dp"
                        android:layout_height="@dimen/updateinactivephone_30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bg_border"
                        android:padding="@dimen/updateinactivephone_5dp"
                        app:srcCompat="@drawable/ic_edit" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/updateinactivephone_0dp"
                android:padding="@dimen/spacing_lvl4"
                app:cardElevation="@dimen/updateinactivephone_0dp">

                <TextView
                    android:id="@+id/button_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_lvl5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/spacing_lvl5"
                    android:layout_marginTop="@dimen/updateinactivephone_40dp"
                    android:background="@drawable/login_button_selector"
                    android:clickable="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/title_next"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_500"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>