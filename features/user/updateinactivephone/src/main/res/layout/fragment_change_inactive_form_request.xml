<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/card_view"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/photo_id_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/foto_ktp_title"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:lineSpacingExtra="@dimen/dp_7"
                    android:text="@string/foto_ktp_desc"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:id="@+id/upload_id_photo_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_24"
                    android:src="@drawable/ic_add_photo"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/upload_id_photo_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_24"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/photo_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_add_photo" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_edit" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_id_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/foto_payment_title"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:lineSpacingExtra="@dimen/dp_7"
                    android:text="@string/foto_payment_desc"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:id="@+id/upload_account_book_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_24"
                    android:src="@drawable/ic_add_photo"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/upload_account_book_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_24"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/account_book"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_add_photo" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_edit" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_background"
        android:padding="@dimen/dp_16">


        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@drawable/grey_button_rounded"
            android:clickable="false"
            android:enabled="false"
            android:text="@string/title_next"
            android:textAllCaps="false"
            android:textColor="@color/grey_500" />
    </android.support.v7.widget.CardView>


</RelativeLayout>