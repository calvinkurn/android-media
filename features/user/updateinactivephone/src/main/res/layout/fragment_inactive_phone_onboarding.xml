<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:ignore="MissingDefaultResource">
  
  <ViewStub
    android:id="@+id/contentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  
  <ImageView
    android:id="@+id/imgIconVerified"
    android:layout_width="@dimen/spacing_lvl6"
    android:layout_height="@dimen/spacing_lvl6"
    android:background="@color/dark_N200"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginBottom="@dimen/spacing_lvl6"
    app:layout_constraintBottom_toTopOf="@id/btnNext"
    app:layout_constraintLeft_toLeftOf="parent"/>
  
  <com.tokopedia.unifyprinciples.Typography
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Tokopedia menjamin keamanan &amp; privasi datamu."
    android:textColor="@color/dark_N200"
    android:layout_marginStart="@dimen/spacing_lvl3"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    app:typographyType="small"
    app:layout_constraintTop_toTopOf="@id/imgIconVerified"
    app:layout_constraintLeft_toRightOf="@id/imgIconVerified"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/imgIconVerified"/>
  
  <com.tokopedia.unifycomponents.UnifyButton
    android:id="@+id/btnNext"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_lvl4"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
  
  <com.tokopedia.unifycomponents.LoaderUnify
    android:id="@+id/progress_bar"
    android:layout_width="@dimen/spacing_lvl7"
    android:layout_height="@dimen/spacing_lvl7"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>