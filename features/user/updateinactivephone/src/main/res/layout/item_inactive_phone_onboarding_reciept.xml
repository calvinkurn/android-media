<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:ignore="MissingDefaultResource">
  
  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layoutSample"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    
    <ImageView
      android:id="@+id/imgSampleRight"
      android:layout_width="@dimen/layout_lvl8"
      android:layout_height="@dimen/layout_lvl8"
      android:scaleType="centerCrop"
      app:srcCompat="@drawable/ic_sample_receipt_true"
      android:layout_margin="@dimen/spacing_lvl6"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/imgSampleFalse" />
    
    <ImageView
      android:id="@+id/imgIconRight"
      android:layout_width="@dimen/spacing_lvl5"
      android:layout_height="@dimen/spacing_lvl5"
      app:srcCompat="@drawable/ic_success"
      app:layout_constraintBottom_toBottomOf="@+id/imgSampleRight"
      app:layout_constraintRight_toRightOf="@+id/imgSampleRight"
      app:layout_constraintLeft_toRightOf="@+id/imgSampleRight"
      app:layout_constraintTop_toBottomOf="@+id/imgSampleRight" />
    
    <com.tokopedia.unifyprinciples.Typography
      android:id="@+id/result_text_ktp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_lvl3"
      android:text="@string/text_onboarding_correct"
      app:typographyType="small"
      app:layout_constraintEnd_toEndOf="@+id/imgSampleRight"
      app:layout_constraintStart_toStartOf="@+id/imgSampleRight"
      app:layout_constraintTop_toBottomOf="@+id/imgSampleRight" />
    
    <ImageView
      android:id="@+id/imgSampleFalse"
      android:layout_width="@dimen/layout_lvl8"
      android:layout_height="@dimen/layout_lvl8"
      android:scaleType="centerCrop"
      android:layout_margin="@dimen/spacing_lvl6"
      app:srcCompat="@drawable/ic_sample_receipt_false"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/imgSampleRight"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent" />
    
    <ImageView
      android:id="@+id/imgIconFalse"
      android:layout_width="@dimen/spacing_lvl5"
      android:layout_height="@dimen/spacing_lvl5"
      app:srcCompat="@drawable/ic_error"
      app:layout_constraintBottom_toBottomOf="@+id/imgSampleFalse"
      app:layout_constraintRight_toRightOf="@+id/imgSampleFalse"
      app:layout_constraintLeft_toRightOf="@+id/imgSampleFalse"
      app:layout_constraintTop_toBottomOf="@+id/imgSampleFalse" />
    
    <com.tokopedia.unifyprinciples.Typography
      android:id="@+id/result_text_face"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_lvl3"
      android:text="@string/text_onboarding_false"
      app:typographyType="small"
      app:layout_constraintTop_toBottomOf="@+id/imgSampleFalse"
      app:layout_constraintLeft_toLeftOf="@+id/imgSampleFalse"
      app:layout_constraintRight_toRightOf="@+id/imgSampleFalse" />
  
  </androidx.constraintlayout.widget.ConstraintLayout>
  
  <com.tokopedia.unifyprinciples.Typography
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_lvl4"
    android:layout_marginStart="@dimen/spacing_lvl6"
    android:layout_marginEnd="@dimen/spacing_lvl6"
    android:text="@string/text_onboarding_receipt_description"
    android:textColor="@color/dark_N200"
    app:typographyType="body_2"
    app:layout_constraintTop_toBottomOf="@+id/layoutSample"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>