<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/dp_2"
        android:text="@string/new_phone_heading"
        android:textColor="@color/black_56"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/new_phone_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-3.5dp"
        android:layout_marginStart="-3.5dp"
        android:imeOptions="actionNext"
        android:inputType="phone" />

    <TextView
        android:id="@+id/phone_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/dp_5"
        android:text="@string/input_phone_hint"
        android:textColor="@color/black_56"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/phone_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/red_500"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/dp_2"
        android:text="@string/email_heading"
        android:textColor="@color/black_56"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/new_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-3.5dp"
        android:layout_marginStart="-3.5dp"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/email_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/dp_5"
        android:text="@string/email_hint"
        android:textColor="@color/black_56"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/email_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/red_500"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        android:visibility="invisible" />

    <Button
        android:id="@+id/submission_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/login_button_selector"
        android:enabled="false"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/send_submission"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black_26"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />


</LinearLayout>