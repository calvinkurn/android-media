<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tokopedia.updateinactivephone.features.inputoldphonenumber.fragment.InputOldPhoneNumberFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typography_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950"
            app:typographyType="display_1"
            app:typographyWeight="bold"
            android:text="@string/ipn_title" />

        <com.tokopedia.unifycomponents.TextFieldUnify2
            android:id="@+id/text_input_old_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:unify_text_field_input_type="number"
            app:unify_text_field_label="@string/ipn_old_phone_number"
            android:layout_marginTop="16dp"
            app:unify_text_field_message=" " />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/ub_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:unifyButtonVariant="filled"
            android:text="@string/ipn_next"
            android:layout_marginVertical="16dp" />

    </LinearLayout>

</ScrollView>