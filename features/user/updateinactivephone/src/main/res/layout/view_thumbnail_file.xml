<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <com.tokopedia.unifycomponents.CardUnify
    android:id="@+id/layoutThumbnailFile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_lvl1"
    android:layout_marginStart="@dimen/layout_lvl1"
    android:layout_marginEnd="@dimen/layout_lvl1"
    android:padding="@dimen/layout_lvl1"
    app:layout_constraintTop_toBottomOf="@+id/txtTitle"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:card_type="shadow">
    
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      
      <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageThumbnailFile"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="@dimen/layout_lvl7"
        app:unify_image_corner_radius="8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
      
      <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/labelThumbnailFile"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl1"
        app:typographyType="body_1"
        app:layout_constraintLeft_toRightOf="@+id/imageThumbnailFile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageEditThumbnailFile"
        app:layout_constraintBottom_toBottomOf="parent" />
      
      <ImageView
        android:id="@+id/imageEditThumbnailFile"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl1"
        app:srcCompat="@drawable/ic_edit_inaactive_phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    </androidx.constraintlayout.widget.ConstraintLayout>
  
  </com.tokopedia.unifycomponents.CardUnify>

</merge>