<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/Neutral_N0"
  tools:ignore="MissingDefaultResource">
  
  <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_lvl0"
    android:scrollbars="none"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/imgIconVerified">
    
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/layout_lvl4">
    
      <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_onboarding_saving_book_titile"
        android:layout_margin="@dimen/layout_lvl3"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    
      <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chipSavingBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl3"
        app:centerText="true"
        app:chipText="Buku Tabungan"
        app:chipType="selected"
        app:chipSize="small"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintLeft_toLeftOf="parent"/>
    
      <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chipReceipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        app:centerText="true"
        app:chipText="Bukti Pembayaran"
        app:chipType="normal"
        app:chipSize="small"
        app:layout_constraintTop_toTopOf="@+id/chipSavingBook"
        app:layout_constraintLeft_toRightOf="@+id/chipSavingBook"/>
    
      <FrameLayout
        android:id="@+id/contentDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@+id/chipSavingBook"
        app:layout_constraintLeft_toRightOf="parent">
      
        <include layout="@layout/item_inactive_phone_onboarding_saving_book"
          android:id="@+id/itemLayoutSavingBook" />
      
        <include layout="@layout/item_inactive_phone_onboarding_reciept"
          android:id="@+id/itemLayoutReceipt"
          android:visibility="gone"/>
    
      </FrameLayout>
  
    </androidx.constraintlayout.widget.ConstraintLayout>
    
  </ScrollView>
  
  <ImageView
    android:id="@+id/imgIconVerified"
    android:layout_width="@dimen/spacing_lvl4"
    android:layout_height="@dimen/spacing_lvl4"
    app:srcCompat="@drawable/ic_shield"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginBottom="@dimen/spacing_lvl4"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/btnNext"/>
  
  <com.tokopedia.unifyprinciples.Typography
    android:layout_width="@dimen/layout_lvl0"
    android:layout_height="wrap_content"
    android:text="@string/text_onboarding_protected"
    android:textColor="@color/dark_N200"
    android:layout_marginStart="@dimen/spacing_lvl3"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    android:textSize="@dimen/fontSize_lvl2"
    app:typographyType="body_3"
    app:layout_constraintTop_toTopOf="@+id/imgIconVerified"
    app:layout_constraintLeft_toRightOf="@+id/imgIconVerified"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="@+id/imgIconVerified"/>
  
  <com.tokopedia.unifycomponents.UnifyButton
    android:id="@+id/btnNext"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_lvl4"
    android:text="@string/text_title_saving_book"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>