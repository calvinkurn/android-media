<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/spacing_lvl4">

    <LinearLayout
        android:id="@+id/main_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/updateinactivephone_6dp"
        android:text="@string/change_inactive_phone_heading"
        android:textColor="@color/black_38"
        android:textSize="@dimen/fontSize_lvl3"
        android:textStyle="normal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/updateinactivephone_30dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/updateinactivephone_2dp"
        android:text="@string/input_phone_number_title"
        android:textColor="@color/black_56"
        android:textSize="@dimen/fontSize_lvl2"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/updateinactivephone_minus_4dp"
        android:layout_marginStart="@dimen/updateinactivephone_minus_4dp"
        android:imeOptions="actionNext"
        android:inputType="phone" />

    <TextView
        android:id="@+id/phone_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/updateinactivephone_5dp"
        android:text="@string/input_phone_hint"
        android:textColor="@color/black_56"
        android:textSize="@dimen/fontSize_lvl2"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/updateinactivephone_4dp"
        android:textColor="@color/red_500"
        android:textSize="@dimen/fontSize_lvl2"
        android:textStyle="normal"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_continue"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_lvl6"
        android:background="@drawable/login_button_selector"
        android:enabled="false"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/selanjutnya"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black_26"
        android:textSize="@dimen/fontSize_lvl3"
        android:textStyle="bold" />

    </LinearLayout>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/updateinactivephone_40dp"
        android:layout_height="@dimen/updateinactivephone_40dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>