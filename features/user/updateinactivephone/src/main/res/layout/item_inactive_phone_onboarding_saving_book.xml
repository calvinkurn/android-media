<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:ignore="MissingDefaultResource">
  
  <ImageView
    android:id="@+id/imgHeader"
    android:layout_width="@dimen/layout_lvl9"
    android:layout_height="@dimen/layout_lvl9"
    android:background="@color/dark_N500"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
  
  <com.tokopedia.unifyprinciples.Typography
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_lvl4"
    android:layout_marginStart="@dimen/spacing_lvl6"
    android:layout_marginEnd="@dimen/spacing_lvl6"
    android:text="@string/text_onboarding_saving_book_description"
    android:textColor="@color/dark_N200"
    app:typographyType="body_2"
    app:layout_constraintTop_toBottomOf="@id/imgHeader"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>