<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/spacing_lvl3"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/updateinactivephone_12dp"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/updateinactivephone_12dp">


        <ImageView
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navigation_cancel" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl5"
            android:layout_marginStart="@dimen/spacing_lvl5"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="@dimen/updateinactivephone_15sp"
            android:text="@string/info_title"
            android:textColor="@color/black_70"
            android:textSize="@dimen/updateinactivephone_17sp"
            android:textStyle="normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl1"
        android:background="@color/grey_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/updateinactivephone_15dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/updateinactivephone_7dp"
        android:paddingEnd="@dimen/updateinactivephone_11dp"
        android:paddingLeft="@dimen/updateinactivephone_18dp"
        android:paddingRight="@dimen/updateinactivephone_11dp"
        android:paddingStart="@dimen/updateinactivephone_18dp"
        android:text="@string/info_heading"
        android:textColor="@color/black_70"
        android:textSize="@dimen/fontSize_lvl3"
        android:textStyle="normal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl3">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:src="@drawable/info_icon_yellow" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/updateinactivephone_12dp"
            android:layout_marginStart="@dimen/updateinactivephone_12dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="@dimen/updateinactivephone_6sp"
            android:text="@string/info_desc_1"
            android:textColor="@color/black_70"
            android:textSize="@dimen/fontSize_lvl3"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>