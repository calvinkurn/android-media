<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/home_account_balance_and_point_containts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/unify_space_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/home_account_item_balance_and_point_icon"
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/home_account_item_balance_and_point_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSize_lvl1"
            app:lineHeight="@dimen/home_account_dp_14"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Rp10.000.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/home_account_item_balance_and_point_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700"
            android:textSize="@dimen/fontSize_lvl2"
            app:typographyType="small"
            app:typographyWeight="reguler"
            tools:text="GoPay" />
    </LinearLayout>

    <include
        android:id="@+id/home_account_balance_and_point_shimmer"
        layout="@layout/home_account_item_balance_and_point_shimmer"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>