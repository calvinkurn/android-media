<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/unify_space_8"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_account_item_member_icon"
        android:layout_width="@dimen/home_account_dp_28"
        android:layout_height="@dimen/home_account_dp_28"
        android:contentDescription="@string/menu_account_desc_icon" />

    <com.tokopedia.unifyprinciples.Typography
        android:textSize="@dimen/fontSize_lvl1"
        app:lineHeight="@dimen/home_account_dp_14"
        android:id="@+id/home_account_item_member_subtitle"
        tools:text="Tokomember"
        app:typographyType="body_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:textSize="@dimen/fontSize_lvl2"
        app:lineHeight="@dimen/home_account_dp_18"
        android:id="@+id/home_account_item_member_title"
        app:typographyWeight="bold"
        tools:text="8 Member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>