<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/layout_lvl1"
    android:paddingBottom="@dimen/layout_lvl1">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/sectionInfoImage"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/sectionInfoTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        android:layout_marginStart="@dimen/layout_lvl2"
        tools:text="Halal"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        app:layout_constraintStart_toEndOf="@id/sectionInfoImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/sectionInfoDescription"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        tools:text="Tidak mengandung babi, alkohol, dan bahan non-halal lainnya."
        app:typographyType="body_3"
        app:layout_constraintStart_toEndOf="@id/sectionInfoImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sectionInfoTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>