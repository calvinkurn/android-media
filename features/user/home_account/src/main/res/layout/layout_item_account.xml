<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@+id/item_account_partner_name"-->
<!--    />-->

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/unify_space_16"
        android:background="@color/Unify_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_account_partner_name"
        app:layout_constraintTop_toBottomOf="@+id/item_account_linked_date" />

</androidx.constraintlayout.widget.ConstraintLayout>