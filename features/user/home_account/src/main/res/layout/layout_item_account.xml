<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_account_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/unify_space_8"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/item_account_partner_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_gojek"
        app:layout_constraintBottom_toBottomOf="@+id/item_account_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_account_partner_name" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/item_account_partner_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/unify_space_16"
        app:layout_constraintStart_toEndOf="@+id/item_account_partner_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3"
        tools:text="Test nama" />

    <com.tokopedia.unifyprinciples.Typography
        android:textColor="@color/Neutral_N700_68"
        android:id="@+id/item_account_status"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        tools:text="Belum Terhubung"
        app:layout_constraintStart_toStartOf="@+id/item_account_partner_name"
        app:layout_constraintTop_toBottomOf="@+id/item_account_partner_name"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/item_account_linked_date"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/Neutral_N700_44"
        app:layout_constraintBottom_toBottomOf="@+id/item_account_status"
        app:layout_constraintStart_toEndOf="@+id/item_account_status"
        app:layout_constraintTop_toTopOf="@+id/item_account_status"
        app:typographyType="body_2"
        tools:text="Linked on Aug 4, 2021" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/item_account_link_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sambungin Akun"
        android:textColor="@color/unify_G500"
        app:layout_constraintBottom_toBottomOf="@+id/item_account_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_account_partner_name"
        app:typographyType="body_3" />

<!--    <ImageView-->
