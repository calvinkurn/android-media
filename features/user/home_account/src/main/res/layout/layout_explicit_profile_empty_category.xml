<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_lvl4"
    android:background="@color/Unify_Background">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageEmptyPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/titleEmptyPage"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:text="@string/explicit_profile_empty_page_title"
        android:textAlignment="center"
        android:textColor="@color/Unify_NN950"
        app:typographyType="heading_2"
        app:layout_constraintTop_toBottomOf="@+id/imageEmptyPage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:text="@string/explicit_profile_empty_page_desc"
        android:textAlignment="center"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:typographyType="body_2"
        app:layout_constraintTop_toBottomOf="@+id/titleEmptyPage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>