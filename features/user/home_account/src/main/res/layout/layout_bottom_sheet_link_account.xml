<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center|top"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/bottom_sheet_link_account_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="@dimen/unify_space_12"
        app:typographyType="heading_3"
        android:textAlignment="center"
        android:text="@string/link_account_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="@dimen/home_account_dp_12"
        android:textAlignment="center"
        app:typographyType="body_2"
        android:text="@string/link_account_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_marginBottom="@dimen/unify_space_16"
        android:id="@+id/bottom_sheet_link_account_btn"
        android:layout_marginTop="@dimen/unify_space_24"
        android:text="@string/link_account_btn_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>