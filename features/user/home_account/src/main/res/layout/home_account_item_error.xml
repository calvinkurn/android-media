<?xml version="1.0" encoding="utf-8"?>

<com.tokopedia.unifycomponents.CardUnify
    android:id="@+id/home_account_item_error_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_account_dp_54"
    android:paddingLeft="@dimen/unify_space_8"
    android:paddingTop="@dimen/home_account_dp_10"
    android:paddingBottom="@dimen/home_account_dp_10"
    app:card_type="shadow">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_reload" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data belum bisa ditampilkan, coba refresh ya." />
    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>