<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_link_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:src="@drawable/ic_gojek_logo"
        app:layout_constraintBottom_toBottomOf="@+id/tv_desc_link_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_header_link_account" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_header_link_account"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginHorizontal="@dimen/unify_space_8"
        app:layout_constraintEnd_toStartOf="@+id/ic_link_account"
        app:layout_constraintStart_toEndOf="@+id/img_link_account"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Gojek" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_desc_link_account"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@+id/tv_header_link_account"
        app:layout_constraintStart_toStartOf="@+id/tv_header_link_account"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_link_account"
        app:typographyType="paragraph_3"
        tools:text="Belum tersambung" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_linking_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_16"
        app:typographyType="display_3"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintBottom_toBottomOf="@+id/tv_desc_link_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_header_link_account"
        android:text="@string/opt_link_account" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ic_link_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_arrow"
        android:layout_marginEnd="@dimen/unify_space_16"
        app:layout_constraintBottom_toBottomOf="@+id/tv_desc_link_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_header_link_account" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginStart="@dimen/unify_space_16"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_link_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>