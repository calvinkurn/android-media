<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/home_account_dp_20"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    android:layout_marginBottom="@dimen/spacing_lvl1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loaderTextView"
            android:layout_width="@dimen/home_account_dp_118"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/spacing_lvl4"
            app:corners="8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/home_account_dp_200"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/unify_space_12"
            app:corners="8"
            app:layout_constraintStart_toStartOf="@+id/loaderTextView"
            app:layout_constraintTop_toBottomOf="@+id/loaderTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        app:corners="100"
        app:layout_constraintCircleRadius="@dimen/home_account_dp_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>