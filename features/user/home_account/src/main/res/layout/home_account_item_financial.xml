<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/financial_item_width"
    android:minWidth="@dimen/financial_item_width"
    android:paddingTop="@dimen/home_account_dp_10"
    android:paddingBottom="@dimen/home_account_dp_10"
    android:paddingLeft="@dimen/unify_space_8"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:card_type="shadow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/account_user_item_financial_icon"
            android:layout_width="@dimen/home_account_dp_38"
            android:layout_height="@dimen/home_account_dp_38"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="@+id/account_user_item_financial_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/account_user_item_financial_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/account_user_item_financial_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/home_account_dp_8"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/fontSize_lvl2"
            app:lineHeight="@dimen/home_account_dp_18"
            app:layout_constraintStart_toEndOf="@+id/account_user_item_financial_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyWeight="bold"
            tools:text="Rp. 100.000.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/account_user_item_financial_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_2"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/fontSize_lvl1"
            app:lineHeight="@dimen/home_account_dp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/account_user_item_financial_title"
            app:layout_constraintTop_toBottomOf="@+id/account_user_item_financial_title"
            app:typographyType="body_3"
            tools:text="Body Text" />

        <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
            android:id="@+id/account_user_item_financial_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/account_user_item_financial_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/account_user_item_financial_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/account_user_item_financial_end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_32"
            android:textSize="@dimen/fontSize_lvl2"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/account_user_item_financial_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/account_user_item_financial_title"
            app:typographyType="body_3"
            tools:text="Versi 3.97" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>