<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_lvl1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lvl3">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="@dimen/home_account_dp_28"
        android:layout_height="@dimen/home_account_dp_28"
        app:loader_corner_radius="50dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="@dimen/home_account_dp_72"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>