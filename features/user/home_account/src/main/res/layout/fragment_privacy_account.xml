<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".linkaccount.view.PrivacyAccountFragment">

    <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
        android:id="@+id/switch_permission_data_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_header_privacy_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/opt_header"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/switch_permission_data_usage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_desc_privacy_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/opt_desc"
        app:typographyType="paragraph_3"
        android:layout_marginTop="4dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/txt_header_privacy_account"
        app:layout_constraintStart_toStartOf="@id/txt_header_privacy_account"
        app:layout_constraintTop_toBottomOf="@id/txt_header_privacy_account" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerUnify"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_desc_privacy_account" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_header_link_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/opt_link_account_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerUnify" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_desc_link_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/opt_link_account_desc"
        app:layout_constraintEnd_toEndOf="@+id/txt_header_link_account"
        app:layout_constraintStart_toStartOf="@id/txt_header_link_account"
        app:layout_constraintTop_toBottomOf="@+id/txt_header_link_account"
        app:typographyType="display_3" />

</androidx.constraintlayout.widget.ConstraintLayout>