<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  
  <com.tokopedia.iconunify.IconUnify
    android:id="@+id/layout_bottom_sheet_add_name_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_lvl2"
    android:background="@drawable/rounded_bg_icon_with_shadow"
    app:icon_name="EDIT"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
  
  <com.tokopedia.unifyprinciples.Typography
    android:id="@+id/layout_bottom_sheet_add_name_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Yuk, ubah nama profilmu!"
    android:layout_marginTop="@dimen/layout_lvl4"
    android:layout_marginStart="@dimen/layout_lvl2"
    android:layout_marginEnd="@dimen/layout_lvl2"
    android:gravity="center"
    app:typographyType="heading_3"
    app:typographyWeight="bold"
    app:layout_constraintTop_toBottomOf="@id/layout_bottom_sheet_add_name_icon"/>
  
  <com.tokopedia.unifyprinciples.Typography
    android:id="@+id/layout_bottom_sheet_add_name_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ubah nama profil sesuai dengan nama aslimu di halaman data diri, agar pengalaman berbelanjamu semakin mudah dan aman."
    android:layout_marginTop="@dimen/layout_lvl1"
    android:layout_marginStart="@dimen/layout_lvl2"
    android:layout_marginEnd="@dimen/layout_lvl2"
    android:textColor="@color/Unify_N400"
    android:gravity="center"
    app:typographyType="body_2"
    app:layout_constraintTop_toBottomOf="@id/layout_bottom_sheet_add_name_title"/>

  <com.tokopedia.unifycomponents.UnifyButton
    android:id="@+id/layout_bottom_sheet_add_name_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_lvl2"
    android:text="Ubah Nama Sekarang"
    app:layout_constraintTop_toBottomOf="@id/layout_bottom_sheet_add_name_description"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
  
</androidx.constraintlayout.widget.ConstraintLayout>
