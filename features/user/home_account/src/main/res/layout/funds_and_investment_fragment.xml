<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.abstraction.base.view.widget.SwipeToRefresh xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_account_user_fragment_swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/Unify_Background">

        <com.tokopedia.home_account.view.custom.SwipeRecyclerView
            android:id="@+id/funds_and_investment_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <include
            android:id="@+id/funds_and_investment_shimmer"
            layout="@layout/funds_and_investment_shimmer"
            android:visibility="gone" />

        <com.tokopedia.empty_state.EmptyStateUnify
            android:id="@+id/funds_and_investment_empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:unifyEmptyStateCTAFullWidth="true"
            app:unifyEmptyStateDescription="Coba lagi untuk tampilkan konten, ya."
            app:unifyEmptyStatePrimaryCTAText="Coba Lagi"
            app:unifyEmptyStateTitle="Oops, konten gagal ditampilkan"
            app:unifyEmptyStateType="page" />

    </FrameLayout>

</com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>