<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_account_user_fragment_swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:background="@color/Unify_N0"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.home_account.view.custom.SwipeRecyclerView
            android:id="@+id/funds_and_investment_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <include
            android:visibility="gone"
            android:id="@+id/funds_and_investment_shimmer"
            layout="@layout/funds_and_investment_shimmer"/>

    </FrameLayout>

</com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>