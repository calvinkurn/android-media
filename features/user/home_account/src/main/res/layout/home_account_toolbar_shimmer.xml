<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loaderTextView2"
        android:layout_width="200dp"
        android:layout_height="@dimen/home_account_shimmer_text_title_height_bold"
        android:layout_marginLeft="22dp"
        app:corners="8"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="26dp"
        app:corners="8"
        android:layout_height="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/loaderTextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loaderTextView2" />

</androidx.constraintlayout.widget.ConstraintLayout>