<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/privacyItemImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_gojek_logo"
        app:layout_constraintBottom_toBottomOf="@+id/privacyItemDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/privacyItemTitle" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/privacyItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toStartOf="@+id/privacyItemImageButton"
        app:layout_constraintStart_toEndOf="@+id/privacyItemImage"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Gojek" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/privacyItemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@+id/privacyItemTitle"
        app:layout_constraintStart_toStartOf="@+id/privacyItemTitle"
        app:layout_constraintTop_toBottomOf="@+id/privacyItemTitle"
        app:typographyType="paragraph_3"
        tools:text="Belum tersambung"
        android:layout_marginTop="2dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/privacyItemTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintBottom_toBottomOf="@+id/privacyItemDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/privacyItemTitle"
        android:text="@string/opt_link_account" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/privacyItemImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_arrow"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/privacyItemDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/privacyItemTitle" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/privacyItemDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>