<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/account_user_item_profile_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include4"
        layout="@layout/home_account_toolbar_shimmer" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_marginTop="@dimen/home_account_dp_38"
        android:id="@+id/shimmer_account_user_item_profile_avatar"
        android:layout_width="@dimen/unify_space_64"
        android:layout_height="@dimen/unify_space_64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include4"
        app:unify_image_corner_radius="4" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_account_user_item_profile_name"
        android:layout_width="@dimen/home_account_dp_125"
        android:layout_height="@dimen/home_account_shimmer_text_title_height_bold"
        android:layout_marginLeft="@dimen/home_account_dp_20"
        android:layout_marginTop="@dimen/home_account_dp_6"
        app:corners="8"
        app:layout_constraintStart_toEndOf="@+id/shimmer_account_user_item_profile_avatar"
        app:layout_constraintTop_toTopOf="@+id/shimmer_account_user_item_profile_avatar" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_account_user_item_profile_email"
        android:layout_width="@dimen/home_account_dp_230"
        android:layout_height="@dimen/home_account_shimmer_text_title_height"
        android:layout_marginTop="@dimen/home_account_dp_12"
        app:corners="8"
        app:layout_constraintStart_toStartOf="@+id/shimmer_account_user_item_profile_name"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_account_user_item_profile_name" />

</androidx.constraintlayout.widget.ConstraintLayout>