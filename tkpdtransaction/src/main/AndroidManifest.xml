<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.transaction">

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="false" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".orders.orderdetails.view.activity.OrderListwebViewActivity"
            android:screenOrientation="portrait"
            android:configChanges="uiMode"
            android:theme="@style/Theme.White"/>
        <activity
            android:name=".orders.orderlist.view.activity.OrderListActivity"
            android:label="@string/title_order_list"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" >

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_transaction"
                    android:path="@string/path_order_list"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".orders.orderdetails.view.activity.SeeInvoiceActivity"
            android:screenOrientation="portrait"
            android:configChanges="uiMode"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_order"
                    android:path="@string/path_invoice"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>


        <activity
            android:name=".orders.orderlist.view.activity.SellerOrderListActivity"
            android:label="@string/title_order_list"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Toolbar.White" />
        <activity
            android:name=".orders.orderdetails.view.activity.OrderListDetailActivity"
            android:label="@string/title_order_detail"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".orders.orderlist.common.SaveDateBottomSheetActivity"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".orders.orderdetails.view.activity.RequestCancelActivity"
            android:label="@string/title_activity_people_reason"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>