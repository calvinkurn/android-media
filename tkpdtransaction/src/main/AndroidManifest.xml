<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tokopedia.transaction">
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.tokopedia.transaction.purchase.activity.ConfirmPaymentActivity"
            android:label="@string/title_change_payment"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tokopedia.transaction.purchase.activity.TxConfirmationDetailActivity"
            android:label="@string/title_activity_transaction_payment_confirmation_detail"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="com.tokopedia.transaction.purchase.activity.TxVerDetailActivity"
            android:label="@string/title_payment_verification"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tokopedia.transaction.purchase.activity.TxDetailActivity"
            android:label="@string/title_activity_people_tx_details"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tokopedia.transaction.purchase.activity.TxHistoryActivity"
            android:label="@string/title_activity_order_history_view"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tokopedia.transaction.purchase.activity.PurchaseActivity"
            android:label="@string/title_purchase"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tokopedia.transaction.cart.activity.CartActivity"
            android:label="@string/title_activity_cart"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tokopedia.transaction.cart.activity.ShipmentCartActivity"
            android:label="@string/title_activity_cart_shipment"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tokopedia.transaction.addtocart.activity.AddToCartActivity"
            android:label="@string/title_activity_add_to_cart_v2"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".wallet.WalletActivity"
            android:label="@string/toko_cash_info"/>
        <activity
            android:name=".bcaoneklik.activity.CreditCardAuthenticationActivity"
            android:label="Pengaturan Autentikasi"/>

        <activity android:name=".bcaoneklik.BcaOneClickActivity"/>

        <activity android:name=".bcaoneklik.BcaOneClickEditActivity"/>

        <activity
            android:name=".bcaoneklik.activity.ListPaymentTypeActivity"
            android:label="@string/label_payment_setting"/>

        <service
            android:name="com.tokopedia.transaction.purchase.services.TxActionIntentService"
            android:exported="false"/>
        <service
            android:name="com.tokopedia.transaction.cart.services.TopPayIntentService"
            android:exported="false"/>
        <service
            android:name="com.tokopedia.transaction.addtocart.services.ATCIntentService"
            android:exported="false"/>
    </application>

</manifest>
