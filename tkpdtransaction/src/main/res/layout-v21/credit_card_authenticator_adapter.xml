<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authentication_adapter_root_view"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginBottom="16dp"
        android:background="@color/grey_500" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/small_dp"
        android:layout_marginRight="@dimen/small_dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_dp"
            android:layout_marginRight="@dimen/small_dp"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:id="@+id/authentincation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black_54"
                tools:text="Autentikasi Tunggal" />

            <TextView
                android:id="@+id/authentincation_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black_54"
                tools:text="Anda hanya akan diminta memasukkan CVV\nuntuk setiap transaksi. Verifikasi via SMS\nakan diperlukan untuk transaksi kasus tertentu." />

        </LinearLayout>

        <CheckBox
            android:id="@+id/selection_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:buttonTint="@color/light_blue"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>