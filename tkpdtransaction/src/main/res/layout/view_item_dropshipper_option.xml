<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_dropshipper_option_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_dropshipper_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:lineSpacingExtra="6sp"
        tools:text="Dropshipper" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/icon_info"
        android:layout_toRightOf="@id/tv_dropshipper_text"
        android:layout_toEndOf="@id/tv_dropshipper_text"
        tools:ignore="ContentDescription" />

    <Switch
        android:id="@+id/sw_dropshipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/tv_dropshipper_text"
        android:layout_toRightOf="@+id/tv_dropshipper_text" />

</RelativeLayout>
