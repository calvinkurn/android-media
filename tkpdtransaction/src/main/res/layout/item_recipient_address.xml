<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_shipment_recipient_address_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout android:id="@+id/ll_address_radio_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <RadioButton android:id="@+id/rb_check_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/medium_green" />

    </LinearLayout>

    <RelativeLayout android:id="@+id/rl_recipient_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ll_address_radio_button_container"
        android:layout_toStartOf="@id/ll_address_radio_button_container"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/white">

        <TextView android:id="@+id/tv_text_address_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textSize="12sp"
            tools:ignore="SmallSp"
            tools:text="Alamat Kantor" />

        <TextView android:id="@+id/tv_recipient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_text_address_description"
            android:layout_marginBottom="3dp"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            tools:ignore="SmallSp"
            tools:text="Agus Maulana" />

        <TextView
            android:id="@+id/tv_recipient_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recipient_name"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            android:lineSpacingExtra="3dp"
            tools:ignore="SmallSp"
            tools:text="Jl. Letjen S. Parman Kav.77, Wisma 77 Tower 2,\nTokopedia Lt. 2, Jakarta, 0817 1234 5678" />

    </RelativeLayout>

</RelativeLayout>