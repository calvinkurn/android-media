<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_med">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_dialog_finish_order"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_dp"
            android:textSize="@dimen/text_size_l_medium"
            android:text="@string/body_dialog_finish_order" />

        <TextView
            android:id="@+id/card_deletion_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_l_medium"
            android:layout_marginTop="@dimen/margin_vs"
            android:layout_marginBottom="@dimen/large_dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:gravity="center"
                android:text="@string/title_cancel"
                android:textStyle="bold"
                android:textColor="@color/medium_green" />

            <TextView
                android:id="@+id/finish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:gravity="center"
                android:text="@string/title_done"
                android:textStyle="bold"
                android:textColor="@color/medium_green" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>