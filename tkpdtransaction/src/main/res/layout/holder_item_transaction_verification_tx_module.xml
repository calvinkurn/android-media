<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cards_ui_selected"
                android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/but_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/overflow_selected"
        android:src="@drawable/ic_new_action_overflow_black"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/payment_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/but_overflow"
        android:layout_toLeftOf="@+id/but_overflow"
        android:layout_toStartOf="@+id/but_overflow"
        android:textColor="@color/tkpd_light_green"
        android:textSize="@dimen/font_small"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_ref"
        android:layout_toLeftOf="@+id/but_overflow"
        android:layout_toStartOf="@+id/but_overflow"
        android:textSize="@dimen/fontvs"/>

    <TextView
        android:id="@+id/total_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginBottom="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vs"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/normal_payment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_invoice"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold"
                tools:text="Dari : "/>

            <TextView
                android:id="@+id/user_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tkpd_dark_gray"
                android:textSize="@dimen/fontvs"/>

            <TextView
                android:id="@+id/user_account"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/tkpd_dark_gray"
                android:textSize="@dimen/fontvs"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".60"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold"
                tools:text="Ke : "/>

            <TextView
                android:id="@+id/system_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tkpd_dark_gray"
                android:textSize="@dimen/fontvs"/>

            <TextView
                android:id="@+id/system_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tkpd_dark_gray"
                android:textSize="@dimen/fontvs"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/unchangeable_payment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_invoice"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/payment_method_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_payment_procedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/normal_payment_info"
        android:text="@string/title_payment_procedure"
        style="@style/Button.Submit.Green.Full"
        android:layout_marginTop="@dimen/margin_ms"
        android:focusable="false"
        android:visibility="gone"/>

</RelativeLayout>