<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_4"
    android:layout_marginTop="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.core.customView.RoundedCornerImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_width_brand"
            android:layout_height="@dimen/image_width_brand"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/grey_1100"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="@dimen/dp_8" />


        <TextView
            android:id="@+id/tv_deal_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/margin_small"
            android:fontFamily="sans-serif-medium"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/black_39"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="sans-serif"
            android:textColor="@color/black_40"
            android:textSize="@dimen/dp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/tv_redeem_locations"
            app:layout_constraintLeft_toRightOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_redeem_locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:fontFamily="sans-serif"
            android:textColor="@color/black_40"
            android:textSize="@dimen/dp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintLeft_toRightOf="@+id/imageView" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>