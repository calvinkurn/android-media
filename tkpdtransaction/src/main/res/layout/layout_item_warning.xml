<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_warning_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fce3e4"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="@dimen/padding_ms"
              android:paddingLeft="@dimen/padding_med"
              android:paddingRight="@dimen/padding_med"
              android:paddingTop="@dimen/padding_ms"
              android:visibility="gone"
              tools:visibility="visible">

    <TextView
        android:id="@+id/tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_warning_red"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_warning_red"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:textSize="11sp"
        android:textStyle="normal"
        tools:ignore="SmallSp"
        tools:text="Toko sedang tutup sementara jalsnfd;slkndf ljkasdaksd laslknlaksndfa"
        tools:textColor="#d30b16"/>

    <TextView
        android:id="@+id/tv_warning_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="11sp"
        android:textStyle="normal"
        android:visibility="gone"
        tools:ignore="SmallSp"
        tools:text="Toko sedang "
        tools:textColor="#d30b16"/>

</LinearLayout>