<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"
            app:contentPadding="@dimen/padding_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shipping_dest"
                    android:textColor="@color/time_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="#EEEEEE"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_title_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/filter_sort_h"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_choose_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_vs"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:layout_weight=".50"
                        android:background="@drawable/btn_shop"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:text="@string/title_choose_address"
                        android:textColor="@color/label_color"/>

                    <TextView
                        android:id="@+id/btn_add_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".50"
                        android:background="@drawable/btn_shop"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:text="@string/title_new_address"
                        android:textColor="@color/label_color"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_shipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"
            app:contentPadding="@dimen/padding_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shipping_agency"
                    android:textColor="@color/label_color"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/sp_shipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/title_service_type"
                    android:textColor="@color/label_color"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/sp_shipment_package"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_geo_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"
            app:contentPadding="@dimen/padding_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_delivery_location_cart"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"/>

                <RelativeLayout
                    android:id="@+id/layout_value_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_vs">

                    <ImageView
                        android:id="@+id/iv_icon_geo_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_icon_market_toped"
                        tools:ignore="ContentDescription"/>

                    <ImageView
                        android:id="@+id/btn_change_value_location"
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/chevron_thin_right"
                        tools:ignore="ContentDescription"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_value_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/iv_icon_geo_location"
                        android:layout_toLeftOf="@+id/btn_change_value_location"
                        android:layout_toRightOf="@+id/iv_icon_geo_location"
                        android:layout_toStartOf="@+id/btn_change_value_location"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:hint="@string/choose_location"
                        android:paddingEnd="@dimen/margin_vs"
                        android:paddingLeft="@dimen/margin_vs"
                        android:paddingRight="@dimen/margin_vs"
                        android:paddingStart="@dimen/margin_vs"
                        android:textSize="@dimen/font_small"/>

                </RelativeLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_error_geo_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/error_field_required"
                    android:textColor="@color/red_400"
                    android:visibility="gone"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cb_prices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"
            app:contentPadding="@dimen/padding_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/pb_price"
                    android:layout_width="@dimen/img_thumb_m"
                    android:layout_height="@dimen/img_thumb_m"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/holder_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/title_shipping_cost"
                        android:textColor="@color/time_color"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap"/>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_save"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</ScrollView>