<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_promo_suggestion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_ms"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginRight="@dimen/margin_ms"
                android:layout_marginStart="@dimen/margin_ms"
                android:background="@drawable/btn_share_transaparent"
                android:padding="8dp">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_grey"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="11sp"
        tools:ignore="RelativeOverlap,SmallSp"
        tools:text="Potensi mendapatkan Gratis Ongkir sebesar"/>

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:paddingBottom="5dp"
        android:text="Rp35.000."
        android:textColor="@color/black_70"
        android:textSize="11sp"
        tools:ignore="SmallSp"/>

</RelativeLayout>
