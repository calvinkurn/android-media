<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_small">

    <ProgressBar
        android:id="@+id/pb_main_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_ticker_gtm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:background="@drawable/bg_yellow_border_yelow"
        android:maxLines="3"
        android:padding="@dimen/padding_small"
        android:visibility="gone"
        tools:text="vhashkjalsla asbhdkashahs askjdhasjdhas asdbaksdlasd"
        tools:visibility="visible"/>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ticker_gtm"
        android:visibility="gone"
        tools:ignore="ObsoleteLayoutParam"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                app:contentPadding="@dimen/padding_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/holder_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="#FFADAD"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_error_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_vs"
                            android:gravity="center"
                            android:text="@string/label_error_message_1_count_notif"
                            android:textColor="@color/tkpd_dark_red"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_error_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/label_error_message_2_count_notif"
                            android:textColor="@color/label_color"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_transaction_total_payment"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_total_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold"
                            tools:text="Rp 200.000,-"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et_tkpd_balance"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:text="@string/label_transaction_info_deposit_tokopedia"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs"/>

                        <TextView
                            android:id="@+id/tv_deposit_tokopedia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs"
                            tools:text="Rp 2.000.213,-"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/holder_loyalty_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_vs"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/margin_vs">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_loyalty_points"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs"/>

                        <TextView
                            android:id="@+id/cart_loyalty_point_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:textSize="@dimen/fontvs"/>

                        <TextView
                            android:id="@+id/tv_loyalty_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs"
                            tools:text="Rp 2.000.213,-"/>
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_med"/>

                    <RelativeLayout
                        android:id="@+id/btn_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/saldo_left_wrapper"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_med"
                        android:background="@drawable/cards_ui_selected"
                        android:gravity="center"
                        android:padding="@dimen/padding_small"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_logo_btn_payment_method"
                            android:layout_width="55sp"
                            android:layout_height="28sp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_vs"
                            android:layout_marginRight="@dimen/margin_vs"
                            android:layout_toLeftOf="@+id/tv_desc_btn_payment_method"
                            android:layout_toStartOf="@+id/tv_desc_btn_payment_method"
                            android:visibility="gone"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/icon_bca"/>

                        <TextView
                            android:id="@+id/tv_desc_btn_payment_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:drawablePadding="@dimen/padding_small"
                            android:gravity="center"
                            android:text="Pilih metode pembayaran dulu"
                            android:textColor="@color/href_link"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"/>

                        <ImageView
                            android:layout_width="@dimen/small_dp"
                            android:layout_height="@dimen/small_dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_vs"
                            android:layout_marginStart="@dimen/margin_vs"
                            android:layout_toEndOf="@+id/tv_desc_btn_payment_method"
                            android:layout_toRightOf="@+id/tv_desc_btn_payment_method"
                            android:background="@drawable/overflow_selected"
                            android:src="@drawable/chevron_down"
                            tools:ignore="ContentDescription"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_info_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/payment_wrapper"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@color/green_200"
                        android:padding="@dimen/margin_vs"
                        android:visibility="gone"
                        tools:text="Tidak dikenakan biaya"/>

                    <LinearLayout
                        android:id="@+id/holder_use_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/payment_label"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/margin_vs"
                        android:paddingTop="@dimen/margin_small"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_currency_rp"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fonts"
                            android:textStyle="bold"
                            android:visibility="visible"/>

                        <EditText
                            android:id="@+id/et_use_deposit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/title_use_tokopedia_balance"
                            android:inputType="number"
                            android:textSize="@dimen/fonts"
                            android:visibility="visible"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_checkout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_below="@id/payment_area"
                        android:background="@drawable/btn_buy"
                        android:gravity="center"
                        android:text="@string/tittle_checkout"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small"
                        android:textStyle="bold"/>

                    <CheckBox
                        android:id="@+id/cb_use_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_below="@id/checkout_but"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/title_use_promo_code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:id="@+id/holder_use_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/btn_check_voucher"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_vl"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginStart="@dimen/margin_small"
                            android:background="@drawable/green_button_rounded"
                            android:gravity="center"
                            android:padding="@dimen/margin_small"
                            android:text="@string/title_check"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_et_voucher_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/btn_check_voucher"
                            android:layout_toStartOf="@id/btn_check_voucher">

                            <EditText
                                android:id="@+id/et_voucher_code"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_vl"
                                android:hint="@string/label_transaction_hint_form_voucher_code"
                                android:lines="1"/>


                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/tv_voucher_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/til_et_voucher_code"
                            tools:text="Total bolo bolo"/>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_cash_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                app:contentPadding="@dimen/padding_small"
                tools:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_label_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_transaction_potential_cashback"
                        android:textColor="@color/green_500"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_cash_back_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@+id/tv_label_1"
                        android:layout_toRightOf="@+id/tv_label_1"
                        android:gravity="end"
                        android:textColor="@color/green_500"
                        android:textStyle="bold"
                        tools:text="5000"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                app:contentPadding="@dimen/padding_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/donasi_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Berdonasi untuk sesama Top100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_medium"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:maxWidth="@dimen/store_name"/>

                    <CheckBox
                        android:id="@+id/donasi_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:layout_below="@id/donasi_title"
                        android:gravity="center|left"
                        tools:text="Donasi Rp 100"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:layout_below="@id/donasi_title"
                        android:layout_toRightOf="@id/donasi_checkbox"
                        android:layout_marginLeft="@dimen/margin_small">

                        <ImageView
                            android:id="@+id/donasi_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/info_icon"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>