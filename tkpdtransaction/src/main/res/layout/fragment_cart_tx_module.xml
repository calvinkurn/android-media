                                android:layout_height="wrap_content"
                                android:layout_below="@id/til_et_voucher_code"
                                tools:text="Total bolo bolo" />

                        </RelativeLayout>-->

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/instant_promo_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="2dp"
                    app:contentPadding="@dimen/dp_10"
                    tools:visibility="gone">

                    <LinearLayout
                        android:id="@+id/instant_insert_voucher_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/instant_insert_voucher_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Ini tes kode Promo instant"/>

                        <TextView
                            android:id="@+id/instant_insert_voucher_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Gunakan Sekarang"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_cash_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="2dp"
                    app:contentPadding="@dimen/dp_10"
                    tools:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_label_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_transaction_potential_cashback"
                            android:textColor="@color/green_500"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_cash_back_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_toEndOf="@+id/tv_label_1"
                            android:layout_toRightOf="@+id/tv_label_1"
                            android:gravity="end"
                            android:textColor="@color/green_500"
                            android:textStyle="bold"
                            tools:text="5000"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="2dp"
                    app:contentPadding="@dimen/dp_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/donasi_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:maxWidth="@dimen/store_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium"
                            android:textStyle="bold"
                            tools:text="Berdonasi untuk sesama Top100"/>

                        <CheckBox
                            android:id="@+id/donasi_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/btn_height"
                            android:layout_below="@id/donasi_title"
                            android:gravity="center|left"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs"
                            android:textStyle="bold"
                            tools:text="Donasi Rp 100"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/btn_height"
                            android:layout_below="@id/donasi_title"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@id/donasi_checkbox">

                            <ImageView
                                android:id="@+id/donasi_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/info_icon"/>

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>
</RelativeLayout>