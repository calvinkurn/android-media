<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/title_delete_bca_one_click"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_large"
        android:layout_marginTop="@dimen/med_dp"/>

    <TextView
        android:id="@+id/card_holder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "Jeremy Teti"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_30"/>

    <TextView
        android:id="@+id/card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "8626 1786 1862"
        android:gravity="center"
        android:layout_marginTop="@dimen/med_dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/med_dp"
        android:padding="@dimen/small_dp">

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/small_dp"
            android:layout_marginEnd="@dimen/small_dp"
            android:background="@drawable/btn_plain"
            android:text="@string/title_cancel"/>

        <TextView
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_green_3dp"
            android:layout_marginLeft="@dimen/small_dp"
            android:layout_marginStart="@dimen/small_dp"
            android:textColor="@color/white"
            android:text="@string/title_delete"/>

    </LinearLayout>

</LinearLayout>