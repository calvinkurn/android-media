<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/bg_cart_item_normal_mode"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    app:contentPadding="@null">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small">

        <LinearLayout
            android:id="@+id/holder_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="#FFADAD"
            android:orientation="vertical"
            android:padding="@dimen/padding_small"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_error_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_vs"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_error_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/label_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/holder_error"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_overflow"
            android:layout_toStartOf="@+id/btn_overflow"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxWidth="@dimen/store_name"
            android:minHeight="?actionBarSize"
            android:textColor="@color/black"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"
            tools:text="Shop Name" />

        <ImageView
            android:id="@+id/btn_overflow"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/holder_error"
            android:background="@drawable/overflow_selected"
            android:src="@drawable/ic_new_action_overflow_black"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greyish_bg" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cart_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="gone" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_dropshiper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:text="@string/title_send_as_dropship"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small"
        app:backgroundTint="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/holder_dropshiper_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_small"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_et_dropshiper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_dropshiper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_hint_cart_item_dropshipper_name"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_800" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_et_dropshiper_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_dropshiper_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_hint_cart_item_dropshipper_phone"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_800" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greyish_bg" />

    <RelativeLayout
        android:id="@+id/holder_detail_cart_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_cart_1">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_icon_detail_cart_toggle"
            android:layout_toStartOf="@+id/iv_icon_detail_cart_toggle"
            android:padding="@dimen/margin_small"
            android:text="@string/title_details_info"
            android:textColor="@color/label_color"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_icon_detail_cart_toggle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/arrow_drop_down"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_1"
            android:background="@color/greyish_bg" />

    </RelativeLayout>

    <com.tokopedia.transaction.customview.expandablelayout.ExpandableLinearLayout
        android:id="@+id/holder_detail_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:expandable_layout_duration="400"
        app:expandable_layout_expanded="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_small"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_shipping_to"
                android:textColor="@color/label_color"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_shipping_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:textColor="@color/href_link"
                android:textSize="@dimen/font_small"
                tools:text="Test RPX" />

            <com.tokopedia.transaction.pickuppoint.view.customview.PickupPointLayout
                android:id="@+id/pickup_point_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_shipping_agency"
                android:textColor="@color/label_color"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_shipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:textColor="@color/href_link"
                android:textSize="@dimen/font_small"
                tools:text="JNE - YES" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_use_insurance"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/font_small" />

                <ImageView
                    android:id="@+id/img_insurance_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_vvs"
                    android:layout_marginStart="@dimen/margin_vvs"
                    android:src="@drawable/info_icon" />

            </LinearLayout>

            <Spinner
                android:id="@+id/sp_use_insurance"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:textSize="@dimen/font_small" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_left_stock"
                android:textColor="@color/label_color"
                android:textSize="@dimen/font_small" />

            <Spinner
                android:id="@+id/sp_shipment_option_choosen"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:textSize="@dimen/font_small" />

            <LinearLayout
                android:id="@+id/calculation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_small">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_weight="1"
                        android:text="@string/title_total_item"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_small"
                        tools:text="1 Kg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_weight="1"
                        android:text="@string/title_sub_total"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_sub_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_small"
                        tools:text="Rp 20.000,-" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_weight="1"
                        android:text="@string/title_shipping_cost"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_shipping_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_small"
                        tools:text="Rp 20.000,-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_weight="1"
                        android:text="@string/title_additional_cost"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_additional_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_small"
                        tools:text="Rp 20.000,-" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.tokopedia.transaction.customview.expandablelayout.ExpandableLinearLayout>

    <LinearLayout
        android:id="@+id/total_price_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_vs"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_total"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/total_price_progress_bar"
            android:layout_width="@dimen/img_thumb_bit_small"
            android:layout_height="@dimen/img_thumb_bit_small" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Rp 20.000,-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/holder_action_editor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@color/green_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/title_cancel"
            android:textColor="#ffffff" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="#116216" />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/submit_but"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>