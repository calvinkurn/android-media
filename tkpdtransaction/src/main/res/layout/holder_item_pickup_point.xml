<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_ms"
    android:layout_marginRight="@dimen/margin_ms"
    android:layout_marginTop="@dimen/margin_ms"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/new_margin_med">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="Alfamart - Rawa Belong" />

            <ImageButton
                android:id="@+id/btn_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_circle_grey_2" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Jl. Rw. Belong, RT.2/RW.6, Sukabumi Utara, Kebayoran Baru, Kota Jakarta Barat, Daerah Khu.." />

        <TextView
            android:id="@+id/tv_show_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_icon_location_grey"
            android:drawablePadding="@dimen/padding_vs"
            android:drawableStart="@drawable/ic_icon_location_grey"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:text="@string/label_show_map"
            android:textColor="@color/tkpd_main_green"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>

</android.support.v7.widget.CardView>
