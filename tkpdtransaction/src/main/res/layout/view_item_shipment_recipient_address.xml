<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_shipment_recipient_address_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_image_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_image_address_house"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_address_house"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_text_address_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/iv_image_address_house"
            android:layout_toRightOf="@id/iv_image_address_house"
            android:text="Alamat Kantor"
            android:textSize="12sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/tv_recipient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_text_address_description"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@id/iv_image_address_house"
            android:layout_toRightOf="@id/iv_image_address_house"
            android:text="Agus Maulana"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/tv_recipient_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recipient_name"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/iv_image_address_house"
            android:layout_toRightOf="@id/iv_image_address_house"
            android:lineSpacingExtra="3dp"
            android:text="Jl. Letjen S. Parman Kav.77, Wisma 77 Tower 2,\nTokopedia Lt. 2, Jakarta, 0817 1234 5678"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            tools:ignore="SmallSp" />

        <com.tokopedia.transaction.pickuppoint.view.customview.PickupPointLayout
            android:id="@+id/pickup_point_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_recipient_address"
            android:layout_marginEnd="@dimen/new_margin_med"
            android:layout_marginRight="@dimen/new_margin_med"
            android:layout_toEndOf="@id/iv_image_address_house"
            android:layout_toRightOf="@id/iv_image_address_house"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_add_or_change_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_image_address_container"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_add_or_change_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Ganti alamat atau gunakan beberapa alamat"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:textStyle="normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/ll_add_or_change_address_container"
        android:background="#e0e0e0" />
</RelativeLayout>