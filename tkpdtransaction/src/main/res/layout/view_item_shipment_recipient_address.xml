<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shipment_recipient_address_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout android:id="@+id/rl_image_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <ImageView android:id="@+id/iv_image_address_house"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_address_house" />

        <RelativeLayout android:id="@+id/rl_detail_shipment_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_image_address_house"
            android:layout_toRightOf="@id/iv_image_address_house">

            <TextView android:id="@+id/tv_text_address_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textSize="12sp"
                tools:ignore="SmallSp"
                tools:text="Alamat Kantor" />

            <TextView android:id="@+id/tv_recipient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_text_address_description"
                android:layout_marginBottom="3dp"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                tools:ignore="SmallSp"
                tools:text="Agus Maulana" />

            <TextView android:id="@+id/tv_recipient_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_recipient_name"
                android:layout_marginBottom="3dp"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                android:lineSpacingExtra="3dp"
                tools:ignore="SmallSp"
                tools:text="Jl. Letjen S. Parman Kav.77, Wisma 77 Tower 2,\nTokopedia Lt. 2, Jakarta" />

            <TextView android:id="@+id/tv_recipient_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_recipient_address"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                android:lineSpacingExtra="3dp"
                tools:ignore="SmallSp"
                tools:text="0817 1234 5678" />

            <com.tokopedia.transaction.pickuppoint.view.customview.PickupPointLayout
                android:id="@+id/pickup_point_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_recipient_phone"
                android:layout_marginEnd="@dimen/new_margin_med"
                android:layout_marginRight="@dimen/new_margin_med"
                android:layout_marginTop="@dimen/new_margin_med"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout android:id="@+id/ll_add_or_change_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_image_address_container"
        android:background="@color/white">

        <TextView android:id="@+id/tv_add_or_change_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/orange"
            android:text="Ganti alamat atau gunakan beberapa alamat" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"
        android:layout_above="@id/ll_add_or_change_address_container" />

</RelativeLayout>