<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/card_elevation_checkout">

    <RelativeLayout
        android:id="@+id/rl_shipment_recipient_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_200">

        <RelativeLayout
            android:id="@+id/rl_image_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_image_address_house"
                android:layout_width="36dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_address_house"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/rl_detail_shipment_recipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/iv_image_address_house"
                android:layout_toRightOf="@id/iv_image_address_house"
                android:orientation="vertical">

                <include layout="@layout/item_recipient_address" />

                <com.tokopedia.transaction.pickuppoint.view.customview.PickupPointLayout
                    android:id="@+id/pickup_point_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_add_or_change_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_image_address_container"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_add_or_change_address"
                style="@style/TextSmallMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="@string/label_button_change_address_or_send_to_multiple_address"
                android:textColor="@color/tkpd_main_green" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@id/ll_add_or_change_address_container"
            android:background="#e0e0e0" />

    </RelativeLayout>

</android.support.v7.widget.CardView>