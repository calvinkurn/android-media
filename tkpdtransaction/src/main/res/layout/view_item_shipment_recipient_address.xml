<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shipment_recipient_address_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout android:id="@+id/rl_image_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView android:id="@+id/iv_image_address_house"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_address_house" />

        <TextView android:id="@+id/tv_text_address_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_image_address_house"
            android:layout_toRightOf="@id/iv_image_address_house"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="3dp"
            android:textSize="12sp"
            tools:ignore="SmallSp"
            android:text="Alamat Kantor" />

        <TextView android:id="@+id/tv_primer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_text_address_description"
            android:layout_toRightOf="@id/tv_text_address_description"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="3dp"
            android:textSize="12sp"
            android:text="Utama"
            android:visibility="visible" />

        <TextView android:id="@+id/tv_recipient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_text_address_description"
            android:layout_toEndOf="@id/iv_image_address_house"
            android:layout_toRightOf="@id/iv_image_address_house"
            android:layout_marginBottom="3dp"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            tools:ignore="SmallSp"
            android:text="Agus Maulana" />

        <TextView android:id="@+id/tv_recipient_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recipient_name"
            android:layout_toEndOf="@id/iv_image_address_house"
            android:layout_toRightOf="@id/iv_image_address_house"
            android:layout_marginBottom="3dp"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            android:lineSpacingExtra="3dp"
            tools:ignore="SmallSp"
            android:text="Jl. Letjen S. Parman Kav.77, Wisma 77 Tower 2,\nTokopedia Lt. 2, Jakarta" />

        <TextView android:id="@+id/tv_recipient_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recipient_address"
            android:layout_toEndOf="@id/iv_image_address_house"
            android:layout_toRightOf="@id/iv_image_address_house"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            android:lineSpacingExtra="3dp"
            tools:ignore="SmallSp"
            android:text="0817 1234 5678" />


    </RelativeLayout>

    <LinearLayout android:id="@+id/ll_add_or_change_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_image_address_container"
        android:background="@color/white">

        <TextView android:id="@+id/tv_add_or_change_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/orange"
            android:text="Ganti alamat atau gunakan beberapa alamat" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"
        android:layout_above="@id/ll_add_or_change_address_container" />
</RelativeLayout>