<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_shipment_hour_atc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/cards_ui_green"
    android:padding="@dimen/padding_small"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/box"
            android:layout_width="75dp"
            android:layout_height="41dp"
            app:srcCompat="@drawable/box_atc"/>

        <TextView
            android:id="@+id/arrow_max_hour"
            android:layout_width="124dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow_atc"
            android:gravity="center"
            tools:text="Max 8 jam"
            android:textColor="@color/green_300"
            android:textStyle="bold"
            android:textSize="11sp"/>

        <ImageView
            android:id="@+id/deliver"
            android:layout_width="66dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/deliver_atc"/>

    </LinearLayout>

    <TextView
        android:id="@+id/desc_max_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="12sp"
        tools:text="@string/holder_desc_atc"/>

</LinearLayout>