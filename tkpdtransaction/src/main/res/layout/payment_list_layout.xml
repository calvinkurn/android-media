<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment_list_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/small_dp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/credit_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_credit_card"
                    android:textSize="@dimen/text_size_l_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/add_credit_card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/btn_plain"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cc" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/message_no_credit_card"
                            android:textColor="@color/label_color" />

                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/credit_card_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/quick_payment_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quick_payment"
                        android:textSize="@dimen/text_size_l_medium"
                        android:visibility="gone"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/bca_one_click_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/bca_one_click_register_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/add_bca_one_click_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_plain"
                        android:orientation="vertical"
                        android:padding="@dimen/small_dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bca_one_click" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_plain"
                        android:gravity="center_vertical"
                        android:padding="@dimen/small_dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="@dimen/btn_height"
                                android:layout_height="@dimen/btn_height"
                                android:src="@drawable/ic_logo_oneklik_bca" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/bca_one_click_register_button"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/btn_height"
                            android:layout_weight="1"
                            android:background="@drawable/btn_green_3dp"
                            android:gravity="center"
                            android:text="@string/title_register"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.tokopedia.core.customwidget.SwipeToRefresh>

</RelativeLayout>