<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/filter"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:entries="@array/transaction_filter_type_ppl"
            android:textSize="@dimen/fontvs"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.transaction.purchase.view.ClearableEditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="@string/title_invoice_no_and_user_name"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"/>
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"

            android:weightSum="1">

            <EditText
                android:id="@+id/start_date"
                android:layout_width="@dimen/tx_list_search_btn"
                android:layout_height="@dimen/tx_list_search_btn_h"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="0.50"
                android:background="@drawable/btn_cancel"
                android:focusable="false"
                android:gravity="center"
                android:inputType="date"
                android:text="@string/start_date_button"
                android:textSize="@dimen/fonts"/>

            <EditText
                android:id="@+id/end_date"
                android:layout_width="@dimen/tx_list_search_btn"
                android:layout_height="@dimen/tx_list_search_btn_h"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="0.50"
                android:background="@drawable/btn_cancel"
                android:focusable="false"
                android:gravity="center"
                android:inputType="date"
                android:text="@string/end_date_button"
                android:textSize="@dimen/fonts"/>


        </LinearLayout>

        <TextView
            android:id="@+id/search_button"
            android:layout_width="@dimen/tx_list_search_btn"
            android:layout_height="@dimen/tx_list_search_btn_h"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/hint_search_purchase"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>