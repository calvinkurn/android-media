<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Komplain"
        android:textSize="@dimen/text_size_large"
        android:layout_marginTop="@dimen/med_dp"/>

    <TextView
        android:id="@+id/complaint_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apakah Pesanan dari toko YYY bermasalah?"
        android:gravity="center"
        android:layout_marginTop="@dimen/large_dp"/>

    <TextView
        android:id="@+id/complaint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klik Ya untuk komplain barang yang berkendala atau belum sampai.\n Klik kembali untuk membatalkan aksi ini"
        android:gravity="center"
        android:layout_marginTop="@dimen/med_dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/med_dp"
        android:padding="@dimen/small_dp">

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/small_dp"
            android:layout_marginEnd="@dimen/small_dp"
            android:background="@drawable/btn_plain"
            android:text="Kembali"/>

        <TextView
            android:id="@+id/complaint_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_green_3dp"
            android:layout_marginLeft="@dimen/small_dp"
            android:layout_marginStart="@dimen/small_dp"
            android:textColor="@color/white"
            android:text="Ya"/>

    </LinearLayout>

</LinearLayout>