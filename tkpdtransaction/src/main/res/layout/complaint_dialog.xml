<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minWidth="300dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/med_dp"
        android:gravity="center_horizontal"
        android:text="Komplain"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/complaint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/med_dp"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/text_complaint_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/med_dp"
        android:padding="@dimen/small_dp">

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginEnd="@dimen/small_dp"
            android:layout_marginRight="@dimen/small_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_plain"
            android:gravity="center"
            android:text="Kembali" />

        <TextView
            android:id="@+id/complaint_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="@dimen/small_dp"
            android:layout_marginStart="@dimen/small_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_green_3dp"
            android:gravity="center"
            android:text="Ya"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>