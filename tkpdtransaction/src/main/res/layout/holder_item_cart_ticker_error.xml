<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_ms"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginRight="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:background="@drawable/border_rectangle_yellow"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:ignore="UselessParent"
        tools:visbility="visible">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/yellow_ticker" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/tv_error"
                style="@style/TextSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terjadi kendala pada pesanan Anda, lihat di bawah untuk info lebih lengkap." />

            <TextView
                android:id="@+id/btn_error_action"
                style="@style/TextSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hapus produk yang berkendala"
                android:textColor="@color/medium_green"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>