<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/padding_small"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/notes_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_change_awb_instruction"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notes_label_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes_label"
            android:text="@string/sub_title_change_awb_instruction" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes_label_subtitle"
            android:layout_marginTop="@dimen/margin_large">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/notes_text_input_layout"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/label_awb_number">

                <EditText
                    android:id="@+id/cancel_order_notes_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"/>

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/scan_barcode_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_barcode"/>

        </LinearLayout>

        <Button
            android:id="@+id/cancel_order_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/green_button_rounded_unify"
            android:gravity="center"
            android:text="@string/title_change"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>