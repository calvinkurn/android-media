<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_send_to_pick_up_booth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:drawableRight="@drawable/ic_chevron_right"
        android:gravity="center_vertical"
        android:text="@string/label_send_to_pick_up_booth"
        android:textColor="@color/tkpd_main_green"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/bg_label_outline_grey"
        android:orientation="vertical"
        android:padding="@dimen/padding_detail"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pick_up_booth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="Alfamart - Rawa Belong" />

            <ImageButton
                android:id="@+id/btn_cancel_pick_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/ic_clear_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pick_up_booth_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ms"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Jl. Rw. Belong, RT.2/RW.6, Sukabumi Utara, Kebayoran Baru, Kota Jakarta Barat, Daerahâ€¦" />

        <TextView
            android:id="@+id/tv_edit_pick_up_booth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_edit"
            android:drawablePadding="@dimen/padding_vs"
            android:drawableStart="@drawable/ic_action_edit"
            android:text="@string/label_edit_pickup" />

    </LinearLayout>

</LinearLayout>