<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_shipment_info_ticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginRight="@dimen/margin_ms"
                android:layout_marginTop="@dimen/new_margin_med"
                android:background="@drawable/border_rectangle_yellow"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visbility="visible">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/yellow_ticker" />

                <TextView
                    android:id="@+id/tv_shipment_info_ticker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="7sp"
                    android:padding="@dimen/padding_ms"
                    android:textSize="11sp"
                    tools:text="Kurir toko adalah layanan pengiriman dengan menggunakan kurir dari toko terkait" />

                <ImageButton
                    android:id="@+id/img_bt_close_ticker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@color/transparent"
                    android:foreground="?selectableItemBackground"
                    android:padding="4dp"
                    android:src="@drawable/ic_close_ticker_10dp"
                    android:tint="@color/yellow_ticker" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_margin_med"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    style="@style/TextLabelSmallGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:text="@string/label_shipment_type" />

                <LinearLayout
                    android:id="@+id/ll_shipment_choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_shipment_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black_54"
                        android:textSize="16sp"
                        tools:text="Same Day" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/arrow_drop_down" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:background="@color/grey_300" />

                <TextView
                    style="@style/TextLabelSmallGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:layout_marginTop="@dimen/margin_ms"
                    android:text="@string/label_choose_courier" />

                <TextView
                    style="@style/TextLabelSmallGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:text="@string/label_arrival_probability" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_courier_choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pinpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_margin_med"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    style="@style/TextLabelSmallGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="10sp"
                    android:text="@string/label_pinpoint"
                    android:textStyle="normal" />

                <FrameLayout
                    android:id="@+id/fl_pinpoint_map"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/new_margin_med">

                    <com.google.android.gms.maps.MapView xmlns:map="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/map_view_pinpoint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        map:cameraZoom="17"
                        map:liteMode="true"
                        map:mapType="normal" />

                    <View
                        android:id="@+id/v_no_pinpoint_layer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background_no_pinpoint" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_no_ponpoint_information"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/padding_ms"
                            android:text="@string/label_no_pinpoint_choosen" />

                        <Button
                            android:id="@+id/bt_change_pinpoint"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="14dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:background="@color/white"
                            android:foreground="?selectableItemBackground"
                            android:text="@string/label_change_pinpoint"
                            android:textAllCaps="false"
                            android:textColor="@color/black_54"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/bt_choose_pinpoint"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="14dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:background="@color/white"
                            android:foreground="?selectableItemBackground"
                            android:text="@string/label_choose_pinpoint"
                            android:textAllCaps="false"
                            android:textColor="@color/black_54"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_shipment_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/new_margin_med"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_icon_location_grey_32dp" />

                    <TextView
                        android:id="@+id/tv_shipment_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        tools:text="RT 6 RW 3, DKI Jakarta, 11410, Indonesia" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_margin_med"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:id="@+id/ll_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_label_insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_shipment_insurance"
                        android:textColor="@color/black_70"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/img_bt_insurance_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:contentDescription="@string/image_desc_button_insurance_info"
                        android:padding="@dimen/padding_ms"
                        android:src="@drawable/info_icon"
                        android:visibility="gone" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Switch
                        android:id="@+id/switch_insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/TransactionToogleButton"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_special_insurance_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_ms"
                        android:layout_marginTop="@dimen/margin_ms"
                        android:text="@string/label_insurance_not_available"
                        android:visibility="visible" />

                </LinearLayout>

                <View
                    android:id="@+id/separator_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:layout_marginTop="@dimen/margin_ms"
                    android:background="@drawable/bg_line_separator" />

                <LinearLayout
                    android:id="@+id/ll_partial_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:layout_marginTop="@dimen/margin_ms"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_accept_partial_order_new"
                        android:textColor="@color/black_70"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/img_bt_partly_accept_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:contentDescription="@string/image_desc_button_partial_order_info"
                        android:padding="@dimen/padding_ms"
                        android:src="@drawable/info_icon" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Switch
                        android:id="@+id/switch_partly_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/TransactionToogleButton" />

                </LinearLayout>

                <View
                    android:id="@+id/separator_partial_order"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:layout_marginTop="@dimen/margin_ms"
                    android:background="@drawable/bg_line_separator" />

                <LinearLayout
                    android:id="@+id/ll_dropshipper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:layout_marginTop="@dimen/margin_ms"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_dropshipper_new"
                        android:textColor="@color/black_70"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/img_bt_dropshipper_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:contentDescription="@string/image_desc_button_dropshipper_info"
                        android:padding="@dimen/padding_ms"
                        android:src="@drawable/info_icon" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Switch
                        android:id="@+id/switch_dropshipper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/TransactionToogleButton" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dropshipper_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:layout_marginTop="@dimen/margin_ms"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_shipper_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_hint_cart_item_dropshipper_name">

                        <EditText
                            android:id="@+id/et_shipper_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_vs"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:textSize="@dimen/font_small" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_shipper_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_hint_cart_item_dropshipper_phone">

                        <EditText
                            android:id="@+id/et_shipper_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_vs"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:textSize="@dimen/font_small" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/grey_300" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fees_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_margin_med"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_delivery_price" />

                    <TextView
                        android:id="@+id/tv_delivery_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black_70"
                        tools:text="Rp 125.500" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_insurance_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:layout_marginTop="@dimen/new_margin_med"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_insurance" />

                    <TextView
                        android:id="@+id/tv_insurance_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black_70"
                        tools:text="Rp 125.500" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_insurance_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:text="@string/message_tos_agreement"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_additional_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:layout_marginTop="@dimen/new_margin_med"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_additional_cost" />

                    <TextView
                        android:id="@+id/tv_additional_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black_70"
                        tools:text="Rp 125.500" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/grey_300" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_margin_med"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_shipment_fee" />

                    <TextView
                        android:id="@+id/tv_delivery_fee_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:textColor="@color/colorRed"
                        tools:text="Rp 125.500" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_margin_med"
                android:background="@color/white"
                android:padding="@dimen/padding_ms">

                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_green_enabled"
                    android:text="@string/title_save"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_network_error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
