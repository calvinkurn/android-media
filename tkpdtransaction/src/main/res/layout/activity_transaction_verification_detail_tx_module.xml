<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_yellow_border_yelow"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/txtTanggalTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/label_transaction_date_transaction"
            android:textSize="@dimen/fontvs"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/txtTanggalTransaksi"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="21 Oktober 2014"/>

        <TextView
            android:id="@+id/txtTotalPembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/date"
            android:layout_toRightOf="@+id/date"
            android:gravity="end"
            android:text="@string/label_transaction_total_payment"
            android:textSize="@dimen/fontvs"/>

        <TextView
            android:id="@+id/total_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtTotalPembayaran"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="Rp 200.000,-"/>

        <TextView
            android:id="@+id/indomaret_code_detail_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_invoice"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/cards_ui_2"
            android:gravity="center"
            android:minHeight="@dimen/btn_height"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/transfer_account_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/cards_ui_2"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/txtNoRekeningAsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/label_transaction_bank_account_source"
            android:textSize="@dimen/fontvs"/>

        <TextView
            android:id="@+id/txtNoRekeningTujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txtNoRekeningAsal"
            android:layout_toRightOf="@+id/txtNoRekeningAsal"
            android:gravity="end"
            android:text="@string/label_transaction_bank_account_destination"
            android:textSize="@dimen/fontvs"/>

        <TextView
            android:id="@+id/account_owner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtNoRekeningAsal"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="No Rekening Asal"/>

        <TextView
            android:id="@+id/account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtNoRekeningTujuan"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="No Rekening Tujuan"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/gradient_black_alt"/>

        <LinearLayout
            android:id="@+id/layoutTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/changePayment"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/button_buy_from_cart"
                android:gravity="center"
                android:text="@string/label_button_purchase_edit_payment"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/upload_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/btn_shop"
                android:gravity="center"
                android:text="@string/label_button_purchase_upload_proof"
                android:textColor="@color/label_color"
                android:textSize="@dimen/sp_14"
                android:visibility="visible"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/layoutTemp"
            android:layout_below="@+id/divider"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
    </RelativeLayout>

</LinearLayout>