<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cards_ui_selected"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_avatar"
            android:layout_width="0dp"
            android:layout_height="@dimen/img_thumb_m"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="0.175"
            tools:ignore="ContentDescription"
            tools:src="@drawable/common_google_signin_btn_icon_dark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_preorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_label_preorder_gray"
                android:includeFontPadding="false"
                android:lines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Preorder"
                android:textColor="@color/white"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/invoice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lines="1"
                android:textColor="@color/href_link"
                android:textSize="@dimen/fontvs"
                tools:text="XXXXXXXXXXXXXXXX" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs"
                tools:text="31 February 1999" />

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold"
                tools:text="Bought by: User_Name" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:scrollHorizontally="true"
                android:textSize="@dimen/fontvs"
                tools:text="Menunggu pengejaran dari pihak kepolisian" />

            <LinearLayout
                android:id="@+id/ref_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:text="@string/title_reference_number"
                    android:textSize="@dimen/fontvs" />

                <com.tokopedia.core.customView.TextViewCopyable
                    android:id="@+id/reference_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold"
                    tools:text="A3439i3i3i" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/but_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/overflow_selected"
            android:visibility="gone"
            tools:ignore="UselessParent"
            tools:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_new_action_overflow_black"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>

    <!-- <LinearLayout -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:orientation="vertical" -->
    <!-- android:padding="@dimen/padding_vs" -->
    <!-- android:layout_marginLeft="@dimen/margin_small" -->
    <!-- android:layout_marginRight="@dimen/margin_small" -->
    <!-- android:background="@color/tkpd_yellow_status" -->
    <!-- > -->


    <!-- </LinearLayout> -->

    <LinearLayout
        android:id="@+id/confirm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/receive_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="0.50"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_package_received"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/reject_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_package_not_rcv"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/track_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_track"
            android:textColor="@color/black"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_vs"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:visibility="gone">

        <TextView
            android:id="@+id/upload_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/title_upload_evidence"
            android:textColor="@color/black"
            android:textSize="@dimen/fontvs" />
        <!-- <ImageView -->
        <!-- android:shopId="@+shopId/detail" -->
        <!-- android:layout_gravity="right" -->
        <!-- android:layout_width="@dimen/med_dp" -->
        <!-- android:layout_height="@dimen/med_dp" -->
        <!-- app:srcCompat="@drawable/ic_chevron_right" /> -->
    </LinearLayout>

</LinearLayout>