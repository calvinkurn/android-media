<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_free_shipment_fee_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white">

    <ImageView android:id="@+id/iv_close_banner_shipment_fee"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription"
        android:src="@drawable/ic_close_grey" />

    <ImageView android:id="@+id/iv_image_shipping_car"
        android:layout_width="54dp"
        android:layout_height="26dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        tools:ignore="ContentDescription"
        android:src="@drawable/ic_shipping_car" />

    <TextView android:id="@+id/tv_text_shipping_fee_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_image_shipping_car"
        android:layout_toRightOf="@id/iv_image_shipping_car"
        android:layout_marginTop="12dp"
        android:textSize="11sp"
        tools:ignore="SmallSp"
        android:text="Potensi mendapatkan Gratis Ongkir sebesar"/>

    <TextView android:id="@+id/tv_shpping_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_text_shipping_fee_description"
        android:layout_toEndOf="@id/iv_image_shipping_car"
        android:layout_toRightOf="@id/iv_image_shipping_car"
        android:textColor="@color/black_70"
        android:textSize="11sp"
        tools:ignore="SmallSp"
        android:text="Rp35.000."/>

</RelativeLayout>
