<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?selectableItemBackground"
    android:paddingLeft="@dimen/padding_small_sm"
    android:paddingRight="@dimen/padding_small_sm"
    android:paddingTop="@dimen/padding_small_sm">

    <TextView
        android:id="@+id/tv_shipment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:textSize="14sp"
        tools:text="Same Day" />

    <TextView
        android:id="@+id/tv_price_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_shipment_type"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_toEndOf="@+id/tv_shipment_type"
        android:layout_toRightOf="@+id/tv_shipment_type"
        android:lineSpacingExtra="4sp"
        android:textSize="12sp"
        tools:text="Mulai dari Rp 15.000" />

    <TextView
        android:id="@+id/tv_delivery_time_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shipment_type"
        android:layout_marginBottom="@dimen/padding_small_sm"
        android:lineSpacingExtra="4sp"
        android:textSize="12sp"
        tools:text="(6 - 8 jam pengiriman)" />

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_delivery_time_range"
        android:background="@drawable/bg_line_separator" />

    <ImageButton
        android:id="@+id/img_bt_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_ms"
        android:layout_marginRight="@dimen/margin_ms"
        android:background="@drawable/ic_check_green_24dp"
        android:visibility="gone" />

</RelativeLayout>