<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:background="@color/grey_200">

    <RelativeLayout android:id="@+id/rl_detail_shipment_fee_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <TextView android:id="@+id/tv_total_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:textSize="12sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            tools:text="Jumlah Barang (1 Barang)" />

        <TextView android:id="@+id/tv_total_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_total_item"
            android:layout_toEndOf="@id/tv_total_item"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_70"
            android:gravity="end"
            tools:text="Rp1.400.000" />

        <TextView android:id="@+id/tv_shipping_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_below="@id/tv_total_item"
            android:textSize="12sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            tools:text="Ongkos Kirim (1kg)" />

        <TextView android:id="@+id/tv_shipping_fee_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_item"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:gravity="end"
            tools:text="-" />

        <TextView android:id="@+id/tv_insurance_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_below="@id/tv_shipping_fee"
            android:textSize="12sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:text="Biaya Asuransi" />

        <TextView android:id="@+id/tv_insurance_fee_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shipping_fee"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:gravity="end"
            tools:text="-" />

        <TextView android:id="@+id/tv_promo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_insurance_fee"
            android:textSize="12sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:text="Promo" />

        <TextView android:id="@+id/tv_promo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_insurance_fee"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:gravity="end"
            tools:text="Rp100.000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_detail_shipment_fee_view_layout"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_payable_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif"
            android:text="Total Pembayaran"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView android:id="@+id/tv_payable_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:gravity="end"
            tools:text="Rp1.300.000" />

        <TextView android:id="@+id/tv_promo_free_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_payable_text"
            android:layout_marginTop="9dp"
            android:textSize="12sp"
            android:textColor="@color/black_54"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:text="Anda mendapat gratis ongkir Rp20.000" />

        <TextView android:id="@+id/tv_promo_free_shipping_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_payable_text"
            android:layout_toRightOf="@id/tv_promo_free_shipping"
            android:layout_toEndOf="@id/tv_promo_free_shipping"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_70"
            android:text="Hapus" />

    </RelativeLayout>

</RelativeLayout>