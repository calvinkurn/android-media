<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/credit_card_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small_dp"
            android:layout_marginStart="@dimen/small_dp"
            android:text="Pembayaran Kartu Kredit"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"
            android:textColor="@color/black_70" />

    </RelativeLayout>

    <TextView
        android:id="@+id/credit_card_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kartu Kredit Tersimpan (0/4)"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/small_dp"
        android:layout_marginStart="@dimen/small_dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/black_70" />

    <LinearLayout
        android:id="@+id/add_credit_card_layout"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/message_no_credit_card"
            android:textColor="@color/label_color" />

    </LinearLayout>

</LinearLayout>