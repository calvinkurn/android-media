<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="18dp"
    android:layout_marginRight="@dimen/small_dp"
    android:layout_marginLeft="@dimen/small_dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/credit_card_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:text="@string/header_title_pembayaran_kartu_kredit"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"
            android:textColor="@color/black_70" />

    </RelativeLayout>

    <TextView
        android:id="@+id/credit_card_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sub_header_title_kartu_kredit_tersimpan"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/small_dp"
        android:layout_marginStart="@dimen/small_dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/black_70" />

    <LinearLayout
        android:id="@+id/add_credit_card_layout"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_cc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/message_no_credit_card"
            android:textColor="@color/label_color" />

    </LinearLayout>

</LinearLayout>