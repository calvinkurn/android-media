<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_vvs"
    android:layout_marginTop="@dimen/padding_vvs"
    android:background="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/padding_vvs"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_item_warning"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_label_shop_name"
                style="@style/TextSmallMediumBlack38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:text="Dikirim oleh : "/>

            <TextView
                android:id="@+id/tv_shop_name"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_label_shop_name"
                android:layout_toRightOf="@id/tv_label_shop_name"
                android:lineSpacingExtra="5sp"
                tools:ignore="RelativeOverlap"
                tools:text="Loaa Store"/>

            <ImageView
                android:id="@+id/btn_delete_cart"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_delete_cart"
                tools:ignore="ContentDescription"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_image_product"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="4dp"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_tokocash_icon"/>

                <ImageView
                    android:id="@+id/iv_image_wishlist"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignEnd="@+id/iv_image_product"
                    android:layout_alignRight="@+id/iv_image_product"
                    android:layout_alignTop="@+id/iv_image_product"
                    android:layout_marginEnd="-5dp"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/circle"
                    android:padding="5dp"
                    android:src="@drawable/ic_wishlist"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_image_product"
                    android:layout_toRightOf="@id/iv_image_product"
                    android:paddingLeft="@dimen/padding_ms"
                    android:paddingRight="@dimen/padding_ms"
                    android:paddingStart="@dimen/padding_ms">

                    <TextView
                        android:id="@+id/tv_product_name"
                        style="@style/TextMid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        tools:text="Tas organizer sepeda double container"/>

                    <TextView
                        android:id="@+id/tv_product_price"
                        style="@style/TextMid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_product_name"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/orange_red"
                        tools:text="Rp 200.000"/>

                    <LinearLayout
                        android:id="@+id/product_properties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_product_price"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/iv_free_return_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            tools:src="@drawable/ic_badge_free_return"/>

                        <TextView
                            android:id="@+id/tv_info_free_return"
                            style="@style/TextSmallNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingEnd="8dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="8dp"
                            android:paddingStart="8dp"
                            android:text="Free Returns"
                            android:textSize="12sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/tv_info_preorder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/btn_cancel"
                            android:fontFamily="sans-serif"
                            android:padding="2dp"
                            android:text="PO"
                            android:textSize="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/tv_info_cashback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/green_button"
                            android:fontFamily="sans-serif"
                            android:padding="2dp"
                            android:paddingEnd="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingStart="5dp"
                            android:text="Cashback 5%"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="normal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_properties"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextSmallNormalBlack38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berat : "/>

                        <TextView
                            android:id="@+id/tv_product_weight"
                            style="@style/TextSmallNormalBlack70"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="3kg"/>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingTop="16dp">

                <TextView
                    style="@style/TextSmallNormalBlack38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="Jumlah"/>

                <ImageView
                    android:id="@+id/btn_qty_plus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bg_button_counter_plus"/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_qty"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/btn_qty_plus"
                    android:layout_toStartOf="@id/btn_qty_plus"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingEnd="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/black_70"
                    android:textColorHighlight="@color/medium_green"
                    android:textSize="16sp"
                    app:backgroundTint="@color/medium_green"
                    tools:text="1"/>

                <ImageView
                    android:id="@+id/btn_qty_min"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/et_qty"
                    android:layout_toStartOf="@id/et_qty"
                    android:src="@drawable/bg_button_counter_minus"/>

                <TextView
                    android:id="@+id/tv_error_form_validation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_qty"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:textColor="@color/text_cart_item_error_red"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    tools:ignore="SmallSp"
                    tools:text="Maksimal 2 broh"
                    tools:visibility="visible"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_label_form_remark"
                    style="@style/TextSmallNormalBlack38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Catatan untuk penjual (Opsional)"/>

                <TextView
                    android:id="@+id/tv_label_remark_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@id/tv_label_form_remark"
                    android:layout_toRightOf="@id/tv_label_form_remark"
                    android:fontFamily="sans-serif"
                    android:text="Tulis Catatan"
                    android:textColor="@color/medium_green"
                    android:textSize="12sp"
                    android:textStyle="normal"/>


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_form_remark"
                    android:fontFamily="sans-serif"
                    android:imeActionLabel="Selesai"
                    android:imeOptions="actionDone"
                    android:maxLines="3"
                    android:paddingBottom="16dp"
                    android:textColor="@color/black_70"
                    android:textColorHighlight="@color/medium_green"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:backgroundTint="@color/medium_green"
                    tools:ignore="TextFields"
                    tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim
barangnya gan!"/>

                <TextView
                    android:id="@+id/tv_error_form_remark_validation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_remark"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:textColor="@color/text_cart_item_error_red"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    tools:ignore="SmallSp"
                    tools:text="Maksimal 2 broh"
                    tools:visibility="visible"/>
            </RelativeLayout>


            <View
                android:id="@+id/line_bottom_remark"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e0e0e0"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>