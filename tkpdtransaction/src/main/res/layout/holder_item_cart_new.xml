<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_label_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="5sp"
            android:text="Dikirim oleh : "
            android:textSize="12sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_label_shop_name"
            android:layout_toRightOf="@id/tv_label_shop_name"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="5sp"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:ignore="RelativeOverlap"
            tools:text="Loaa Store"/>

        <ImageView
            android:id="@+id/btn_delete_cart"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_delete"
            tools:ignore="ContentDescription"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_image_product"
                android:layout_width="52dp"
                android:layout_height="52dp"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_tokocash_icon"/>

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_image_product"
                android:layout_toRightOf="@id/iv_image_product"
                android:textColor="@color/black_70"
                android:textSize="14sp"
                tools:text="Tas organizer sepeda double container"/>

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product_name"
                android:layout_toEndOf="@id/iv_image_product"
                android:layout_toRightOf="@id/iv_image_product"
                android:textColor="@color/orange_red"
                android:textSize="14sp"
                tools:text="Rp 200.000"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_info_free_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_badge_free_return"
                android:drawablePadding="@dimen/padding_vvs"
                android:drawableStart="@drawable/ic_badge_free_return"
                android:fontFamily="sans-serif"
                android:paddingEnd="8dp"
                android:paddingLeft="0dp"
                android:paddingRight="8dp"
                android:paddingStart="0dp"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:text="Free Returns"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tv_info_preorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_cancel"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:textSize="10sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:text="PO"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tv_info_cashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_button"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:text="Cashback 5%"
                tools:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="14dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Berat : "
                android:textSize="12sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_product_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_70"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="3kg"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:textColor="#61000000"
                android:textSize="12sp"
                tools:text="Jumlah"/>

            <ImageView
                android:id="@+id/btn_qty_plus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_button_counter_plus"/>

            <EditText
                android:id="@+id/et_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_qty_plus"
                android:layout_toStartOf="@id/btn_qty_plus"
                android:gravity="center_horizontal"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:textColor="@color/black_70"
                android:textSize="16sp"
                tools:text="2"/>

            <ImageView
                android:id="@+id/btn_qty_min"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toLeftOf="@id/et_qty"
                android:layout_toStartOf="@id/et_qty"
                android:src="@drawable/bg_button_counter_minus"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_form_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="16dp"
                android:text="Catatan untuk penjual (Opsional)"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_action_form_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_label_form_remark"
                android:layout_toRightOf="@id/tv_label_form_remark"
                android:fontFamily="sans-serif"
                android:text=" Tulis Catatan"
                android:textColor="@color/medium_green"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible"/>

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_label_form_remark"
                android:background="@color/transparent"
                android:fontFamily="sans-serif"
                android:imeActionLabel="Simpan"
                android:imeOptions="actionSend"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:ignore="TextFields"
                tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim
barangnya gan!"
                tools:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0"/>
    </LinearLayout>
</LinearLayout>