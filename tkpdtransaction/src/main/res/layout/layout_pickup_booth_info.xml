<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_shipment_hour_atc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/cards_ui_green"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/deliver"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/margin_ms"
        android:src="@drawable/ic_icon_send_to_pickup_booth" />

    <TextView
        android:id="@+id/desc_max_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/label_info_pickup_booth"
        android:textSize="12sp" />

</LinearLayout>