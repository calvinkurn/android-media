<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/donasi_popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donasi_popup_img"
        android:layout_margin="@dimen/margin_small"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/font_large"
        android:gravity="center_horizontal"
        tools:text="@string/placeholder_text"/>

    <TextView
        android:id="@+id/donasi_popup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_below="@+id/donasi_popup_title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_14"
        tools:text="@string/placeholder_text"/>

    <ImageView
        android:id="@+id/donasi_popup_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/loading_page" />

    <ImageView
        android:id="@+id/close_popup_donasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close_ticker_24dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>