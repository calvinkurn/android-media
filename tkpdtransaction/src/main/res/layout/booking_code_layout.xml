<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/booking_code_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8">

    <TextView
        android:id="@+id/booking_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/voucher_code_title"
        android:textColor="@color/subtitle_gray_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/booking_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_code_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="TPR9QTMYE"
        android:textColor="@color/title_gray_color"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/copyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_code_title"
        android:drawableLeft="@drawable/salin_drawable"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_horizontal|center_vertical"
        android:text="Salin"
        android:textColor="@color/tkpd_main_green"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/divider_booking_code"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/booking_code"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/dash_line_grey" />
</RelativeLayout>
