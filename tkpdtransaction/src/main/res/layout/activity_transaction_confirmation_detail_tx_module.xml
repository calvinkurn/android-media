<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".purchase.activity.TxConfirmationDetailActivity">

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/padding_comment_area"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/date_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_yellow_border_yelow"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tx_date_l"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tx_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs"/>

                    <TextView
                        android:id="@+id/tx_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fonts"
                        android:textStyle="bold"
                        tools:text="16 Mei 2014"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tx_due_date_l"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/due_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs"/>

                    <TextView
                        android:id="@+id/due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fonts"
                        android:textStyle="bold"
                        tools:text="19 Mei 2014"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/tx_total_payment_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/cards_ui_2"
                android:padding="@dimen/dp_10">

                <RelativeLayout
                    android:id="@+id/total_item_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5">

                    <!-- total pembayaran -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/total_item"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts"/>

                    <TextView
                        android:id="@+id/total_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/fonts"
                        tools:ignore="RelativeOverlap"
                        tools:text="1 Items (1kg)"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/total_price_item_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/total_item_l"
                    android:layout_marginBottom="@dimen/dp_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/total_item_price"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts"/>

                    <TextView
                        android:id="@+id/total_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/fonts"
                        tools:ignore="RelativeOverlap"
                        tools:text="Rp 20.000,-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/total_saldo_used"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/total_price_item_l"
                    android:layout_marginBottom="@dimen/dp_5">

                    <!-- total pembayaran -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/deposit_used"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts"/>

                    <TextView
                        android:id="@+id/deposit_used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/fonts"
                        tools:ignore="RelativeOverlap"
                        tools:text="Rp 20.000,-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/total_payment_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_saldo_used">

                    <!-- total pembayaran -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/total_payment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fonts"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/total_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fonts"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap"
                        tools:text="Rp 20.000,-"/>
                </RelativeLayout>

            </RelativeLayout>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/check_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/cards_ui_2"
                app:drawableRightCompat="@drawable/info_icon"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="Nomor Rekening"
                android:textColor="@color/tkpd_dark_green"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>

            <LinearLayout
                android:id="@+id/lv_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/grey_400"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/title_cancel"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/confirm_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tkpd_btn_green_filter"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/title_confirm"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>