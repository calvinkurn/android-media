<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/dp_6"
        android:textColor="@color/font_black_primary_70"
        android:textSize="@dimen/sp_16"
        tools:text="Selesaikan Pesanan" />

    <TextView
        android:id="@+id/tv_desc_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_5"
        android:textColor="@color/font_black_secondary_54"
        android:textSize="@dimen/sp_14"
        tools:text="Dengan klik selesai, dana akan diteruskan ke penjual dan Anda tidak dapat mengajukan komplain" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:tint="@color/colorGreen"
            app:srcCompat="@drawable/checked_thin" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/selsesai_dialog_text_1"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:tint="@color/colorGreen"
            app:srcCompat="@drawable/checked_thin" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/selesai_dialog_text_2"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@null"
            android:padding="@dimen/dp_8"
            android:textAllCaps="false"
            android:textColor="@color/font_black_secondary_54"
            android:textSize="@dimen/sp_14"
            tools:text="Kembali" />

        <TextView
            android:id="@+id/btn_ok_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/dp_8"
            android:textAllCaps="false"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/sp_14"
            tools:text="Selesai" />

    </LinearLayout>

</LinearLayout>