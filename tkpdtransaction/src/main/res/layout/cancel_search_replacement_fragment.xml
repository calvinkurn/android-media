<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_cancel_search_replacement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notes_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med"
            android:padding="@dimen/padding_small"
            android:text="@string/title_replacement_cancellation"
            android:textSize="@dimen/text_size_l_medium"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/reason_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_detail"
                android:weightSum="9">

                <TextView
                    android:id="@+id/reason_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:layout_weight="8"
                    android:text="@string/title_replacement_reason_1" />

                <RadioButton
                    android:id="@+id/radio_button_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reason_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_detail"
                android:weightSum="9">

                <TextView
                    android:id="@+id/reason_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:layout_weight="8"
                    android:text="@string/title_replacement_reason_2" />

                <RadioButton
                    android:id="@+id/radio_button_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reason_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_detail"
                android:weightSum="9">

                <TextView
                    android:id="@+id/reason_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:layout_weight="8"
                    android:text="@string/title_replacement_reason_3" />

                <RadioButton
                    android:id="@+id/radio_button_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reason_other_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_detail"
                android:weightSum="9">

                <TextView
                    android:id="@+id/other_reason_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:layout_weight="8"
                    android:text="@string/title_other_reason" />

                <RadioButton
                    android:id="@+id/radio_button_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

            </LinearLayout>

            <EditText
                android:id="@+id/other_reason_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/padding_large">

            <TextView
                android:id="@+id/submit_button"
                style="@style/Button.Submit.Green"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_grey_button_rounded"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="@string/cancel_search_replacement"
                android:textColor="@color/grey_700" />

        </RelativeLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>