        app:bav_2_display="true"
        android:layout_gravity="bottom|center_horizontal"
        app:bav_icon_1="@drawable/ic_search_sort"
        app:bav_icon_2="@drawable/ic_search_filter"
        app:bav_label_1="@string/search_sort_label"
        app:bav_label_2="@string/search_filter_label" />-->
</android.support.design.widget.CoordinatorLayout>