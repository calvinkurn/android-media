<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_shipment_info"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/margin_ms"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_shipment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rectangle_yellow"
            android:padding="@dimen/padding_ms"
            android:textSize="11sp"
            android:lineSpacingExtra="7sp"
            tool:text="Kurir toko adalah layanan pengiriman dengan menggunakan kurir dari toko terkait" />

        <ImageButton
            android:padding="@dimen/padding_vs"
            android:layout_gravity="end"
            android:background="@color/transparent"
            android:src="@drawable/ic_close"
            android:tint="@color/yellow_ticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shipment_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_shipment_info">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_network_error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>