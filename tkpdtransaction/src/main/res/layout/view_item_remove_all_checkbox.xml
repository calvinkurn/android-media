<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <FrameLayout
        android:id="@+id/fl_select_to_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TransactionCheckbox" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_product_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/fl_select_to_remove"
        android:layout_toRightOf="@id/fl_select_to_remove">

        <TextView
            android:id="@+id/tv_text_sender"
            style="@style/TextMidMediumBlack54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="5sp"
            android:text="@string/label_select_all" />

    </LinearLayout>

</RelativeLayout>