<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="18dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/credit_card_auth_footer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small_dp"
            android:layout_marginStart="@dimen/small_dp"
            android:text="@string/text_cc_authentication"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/black_70" />

        <ImageView
            android:id="@+id/credit_card_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/small_dp"
            android:paddingLeft="@dimen/small_dp"
            android:paddingRight="@dimen/small_dp"
            android:paddingStart="@dimen/small_dp"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_shadow"/>

</LinearLayout>