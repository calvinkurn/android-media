<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" >

        <TextView
            android:id="@+id/tv_text_sent_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/black_54"
            android:lineSpacingExtra="5sp"
            tools:text="Dikirim oleh : " />

        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/tv_text_sent_by"
            android:layout_toRightOf="@id/tv_text_sent_by"
            android:textSize="12sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="5sp"
            tools:text="Adidas" />
    </RelativeLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/iv_product_image_container"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/orange"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_shipping_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_product_image_container"
                android:layout_toRightOf="@id/iv_product_image_container"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                tools:text="Kaos Adidas Camo Tongue Tee... White &amp; Red, XS"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_product_image_container"
                android:layout_toRightOf="@id/iv_product_image_container"
                android:layout_below="@id/tv_shipping_product_name"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                tools:text="Rp200.000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" >

            <ImageView
                android:id="@+id/iv_free_return_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_free_return"/>

            <TextView
                android:id="@+id/tv_free_return_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_free_return_icon"
                android:layout_toEndOf="@id/iv_free_return_icon"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                tools:text="Free Returns"
                />

            <TextView
                android:id="@+id/tv_po_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_free_return_text"
                android:layout_toEndOf="@id/tv_free_return_text"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:background="@drawable/layout_bg_pre_order"
                android:textSize="10sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                tools:text="PO"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tv_cashback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_po_sign"
                android:layout_toEndOf="@id/tv_po_sign"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg_cashback"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                tools:text="Cashback 5%"
                tools:ignore="SmallSp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_text_product_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                tools:text="Berat :"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/tv_text_product_weight"
                android:layout_toEndOf="@id/tv_text_product_weight"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                tools:text="3kg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/tv_total_product_item"
                android:layout_toStartOf="@id/tv_total_product_item"
                android:layout_marginRight="4dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                tools:text="Jumlah :"
                />

            <TextView
                android:id="@+id/tv_total_product_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                tools:text="1"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            tools:text="Catatan untuk penjual (Opsional)"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_70"
            tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim barangnya gan!"
            />

        <view
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0"
            android:layout_marginBottom="18dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_product_image_small_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/colorAccent" />

            <ImageView
                android:id="@+id/iv_product_image_small_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/colorAccent"
                android:layout_toRightOf="@id/iv_product_image_small_1"
                android:layout_toEndOf="@id/iv_product_image_small_1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/iv_product_image_small_3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/colorAccent"
                android:layout_toRightOf="@id/iv_product_image_small_2"
                android:layout_toEndOf="@id/iv_product_image_small_2"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/medium_green"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                tools:text="+3 Produk Lainnya"
                />

        </RelativeLayout>

    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_text_shipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_54"
            tools:text="Pengiriman"
            />

        <TextView
            android:id="@+id/tv_shipment_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_chevron_shipment_option"
            android:layout_toStartOf="@id/iv_chevron_shipment_option"
            android:textSize="12sp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/medium_green"
            android:gravity="end"
            tools:text="Go-send Instan"
            />

        <ImageView
            android:id="@+id/iv_chevron_shipment_option"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_right"
            android:tint="@color/medium_green"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_cart_sub_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            tools:ignore="SmallSp"
            android:text="Sub total" />

        <TextView
            android:id="@+id/tv_cart_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/tv_cart_sub_total"
            android:layout_toRightOf="@id/tv_cart_sub_total"
            android:textSize="12sp"
            android:textColor="@color/medium_green"
            android:text="Detil" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_cart_detail"
            android:layout_toRightOf="@id/tv_cart_detail"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:tint="@color/medium_green"
            android:src="@drawable/chevron_thin_down"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:textColor="@color/orange_red"
            tools:text="Rp200.000" />

    </RelativeLayout>

</LinearLayout>