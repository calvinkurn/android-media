<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <include layout="@layout/layout_item_warning" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_text_sent_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="5sp"
            android:text="Dikirim oleh : "
            android:textColor="@color/black_38"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tv_text_sent_by"
            android:layout_toRightOf="@id/tv_text_sent_by"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="5sp"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            tools:text="Adidas" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />

    <include layout="@layout/item_product_detail" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_expand_other_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_expand_other_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/medium_green"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="+3 Produk Lainnya" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/tv_expand_other_product"
            android:background="#e0e0e0" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_shipment_option_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_text_shipment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kurir Pengiriman"
            android:textColor="@color/black_54"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/choose_courier_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_button_rounded_unify"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="9dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:paddingTop="9dp"
            android:text="Pilih Kurir"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_selected_shipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:gravity="end"
            android:textColor="@color/medium_green"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="Alfatrex" />

        <ImageView
            android:id="@+id/iv_chevron_shipment_option"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            android:tint="@color/medium_green"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_cart_sub_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cart_sub_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/iv_detail_option_chevron"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:tint="@color/black_54"
                tools:ignore="ContentDescription"
                tools:src="@drawable/chevron_thin_down" />

            <TextView
                android:id="@+id/tv_sub_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_detail_option_chevron"
                android:layout_toStartOf="@id/iv_detail_option_chevron"
                android:textColor="@color/orange_red"
                android:textSize="14sp"
                tools:text="Rp200.000" />

            <TextView
                android:id="@+id/tv_shipment_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="84dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="end"
                android:textColor="@color/medium_green"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Go-send Instan" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_detail_shipment_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_total_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_70"
                tools:text="Jumlah Barang (1 Item)"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_total_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/tv_total_item"
                android:layout_toRightOf="@id/tv_total_item"
                android:fontFamily="sans-serif"
                android:gravity="end"
                tools:text="Rp1.400.000"
                android:textColor="@color/black_70"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_shipping_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_item"
                android:layout_marginBottom="18dp"
                android:fontFamily="sans-serif"
                tools:text="Ongkos Kirim (1kg)"
                android:textColor="@color/black_70"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_shipping_fee_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_total_item"
                android:fontFamily="sans-serif"
                android:gravity="end"
                tools:text="Rp10.000"
                android:textColor="@color/black_70"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_insurance_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shipping_fee"
                android:fontFamily="sans-serif"
                android:text="Biaya Asuransi"
                android:textColor="@color/black_70"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_insurance_fee_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_shipping_fee"
                android:fontFamily="sans-serif"
                android:gravity="end"
                tools:text="-"
                android:textColor="@color/black_70"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_promo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_insurance_fee"
                android:fontFamily="sans-serif"
                android:text="Promo"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_promo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_insurance_fee"
                android:fontFamily="sans-serif"
                android:gravity="end"
                tools:text="Rp100.000"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>