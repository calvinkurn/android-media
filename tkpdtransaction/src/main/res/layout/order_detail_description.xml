<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/padding_med"
    android:paddingEnd="@dimen/padding_med">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_transaction_date_purchase"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/description_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="1 Sep 2017" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buyer_description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_purchase_of"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/description_buyer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="Ryan Handy" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seller_description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_seller_shop"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/description_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="Ryan Handy" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_order_shipping_address"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/description_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="I make you break you move I take love is the answer so they said, but if I went awaaaaay what would you say would be enough to make you stay" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/time_limit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vvs"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginStart="@dimen/margin_med"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_response_limit"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/description_response_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dark_blue_rounded_label"
                android:padding="@dimen/padding_vvs"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                tools:text="3 hari lagi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginStart="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_order_detail_shipping_courier"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/description_courier_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="Wahana Express" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginStart="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_accept_partial_order"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/description_partial_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="Tidak" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/preorder_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginStart="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_tag_product_item_cart_preorder"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/preorder_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="Tidak" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginStart="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_dropshipper"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/dropshipper_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="Tidak" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dropshipper_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginStart="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_dropshipper_name"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/dropshipper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="Tidak" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dropshipper_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginStart="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_dropshipper_number"
                android:textColor="@color/label_text_color" />

            <TextView
                android:id="@+id/dropshipper_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70"
                tools:text="Tidak" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>