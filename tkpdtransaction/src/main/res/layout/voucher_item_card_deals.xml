<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16">

    <RelativeLayout
        android:id="@+id/cl_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.transaction.orders.orderdetails.view.customview.CustomTicketView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/divider1"
            android:layout_alignParentTop="true"
            app:borderColor="@color/grey_200"
            app:borderWidth="1dp"
            app:cornerRadius="4dp"
            app:cornerType="roundedscallop"
            app:scallopRadius="8dp"
            app:showBorder="true"
            app:showTopShadow="true"
            app:ticketElevation="4dp" />

        <com.tokopedia.transaction.orders.orderdetails.view.customview.CustomTicketView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/progress_bar_layout"
            android:layout_alignTop="@+id/divider1"
            app:borderColor="@color/grey_200"
            app:borderWidth="1dp"
            app:cornerRadius="4dp"
            app:cornerType="scalloprounded"
            app:scallopRadius="8dp"
            app:showBorder="false"
            app:showBottomShadow="true"

            app:ticketElevation="4dp" />


        <!--v.setLayerType(View.LAYER_TYPE_SOFTWARE, null);-->
        <ImageView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/dash_line_grey" />


        <android.support.v7.widget.CardView
            android:id="@+id/imageView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_0">

            <ImageView
                android:id="@+id/iv_deal"
                android:layout_width="@dimen/image_width_brand"
                android:layout_height="@dimen/image_width_brand"
                android:background="@color/grey_1100"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tv_deal_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="sans-serif-medium"
            android:lines="2"
            android:maxLines="2"
            android:layout_marginRight="@dimen/dp_8"
            android:textColor="@color/black_39"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_redeem_locations"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="sans-serif"
            android:textColor="@color/black_40"
            android:textSize="@dimen/dp_12"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_redeem_locations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toRightOf="@+id/imageView"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textColor="@color/black_40"
            android:textSize="@dimen/dp_12"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/ll_valid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_grey"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_8">

                <TextView
                    android:id="@+id/tv_valid_till"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="@string/text_valid_till"
                    android:textColor="@color/black_39"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/tv_valid_till_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black_39"
                    android:textSize="@dimen/dp_12"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_valid"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/prog_bar"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/tapAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/actionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tapAction" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
