<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/complaint_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_complain_header"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/complaint_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_med"
        android:text="@string/string_complain_body"
        android:textColor="@color/color_complain_body"
        android:textSize="@dimen/text_size_medium" />

    <LinearLayout
        android:id="@+id/layout_free_return"
        android:layout_marginTop="@dimen/margin_med"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_free_return"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/icon_frs"/>

        <TextView
            android:id="@+id/tv_free_return"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_vs"
            android:text="@string/string_complain_body"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/margin_med"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/string_complain_button_back"
            android:textAllCaps="false"
            android:textColor="@color/color_complain_body"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/not_receive_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/string_complain_button_not_receive"
            android:textAllCaps="false"
            android:textColor="@color/color_complain_body"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/receive_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

</LinearLayout>