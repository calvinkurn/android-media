<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dp_16"
    android:elevation="@dimen/dp_3"
    android:id="@+id/driverLayout"
    android:visibility="gone"
    tools:visibility="visible"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_4">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/driver_img"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_24"
            android:src="@drawable/ic_emptycart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/driver_phone"
            app:layout_constraintLeft_toRightOf="@+id/driver_img"
            tools:text="Idwan Wangsa"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/driver_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/driver_img"
            app:layout_constraintTop_toBottomOf="@+id/driver_name"
            app:layout_constraintBottom_toTopOf="@+id/driver_license"
            tools:text="081234567890"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/driver_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/driver_img"
            app:layout_constraintTop_toBottomOf="@+id/driver_phone"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="B 1408 TMB"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/call_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/white_button_rounded"
            android:visibility="visible"
            android:text="@string/call_driver"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>