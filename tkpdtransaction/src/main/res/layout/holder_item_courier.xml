<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?selectableItemBackground"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_courier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:textSize="14sp"
        tools:text="JNE" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_courier_name"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_toEndOf="@+id/tv_courier_name"
        android:layout_toRightOf="@+id/tv_courier_name"
        android:lineSpacingExtra="4sp"
        android:textSize="12sp"
        tools:text="Mulai dari Rp 15.000" />

    <TextView
        android:id="@+id/tv_delivery_time_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_courier_name"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="4sp"
        android:textSize="12sp"
        tools:text="(6 - 8 jam pengiriman)" />

    <TextView
        android:id="@+id/tv_delivery_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_delivery_time_range"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="4sp"
        android:textSize="12sp"
        tools:text="Jadwal pengiriman 09:00-16:00 WIB" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_delivery_schedule"
        android:layout_marginTop="@dimen/padding_small_sm"
        android:background="@drawable/bg_line_separator" />

    <RadioButton
        android:id="@+id/rb_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="visible" />

</RelativeLayout>
