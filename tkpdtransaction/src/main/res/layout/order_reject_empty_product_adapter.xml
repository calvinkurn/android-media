<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="@dimen/padding_small">

        <CheckBox
            android:id="@+id/stock_epmty_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_vs" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook_square_blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_dp"
            android:layout_marginStart="@dimen/small_dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_detail_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                tools:text="Earpads Audio Technica ATH M50x" />

            <TextView
                android:id="@+id/order_detail_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_red"
                android:textStyle="bold"
                tools:text="Rp 75.000" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/empty_stock_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/grey_500"
            app:cardCornerRadius="2dp"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_vvvs"
                android:paddingEnd="@dimen/padding_vs"
                android:paddingLeft="@dimen/padding_vs"
                android:paddingRight="@dimen/padding_vs"
                android:paddingStart="@dimen/padding_vs"
                android:paddingTop="@dimen/padding_vvvs"
                android:text="@string/label_empty_stock"
                android:textColor="@color/white"
                android:textSize="@dimen/fontvs" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_400" />

</LinearLayout>