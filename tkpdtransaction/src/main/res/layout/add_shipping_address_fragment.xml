<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/card_elevation_checkout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextSmallMediumBlack38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Penjual : " />

                    <TextView
                        android:id="@+id/sender_name"
                        style="@style/TextSmallMediumBlack70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adidas" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/googleg_standard_color_18" />

                    <TextView
                        android:id="@+id/product_name"
                        style="@style/TextMidMediumBlack70"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        tools:text="Kaos Adidas Camo Tongue Tee... White and Red, XS" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/new_margin_med"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:layout_marginTop="@dimen/new_margin_med"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/card_elevation_checkout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextSmallNormalBlack38"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jumlah" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/decrease_quantity"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/bg_button_counter_minus" />

                        <EditText
                            android:id="@+id/quantity_field"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="7"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/increase_quantity"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/bg_button_counter_plus" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quantity_error_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:layout_marginTop="@dimen/margin_small"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/quantity_error_text_view"
                        style="@style/TextSmallError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jumlah barang terlalu banyak" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/empty_notes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/label_notes_for_seller"
                        style="@style/TextSmallNormalBlack38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catatan untuk penjual (opsional)" />

                    <TextView
                        android:id="@+id/insert_notes_button"
                        style="@style/TextSmallMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_toEndOf="@id/label_notes_for_seller"
                        android:layout_toRightOf="@id/label_notes_for_seller"
                        android:text="Tulis Catatan"
                        android:textColor="@color/tkpd_main_green" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/label_notes_for_seller"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:background="@color/grey_400" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/notes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextSmallNormalBlack38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catatan untuk penjual (opsional)" />

                    <EditText
                        android:id="@+id/notes_edit_text"
                        style="@style/TextSmallNormalBlack70"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/address_title"
                            style="@style/TextSmallNormalBlack38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Alamat Kantor" />

                        <TextView
                            android:id="@+id/address_receiver_name"
                            style="@style/TextSmallMediumBlack54"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="5sp"
                            tools:text="Agus Maulana" />

                        <TextView
                            android:id="@+id/address"
                            style="@style/TextSmallNormalBlack54"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="6sp"
                            tools:text="Jl. Letjen S. Parman Kav.77, Wisma 77 Tower 2, Tokopedia Lt. 2, Jakarta, 0817 1234 5678" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:gravity="center_vertical|end">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/chevron_thin_right"
                            android:tint="#999999" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choose_address_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/TextSmallNormalBlack54"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pengiriman" />

                        <TextView
                            style="@style/TextSmallMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="Pilih Alamat"
                            android:textColor="@color/tkpd_main_green" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="@dimen/margin_ms"
                            android:layout_marginStart="@dimen/margin_ms"
                            android:src="@drawable/chevron_thin_right"
                            android:tint="@color/tkpd_main_green" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/add_address_error_warning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:text="Pilih alamat pengiriman"
                        android:textColor="@color/red_500"
                        android:textSize="11sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/disabled_save_changes_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/grey_400"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Simpan Perubahan"
        android:textColor="@color/grey_600"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/save_changes_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/green_button_rounded_unify"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Simpan"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>