<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/credit_card_detail_root_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/margin_xl"
              android:paddingStart="@dimen/margin_xl"
              android:paddingEnd="@dimen/margin_xl"
              android:background="@color/white">

    <include layout="@layout/compound_view_credit_card"/>

    <Button android:id="@+id/btn_delete_cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/button_edge"
        android:text="@string/label_button_delete_cc"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_14"
        android:textAllCaps="false" />

</LinearLayout>