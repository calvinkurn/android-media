<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/dp_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_date"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black_70"
        android:layout_marginTop="@dimen/dp_16"
        android:textStyle="bold"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/set_current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="20/12/2018"
        android:textColor="@color/black_70"
        android:textSize="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="@+id/startDate"
        app:layout_constraintTop_toBottomOf="@+id/startDate" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/set_current_date"
        android:background="@color/grey_300"/>


    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/end_date"
        android:textColor="@color/black_70"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/set_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="25/12/2018"
        android:textColor="@color/black_70"
        android:textSize="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="@+id/endDate"
        app:layout_constraintTop_toBottomOf="@+id/endDate" />


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/set_end_date"
        android:background="@color/grey_300"/>


    <TextView
        android:id="@+id/save_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/save_date_btn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        android:padding="@dimen/dp_16"
        android:text="@string/save_date"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:visibility="visible" />
</android.support.constraint.ConstraintLayout>