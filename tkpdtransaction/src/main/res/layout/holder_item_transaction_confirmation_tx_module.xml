<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/cards_ui_selected">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/shop_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:text="@string/title_buy_from"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Toko Tokopedia"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_wrapper">

            <LinearLayout
                android:id="@+id/total_payment"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@color/tkpd_yellow_status"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/total_payment"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/total_invoice_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_vs"
                    android:textSize="@dimen/fontm"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/total_payment"
                android:orientation="vertical"
                android:padding="@dimen/padding_vs">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_date"
                    android:textColor="@color/time_color"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/tx_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:text="@string/due_date"
                    android:textColor="@color/time_color"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontvs" />
                <!-- <ImageView -->
                <!-- android:shopId="@+shopId/detail_tx_btn" -->
                <!-- android:layout_gravity="right" -->
                <!-- android:layout_width="@dimen/med_dp" -->
                <!-- android:layout_height="@dimen/med_dp" -->
                <!-- android:src="@drawable/ic_chevron_right" /> -->
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>