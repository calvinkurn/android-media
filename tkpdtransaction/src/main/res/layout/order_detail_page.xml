<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/rejection_notice_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/rejection_notice_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="@string/title_buyer_cancelled_order"
                    android:textColor="@color/red_500"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rejection_notice_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sub_title_buyer_cancelled_order"
                    tools:text="pada 17 Oktober dengan alasan galau" />

            </LinearLayout>

            <include layout="@layout/order_detail_page_header" />

            <include
                android:id="@+id/layout_pickup_point_pin_code"
                layout="@layout/layout_pickup_point_pin_code"
                android:visibility="gone" />

            <include
                android:id="@+id/layout_driver_info"
                layout="@layout/order_detail_driver_info" />

            <include layout="@layout/order_detail_description" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <include
                    android:id="@+id/layout_fulfillment"
                    layout="@layout/partial_fulfillment_label"/>

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/upload_awb_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fefcf5"
                android:visibility="gone"
                tools:visibility="visible">


                <TextView
                    android:id="@+id/tv_upload_awb_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/btn_upload_awb"
                    android:layout_toStartOf="@+id/btn_upload_awb"
                    android:gravity="start"
                    android:padding="@dimen/dp_16"
                    tools:text="Resi tidak terlacak. Unggah resi fisik sebelum dibatalkan otomatis pada 13 Feb, 21:10 WIB
" />


                <TextView
                    android:id="@+id/btn_upload_awb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/label_oder_detail_btn_unggah_awb"
                    android:textColor="@color/green_500"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/bg_upload_awb" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_upload_awb" />
            </RelativeLayout>

            <View
                android:id="@+id/separator_awb"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <LinearLayout
                android:id="@+id/awb_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_reference_number" />

                    <TextView
                        android:id="@+id/reference_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="ABCDEFGHIJKLMNOPQ" />

                </LinearLayout>

                <TextView
                    android:id="@+id/copy_reference_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/menu_copy"
                    android:textColor="@color/green_500"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:id="@+id/invoice_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label_text_color"
                    tools:text="INV/20161025/XVI/X/55069657" />

                <LinearLayout
                    android:id="@+id/invoice_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_look"
                        android:textColor="@color/green_500"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <LinearLayout
                android:id="@+id/booking_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kode_booking_label"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/booking_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        tools:text="TJNE-8K4LFVPNMT6" />

                </LinearLayout>

                <TextView
                    android:id="@+id/see_detail_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/lihat_detail"
                    android:textColor="@color/green_500"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                tools:visibility="gone" />

            <include layout="@layout/order_detail_price" />

            <com.tokopedia.transaction.purchase.detail.customview.OrderDetailButtonLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>