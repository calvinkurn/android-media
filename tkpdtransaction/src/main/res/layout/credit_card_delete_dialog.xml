<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="266dp"
        android:layout_height="131dp"
        android:orientation="vertical"
        android:padding="@dimen/padding_med"
        android:background="@drawable/button_edge">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_credit_card"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/black_70" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete_button"
                android:layout_width="82dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:gravity="center"
                android:background="@drawable/button_edge"
                android:text="@string/label_title_button_yes"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black_70" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="82dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:gravity="center"
                android:background="@drawable/button_edge"
                android:text="@string/label_title_button_no"
                android:textSize="@dimen/text_size_small"
                android:textAllCaps="false"
               android:textColor="@color/black_70" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>