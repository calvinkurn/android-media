<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:text="Seberapa mengerti Anda terhadap tampilan baru laman Daftar Transaksi ini?"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/very_bad_rating"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/ic_very_bad_rating" />


        <ImageView
            android:id="@+id/bad_rating"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/ic_bad_rating" />


        <ImageView
            android:id="@+id/average_rating"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/ic_average_rating" />


        <ImageView
            android:id="@+id/good_rating"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_16"
            android:tint="@color/tkpd_survey_icon_gray"
            android:src="@drawable/ic_good_rating" />

        <ImageView
            android:id="@+id/very_good_rating"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/ic_very_good_rating" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:text="Mengerti"
        android:textColor="@color/tkpd_main_green"
        android:textSize="@dimen/sp_12" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"
        android:text="Apa yang bisa ditingkatkan pada laman ini?"
        android:textColor="@color/black_56"
        android:textSize="@dimen/sp_12" />


    <EditText
        android:id="@+id/survey_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:hint="Saran anda (opsional)"
        android:textColor="@color/black_56"
        android:textColorHint="@color/grey_400"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:id="@+id/submit_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/save_date_btn_bg"
        android:gravity="center"
        android:padding="@dimen/dp_16"
        android:text="submit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:visibility="visible" />

</LinearLayout>