<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_to_cart_coordinatlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticker_gtm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/bg_yellow_border_yelow"
            android:maxLines="3"
            android:padding="@dimen/dp_10"
            android:visibility="gone"
            tools:text="vhashkjalsla asbhdkashahs askjdhasjdhas asdbaksdlasd" />

        <ScrollView
            android:id="@+id/main_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:isScrollContainer="false"
            android:padding="10dp"
            android:scrollbars="none"
            tools:context="com.tokopedia.core.addtocart.activity.AddToCartActivity">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/product_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/cards_ui_2"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@id/iv_pic"
                        android:layout_width="@dimen/img_thumb_m"
                        android:layout_height="@dimen/img_thumb_m"
                        app:srcCompat="@drawable/ic_image_avatar_boy"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_preorder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/bg_label_preorder_gray"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Preorder"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontvs"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10"
                            android:includeFontPadding="false"
                            android:text="Product Name"
                            android:textColor="@color/href_link"
                            android:textSize="@dimen/fonts"
                            tools:ignore="HardcodedText" />

                        <LinearLayout
                            android:id="@+id/preorder_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:includeFontPadding="false"
                                android:lines="1"
                                android:text="@string/title_preorder_proccess_time"
                                android:textSize="@dimen/fontvs"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_preorder_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:includeFontPadding="false"
                                android:lines="1"
                                android:textSize="@dimen/fontvs"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/cards_ui_2"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="0.6"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingLeft="@null"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingStart="@null">

                            <View
                                android:id="@+id/decrease_button"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginTop="@dimen/med_dp"
                                android:background="@drawable/ic_indeterminate_check_box"
                                android:paddingBottom="@dimen/dp_30"
                                android:paddingEnd="@dimen/med_dp"
                                android:paddingLeft="@dimen/med_dp"
                                android:paddingRight="@dimen/med_dp"
                                android:paddingStart="@dimen/med_dp"
                                android:paddingTop="@dimen/med_dp" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@id/til_form_qty"
                                android:layout_width="@dimen/add_to_cart_qty"
                                android:hint="@string/title_quantity"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@id/et_form_qty"
                                    android:layout_width="@dimen/add_to_cart_qty"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:inputType="number"
                                    android:maxLength="5" />
                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:id="@+id/increase_button"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginTop="@dimen/med_dp"
                                android:background="@drawable/ic_add_box"
                                android:paddingBottom="@dimen/dp_30"
                                android:paddingEnd="@dimen/dp_30"
                                android:paddingLeft="@dimen/med_dp"
                                android:paddingRight="@dimen/dp_30"
                                android:paddingStart="@dimen/med_dp"
                                android:paddingTop="@dimen/med_dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_weight="0.4"
                            android:orientation="vertical"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingLeft="@null"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingStart="@null">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_insurance_cost"
                                    android:textColor="@color/label_color"
                                    android:textSize="@dimen/fontvs" />

                                <ImageView
                                    android:id="@+id/img_insurance_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dp_3"
                                    android:layout_marginStart="@dimen/dp_3"
                                    app:srcCompat="@drawable/info_icon"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <Spinner
                                android:id="@id/sp_form_insurance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@id/til_form_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/title_catatan_penjual">

                        <EditText
                            android:id="@id/et_form_notes"
                            android:importantForAutofill="noExcludeDescendants"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/cards_ui_2"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="@string/title_shipping_dest"
                        android:textColor="@color/label_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="#EEEEEE"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10">

                        <TextView
                            android:id="@id/tv_address_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/tv_address_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <com.tokopedia.design.pickuppoint.PickupPointLayout
                        android:id="@+id/pickup_point_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@id/btn_choose_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight=".50"
                            android:background="@drawable/btn_selector_addtocart_address"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/title_choose_address"
                            android:textColor="@color/label_color" />

                        <TextView
                            android:id="@id/btn_add_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".50"
                            android:background="@drawable/btn_shop"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/title_new_address"
                            android:textColor="@color/label_color" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/cards_ui_2"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@id/tv_error_shipping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@color/error_area"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_shipping_agency"
                        android:textColor="@color/label_color" />

                    <Spinner
                        android:id="@id/sp_shipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_service_type"
                        android:textColor="@color/label_color" />

                    <Spinner
                        android:id="@id/sp_shipment_package"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@id/layout_geo_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/cards_ui_2"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_delivery_location_cart"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts" />

                    <RelativeLayout
                        android:id="@id/layout_value_geo_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5">

                        <ImageView
                            android:id="@id/iv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            app:srcCompat="@drawable/ic_icon_market_toped"
                            tools:ignore="ContentDescription" />

                        <EditText
                            android:id="@id/et_geo_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toEndOf="@id/iv_1"
                            android:layout_toRightOf="@id/iv_1"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="@string/choose_location"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>


                </LinearLayout>

                <!-- end MAP -->

                <include
                    android:id="@+id/layout_shipment_hour_atc"
                    layout="@layout/holder_rates_atc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10" />

                <!-- Pickup booth -->

                <include
                    android:id="@+id/layout_pickup_booth_info"
                    layout="@layout/layout_pickup_booth_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:visibility="gone" />

                <!-- bagian perhitungan harga -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/cards_ui_2"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ProgressBar
                        android:id="@id/pb_price"
                        android:layout_width="@dimen/img_thumb_m"
                        android:layout_height="@dimen/img_thumb_m"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@id/layout_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:text="@string/title_total_prod_price"
                            android:textColor="@color/time_color" />

                        <TextView
                            android:id="@id/tv_price_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="#B7B7B7" />

                    <RelativeLayout
                        android:id="@id/layout_shipping_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:text="@string/title_shipping_cost"
                            android:textColor="@color/time_color"
                            tools:ignore="RelativeOverlap" />

                        <ProgressBar
                            android:id="@+id/calculate_cart_progress_bar"
                            android:layout_width="@dimen/med_dp"
                            android:layout_height="@dimen/med_dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true" />

                        <TextView
                            android:id="@id/tv_price_shipping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@id/btn_buy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/btn_buy"
                    android:gravity="center"
                    android:text="@string/title_buy"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
