<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_button_payment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_400" />

        <LinearLayout
            android:id="@+id/ll_total_payment_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_med"
            android:paddingLeft="@dimen/padding_med"
            android:paddingRight="@dimen/padding_med"
            android:paddingStart="@dimen/padding_med"
            android:paddingTop="@dimen/padding_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Pembayaran"
                android:textColor="@color/black_70" />

            <TextView
                android:id="@+id/tv_total_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="-" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_400" />

        <LinearLayout
            android:id="@+id/btn_next_to_payment_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_select_payment_method"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/medium_green_button_rounded"
                android:gravity="center"
                android:text="Pilih Metode Pembayaran"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cart_order_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_button_payment_container" />

</RelativeLayout>