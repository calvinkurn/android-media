<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:cardElevation="@dimen/padding_med"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_button_payment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_total_payment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small_sm">

                <TextView
                    android:id="@+id/tv_item_count"
                    style="@style/TextSmallNormalBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_payment_total" />

                <TextView
                    android:id="@+id/tv_total_payment"
                    style="@style/TextMidMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/orange_red"
                    tools:text="Rp600.000" />

            </LinearLayout>

            <TextView
                android:layout_marginBottom="@dimen/new_margin_small"
                android:id="@+id/tv_promo_message"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_small_sm"
                android:paddingRight="@dimen/padding_small_sm"
                android:visibility="gone"
                tools:text="Anda mendapat gratis ongkir Rp20.000"
                tools:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e0e0e0" />

            <TextView
                android:id="@+id/tv_select_payment_method"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/bg_button_disabled"
                android:gravity="center"
                android:text="@string/label_button_choose_payment_method"
                android:textAllCaps="false"
                android:textColor="@color/grey_500"
                android:textSize="13sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cart_order_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout" />

</RelativeLayout>