<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_product_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_product_image_container"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/orange"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_shipping_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_product_image_container"
            android:layout_toRightOf="@id/iv_product_image_container"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_70"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Kaos Adidas Camo Tongue Tee... White &amp; Red, XS" />

        <TextView
            android:id="@+id/tv_shipped_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shipping_product_name"
            android:layout_toEndOf="@id/iv_product_image_container"
            android:layout_toRightOf="@id/iv_product_image_container"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/orange_red"
            tools:text="Rp200.000" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_product_policies_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/iv_free_return_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_free_return"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_free_return_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/iv_free_return_icon"
            android:layout_toRightOf="@id/iv_free_return_icon"
            android:fontFamily="sans-serif"
            android:text="Free Returns"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_po_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@id/tv_free_return_text"
            android:layout_toRightOf="@id/tv_free_return_text"
            android:background="@drawable/layout_bg_pre_order"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:text="PO"
            android:textSize="10sp"
            android:textStyle="normal"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/tv_cashback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_po_sign"
            android:layout_toRightOf="@id/tv_po_sign"
            android:background="@drawable/layout_bg_cashback"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="normal"
            tools:ignore="SmallSp"
            tools:text="Cashback 5%" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_text_product_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Berat :"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_product_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/tv_text_product_weight"
            android:layout_toRightOf="@id/tv_text_product_weight"
            android:fontFamily="sans-serif"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="3kg" />

        <TextView
            android:id="@+id/tv_total_product_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_toEndOf="@id/tv_product_weight"
            android:layout_toLeftOf="@id/tv_total_product_item"
            android:layout_toRightOf="@id/tv_product_weight"
            android:layout_toStartOf="@id/tv_total_product_item"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="Jumlah :"
            android:textSize="12sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Catatan untuk penjual (Opsional)"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_optional_note_to_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black_70"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim barangnya gan!" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="#e0e0e0" />

</LinearLayout>