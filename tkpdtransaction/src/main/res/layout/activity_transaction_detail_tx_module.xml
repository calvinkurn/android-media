<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingBottom="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/date_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/bg_yellow_border_yelow"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontvs"/>

                <TextView
                    android:id="@+id/transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold"
                    tools:text="16 Mei 2014"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:gravity="end"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_buy_from"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontvs"/>

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold"
                    tools:text="Shop Name"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/invoice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginStart="@dimen/margin_vs"
                android:gravity="center"
                android:textColor="@color/href_link"
                android:textIsSelectable="true"
                android:textSize="@dimen/fonts"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/gradient_black_alt"/>

        <LinearLayout
            android:id="@+id/order_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/see_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_see_all"
            android:textColor="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/label_color"/>

        <LinearLayout
            android:id="@+id/instant_courier_driver_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/see_all_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/med_dp"
            android:paddingEnd="@dimen/small_dp"
            android:paddingLeft="@dimen/small_dp"
            android:paddingRight="@dimen/small_dp"
            android:paddingStart="@dimen/small_dp"
            android:paddingTop="@dimen/small_dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_driver_detail"
                android:textColor="@color/label_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small">

                <ImageView
                    android:id="@+id/driver_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    tools:src="@drawable/facebook_square_blue"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_toEndOf="@+id/driver_photo"
                    android:layout_toRightOf="@+id/driver_photo"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="Opang"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/driver_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/label_color"
                            android:textIsSelectable="true"
                            tools:text="08124566665"/>

                        <TextView
                            android:id="@+id/driver_info_border"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_vs"
                            android:layout_marginLeft="@dimen/margin_vs"
                            android:layout_marginRight="@dimen/margin_vs"
                            android:layout_marginStart="@dimen/margin_vs"
                            android:text="@string/string_splitter"
                            android:textColor="@color/label_color"
                            android:textIsSelectable="true"/>

                        <TextView
                            android:id="@+id/driver_license"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/label_color"
                            android:textIsSelectable="true"
                            tools:text="B4953773"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_call_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_button_rounded"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/label_color"
                    tools:text="Hubungi"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/see_all_bg"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/greyish_bg"
                android:dividerHeight="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/see_all_bg"
            android:orientation="vertical"
            android:padding="@dimen/padding_vs">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/half_screen_2pad"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shipping_cost"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"/>

                <TextView
                    android:id="@+id/shipping_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="@dimen/fonts"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/half_screen_2pad"
                    android:layout_height="wrap_content"
                    android:text="@string/title_additional_cost"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"/>

                <TextView
                    android:id="@+id/additional_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="@dimen/fonts"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:text="@string/title_quantity"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"/>

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:gravity="end"
                    android:textSize="@dimen/fonts"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:text="@string/title_grand_total"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/grand_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:gravity="end"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/tkpd_address_card"
            android:orientation="vertical"
            android:padding="@dimen/padding_vs">

            <LinearLayout
                android:id="@+id/sender_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_sender_name"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"/>

                <TextView
                    android:id="@+id/sender_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:gravity="start"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/fonts"
                    tools:text="Budi Anduk"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_sender_phone"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"/>

                <TextView
                    android:id="@+id/sender_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/fonts"
                    tools:text="08451558"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/half_screen_2pad"
                    android:layout_height="wrap_content"
                    android:text="@string/title_destination_address"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"/>

                <TextView
                    android:id="@+id/destination_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/fonts"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/half_screen_2pad"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shipping_courier"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"/>

                <TextView
                    android:id="@+id/destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/fonts"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/complain_but"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_show_complain"
            android:textColor="@color/label_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_request_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_request_cancel_order"
            android:textColor="@color/label_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/receive_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/string_finish"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_do_complain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_complain_button"
            android:textColor="@color/label_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/track_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_track"
            android:textColor="@color/label_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ask_seller"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_ask_seller"
            android:textColor="@color/label_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/reject_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_package_not_received"
            android:textColor="@color/label_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/upload_proof"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_upload_evidence"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
