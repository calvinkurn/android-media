<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_med">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terima Pesanan"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_dp"
            android:text="Dengan pilih Setuju anda menyetujui bahwa barang yang Anda kirim sesuai dengan pesanan pembeli"
            android:textSize="@dimen/text_size_l_medium" />

        <TextView
            android:id="@+id/card_deletion_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_dp"
            android:layout_marginTop="@dimen/margin_vs"
            android:textSize="@dimen/text_size_l_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:gravity="center"
                android:text="Kembali"
                android:textColor="@color/medium_green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agree_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:gravity="center"
                android:text="Setuju"
                android:textColor="@color/medium_green"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
