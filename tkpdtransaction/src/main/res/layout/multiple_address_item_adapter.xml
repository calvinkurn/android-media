    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/TextSmallNormalBlack38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat : " />

            <TextView
                android:id="@+id/product_weight"
                style="@style/TextSmallNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3 Kg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <TextView
                style="@style/TextSmallNormalBlack38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah : " />

            <TextView
                android:id="@+id/product_qty"
                style="@style/TextSmallNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/TextSmallNormalBlack38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Catatan untuk penjual (optional)" />

    <TextView
        android:id="@+id/notes_for_seller"
        style="@style/TextSmallNormalBlack70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tidak ada catatan"
        tools:text="Saya kirim warna merah ya min! jangan sampai salah kirim barangnya" />

    <include
        android:id="@+id/address_layout"
        layout="@layout/item_recipient_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <View
        android:id="@+id/border_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/grey_300"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>