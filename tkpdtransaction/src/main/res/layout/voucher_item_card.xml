<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.transaction.orders.orderdetails.view.customview.CustomTicketView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:borderColor="@color/colorAccent"
            app:borderWidth="1dp"
            app:cornerRadius="4dp"
            app:cornerType="roundedscallop"
            app:layout_constraintBottom_toTopOf="@+id/divider1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:scallopRadius="8dp"
            app:showBorder="false"
            app:showTopShadow="true"
            app:ticketElevation="4dp" />

        <com.tokopedia.transaction.orders.orderdetails.view.customview.CustomTicketView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:borderColor="@color/colorAccent"
            app:borderWidth="1dp"
            app:cornerRadius="4dp"
            app:cornerType="scalloprounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            app:scallopRadius="8dp"
            app:showBorder="false"
            app:showBottomShadow="true"
            app:ticketElevation="4dp" />


        <!--v.setLayerType(View.LAYER_TYPE_SOFTWARE, null);-->
        <ImageView
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/dash_line_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <android.support.v7.widget.CardView
            android:id="@+id/imageView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_deal"
                android:layout_width="@dimen/image_width_brand"
                android:layout_height="@dimen/image_width_brand"
                android:background="@color/grey_1100"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tv_deal_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/margin_small"
            android:fontFamily="sans-serif-medium"

            android:lines="2"
            android:maxLines="2"
            android:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)"
            android:textColor="@color/black_39"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="sans-serif"
            android:text="Bakerzin"
            android:textColor="@color/black_40"
            android:textSize="@dimen/dp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/tv_redeem_locations"
            app:layout_constraintLeft_toRightOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_redeem_locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:fontFamily="sans-serif"
            android:text="Dapat ditukar di "
            android:textColor="@color/black_40"
            android:textSize="@dimen/dp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintLeft_toRightOf="@+id/imageView" />


        <LinearLayout
            android:id="@+id/ll_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/rect_grey"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1">

            <TextView
                android:id="@+id/tv_valid_till"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Berlaku hingga "
                android:textColor="@color/black_39"
                android:textSize="@dimen/dp_12"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_valid_till_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="15 April 2018"
                android:textColor="@color/black_39"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_redeem_voucher"
            android:layout_width="0dp"
            android:layout_height="@dimen/redeem_button_height"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/background_redeem_voucher"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="@string/text_redeem_voucher"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_valid" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_voucher_redeemed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="66dp"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/background_rect_black"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8"
        android:text="Redeem hanya dapat dilakukan oleh petugas outlet terkait"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_valid"
        app:layout_constraintWidth_default="wrap" />

</FrameLayout>
