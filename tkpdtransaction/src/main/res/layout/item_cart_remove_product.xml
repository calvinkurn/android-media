<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/fl_select_to_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">

            <CheckBox
                android:id="@+id/cb_remove_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_product_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fl_select_to_remove"
            android:layout_toRightOf="@id/fl_select_to_remove"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_text_sender"
                    style="@style/TextSmallMediumBlack38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5sp"
                    android:text="Dikirim oleh : " />

                <TextView
                    android:id="@+id/tv_shop_name"
                    style="@style/TextSmallMediumBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_text_sender"
                    android:layout_toRightOf="@id/tv_text_sender"
                    android:lineSpacingExtra="5sp"
                    tools:text="Adidas" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e0e0e0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv_product_image"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/googleg_standard_color_18"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_product_name"
                        style="@style/TextMidMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_product_image"
                        android:layout_toRightOf="@id/iv_product_image"
                        android:textColor="@color/black"
                        tools:text="Kaos Adidas Camo Tongue Tee... White &amp; Red, XS" />

                    <TextView
                        android:id="@+id/tv_product_price"
                        style="@style/TextMidMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_product_name"
                        android:layout_toEndOf="@id/iv_product_image"
                        android:layout_toRightOf="@id/iv_product_image"
                        android:textColor="@color/orange_red"
                        tools:text="Rp200.000" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_product_price"
                        android:layout_marginTop="6dp"
                        android:layout_toEndOf="@id/iv_product_image"
                        android:layout_toRightOf="@id/iv_product_image">

                        <TextView
                            android:id="@+id/tv_text_product_weight"
                            style="@style/TextSmallNormalBlack38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berat :" />

                        <TextView
                            android:id="@+id/tv_product_weight"
                            style="@style/TextSmallNormalBlack70"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@id/tv_text_product_weight"
                            android:layout_toRightOf="@id/tv_text_product_weight"
                            tools:text="3kg" />

                        <TextView
                            android:id="@+id/tv_product_total_item"
                            style="@style/TextSmallNormalBlack70"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            tools:text="1" />

                        <TextView
                            style="@style/TextSmallNormalBlack38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_toEndOf="@id/tv_product_weight"
                            android:layout_toLeftOf="@id/tv_product_total_item"
                            android:layout_toRightOf="@id/tv_product_weight"
                            android:layout_toStartOf="@id/tv_product_total_item"
                            android:gravity="end"
                            android:text="Jumlah :" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>