<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView android:id="@+id/tv_text_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/black_54"
            android:lineSpacingExtra="5sp"
            android:text="Dikirim oleh : " />

        <TextView android:id="@+id/tv_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/tv_text_sender"
            android:layout_toRightOf="@id/tv_text_sender"
            android:textSize="12sp"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="5sp"
            tools:text="Adidas" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="8dp">

            <ImageView android:id="@+id/iv_product_image_container"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/orange"
                tools:ignore="ContentDescription" />

            <TextView android:id="@+id/tv_shipping_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_product_image_container"
                android:layout_toRightOf="@id/iv_product_image_container"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                tools:text="Kaos Adidas Camo Tongue Tee... White &amp; Red, XS" />

            <TextView android:id="@+id/tv_shipped_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_product_image_container"
                android:layout_toRightOf="@id/iv_product_image_container"
                android:layout_below="@id/tv_shipping_product_name"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                tools:text="Rp200.000" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/tv_text_product_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:text="Berat :" />

            <TextView android:id="@+id/tv_product_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toRightOf="@id/tv_text_product_weight"
                android:layout_toEndOf="@id/tv_text_product_weight"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                tools:text="3kg" />

            <TextView android:id="@+id/tv_total_product_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                tools:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_total_product_item"
                android:layout_toStartOf="@id/tv_total_product_item"
                android:layout_toRightOf="@id/tv_product_weight"
                android:layout_toEndOf="@id/tv_product_weight"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="end"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:textStyle="normal"
                android:text="Jumlah :" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>