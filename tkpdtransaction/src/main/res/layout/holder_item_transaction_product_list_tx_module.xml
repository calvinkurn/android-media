<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_toped_step_01"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:maxLines="2"
        android:textColor="@color/href_link"
        tools:text="Product Name"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        tools:text="Rp 999.000.000,00-"/>

    <TextView
        android:id="@+id/total_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_toEndOf="@id/product_price"
        android:layout_toRightOf="@id/product_price"
        tools:text="Jumlah: 1 barang (1000 Kg)"/>

    <View
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/product_image"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/greyish_bg"/>

    <LinearLayout
        android:id="@+id/remark"
        android:layout_width="@dimen/half_screen"
        android:layout_height="wrap_content"
        android:layout_below="@id/liner"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_catatan_penjual"
            android:textSize="@dimen/fonts"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liner"
        android:layout_toEndOf="@id/remark"
        android:layout_toRightOf="@id/remark"
        android:gravity="end"
        tools:text="Total: Rp. 10.000.000.000,-"/>


</RelativeLayout>
