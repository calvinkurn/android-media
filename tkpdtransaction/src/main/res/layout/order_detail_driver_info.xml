<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_ms"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_dp"
        android:layout_marginRight="@dimen/small_dp"
        android:text="@string/title_driver_detail"
        android:textColor="@color/label_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingBottom="@dimen/med_dp"
        android:paddingEnd="@dimen/small_dp"
        android:paddingLeft="@dimen/small_dp"
        android:paddingRight="@dimen/small_dp"
        android:paddingStart="@dimen/small_dp">

        <ImageView
            android:id="@+id/driver_photo"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-8dp"
            android:layout_marginLeft="-8dp"
            android:layout_marginRight="-8dp"
            android:layout_marginTop="-8dp"
            tools:src="@drawable/facebook_square_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@+id/driver_photo"
            android:layout_toLeftOf="@+id/btn_call_driver"
            android:layout_toRightOf="@+id/driver_photo"
            android:layout_toStartOf="@+id/btn_call_driver"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="Opang" />

            <TextView
                android:id="@+id/driver_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="1"
                android:textColor="@color/label_color"
                android:textIsSelectable="true"
                tools:text="08124566665" />

            <TextView
                android:id="@+id/driver_vehicle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="1"
                android:textColor="@color/label_color"
                android:textIsSelectable="true"
                tools:text="B 4953 AZ" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_call_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_button_rounded"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="@string/label_call_ondemand_driver_logistic"
            android:textColor="@color/label_color" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_400" />

</LinearLayout>