<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TransactionToogleButton" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#42b549</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextSmallGrey" parent="TextSmall">
        <item name="android:textColor">@color/black_38</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextMediumBlack" parent="TextMedium">
        <item name="android:textColor">@color/black_70</item>
    </style>

</resources>
