<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.inbox">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!-- ======================================================= -->
        <!-- ACTIVITIES REGISTRY -->
        <!-- ======================================================= -->

        <activity
            android:name=".rescenter.inbox.activity.InboxResCenterActivity"
            android:label="@string/title_activity_res_center"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.create.activity.CreateResCenterActivity"
            android:label="@string/title_activity_create_reso_center"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.shipping.activity.InputShippingActivity"
            android:label="@string/title_activity_input_shipping"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.player.VideoPlayerActivity"
            android:label="@string/title_video_player"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.detailv2.view.activity.DetailResCenterActivity"
            android:label="@string/title_activity_res_center"
            android:parentActivityName=".rescenter.inbox.activity.InboxResCenterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.historyawb.HistoryShippingActivity"
            android:label="@string/title_activity_history_awb"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.historyaddress.HistoryAddressActivity"
            android:label="@string/title_activity_history_address"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.historyaction.HistoryActionActivity"
            android:label="@string/title_activity_history_action"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.product.ListProductActivity"
            android:label="@string/title_activity_list_product_rescenter"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.product.ProductDetailActivity"
            android:label="@string/title_activity_product_detail_rescenter"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.createreso.view.activity.ProductProblemListActivity"
            android:label="@string/title_activity_product_problem"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.createreso.view.activity.ProductProblemDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".rescenter.createreso.view.activity.SolutionListActivity"
            android:label="@string/title_activity_solution_list"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rescenter.createreso.view.activity.SolutionDetailActivity"
            android:label="@string/title_activity_solution_detail"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".rescenter.createreso.view.activity.AttachmentActivity"
            android:label="@string/title_activity_attachment"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".rescenter.createreso.view.activity.FreeReturnActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".rescenter.inboxv2.view.activity.ResoInboxActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".rescenter.inboxv2.view.activity.InboxFilterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".rescenter.detailv2.view.activity.DetailResChatActivity"
            android:label="@string/title_activity_rescenter_discussion"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".rescenter.detailv2.view.activity.NextActionActivity"
            android:label="@string/title_activity_rescenter_discussion"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".rescenter.detailv2.view.activity.TrackShippingActivity"
            android:label="@string/title_track_shipping"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>