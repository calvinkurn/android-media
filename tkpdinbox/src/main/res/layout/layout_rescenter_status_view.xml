<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_small"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="Status Terakhir"
        android:textColor="@color/label_text_color"
        android:textSize="@dimen/text_size_small"
        />

    <TextView
        android:id="@+id/textview_last_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:textColor="@color/black_70"
        android:text="Admin Tokopedia memberikan solusi awal.\nMenunggu respond penjual &amp; pembeli."
        android:textStyle="bold"
        android:textSize="@dimen/sp_14"
        />

    <RelativeLayout
        android:id="@+id/rv_action_discuss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small">

        <TextView
            android:id="@+id/action_discuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat diskusi terakhir"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <View
        android:id="@+id/drawer_footer_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_vs"
        android:background="@drawable/gradient_black_alt"
        />

</LinearLayout>