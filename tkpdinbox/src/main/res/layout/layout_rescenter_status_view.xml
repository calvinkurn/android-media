<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_small"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Status Terakhir"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_small"
        />

    <TextView
        android:id="@+id/textview_last_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Admin Tokopedia memberikan solusi awal.\nMenunggu respond penjual &amp; pembeli."
        android:textStyle="bold"
        android:textSize="@dimen/font_small"
        />

    <TextView
        android:id="@+id/action_discuss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat diskusi terakhir"
        android:textColor="@color/tkpd_main_green"
        android:textSize="@dimen/font_small"
        />

</LinearLayout>