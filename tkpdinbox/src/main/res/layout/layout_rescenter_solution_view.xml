<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/action_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_centerInParent="true"
            android:padding="@dimen/padding_small"
            android:layout_alignParentRight="true"
            android:text="@string/action_edit"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/fontvs"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/action_edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:text="@string/title_section_last_solution"
                android:textColor="#868686"
                android:textSize="@dimen/font_small"
                android:textStyle="bold"
                />

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@color/deep_orange_500"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">
        <TextView
            android:id="@+id/tv_last_solution_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:text="Solusi dari Pembeli - 24 Juli 2016 10.10 WIB"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/fontvs"
            />

        <TextView
            android:id="@+id/tv_last_solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembeli meminta tukar produk"
            android:textSize="@dimen/font_small"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/action_discuss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:gravity="center_vertical"
        android:textColor="@color/tkpd_main_green"
        android:textSize="@dimen/font_small"
        android:textStyle="bold"
        />
</LinearLayout>