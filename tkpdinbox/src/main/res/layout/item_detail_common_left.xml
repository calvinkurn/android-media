<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginRight="80dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/item_detail_chat_title"
            android:id="@+id/layout_title"/>

        <FrameLayout
            android:layout_marginTop="@dimen/margin_vs"
            android:id="@+id/ff_bubble_left_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:minHeight="25dp"
            android:background="@drawable/bg_bubble_left"
            android:padding="@dimen/padding_small">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_54"
                    android:textStyle="bold"
                    context:text="meminta bantuan admin"/>

                <TextView
                    android:id="@+id/tv_content_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_54"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:visibility="gone"
                    context:visibility="visible"
                    context:text="Content 2"/>

            </LinearLayout>

        </FrameLayout>

        <include layout="@layout/item_detail_chat_date"
            android:id="@+id/layout_date"/>
    </LinearLayout>


</RelativeLayout>