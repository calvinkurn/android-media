<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:src="@drawable/remove_thin"
        android:contentDescription="@string/title_null"
        />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_toRightOf="@id/iv_product_image"
        android:layout_alignTop="@id/iv_product_image"
        android:layout_alignBottom="@id/iv_product_image"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="Lihat Semua produk yang dikomplain"
        android:drawableRight="@drawable/ic_chevron_right"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small"
        />

</RelativeLayout>