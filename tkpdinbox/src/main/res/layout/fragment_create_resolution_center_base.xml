<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/ff_product_problem"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="@dimen/margin_med"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:background="@drawable/bg_layout_enable"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_sm">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_product_problem_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/string_product_problem"/>

                    <TextView
                        android:id="@+id/tv_product_problem"
                        android:layout_marginTop="@dimen/margin_vvs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#b3000000"
                        android:text="@string/string_choose_product_problem"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_product_problem"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_med"
                    android:src="@drawable/chevron_thin_right"/>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ff_solution"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="@dimen/margin_med"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:background="@drawable/bg_layout_disable"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_sm">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_solution_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_38"
                        android:text="@string/string_solution"/>

                    <TextView
                        android:id="@+id/tv_solution"
                        android:layout_marginTop="@dimen/margin_vvs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black_38"
                        android:text="@string/string_choose_solution"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_solution"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_med"
                    android:src="@drawable/chevron_thin_right"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ff_prove"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="@dimen/margin_med"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:background="@drawable/bg_layout_disable"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_sm">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_prove_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_38"
                        android:text="@string/string_prove_information"/>

                    <TextView
                        android:id="@+id/tv_prove"
                        android:layout_marginTop="@dimen/margin_vvs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black_38"
                        android:text="@string/string_upload_prove_information"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_prove"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_med"
                    android:src="@drawable/chevron_thin_right"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:elevation="5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_12"/>

        <Button
            android:id="@+id/btn_create_resolution"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_ms"
            android:text="@string/string_button_create_complain"
            android:textAllCaps="false"
            android:textColor="@color/black_38"
            android:background="@drawable/bg_button_disable"/>
    </FrameLayout>


</LinearLayout>