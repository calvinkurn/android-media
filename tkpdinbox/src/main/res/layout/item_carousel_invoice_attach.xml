<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/invoice_height"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/item_include_invoice_attach"
        android:id="@+id/container_all_invoice_attach"
        android:layout_width="@dimen/invoice_item_carousel_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"/>

    <RelativeLayout android:layout_width="@dimen/item_carousel_next_invoice_width"
        android:layout_height="match_parent"

        android:layout_toRightOf="@id/container_all_invoice_attach"
        android:id="@+id/container_invoice_attach_get_all_invoice_button"
        android:background="@color/white">
    <ImageView
        android:id="@+id/all_invoice_button"
        android:layout_height="@dimen/item_carousel_next_arrow_size"
        android:layout_width="@dimen/item_carousel_next_arrow_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_3"
        android:visibility="visible"
        android:elevation="@dimen/dp_4"
        android:background="@drawable/circle_white"
        app:srcCompat="@drawable/ic_arrow_forward_right_with_circle"/>

        <TextView android:layout_below="@id/all_invoice_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@id/all_invoice_button"
            android:layout_alignRight="@id/all_invoice_button"
            android:layout_marginTop="@dimen/dp_8"
            android:text="Lihat semua"
            style="@style/TextView.Micro.BlackDisabled"
            android:textAlignment="center"/>
    </RelativeLayout>
</RelativeLayout>