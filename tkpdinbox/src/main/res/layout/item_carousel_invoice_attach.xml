<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="216dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/item_include_invoice_attach"
        android:id="@+id/container_all_invoice_attach"
        android:layout_width="298dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <RelativeLayout android:layout_width="68dp"
        android:layout_height="match_parent"

        android:layout_toRightOf="@id/container_all_invoice_attach"
        android:id="@+id/container_invoice_attach_get_all_invoice_button"
        android:background="@color/white">
    <ImageView
        android:id="@+id/all_invoice_button"
        android:layout_height="49dp"
        android:layout_width="49dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="3dp"
        android:visibility="visible"
        android:elevation="4dp"
        android:background="@drawable/circle_white"
        app:srcCompat="@drawable/ic_arrow_forward_right_with_circle"/>

        <TextView android:layout_below="@id/all_invoice_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@id/all_invoice_button"
            android:layout_alignRight="@id/all_invoice_button"
            android:layout_marginTop="8dp"
            android:text="Lihat semua"
            style="@style/TextView.Micro.BlackDisabled"
            android:textAlignment="center"/>
    </RelativeLayout>
</RelativeLayout>