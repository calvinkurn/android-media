<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/action_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:text="@string/action_track"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/fontvs"
            />

        <TextView
            android:id="@+id/action_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:layout_toLeftOf="@id/action_track"
            android:text="@string/action_add"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/fontvs"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/action_edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/title_section_resolution_retur"
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_s_medium"/>

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/deep_orange_500"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_awb_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CGK1234567890"
            android:textSize="@dimen/text_size_s_medium"
            android:textColor="@color/black_87"
            android:layout_marginBottom="@dimen/dp_5"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_last_awb_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/template_awb_additional_text"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="italic"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_12"/>

    <TextView
        android:id="@+id/action_awb_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="@string/action_see_more_awb"
        android:textColor="@color/tkpd_main_green"
        android:textSize="@dimen/sp_14"
        android:fontFamily="sans-serif-medium"
        />

</LinearLayout>