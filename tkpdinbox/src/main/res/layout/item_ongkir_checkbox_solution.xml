<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8">
            
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/ic_checkbox"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_gravity="center|left"
                />
            
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_12"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/font_black_secondary_54"
                android:textStyle="bold"
                tools:text="Solusi sementara aja"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>

        <View
            android:id="@+id/separator_middle"
            android:visibility="gone"
            android:layout_height="@dimen/dp_1"
            android:layout_width="match_parent"
            android:background="@color/black_12"/>


        <com.tokopedia.inbox.rescenter.createreso.view.adapter.viewholder.BaseSolutionRefundView
            android:id="@+id/view_solution"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_height="@dimen/dp_1"
        android:layout_width="match_parent"
        android:background="@color/black_12"/>

    <RelativeLayout
        android:id="@+id/layout_extra"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/transparent">

        <View
            android:layout_height="@dimen/dp_1"
            android:layout_width="match_parent"
            android:background="@color/black_12"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>