<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    xmlns:context="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_sm"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/margin_sm"
            android:textSize="@dimen/text_size_l_medium"
            android:textColor="@color/black_70"
            android:gravity="center|left"
            context:text="test"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_12"
        android:layout_gravity="bottom"/>
</FrameLayout>