<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="@dimen/margin_sm"
    android:paddingRight="@dimen/margin_sm">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main"
        android:layout_alignRight="@+id/main"
        android:layout_below="@+id/date"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_38"
        android:textSize="11sp"
        android:layout_marginLeft="3dp"
        android:textStyle="normal"
        tools:text="Pengguna" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/label"
        android:layout_alignBottom="@id/label"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/label"
        android:layout_toStartOf="@+id/label"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:text="â—"
        android:gravity="center_vertical"
        android:textColor="@color/grey_500"
        android:textSize="5sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_54"
        android:textSize="11sp"
        android:textStyle="normal"
        android:layout_toLeftOf="@id/dot"
        android:layout_marginBottom="@dimen/margin_vs"
        tools:text="AHAJA"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/new_margin_med"
        android:textColor="@color/grey_500"
        tools:text="13:16 wib"
        android:textAllCaps="true"
        android:textSize="@dimen/fontvs" />


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/attach_product_chat_container"
        android:layout_below="@id/name"
        android:maxWidth="250dp">
        <com.tokopedia.core.customwidget.SquareImageView
            android:id="@+id/attach_product_chat_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_loading_toped" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/attach_product_chat_image"
            android:layout_toEndOf="@id/attach_product_chat_image"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:maxWidth="172dp"
            >
        <TextView
            android:id="@+id/attach_product_chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/black_70"
            android:lineSpacingExtra="4sp"
            android:maxLines="2"
            android:maxWidth="172dp"
            android:text="Nama Produk" />
        <TextView
            android:id="@+id/attach_product_chat_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_red"
            android:text="@string/price_per_product"
            android:textSize="14sp"
            android:layout_below="@id/attach_product_chat_name"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:lineSpacingExtra="6sp"
            tools:text="Rp 2.099.000"
            />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/left_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/attach_product_chat_container"
        android:layout_alignBottom="@id/attach_product_chat_container"
        android:layout_toLeftOf="@id/attach_product_chat_container"
        android:layout_toStartOf="@id/attach_product_chat_container"
        android:visibility="visible"
        android:src="@drawable/ic_error_to_send"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/new_margin_sm"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/attach_product_chat_container"
        android:layout_alignBottom="@id/attach_product_chat_container"
        android:layout_toLeftOf="@id/attach_product_chat_container"
        android:layout_toStartOf="@id/attach_product_chat_container"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="visible"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/chat_status"
        android:layout_width="11dp"
        android:layout_height="6dp"
        android:layout_toLeftOf="@+id/hour"
        android:layout_toStartOf="@+id/hour"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/attach_product_chat_container"
        android:layout_alignTop="@+id/hour"
        android:layout_alignBottom="@+id/hour"
        android:adjustViewBounds="true"
        tools:src="@drawable/checked_thin"/>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/time_color"
        android:textSize="@dimen/fontvvs"
        tools:text="10:13 pm"
        tools:visibility="visible"
        android:layout_below="@id/attach_product_chat_container"
        android:layout_marginTop="@dimen/margin_vvs"
        android:layout_alignEnd="@id/attach_product_chat_container"
        android:layout_alignRight="@id/attach_product_chat_container"
        />
</RelativeLayout>
