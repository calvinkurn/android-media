<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/action_edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/margin_vs">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vs"
                android:paddingTop="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:text="@string/title_section_prove"
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_s_medium"
                />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@color/deep_orange_500"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/tv_from_buyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_from_buyer"
            android:textSize="@dimen/text_size_xsmall"
            android:textColor="@color/color_chat_buyer"
            android:layout_marginBottom="@dimen/margin_vvs"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_attachment_buyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"/>

        <TextView
            android:id="@+id/tv_from_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_from_seller"
            android:textSize="@dimen/text_size_xsmall"
            android:textColor="@color/color_chat_seller"
            android:layout_marginBottom="@dimen/margin_vvs"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_attachment_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"/>

        <TextView
            android:id="@+id/tv_from_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_from_admin"
            android:textSize="@dimen/text_size_xsmall"
            android:textColor="@color/color_chat_admin"
            android:layout_marginBottom="@dimen/margin_vvs"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_attachment_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"/>

        <TextView
            android:id="@+id/tv_remark_title"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_section_prove_status"
            android:textSize="@dimen/text_size_xsmall"
            android:textColor="@color/black_38"/>

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            context:text="keluhan pelanggan"
            android:textSize="@dimen/text_size_s_medium"
            android:textColor="@color/black_87" />
    </LinearLayout>
</LinearLayout>