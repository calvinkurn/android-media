<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:context="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_title"
            layout="@layout/item_detail_chat_title"/>

        <FrameLayout
            android:id="@+id/ff_bubble_left_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="@drawable/bg_bubble_left"
            android:minHeight="25dp"
            android:minWidth="120dp"
            android:padding="@dimen/padding_small">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_create_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/fontvs"
                    context:text="title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/string_buyer_solution2"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_buyer_solution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:textColor="@color/black_54"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/string_buyer_prove"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_prove"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/margin_small"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/string_buyer_text"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_buyer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:textColor="@color/black_54"/>
            </LinearLayout>

        </FrameLayout>

        <include
            android:id="@+id/layout_date_1"
            layout="@layout/item_detail_chat_date"/>

        <LinearLayout
            android:id="@+id/ff_bubble_left_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="@drawable/bg_bubble_left_white"
            android:minHeight="25dp"
            android:minWidth="120dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_complaint_product"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_complained_product"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/margin_small"
                    android:visibility="visible"/>

            </LinearLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"
                />

            <FrameLayout
                android:id="@+id/fl_see_all_product"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="@dimen/margin_vs"
                >

                <Button
                    android:id="@+id/btn_see_all_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:text="@string/string_see_all_product"
                    android:textAllCaps="false"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/fontvs"/>
            </FrameLayout>

        </LinearLayout>

        <include
            android:id="@+id/layout_date_2"
            layout="@layout/item_detail_chat_date"/>

        <FrameLayout
            android:id="@+id/ff_bubble_left_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="@drawable/bg_bubble_left_white"
            android:minHeight="25dp"
            android:minWidth="120dp"
            android:padding="@dimen/padding_small">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_seller_choice"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_seller_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:textColor="@color/black_54"/>
            </LinearLayout>

        </FrameLayout>

        <include
            android:id="@+id/layout_date_3"
            layout="@layout/item_detail_chat_date"/>
    </LinearLayout>


</RelativeLayout>