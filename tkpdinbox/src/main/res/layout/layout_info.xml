<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_close_24dp"
            android:tint="@color/green_btn"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_information"
            android:textSize="@dimen/font_title"
            android:textColor="@color/black_70"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/string_info_1"
            android:textSize="@dimen/font_subheading"
            android:textColor="@color/black_54"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_courier_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:textSize="@dimen/font_subheading"
            android:textColor="@color/black_70"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_info_2"
            android:textSize="@dimen/font_subheading"
            android:textColor="@color/black_54"
            android:gravity="center"/>
        
        <Button
            android:id="@+id/btn_close"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="@string/string_btn_close"
            android:background="@drawable/bg_button_enable"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/margin_sm"
            android:layout_marginRight="@dimen/margin_sm"
            android:layout_marginBottom="@dimen/margin_large"/>

    </LinearLayout>
</LinearLayout>