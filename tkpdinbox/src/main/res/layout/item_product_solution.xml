<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/red_50"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/font_black_secondary_54"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv_product_image"
                tools:text="Android Smartwatch"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <LinearLayout
                android:id="@+id/ll_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:textColor="@color/font_black_secondary_54"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toEndOf="@id/iv_product_image"
                    android:text="@string/string_qty"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black_secondary_54"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toEndOf="@id/iv_product_image"
                    android:text=" "
                    />

                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black_secondary_54"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toEndOf="@id/iv_product_image"
                    tools:text="1"
                    />
            </LinearLayout>

        </LinearLayout>

        <com.tokopedia.inbox.rescenter.createreso.view.adapter.viewholder.BaseSolutionRefundView
            android:id="@+id/view_solution"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_height="@dimen/dp_1"
        android:layout_width="match_parent"
        android:background="@color/black_12"/>

    <RelativeLayout
        android:id="@+id/layout_extra"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/transparent">

        <View
            android:layout_height="@dimen/dp_1"
            android:layout_width="match_parent"
            android:background="@color/black_12"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>