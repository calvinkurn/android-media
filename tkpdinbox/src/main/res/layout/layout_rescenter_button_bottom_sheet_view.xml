<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_transparent_disable"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/action_ask_help"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/action_edit_solution"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_transparent_disable"
            android:gravity="center"
            android:text="@string/action_edit_solution"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/action_cancel_resolution"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tkpd_main_green"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/action_cancel_resolution"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/action_input_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/tkpd_main_green"
        android:gravity="center"
        android:text="@string/action_input_address"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/action_input_awb_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tkpd_main_green"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/action_input_shipping_ref_number"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/action_accept_product"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/tkpd_main_green"
        android:gravity="center"
        android:text="@string/action_accept_product"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/action_accept_solution"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tkpd_main_green"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/action_accept_solution"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold" />

</LinearLayout>