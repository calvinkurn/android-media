<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:context="http://schemas.android.com/tools">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true" />

    <include layout="@layout/layout_next_step"
        android:id="@+id/cv_next_step"
        android:visibility="gone"
        context:visibility="visible"/>

    <com.tokopedia.inbox.rescenter.detailv2.view.customview.ButtonView
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_view"
        android:scrollbars="none"
        android:layout_below="@id/cv_next_step"
        android:layout_above="@id/button_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.DetailView
                android:id="@+id/detail_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.TimeView
                android:id="@+id/time_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"/>

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.AddressReturView
                android:id="@+id/address_retur_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.AwbReturView
                android:id="@+id/awb_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.SolutionView
                android:id="@+id/solution_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.ListProductView
                android:id="@+id/product_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.ProveView
                android:id="@+id/prove_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"/>

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.HistoryView
                android:id="@+id/history_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.FreeReturnView
                android:id="@+id/free_return_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.CancelComplaintView
                android:id="@+id/cancel_complaint_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_discussion"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/button_view"
        android:visibility="gone"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/tkpd_main_green"
        context:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_discussion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_small"
                android:gravity="center"
                android:text="@string/string_ic_discussion"
                android:textColor="@color/white" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>