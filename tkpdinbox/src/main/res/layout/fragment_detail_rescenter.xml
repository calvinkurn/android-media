<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true" />

    <com.tokopedia.inbox.rescenter.detailv2.view.customview.ButtonView
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <com.tokopedia.inbox.rescenter.detailv2.view.customview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_alignParentTop="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_view"
        android:scrollbars="none"
        android:layout_below="@id/status_view"
        android:layout_above="@id/button_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.DetailView
                android:id="@+id/detail_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />


            <com.tokopedia.inbox.rescenter.detailv2.view.customview.AwbReturView
                android:id="@+id/awb_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.AddressReturView
                android:id="@+id/address_retur_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.ListProductView
                android:id="@+id/product_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.SolutionView
                android:id="@+id/solution_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.inbox.rescenter.detailv2.view.customview.HistoryView
                android:id="@+id/history_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>