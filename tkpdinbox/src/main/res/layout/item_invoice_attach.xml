<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="206dp"
    android:background="@color/white_three"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/attach_invoice_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardPreventCornerOverlap="false"
        android:clipToPadding="true">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/attach_invoice_item_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/attach_invoice_item_invoice_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Micro.Green"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="sans-serif-medium"
                android:text="IVR/20171010/XVII/X/24225245"/>
            <TextView
                android:id="@+id/attach_invoice_item_invoice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignTop="@id/attach_invoice_item_invoice_no"
                android:textStyle="italic"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="10 Oct 2017"/>

            <ImageView android:id="@+id/attach_invoice_item_product_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@color/colorAccent"
                android:layout_below="@id/attach_invoice_item_invoice_no"
                android:layout_alignLeft="@id/attach_invoice_item_invoice_no"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/attach_invoice_item_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Small.Bold"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_below="@id/attach_invoice_item_invoice_no"
                android:layout_toRightOf="@id/attach_invoice_item_product_image"
                android:maxLines="2"
                android:text="Helm Cargloss MXC Supertrack Ice Brown"/>
            <TextView
                android:id="@+id/attach_invoice_item_product_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Micro.BlackDisabled"
                android:text="+4 barang lainnya"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="3"
                android:layout_below="@id/attach_invoice_item_product_name"
                android:layout_alignLeft="@id/attach_invoice_item_product_name"
                android:layout_alignBottom="@id/attach_invoice_item_product_image"
                />
            <TextView
                android:id="@+id/attach_invoice_item_invoice_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode resi pengiriman tidak valid"
                style="@style/TextView.Micro"
                android:fontFamily="sans-serif-medium"
                android:textColor="#f5a623"
                android:background="@drawable/bg_attach_invoice_status"
                android:layout_below="@id/attach_invoice_item_product_desc"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="20dp"
                android:paddingRight="21dp"
                />

            <View
                android:id="@+id/attach_invoice_item_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_hint"
                android:layout_below="@id/attach_invoice_item_invoice_status"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/attach_invoice_item_invoice_total_container"
                android:layout_marginTop="6dp"
                android:layout_below="@id/attach_invoice_item_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Small.BlackDisabled"
                android:layout_alignLeft="@id/attach_invoice_item_invoice_status"
                android:layout_alignParentBottom="true"
                android:text="Total: "/>
            <TextView
                android:id="@+id/attach_invoice_item_invoice_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 10.000.000"
                android:layout_marginTop="6dp"
                android:layout_below="@id/attach_invoice_item_separator"
                android:layout_toRightOf="@id/attach_invoice_item_invoice_total_container"
                android:layout_marginLeft="4dp"
                android:layout_alignParentBottom="true"
                style="@style/TextView.Small.OrangeRed.Bold"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>