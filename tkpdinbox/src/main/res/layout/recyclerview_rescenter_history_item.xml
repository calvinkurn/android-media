<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_12"
        android:visibility="gone"
        context:visibility="visible"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/tkpd_main_green"
                context:text="AUG"/>

            <TextView
                android:id="@+id/tv_date_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/tkpd_main_green"
                android:textSize="@dimen/fontxl"
                android:textStyle="bold"
                context:text="24"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/indicator_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <FrameLayout
                android:id="@+id/fl_button"
                android:layout_width="25dp"
                android:layout_height="25dp">

                <ImageView
                    android:id="@+id/indicator"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/bg_circle_green"
                    />

                <com.tokopedia.inbox.rescenter.detailv2.view.animation.GlowingView
                    android:id="@+id/view_glowing"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"/>
            </FrameLayout>

            <View
                android:id="@+id/line_indicator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@id/fl_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@color/black_12"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/tkpd_main_green"
                android:textSize="@dimen/text_size_s_medium"
                android:textStyle="bold"
                context:text="Pembeli"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black_38"
                android:textSize="@dimen/fontvs"
                context:text="12.34 WIB"
                />


            <TextView
                android:id="@+id/tv_history_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_username"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingBottom="@dimen/dp_10"
                context:text="Produk telah dikirim kembali oleh pembeli. Menunggu konfirmasi Penjual."
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_s_medium"/>


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
