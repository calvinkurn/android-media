<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:context="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:background="@color/white">

    <TextView
        android:layout_marginTop="@dimen/margin_vs"
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/indicator_container"
        android:layout_marginBottom="@dimen/margin_vs"
        android:text="@string/template_history_additional_information"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_action_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:layout_toRightOf="@id/indicator_container"
        android:paddingBottom="@dimen/padding_small"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        context:text="Produk telah dikirim kembali oleh pembeli. Menunggu konfirmasi Penjual."
        android:textColor="@color/label_text_color"
        android:textSize="@dimen/fontvs"
        />


    <RelativeLayout
        android:id="@+id/indicator_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_alignTop="@id/tv_date"
        android:layout_alignBottom="@id/tv_action_text">

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_check_circle_48dp"
            />

        <View
            android:id="@+id/line_indicator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/indicator"
            android:background="@color/grey"
            />

    </RelativeLayout>

</RelativeLayout>