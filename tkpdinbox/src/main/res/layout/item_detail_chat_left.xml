<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginRight="80dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_title_admin"
                android:textSize="@dimen/font_caption"
                context:text="sistem tokopedia"
                android:paddingLeft="@dimen/padding_ms"
                android:paddingRight="@dimen/padding_ms"
                android:textAllCaps="false"
                android:textColor="@color/black_38"/>

            <TextView
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:textColor="@color/grey_warm"
                context:text="&#8226;"/>

            <TextView
                android:id="@+id/tv_username_left"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:textColor="@color/black_54"
                android:gravity="center"
                android:foregroundGravity="center"
                android:textStyle="bold"
                context:text="user"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/margin_small"
            android:id="@+id/cv_bubble_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:minHeight="25dp"
            app:cardBackgroundColor="@color/black_12"
            app:cardCornerRadius="10dp">

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_date_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/black_38"
            context:text="date"
            />
    </LinearLayout>


</RelativeLayout>