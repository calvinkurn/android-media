<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/padding_small"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ref_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_reference_number"
                android:drawableRight="@drawable/ic_photography"
                android:drawableEnd="@drawable/ic_photography"
                android:maxLength="17"/>

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_kurir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:minHeight="48dp"
            />

        <TextView
            android:id="@+id/error_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/title_select_agency_error"
            android:textColor="@color/tkpd_dark_red"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingTop="@dimen/padding_vs"
            android:paddingBottom="@dimen/padding_vs"
            android:text="@string/title_create_resolution_step_2_desc"
            android:textSize="@dimen/fontvs" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_upload_proof"
            android:layout_width="match_parent"
            android:layout_height="72dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_confirm_button"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>