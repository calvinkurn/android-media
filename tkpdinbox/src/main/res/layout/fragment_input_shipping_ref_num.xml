<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_button_save_disable"
        android:gravity="center"
        android:text="@string/title_save_button"
        android:textColor="@color/black_38"
        android:textStyle="bold"
        android:clickable="false"
        android:enabled="false"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/confirm_button">

        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_input_awb_title"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/black_54"/>

                <ImageView
                    android:id="@+id/img_awb"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.tokopedia.design.component.EditTextCompat
                        android:id="@+id/ref_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/title_reference_number"
                        app:drawableRightCompat="@drawable/ic_select_awb"
                        android:maxLength="17"/>

                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/spinner_kurir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:minHeight="48dp"
                    />

                <TextView
                    android:id="@+id/error_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/title_select_agency_error"
                    android:textColor="@color/tkpd_dark_red"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/black_54"
                    android:text="@string/string_awb_attachment_title"
                    android:textSize="@dimen/font_medium" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_upload_proof"
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>