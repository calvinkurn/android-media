<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/padding_small"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/string_input_awb_title"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/black_54"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_awb_example"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="@dimen/padding_small"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ref_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_reference_number"
                    android:drawableRight="@drawable/ic_select_awb"
                    android:drawableEnd="@drawable/ic_select_awb"
                    android:maxLength="17"/>

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spinner_kurir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:minHeight="48dp"
                />

            <TextView
                android:id="@+id/error_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/title_select_agency_error"
                android:textColor="@color/tkpd_dark_red"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingTop="@dimen/padding_vs"
                android:paddingBottom="@dimen/padding_vs"
                android:textColor="@color/black_54"
                android:text="@string/string_awb_attachment_title"
                android:textSize="@dimen/font_medium" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_upload_proof"
                android:layout_width="match_parent"
                android:layout_height="72dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


        <TextView
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/bg_button_save_disable"
            android:gravity="center"
            android:text="@string/title_save_button"
            android:textColor="@color/black_38"
            android:textStyle="bold"
            android:clickable="false"
            android:enabled="false"/>
    </LinearLayout>

</RelativeLayout>