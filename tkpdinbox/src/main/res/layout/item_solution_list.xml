<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:padding="@dimen/padding_detail"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_sm"
    android:layout_marginLeft="@dimen/margin_sm"
    android:layout_marginRight="@dimen/margin_sm">
    
    <TextView
        android:id="@+id/tv_solution"
        android:padding="@dimen/padding_detail"
        android:textColor="@color/black_54"
        android:textSize="@dimen/fonts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</android.support.v7.widget.CardView>