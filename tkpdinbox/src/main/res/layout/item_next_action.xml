<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:minHeight="50dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_vvvs">

            <ImageView
                android:id="@+id/iv_indicator_circle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                context:src="@drawable/ic_step_current"/>

            <com.tokopedia.inbox.rescenter.detailv2.view.animation.GlowingView
                android:id="@+id/view_glowing"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_vvvs"/>
        </FrameLayout>

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_indicator_arrow"
            android:layout_width="8dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/fl_icon"
            android:paddingRight="2dp"
            android:layout_height="match_parent"
            android:tint="@color/black"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_vs">

        <TextView
            android:layout_marginLeft="@dimen/margin_small"
            android:id="@+id/tv_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontvs"
            android:textColor="@color/black_54"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_vs"
            context:text="asd"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
</LinearLayout>