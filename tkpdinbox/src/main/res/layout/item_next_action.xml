<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_indicator_circle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_vvvs"
            context:src="@drawable/ic_step_current"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_indicator_arrow"
            android:layout_width="8dp"
            android:layout_centerHorizontal="true"
            android:paddingRight="2dp"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_indicator_circle"
            android:tint="@color/black"
            context:src="@drawable/ic_step_arrow_past"/>

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="@dimen/margin_small"
        android:id="@+id/tv_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textColor="@color/black_54"
        android:layout_weight="1"
        android:paddingBottom="@dimen/padding_vs"
        context:text="asd"/>
</LinearLayout>