<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:context="http://schemas.android.com/tools">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/title_section_product_resolution"
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_s_medium"
                />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@color/deep_orange_500"
                />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/greyish_bg"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/iv_product_image"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="@string/title_null"
                        />

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_product_image"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        context:text="Lihat Semua produk yang dikomplain"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        />

                    <TextView
                        android:id="@+id/tv_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_product_name"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_product_image"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        context:text="Rp 1.275.000"
                        android:textColor="@color/tkpd_dark_red"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_14"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/label_buyer_complaint"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/label_text_color"
                />

            <TextView
                android:id="@+id/complaint_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                context:text="Produk Rusak"
                android:textSize="@dimen/sp_14"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/label_reason_complaint"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/label_text_color"
                />

            <TextView
                android:id="@+id/complaint_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                context:text="Pas dicolok ga bisa bunyi, pas saya eh kenapa kenapa kabelnya"
                android:textSize="@dimen/sp_14"
                />

            <LinearLayout
                android:id="@+id/view_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="@string/label_complaint_attachment"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/label_text_color"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/attachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>