<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/include_no_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding_small" >

        <ImageView
            android:layout_width="@dimen/img_hotprod"
            android:layout_height="@dimen/img_hotprod"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_vs"
            android:id="@+id/no_result_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:id="@+id/text_no_result"
            android:text="@string/no_result_res_center_discussion"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>