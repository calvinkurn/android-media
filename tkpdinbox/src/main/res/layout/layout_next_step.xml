<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/cv_next_step"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    tools:ignore="MergeRootFrame"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_54"
            android:textSize="@dimen/fontvs"
            android:text="@string/string_title_next_step"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_next_step_static"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center|top"
                app:srcCompat="@drawable/ic_check_circle_48dp"/>

            <com.tokopedia.inbox.rescenter.detailv2.view.animation.GlowingView
                android:id="@+id/view_glowing"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_next_step"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textSize="@dimen/fonts"
                android:text="asdad asd"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/black_87"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center|top"
                android:background="@drawable/chevron_down"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>