<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_help"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_med"
    android:background="@drawable/tkpd_address_card"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_it_helpful" />

    <LinearLayout
        android:padding="@dimen/padding_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@id/icon_dislike"
            android:layout_width="@dimen/margin_med"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_icon_repsis_dislike_active"
            />
        
        <TextView
            android:id="@+id/counter_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:layout_marginLeft="@dimen/margin_small"/>

        <Space
            android:layout_width="@dimen/margin_large"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@id/icon_like"
            android:layout_width="@dimen/margin_med"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_icon_repsis_like_active"
            />

        <TextView
            android:id="@id/counter_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:layout_marginLeft="@dimen/margin_small"/>

    </LinearLayout>
</LinearLayout>