<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_help"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_med"
    android:background="@color/light_green_300"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_it_helpful" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="@dimen/margin_med"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_icon_repsis_dislike_active"
            android:backgroundTint="@color/colorPrimary"
            />
        
        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"/>

        <Space
            android:layout_width="@dimen/padding_vs"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/margin_med"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_icon_repsis_like_active"
            android:backgroundTint="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"/>

    </LinearLayout>
</LinearLayout>