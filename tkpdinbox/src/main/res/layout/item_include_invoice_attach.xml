<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/invoice_height"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6"
        android:id="@+id/attach_invoice_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/CardView.Light"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:clipToPadding="true">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/attach_invoice_item_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/attach_invoice_item_invoice_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView.Micro.Green"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text="IVR/20171010/XVII/X/24225245"/>
            <TextView
                android:id="@+id/attach_invoice_item_invoice_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:textStyle="italic"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/attach_invoice_item_invoice_no"
                android:text="10 Oct 2017"/>

            <ImageView android:id="@+id/attach_invoice_item_product_image"
                android:layout_width="@dimen/invoice_thumbnail_size"
                android:layout_height="@dimen/invoice_thumbnail_size"
                android:scaleType="fitXY"
                android:src="@color/colorAccent"
                android:padding="@dimen/dp_1"
                android:layout_below="@id/attach_invoice_item_invoice_date"
                android:layout_alignLeft="@id/attach_invoice_item_invoice_date"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/grey_300"
                />

            <TextView
                android:id="@+id/attach_invoice_item_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Small"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_below="@id/attach_invoice_item_invoice_date"
                android:layout_toRightOf="@id/attach_invoice_item_product_image"
                android:maxLines="2"
                android:text="Helm Cargloss MXC Supertrack Ice Brown"/>
            <TextView
                android:id="@+id/attach_invoice_item_product_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Micro.BlackDisabled"
                android:text="+4 barang lainnya"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:maxLines="3"
                android:layout_below="@id/attach_invoice_item_product_name"
                android:layout_alignLeft="@id/attach_invoice_item_product_name"
                android:layout_alignBottom="@id/attach_invoice_item_product_image"
                />
            <TextView
                android:id="@+id/attach_invoice_item_invoice_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode resi pengiriman tidak valid"
                style="@style/TextView.Micro"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#f5a623"
                android:background="@drawable/bg_attach_invoice_status"
                android:layout_below="@id/attach_invoice_item_product_desc"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:maxLines="1"
                android:maxWidth="@dimen/dp_200"
                android:minWidth="@dimen/invoice_status_min_width" />


            <TextView
                android:id="@+id/attach_invoice_item_invoice_total_container"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Small.BlackDisabled"
                android:layout_alignLeft="@id/attach_invoice_item_invoice_status"
                android:layout_alignParentBottom="true"
                android:text="Total: "/>
            <TextView
                android:id="@+id/attach_invoice_item_invoice_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 10.000.000"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_toRightOf="@id/attach_invoice_item_invoice_total_container"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_alignParentBottom="true"
                style="@style/TextView.Small.OrangeRed.Bold"
                />

            <View
                android:id="@+id/attach_invoice_item_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_hint"
                android:layout_above="@id/attach_invoice_item_invoice_total_container"
                android:layout_marginTop="@dimen/dp_12"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>