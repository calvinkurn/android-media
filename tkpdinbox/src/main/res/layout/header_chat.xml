<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_header"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/circle_green"
        tools:src="@drawable/ic_image_avatar_boy" />
    <ImageView
        android:id="@+id/online_status"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/dot_notification"
        android:layout_alignBottom="@+id/user_avatar"
        android:layout_alignRight="@+id/user_avatar"
        android:layout_alignEnd="@+id/user_avatar" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/black_70"
        tools:text="Store"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/user_avatar"
        android:layout_toEndOf="@+id/user_avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/medium_green"
        android:background="@drawable/bg_stroke_rounded_corners"
        android:padding="4dp"
        tools:text="penjual"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_alignBottom="@+id/title" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black_38"
        android:lineSpacingExtra="9sp"
        tools:text="Terakhir online 3 menit yang lalu"
        android:layout_alignBottom="@+id/user_avatar"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title" />

</RelativeLayout>