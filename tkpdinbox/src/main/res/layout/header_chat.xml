<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_header"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        tools:src="@drawable/ic_image_avatar_boy"/>

    <ImageView
        android:id="@+id/online_status"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_alignBottom="@+id/user_avatar"
        android:layout_alignEnd="@+id/user_avatar"
        android:layout_alignRight="@+id/user_avatar"
        app:srcCompat="@drawable/dot_notification"
        android:visibility="gone"
        tools:visibility="visible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_avatar"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/user_avatar"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"

            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_70"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Store"/>

        <TextView
            android:id="@id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/title"
            android:layout_toRightOf="@+id/title"
            android:background="@drawable/label_user_chat"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:textColor="@color/medium_green"
            android:textSize="9sp"
            android:textStyle="normal"
            tools:text="penjual"/>

        <TextView
            android:id="@+id/subtitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_below="@id/title"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/black_38"
            android:textSize="11sp"
            android:textStyle="normal"
            tools:text="Terakhir online 3 menit yang lalu"/>
    </RelativeLayout>

</RelativeLayout>