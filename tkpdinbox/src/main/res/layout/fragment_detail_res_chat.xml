<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f9f9f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/ff_chat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_38" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small">

            <ImageView
                android:id="@+id/iv_attachment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_keyboard_attachment" />

            <EditText
                android:id="@+id/et_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center|left"
                android:hint="@string/string_hint_write_message"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:textColorHint="@color/black_38"
                android:textSize="@dimen/font_small" />

            <ImageView
                android:id="@+id/iv_send"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_keyboard_send" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_attach_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/ff_chat">

        <include
            android:id="@+id/layout_action"
            layout="@layout/layout_button_action"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="visible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_attachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_action"
            android:background="@color/trans_black_40"
            android:orientation="horizontal"
            android:visibility="gone"
            context:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_attach_action"
        android:orientation="vertical">

        <include layout="@layout/layout_next_step"
            android:id="@+id/cv_next_step"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chat"
            app:stackFromEnd="true"
            android:stackFromBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/margin_small"
            context:listitem="@layout/item_detail_common_left"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_attach_action"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_med"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:tint="@color/white"
        android:background="@color/tkpd_main_green"
        app:backgroundTint="@color/tkpd_main_green"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:rippleColor="@color/black_12"
        app:elevation="6dp" />
</RelativeLayout>