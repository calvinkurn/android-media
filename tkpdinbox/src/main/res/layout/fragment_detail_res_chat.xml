<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/ff_chat"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_three">

        <LinearLayout
            android:padding="@dimen/padding_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_attachment"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_keyboard_attachment"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_chat"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/font_body1"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:hint="@string/string_hint_write_message"
                android:textColorHint="@color/black_38"/>

            <ImageView
                android:id="@+id/iv_send"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_keyboard_send"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>


    <include layout="@layout/layout_button_action"
        android:id="@+id/layout_action"
        android:visibility="visible"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:layout_above="@id/ff_chat" />

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_action"
        android:orientation="vertical">

        <include layout="@layout/layout_next_step"
            android:id="@+id/cv_next_step"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/margin_vs"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_attachment"
        android:layout_above="@id/ff_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trans_black_40"
        android:orientation="horizontal"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>