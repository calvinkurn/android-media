<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/cv_next_step"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            tools:ignore="MergeRootFrame"
            app:cardBackgroundColor="@color/white_three">

            <LinearLayout
                android:padding="@dimen/padding_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_54"
                    android:text="Langkah Selanjutnya"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_ms"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_step_current"/>

                    <TextView
                        android:id="@+id/tv_next_step"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:textSize="@dimen/text_size_s_medium"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/chevron_down"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_margin="@dimen/margin_small"
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:id="@+id/ff_chat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_three">

            <LinearLayout
                android:padding="@dimen/padding_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_attachment"
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_keyboard_attachment"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/et_chat"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_body1"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:hint="Tulis Pesan"
                    android:textColorHint="@color/black_38"/>

                <ImageView
                    android:id="@+id/iv_send"
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_keyboard_send"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>