<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/reply_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/attach_but"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/padding_small"
            app:srcCompat="@drawable/ic_action_attachment" />

        <EditText
            android:id="@+id/reply_box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/hint_write_message" />

        <ImageView
            android:id="@+id/send_button"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/padding_small"
            app:srcCompat="@drawable/ic_send_24dp_green" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/discussion_list"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_small"
        android:layout_height="match_parent"
        android:layout_above="@id/reply_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_image_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/reply_view"
        android:background="@color/trans_black_40"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible" />


</RelativeLayout>