<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_text_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_holder_small"
        android:layout_width="@dimen/margin_default"
        android:layout_height="@dimen/margin_default"
        android:scaleType="centerCrop"
        android:tint="@color/grey_500"
        app:srcCompat="@drawable/ic_time" />

    <TextView
        android:id="@+id/textview_holder_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_default"
        android:paddingStart="@dimen/margin_default"
        android:text="25 Nov 2017 Pukul"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal" />

</LinearLayout>