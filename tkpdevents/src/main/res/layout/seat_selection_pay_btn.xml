<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCREEN THIS WAY"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@color/grey_400"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/seats_available_iv"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/can_seat_select_bg"/>

        <TextView
            android:id="@+id/tv_seats_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/seats_available_iv"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:text="Tersedia"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/seats_not_available_iv"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv_seats_available"
            android:src="@drawable/cannot_select_seat_bg"/>

        <TextView
            android:id="@+id/tv_seats__not_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/seats_not_available_iv"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Terjual"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/seats_booking"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv_seats__not_available"
            android:src="@drawable/currently_selected_seat_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/seats_booking"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:text="Terpilih"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiket: "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ticket_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_200"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5722"/>

        </LinearLayout>

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/margin_default"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="2dp"
        app:cardCornerRadius="@dimen/card_corner_default"
        app:cardBackgroundColor="@color/green_400">
        <TextView
            android:id="@+id/button_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Lanjutkan"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:typeface="monospace"/>

    </android.support.v7.widget.CardView>

</LinearLayout>