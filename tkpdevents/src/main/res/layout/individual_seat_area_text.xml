<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_padding_medium"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/seat_areaID"
        android:layout_width="@dimen/margin_left_skip_nob"
        android:layout_height="@dimen/margin_left_skip_nob"
        android:layout_gravity="center"
        android:layout_margin="@dimen/divider_height_thin"
        android:layout_marginLeft="@dimen/margin_left_skip_nob"
        android:textColor="@color/black"
        android:textSize="@dimen/font_micro" />

    <LinearLayout
        android:id="@+id/seatTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_medium"
        android:orientation="horizontal" />

</LinearLayout>