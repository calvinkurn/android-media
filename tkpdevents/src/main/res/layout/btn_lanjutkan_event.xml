<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:padding="@dimen/new_margin_med">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/linearLayout2"
            android:text="Mulai dari harga:"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/font_micro"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_event_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView3"
            android:text="Rp 552.00"
            android:textColor="@color/orange"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/new_margin_med"
        app:cardBackgroundColor="@color/green_nob"
        app:cardCornerRadius="@dimen/new_margin_tiny"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/button_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/margin_padding_medium"
            android:text="@string/lanjutkan"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_big"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
</RelativeLayout>