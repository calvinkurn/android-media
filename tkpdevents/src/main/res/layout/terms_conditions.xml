<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/btn_terms_conditions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/show_tnc"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:textStyle="bold" />

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/tv_expandable_tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:textColor="@color/grey_500"
            android:maxLines="3"
            android:text="@string/bigcontent"
            android:textSize="12sp"
            app:animation_duration="300" />

    <LinearLayout
        android:id="@+id/expand_view_tnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seemorebutton_tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/expand"
            android:textColor="@color/green_nob"
            android:textStyle="bold"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/down_arrow_tnc"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:tint="@color/green_nob"
            android:src="@drawable/ic_arrow_down"/>
    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>