<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/btn_terms_conditions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/margin_med"
            android:text="@string/show_tnc"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/tv_expandable_tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/bigcontent"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/sp_12"
            app:animation_duration="300" />

        <LinearLayout
            android:id="@+id/expand_view_tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seemorebutton_tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:text="@string/expand"
                android:textColor="@color/green_nob"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/down_arrow_tnc"
                android:layout_width="@dimen/margin_padding_medium"
                android:layout_height="@dimen/margin_padding_medium"
                android:layout_marginBottom="@dimen/margin_padding_medium"
                android:layout_marginLeft="@dimen/margin_padding_medium"
                android:layout_marginStart="@dimen/margin_padding_medium"
                android:layout_marginTop="@dimen/sp_12"
                android:tint="@color/green_nob"
                app:srcCompat="@drawable/ic_arrow_down" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>