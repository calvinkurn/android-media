<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_default"
    app:cardElevation="1dp">

    <LinearLayout
        android:id="@+id/btn_terms_conditions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/show_tnc"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" />

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/tv_expandable_tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:textColor="@color/grey_700"
            android:maxLines="3"
            android:text="@string/bigcontent"
            android:textSize="14sp"
            app:animation_duration="300" />

        <TextView
            android:id="@+id/seemorebutton_tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/expand"
            android:textColor="@color/link_color_green"
            android:textSize="14sp" />


    </LinearLayout>
</android.support.v7.widget.CardView>