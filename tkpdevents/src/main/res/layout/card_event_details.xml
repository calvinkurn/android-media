<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="The 90s Festival"
        android:textColor="@color/grey_700"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/event_display_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <include
            android:id="@+id/event_time"
            layout="@layout/image_textview_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <include
            android:id="@+id/event_location"
            layout="@layout/image_textview_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <include
            android:id="@+id/event_address"
            layout="@layout/image_textview_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/margin_default"
        android:background="@color/grey_100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Deskripsi"
        android:textColor="@color/grey_700"
        android:textSize="12sp"
        android:textStyle="bold" />

    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/tv_expandable_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:autoLink="web"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/bigcontent"
        android:textColor="@color/grey_500"
        android:textSize="12sp"
        android:textStyle="normal"
        app:animation_duration="300" />

    <LinearLayout
        android:id="@+id/expand_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/seemorebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/expand"
        android:textColor="@color/green_nob"
        android:textSize="12sp"
        android:textStyle="bold" />

        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:tint="@color/green_nob"
            android:src="@drawable/ic_arrow_down"/>

    </LinearLayout>

</LinearLayout>