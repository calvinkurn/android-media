<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@color/tkpd_main_green"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:elevation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitleTextAppearance="@style/EventToolbarTextStyle"
        app:titleTextAppearance="@style/EventToolbarTextStyle" />

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/htab_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        tools:context="com.tokopedia.events.view.activity.EventsHomeActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/carousel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:layout_collapseMode="parallax">

                        <com.tkpd.library.ui.widget.TouchViewPager
                            android:id="@+id/event_bannerpager"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/banner_height"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <com.tokopedia.events.view.utils.CirclePageIndicator
                            android:id="@+id/pager_indicator"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/new_margin_small"
                            android:layout_marginLeft="@dimen/margin_default"
                            android:layout_marginRight="@dimen/new_margin_small"
                            android:layout_marginStart="@dimen/margin_default"
                            android:padding="@dimen/divider_height_thin"
                            app:centered="false"
                            app:fillColor="@color/green_nob"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_promo_codes"
                            app:layout_constraintEnd_toStartOf="@+id/tv_promo_codes"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_promo_codes"
                            app:layout_constraintVertical_bias="0.5"
                            app:pageColor="@color/grey_400"
                            app:radius="@dimen/margin_padding_small"
                            app:strokeColor="@color/grey_400" />

                        <TextView
                            android:id="@+id/tv_promo_codes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:layout_marginTop="@dimen/new_margin_sm"
                            android:drawableRight="@drawable/ic_arrow_right"
                            android:drawableTint="@color/green_nob"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:text="@string/promo_button_text"
                            android:textColor="@color/green_nob"
                            android:textStyle="normal"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/event_bannerpager" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/new_margin_sm"
                        android:layout_marginTop="@dimen/margin_default"
                        android:background="@color/white"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">

                        <TextView
                            android:id="@+id/tv12_topevents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_default"
                            android:layout_marginStart="@dimen/margin_default"
                            android:text="Top Events"
                            android:textColor="@color/black_70"
                            android:textSize="@dimen/font_smaller"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewpager_top_events"
                            android:layout_width="0dp"
                            android:layout_height="216dp"
                            android:layout_marginTop="@dimen/margin_default"
                            android:background="@color/white"
                            android:clipToPadding="false"
                            android:overScrollMode="never"
                            android:paddingBottom="@dimen/margin_default"
                            android:paddingEnd="@dimen/new_margin_sm"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingRight="@dimen/new_margin_sm"
                            android:paddingStart="@dimen/margin_default"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv12_topevents" />

                        <TextView
                            android:id="@+id/tv_addtocalendar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_default"
                            android:layout_marginStart="@dimen/margin_default"
                            android:drawableLeft="@drawable/ic_event_calendar_white"
                            android:drawablePadding="@dimen/new_margin_medsmall"
                            android:drawableStart="@drawable/ic_event_calendar_white"
                            android:drawableTint="@color/green_nob"
                            android:text="Lihat Kalendar Event"
                            android:textColor="@color/green_nob"
                            android:textSize="@dimen/font_smaller"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewpager_top_events"
                            tools:text="Lihat Kalendar Event" />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_thin"
                android:background="@color/grey_200" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|snap"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/green_nob"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/green_nob"
                app:tabTextAppearance="@style/EventTabLayoutTextStyle"
                app:tabTextColor="@color/black_38" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/category_view_pager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v4.view.ViewPager>


    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/progbar_height"
            android:layout_height="@dimen/progbar_height"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>