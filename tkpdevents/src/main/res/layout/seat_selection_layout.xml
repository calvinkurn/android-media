<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/seatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:subtitleTextAppearance="@style/EventToolbarTextStyle"
            app:theme="@style/AppBarTheme"
            app:titleTextAppearance="@style/EventToolbarTextStyle" />


        <TextView
            android:id="@+id/tv_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:textColor="@color/green_400"
            android:textSize="@dimen/textsize_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_holder_small"
                android:layout_width="@dimen/margin_default"
                android:layout_height="@dimen/margin_default"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:tint="@color/grey_500"
                app:srcCompat="@drawable/ic_time" />

            <TextView
                android:id="@+id/tv_show_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_padding_medium"
                android:gravity="center"
                android:text="@string/rp_5980000"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_padding_medium"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/divider_height_thin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pilihan_kursi"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_micro" />

            <TextView
                android:id="@+id/selected_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_padding_medium"
                android:textColor="@color/green_400"
                android:textSize="@dimen/font_micro" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:background="?android:attr/listDivider" />


        <include
            android:id="@+id/seat_plan"
            layout="@layout/include_seating_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seat_plan_height"
            android:layout_marginBottom="@dimen/divider_height_thin"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="@dimen/divider_height_thin" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/preview_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:background="@color/preview_bg"
        android:visibility="gone">

        <ImageView
            android:id="@+id/small_preview"
            android:layout_width="@dimen/pager_height"
            android:layout_height="@dimen/pager_height"
            android:padding="@dimen/margin_padding_medium" />
    </FrameLayout>


    <include
        android:id="@+id/pay_tickets"
        layout="@layout/seat_selection_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/progbar_height"
            android:layout_height="@dimen/progbar_height"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>
