<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    android:background="@color/grey_200">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:elevation="0dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_default"
                    android:paddingTop="@dimen/margin_default">

                    <ImageView
                        android:id="@+id/event_image_small"
                        android:layout_width="match_parent"
                        android:layout_height="109dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_default"
                        android:layout_marginEnd="@dimen/margin_default"
                        android:layout_marginStart="@dimen/margin_default"
                        android:scaleType="fitXY"
                        android:src="@color/deep_orange_500" />

                    <TextView
                        android:id="@+id/event_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingRight="@dimen/margin_default"
                        android:text="The 90s Festival"
                        android:textColor="@color/grey_800"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/event_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_default"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="DDA Ground :Dwarka"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/event_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:paddingTop="4dp"
                        android:text="7:30 PM"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:elevation="0dp"
                app:cardCornerRadius="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_default"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_default"
                    android:paddingTop="@dimen/margin_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="Detail Tiket"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_ticket_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Type"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/event_total_tickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jumlah_tiket"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:elevation="0dp"
                app:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_default"
                    android:paddingTop="@dimen/margin_default">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_default"
                        android:layout_marginStart="@dimen/margin_default"
                        android:paddingBottom="8dp"
                        android:text="Tujuan Pengiriman Tiket"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/update_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_telephone"
                        android:layout_alignBottom="@+id/tv_telephone"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="end"
                        android:paddingEnd="@dimen/margin_default"
                        android:paddingRight="@dimen/margin_default"
                        android:text="Ubah"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv1"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginLeft="@dimen/margin_default"
                        android:layout_marginStart="@dimen/margin_default"
                        android:text="E-mail"
                        android:textColor="@color/grey_900"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/tv_visitor_names"
                        android:layout_width="296dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv2"
                        android:layout_marginBottom="@dimen/margin_default"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:text="Mad Max and 4 Others"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/update_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_visitor_names"
                        android:layout_alignBottom="@+id/tv_visitor_names"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="end"
                        android:paddingEnd="@dimen/margin_default"
                        android:paddingRight="@dimen/margin_default"
                        android:text="Ubah"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_visitor_names"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginLeft="@dimen/margin_default"
                        android:layout_marginStart="@dimen/margin_default"
                        android:text="No. Telepon"
                        android:textColor="@color/grey_900"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/tv_telephone"
                        android:layout_width="296dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv3"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:paddingBottom="8dp"
                        android:text="Mad Max and 4 Others"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/form_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:elevation="0dp"
                android:visibility="gone"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_default"
                    android:paddingTop="@dimen/margin_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_ms"
                        android:layout_marginLeft="@dimen/margin_default"
                        android:layout_marginStart="@dimen/margin_default"
                        android:text="Data Pelanggan Tambahan"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_default"
                        android:layout_marginEnd="@dimen/margin_default"
                        android:layout_marginLeft="@dimen/margin_default"
                        android:layout_marginRight="@dimen/margin_default"
                        android:layout_marginStart="@dimen/margin_default"
                        android:text="Informasi ini akan digunakan pada saat penukaran tiket"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/ed_form_1"
                        android:layout_width="296dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/ed_form_2"
                        android:layout_width="296dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/ed_form_3"
                        android:layout_width="296dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/ed_form_4"
                        android:layout_width="296dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:elevation="0dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_default">

                        <CheckBox
                            android:id="@+id/promo_checkbox"
                            android:layout_width="30dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_default"
                            android:layout_marginStart="@dimen/margin_default"
                            android:text="Gunakan Kode Promo Tokopedia"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/ed_promo_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/ed_promo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_default"
                            android:layout_marginStart="@dimen/margin_default"
                            android:hint="Enter PromoCode"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/update_promo"
                            android:layout_width="80dp"
                            android:layout_height="32dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:background="@drawable/rounded_rectangle_green_solid"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="Ubah"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </FrameLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:elevation="0dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_default"
                    android:paddingTop="@dimen/margin_default">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv3"
                        android:paddingBottom="8dp"
                        android:paddingEnd="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="Review and Pay"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_provider_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingEnd="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="Fare Breakup for RedRocks Entertainment Dabang Tour 2017"
                        android:textColor="@color/grey_900"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basefare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Base Fare"
                            android:textColor="@color/grey_700"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_base_fare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Rp 540000"
                            android:textColor="@color/grey_900"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/base_fare_break"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/basefare"
                            android:layout_marginBottom="4dp"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="@string/_2_x_rp100000"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Biaya Layannan"
                            android:textColor="@color/grey_800"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_conv_fees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Rp 540000"
                            android:textColor="@color/grey_800"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="54dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Total Pembayaran"
                            android:textColor="@color/grey_900"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Rp 540000"
                            android:textColor="@color/deep_orange_500"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/btn_go_to_payment"
        layout="@layout/btn_book_event"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@color/white"
        app:theme="@style/AppBarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/grey_900" />
</FrameLayout>