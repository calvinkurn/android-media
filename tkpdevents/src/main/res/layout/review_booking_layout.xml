<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="2dp"
                android:elevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/event_image_small"
                        android:layout_width="74dp"
                        android:layout_height="109dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_default"
                        android:layout_marginEnd="@dimen/margin_default"
                        android:layout_marginStart="@dimen/margin_default"
                        android:layout_marginTop="@dimen/margin_default"
                        android:src="@color/deep_orange_500" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/event_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_default"
                            android:text="The 90s Festival"
                            android:textColor="@color/grey_800"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/event_address_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="DDA Ground :Dwarka"
                            android:textColor="@color/grey_700" />

                        <TextView
                            android:id="@+id/event_time_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/margin_default"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="7:30 PM"
                            android:textColor="@color/grey_700"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="2dp"
                android:elevation="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_default"
                    android:paddingTop="@dimen/margin_default"
                    android:paddingBottom="@dimen/margin_default"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="Detail Tiket"
                        android:textColor="@color/grey_900"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_ticket_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Type"
                        android:textColor="@color/grey_700" />

                    <TextView
                        android:id="@+id/event_total_tickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jumlah_tiket"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp" />


                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:paddingBottom="8dp"-->
                    <!--android:paddingStart="@dimen/margin_default"-->
                    <!--android:paddingLeft="@dimen/margin_default"-->
                    <!--android:text="2 x Phase 2 General A - Jai Ho"-->
                    <!--android:textColor="@color/grey_700" />-->
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="2dp"
                android:elevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="Tujuan Pengiriman Tiket"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/update_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_telephone"
                        android:layout_alignBottom="@+id/tv_telephone"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="end"
                        android:paddingEnd="@dimen/margin_default"
                        android:paddingRight="@dimen/margin_default"
                        android:text="Ubah"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_below="@id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="E-mail"
                        android:layout_marginBottom="-8dp"
                        android:textColor="@color/grey_900" />

                    <EditText
                        android:layout_below="@id/tv2"
                        android:id="@+id/tv_visitor_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="Mad Max and 4 Others"
                        android:textColor="@color/grey_700" />

                    <TextView
                        android:id="@+id/update_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="end"
                        android:paddingEnd="@dimen/margin_default"
                        android:paddingRight="@dimen/margin_default"
                        android:text="Ubah"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_below="@id/tv_visitor_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="No. Telepon"
                        android:layout_marginBottom="-8dp"

                        android:textColor="@color/grey_900" />

                    <EditText
                        android:layout_below="@id/tv3"
                        android:id="@+id/tv_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="Mad Max and 4 Others"
                        android:textColor="@color/grey_700" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="2dp"
                android:elevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_default">

                    <CheckBox
                        android:id="@+id/promo_checkbox"
                        android:layout_width="30dp"
                        android:layout_height="22dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_default"
                        android:layout_marginStart="@dimen/margin_default"
                        android:paddingBottom="8dp"
                        android:text="Gunakan Kode Promo Tokopedia"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ed_promo_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:visibility="gone">
                        <EditText
                            android:id="@+id/ed_promo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Enter PromoCode"
                            android:layout_marginLeft="@dimen/margin_default"
                            android:layout_marginStart="@dimen/margin_default"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/update_promo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ubah"
                            android:gravity="end"
                            android:paddingEnd="@dimen/margin_default"
                            android:paddingRight="@dimen/margin_default"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="2dp"
                android:elevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="Review and Pay"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_provider_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingEnd="@dimen/margin_default"
                        android:paddingStart="@dimen/margin_default"
                        android:text="Fare Breakup for RedRocks Entertainment Dabang Tour 2017"
                        android:textColor="@color/grey_900" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basefare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Base Fare"
                            android:textColor="@color/grey_700" />

                        <TextView
                            android:id="@+id/tv_base_fare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Rp 540000"
                            android:textColor="@color/grey_900" />
                        <TextView
                            android:id="@+id/base_fare_break"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:layout_marginBottom="4dp"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:layout_below="@+id/basefare"
                            android:text="@string/_2_x_rp100000"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Biaya Layannan"
                            android:textColor="@color/grey_800" />

                        <TextView
                            android:id="@+id/tv_conv_fees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Rp 540000"
                            android:textColor="@color/grey_800" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="54dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Total Pembayaran"
                            android:textColor="@color/grey_900"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginRight="@dimen/margin_default"
                            android:paddingLeft="@dimen/margin_default"
                            android:paddingStart="@dimen/margin_default"
                            android:text="Rp 540000"
                            android:textColor="@color/deep_orange_500"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/btn_go_to_payment"
        layout="@layout/btn_book_event"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:layout_gravity="bottom" />
    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:visibility="gone">
    <ProgressBar
        android:id="@+id/prog_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>