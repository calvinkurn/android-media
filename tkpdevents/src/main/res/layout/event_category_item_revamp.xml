<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_category_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_default"
    android:layout_marginLeft="@dimen/margin_default"
    android:layout_marginRight="@dimen/margin_default"
    android:layout_marginStart="@dimen/margin_default"
    android:layout_marginTop="@dimen/margin_default"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ms"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:textColor="@color/orange"
            android:textSize="@dimen/font_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Rp3.123.123" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:text="Mulai Dari Harga:"
            android:textColor="@color/black_54"
            android:textSize="@dimen/textsize_tiny"
            app:layout_constraintBottom_toTopOf="@+id/tv1_price"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Mulai Dari Harga:" />

        <View
            android:id="@+id/divider1"
            android:layout_width="@dimen/divider_height_thin"
            android:layout_height="@dimen/smallicon_size"
            android:layout_marginBottom="@dimen/new_margin_medsmall"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:background="@color/grey_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_add_to_wishlist" />

        <TextView
            android:id="@+id/tv_add_to_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:drawableLeft="@drawable/ic_event_wishlist"
            android:drawablePadding="@dimen/margin_padding_small"
            android:drawableStart="@drawable/ic_event_wishlist"
            android:gravity="center_vertical"
            android:text="1,2k"
            android:textSize="@dimen/textsize_tiny"
            app:layout_constraintBottom_toBottomOf="@+id/divider2"
            app:layout_constraintStart_toEndOf="@id/divider2"
            app:layout_constraintTop_toTopOf="@id/divider2"
            tools:text="1,2k" />

        <View
            android:id="@+id/divider2"
            android:layout_width="@dimen/divider_height_thin"
            android:layout_height="@dimen/smallicon_size"
            android:layout_marginBottom="@dimen/new_margin_medsmall"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:background="@color/grey_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_event_share" />

        <TextView
            android:id="@+id/tv_event_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/new_margin_medsmall"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            android:drawableLeft="@drawable/ic_event_share"
            android:drawablePadding="@dimen/margin_padding_small"
            android:drawableStart="@drawable/ic_event_share"
            android:gravity="center_vertical"
            android:text="1,2k"
            android:textSize="@dimen/textsize_tiny"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="1,2k" />

        <ImageView
            android:id="@+id/iv_event_thumb"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginBottom="14dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/tv_event_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/rounded_rectangle_green_solid" />

        <TextView
            android:id="@+id/tv3_sold_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@drawable/rounded_rectangle_black_solid"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="RERJUAL 298"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_tiny"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TERJUAL_298" />

        <TextView
            android:id="@+id/tv3_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@drawable/rounded_rectangle_black_solid"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Exklusif"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_tiny"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv3_sold_cnt"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="EXCLUSIF" />

        <TextView
            android:id="@+id/tv4_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ms"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            android:drawableLeft="@drawable/ic_event_calendar_white"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_event_calendar_white"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_micro"
            app:layout_constraintBottom_toBottomOf="@+id/iv_event_thumb"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="23 Jan '18 - 5 Des '18" />

        <TextView
            android:id="@+id/tv4_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ms"
            android:layout_marginEnd="@dimen/new_margin_med"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/new_margin_med"
            android:layout_marginStart="@dimen/margin_default"
            android:drawableLeft="@drawable/ic_putih"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_putih"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_micro"
            app:layout_constraintBottom_toBottomOf="@+id/iv_event_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv4_date_time"
            tools:text="Jakarta" />

        <TextView
            android:id="@+id/tv4_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_padding_small"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/font_micro"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv4_date_time"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Indonesia Fashion Week" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>