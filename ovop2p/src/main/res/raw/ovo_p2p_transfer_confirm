mutation goalP2PConfirm($amount: Int!, $to_phone_number: String!, $message: String) {
 goalP2PConfirm(amount: $amount, to_phone_number: $to_phone_number, message: $message) {
    status
    transfer_id
    transaction_id
    pin_url
    receiver_link
    errors {
        title
        message
    }
  }
}
