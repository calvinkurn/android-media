<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_24">

    <TextView
        android:id="@+id/txtv_trnsfr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/ovop2p_conf_trnsfr"
        android:textColor="@color/clr_4c2a86"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcvr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/ovop2p_pnrm"
        android:textColor="@color/clr_6b767e"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/txtv_trnsfr"
        app:layout_constraintTop_toBottomOf="@+id/txtv_trnsfr" />

    <ImageView
        android:id="@+id/rcvr_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:src="@drawable/group_2"
        app:layout_constraintStart_toStartOf="@+id/txtv_trnsfr"
        app:layout_constraintTop_toBottomOf="@+id/rcvr" />

    <TextView
        android:id="@+id/rcvr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_2"
        tools:text="Juwita Restianisa"
        android:textColor="@color/clr_2d263b"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/rcvr_img"
        app:layout_constraintTop_toTopOf="@+id/rcvr_img" />

    <TextView
        android:id="@+id/rcvr_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_2"
        tools:text="082332443770"
        android:textColor="@color/clr_6b767e"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@+id/rcvr_img"
        app:layout_constraintTop_toBottomOf="@+id/rcvr_name" />

    <TextView
        android:id="@+id/trnsfr_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:lineSpacingExtra="12sp"
        android:text="@string/ovop2p_sumdan"
        android:textColor="@color/clr_6b767e"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/rcvr_img"
        app:layout_constraintTop_toBottomOf="@+id/rcvr_no" />

    <TextView
        android:id="@+id/trnsfr_mode_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/ovop2p_ovocsh"
        android:textColor="@color/clr_2d263b"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="@+id/trnsfr_mode"
        app:layout_constraintTop_toBottomOf="@+id/trnsfr_mode" />

    <TextView
        android:id="@+id/amt_ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:lineSpacingExtra="12sp"
        android:text="@string/ovop2p_nmnl"
        android:textColor="@color/clr_6b767e"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/trnsfr_mode_val"
        app:layout_constraintTop_toBottomOf="@+id/trnsfr_mode_val" />

    <TextView
        android:id="@+id/trnsfr_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="Rp13.000"
        android:textColor="@color/clr_2d263b"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toStartOf="@+id/amt_ttl"
        app:layout_constraintTop_toBottomOf="@+id/amt_ttl" />

    <TextView
        android:id="@+id/msg_ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:lineSpacingExtra="12sp"
        android:text="@string/ovop2p_psn"
        android:textColor="@color/clr_6b767e"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/trnsfr_amt"
        app:layout_constraintTop_toBottomOf="@+id/trnsfr_amt" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:lineSpacingExtra="@dimen/sp_8"
        android:text="@string/ovop2p_terkas"
        android:textColor="@color/clr_2d263b"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="@+id/msg_ttl"
        app:layout_constraintTop_toBottomOf="@+id/msg_ttl" />

    <Button
        android:id="@+id/proceed_dlg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/btn_bg_rounded_corners"
        android:gravity="center"
        android:text="@string/trnsfr"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/msg" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_5"
        android:text="@string/ovop2p_btlkn"
        android:textColor="@color/clr_06b3ba"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/proceed_dlg" />

</android.support.constraint.ConstraintLayout>