<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/sucs_img"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_27"
        android:src="@drawable/ic_group_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@+id/sucs_ttl"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sucs_ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Berhasil"
        android:textColor="#73bd00"
        android:textSize="18sp"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@+id/sucs_img"
        app:layout_constraintBottom_toBottomOf="@+id/sucs_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sucs_img" />

    <TextView
        android:id="@+id/trnsfr_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#6b767e"
        android:layout_marginTop="@dimen/dp_7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sucs_ttl" />

    <TextView
        android:id="@+id/from"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="#6b767e"
        android:text="Dari"
        android:paddingBottom="@dimen/dp_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trnsfr_date" />

    <ImageView
        android:id="@+id/ic_ovo"
        app:layout_constraintStart_toStartOf="@+id/from"
        app:layout_constraintTop_toBottomOf="@+id/from"
        android:src="@drawable/ic_ovo_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#2d263b"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/ic_ovo"
        app:layout_constraintTop_toTopOf="@+id/ic_ovo"/>

    <TextView
        android:id="@+id/num_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#2d263b"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/ic_ovo"
        app:layout_constraintTop_toBottomOf="@+id/name_sender" />

    <TextView
        android:id="@+id/to"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingBottom="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="#6b767e"
        android:text="Transfer ke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_sender" />

    <ImageView
        android:id="@+id/ic_ovo_to"
        app:layout_constraintStart_toStartOf="@+id/to"
        app:layout_constraintTop_toBottomOf="@+id/to"
        android:src="@drawable/ic_ovo_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name_rcvr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="16sp"
        android:textColor="#2d263b"
        app:layout_constraintStart_toEndOf="@+id/ic_ovo_to"
        app:layout_constraintTop_toTopOf="@+id/ic_ovo_to"/>

    <TextView
        android:id="@+id/num_rcvr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#2d263b"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/ic_ovo_to"
        app:layout_constraintTop_toBottomOf="@+id/name_rcvr" />

    <TextView
        android:id="@+id/ttl_msg"
        android:paddingTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#6b767e"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Pesan"
        app:layout_constraintTop_toBottomOf="@+id/num_rcvr" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#2d263b"
        android:paddingTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bottom_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttl_msg"
        android:text=""
        android:paddingBottom="@dimen/dp_8"/>

    <TextView
        android:id="@+id/num_ref"
        android:paddingTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/txt_msg"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        android:textColor="#6b767e"
        android:text="No. Referensi" />

    <TextView
        android:id="@+id/txt_ref_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_ref"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textSize="14sp"
        android:paddingTop="@dimen/dp_8"
        android:textColor="#2d263b"
        android:background="@drawable/bottom_border"
        android:paddingBottom="@dimen/dp_8"/>

    <TextView
        android:id="@+id/ttl_src_fnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_16"
        android:textSize="12sp"
        android:textColor="#6b767e"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/txt_ref_no"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Sumber Dana" />

    <TextView
        android:id="@+id/txt_src_fnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#2d263b"
        android:paddingTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/ttl_src_fnd"
        android:text="OVO Cash"
        />

    <TextView
        android:id="@+id/txt_amt"
        app:layout_constraintTop_toTopOf="@+id/txt_src_fnd"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#73bd00"
        android:layout_marginRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:gravity="end" />

    <View
        android:id="@+id/vw_dvdr"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/txt_src_fnd"
        android:background="#eef0f3"/>

    <include
        android:id="@+id/branding_lauout"
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>