<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <ImageView
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scanqr_imgvw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_icon_qr_code"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scan_qr_header"
        android:textColor="#06b3ba"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="Scan untuk Transfer"
        app:layout_constraintStart_toEndOf="@id/scanqr_imgvw"
        app:layout_constraintTop_toTopOf="@+id/scanqr_imgvw"
        app:layout_constraintBottom_toBottomOf="@+id/scanqr_imgvw"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_16"
        android:id="@+id/dvdr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanqr_imgvw"
        android:background="#dee0e2"/>

    <ListView
        android:id="@+id/contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dvdr"/>
</android.support.constraint.ConstraintLayout>