<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.White" parent="Base.Toolbar.Theme">
        <item name="toolbarTheme">@style/Toolbar.White</item>
        <item name="tabTheme">@style/TabBar.White</item>
    </style>

    <style name="Toolbar.White" parent="Base.Toolbar.Theme">
        <item name="android:background">@android:color/white</item>
        <item name="actionModeBackground">@android:color/white</item>
        <item name="android:actionModeBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/black_70</item>
        <item name="android:actionMenuTextColor">@color/black_70</item>
        <item name="android:textColorSecondary">@color/black_70</item>
    </style>

    <style name="TabBar.White" parent="BaseTabBar">
        <item name="android:background">@android:color/white</item>
        <item name="tabTextColor">@color/tkpd_grey_text</item>
        <item name="tabIndicatorColor">@color/tkpd_main_green</item>
        <item name="tabSelectedTextColor">@color/tkpd_main_green</item>
    </style>
</resources>