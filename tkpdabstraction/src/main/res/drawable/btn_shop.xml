<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:left="2.5dp"
        android:top="2.5dp">
        <shape>
            <corners android:radius="1dp" />

            <solid android:color="@color/Unify_N100" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/Unify_N100"
                android:startColor="@color/Unify_N75" />

            <corners android:radius="1dp" />

            <stroke
                android:width="0.5dp"
                android:color="@color/Unify_N200" />

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

</layer-list>