<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/Unify_Background"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/unify_globalerrors_connection"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/message_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/msg_network_error_1"
        android:textColor="@color/Unify_N700"
        android:textStyle="bold"
        app:typographyType="body_1"
        app:typographyWeight="reguler"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/sub_message_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/msg_network_error_2"
        android:textColor="@color/Unify_N150"
        android:textStyle="bold"
        app:typographyType="body_3"
        app:typographyWeight="reguler"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/title_try_again"
        app:unifyButtonVariant="filled"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main" />

</LinearLayout>
