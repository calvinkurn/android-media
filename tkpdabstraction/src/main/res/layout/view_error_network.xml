<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/ic_error_network"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/message_retry"
        style="@style/TextView.Title.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/msg_network_error_1"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sub_message_retry"
        style="@style/TextView.Small.BlackDisabled.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/msg_network_error_2"
        android:textColor="@color/grey_400"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/title_try_again_caps"
        android:textColor="@color/tkpd_main_green"
        android:textStyle="bold"/>

</LinearLayout>
