<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/image_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_vs"
        android:gravity="center_horizontal"
        tools:src="@drawable/ic_error_network" />

    <TextView
        android:id="@+id/retry_text"
        style="@style/TextView.Title.Bold"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:text="@string/msg_network_error_1" />

    <TextView
        android:id="@+id/retry_description"
        style="@style/TextView.Body1.BlackDisabled.Bold"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:text="@string/msg_network_error_2" />

    <TextView
        android:id="@+id/retry_but"
        style="@style/TextView.Body1.Green.Bold"
        android:layout_margin="@dimen/margin_med"
        android:gravity="center"
        android:text="@string/title_try_again_caps" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"/>

</LinearLayout>