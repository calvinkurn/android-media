<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/Unify_N0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/image_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        tools:src="@drawable/unify_globalerrors_connection" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/retry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:textColor="@color/Unify_N700_68"
        android:text="@string/msg_network_error_1"
        app:typographyType="body_1"
        app:typographyWeight="bold"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/retry_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:textColor="@color/Unify_N700_32"
        android:text="@string/msg_network_error_2"
        app:typographyType="body_2"
        app:typographyWeight="bold"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/retry_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:gravity="center"
        android:textColor="@color/Unify_G400"
        android:text="@string/title_try_again_caps"
        app:typographyType="body_2"
        app:typographyWeight="bold"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"/>

</LinearLayout>