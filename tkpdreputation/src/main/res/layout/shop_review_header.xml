<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small">

    <com.tokopedia.core.customView.RoundedCornerImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/image_width_l"
        android:layout_height="@dimen/image_width_l"
        android:layout_centerVertical="true"
        tools:src="@color/black" />

    <TextView
        android:id="@+id/product_name"
        style="@style/TextView.Micro.Bold"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Yellow Rose Bomber Biar panjaang Jacket Bordir - Not all roses are red" />


</RelativeLayout>