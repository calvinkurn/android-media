<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/reputation_review_header"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"/>

    <include layout="@layout/review_layout"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/review_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/reply_background"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_activity"
            >

            <TextView
                android:id="@+id/reviewer_reply_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="7sp"
                android:maxLines="1"
                android:textColor="@color/black_54"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="Oleh Sarah Elizabeth"
                />

            <TextView
                android:id="@+id/seller_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reviewer_reply_name"
                android:layout_marginTop="@dimen/margin_vs"
                android:background="@drawable/label_seller"
                android:lineSpacingExtra="4sp"
                android:padding="@dimen/padding_vvvs"
                android:text="@string/seller"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xsmall"
                />


            <TextView
                android:id="@+id/review_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reviewer_reply_name"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_toRightOf="@id/seller_label"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_xsmall"
                tools:text="31 Jul 2016, pukul 11:48"
                />

            <ImageView
                android:id="@+id/reply_overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more_vert_black_24dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_activity"
            android:layout_marginRight="@dimen/padding_activity"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="7sp"
            android:textColor="@color/black_54"
            android:textSize="@dimen/font_small"
            android:textStyle="normal"
            tools:text="One morning, when Gregor Samsa woke from troubled dreams, he found himselfâ€¦Selengkapnya"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/padding_activity"
            android:background="@color/grey_300"/>
    </LinearLayout>
</LinearLayout>