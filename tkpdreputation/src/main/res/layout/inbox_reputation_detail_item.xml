<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/margin_small"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/reputation_review_header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"/>

    <RelativeLayout
        android:id="@+id/add_review_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_sm"
            android:src="@drawable/ic_chevron_right_green"/>

        <TextView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/right_arrow"
            android:gravity="center_vertical"
            android:text="@string/give_review"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/font_small"/>

    </RelativeLayout>

    <include
        android:id="@+id/review_layout"
        layout="@layout/review_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/add_reply_review_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/reply_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_sm"
            android:src="@drawable/ic_chevron_right_green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/reply_icon"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:text="@string/reply"
            android:textColor="@color/black_54"
            android:textSize="@dimen/text_size_s_medium"
            android:textStyle="normal"
            />

    </RelativeLayout>

    <include
        android:id="@+id/review_detail_helpful_layout"
        layout="@layout/review_detail_helpful_layout"
        android:visibility="gone"
        tools:visibility="visible"/>

    <include
        android:id="@+id/seller_reply_layout"
        layout="@layout/seller_reply_layout"
        android:visibility="gone"
        tools:visibility="gone"/>

    <include
        android:id="@+id/seller_add_reply_layout"
        layout="@layout/seller_add_reply_layout"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>