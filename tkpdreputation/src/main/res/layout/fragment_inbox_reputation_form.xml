        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="7sp"
            android:padding="@dimen/padding_activity"
            android:text="@string/review"
            android:textColor="@color/black_70"
            android:textSize="@dimen/fonts"
            android:textStyle="normal"
            />

        <com.tokopedia.design.text.TkpdTextInputLayout
            android:id="@+id/review_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_activity"
            android:paddingRight="@dimen/padding_activity">

            <EditText
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_review"
                android:inputType="textMultiLine|textCapSentences"/>
        </com.tokopedia.design.text.TkpdTextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="7sp"
                android:text="@string/upload_image"
                android:textColor="@color/black_70"
                android:textSize="@dimen/fonts"
                android:textStyle="normal"
                />

            <ImageView
                android:id="@+id/upload_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info_icon"/>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_image_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_upload"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding_activity"
            android:paddingLeft="@dimen/padding_activity"
            android:paddingRight="@dimen/padding_activity"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:lineSpacingExtra="6sp"
                android:text="@string/share_to_facebook"
                android:textColor="@color/black_70"
                android:textSize="@dimen/fontm"
                />

            <Switch
                android:id="@+id/switch_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/anonym"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/fontm"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/hint_anonym"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/text_size_xsmall"
                    android:textStyle="normal"
                    />
            </LinearLayout>

            <Switch
                android:id="@+id/switch_anonym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/padding_activity"
            android:background="@drawable/bg_button_disabled"
            android:textColor="@color/grey_700"
            android:enabled="false"
            android:text="@string/submit_review"/>
    </LinearLayout>

</ScrollView>