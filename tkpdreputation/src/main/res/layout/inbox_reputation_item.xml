<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/margin_small"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/grey_300"/>

    <RelativeLayout
        android:id="@+id/deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/red_deadline"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/icon_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_vs"
            android:src="@drawable/ic_red_hourglass"/>

        <TextView
            android:id="@+id/deadline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_toRightOf="@id/icon_deadline"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_size_xxsmall"
            android:textStyle="normal"
            tools:text="Batas memberikan penilaian 3 hari lagi"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reputation"
        android:layout_toRightOf="@id/avatar"
        android:layout_marginBottom="@dimen/margin_vs"
        android:layout_marginLeft="@dimen/margin_sm"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="@dimen/margin_sm"

        android:textColor="@color/black_38"
        android:textSize="@dimen/text_size_xsmall"
        android:textStyle="normal"
        tools:text="28 Mei"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/invoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="7sp"
            android:textColor="@color/black_38"
            android:textSize="@dimen/font_small"
            android:textStyle="normal"
            tools:text="INV/20170116/XVII/65862137"
            />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="@dimen/notif_size"
            android:layout_height="@dimen/notif_size"
            android:background="@drawable/red_circle"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        android:layout_marginTop="@dimen/margin_small">

        <com.tokopedia.core.customView.RoundedCornerImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/user_avatar"
            android:layout_height="@dimen/user_avatar"
            android:layout_marginRight="@dimen/margin_small"
            tools:src="@drawable/ic_share_black_24dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar"
            android:textSize="@dimen/font_small"
            tools:text="Pretty Sugar Shop"
            />

        <com.tokopedia.design.reputation.ReputationView
            android:id="@+id/reputation"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/avatar"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/grey_300"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_sm"
            android:src="@drawable/ic_chevron_right_green"/>

        <TextView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/right_arrow"
            android:gravity="center_vertical"
            android:textColor="@color/medium_green"
            android:textSize="14sp"
            tools:text="Beri Penilaian dan Balas Ulasan"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"/>
</LinearLayout>