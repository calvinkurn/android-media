<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_activity">

        <com.tokopedia.core.customView.RoundedCornerImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/detail_reputation_avatar"
            android:layout_height="@dimen/detail_reputation_avatar"
            tools:src="@color/black_38"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:maxLines="1"
                android:textColor="@color/black_70"
                android:textSize="@dimen/font_small"
                android:textStyle="normal"
                tools:text="Pretty Sugar Shop"
                />

            <com.tokopedia.design.reputation.ReputationView
                android:id="@+id/reputation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favorite_button"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/green_button_rounded"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_small"
                tools:src="@drawable/shop_list_favorite_check"/>

            <TextView
                android:id="@+id/favorite_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="normal"
                tools:text="@string/already_favorite"

                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        />

    <LinearLayout
        android:id="@+id/deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/red_deadline"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/icon_deadline"
                android:layout_width="@dimen/icon_prod_size"
                android:layout_height="@dimen/icon_prod_size"
                android:layout_margin="@dimen/margin_vs"
                android:src="@drawable/ic_red_hourglass"/>

            <TextView
                android:id="@+id/deadline_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_toRightOf="@id/icon_deadline"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_xxsmall"
                android:textStyle="normal"
                tools:text="Batas memberikan penilaian 3 hari lagi"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/grey_200"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/icon_locked"
                android:layout_width="@dimen/icon_prod_size"
                android:layout_height="@dimen/icon_prod_size"
                android:layout_margin="@dimen/margin_vs"
                android:src="@drawable/ic_locked2"/>

            <TextView
                android:id="@+id/locked_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_toRightOf="@id/icon_locked"
                android:fontFamily="sans-serif-medium"
                android:text="@string/locked_reputation"
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_xxsmall"
                android:textStyle="normal"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_activity"
        android:layout_marginRight="@dimen/padding_activity"
        android:layout_marginTop="@dimen/margin_small">

        <TextView
            android:id="@+id/prompt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black_54"
            android:textSize="@dimen/fontvs"
            android:textStyle="normal"
            tools:text="Bagaimana pen"
            />

        <TextView
            android:id="@+id/change_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="7sp"
            android:text="@string/change"
            android:textColor="@color/medium_green"
            android:textSize="14sp"
            android:textStyle="normal"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/smiley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/padding_vs">

        <TextView
            android:id="@+id/opponent_smiley_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_vs"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="normal"
            tools:text="Penjual Belum Menilai"
            />

        <ImageView
            android:id="@+id/opponent_smiley"
            android:layout_width="@dimen/opponent_smiley"
            android:layout_height="@dimen/opponent_smiley"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_vs"
            android:layout_toEndOf="@id/opponent_smiley_text"
            android:layout_toRightOf="@id/opponent_smiley_text"
            android:gravity="center_vertical"
            tools:src="@drawable/ic_smiley_empty"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        />
</LinearLayout>