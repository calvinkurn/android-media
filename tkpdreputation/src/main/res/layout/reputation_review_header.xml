<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/padding_activity"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.tokopedia.core.customView.RoundedCornerImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/detail_reputation_product_image"
        android:layout_height="@dimen/detail_reputation_product_image"
        tools:src="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:textColor="@color/black_70"
        android:textSize="@dimen/fontvs"
        android:textStyle="normal"
        tools:text="Yellow Rose Bomber Biar panjaang Jacket Bordir - Not all roses are red"
        />
</LinearLayout>