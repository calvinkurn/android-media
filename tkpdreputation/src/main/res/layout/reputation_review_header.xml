<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_activity">

    <com.tokopedia.core.customView.RoundedCornerImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/detail_reputation_product_image"
        android:layout_height="@dimen/detail_reputation_product_image"
        android:layout_centerVertical="true"
        tools:src="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"

            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="2sp"
            android:maxLines="2"
            android:textColor="@color/black_70"
            android:textSize="@dimen/fontvs"
            android:textStyle="normal"
            tools:text="Yellow Rose Bomber Biar panjaang Jacket Bordir - Not all roses are red"
            />

        <TextView
            android:id="@+id/empty_review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_vs"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/not_reviewed"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="normal"
            tools:visibility="visible"/>
    </LinearLayout>


</RelativeLayout>