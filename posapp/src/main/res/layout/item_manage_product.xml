<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/new_margin_med"
    android:orientation="horizontal"
    android:weightSum="9.5">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/new_margin_tiny"
        android:background="@drawable/bg_white_rounded3_grey350"
        android:layout_gravity="center" >
        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:paddingLeft="@dimen/new_margin_small"
        android:paddingRight="@dimen/new_margin_small"
        style="@style/TextView.Small.Bold"
        tools:text="Samsung Galaxy A8 2018 Gold Garansi Resmi Samsung"/>
    <TextView
        android:id="@+id/edit_online_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/bg_grey100_rounded3_grey350"
        android:gravity="center"
        android:padding="@dimen/new_margin_small"
        style="@style/TextView.Small.BlackDisabled"
        tools:text="100000000"/>
    <View android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />
    <TextView
        android:id="@+id/edit_outlet_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/bg_white_rounded3_grey350"
        android:gravity="center"
        android:padding="@dimen/new_margin_small"
        style="@style/TextView.Small"
        tools:text="100000000"/>
    <ImageView
        android:id="@+id/button_edit"
        app:srcCompat="@drawable/ic_edit_green"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-8dp"
        android:layout_weight="1"/>
</LinearLayout>