<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/new_margin_med"
    android:orientation="horizontal"
    android:weightSum="8">
    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:paddingLeft="@dimen/new_margin_small"
        style="@style/TextView.Small.Bold"
        tools:text="Samsung Galaxy A8 2018 Gold Garansi Resmi Samsung"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:gravity="right"
        android:text="@string/currency_symbol_idr"
        style="@style/TextView.Small.BlackDisabled" />
    <com.tokopedia.design.text.DecimalInputView
        android:id="@+id/edit_online_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:gravity="right"
        android:text="@string/currency_symbol_idr"
        style="@style/TextView.Small.BlackDisabled" />
    <com.tokopedia.design.text.DecimalInputView
        android:id="@+id/edit_outlet_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"/>
    <ImageView
        android:id="@+id/button_edit"
        app:srcCompat="@drawable/ic_edit_green"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"/>
</LinearLayout>