<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wrapper"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/posapp_padding_xl"
    android:paddingRight="@dimen/posapp_padding_xl"
    android:paddingTop="@dimen/posapp_padding_l"
    android:paddingBottom="@dimen/posapp_padding_m">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_desc"
        android:textColor="@color/black_70"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_large"/>

    <LinearLayout
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingRight="@dimen/margin_small"
        android:paddingTop="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descriptions"
                android:textColor="@color/black_54"
                android:textIsSelectable="false"
                android:longClickable="false"
                android:textSize="@dimen/text_size_l_medium"
                android:autoLink="all" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>