<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/posapp_padding_xl"
    android:paddingRight="@dimen/posapp_padding_xl"
    android:paddingTop="@dimen/posapp_padding_m">

    <TextView
        android:id="@+id/text_installment_percentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/installment_percentage_label"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/posapp_margin_m">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/TextView.Small.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_grey"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/installment_tenure_label"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                style="@style/TextView.Small.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_grey"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/installment_3m_label"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                style="@style/TextView.Small.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_grey"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/installment_6m_label"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                style="@style/TextView.Small.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_grey"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/installment_12m_label"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                style="@style/TextView.Small.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_grey"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/installment_18m_label"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                style="@style/TextView.Small.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_grey"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/installment_24m_label"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_medium" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/TextView.Small"
                android:layout_width="0dp"
                android:layout_height="@dimen/posapp_row_size_table"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/installment_monthly_label"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                android:id="@+id/month3"
                style="@style/TextView.Small"
                android:layout_width="0dp"
                android:layout_height="@dimen/posapp_row_size_table"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:textSize="@dimen/text_size_medium"
                tools:text="3.000.000" />
            <TextView
                android:id="@+id/month6"
                style="@style/TextView.Small"
                android:layout_width="0dp"
                android:layout_height="@dimen/posapp_row_size_table"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:textSize="@dimen/text_size_medium"
                tools:text="1.000.000" />
            <TextView
                android:id="@+id/month12"
                style="@style/TextView.Small"
                android:layout_width="0dp"
                android:layout_height="@dimen/posapp_row_size_table"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:textSize="@dimen/text_size_medium"
                tools:text="500.000" />
            <TextView
                android:id="@+id/month18"
                style="@style/TextView.Small"
                android:layout_width="0dp"
                android:layout_height="@dimen/posapp_row_size_table"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:textSize="@dimen/text_size_medium"
                tools:text="300.000" />
            <TextView
                android:id="@+id/month24"
                style="@style/TextView.Small"
                android:layout_width="0dp"
                android:layout_height="@dimen/posapp_row_size_table"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:textSize="@dimen/text_size_medium"
                tools:text="250.000" />
        </TableRow>
    </TableLayout>
</LinearLayout>