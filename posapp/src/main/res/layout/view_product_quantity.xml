<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/decrease_button"
        android:layout_width="@dimen/margin_med"
        android:layout_height="@dimen/margin_med"
        android:layout_marginTop="@dimen/med_dp"
        android:background="@drawable/ic_indeterminate_check_box"
        android:paddingBottom="@dimen/large_dp"
        android:paddingEnd="@dimen/med_dp"
        android:paddingLeft="@dimen/med_dp"
        android:paddingRight="@dimen/med_dp"
        android:paddingStart="@dimen/med_dp"
        android:paddingTop="@dimen/med_dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_quantity"
            android:layout_width="@dimen/add_to_cart_qty"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="5" />
    </android.support.design.widget.TextInputLayout>

    <View
            android:id="@+id/increase_button"
            android:layout_width="@dimen/margin_med"
            android:layout_height="@dimen/margin_med"
            android:layout_marginTop="@dimen/med_dp"
            android:background="@drawable/ic_add_box"
            android:paddingBottom="@dimen/large_dp"
            android:paddingEnd="@dimen/large_dp"
            android:paddingLeft="@dimen/med_dp"
            android:paddingRight="@dimen/large_dp"
            android:paddingStart="@dimen/med_dp"
            android:paddingTop="@dimen/med_dp"/>
</LinearLayout>