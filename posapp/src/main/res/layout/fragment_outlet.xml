<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_apps"
    android:paddingTop="@dimen/posapp_margin_xl"
    android:paddingRight="@dimen/posapp_margin_l"
    android:paddingLeft="@dimen/posapp_margin_l">

    <LinearLayout
        android:id="@+id/container_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/posapp_margin_s"
        android:layout_marginLeft="@dimen/posapp_margin_s"
        android:layout_marginBottom="@dimen/posapp_margin_m"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Title"
                android:text="@string/outlet_store_name_label"/>
            <TextView
                android:id="@+id/text_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Title.BlackSecondary"
                android:padding="@dimen/padding_vvs"
                tools:text="Shop Name" />
        </LinearLayout>
        <EditText
            android:id="@+id/edit_search_outlet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/outlet_search_hint"
            android:background="@drawable/bg_white_grey_stroke"
            android:drawableLeft="@drawable/icon_magnifier"
            android:drawableStart="@drawable/icon_magnifier"
            android:drawablePadding="8dp"
            android:textSize="@dimen/text_size_l_medium"
            android:padding="@dimen/new_margin_med"
            android:imeOptions="actionSearch"
            android:layout_weight="2"
            android:inputType="textNoSuggestions"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_outlet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/container_shop_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>