<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@color/grey_100"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cover_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_cover_height"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:src="@drawable/drawer_header_bg"/>

    <RelativeLayout
        android:id="@+id/drawer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_large">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/drawer_avatar"
            android:layout_height="@dimen/drawer_avatar"
            android:layout_marginLeft="@dimen/margin_sm"
            android:background="@drawable/cards_ui_2"
            tools:src="@drawable/ic_loading_toped"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_avatar"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_small">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Loading.."
                android:textColor="@color/black_70"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_l_medium"
                android:lineSpacingExtra="4sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_outlet"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@id/tv_name"
                android:text="Loading.."
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_l_medium"
                android:textStyle="normal"/>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_outlet"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_marginTop="1dp"
                    android:id="@+id/iv_online"
                    android:layout_width="@dimen/verified_icon_size"
                    android:layout_height="@dimen/verified_icon_size"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:src="@drawable/ic_verified"/>


                <TextView
                    android:id="@+id/tv_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/online"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/text_size_small"
                    android:layout_toRightOf="@+id/iv_online"
                    tools:text="online"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>