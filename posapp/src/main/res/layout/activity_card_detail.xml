<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_med">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/margin_vvvs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                style="@style/TextView.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardscan_success_label" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="@dimen/padding_med">

                <ImageView
                    android:id="@+id/card_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    tools:src="@drawable/icon_home" />

                <TextView
                    android:id="@+id/text_card_no"
                    style="@style/TextView.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_med"
                    android:textStyle="bold"
                    tools:text="XXXX XXXX XXXX 2421" />

                <TextView
                    android:id="@+id/label_valid_thru"
                    style="@style/TextView.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/text_card_no"
                    android:layout_alignStart="@id/text_card_no"
                    android:layout_below="@id/text_card_no"
                    android:layout_marginTop="@dimen/margin_med"
                    android:text="@string/cardscan_valid_label" />

                <TextView
                    android:id="@+id/text_valid_thru"
                    style="@style/TextView.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/label_valid_thru"
                    android:layout_alignStart="@id/label_valid_thru"
                    android:layout_below="@id/label_valid_thru"
                    tools:text="12/19" />
            </RelativeLayout>

            <TextView
                style="@style/TextView.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardscan_cvv_message" />

            <com.tkpd.library.ui.widget.PinEntryEditText
                android:id="@+id/input_vcc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_vl"
                android:layout_marginRight="@dimen/margin_vl"
                android:background="@null"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:paddingBottom="@dimen/margin_small"
                android:textIsSelectable="false"
                android:textSize="@dimen/font_medium"
                android:visibility="visible"
                app:pinLineColors="@color/pin_line_colors" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/bg_button_orange"
        android:textColor="@color/white"
        android:text="@string/cardscan_pay_label"/>
</LinearLayout>