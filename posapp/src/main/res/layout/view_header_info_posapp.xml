<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    android:padding="@dimen/padding_medium_prof_comp">

    <TextView
        android:id="@id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="@dimen/margin_vs"
        android:layout_marginRight="80dp"
        tools:text="Product Name"
        android:textColor="#b3000000"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_large"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/text_size_xxlarge"
        tools:text="Rp 0,00,-"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 0,00,-"
            android:textColor="@color/price_pdp"
            android:textSize="@dimen/font_large"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/text_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_vvs"
            android:paddingBottom="@dimen/padding_vvs"
            android:paddingLeft="@dimen/padding_vs"
            android:paddingRight="@dimen/padding_vs"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@drawable/label_bright_red"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/fontvs"
            tools:text="10%OFF"
            android:visibility="gone"
            android:layout_toRightOf="@id/tv_price"
            android:layout_toEndOf="@id/tv_price"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_discount_timer_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_title_discount_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_discount_timer" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:background="@drawable/bg_stroke_rounded_corners"
            android:paddingBottom="@dimen/margin_vs"
            android:paddingLeft="@dimen/margin_ms"
            android:paddingRight="@dimen/margin_ms"
            android:paddingTop="@dimen/margin_vs">

            <TextView
                android:id="@+id/text_discount_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_green"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cashback_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="@color/warm_grey"
            android:text="@string/dapatkan"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/label_cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="@color/warm_grey"
            android:text="@string/cashbak_info_tokocash"
            android:textSize="@dimen/fontvs" />

        <ImageView
            android:layout_width="@dimen/margin_med"
            android:layout_height="@dimen/margin_med"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_tokocash_icon" />


    </LinearLayout>
</LinearLayout>