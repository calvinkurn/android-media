<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/padding_med">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        style="@style/TextView.Title.Bold"
        tools:text="Hi there"
        android:layout_marginBottom="@dimen/padding_med"/>

    <TextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_54"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/margin_sm"
        tools:text="What do you want?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/button_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/PosButton.Submit.WhiteStroke"
            android:text="@string/dialog_cancel"/>
        <Button
            android:id="@+id/button_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Button.Submit.Green"
            android:text="@string/title_ok"/>
    </LinearLayout>

</LinearLayout>