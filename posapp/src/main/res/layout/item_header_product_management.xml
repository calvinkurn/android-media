<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/new_margin_med"
    android:weightSum="9.5">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/product_name_label"
        android:layout_weight="3"
        style="@style/TextView.Title.Bold"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/product_online_price_label"
        android:layout_weight="2.5"
        style="@style/TextView.Title.Bold"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/product_outlet_price_label"
        android:layout_weight="3"
        style="@style/TextView.Title.Bold"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/product_shown_status"
        android:layout_weight="1"
        style="@style/TextView.Title.Bold"/>
</LinearLayout>