<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linear_button_container"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.tokopedia.posapp.product.productdetail.view.widget.PictureView
                android:id="@+id/view_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:visibility="gone"/>

            <com.tokopedia.posapp.product.productdetail.view.widget.HeaderInfoView
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"/>

            <com.tokopedia.posapp.product.productdetail.view.widget.InstallmentSimulationView
                android:id="@+id/view_price_simulation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <com.tokopedia.posapp.product.productdetail.view.widget.DescriptionView
                android:id="@+id/view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/gradient_white_pdp"
        android:layout_above="@+id/linear_button_container"
        android:background="@drawable/gradient_white"/>

    <LinearLayout
        android:id="@id/linear_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/posapp_padding_m"
        android:paddingRight="@dimen/posapp_padding_m"
        android:paddingBottom="@dimen/posapp_padding_m"
        android:paddingTop="@dimen/posapp_padding_s">
        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            style="@style/Button.Submit.White"
            android:text="@string/pdp_add_to_cart_title"
            android:textSize="@dimen/text_size_xlarge"
            android:background="@drawable/bg_button_white_stroke_grey_enabled"/>
        <Button
            android:id="@+id/button_buy"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            style="@style/Button.Submit.Orange"
            android:text="@string/pdp_buy_label"
            android:textSize="@dimen/text_size_xlarge"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>