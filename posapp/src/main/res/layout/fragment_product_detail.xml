<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linear_button_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.tokopedia.tkpdpdp.customview.PictureView
                android:id="@+id/view_picture"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:fitsSystemWindows="true"
                android:orientation="vertical" />

            <com.tokopedia.posapp.view.widget.HeaderInfoView
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.tokopedia.posapp.view.widget.InstallmentSimulationView
                android:id="@+id/view_price_simulation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_small" />

            <com.tokopedia.tkpdpdp.customview.VideoDescriptionLayout
                android:id="@+id/video_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@id/linear_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Button.Submit.White"
            android:text="@string/pdp_add_to_cart_title"/>
        <Button
            android:id="@+id/button_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Button.Submit.Orange"
            android:text="@string/pdp_buy_label"/>
    </LinearLayout>
</RelativeLayout>