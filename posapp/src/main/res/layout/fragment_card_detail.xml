<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_med">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/margin_vvvs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                style="@style/TextView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardscan_success_label" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="@dimen/padding_med">

                <ImageView
                    android:id="@+id/card_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    tools:src="@drawable/icon_home" />

                <EditText
                    android:id="@+id/text_card_no"
                    style="@style/TextView.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_logo"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_sm"
                    android:layout_marginRight="@dimen/margin_sm"
                    android:layout_marginTop="@dimen/margin_med"
                    android:digits="1234567890 "
                    android:inputType="phone|number"
                    android:maxLength="19"
                    android:textAlignment="center"
                    tools:text="1234567891234567" />

                <TextView
                    android:id="@+id/label_valid_thru"
                    style="@style/TextView.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_card_no"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin_med"
                    android:text="@string/cardscan_valid_label" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_valid_thru"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/input_valid_thru_month"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:maxLength="2" />

                    <TextView
                        android:id="@+id/valid_thru_separator"
                        style="@style/TextView.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/" />

                    <EditText
                        android:id="@+id/input_valid_thru_year"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:maxLength="2" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                style="@style/TextView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardscan_cvv_message" />

            <com.tkpd.library.ui.widget.PinEntryEditText
                android:id="@+id/input_cvv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_vl"
                android:layout_marginRight="@dimen/margin_vl"
                android:background="@null"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:paddingBottom="@dimen/margin_small"
                android:textIsSelectable="false"
                android:textSize="@dimen/font_medium"
                android:visibility="visible"
                app:pinLineColors="@color/pin_line_colors" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/bg_button_orange"
        android:textColor="@color/white"
        android:text="@string/cardscan_pay_label"/>
</LinearLayout>