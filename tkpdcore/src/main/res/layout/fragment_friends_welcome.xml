<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_med">

        <ImageView
            android:id="@+id/img_app_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            app:srcCompat="@drawable/welcome_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:fontFamily="sans-serif"
            android:padding="@dimen/margin_sm"
            android:text="Selamat!"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_app_share_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Givana memberi kamu Promo Referral."
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_referral_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_sm"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:padding="@dimen/margin_sm"
            android:text="@string/referral_welcome_desc"
            android:textSize="@dimen/font_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginRight="@dimen/margin_small"
                    android:src="@drawable/ic_group_referral" />

                <TextView
                    android:id="@+id/referral_daftar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_profile"
                    android:layout_centerVertical="true"
                    android:text="1. Daftar"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginLeft="@dimen/margin_med"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/referral_transaction"
                    android:src="@drawable/ic_new_checkout_cart" />

                <TextView
                    android:id="@+id/referral_transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2. Transaksi Pertama"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/dp_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_referral_explore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/green_btn"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/margin_sm"
            android:text="@string/app_share_explore_btn_label"
            android:textColor="@color/white"
            android:textSize="@dimen/fonts" />

        <TextView
            android:id="@+id/tv_referral_help_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:lineSpacingExtra="@dimen/font_medium"
            android:padding="@dimen/sp_14"
            android:text="@string/cashback_enter_tokocash"
            android:textSize="@dimen/font_medium"/>

    </LinearLayout>
</ScrollView>