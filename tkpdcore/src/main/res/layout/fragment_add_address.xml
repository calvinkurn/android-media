<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small"
    tools:context=".manage.people.address.activity.AddAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small">

        <!-- Jenis alamat dan nama penerima -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/address_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_save_address_as">

                <EditText
                    android:id="@+id/address_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/font_small" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/receiver_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_receiver_name">

                <EditText
                    android:id="@+id/receiver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/font_small" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <!-- End of Jenis alamat dan nama penerima -->


        <!-- Alamat -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_address_add_address">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/font_small" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <!-- End of alamat -->


        <!-- Detail alamat -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_province"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fonts" />

            <Spinner
                android:id="@+id/provinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:inputType="text" />

            <TextView
                android:id="@+id/province_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_province"
                android:textColor="#ff0000"
                android:textSize="@dimen/fontvs"
                android:visibility="gone" />

            <TextView
                android:id="@+id/regency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_regency"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fonts"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/regency_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/regency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:inputType="text"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/regency_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_regency"
                android:textColor="#ff0000"
                android:textSize="@dimen/fontvs"
                android:visibility="gone" />

            <TextView
                android:id="@+id/district_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_sub_district"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fonts"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/district_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <Spinner
                android:id="@+id/sub_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:inputType="text"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/sub_district_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_sub_district"
                android:textColor="#ff0000"
                android:textSize="@dimen/fontvs"
                android:visibility="gone" />
        </LinearLayout>
        <!-- End of detail alamat -->


        <!-- No HP dan kodepos -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/post_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_post_code">

                <EditText
                    android:id="@+id/post_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/font_small" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/receiver_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_receiver_phone_no">

                <EditText
                    android:id="@+id/receiver_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/font_small" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_password"
                android:visibility="gone">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:textSize="@dimen/font_small" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <!-- End of kodepos no hp -->

        <!-- Map -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_delivery_location"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fonts" />

            <RelativeLayout
                android:id="@+id/layout_value_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_vs">

                <ImageView
                    android:id="@+id/icon_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_icon_market_toped" />

                <EditText
                    android:id="@+id/value_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:layout_toEndOf="@id/icon_map"
                    android:layout_toRightOf="@id/icon_map"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/choose_location"
                    android:textSize="@dimen/font_small" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc_delivery_location"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

        </LinearLayout>

        <TextView
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_save"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>