<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_vs"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/fontvs"
        android:padding="@dimen/padding_vs"
        android:layout_margin="@dimen/margin_vs"
        android:background="@color/grey_100"
        android:textColor="@color/grey_500"
        tools:text="13:16 wib"
        />

    <ImageView
        android:id="@+id/user_ava"
        android:layout_below="@id/date"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/margin_small" />

    <RelativeLayout
        android:id="@+id/view_user_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_toRightOf="@id/user_ava"
        android:background="@drawable/left_bubble"
        android:maxWidth="@dimen/message_width"
        android:layout_below="@id/date"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textIsSelectable="true"
            tools:text ="Gukguk meong meongaksjdkajshdkajhsdkajhsdkajhsdaksdjhaksjhkahsdk"
            android:textSize="@dimen/fonts" />

    </RelativeLayout>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_user_box"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/margin_vs"
        android:gravity="left"
        android:textColor="@color/time_color"
        android:textSize="@dimen/fontvvs"
        android:layout_toRightOf="@id/user_ava"
        tools:text="testtest"
        />

</RelativeLayout>