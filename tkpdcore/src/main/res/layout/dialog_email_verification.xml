<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	xmlns:tools="http://schemas.android.com/tools">
	<LinearLayout 
	    android:id="@+id/change_email_layout"
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:background="@drawable/btn_cancel">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/large_dp"
			android:gravity="center"
			android:text="@string/title_old_email"
			android:textSize="@dimen/font_large"
			android:textColor="@color/grey_800" />    		
		<TextView
		    android:id="@+id/current_email"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margin_small"
			android:layout_marginRight="@dimen/margin_small"
			android:layout_marginBottom="@dimen/small_dp"
			android:gravity="center"
			android:text="@string/title_email"
			android:textSize="@dimen/font_medium"
			android:textColor="@color/grey_800"
			android:textStyle="bold" />
	
		<EditText
			android:id="@+id/email_input"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_small"
			android:layout_marginLeft="@dimen/large_dp"
			android:layout_marginRight="@dimen/large_dp"
			android:hint="@string/title_new_desired_email"
			android:gravity="center"
			android:inputType="textEmailAddress"
			android:paddingLeft="@dimen/padding_vs"
			android:textSize="@dimen/fonts" />
		<EditText
			android:id="@+id/password"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/med_dp"
			android:layout_marginLeft="@dimen/large_dp"
			android:layout_marginRight="@dimen/large_dp"
			android:gravity="center"
			android:hint="@string/hint_account_password"
			android:inputType="textPassword"
			android:paddingLeft="@dimen/padding_vs"
			android:textSize="@dimen/fonts" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
			android:layout_marginLeft="@dimen/large_dp"
			android:layout_marginRight="@dimen/large_dp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/small_dp">
            <EditText
                android:id="@+id/input_otp_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight="0.7"
                android:hint="Kode OTP"
				android:inputType="number"
				android:enabled="false"
				android:paddingLeft="@dimen/padding_vs"
                android:textSize="@dimen/fonts"/>
            <TextView
                android:id="@+id/request_otp_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_buy"
                android:textColor="@color/grey_100"
                android:textStyle="bold"
                android:text="Request OTP"/>
        </LinearLayout>
		<LinearLayout 
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<TextView 
			    android:id="@+id/abort_button"
			    android:layout_height="@dimen/btn_height"
			    android:layout_width="0dp"
			    android:layout_weight="1.0"
			    android:text="@string/title_cancel"
			    android:background="@drawable/btn_plain"
			    android:gravity="center"
			    android:layout_marginTop="@dimen/margin_small"
			    android:textColor="@color/grey_800"
				/>
			<TextView 
        		android:id="@+id/code_confirm_button"
				android:layout_height="@dimen/btn_height"
				android:layout_width="0dp"
				android:layout_weight="1.0"
				android:text="@string/link_change_email"
				android:background="@drawable/btn_plain"
				android:gravity="center"
				android:layout_marginTop="@dimen/margin_small"
				android:textColor="@color/grey_800"
				/>	
			</LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/instruction_check_new_email"
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:background="@drawable/btn_cancel"
	    android:visibility="gone"
		tools:visibility="visible">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/large_dp"
			android:gravity="center"
			android:text="@string/title_change_email"
			android:textSize="@dimen/font_medium"
			android:textColor="@color/grey_800" />
		<TextView
			android:id="@+id/close_button"
			android:layout_height="@dimen/btn_height"
			android:layout_width="match_parent"
		    android:text="@string/title_close"
		    android:background="@drawable/btn_cancel"
		    android:gravity="center"
		    android:layout_marginTop="@dimen/margin_small"
		    android:textColor="@color/grey_800"
		    android:textStyle="bold"
			/>

	</LinearLayout>
</FrameLayout>
