<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/include_loading"
        layout="@layout/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context=".manage.people.notification.activity.ManageNotificationActivity">

        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_ring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_16"
                android:padding="@dimen/padding_small"
                android:text="@string/notification_setting_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/tv_title_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/reviews"
                    android:text="@string/title_review"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_review"
                    android:layout_toLeftOf="@+id/reviews"
                    android:text="@string/title_review_desc"
                    android:textColor="@color/black_38" />

                <CheckBox
                    android:id="@+id/reviews"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:theme="@style/CheckBoxNotification" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/grey_300" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_12"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/tv_title_talk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/talkabout"
                    android:text="@string/title_talk"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_talk"
                    android:layout_toLeftOf="@+id/talkabout"
                    android:text="@string/title_talk_desc"
                    android:textColor="@color/black_38" />

                <CheckBox
                    android:id="@+id/talkabout"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:theme="@style/CheckBoxNotification" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/grey_300" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_12"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/tv_title_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/message"
                    android:text="@string/title_message"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_message"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/message"
                    android:text="@string/title_message_desc"
                    android:textColor="@color/black_38" />

                <CheckBox
                    android:id="@+id/message"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:theme="@style/CheckBoxNotification" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/grey_300" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_12"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/tv_title_message_from_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/admin_message"
                    android:text="@string/title_message_from_admin"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_title_message_from_admin_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_message_from_admin"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/admin_message"
                    android:text="@string/title_message_from_admin_desc"
                    android:textColor="@color/black_38" />

                <TextView
                    android:id="@+id/msg_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_message_from_admin_desc"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/admin_message"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/admin_message"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:theme="@style/CheckBoxNotification" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/grey_300" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_12"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/tv_news_letter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/newsletter"
                    android:text="@string/title_newsletter"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_news_letter"
                    android:layout_toLeftOf="@+id/newsletter"
                    android:text="@string/title_newsletter_desc"
                    android:textColor="@color/black_38" />

                <CheckBox
                    android:id="@+id/newsletter"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:theme="@style/CheckBoxNotification" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/grey_300" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>