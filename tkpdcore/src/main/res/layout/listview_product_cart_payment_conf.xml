<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_vs">

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/error_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tkpd_dark_red"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:textColor="@color/label_color"
                android:visibility="gone" />

            <!-- <RelativeLayout -->
            <!-- android:shopId="@+shopId/delete_view" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content"  > -->


            <!-- <ImageView -->
            <!-- android:shopId="@+shopId/delete_but" -->
            <!-- android:layout_width="@dimen/med_dp" -->
            <!-- android:layout_height="@dimen/med_dp" -->
            <!-- app:srcCompat="@drawable/navigation_cancel"/> -->


            <!-- <View -->
            <!-- android:layout_width="1dp" -->
            <!-- android:layout_height="@dimen/med_dp" -->
            <!-- android:background="#F0F0F0" -->
            <!-- android:layout_toRightOf="@shopId/delete_but"/> -->


            <!-- </RelativeLayout> -->

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_m"
                android:layout_below="@id/error_msg"
                android:layout_marginRight="@dimen/margin_small"
                app:srcCompat="@drawable/remove" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/error_msg"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_toRightOf="@id/img"
                android:singleLine="true"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@id/img"
                android:text="Rp 20.000,-"
                android:textColor="@color/tkpd_prod_price"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/price"
                android:text="( 1kg )"
                android:textSize="@dimen/fontvs" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toRightOf="@+id/weight"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_qty"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontvs">

                    <requestFocus />
                </EditText>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info">

            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/border_cart_1"
                android:hint="@string/title_add_notes"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/notes"
                android:layout_marginTop="@dimen/margin_vs"
                android:gravity="left"
                android:padding="5dp"
                android:text="Total:"
                android:textColor="#000000"
                android:textSize="@dimen/fonts"
                android:visibility="gone" />

            <TextView
                android:id="@+id/price_total"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/notes"
                android:layout_marginTop="@dimen/margin_vs"
                android:gravity="right"
                android:padding="5dp"
                android:text="Rp 20.000,-"
                android:textColor="#000000"
                android:textSize="@dimen/fonts"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>