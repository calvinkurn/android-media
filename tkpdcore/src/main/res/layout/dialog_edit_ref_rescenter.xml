<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/page_with_pad"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_small" >

    <com.tokopedia.design.textview.TextView
        android:id="@+id/scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drawableRightCompat="@drawable/ic_photography"
        android:text="@string/title_reference_number"
        android:textColor="@color/label_color" />

    <EditText
        android:id="@+id/ref_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="17"/>

    <Spinner
        android:id="@+id/spinner_kurir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/error_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_select_agency_error"
        android:textColor="@color/tkpd_dark_red"
        android:visibility="gone" />

    <TextView
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/button_buy_from_cart"
        android:gravity="center"
        android:text="@string/title_confirm_button"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>