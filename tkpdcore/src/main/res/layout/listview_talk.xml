<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">
        <!--android:background="@drawable/border_message_read"-->

        <!-- buyer profile picture -->
        <ImageView
            android:id="@+id/user_ava"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_vs"
            app:srcCompat="@drawable/remove" />

        <!-- User name, etc. -->
        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@+id/but_overflow"
            android:layout_toRightOf="@id/user_ava"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- username -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Nama" />


            <!-- Reputation -->
            <LinearLayout
                android:id="@+id/reputation_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rep_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_icon_repsis_smile_active" />

                <TextView
                    android:id="@+id/rep_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_small"
                    tools:text="78.1%" />

            </LinearLayout>

            <!--item name-->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="GameBoy Advance SP"
                android:textStyle="bold"/>

            <!--message-->
            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_ms"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small"
                tools:text="Gan, barang ready? Gak mau beli tapi nanya aja" />

            <!--DATE-->
            <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small"
                tools:text="31 Maret 2016, 16:55" />

        </LinearLayout>

        <ImageView
            android:id="@+id/but_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_new_action_overflow_black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/info"
            android:layout_alignLeft="@id/but_overflow"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/info"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                tools:text="2" />

            <ImageView
                android:layout_width="@dimen/img_thumb_s"
                android:layout_height="@dimen/img_thumb_s"
                android:layout_marginLeft="2dp"
                app:srcCompat="@drawable/ic_menu_talk" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d2d2d2" />
</LinearLayout>