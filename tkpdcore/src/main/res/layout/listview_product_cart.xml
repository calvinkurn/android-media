<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/error_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin_vs"
                android:background="@color/tkpd_yellow_status"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:textColor="@color/label_color"
                android:visibility="gone" />

            <TextView
                android:id="@+id/preorder_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img"
                android:layout_alignStart="@id/img"
                android:layout_below="@id/error_msg"
                android:layout_marginBottom="@dimen/margin_vs"
                android:background="@drawable/bg_label_preorder_gray"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Preorder"
                android:textColor="@color/white"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/delete_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/preorder_label">

                <ImageView
                    android:id="@+id/delete_but"
                    android:layout_width="@dimen/large_dp"
                    android:layout_height="@dimen/large_dp"
                    android:background="@drawable/overflow_selected"
                    android:padding="@dimen/padding_vs"
                    android:src="@drawable/navigation_cancel" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_m"
                android:layout_below="@id/preorder_label"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/delete_view"
                android:layout_toRightOf="@id/delete_view"
                android:src="@drawable/ic_loading_toped" />

            <TextView
                android:id="@+id/name"
                android:layout_width="@dimen/half_screen_2pad"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img"
                android:layout_toEndOf="@+id/img"
                android:layout_toRightOf="@id/img"
                android:singleLine="true"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/img"
                android:text="Rp 20.000,-"
                android:textColor="@color/tkpd_prod_price"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toRightOf="@id/price"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_toRightOf="@id/weight"
                android:text="@string/title_kg"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/preorder_period_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weight"
                android:layout_toEndOf="@id/img"
                android:layout_toRightOf="@id/img"
                android:textSize="@dimen/fontvs"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/error_msg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_qty"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/font_small" />

                <EditText
                    android:id="@+id/qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/cards_ui_3"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:minWidth="@dimen/margin_med"
                    android:padding="@dimen/padding_vs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small"
                    tool:text="2" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info">

            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/border_cart_1"
                android:focusable="true"
                android:hint="@string/title_edit_to_add_notes"
                android:padding="5dp"
                android:paddingBottom="@dimen/margin_small"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_400"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/notes"
                android:layout_marginTop="@dimen/margin_vs"
                android:gravity="left"
                android:padding="5dp"
                android:text="Total:"
                android:textColor="#000000"
                android:textSize="@dimen/fonts"
                android:visibility="gone" />

            <TextView
                android:id="@+id/price_total"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/notes"
                android:layout_marginTop="@dimen/margin_vs"
                android:gravity="right"
                android:padding="5dp"
                android:text="Rp 20.000,-"
                android:textColor="#000000"
                android:textSize="@dimen/fonts"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>