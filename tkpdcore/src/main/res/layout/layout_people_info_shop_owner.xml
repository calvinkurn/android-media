<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:text="@string/title_myshop"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greyish_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:padding="@dimen/margin_small">

        <ImageView
            android:id="@+id/shop_avatar"
            android:layout_width="@dimen/shop_ava"
            android:layout_height="@dimen/shop_ava"
            android:layout_gravity="top"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:src="@drawable/remove" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@+id/shop_avatar"
            android:background="@drawable/tab_selector"
            android:text="Nama Toko"
            android:textColor="@color/black"
            android:textSize="@dimen/fontm" />

        <TextView
            android:id="@+id/shop_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name"
            android:layout_toRightOf="@+id/shop_avatar"
            android:layout_marginLeft="@dimen/margin_small"
            android:drawableLeft="@drawable/ic_address_2"
            android:drawablePadding="@dimen/padding_vs"
            android:text="Jakarta"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fontvs" />

        <LinearLayout
            android:id="@+id/rating_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/shop_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_vs"
                    android:layout_marginTop="@dimen/padding_vs"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/title_reputation"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_vs"
                    android:layout_marginTop="@dimen/padding_vs"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/title_speed"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/reputation_medal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_icon_repsis_speed_lambat"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reputation_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_vs"
                    android:layout_marginTop="@dimen/padding_vs"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3,14 Poin"
                    android:textColor="@color/tkpd_dark_gray" />

                <TextView
                    android:id="@+id/transaction_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_vs"
                    android:layout_marginTop="@dimen/padding_vs"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Transaksi Cepat"
                    android:textColor="@color/tkpd_dark_gray"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>