<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_med"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/product_avatar"
                android:layout_width="@dimen/img_thumb_l"
                android:layout_height="@dimen/img_thumb_l"
                android:layout_alignParentTop="true"
                android:padding="@dimen/padding_vs"
                app:srcCompat="@drawable/ic_cat_notebook" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toEndOf="@id/product_avatar"
                android:layout_toRightOf="@id/product_avatar"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/prompt_product_name"
                android:textColor="@color/tkpd_dark_green"
                android:textSize="@dimen/font_small"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/grey_500"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small">

            <RatingBar
                android:id="@+id/ratingBarQuality"
                style="@style/TkpdRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/drawer_icon"
                android:stepSize="1" />

            <TextView
                android:id="@+id/label_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingBarQuality"
                android:text="@string/sub_label_quality" />

            <TextView
                android:id="@+id/prod_quality_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingBarQuality"
                android:layout_toEndOf="@id/label_quality"
                android:layout_toRightOf="@id/label_quality"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prod_quality_desc"
                android:text="@string/subtitle_quality"
                android:textSize="@dimen/fontvvs"
                android:textStyle="italic"
                android:visibility="visible" />

            <TextView
                android:id="@+id/quality_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtitle_quality"
                android:text="@string/error_review_rate"
                android:textColor="@color/red_500"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/grey_500"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/accuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small">

            <RatingBar
                android:id="@+id/ratingBarAccuracy"
                style="@style/TkpdRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/drawer_icon"
                android:stepSize="1" />

            <TextView
                android:id="@+id/label_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingBarAccuracy"
                android:text="@string/sub_label_accuracy" />

            <TextView
                android:id="@+id/prod_accuracy_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingBarAccuracy"
                android:layout_toEndOf="@id/label_accuracy"
                android:layout_toRightOf="@id/label_accuracy"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prod_accuracy_desc"
                android:text="@string/subtitle_accuracy"
                android:textSize="@dimen/fontvvs"
                android:textStyle="italic"
                android:visibility="visible" />

            <TextView
                android:id="@+id/accuracy_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtitle_accuracy"
                android:layout_marginTop="@dimen/margin_vs"
                android:text="@string/error_review_rate"
                android:textColor="@color/red_500"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/grey_500"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edittext_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/hint_review"
            android:inputType="textMultiLine"
            android:nestedScrollingEnabled="true"
            android:textSize="@dimen/font_small" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/image_holder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_thumb_holder"
            android:scrollbars="horizontal"
            android:visibility="visible" />


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkbox"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="Bagikan ke Facebook"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView" />
        </RelativeLayout>

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/title_submit"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>