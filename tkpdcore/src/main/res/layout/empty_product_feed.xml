<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_wishlist"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wishlist_height"
    android:padding="@dimen/padding_vs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textview_empty_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/no_favorite_shop"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textview_empty_feed_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_empty_feed"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/sub_no_favorite_shop"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/find_favorite_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_empty_feed_sub"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="@drawable/teal_button"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/but_find_favorite"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>