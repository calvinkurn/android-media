<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cards_ui_2">

    <LinearLayout
        android:id="@+id/register_next_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/register_next_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/title_register_process"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/register_next_status"
        android:layout_alignStart="@+id/register_next_status">
        <LinearLayout
            android:id="@+id/register_next_step_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_med">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_check_circle_48dp" />

                    <TextView
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_width="135dp"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center"
                        android:background="@color/time_color"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="@dimen/margin_med"
                        android:layout_height="@dimen/margin_med"
                        android:background="@drawable/circle_green"
                        android:textColor="@color/white"
                        android:text="@string/_2"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/create_tokopedia_account"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"
                        android:id="@+id/tv_brand_name" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/fill_your_profile"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/register_next_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:padding="@dimen/padding_vs"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xlarge"
                tools:text="Halo, Alessandro !"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">
                <EditText
                    android:id="@+id/register_next_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_phone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="@color/black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <com.tkpd.library.ui.widget.MaterialSpinner
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_birthday"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <com.tkpd.library.ui.widget.MaterialSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_gender"
                    app:drawableRightCompat="@drawable/arrow_drop_down"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/register_finish_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@color/deep_orange_500"
                android:gravity="center"
                android:text="@string/title_register_wo_u"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_med"
                android:id="@+id/register_next_detail_t_and_p"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold"
                tools:text="Dengan menekan "/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>