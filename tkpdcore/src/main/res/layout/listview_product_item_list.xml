<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal">

        <com.tokopedia.core.customwidget.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_product_desc"
            android:gravity="center"
            android:src="@drawable/ic_loading_toped" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="38dp"
                android:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:minHeight="23dp"
                android:text="Rp 3.121.500"
                android:textColor="@color/orange_red"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/rating_review_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="68dp"
                    android:layout_height="12dp"
                    />

                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="11sp"
                    />

            </LinearLayout>

            <com.tokopedia.core.customwidget.FlowLayout
                android:id="@+id/label_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="left"
                android:orientation="horizontal">

            </com.tokopedia.core.customwidget.FlowLayout>

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="ORIGINAL-ZONE"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:gravity="center_vertical"
                    android:text="Jakarta"
                    android:textSize="11sp" />

                <LinearLayout
                    android:id="@+id/badges_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="68dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wishlist_button_container"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/wishlist_button"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_wishlist"
            />

    </RelativeLayout>
</RelativeLayout>