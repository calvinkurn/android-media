<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list">

    <!-- REMOVE THIS FILE FROM TKPDCORE -->
    <!-- HotlistAdapter tkpddiscovery not yet use this -->
    <!-- if anyone still use this, create your own xml or reuse listveiw_hotlist_product.xml if necessary -->

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_margin"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp">

            <com.tokopedia.core.customwidget.SquareImageView
                android:id="@+id/product_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                app:srcCompat="@drawable/loading_page" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="38dp"
                tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold"
                android:textSize="@dimen/text_size_s_medium"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/black_70"
                android:lineSpacingExtra="5sp" />

            <TextView
                android:id="@+id/text_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/fontvvs"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    tools:text="Rp 3.121.500"
                    android:textColor="@color/orange_red"
                    android:textSize="@dimen/text_size_s_medium"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:lineSpacingExtra="5sp" />

                <TextView
                    android:id="@+id/text_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fontvvs"
                    android:paddingTop="@dimen/margin_vvvs"
                    android:paddingBottom="@dimen/margin_vvvs"
                    android:paddingLeft="@dimen/padding_vvs"
                    android:paddingRight="@dimen/padding_vvs"
                    android:layout_marginLeft="@dimen/media_grid_spacing"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_rounded_corners_red"
                    tools:text="10%OFF"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rating_review_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="68dp"
                    android:layout_height="12dp"
                    />

                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="@dimen/text_size_xsmall"
                    />

            </LinearLayout>

            <com.tokopedia.core.customwidget.FlowLayout
                android:id="@+id/label_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

            </com.tokopedia.core.customwidget.FlowLayout>

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/black_54"
                tools:text="ORIGINAL-ZONE"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_xsmall"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:lineSpacingExtra="5sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:drawableLeftCompat="@drawable/ic_icon_location_grey"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_xsmall"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/black_38"
                    android:lineSpacingExtra="5sp"/>

                <LinearLayout
                    android:id="@+id/badges_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="68dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wishlist_button_container"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/circle_white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/wishlist_button"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_wishlist"
            />

    </RelativeLayout>
</RelativeLayout>