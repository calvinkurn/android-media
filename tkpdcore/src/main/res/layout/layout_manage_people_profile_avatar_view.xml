<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/cards_ui_2"
    android:padding="@dimen/padding_vs"
    tools:showIn="@layout/content_manage_people_profile">

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:visibility="visible"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/se_img_size"
        android:layout_height="@dimen/se_img_size"
        android:padding="@dimen/se_img_pad"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:contentDescription="HardCode"
        tools:ignore="HardcodedText" />

</RelativeLayout>