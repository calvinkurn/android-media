<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.tokopedia.core.manage.people.address.fragment.DistrictRecomendationFragment">

    <com.tokopedia.design.text.SearchInputView
        android:id="@+id/search_input_view_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
