    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small" >

            <ImageView
                android:id="@+id/user_ava"
                android:layout_width="@dimen/user_ava"
                android:layout_height="@dimen/user_ava"
                android:layout_marginRight="@dimen/margin_small" />

            <LinearLayout
                android:id="@+id/user_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_ava"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_vs">

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_vs"
                    android:paddingRight="@dimen/padding_vs"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontvs"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_selector"
                    android:singleLine="true"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold"
                    tools:text="username"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/but_overflow_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/overflow_selected"
                android:gravity="right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_new_action_overflow_black" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_area"
                android:layout_toRightOf="@+id/user_ava"
                android:id="@+id/view_reputation"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/reputation">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reputation_user"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/rep_icon"
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        app:srcCompat="@drawable/ic_icon_repsis_smile_active"/>
                    <TextView
                        android:id="@+id/rep_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontvs"
                        android:layout_marginLeft="@dimen/margin_vs"
                        android:gravity="center_vertical" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/message_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_reputation"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_alignLeft="@id/user_area"
                android:layout_toStartOf="@id/but_overflow_comment">
                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/left_bubble"
                    android:padding="@dimen/padding_vs"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/fonts"
                    tools:text="Isi messagenya" />
            </LinearLayout>
            <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="besok"
                android:textColor="@color/time_color"
                android:textSize="@dimen/fontvs"
                android:layout_below="@id/message_container"
                android:layout_toRightOf="@id/user_ava"/>
        </RelativeLayout>

