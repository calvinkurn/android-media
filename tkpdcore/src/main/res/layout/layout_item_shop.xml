<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/shop_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_product_list"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <com.tokopedia.core.customwidget.SquareImageView
                tools:src="@drawable/ic_icon_toped_announce"
                android:id="@+id/item_shop_image"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp">

                <ImageView
                    android:id="@+id/item_shop_gold"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    app:srcCompat="@drawable/ic_shop_gold"
                    android:layout_marginRight="3dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_shop_name"
                    tools:text="Toko tokpedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                tools:src="@drawable/ic_badge_gold"
                android:id="@+id/reputation_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shop_list_reputation_view_height"
                android:layout_marginTop="4dp"/>

            <com.tokopedia.design.component.TextViewCompat
                tools:text="DKI Jakarta"
                android:id="@+id/shop_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/black_36"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp">

                <ImageView
                    android:id="@+id/shop_item_preview_1"
                    android:layout_width="@dimen/shop_item_preview_width"
                    android:layout_height="@dimen/shop_item_preview_height" />

                <ImageView
                    android:id="@+id/shop_item_preview_2"
                    android:layout_width="@dimen/shop_item_preview_width"
                    android:layout_height="@dimen/shop_item_preview_height"
                    android:layout_marginLeft="12dp"/>

                <ImageView
                    android:id="@+id/shop_item_preview_3"
                    android:layout_width="@dimen/shop_item_preview_width"
                    android:layout_height="@dimen/shop_item_preview_height"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>

            <com.tokopedia.design.component.ButtonCompat
                android:gravity="center"
                android:paddingLeft="120dp"
                android:drawablePadding="-120dp"
                android:layout_gravity="center"
                android:id="@+id/btn_follow_shop"
                app:buttonCompatSize="medium"
                tools:text="Follow"
                app:buttonCompatType="primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/view_shop_inactive"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:alpha="0.7"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Status Toko:"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:text="@string/label_shop_status"/>
            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_8"
                app:cardElevation="@dimen/dp_0"
                app:cardCornerRadius="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.tokopedia.design.component.TextViewCompat
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sudah tidak aktif"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black_70"
                    android:text="@string/label_shop_inactive"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>