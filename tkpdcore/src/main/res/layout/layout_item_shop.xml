<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="5dp">

    <com.tokopedia.core.customwidget.SquareImageView
        android:id="@+id/item_shop_image"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="9dp">

        <ImageView
            android:id="@+id/item_shop_gold"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_shop_gold"
            android:layout_marginRight="3dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/black_70"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/reputation_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/shop_list_reputation_view_height"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/shop_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:textSize="11sp"
        android:textColor="@color/black_36"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="9dp">

        <ImageView
            android:id="@+id/shop_item_preview_1"
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height" />

        <ImageView
            android:id="@+id/shop_item_preview_2"
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_marginLeft="12dp"/>

        <ImageView
            android:id="@+id/shop_item_preview_3"
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/green_button_rounded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_add"
            android:drawablePadding="6dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="Favoritkan"/>

    </RelativeLayout>





</LinearLayout>