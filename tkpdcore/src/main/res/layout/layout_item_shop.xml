<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <com.tokopedia.core.customwidget.SquareImageView
            android:id="@+id/item_shop_image"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/item_shop_gold"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_shop_gold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_shop_lucky"
            android:layout_width="@dimen/large_dp"
            android:layout_height="@dimen/large_dp"
            android:layout_alignRight="@id/shop_image_1"
            android:layout_below="@id/shop_gold_1"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/margin_vvs"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginTop="9dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/black_70"
        android:textSize="13sp"
        android:textStyle="bold" />

    <com.tokopedia.seller.home.view.ReputationView
        android:id="@+id/reputation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:textSize="11sp"
        android:textColor="@color/black_36"
        android:text="Jakarta"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="9dp">

        <ImageView
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height" />

        <ImageView
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_marginLeft="12dp"/>

        <ImageView
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/green_button_rounded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_add"
            android:drawablePadding="6dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="Favoritkan"/>

    </RelativeLayout>





</LinearLayout>