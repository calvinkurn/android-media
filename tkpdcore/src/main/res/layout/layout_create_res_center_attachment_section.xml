<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cards_ui_2"
    android:padding="@dimen/padding_small"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/view_upload_proof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_vs"
            android:paddingBottom="@dimen/padding_vs"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/title_create_resolution_step_2_desc"
            android:textSize="@dimen/fontvs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_upload_proof"
            android:layout_width="match_parent"
            android:layout_height="72dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>