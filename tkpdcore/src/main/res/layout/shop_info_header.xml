<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.1">

    <RelativeLayout
        android:id="@id/info_shop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_cover_height"
        android:background="@drawable/cover_shader">

        <RelativeLayout
            android:id="@id/shop_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/shop_content_panel"
            android:layout_marginBottom="@dimen/margin_med">

            <ImageView
                android:id="@id/shop_avatar"
                android:layout_width="@dimen/img_thumb_l"
                android:layout_height="@dimen/img_thumb_l"
                android:layout_marginLeft="@dimen/margin_small"
                android:background="@drawable/border_circle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/shop_avatar"
                android:layout_toRightOf="@id/shop_avatar"
                android:orientation="vertical">

                <TextView
                    android:id="@id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:gravity="center_horizontal"
                    android:shadowColor="@color/black"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="Jakarta"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@id/badges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        android:src="@drawable/ic_icon_repsis_medal_diamond"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/gold_shop"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_shop_gold"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@id/lucky_shop"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="4dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/free_return_shop"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="4dp"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@id/shop_content_panel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/setting"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_bit_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:src="@drawable/icon_setting_white" />

            <ImageView
                android:id="@id/favorite"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_bit_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:src="@drawable/icon_favorite_white" />

            <ImageView
                android:id="@id/message"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_bit_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:src="@drawable/icon_message_white" />

            <ImageView
                android:id="@id/more"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_bit_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:src="@drawable/icon_info_white" />

            <ImageView
                android:id="@id/share_but"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_bit_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:src="@drawable/icon_share_white" />

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@id/close_notice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_shop"
        android:background="@drawable/layout_warning"
        android:padding="@dimen/padding_small"
        android:text="@string/title_currently_closed"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        android:visibility="gone" />



</RelativeLayout>