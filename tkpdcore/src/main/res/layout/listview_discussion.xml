<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:background="@drawable/cards_ui_2_selected">

        <ImageView
            android:id="@+id/prod_image"
            android:layout_width="@dimen/img_thumb_m"
            android:layout_height="@dimen/img_thumb_m"
            android:layout_marginRight="@dimen/margin_vs"
            android:src="@drawable/remove"
            android:contentDescription="@string/product_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prod_image"
            android:layout_toEndOf="@id/prod_image">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vs"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:scrollHorizontally="true"
                tools:text="User name"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <LinearLayout
                android:id="@+id/reputation_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_vs"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rep_icon"
                    android:layout_width="@dimen/img_thumb_s"
                    android:layout_height="@dimen/img_thumb_s"
                    android:src="@drawable/ic_icon_repsis_smile_active"
                    android:contentDescription="@string/title_reputation" />

                <TextView
                    android:id="@+id/rep_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:gravity="center_vertical"
                    tools:text="140%"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reputation_view"
                android:layout_marginTop="@dimen/margin_vs"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_for"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fontvs"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:scrollHorizontally="true"
                    android:lines="1"
                    tools:text="Product Name"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="italic" />
            </LinearLayout>

            <ImageView
                android:id="@+id/but_overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/overflow_selected"
                android:src="@drawable/ic_new_action_overflow_black"
                />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_layout"
                android:maxLines="3"
                tools:text="Ini isi pesannya"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/message"
                android:layout_marginTop="@dimen/margin_vs"
                tools:text="11 November 1111"
                android:textColor="@color/time_color"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/total_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_toLeftOf="@id/comment"
                android:layout_toStartOf="@id/comment"
                android:gravity="center_vertical"
                tools:text="1"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/comment"
                android:layout_width="@dimen/img_thumb_s"
                android:layout_height="@dimen/img_thumb_s"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/message"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_vs"
                android:src="@drawable/ic_menu_talk"
                />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/empty_view"
        android:background="@color/transparent"
        android:visibility="gone"
        />


</RelativeLayout>