<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_loading"
        layout="@layout/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/holder_header_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_1"
                android:orientation="vertical"
                android:padding="@dimen/padding_small"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_catalog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/fontm"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <TextView
                        android:id="@+id/tv_catalog_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/tkpd_prod_price"
                        android:textSize="@dimen/fonts" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/holder_catalog_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:visibility="gone">

                <com.tkpd.library.ui.widget.TouchViewPager
                    android:id="@+id/vp_catalog_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pager_height"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:visibility="visible" />

                <com.tkpd.library.viewpagerindicator.LinePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_vs"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/holder_btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/tab_selector"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="#C7C7C7" />

                <TextView
                    android:id="@+id/btn_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@drawable/btn_buy"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:text="@string/title_buy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontl"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/holder_catalog_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/catalog_desc"
                    android:textColor="#333333"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />


                <com.tkpd.library.ui.view.ExpandableTextView
                    android:id="@+id/expand_text_catalog_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:animDuration="200"
                    app:maxCollapsedLines="5">

                    <TextView
                        android:id="@id/tv_expandable_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#464646"
                        android:textSize="@dimen/fontvs" />

                    <ImageView
                        android:id="@id/iv_expand_collapse"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="bottom|end"
                        android:background="@android:color/transparent"
                        tool:ignore="ContentDescription" />
                </com.tkpd.library.ui.view.ExpandableTextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/holder_catalog_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expert_review"
                    android:textColor="#333333"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/expert_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_review_logo"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="@dimen/img_thumb"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin_small"
                        android:background="@drawable/cards_ui_2_selected" />

                    <TextView
                        android:id="@+id/tv_review_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_review_logo"
                        android:layout_toRightOf="@id/iv_review_logo"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/fonts"
                        tool:text="Tekno Up" />

                    <TextView
                        android:id="@+id/tv_review_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/fonts"
                        tool:text="Nilai : 8.9" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_review_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/tv_review_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/read_more"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/holder_catalog_spec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/spesification"
                    android:textColor="#333333"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/catalog_spec_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="false" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>