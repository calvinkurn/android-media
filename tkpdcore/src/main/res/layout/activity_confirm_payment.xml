<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_small">

    <include
        android:id="@+id/include_loading"
        layout="@layout/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pay_conf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cards_ui_2"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small"
                        android:text="@string/title_total_payment"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:id="@+id/total_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:text="asdas dasdas"
                        android:textSize="@dimen/fontm"
                        android:textStyle="bold" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_payment_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/payment_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/title_payment_date"
                            android:singleLine="true"
                            android:textSize="@dimen/fonts"
                            android:textStyle="bold" />
                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:id="@+id/tv_label_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/title_payment_method"
                        android:textSize="@dimen/floating_label"
                        android:visibility="gone" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/tv_error_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/tkpd_dark_red"
                        android:textSize="@dimen/fontvs"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/from_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_label_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title_from_account"
                            android:textSize="@dimen/floating_label"
                            android:visibility="gone" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spinner_from_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/error_spinner_account_from"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/error_from_account"
                            android:textColor="@color/tkpd_dark_red"
                            android:textSize="@dimen/fontvs"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/new_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_account_owner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/account_owner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:hint="@string/title_account_owner" />
                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_account_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/account_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:hint="@string/title_account_number"
                                android:inputType="number" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_choose_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_choose_bank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:editable="false"
                                android:focusableInTouchMode="false"
                                android:hint="@string/title_choose_bank"
                                android:inputType="none"
                                android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/branch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:hint="@string/title_branch"
                                android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nama_penyetor_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:orientation="vertical">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_depositor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/nama_penyetor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/title_penyetor" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dest_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_label_dest_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title_dest_account"
                            android:textSize="@dimen/floating_label"
                            android:visibility="gone" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spinner_dest_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/error_spinner_account_dest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/error_dest_account"
                            android:textColor="@color/tkpd_dark_red"
                            android:textSize="@dimen/fontvs"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/total_payment_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_total_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/input_total_payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/title_total_payment"
                                android:inputType="number"
                                android:maxLength="10" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/title_remark"-->
                    <!--android:textColor="@color/label_color" />-->

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:hint="@string/title_remark" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/password_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/title_password"
                                android:inputType="textPassword" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/check_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:background="@drawable/cards_ui_2"
                        android:drawableEnd="@drawable/info_icon"
                        android:drawableRight="@drawable/info_icon"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_small"
                        android:text="Nomor Rekening"
                        android:textColor="@color/tkpd_dark_green"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- <TextView -->
                <!-- android:shopId="@+shopId/error_message" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:padding="@dimen/padding_vs" -->
                <!-- android:textColor="@color/tkpd_dark_red" -->
                <!-- android:text="errir noh" -->
                <!-- android:layout_marginTop="@dimen/margin_small" -->
                <!-- android:visibility="gone" -->
                <!-- /> -->

                <TextView
                    android:id="@+id/submit_but"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/button_buy_from_cart"
                    android:gravity="center"
                    android:text="@string/title_save"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_conf_success"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/title_payment_conf_success"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/msg_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/title_conf_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/total_payment_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tokopedia_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/remaining_tokopedia_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone" />

                <!-- <TextView -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:text="@string/title_payment_confirmation" -->
                <!-- android:background="@drawable/button_buy_from_cart" -->
                <!-- android:layout_marginBottom="@dimen/margin_small" -->
                <!-- android:layout_marginTop="@dimen/margin_small" -->
                <!-- android:shopId="@+shopId/to_payment_confirmation" -->
                <!-- android:textColor="@color/white" -->
                <!-- android:gravity="center" -->
                <!-- android:padding="@dimen/padding_small" -->
                <!-- /> -->

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>