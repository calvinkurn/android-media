        <!-- android:layout_alignParentBottom="true"  /> -->


        <!-- <View -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="1dp" -->
        <!-- android:layout_above="@shopId/but_overflow_comment" -->
