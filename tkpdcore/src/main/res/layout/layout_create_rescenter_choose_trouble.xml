<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cards_ui_2"
    android:padding="@dimen/padding_small"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_spinner_trouble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_vs"
            android:paddingBottom="@dimen/padding_vs"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/title_create_resolution_step_1a_desc"
            android:textSize="@dimen/fontvs" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:minHeight="48dp"
            android:id="@+id/spinner_trouble" />

        <android.support.design.widget.TextInputLayout
            android:id="@id/view_desc"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_desc_trouble">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/box_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>