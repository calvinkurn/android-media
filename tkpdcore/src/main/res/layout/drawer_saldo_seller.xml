<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_100"
    android:visibility="visible">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_300" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_saldo_height"
        >

        <RelativeLayout
            android:id="@+id/drawer_saldo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_background_tokopedia">

            <TextView
                android:id="@+id/textViewSaldoSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/saldo"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/deposit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:text=""
                android:textColor="@color/href_link"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/loading_saldo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_above="@+id/textViewSaldoSub"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_300" />

</LinearLayout>