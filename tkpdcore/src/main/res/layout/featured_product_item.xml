<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="225dp"
    android:layout_height="wrap_content"
    android:background="@drawable/featured_product_item_background"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="16dp"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="@dimen/featured_product_item_image_size"
        android:layout_height="@dimen/featured_product_item_image_size"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/product_grid_padding"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        app:cardUseCompatPadding="true">

        <com.tokopedia.core.customwidget.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/featured_product_item_image_size"
            android:layout_height="@dimen/featured_product_item_image_size"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@id/wishlist_button_container"
        android:layout_width="@dimen/wishlish_button_size"
        android:layout_height="@dimen/wishlish_button_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/circle_white"
        android:visibility="gone">

        <ImageView
            android:id="@id/wishlist_button"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_wishlist"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_card"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:minHeight="@dimen/wishlish_button_size"
        style="@style/MediumText"
        android:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold"
        android:textColor="@color/black_70"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        style="@style/MediumText"
        android:text="Rp 3.121.500"
        android:textColor="@color/orange_red"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/shop_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/product_grid_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/badges_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <com.tokopedia.core.customwidget.FlowLayout
            android:id="@+id/label_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </LinearLayout>

</RelativeLayout>