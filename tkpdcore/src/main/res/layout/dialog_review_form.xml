<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="DisableBaselineAlignment" >

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingTop="1dp" >

        <LinearLayout
            android:id="@+id/prod_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small" >

            <ImageView
                android:id="@+id/product_image_iv"
                android:layout_width="@dimen/user_ava"
                android:layout_height="@dimen/user_ava"
                android:layout_marginRight="@dimen/margin_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:background="@drawable/tab_selector"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Untuk"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@+id/product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_selector"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/user_ava"
                    android:layout_width="@dimen/img_thumb"
                    android:layout_height="@dimen/img_thumb"
                    android:layout_margin="@dimen/margin_small"
                    app:srcCompat="@drawable/remove"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_small"
                    android:paddingLeft="@dimen/padding_vs"
                    android:paddingRight="@dimen/padding_vs"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/fonts"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small" >

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/img_thumb"
                        android:background="@drawable/tab_selector"
                        android:includeFontPadding="false"
                        android:text="Product Name ProductProduct Name Product"
                        android:textColor="@color/href_link"
                        android:textSize="@dimen/fonts"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/but_overflow"
                        android:layout_width="@dimen/icon_prod_pad"
                        android:layout_height="@dimen/icon_prod_pad"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@drawable/ic_chevron_down"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_name"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:singleLine="true"
                        android:text="Besok besok"
                        android:textColor="@color/time_color"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="italic"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/write_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:hint="@string/hint_review"
                android:padding="@dimen/padding_small"
                android:textColor="#333333"
                android:textSize="@dimen/font_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight=".50"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/title_prod_quality"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fonts" />

                    <Spinner
                        android:id="@+id/prod_quality_rat_spin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/currency"
                        android:gravity="right"
                        android:textSize="@dimen/fonts" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight=".50"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/title_ship_speed"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fonts"
                        tools:ignore="ObsoleteLayoutParam" />

                    <Spinner
                        android:id="@+id/ship_speed_rat_spin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/currency"
                        android:gravity="right"
                        android:textSize="@dimen/fonts" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_vs"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight=".50"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/title_prod_accuracy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fonts" />

                    <Spinner
                        android:id="@+id/prod_acc_rat_spin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/currency"
                        android:gravity="right"
                        android:textSize="@dimen/fonts" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight=".50"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/title_service"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fonts" />

                    <Spinner
                        android:id="@+id/shop_service_rat_spin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/currency"
                        android:gravity="right"
                        android:textSize="@dimen/fonts" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small" >

                <TextView
                    android:id="@+id/submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/button_buy_from_cart"
                    android:padding="@dimen/padding_vs"
                    android:text="@string/title_submit"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/btn_shop"
                    android:gravity="left"
                    android:paddingBottom="@dimen/padding_vs"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_vs"
                    android:text="@string/title_edit"
                    android:textColor="@color/time_color"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#AAAAAA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/padding_small" >

            <TextView
                android:id="@+id/submit_but"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight=".50"
                android:background="@drawable/button_buy_from_cart"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="@string/title_submit"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cancel_but"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight=".50"
                android:background="@drawable/btn_shop"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="@string/title_cancel"
                tools:ignore="ObsoleteLayoutParam" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>