<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/padding_med"
    android:paddingLeft="@dimen/padding_med"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_howitworks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sm"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="@string/dapatkan_cashback_dalam"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_20"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_help_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_group_share" />

        <ImageView
            android:id="@+id/img_help_tell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_group_refer" />

        <ImageView
            android:id="@+id/img_help_recieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_group_tokocash" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sm"
        android:layout_marginBottom="@dimen/margin_vl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_help_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/bagi_kode_referral"
            android:textColor="@color/black_54"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/tv_help_tell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/referral_help_tell"
            android:textColor="@color/black_54"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/tv_help_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/referral_help_receive"
            android:gravity="center_horizontal"
            android:textSize="@dimen/fontvs" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_app_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_referral_code"
        android:layout_marginTop="@dimen/margin_xl"
        android:background="@color/green_btn"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/margin_sm"
        android:text="@string/app_share_btn_label"
        android:textColor="@color/white"
        android:textSize="@dimen/fonts" />

    <TextView
        android:id="@+id/tv_referral_help_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sm"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/font_medium"
        android:padding="@dimen/padding_med"
        android:text="@string/apa_itu_tokocash"
        android:textColor="@color/green_btn"
        android:textSize="@dimen/fontvs" />
</LinearLayout>
