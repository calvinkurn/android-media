<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="3dp" >

    <ImageView
        android:id="@+id/border"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/addproduct"
        android:layout_centerInParent="true"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/attachment"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/delete_attachment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close_image"
        android:layout_alignTop="@id/attachment"
        android:layout_alignRight="@id/attachment"
        android:layout_alignEnd="@id/attachment"
        android:visibility="gone"/>
</RelativeLayout>
