<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:background="#F7F6F6"
        android:clickable="false"
        android:orientation="vertical"
        android:padding="@dimen/padding_vs">

        <ImageView
            android:id="@+id/seller_img"
            android:layout_width="@dimen/img_thumb_m"
            android:layout_height="@dimen/img_thumb_m"
            android:background="@drawable/border_circle"
            app:srcCompat="@drawable/remove" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_toRightOf="@id/seller_img"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_weight=".30"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/seller_name"
                    android:layout_width="@dimen/half_screen_2pad"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Ami Store asdas asdasda asdasd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seller_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Depok"
                    android:textColor="#868686"
                    android:textSize="@dimen/fonts" />

                <ImageView
                    android:id="@+id/seller_rating"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_med"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/qc_launcher" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>