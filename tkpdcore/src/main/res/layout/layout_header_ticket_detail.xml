<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_small">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cards_ui_2">

        <TextView
            android:id="@+id/status"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_small"
            android:background="@color/tkpd_dark_gray"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/fontvs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:layout_toLeftOf="@id/status"
            android:layout_toStartOf="@id/status"
            android:textColor="@color/black"
            android:textSize="@dimen/fontm"
            android:textStyle="bold" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="@color/grey_400" />

        <ImageView
            android:id="@+id/user_ava"
            android:layout_width="@dimen/user_ava"
            android:layout_height="@dimen/user_ava"
            android:layout_below="@id/separator"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toEndOf="@id/user_ava"
            android:layout_toRightOf="@id/user_ava"
            android:singleLine="true"
            android:textColor="@color/href_link"
            android:textSize="@dimen/fonts" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_toEndOf="@id/user_ava"
            android:layout_toRightOf="@id/user_ava"
            android:singleLine="true"
            android:textColor="@color/time_color"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_ava"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingBottom="@dimen/padding_small"
            android:textSize="@dimen/fonts" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_upload_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_thumb_m"
            android:layout_below="@id/message"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:paddingBottom="@dimen/padding_small"
            android:orientation="horizontal"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main"
        android:layout_marginTop="@dimen/margin_small">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/grey_400" />

        <TextView
            android:id="@+id/view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btm_drop_shadow"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_small"
            android:text="@string/title_view_more"
            android:textColor="@color/time_color"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>