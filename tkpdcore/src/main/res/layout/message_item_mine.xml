<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="@dimen/padding_vs"
    android:paddingLeft="@dimen/padding_vs"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    >

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main"
        android:layout_alignRight="@+id/main"
        android:layout_below="@+id/date"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_38"
        android:textSize="11sp"
        android:layout_marginLeft="3dp"
        android:textStyle="normal"
        tools:text="Pengguna" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/grey_500"
        android:textSize="11sp"
        android:textStyle="normal"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@id/label"
        tools:text="●"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_54"
        android:textSize="11sp"
        android:textStyle="normal"
        android:layout_toLeftOf="@id/dot"
        tools:text="AHAJA"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textColor="@color/grey_500"
        tools:text="13:16 wib"
        android:textAllCaps="true"
        android:textSize="@dimen/fontvs" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@drawable/right_bubble"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/chat_width"
            android:textIsSelectable="true"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            tools:text ="Gukguk meong meongaksjdkajshdkajhsdkajhsdkajhsdaksdjhaksjhkahsdk"
            android:linksClickable="true"
            android:textSize="@dimen/fonts" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/chat_status"
        android:layout_width="11dp"
        android:layout_height="6dp"
        android:layout_toLeftOf="@+id/hour"
        android:layout_toStartOf="@+id/hour"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/main"
        android:layout_alignBottom="@+id/hour" />

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/time_color"
        android:textSize="@dimen/fontvvs"
        tools:text="10:13 pm"
        tools:visibility="gone"
        android:layout_below="@id/main"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_alignEnd="@id/main"/>
</RelativeLayout>