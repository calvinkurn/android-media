<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="@dimen/margin_sm"
    android:paddingRight="@dimen/margin_sm">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main"
        android:layout_alignRight="@+id/main"
        android:layout_below="@+id/date"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_38"
        android:textSize="11sp"
        android:layout_marginLeft="3dp"
        android:textStyle="normal"
        tools:text="Pengguna" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/label"
        android:layout_alignBottom="@id/label"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/label"
        android:layout_toStartOf="@+id/label"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:text="â—"
        android:gravity="center_vertical"
        android:textColor="@color/grey_500"
        android:textSize="7sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_54"
        android:textSize="11sp"
        android:textStyle="normal"
        android:layout_toLeftOf="@id/dot"
        tools:text="AHAJA"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/new_margin_med"
        android:textColor="@color/grey_500"
        tools:text="13:16 wib"
        android:textAllCaps="true"
        android:textSize="@dimen/fontvs" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/margin_vs"
        android:id="@+id/card_group_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/image"
            android:layout_width="228dp"
            android:layout_height="148dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:visibility="visible" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/left_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card_group_chat_message"
        android:layout_alignBottom="@+id/card_group_chat_message"
        android:layout_toLeftOf="@+id/card_group_chat_message"
        android:layout_toStartOf="@+id/card_group_chat_message"
        android:visibility="visible"
        android:src="@drawable/ic_action_attachment"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/card_group_chat_message"
        android:layout_marginTop="@dimen/margin_vs"
        android:background="@drawable/right_bubble">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/chat_width"
            android:textIsSelectable="true"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            tools:text ="Gukguk meong meongaksjdkajshdkajhsdkajhsdkajhsdaksdjhaksjhkahsdk"
            android:linksClickable="true"
            android:padding="@dimen/padding_small"
            android:visibility="gone"
            android:textSize="@dimen/fonts" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/chat_status"
        android:layout_width="11dp"
        android:layout_height="6dp"
        android:layout_toLeftOf="@+id/hour"
        android:layout_toStartOf="@+id/hour"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/main"
        android:layout_alignTop="@+id/hour"
        android:layout_alignBottom="@+id/hour"
        android:adjustViewBounds="true"
        tools:src="@drawable/checked_thin"/>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/time_color"
        android:textSize="@dimen/fontvvs"
        tools:text="10:13 pm"
        tools:visibility="visible"
        android:layout_below="@id/main"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_alignEnd="@id/card_group_chat_message"
        android:layout_alignRight="@id/card_group_chat_message"
        />
</RelativeLayout>