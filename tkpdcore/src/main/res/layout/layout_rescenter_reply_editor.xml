<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_vs"
    android:paddingLeft="@dimen/padding_vs"
    android:paddingRight="@dimen/padding_vs"
    android:paddingTop="@dimen/padding_vs">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview_attachment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_thumb_m"
        android:visibility="visible">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_below="@+id/listview_attachment"
        android:visibility="visible">

        <ImageView
            android:id="@+id/attach_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/overflow_selected"
            android:padding="@dimen/padding_vs"
            app:srcCompat="@drawable/ic_action_attachment"
            android:layout_centerVertical="true" />


        <EditText
            android:id="@+id/new_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/send_but"
            android:layout_toRightOf="@+id/attach_but"
            android:hint="@string/prompt_new_comment"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textSize="@dimen/font_medium" />

        <ImageView
            android:id="@+id/send_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="@dimen/padding_small"
            app:srcCompat="@drawable/ic_send_24dp_green" />

    </RelativeLayout>
</RelativeLayout>