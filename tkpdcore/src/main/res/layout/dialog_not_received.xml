<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:padding="25dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvNotReceivedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_notreceived_title"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/color_complain_header"
        />
    <TextView
        android:id="@+id/tvNotReceivedBody"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_complain_body"
        android:textSize="@dimen/text_size_medium"
        android:text="@string/string_notreceived_body"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRefund"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_height="match_parent"
            android:text="@string/string_notreceived_refund"
            android:textStyle="bold"
            android:textColor="@color/color_complain_body"
            android:textSize="@dimen/text_size_medium"
            android:background="@color/transparent"/>
        <Button
            android:id="@+id/btnCheckCourier"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/string_notreceived_check_courier"
            android:textColor="@color/medium_green"
            android:layout_height="match_parent"
            android:background="@color/transparent" />
    </LinearLayout>
</LinearLayout>