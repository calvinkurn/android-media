<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/prod_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small" >

            <ImageView
                android:id="@+id/prod_img"
                android:layout_width="@dimen/user_ava"
                android:layout_height="@dimen/user_ava"
                android:layout_marginRight="@dimen/margin_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:background="@drawable/tab_selector"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Untuk"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@+id/prod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_selector"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/padding_vs"
            android:background="@color/white"
            android:id="@+id/reply_view"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/send_button"
                android:background="@null"
                android:src="@drawable/ic_action_send"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_vs"
                android:layout_marginLeft="@dimen/margin_vs" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reply_box"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/send_button"
                android:maxLines="1"
                android:nestedScrollingEnabled="true" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/prod_view"
            android:layout_above="@+id/reply_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/header">

                        <ImageView
                            android:layout_width="@dimen/img_thumb_m"
                            android:layout_height="@dimen/img_thumb_m"
                            android:id="@+id/user_avatar"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            app:srcCompat="@drawable/remove" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_overflow"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_new_action_overflow_black"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/user_avatar"
                            android:layout_toLeftOf="@id/btn_overflow"
                            android:paddingLeft="@dimen/padding_vs"
                            android:paddingRight="@dimen/padding_vs">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/username"
                                android:text="Username"
                                android:textColor="@color/black"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textSize="@dimen/font_medium"
                                android:layout_marginBottom="@dimen/margin_vs" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/username"
                                android:orientation="horizontal"
                                android:id="@+id/counter_smiley">

                                <ImageView
                                    android:id="@+id/rep_icon"
                                    android:layout_width="@dimen/img_thumb_s"
                                    android:layout_height="@dimen/img_thumb_s"
                                    app:srcCompat="@drawable/ic_icon_repsis_smile_active"/>
                                <TextView
                                    android:id="@+id/rep_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/fontvs"
                                    android:text="40%"
                                    android:layout_marginLeft="@dimen/margin_vs"
                                    android:gravity="center_vertical" />

                            </LinearLayout>
                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:id="@+id/comment"
                        android:text="Comment Here\n\tComment Here\n\t\tComment There"
                        android:textSize="@dimen/font_small"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/image_holder"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:layout_height="@dimen/img_thumb_holder"
                        android:layout_below="@id/comment"
                        android:scrollbars="horizontal"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:layout_below="@id/image_holder"
                        android:id="@+id/date"
                        android:text="25 Maret 2015"
                        android:textColor="@color/time_color"
                        android:textSize="@dimen/fontvs" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/date"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:id="@+id/sep1"
                        android:background="@color/label_color"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/footer"
                        android:layout_below="@+id/date"
                        android:layout_marginTop="@dimen/margin_med">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/grey_300"
                            android:id="@+id/top_separator"
                            android:layout_alignParentTop="true"
                            android:visibility="visible" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/top_separator"
                            android:id="@+id/view_review_rating"
                            android:visibility="visible">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_prod_quality"
                                    android:id="@+id/label_quality"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/font_small"
                                    android:paddingRight="@dimen/padding_small"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/margin_vs" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/star_quality"
                                    app:srcCompat="@drawable/ic_star_five"
                                    android:layout_gravity="center_vertical"
                                    android:paddingTop="@dimen/padding_vs"
                                    android:paddingBottom="@dimen/padding_vs"
                                    android:layout_marginBottom="@dimen/margin_vs" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey_300"
                                android:id="@+id/separator"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_marginRight="@dimen/margin_small"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_accuracy"
                                    android:id="@+id/label_accuracy"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/font_small"
                                    android:paddingRight="@dimen/padding_small"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/margin_vs" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/star_accuracy"
                                    app:srcCompat="@drawable/ic_star_five"
                                    android:layout_gravity="center_vertical"
                                    android:paddingTop="@dimen/padding_vs"
                                    android:paddingBottom="@dimen/padding_vs"
                                    android:layout_marginBottom="@dimen/margin_vs" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/grey_300"
                            android:id="@+id/bottom_separator"
                            android:layout_below="@+id/view_review_rating"
                            android:visibility="visible" />
                    </RelativeLayout>
                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@shopId/sep1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:layout_gravity="center_vertical"
                            android:text="@string/title_prod_quality"
                            android:textSize="@dimen/font_small"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            app:srcCompat="@drawable/ic_star_five"
                            android:shopId="@+shopId/star_quality"
                            android:layout_gravity="center"
                            android:scaleType="fitStart"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/padding_vs"
                            android:text="@string/title_accuracy"
                            android:textSize="@dimen/font_small"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            app:srcCompat="@drawable/ic_star_five"
                            android:shopId="@+shopId/star_accuracy"
                            android:scaleType="fitEnd"/>

                    </LinearLayout>-->

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:id="@+id/counter_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="1"
                        android:textSize="@dimen/fontvs"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        app:srcCompat="@drawable/ic_menu_talk"
                        android:id="@+id/icon_comment"
                        android:layout_toRightOf="@+id/counter_comment"
                        android:layout_alignTop="@+id/counter_comment"
                        android:layout_alignBottom="@+id/counter_comment"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/view_like_dislike"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/img_thumb_s"
                            android:layout_height="@dimen/img_thumb_s"
                            app:srcCompat="@drawable/ic_icon_repsis_like"
                            android:id="@+id/icon_like"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/icon_like"
                            android:paddingLeft="@dimen/padding_vs"
                            android:paddingRight="@dimen/padding_small"
                            android:gravity="center_vertical"
                            android:id="@+id/counter_like"
                            android:text="1"
                            android:textSize="@dimen/fontvs"/>

                        <ImageView
                            android:layout_width="@dimen/img_thumb_s"
                            android:layout_height="@dimen/img_thumb_s"
                            android:layout_toRightOf="@id/counter_like"
                            app:srcCompat="@drawable/ic_icon_repsis_dislike"
                            android:id="@+id/icon_dislike"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/icon_dislike"
                            android:paddingLeft="@dimen/padding_vs"
                            android:gravity="center_vertical"
                            android:id="@+id/counter_dislike"
                            android:text="1"
                            android:textSize="@dimen/fontvs"/>

                    </RelativeLayout>

                </RelativeLayout>

                <!-- Comment Area-->
                <RelativeLayout
                    android:id="@+id/comment_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small">

                    <RelativeLayout
                        android:id="@+id/header_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/user_ava_comment"
                            android:layout_width="@dimen/img_thumb"
                            android:layout_height="@dimen/img_thumb"
                            app:srcCompat="@drawable/remove" />

                        <ImageView
                            android:id="@+id/but_overflow_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/overflow_selected"
                            app:srcCompat="@drawable/ic_new_action_overflow_black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/padding_small"
                            android:layout_toRightOf="@id/user_ava_comment"
                            android:layout_toLeftOf="@id/but_overflow_comment"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="username"
                                android:id="@+id/comment_username"
                                android:singleLine="true"
                                android:textSize="@dimen/font_small"
                                android:ellipsize="end" />

                            <LinearLayout
                                android:id="@+id/badges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/margin_vs"
                                android:orientation="horizontal">
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/message_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header_comment"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_marginLeft="@dimen/user_ava"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:background="@drawable/speechbubble"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_med"
                        android:paddingRight="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_small"
                        android:text="Isi messagenya"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:id="@+id/create_time_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="12 Mei 2014"
                        android:textColor="@color/time_color"
                        android:textSize="@dimen/fontvs"
                        android:layout_alignRight="@+id/message_comment"
                        android:layout_alignEnd="@+id/message_comment"
                        android:layout_below="@+id/message_comment" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>