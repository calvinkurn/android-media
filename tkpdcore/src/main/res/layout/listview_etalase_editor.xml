<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cards_ui_2"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/etalase_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/margin_vs"
            android:singleLine="true"
            android:text="Etalase Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_tot_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etalase_name"
            android:layout_marginRight="@dimen/margin_vs"
            android:text="@string/title_total_prod"
            android:textColor="@color/label_color" />

        <TextView
            android:id="@+id/total_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etalase_name"
            android:layout_toRightOf="@id/title_tot_prod"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_weight=".30"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/edit_but"
            android:layout_width="@dimen/large_dp"
            android:layout_height="@dimen/large_dp"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/overflow_selected"
            android:padding="@dimen/padding_vs"
            android:src="@drawable/ic_edit_pencil" />

        <ImageView
            android:id="@+id/delete_but"
            android:layout_width="@dimen/large_dp"
            android:layout_height="@dimen/large_dp"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_toRightOf="@id/edit_but"
            android:background="@drawable/overflow_selected"
            android:padding="@dimen/padding_vs"
            android:src="@drawable/remove_thin" />
