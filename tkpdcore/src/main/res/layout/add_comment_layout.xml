<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_comment_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_vs"
    android:paddingTop="@dimen/padding_vs">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_image_upload"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_vs"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/attach_but"
        android:layout_width="@dimen/padding_comment_area"
        android:layout_height="@dimen/padding_comment_area"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/list_image_upload"
        android:padding="@dimen/padding_small"
        android:src="@drawable/ic_action_attachment" />

    <ImageView
        android:id="@+id/send_but"
        android:layout_width="@dimen/padding_comment_area"
        android:layout_height="@dimen/padding_comment_area"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/list_image_upload"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_small"
        android:src="@drawable/ic_action_send" />

    <EditText
        android:id="@+id/new_comment"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_image_upload"
        android:layout_toEndOf="@id/attach_but"
        android:layout_toLeftOf="@+id/send_but"
        android:layout_toRightOf="@id/attach_but"
        android:layout_toStartOf="@id/send_but"
        android:hint="@string/prompt_new_comment"
        android:inputType="textMultiLine"
        android:maxLines="3" />
</RelativeLayout>