        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:textColor="@color/red_400"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/edit_ref"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_edit_ref"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/track"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_track"
            android:textColor="@color/label_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/retry_pickup_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/retry_pickup_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>

