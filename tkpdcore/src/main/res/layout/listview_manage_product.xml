<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectable_white_background"
    android:padding="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="@dimen/img_thumb_holder"
                        android:layout_height="@dimen/img_thumb_holder"
                        android:layout_marginRight="@dimen/margin_small" >

                        <ImageView
                            android:id="@+id/prod_img"
                            android:layout_width="@dimen/img_thumb_l"
                            android:layout_height="@dimen/img_thumb_l"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/ic_image_unavailable" />

                        <TextView
                            android:id="@+id/tag_gudang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:background="@drawable/bg_ribbon"
                            android:gravity="center|top"
                            android:paddingTop="2dp"
                            android:text="@string/stock_unavailable"
                            android:textSize="@dimen/fontvvs"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".80"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/prod_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Nama Produk"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Ini category nya"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs" />

                        <TextView
                            android:id="@+id/etalase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Etalasenya di sini"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/returnable_list_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dapat Dikembalikan"
                                android:textSize="@dimen/fontvs"
                                android:textColor="@color/label_color"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Spinner
                                android:id="@+id/currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:entries="@array/currency_type"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="@dimen/fontvs"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/price_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/padding_vs"
                                android:text="Rp 20.000" />

                            <EditText
                                android:id="@+id/price"
                                android:layout_width="@dimen/cart_step"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textSize="@dimen/fontvs"
                                android:visibility="gone" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/save_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_vs"
                                android:layout_marginTop="@dimen/margin_vs"
                                android:background="@drawable/btn_shop"
                                android:padding="@dimen/padding_vs"
                                android:text="@string/title_save"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fonts"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/cancel_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_vs"
                                android:layout_marginTop="@dimen/margin_vs"
                                android:background="@drawable/btn_shop"
                                android:padding="@dimen/padding_vs"
                                android:text="@string/title_cancel"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fonts"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/but_overflow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_vs"
                        android:layout_weight=".15"
                        android:background="@drawable/selectable_white_background"
                        android:gravity="right"
                        android:padding="@dimen/padding_vs" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_menu_general_setting" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/editor_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@color/time_color"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/edit_but"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin_small"
                        android:background="@drawable/btn_shop"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_vs"
                        android:paddingLeft="@dimen/med_dp"
                        android:paddingRight="@dimen/med_dp"
                        android:paddingTop="@dimen/padding_vs"
                        android:singleLine="true"
                        android:text="@string/title_edit_prod"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/copy_but"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/med_dp"
                        android:background="@drawable/btn_shop"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_vs"
                        android:paddingLeft="@dimen/med_dp"
                        android:paddingRight="@dimen/med_dp"
                        android:paddingTop="@dimen/padding_vs"
                        android:singleLine="true"
                        android:text="@string/title_copy_prod"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/review_warning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_under_review"
                        android:textSize="@dimen/fonts"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- <ImageView -->
                <!-- android:shopId="@+shopId/but_overflow" -->
                <!-- android:layout_alignParentRight="true" -->
                <!-- android:layout_alignParentTop="true" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="@dimen/filter_sort_h" -->
                <!-- app:srcCompat="@drawable/ic_action_overflow" /> -->

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>