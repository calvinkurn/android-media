<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.core.customwidget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/talk_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@android:color/transparent"
                android:fadeScrollbars="true"
                android:listSelector="@android:color/transparent"
                android:scrollbarSize="5dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarTrackVertical="@color/grey_400"
                android:scrollbars="vertical"
                android:visibility="visible" />

        </com.tokopedia.core.customwidget.SwipeToRefresh>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FAB.Filter"
            app:srcCompat="@drawable/ic_filter_list_24dp"
            app:backgroundTint="@color/green_500"
            app:layout_anchorGravity = "bottom|right|end"
            />
    </android.support.design.widget.CoordinatorLayout>

    <ProgressBar
        android:id="@+id/include_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_vs"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>