<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_small" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_ref_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_reference_number"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fonts" />

        <TextView
            android:id="@+id/ref_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:singleLine="true"
            android:text="INV/XXX/12334124"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receiver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_receiver_name"
            android:textColor="@color/label_color" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Agus maulana"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/tracking_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/margin_vs" >
