<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_line"
            style="@style/CustomFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center"
            android:text="Share Produk Ini!"
            android:textColor="@color/black"
            android:textSize="@dimen/fontvl" />

        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center"
            android:text="@string/product_share_subtitle"
            android:textColor="@color/black"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/img_thumb_l"
            android:layout_height="@dimen/img_thumb_l"
            android:padding="@dimen/se_img_pad"
            android:scaleType="center"
            android:visibility="visible"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/image_error"
            android:layout_width="@dimen/loading_img_big"
            android:layout_height="@dimen/loading_img_big"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/status_no_result"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/loading_add_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_product_waiting"
            android:layout_gravity="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bbm_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_bbm_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="BBM"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />

            <TextView
                android:id="@+id/whatsapp_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_whatsapp_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="Whatsapp"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />

            <TextView
                android:id="@+id/line_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_line_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="LINE"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />

            <TextView
                android:id="@+id/instagram_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_instagram_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="Instagram"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/facebook_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_facebook_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="Facebook"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />

            <TextView
                android:id="@+id/twitter_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_twitter_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="Twitter"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />

            <TextView
                android:id="@+id/pinterest_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_pinterest_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="Pinterest"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />

            <TextView
                android:id="@+id/google_plus_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_google_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="Google+"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="@color/tkpd_bg_color_grery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/copy_url"
                android:layout_width="@dimen/img_thumb_holder"
                android:layout_height="wrap_content"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_copy_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="Copy URL"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />

            <TextView
                android:id="@+id/more_share"
                android:layout_width="@dimen/img_thumb_holder"
                android:layout_height="wrap_content"
                android:background="@drawable/overflow_selected"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableTop="@drawable/ic_more_share"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="Lainnya"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvvs" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>