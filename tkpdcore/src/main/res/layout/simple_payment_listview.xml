<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/view_option_size_360"
        android:layout_height="@dimen/view_option_size_360"
        android:layout_marginRight="@dimen/margin_med"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingRight="@dimen/padding_small"
        app:srcCompat="@drawable/payment_trans" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_option_size_360"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/fontm"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payment_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/msg_tokopedia_free"
            android:textSize="@dimen/fontvs" />

    </LinearLayout>

</LinearLayout>