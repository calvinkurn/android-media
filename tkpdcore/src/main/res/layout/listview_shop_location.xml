	<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
		android:padding="@dimen/padding_small"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/cards_ui_2"
	    >
		
		<TextView 
		android:id="@+id/detail_shop_name_all"
		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="Shops Name disini"
		/>
		
		<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="@dimen/margin_small"
		android:layout_marginBottom="@dimen/margin_small"
		android:background="#B7B7B7"
		/>
		
		<TextView 
		android:id="@+id/detail_shop_address_all"
		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="Shops Detail disini"
    	android:layout_marginTop="@dimen/margin_small"
		android:layout_marginBottom="@dimen/margin_small"
		/>
		
		<TextView
		android:id="@+id/detail_shop_phone_all"
		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:drawableLeft="@drawable/ic_shop_phone"
    	android:text="Telepone sini"
    	android:gravity="center|left"
    	android:drawablePadding="5dp"
		android:layout_marginBottom="@dimen/margin_small"
    	android:visibility="gone"
		/>
		
		<TextView 
		android:id="@+id/detail_shop_fax_all"
		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:drawableLeft="@drawable/ic_shop_fax"
    	android:text="Faximil sini"
    	android:drawablePadding="5dp"
    	android:gravity="center|left"
		android:layout_marginBottom="@dimen/margin_small"
		android:visibility="gone"
		/>
		
		<TextView
		android:id="@+id/detail_shop_email_all"
		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:drawableLeft="@drawable/ic_shop_email"
    	android:drawablePadding="5dp"
    	android:text="Imel sini"
    	android:gravity="center|left"
		android:layout_marginBottom="@dimen/margin_small"
		android:visibility="gone"
		/>
		
		
	</LinearLayout>