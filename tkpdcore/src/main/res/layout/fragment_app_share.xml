<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/margin_med">

        <ImageView
            android:id="@+id/img_app_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:src="@drawable/img_app_share" />

        <TextView
            android:id="@+id/tv_app_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_app_share"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="@dimen/font_medium"
            android:text="@string/app_share_label"
            android:textColor="@color/black_54"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_app_share_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_app_share_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_sm"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/app_share_label_desc"
            android:textColor="@color/black_54"
            android:textSize="@dimen/font_small"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/btn_app_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/green_btn"
            android:text="@string/app_share_btn_label"
            android:textSize="@dimen/fonts"
            android:padding="@dimen/margin_sm"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white" />
    </RelativeLayout>
</ScrollView>