<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cards_ui_2"
    android:layout_marginBottom="@dimen/padding_small"
    android:padding="@dimen/padding_small">

    <TextView
        android:text="Data Penilaian Produk"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_vs" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tkpd_light_grey"
        android:layout_below="@+id/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/view_rating_stats">

        <LinearLayout
            android:id="@+id/statistic_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_vs"
            android:paddingTop="@dimen/padding_vs">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight=".20" >

                <RelativeLayout
                    android:id="@+id/root_flip_animation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/quality_filter_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cards_ui_2_selected"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+id/quality_filter_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kualitas"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontvs"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quality_filter_mean_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_vs"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/quality_count_review_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fontvvs"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ulasan"
                                android:textColor="@color/grey_600"
                                android:textSize="@dimen/fontvvs" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/chevron_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accuracy_filter_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cards_ui_2_selected"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/accuracy_filter_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Akurasi"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontvs"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/accuracy_filter_mean_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_vs"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/accuracy_count_review_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fontvvs"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ulasan"
                                android:textColor="@color/grey_600"
                                android:textSize="@dimen/fontvvs" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/chevron_down" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/five_star_filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs" />

                    <ImageView
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        app:srcCompat="@drawable/ic_wishlist_orange"/>

                    <TextView
                        android:id="@+id/five_star_count_tv"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <View
                        android:id="@+id/five_rating_bar_view"
                        android:layout_width="120dp"
                        android:layout_height="12dp"
                        android:layout_gravity="left|center"
                        android:background="@color/yellow_600" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/four_star_filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs" />

                    <ImageView
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        app:srcCompat="@drawable/ic_wishlist_orange"/>

                    <TextView
                        android:id="@+id/four_star_count_tv"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <View
                        android:id="@+id/four_rating_bar_view"
                        android:layout_width="120dp"
                        android:layout_height="12dp"
                        android:layout_gravity="left|center_vertical"
                        android:background="@color/yellow_600" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/three_star_filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs" />

                    <ImageView
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        app:srcCompat="@drawable/ic_wishlist_orange"/>

                    <TextView
                        android:id="@+id/three_star_count_tv"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <View
                        android:id="@+id/three_rating_bar_view"
                        android:layout_width="120dp"
                        android:layout_height="12dp"
                        android:layout_gravity="left|center_vertical"
                        android:background="@color/yellow_600" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/two_star_filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs" />
                    
                    <ImageView
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s" 
                        app:srcCompat="@drawable/ic_wishlist_orange"/>

                    <TextView
                        android:id="@+id/two_star_count_tv"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <View
                        android:id="@+id/two_rating_bar_view"
                        android:layout_width="120dp"
                        android:layout_height="12dp"
                        android:layout_gravity="left|center_vertical"
                        android:background="@color/yellow_600" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/one_star_filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs" />

                    <ImageView
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        app:srcCompat="@drawable/ic_wishlist_orange"/>

                    <TextView
                        android:id="@+id/one_star_count_tv"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <View
                        android:id="@+id/one_rating_bar_view"
                        android:layout_width="120dp"
                        android:layout_height="12dp"
                        android:layout_gravity="left|center_vertical"
                        android:background="@color/yellow_600" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/clear_filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:gravity="right|bottom"
                        android:text="Clear Filter"
                        android:textColor="@color/red_a700"
                        android:textSize="@dimen/fontvvs" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>