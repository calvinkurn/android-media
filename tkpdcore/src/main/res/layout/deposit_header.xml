<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deposit_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@+id/txt_depo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="start"
        android:text="@string/title_remaining_tokopedia"
        android:textSize="@dimen/fontvs" />

    <TextView
        android:id="@+id/total_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_depo"
        android:gravity="start"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/withdraw_button"
        android:layout_width="@dimen/half_screen_pad"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/title_withdraw"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:buttonCompatSize="big"
        app:buttonCompatType="primary" />

    <TextView
        android:id="@+id/topup_button"
        android:layout_width="@dimen/half_screen_pad"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/withdraw_button"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/button_buy_from_cart"
        android:drawableStart="@drawable/ic_add"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_small"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/padding_small"
        android:text="@string/topup_saldo"
        android:textColor="@color/white"
        android:textSize="@dimen/fonts"
        android:textStyle="bold"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fragment_autosweepmf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12" />

    <android.support.v7.widget.CardView
        android:id="@+id/sp_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/withdraw_button"
        android:layout_margin="@dimen/dp_8"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/sp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Saldo Prioritas"
                android:textColor="@color/black_70"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sp_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@+id/sp_title"
                android:fontFamily="sans-serif"
                android:text="Baru"
                android:textColor="@color/black_70"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sp_not_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_title"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="3sp"
                android:text="Tak perlu menunggu konfirmasi penerimaan barang dari pembeli, Anda dapat menarik sebagian dana penjualan hingga Rp10 juta!"
                android:textColor="#8a000000"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sp_kyc_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_title"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal"
                android:padding="@dimen/dp_9">

                <ImageView
                    android:id="@+id/sp_status_info_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/info_icon" />

                <TextView
                    android:id="@+id/sp_kyc_status_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="3sp"
                    android:text="Status: Menunggu Verifikasi Aplikasi"
                    android:textColor="@color/black_70"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/sp_detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_kyc_status"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/margin_vs"
                android:longClickable="false"
                android:padding="@dimen/padding_small"
                android:scrollbars="vertical" />

            <View
                android:id="@+id/sp_list_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/sp_detail_list"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/greyish_bg" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sp_action_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_list_separator"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/margin_vs"
                android:longClickable="false"
                android:padding="@dimen/padding_small"
                android:scrollbars="vertical" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/review_warning_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp_card_view"
        android:layout_marginTop="@dimen/sp_14"
        android:background="@color/red_100"
        android:orientation="vertical"
        android:padding="@dimen/padding_small"
        android:visibility="gone">

        <TextView
            android:id="@+id/amount_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs" />
    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/review_warning_layout"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/greyish_bg" />

    <LinearLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_marginBottom="@dimen/margin_vs"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/start_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight=".50"
            android:background="@drawable/btn_cancel"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:text="Start Date"
            android:textSize="@dimen/fonts" />

        <EditText
            android:id="@+id/end_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight=".50"
            android:background="@drawable/btn_cancel"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:text="End Date"
            android:textSize="@dimen/fonts" />

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/tx_list_search_btn_h"
            android:layout_gravity="center"
            android:layout_weight=".50"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/prompt_search"
            android:textAllCaps="false"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fonts"
            android:textStyle="bold"
            app:buttonCompatSize="medium"
            app:buttonCompatType="primary" />
    </LinearLayout>

</RelativeLayout>