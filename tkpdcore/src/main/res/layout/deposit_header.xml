<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/deposit_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:padding="@dimen/padding_small"
    >

    <TextView
        android:id="@+id/txt_depo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="start"
        android:text="@string/title_remaining_tokopedia"
        android:textSize="@dimen/fontvs"/>

    <TextView
        android:id="@+id/total_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_depo"
        android:gravity="start"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/withdraw_button"
        android:layout_width="@dimen/half_screen_pad"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_buy_from_cart"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/title_withdraw"
        android:textColor="@color/white"
        android:textSize="@dimen/fonts"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/topup_button"
        android:layout_width="@dimen/half_screen_pad"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/withdraw_button"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/button_buy_from_cart"
        android:gravity="center"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:text="@string/topup_saldo"
        android:drawableStart="@drawable/ic_add"
        android:textColor="@color/white"
        android:textSize="@dimen/fonts"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:textStyle="bold"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/review_warning_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topup_button"
        android:layout_marginTop="@dimen/sp_14"
        android:background="@color/red_100"
        android:orientation="vertical"
        android:padding="@dimen/padding_small"
        android:visibility="gone">

        <TextView
            android:id="@+id/amount_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs" />
    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/review_warning_layout"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/greyish_bg"/>

    <LinearLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_marginBottom="@dimen/margin_vs"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/start_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight=".50"
            android:background="@drawable/btn_cancel"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:text="Start Date"
            android:textSize="@dimen/fonts"/>

        <EditText
            android:id="@+id/end_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight=".50"
            android:background="@drawable/btn_cancel"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:text="End Date"
            android:textSize="@dimen/fonts"/>

        <TextView
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/tx_list_search_btn_h"
            android:layout_gravity="center"
            android:layout_weight=".50"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/prompt_search"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fonts"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>