<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cards_ui_2"
        android:paddingBottom="@dimen/padding_vs">

        <TextView
            android:id="@+id/invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_vvs"
            android:layout_marginTop="@dimen/margin_vs"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="INV/20150215/XV/II/99029231"
            android:textColor="@color/tkpd_dark_green"
            android:textSize="@dimen/font_small" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/img_thumb_m"
            android:layout_height="@dimen/img_thumb_m"
            android:layout_below="@id/invoice"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_image_avatar_boy" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:layout_marginBottom="@dimen/margin_vs"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="@dimen/padding_vs"
            android:text="@string/title_buyer"
            android:textColor="@color/tkpd_dark_green"
            android:textSize="@dimen/font_small" />

        <FrameLayout
            android:id="@+id/rep_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/reputation_holder_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rep_icon"
                    android:layout_width="@dimen/img_thumb_s"
                    android:layout_height="@dimen/img_thumb_s"
                    android:src="@drawable/ic_icon_repsis_smile_active" />

                <TextView
                    android:id="@+id/rep_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:gravity="center_vertical"
                    android:text="40%"
                    android:textSize="@dimen/fontvs" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reputation_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </FrameLayout>


        <RelativeLayout
            android:id="@+id/give_reputation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rep_system"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            >

            <RelativeLayout
                android:id="@+id/reviewer_reputation_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

            <TextView
                android:id="@+id/reviewer_reputation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_vs"
                android:text="@string/reputation_system_sub_for_user"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/reviewer_reputation_title_edited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/reviewer_reputation_title"
                android:layout_toEndOf="@id/reviewer_reputation_title"
                android:padding="@dimen/padding_vs"
                android:text="@string/edited"
                android:textColor="@color/grey_400"
                android:textSize="@dimen/fontvs" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/smiley"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reviewer_reputation_title_view"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_vs">

                <LinearLayout
                    android:id="@+id/view_smiley_bad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/smiley_bad"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="@dimen/img_thumb"
                        android:padding="@dimen/padding_vs"
                        android:src="@drawable/ic_icon_repsis_sad" />

                    <TextView
                        android:id="@+id/smiley_bad_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_reputation_bad"
                        android:textSize="@dimen/fontvs"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_smiley_neutral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/smiley_neutral"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="@dimen/img_thumb"
                        android:padding="@dimen/padding_vs"
                        android:src="@drawable/ic_icon_repsis_neutral" />

                    <TextView
                        android:id="@+id/smiley_neutral_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/fontvs"
                        android:text="@string/title_reputation_netral" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_smiley_good"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/smiley_good"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="@dimen/img_thumb"
                        android:padding="@dimen/padding_vs"
                        android:src="@drawable/ic_icon_repsis_smile" />

                    <TextView
                        android:id="@+id/smiley_good_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/fontvs"
                        android:text="@string/title_reputation_smile" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/smiley"
                android:background="@color/tkpd_bg_color_grery"
                android:paddingBottom="@dimen/padding_small" />

            <RelativeLayout
                android:id="@+id/reviewer_reputation_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/reviewee_reputation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/padding_vs"
                    android:text="@string/reputation_system_sub_for_user"
                    android:textSize="@dimen/fontvs" />

                <ImageView
                    android:id="@+id/reviewee_reputation_smiley"
                    android:layout_width="@dimen/img_thumb_bit_small"
                    android:layout_height="@dimen/img_thumb_bit_small"
                    android:layout_toRightOf="@id/reviewee_reputation_title"
                    android:layout_toEndOf="@id/reviewee_reputation_title"
                    android:padding="@dimen/padding_vs"
                    android:src="@drawable/ic_icon_repsis_question" />

                <TextView
                    android:id="@+id/reviewee_reputation_title_edited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/reviewee_reputation_smiley"
                    android:layout_toEndOf="@id/reviewee_reputation_smiley"
                    android:padding="@dimen/padding_vs"
                    android:text="@string/edited"
                    android:textColor="@color/grey_400"
                    android:textSize="@dimen/fontvs" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/deadline_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/give_reputation_container"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_vs"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/deadline_icon"
                android:layout_width="@dimen/img_thumb_bit_small"
                android:layout_height="@dimen/img_thumb_bit_small"
                android:src="@drawable/ic_countdown"
                android:padding="@dimen/padding_vs"
                />

            <TextView
                android:id="@+id/deadline"
                android:layout_toRightOf="@id/deadline_icon"
                android:layout_toEndOf="@id/deadline_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_vs"
                android:textSize="@dimen/fontvs"
                android:maxLines="1"
                android:text="Batas waktu beri penilaian 3 hari lagi" />
        </RelativeLayout>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_vs"
        android:background="@color/tkpd_bg_color_grery"
        android:paddingBottom="@dimen/padding_small" />
</LinearLayout>