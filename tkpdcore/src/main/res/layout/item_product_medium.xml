<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_vs"
    android:background="@color/white"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical">

    <com.tokopedia.core.customwidget.SquareImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_index_home"
        android:layout_marginBottom="@dimen/margin_vs"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:orientation="horizontal">

        <TextView
            android:id="@id/grosir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:background="@drawable/roundedge_wholesale"
            android:padding="@dimen/padding_vs"
            android:text="Grosir"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="visible" />

        <TextView
            android:id="@id/preorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginStart="@dimen/margin_vs"
            android:background="@drawable/roundedge_preorder"
            android:padding="@dimen/padding_vs"
            android:text="Preorder"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vs"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingRight="@dimen/padding_vs"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Nama Produk"
        android:textColor="@color/href_link"
        android:textSize="@dimen/fontvs"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:gravity="left"
            android:text="Rp 9.000"
            android:textColor="@color/tkpd_prod_price"
            android:textSize="@dimen/fontvs" />

        <LinearLayout
            android:gravity="right"
            android:id="@+id/container_badge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_dp"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>