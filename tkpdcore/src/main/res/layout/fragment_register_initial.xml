<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content">

            </LinearLayout>

            <RelativeLayout
                android:layout_below="@id/linearLayout"
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ms"
                android:layout_marginBottom="@dimen/margin_ms"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/atau_gunakan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Atau"
                    android:textStyle="bold"
                    android:textColor="@color/grey_600"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@id/atau_gunakan"
                    android:background="@color/grey_600"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/atau_gunakan"
                    android:background="@color/grey_600"
                    />

            </RelativeLayout>

            <com.tokopedia.core.customView.LoginTextView
                android:id="@+id/register"
                android:layout_below="@id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                app:customText="Daftar dengan Email"
                app:textColor="@color/black"
                app:cornerSize="5"
                app:iconButton="@drawable/ic_register_icon"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/login_button"
        android:padding="@dimen/padding_med"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Sudah punya akun? Masuk"
        android:gravity="center"
        android:background="@color/grey_300"
        android:textColor="@color/grey_500"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:id="@+id/progress_login"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/progress_login"
            android:layout_centerInParent="true"
            android:text="@string/login_progress_signing_in"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>