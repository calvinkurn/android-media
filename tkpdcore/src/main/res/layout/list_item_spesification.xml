<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >
 
   	       	<TextView
		        android:id="@+id/lblListItem"
		        android:layout_width="@dimen/checked_indicator_msg"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/fonts"
		        android:paddingTop="@dimen/padding_vs"
		        android:paddingBottom="@dimen/padding_vs"
		        android:paddingLeft="@dimen/padding_small"  /> 
		        
   	       	<TextView
		        android:id="@+id/lblListItemDetail"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/fonts"
		        android:paddingTop="@dimen/padding_vs"
		        android:paddingBottom="@dimen/padding_vs"
		        android:paddingLeft="@dimen/padding_small" 
		        android:layout_toRightOf="@id/lblListItem"
		        />
 
</RelativeLayout>