<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <EditText
        android:id="@+id/wholesale_item_qty_one"
        android:layout_width="@dimen/cp_qty_wholesale_width"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="5"
        android:singleLine="true"
        android:layout_weight="0.25"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="-"
        android:textSize="@dimen/fonts"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/wholesale_item_qty_two"
        android:layout_width="@dimen/cp_qty_wholesale_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_med"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="5"
        android:singleLine="true"
        android:layout_weight="0.25"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        />

    <EditText
        android:id="@+id/wholesale_item_qty_price"
        android:minWidth="@dimen/cp_price_wholesale_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_med"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:maxLength="10"
        android:singleLine="true"
        android:layout_weight="0.3"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        />

    <ImageView
        android:id="@+id/button_delete_wholesale"
        android:layout_width="@dimen/med_dp"
        android:layout_height="@dimen/med_dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:src="@drawable/remove"
        android:layout_weight="0.1"/>

</LinearLayout>