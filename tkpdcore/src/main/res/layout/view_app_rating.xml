<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/margin_med"
    android:layout_marginTop="@dimen/margin_med"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_rating"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_app_rating_5" />
    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_margin_med"
        android:layout_below="@id/image_rating"
        android:layout_centerHorizontal="true"
        tools:text="Super"/>
    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_margin_med"
        android:layout_below="@id/text_description"
        android:numStars="5"
        android:stepSize="1"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_centerHorizontal="true"
        style="@style/Medium.RatingBar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rating_bar"
        android:textColor="@color/label_color"
        android:textSize="@dimen/fontvs"
        android:textAlignment="center"
        android:text="@string/app_rating_message_2"/>

</RelativeLayout>
