<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/shop_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_product_list"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tokopedia.core.customwidget.SquareImageView
                tools:src="@drawable/ic_icon_toped_announce"
                android:id="@+id/item_shop_image"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/item_shop_gold"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        app:srcCompat="@drawable/ic_shop_gold"
                        android:layout_marginRight="7dp"
                        android:visibility="gone" />

                    <TextView
                        tools:text="Toko Serba Ada dsidjis sjidjis dsjidjsijis"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/item_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_70"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <ImageView
                    tools:src="@drawable/ic_badge_gold"
                    android:id="@+id/reputation_view"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/shop_list_reputation_view_height"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitStart"
                    />

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/shop_location"
                    tools:text="DKI Jakarta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="11sp"
                    android:textColor="@color/black_36"
                    />

            </LinearLayout>
            
            <com.tokopedia.design.component.ButtonCompat
                android:id="@+id/btn_follow_shop"
                app:buttonCompatSize="medium"
                tools:text="Follow"
                app:buttonCompatType="primary"
                android:layout_width="@dimen/dp_85"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shop_item_preview_1"
                android:layout_width="@dimen/shop_item_preview_width"
                android:layout_height="@dimen/shop_item_preview_height"/>

            <ImageView
                android:id="@+id/shop_item_preview_2"
                android:layout_width="@dimen/shop_item_preview_width"
                android:layout_height="@dimen/shop_item_preview_height"
                android:layout_marginLeft="9dp"/>

            <ImageView
                android:id="@+id/shop_item_preview_3"
                android:layout_width="@dimen/shop_item_preview_width"
                android:layout_height="@dimen/shop_item_preview_height"
                android:layout_marginLeft="9dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/shop_item_preview_height"
                android:layout_weight="1"/>
            
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/view_shop_inactive"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:alpha="0.7"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Status Toko:"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:text="@string/label_shop_status"/>
            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_8"
                app:cardElevation="@dimen/dp_0"
                app:cardCornerRadius="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.tokopedia.design.component.TextViewCompat
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sudah tidak aktif"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black_70"
                    android:text="@string/label_shop_inactive"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>