<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tokopedia.core.customwidget.SquareImageView
            android:id="@+id/item_shop_image"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black_54"
                android:text="Shop Name"
                />

            <LinearLayout
                android:id="@+id/reputation_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:textSize="11sp"
                android:textColor="@color/black_36"
                android:text="Jakarta"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"/>

        <ImageView
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_marginLeft="9dp"/>

        <ImageView
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_marginLeft="9dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="73dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/green_button_rounded">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/ic_add"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/white"
                android:text="Favorite"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>