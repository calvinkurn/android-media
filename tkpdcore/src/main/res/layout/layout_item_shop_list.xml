<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tokopedia.core.customwidget.SquareImageView
            android:id="@+id/item_shop_image"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/item_shop_gold"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    app:srcCompat="@drawable/ic_shop_gold"
                    android:layout_marginRight="7dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black_54"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/reputation_view"
                android:layout_width="80dp"
                android:layout_height="@dimen/shop_list_reputation_view_height"
                android:layout_marginTop="4dp"
                android:scaleType="fitStart"
                />
            
            <TextView
                android:id="@+id/shop_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/ic_icon_authorize_grey"
                android:textSize="11sp"
                android:textColor="@color/black_36"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_item_preview_1"
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"/>

        <ImageView
            android:id="@+id/shop_item_preview_2"
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_marginLeft="9dp"/>

        <ImageView
            android:id="@+id/shop_item_preview_3"
            android:layout_width="@dimen/shop_item_preview_width"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_marginLeft="9dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/shop_item_preview_height"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/shop_list_favorite_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/green_button_rounded">

            <ImageView
                android:id="@+id/shop_list_favorite_button_icon"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/ic_add"/>
            
            <TextView
                android:id="@+id/shop_list_favorite_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="11sp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Favorite"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>