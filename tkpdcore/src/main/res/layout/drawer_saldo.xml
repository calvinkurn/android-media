<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_100"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/drawer_saldo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_item_height"
            android:background="@drawable/selectable_background_tokopedia">

            <ImageView
                android:id="@+id/saldo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                app:srcCompat="@drawable/ic_icon_saldo" />

            <TextView
                android:id="@+id/textViewSaldoSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toEndOf="@id/saldo_icon"
                android:layout_toRightOf="@id/saldo_icon"
                android:fontFamily="sans-serif"
                android:text="@string/saldo"
                android:textColor="@color/black_54"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/deposit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding_med"
                android:layout_marginRight="@dimen/padding_med"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:textColor="@color/green_500"
                tools:text="Rp.10000"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/loading_saldo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:layout_marginStart="@dimen/margin_med" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawer_top_cash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_item_height"
            android:background="@drawable/selectable_background_tokopedia">

            <ImageView
                android:id="@+id/icon_toko_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                app:srcCompat="@drawable/ic_tokocash_icon" />

            <TextView
                android:id="@+id/toko_cash_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toEndOf="@id/icon_toko_cash"
                android:layout_toRightOf="@id/icon_toko_cash"
                android:fontFamily="sans-serif"
                android:text="@string/toko_cash_info"
                android:textColor="@color/black_54"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/top_cash_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding_med"
                android:layout_marginRight="@dimen/padding_med"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:textColor="@color/green_500"
                tools:text="Rp.10000"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/toko_cash_activation_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding_med"
                android:layout_marginRight="@dimen/padding_med"
                android:background="@drawable/button_rounded_corner"
                android:padding="@dimen/margin_vs"
                android:textColor="@color/white"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/loading_top_cash"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/top_cash_value"
                android:layout_marginEnd="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med" />

            <ImageView
                android:id="@+id/retry_top_cash"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/top_cash_value"
                android:layout_marginEnd="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                app:srcCompat="@drawable/ic_new_action_refresh"
                android:tint="@color/tkpd_main_green"
                android:visibility="gone"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawer_top_points"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_item_height"
            android:background="@drawable/selectable_background_tokopedia">

            <ImageView
                android:id="@+id/icon_top_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                app:srcCompat="@drawable/ic_logo_toppoint" />

            <TextView
                android:id="@+id/textViewLoyaltySub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toEndOf="@id/icon_top_points"
                android:layout_toRightOf="@id/icon_top_points"
                android:fontFamily="sans-serif"
                android:text="@string/loyalty_points_info"
                android:textColor="@color/black_54"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/toppoints_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding_med"
                android:layout_marginRight="@dimen/padding_med"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:textColor="@color/green_500"
                tools:text="Rp.10000"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/loading_loyalty"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:layout_marginStart="@dimen/margin_med" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300" />
    </LinearLayout>

</LinearLayout>