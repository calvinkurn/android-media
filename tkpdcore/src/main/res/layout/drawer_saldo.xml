<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              android:visibility="visible">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_300" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/drawer_saldo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_saldo_height"
            android:background="@drawable/selectable_background_tokopedia">

            <ImageView
                android:id="@+id/saldo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_saldo"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/textViewSaldoSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toRightOf="@id/saldo_icon"
                android:layout_toEndOf="@id/saldo_icon"
                android:layout_centerVertical="true"
                android:text="@string/saldo"
                android:textStyle="bold"/>

            <View
                android:id="@+id/saldo_redirect_arrow"
                android:layout_width="@dimen/padding_small"
                android:layout_height="@dimen/padding_small"
                android:layout_marginRight="@dimen/padding_med"
                android:layout_marginEnd="@dimen/padding_med"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/chevron_thin_right"/>

            <TextView
                android:id="@+id/deposit_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/saldo_redirect_arrow"
                android:layout_toStartOf="@id/saldo_redirect_arrow"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:layout_centerVertical="true"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/loading_saldo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_toRightOf="@id/textViewSaldoSub"
                android:layout_toEndOf="@id/textViewSaldoSub"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300" />

        <RelativeLayout
            android:id="@+id/drawer_top_cash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_saldo_height"
            android:background="@drawable/selectable_background_tokopedia">

            <ImageView
                android:id="@+id/icon_toko_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tokocash_icon"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/toko_cash_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toRightOf="@id/icon_toko_cash"
                android:layout_toEndOf="@id/icon_toko_cash"
                android:layout_centerVertical="true"
                android:text="@string/toko_cash_info"
                android:textStyle="bold"/>

            <View
                android:id="@+id/toko_cash_redirect_arrow"
                android:layout_width="@dimen/padding_small"
                android:layout_height="@dimen/padding_small"
                android:layout_marginRight="@dimen/padding_med"
                android:layout_marginEnd="@dimen/padding_med"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/chevron_thin_right"/>

            <TextView
                android:id="@+id/top_cash_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="5dp"
                android:layout_toLeftOf="@id/toko_cash_redirect_arrow"
                android:layout_toStartOf="@id/toko_cash_redirect_arrow"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:layout_centerVertical="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/toko_cash_activation_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_vs"
                android:layout_marginRight="@dimen/padding_med"
                android:layout_marginEnd="@dimen/padding_med"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_rounded_corner"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/loading_top_cash"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/toko_cash_label"
                android:layout_toEndOf="@id/toko_cash_label"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300" />

        <RelativeLayout
            android:id="@+id/drawer_top_points"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_saldo_height"
            android:background="@drawable/selectable_background_tokopedia">

            <ImageView
                android:id="@+id/icon_top_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_toppoint"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/textViewLoyaltySub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toRightOf="@id/icon_top_points"
                android:layout_toEndOf="@id/icon_top_points"
                android:layout_centerVertical="true"
                android:text="@string/loyalty_points_info"
                android:textStyle="bold"/>

            <View
                android:id="@+id/top_points_redirect_arrow"
                android:layout_width="@dimen/padding_small"
                android:layout_height="@dimen/padding_small"
                android:layout_marginRight="@dimen/padding_med"
                android:layout_marginEnd="@dimen/padding_med"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/chevron_thin_right"/>

            <TextView
                android:id="@+id/toppoints_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="5dp"
                android:layout_toLeftOf="@id/top_points_redirect_arrow"
                android:layout_toStartOf="@id/top_points_redirect_arrow"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:layout_centerVertical="true"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/loading_loyalty"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/textViewLoyaltySub"
                android:layout_toEndOf="@id/textViewLoyaltySub"/>


        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_300" />

</LinearLayout>