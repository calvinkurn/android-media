<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_marginBottom="@dimen/margin_vs"
    >
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/padding_vs"
	    >
	    <ImageView 
	        android:id="@+id/product_image"
	        android:layout_height="@dimen/img_thumb_m"
	        android:layout_width="@dimen/img_thumb_m"
	        app:srcCompat="@drawable/remove"
	        android:layout_marginRight="@dimen/margin_vs"/>
	    
	     <TextView
			 android:maxLines="2"
	        android:id="@+id/product_name"
	        android:layout_height="wrap_content"
	      	android:layout_width="wrap_content"
	      	android:text="Product Name"
	      	android:textColor="@color/href_link"
	      	android:layout_toRightOf="@id/product_image"
	      />
	      
	      <TextView
	     	android:id="@+id/product_price"
	     	android:layout_height="wrap_content"
	 		android:layout_width="wrap_content"
	 		android:text="Rp 999.000.000,00-"
	 		android:layout_toRightOf="@id/product_image"
	 		android:layout_below="@id/product_name"
			/>
	      
	      <TextView 
	        android:id="@+id/total_order"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="Jumlah: 1 barang (1000 Kg)"
	        android:layout_toRightOf="@id/product_price"
	        android:layout_below="@id/product_name"
	        />
	      
	      <View 
	          android:id="@+id/liner"
	          android:layout_width="match_parent"
	          android:layout_height="0.5dp"
	          android:layout_marginTop="@dimen/margin_vs"
	          android:layout_marginBottom="@dimen/margin_vs"
	          android:background="@color/greyish_bg"
	          android:layout_below="@id/product_image"
	          />
	      
	      <LinearLayout 
	          android:layout_below="@id/liner"
	          android:layout_width="@dimen/half_screen"
	          android:layout_height="wrap_content"
	          android:layout_marginRight="@dimen/margin_small"
	          android:id="@+id/remark"
	          android:orientation="vertical"
	          >
	          <TextView 
		        android:layout_height="match_parent"
		        android:layout_width="match_parent"
		        android:textSize="@dimen/fonts"
		        android:text="@string/title_catatan_penjual"
		        />
			 <TextView 
		        android:id="@+id/message"
		        android:layout_height="match_parent"
		        android:layout_width="match_parent"/>
	      </LinearLayout>
	     
		  <TextView 
	          android:id="@+id/total_price"
	          android:layout_height="wrap_content"
	          android:layout_width="wrap_content"
	          android:text="Total: Rp. 10.000.000.000,-"
	          android:layout_toRightOf="@id/remark"
	          android:layout_below="@id/liner"
	          android:layout_alignParentRight="true"
	          android:gravity="right"
	          />
	</RelativeLayout>
    
</LinearLayout>
