<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/btn_cancel"
        android:visibility="visible">
        <LinearLayout
            android:id = "@+id/normal_verification_procedure"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width= "match_parent"
                android:layout_marginTop="@dimen/large_dp"
                android:text="@string/title_old_number"
                android:textSize="@dimen/font_large"
                android:textColor="@color/grey_800"
                android:gravity="center"/>
            <TextView
                android:id="@+id/phone_number_manual_form"
                android:layout_height="wrap_content"
                android:layout_width= "match_parent"
                android:text="@string/title_loading"
                android:textSize="@dimen/large_dp"
                android:textColor="@color/grey_800"
                android:gravity="center"
                />
            <ProgressBar
                android:id="@+id/loading_manual_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/verify_from_android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width= "match_parent"
                android:layout_marginTop="@dimen/large_dp"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:text="@string/title_change_phone_now"
                android:textSize="@dimen/font_large"
                android:textColor="@color/grey_800"
                android:gravity="center"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/new_number"
                android:inputType="number|phone"
                android:layout_marginTop="@dimen/small_dp"
                android:layout_marginBottom="@dimen/small_dp"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/notif_width"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/title_insert_new_phone_number"
                android:textSize="@dimen/font_large"
                android:textColor="@color/label_color"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_otp_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/small_dp"
            android:layout_marginBottom="@dimen/small_dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_grey_border_black"
            android:padding="@dimen/small_dp">
            <EditText
                android:id="@+id/confirmation_number"
                android:inputType="number"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:hint="@string/hint_verification_code"
                android:textSize="@dimen/fonts"
                android:textColor="@color/label_color"
                />
            <TextView
                android:id="@+id/verify_sms_text"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:text="@string/title_send_verification_code"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/green_500"
                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_phone_number_restriction"
            android:textSize="@dimen/font_medium"
            android:gravity="center_horizontal"
            android:padding="@dimen/font_small"/>
        <LinearLayout
            android:id="@+id/sending_sms_info"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">
            <ProgressBar
                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/manual_abort_button"
                android:layout_height="@dimen/btn_height"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:text="@string/title_cancel"
                android:background="@drawable/btn_plain"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/code_confirm_button_manual"
                android:layout_height="@dimen/btn_height"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:text="@string/submit_but"
                android:background="@drawable/btn_plain"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/close_button"
                android:layout_height="@dimen/btn_height"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:text="@string/title_close"
                android:background="@drawable/btn_plain"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/black"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>