                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_otp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_med"
                    android:layout_marginBottom="@dimen/margin_med" />


                <com.tkpd.library.ui.widget.PinEntryEditText
                    android:background="@null"
                    android:id="@+id/input_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textIsSelectable="false"
                    android:imeOptions="actionDone"
                    android:textSize="20sp"
                    android:visibility="visible"
                    app:pinLineColors="@color/pin_line_colors"
                    android:layout_marginLeft="@dimen/margin_vl"
                    android:layout_marginRight="@dimen/margin_vl"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:paddingBottom="@dimen/margin_small"/>


                <TextView
                    android:id="@+id/send_otp"
                    android:layout_width="@dimen/button_otp"
                    android:layout_height="@dimen/margin_vl"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_share_transaparent"
                    tools:text="Kirim OTP ke Email"

                    android:textColor="@color/tkpd_green_onboarding" />

                <TextView
                    android:id="@+id/send_otp_call"
                    android:padding="@dimen/padding_med"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_send_otp_with_call"
                    android:gravity="center"
                    android:textColor="@color/grey_500"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/register_status"
                    android:layout_alignStart="@+id/register_status" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>