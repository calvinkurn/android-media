<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tokopedia.tkpd.fragment.FragmentSecurityQuestion">

    <TextView
        android:id="@+id/save_but"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/btn_buy"
        android:gravity="center"
        android:text="@string/title_confirm_otp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/fontvs"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:textStyle="bold" />

    <ScrollView
        android:layout_above="@id/save_but"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/padding_med" >

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/view_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_small"
                android:layout_marginBottom="@dimen/margin_med"
                android:visibility="gone"
                android:background="@color/red_200">

                <TextView
                    android:id="@+id/error_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/title_error_security"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/error_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/msg_error_security" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="gone"
                android:visibility="visible"
                android:orientation="vertical" >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_security_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_security_question"
                    android:layout_marginBottom="@dimen/margin_small" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/wrapper_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contoh : 08123456789">

                    <EditText
                        android:id="@+id/input_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="visible"
                android:visibility="gone"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/title_security_question"
                    android:textSize="@dimen/fontxl"
                    android:textStyle="bold"
                    android:textColor="@color/body_text_5_inverse"/>

                <TextView
                    android:id="@+id/title_security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/content_security_question"
                    android:layout_marginBottom="@dimen/margin_small" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_weight="100"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/phone_number_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_med"
                        android:hint="@string/phone_number_otp">

                        <EditText
                            android:id="@+id/phone_number"
                            android:inputType="phone"
                            android:enabled="false"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <!-- <LinearLayout
                         android:layout_width="0dp"
                         android:layout_weight="5"
                         android:layout_height="wrap_content"></LinearLayout>
                     <RelativeLayout
                         android:layout_width="0dp"
                         android:layout_weight="30"
                         android:layout_height="match_parent">
                         <TextView
                             android:id="@+id/text_view"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerVertical="true"
                             android:textStyle="bold"
                             android:textColor="@color/green_800"
                             android:text="Ubah Nomor" />
                     </RelativeLayout>-->
                </LinearLayout>

