<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/title_notif_inbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_grey_border_black"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_inbox"
            android:textColor="@color/black"
            android:textSize="@dimen/fonts" />
        
        <HorizontalScrollView 
             android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_notif_inbox" >

        <LinearLayout
            android:id="@+id/messages_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >


            <LinearLayout
                android:id="@+id/message_wrapper"
                android:layout_width="@dimen/screen_per_4_pad"
                android:layout_height="match_parent"
                android:background="@drawable/overflow_selected"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_vs" >

                <TextView
                    android:id="@+id/messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:text="Pesan"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="@dimen/img_thumb_l"
                android:background="#C7C7C7" />

            <LinearLayout
                android:id="@+id/talk_wrapper"
                android:layout_width="@dimen/screen_per_4_pad"
                android:layout_height="match_parent"
                android:background="@drawable/overflow_selected"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_vs" >

                <TextView
                    android:id="@+id/talk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:text="Diskusi"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="@dimen/img_thumb_l"
                android:background="#C7C7C7" />

            <LinearLayout
                android:id="@+id/review_wrapper"
                android:layout_width="@dimen/screen_per_4_pad"
                android:layout_height="match_parent"
                android:background="@drawable/overflow_selected"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_vs" >

                <TextView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:text="Ulasan"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="@dimen/img_thumb_l"
                android:background="#C7C7C7" />

            <LinearLayout
                android:id="@+id/ticket_wrapper"
                android:layout_width="@dimen/screen_per_4_pad"
                android:layout_height="match_parent"
                android:background="@drawable/overflow_selected"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_vs" >

                <TextView
                    android:id="@+id/ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="124"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:text="Layanan Pengguna"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="@dimen/img_thumb_l"
                android:background="#C7C7C7" />
            
             <View
                android:layout_width="0.1dp"
                android:layout_height="@dimen/img_thumb_l"
                android:background="#C7C7C7" />
            
             <LinearLayout
                android:id="@+id/rescenter_wrapper"
                android:layout_width="@dimen/screen_per_4_pad"
                android:layout_height="match_parent"
                android:background="@drawable/overflow_selected"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_vs" >

                <TextView
                    android:id="@+id/rescenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="124"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:singleLine="true"
                    android:text="@string/title_activity_res_center"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>
        </LinearLayout>
        
        </HorizontalScrollView>

        <View
            android:id="@+id/notif_sep"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/scroll"
            android:background="#C7C7C7" />

        <TextView
            android:id="@+id/title_notif_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notif_sep"
            android:layout_marginTop="@dimen/margin_med"
            android:background="@drawable/bg_grey_border_black"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_new_notif_general"
            android:textColor="@color/black"
            android:textSize="@dimen/fonts" />

        <TextView
            android:id="@+id/no_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_notif_list"
            android:layout_marginTop="@dimen/margin_med"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/title_no_notif" />

        <ListView
            android:id="@+id/notif_dialog_list_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/drag"
            android:layout_below="@+id/title_notif_list"
            android:divider="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/drag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_large"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small" >

            <View
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_vs"
                android:background="@color/tkpd_dark_gray" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>