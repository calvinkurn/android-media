<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:clickable="true"
    android:orientation="vertical">

    <com.tokopedia.core.customwidget.SquareImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_product_desc"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/product_grid_padding"/>
    
    <RelativeLayout
        android:id="@+id/wishlist_button_container"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle_white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/wishlist_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_wishlist"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:minHeight="38dp"
        android:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:text="Rp 3.121.500"
        android:textColor="@color/orange_red"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/rating_review_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rating"
            android:layout_width="70dp"
            android:layout_height="16dp"
            />

        <TextView
            android:id="@+id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rating_review_container"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:orientation="vertical">

        <com.tokopedia.core.customwidget.FlowLayout
            android:id="@+id/label_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORIGINAL-ZONE"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:gravity="center_vertical"
            android:minHeight="25dp"
            android:text="Jakarta"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/badges_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginBottom="@dimen/product_grid_padding"
        android:orientation="horizontal" />

</RelativeLayout>