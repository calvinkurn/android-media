<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="5dp">

    <com.tokopedia.core.customwidget.SquareImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_product_desc"
        android:gravity="center"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minHeight="38dp"
        android:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold"
        android:textColor="@color/tkpd_main_green"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/fontvvvs"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_original_price"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Rp 3.121.500"
        android:textColor="@color/orange_red"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/frame_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginStart="@dimen/margin_vs"
        android:layout_toEndOf="@id/price"
        android:layout_toRightOf="@id/price"
        android:layout_below="@id/text_original_price"
        android:background="@drawable/bg_rounded_corners_red"
        android:padding="@dimen/margin_vvvs"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/fontvvvs"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/price"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.tokopedia.core.customwidget.FlowLayout
            android:id="@+id/label_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORIGINAL-ZONE"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:gravity="center_vertical"
            android:minHeight="25dp"
            android:text="Jakarta"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/badges_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" />

</RelativeLayout>