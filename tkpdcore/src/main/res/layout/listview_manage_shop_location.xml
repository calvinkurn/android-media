<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical"
    android:padding="@dimen/margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/location_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".70"
            android:singleLine="true"
            android:text="Location Name"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/edit_location"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@drawable/overflow_selected"
                android:padding="@dimen/padding_vs"
                app:srcCompat="@drawable/ic_edit_pencil" />

            <ImageView
                android:id="@+id/delete_location"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_toRightOf="@id/edit_bank"
                android:background="@drawable/overflow_selected"
                android:padding="@dimen/padding_vs"
                app:srcCompat="@drawable/remove_thin" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/location_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:text="Ini alamatnya" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/location_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        app:drawableLeftCompat="@drawable/ic_shop_phone"
        android:drawablePadding="@dimen/margin_vs"
        android:gravity="center|left"
        android:text="Phone" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/location_fax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        app:drawableLeftCompat="@drawable/ic_shop_fax"
        android:drawablePadding="@dimen/margin_vs"
        android:gravity="center|left"
        android:text="Fax" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/location_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:drawablePadding="@dimen/margin_vs"
        app:drawableLeftCompat="@drawable/ic_shop_email"
        android:gravity="center|left"
        android:text="Email" />

</LinearLayout>