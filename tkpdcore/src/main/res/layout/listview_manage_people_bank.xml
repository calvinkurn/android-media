<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical"
    android:padding="@dimen/padding_small" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bank_icon"
            android:layout_width="@dimen/tx_list_search_btn"
            android:layout_height="@dimen/tx_list_search_btn_h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/default_bank"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@drawable/overflow_selected"
                android:padding="@dimen/padding_vs"
                app:srcCompat="@drawable/checked_thin" />

            <ImageView
                android:id="@+id/edit_bank"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@drawable/overflow_selected"
                android:padding="@dimen/padding_vs"
                app:srcCompat="@drawable/ic_edit_pencil" />

            <ImageView
                android:id="@+id/delete_bank"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:background="@drawable/overflow_selected"
                android:padding="@dimen/padding_vs"
                app:srcCompat="@drawable/remove_thin" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Jokowow"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/account_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9087815458" />

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PT BCA" />

    <TextView
        android:id="@+id/bank_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cabaangnya" />

</LinearLayout>