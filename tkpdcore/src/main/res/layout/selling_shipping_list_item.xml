<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_05dp">

    <LinearLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:id="@+id/insert_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_bottom_05dp"
            >

            <TextView
                android:id="@+id/error_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@color/error_area"
                android:padding="@dimen/padding_vs"
                android:text="Invalid resi"
                android:textColor="@color/white"
                android:textSize="@dimen/fonts"
                android:visibility="gone" />

            <!-- Invoice number, alamat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/invoice_text_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        style="@style/invoice_number"
                        android:text="INV/20160505/XVI/IV/1321786"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_vs"
                            android:layout_toRightOf="@+id/text_order_label"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Pembeli:" />

                        <TextView
                            android:id="@+id/insert_user_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/text_order_label"
                            android:layout_weight=".50"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="User Name"/>

                        <TextView
                            android:id="@+id/insert_shipping"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="right"
                            style="@style/text_bold"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="Wahana Service National"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_dest_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/add_buyer_info"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_vs"
                            android:text="a/n:"
                            android:textColor="@color/label_color"/>

                        <TextView
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/insert_receiver_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_vs"
                            android:text="Dojokowo"
                            android:textStyle="bold" />

                        <TextView
                            android:ellipsize="end"
                            android:id="@+id/insert_dest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Alamat Pengiriman disini Yang panjang juga gpp kok"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/insert_dropshipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_dest_info"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@color/tkpd_bg_color_grery"
                android:orientation="horizontal"
                android:padding="@dimen/padding_vs">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:text="Pengirim:"
                    android:textColor="@color/label_color"/>

                <TextView
                    android:id="@+id/insert_sender_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:text="Toko Aku"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- baiaya kirim, kurir, batas kirim -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/ref_number"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="isi nomor resi"
                    android:theme="@style/green_button"/>

                <ImageView
                    android:id="@+id/camera_but"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ref_number"
                    android:layout_marginLeft="8dp"
                    app:srcCompat="@drawable/ic_barcode"/>

                <ImageView
                    android:id="@+id/cancel_but"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_close_black_24dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Invoice number, alamat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/invoice_text"
                        style="@style/invoice_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="INV/20160505/XVI/IV/1321786" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/invoice_text"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_vs"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="a/n:" />

                        <TextView
                            android:id="@+id/receiver_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_vs"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Dojokowo"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Alamat Pengiriman disini Yang panjang juga gpp kok" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/but_overflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/overflow_selected"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_new_action_overflow_black" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dropshipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/tkpd_bg_color_grery"
                android:orientation="horizontal"
                android:padding="@dimen/padding_vs"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:text="@string/title_sender"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/sender_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:text="Toko Aku"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- baiaya kirim, kurir, batas kirim -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Biaya Kirim" />

                    <TextView
                        android:id="@+id/shipping_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Rp 143.000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Kurir" />

                    <TextView
                        android:id="@+id/shipping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="JNE Reguler" />

                </LinearLayout>

                <View
                    android:id="@+id/colored_border"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <RelativeLayout
                    android:id="@+id/deadline_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/padding_small"
                            android:maxLines="1"
                            android:text="Batas Kirim" />

                        <TextView
                            android:paddingLeft="@dimen/padding_small"
                            android:id="@+id/deadline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Hari Ini" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Pembeli:" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="User Name" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>