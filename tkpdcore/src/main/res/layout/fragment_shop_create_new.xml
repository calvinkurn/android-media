<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        ​
        <FrameLayout
            android:id="@+id/addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp">
            ​
            <ImageView
                android:id="@+id/shop_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#AA000000"
                android:scaleType="fitCenter"/>
            ​
            <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/add_picture_shop"
                android:textColor="#FFF" />
            ​
        </FrameLayout>
        ​
        ​
        <LinearLayout
            android:id="@+id/open_shop_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/addImage">
            ​
            <!-- Domain Toko Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/domain_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="16"
                    android:hint="@string/title_hint_domain"
                    >
                    ​
                    <EditText
                        android:id="@+id/domain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:singleLine="true"/>
                    ​
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

​
            <!-- Nama Toko Layout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="24"
                android:hint="@string/title_shop_name"
                >
                ​
                <EditText
                    android:id="@+id/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:singleLine="true"/>
                ​
            </com.google.android.material.textfield.TextInputLayout>
            ​
            <!-- Tagline Toko Layout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tag_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="48"
                android:hint="@string/title_shop_tag"
                >
                ​
                <EditText
                    android:id="@+id/shop_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:singleLine="true"/>
                ​
            </com.google.android.material.textfield.TextInputLayout>
            ​
            <!-- Deskripsi Toko Layout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/desc_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="140"
                android:hint="@string/title_shop_desc"
                >
                ​
                <EditText
                    android:id="@+id/shop_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:inputType="textMultiLine"/>
                ​
            </com.google.android.material.textfield.TextInputLayout>
            ​
        </LinearLayout>
        ​
        <Button
            android:id="@+id/submit_button"
            android:theme="@style/AppTheme.Button.BukaToko"
            android:layout_below="@id/open_shop_form"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/button_continue"/>

        <TextView
            android:id="@+id/verify_instruction"
            android:padding="@dimen/padding_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/open_shop_form"
            android:background="@drawable/bg_yellow_border_yelow"
            android:text="@string/title_shop_phone_verification"
            android:textSize="@dimen/font_medium"
            android:gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/verify_button"
            android:theme="@style/AppTheme.Button.BukaToko"
            android:layout_below="@id/verify_instruction"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/button_verify"
            android:visibility="gone"/>
        ​
    </RelativeLayout>
</ScrollView>