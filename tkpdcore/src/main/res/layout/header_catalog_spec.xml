<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- parent ALL view -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- buat taro rectangle, taro in disini sbg rectangle -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_1"
            android:orientation="vertical"
            android:padding="@dimen/padding_small" >

            <TextView
                android:id="@+id/title_catalog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/fontm"
                android:textStyle="bold" />

            <!-- parent harga -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small" >

                <!-- harga -->

                <TextView
                    android:id="@+id/mp_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/tkpd_prod_price"
                    android:textSize="@dimen/fonts" />

                <!-- share btn -->

                <ImageView
                    android:id="@+id/share_but"
                    android:layout_width="@dimen/img_thumb"
                    android:layout_height="@dimen/img_thumb"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_share"
                    android:contentDescription="@+string/image_product_desc"
                    android:gravity="center"
                    android:src="@drawable/ic_share_6"
                    android:visibility="gone" />
            </RelativeLayout>
            <!-- end of parent harga -->

        </LinearLayout>
        <!-- end of parent title prod -->


        <!-- parent picture prod -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9f9f9"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small" >

            <ProgressBar
                android:id="@+id/loading_prod_img"
                android:layout_width="@dimen/loading_img"
                android:layout_height="@dimen/loading_img"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_small"
                android:visibility="gone" />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pager_height"
                android:layout_marginBottom="@dimen/margin_small"
                android:visibility="gone" />

            <com.tkpd.library.viewpagerindicator.LinePageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_vs"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- parent buy button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/tab_selector"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="#C7C7C7" />

            <TextView
                android:id="@+id/buy_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/btn_buy"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="@string/title_buy"
                android:textColor="@color/white"
                android:textSize="@dimen/fontl"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- parent deskrispi -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/catalog_desc"
                android:textColor="#333333"
                android:textSize="@dimen/fonts"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/desc_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/catalog_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#464646"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>
        </LinearLayout>
        <!-- end of parent deskrispi -->


        <!-- parent expand area -->

        <LinearLayout
            android:id="@+id/expand_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/chevron_desc"
                android:layout_width="@dimen/small_dp"
                android:layout_height="@dimen/small_dp"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:contentDescription="@+string/image_product_desc" />

            <!--
                       <View
					  android:layout_width="match_parent"
				      android:layout_height="1dp"
				      android:background="#c7c7c7"
					  android:layout_marginTop="20dp"
					  android:layout_marginBottom="20dp" />


            -->
        </LinearLayout>
        <!-- end of parent expand area -->


        <!-- parent deskrispi -->

        <LinearLayout
            android:id="@+id/expert_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expert_review"
                android:textColor="#333333"
                android:textSize="@dimen/fonts"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/expert_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/expert_ava"
                    android:layout_width="@dimen/img_thumb"
                    android:layout_height="@dimen/img_thumb"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/cards_ui_2_selected" />

                <TextView
                    android:id="@+id/expert_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/expert_ava"
                    android:gravity="center_vertical"
                    android:text="Tekno Up"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/expert_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Nilai : 8.9"
                    android:textSize="@dimen/fonts" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/expert_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>

            <TextView
                android:id="@+id/more_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/read_more"
                android:textColor="@color/href_link"
                android:textSize="@dimen/fonts"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- end of parent deskrispi -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_small"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/spesification"
                android:textColor="#333333"
                android:textSize="@dimen/fonts"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>