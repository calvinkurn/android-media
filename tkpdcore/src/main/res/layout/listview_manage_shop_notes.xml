<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/cards_ui_2"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:background="@drawable/tab_selector"
        >

        <TextView
            android:id="@+id/notes_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".70"
            android:singleLine="true"
            android:text="Notes Header"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:gravity="right" >

            <ImageView
                android:id="@+id/delete_notes"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@drawable/overflow_selected"
                android:padding="@dimen/padding_vs"
                app:srcCompat="@drawable/remove_thin" />

            <ImageView
                android:id="@+id/edit_notes"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:layout_toLeftOf="@id/delete_notes"
                android:background="@drawable/overflow_selected"
                android:padding="@dimen/padding_vs"
                app:srcCompat="@drawable/ic_edit_pencil" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>