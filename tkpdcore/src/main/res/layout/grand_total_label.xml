<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_yellow_border_yelow"
    android:layout_marginBottom="@dimen/padding_small"
    android:padding="@dimen/padding_small">
    <TextView
        android:id="@+id/head_title_total_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_total_payment"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/font_medium"/>

    <TextView
        android:id="@+id/total_payment_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:text="Rp 5.000"
        android:textColor="@color/orange_900"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/font_large"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/padding_small"
        android:layout_height="1dp"
        android:background="@color/grey_500" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/transaction_detail_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableRightCompat="@drawable/ic_chevron_down"
        android:drawablePadding="@dimen/padding_small"
        android:text="Detail Pemesanan"
        android:padding="@dimen/padding_small"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_500" />

    <RelativeLayout
        android:id="@+id/transaction_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:visibility="gone">
        <TextView
            android:id="@+id/title_method2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/title_payment_method"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"/>
    
        <TextView
            android:id="@+id/pay_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title_method2"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="Rp 20.000,-"
            android:textSize="@dimen/font_small"/>
    
        <TextView
            android:id="@+id/title_total_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/pay_method"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/title_total_invoice"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"/>
    
        <TextView
            android:id="@+id/total_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_below="@id/pay_method"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@id/title_total_payment"
            android:text="Rp 20.000,-"
            android:textSize="@dimen/font_small"/>
    
        <TextView
            android:id="@+id/head_title_total_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/total_payment"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/title_use_voucher"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"
            android:visibility="gone"/>
    
        <TextView
            android:id="@+id/total_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_below="@id/total_payment"
            android:text="Rp 20.000,-"
            android:textSize="@dimen/font_small"
            android:visibility="gone"/>
    
        <TextView
            android:id="@+id/title_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_below="@id/total_voucher"
            android:text="@string/title_use_total_balance"
            android:textSize="@dimen/font_small"
            android:textStyle="bold"
            android:visibility="gone" />
    
        <TextView
            android:id="@+id/total_tokopedia_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/total_voucher"
            android:textSize="@dimen/font_small"
            android:text="Rp 20.000,-"
            android:gravity="right"
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="gone" />
    
        <TextView
            android:id="@+id/title_final_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/title_balance"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/title_final_total"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"
            android:visibility="gone" />
    
        <TextView
            android:id="@+id/final_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="right"
            android:layout_below="@id/total_tokopedia_balance"
            android:text="Rp 20.000,-"
            android:textSize="@dimen/font_small"
            android:visibility="gone" />
        <TextView
            android:id="@+id/title_loyalty_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/title_final_invoice"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/loyalty_points_info"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"
            android:visibility="gone" />

        <TextView
            android:id="@+id/loyalty_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="right"
            android:layout_below="@id/final_invoice"
            android:text="Rp 20.000,-"
            android:textSize="@dimen/font_small"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>