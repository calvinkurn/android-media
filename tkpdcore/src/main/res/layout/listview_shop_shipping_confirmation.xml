<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/cards_ui_selected"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/insert_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/error_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@color/error_area"
            android:padding="@dimen/padding_vs"
            android:text="Invalid resi"
            android:textColor="@color/white"
            android:textSize="@dimen/fonts"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/add_buyer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error_msg"
            android:layout_marginBottom="@dimen/margin_vs"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_toRightOf="@+id/text_order_label"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Pembeli:"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <ImageView
                android:id="@+id/insert_user_avatar"
                android:layout_width="@dimen/med_dp"
                android:layout_height="@dimen/med_dp"
                android:layout_marginRight="@dimen/margin_vs"
                app:srcCompat="@drawable/remove"
                android:visibility="gone" />

            <TextView
                android:id="@+id/insert_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/text_order_label"
                android:layout_weight=".50"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="User Name"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/insert_shipping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".50"
                android:ellipsize="end"
                android:gravity="right"
                android:includeFontPadding="false"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="POS Indonesia"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_dest_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_buyer_info"
            android:layout_marginBottom="@dimen/margin_vs"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="a/n:"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/insert_receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="Dojokowo"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/insert_dest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Alamat Pengiriman disini Yang panjang juga gpp kok"
                android:textSize="@dimen/fontvs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/insert_dropshipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_dest_info"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@color/tkpd_bg_color_grery"
            android:orientation="horizontal"
            android:padding="@dimen/padding_vs" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="Pengirim:"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/insert_sender_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="Toko Aku"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/ref_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insert_dropshipper"
            android:layout_marginRight="@dimen/margin_med"
            android:background="@drawable/button_buy_from_cart"
            android:paddingBottom="@dimen/padding_vs"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingTop="@dimen/padding_vs"
            android:text="Isi resi"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/camera_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insert_dropshipper"
            android:layout_toRightOf="@+id/ref_number"
            android:background="@drawable/overflow_selected"
            app:srcCompat="@drawable/ic_barcode" />

        <ImageView
            android:id="@+id/cancel_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/insert_dropshipper"
            android:background="@drawable/overflow_selected"
            app:srcCompat="@drawable/navigation_cancel" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/invoice_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XXX991823POJK"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/fontvs" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invoice_text"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:text="a/n:"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fontvs" />

                    <TextView
                        android:id="@+id/receiver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:text="Dojokowo"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Alamat Pengiriman disini Yang panjang juga gpp kok"
                        android:textSize="@dimen/fontvs" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/but_overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/overflow_selected"
                android:gravity="right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_new_action_overflow_black" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dropshipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:background="@color/tkpd_bg_color_grery"
            android:orientation="horizontal"
            android:padding="@dimen/padding_vs" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="@string/title_sender"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/sender_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="Toko Aku"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight=".30"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_shipping_cost"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fontvs" />

                    <TextView
                        android:id="@+id/shipping_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Rp.12000"
                        android:textSize="@dimen/fontvs" />

                    <TextView
                        android:id="@+id/bounty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:includeFontPadding="false"
                        android:text="Rp.12.000"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fontvs"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingRight="@dimen/padding_small" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kurir"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="POS Indonesia"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/deadline_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:background="@drawable/deadline_red"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text__response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_small"
                    android:text="@string/title_response_shipping"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text__response"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_small"
                    android:text="3 Hari lagi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontvs" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_vs"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Pembeli:"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="@dimen/med_dp"
                android:layout_height="@dimen/med_dp"
                android:layout_marginRight="@dimen/margin_vs"
                app:srcCompat="@drawable/remove"
                android:visibility="gone" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="User Name"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_small"
            android:visibility="gone" >

            <TextView
                android:id="@+id/confirm_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="0.50"
                android:background="@drawable/button_buy_from_cart"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/title_confirm_button"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:background="@drawable/btn_shop"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/title_cancel"
                android:textColor="@color/label_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>