<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/page_with_pad"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/padding_small"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:background="@drawable/bg_yellow_border_yelow"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_small"
        >
        <TextView 
	        android:id="@+id/invoice_text"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="Invoice"
	        />
	    
	    <TextView 
	        android:id="@+id/buyer_name"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="Buyer_name"
	        />
	    
	    <TextView 
	        android:id="@+id/total_invoice"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="Total Invoice Rp.xxxxxxx,-"
	        
	        />
        
    </LinearLayout>
    
    
    
    
    <RadioButton 
        android:id="@+id/rb_no_stock"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/title_out_stock"
        />
    
    <LinearLayout 
        android:id="@id/product_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_small"
        android:visibility="gone"
        >
        
    </LinearLayout>
    
    
    <RadioButton 
        android:id="@+id/rb_cannot"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/title_cannot_deliver"
        />

    <RadioButton 
        android:id="@+id/rb_other"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/title_other_reason"
        />
    
    <EditText
        android:id="@+id/other_reason"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_med"
        />
    
    <TextView
        android:layout_marginTop="@dimen/margin_small" 
        android:id="@+id/confirm_button"
        android:textColor="@color/white"
        android:background="@drawable/button_buy_from_cart"
        android:layout_height="@dimen/btn_height"
        android:layout_width="match_parent"
        android:text="@string/title_confirm_button"
        android:gravity="center"
        android:textStyle="bold"
        />
</LinearLayout>
