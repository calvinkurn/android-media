<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--android:padding="@dimen/padding_small"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"-->

    <android.support.v7.widget.CardView
        android:id="@+id/category_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        android:foreground="@drawable/selectable_white_background"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--android:background="@drawable/cards_new"-->

            <ImageView
                android:id="@+id/image_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                app:srcCompat="@drawable/remove" />

            <TextView
                android:id="@+id/title_cat"
                style="@style/CustomFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="top|center"
                android:lines="2"
                android:text="Kategori"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvs" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>