<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/white"
                android:orientation="vertical"
                tools:showIn="layout/activity_login2"
                tools:context="com.tokopedia.core.com.tokopedia.session.session.fragment.LoginFragment">
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="?actionBarSize"
        android:layout_toRightOf="@+id/login_status"
        android:layout_toEndOf="@+id/login_status">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
                <AutoCompleteTextView
                    android:id="@+id/email_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_email"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black_70"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/asl_password_visibility">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/register_button"
                    android:imeActionLabel="Lanjut"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:typeface="sans" />
            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/remember_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:visibility="gone"
                android:text="@string/action_remember_account"/>

            <TextView
                android:id="@+id/accounts_sign_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_login_height"
                android:background="@drawable/green_button_rounded_unify"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="Masuk"
                android:textColor="@android:color/white"
                android:layout_marginBottom="@dimen/margin_sm"
                android:fontFamily="sans-serif-medium"
                />
            <TextView
                android:id="@+id/forgot_pass"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/medium_green"
                android:lineSpacingExtra="9sp"
                android:gravity="end"
                android:text="@string/title_forgot_password"
                />

            <LinearLayout
                android:id="@+id/provider_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black_12"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_38"
                    android:text="@string/or" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black_12"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/register_button"
        android:padding="@dimen/padding_med"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_100"
        android:textColor="@color/black_38"
        android:text="@string/register_text_login"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/login_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:id="@+id/progress_login"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/login_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/progress_login"
            android:layout_centerInParent="true"
            android:text="@string/login_progress_signing_in"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>