<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_vs"
    android:background="@color/tkpd_bg_color"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.tkpd.library.ui.widget.TouchViewPager
            android:id="@+id/view_pager_intermediary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_revamp_category" />

        <com.tkpd.library.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator_intermediary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/padding_small" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/image_header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_revamp_category">

        <ImageView
            android:id="@+id/image_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_sm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_item_revamp_category" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_revamp_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_marginBottom="@dimen/margin_small"
        android:focusableInTouchMode="true"
        android:scrollbars="none"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/expand_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_vs"
            android:text="Lihat Lainnya"
            android:textColor="@color/tkpd_dark_green"
            android:textSize="@dimen/textsize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_expand_more_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hide_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_vs"
            android:text="Sembunyikan Lainnya"
            android:textColor="@color/tkpd_dark_green"
            android:textSize="@dimen/textsize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/med_dp"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_expand_less_grey_24dp" />

    </LinearLayout>

    <com.tokopedia.topads.sdk.widget.TopAdsBannerView
        android:id="@+id/topAdsBannerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vvvs" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_2"
                android:gravity="center"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_medium"
                android:visibility="visible"
                tools:text="1.0000.0000 Produk" />

            <com.tokopedia.design.quickfilter.custom.CustomMultipleFilterView
                android:id="@+id/quickFilterView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_8" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>