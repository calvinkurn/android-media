<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Spinner
            android:id="@+id/transaction_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/transaction_filter_type" />

        <SearchView
            android:id="@+id/search"
            style="@style/SearchViewStyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spin_wrapper"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/start_date"
            android:layout_width="@dimen/tx_list_search_btn"
            android:layout_height="@dimen/tx_list_search_btn_h"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/btn_cancel"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:text="Start Date"
            android:textSize="@dimen/fonts" />

        <EditText
            android:id="@+id/end_date"
            android:layout_width="@dimen/tx_list_search_btn"
            android:layout_height="@dimen/tx_list_search_btn_h"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/btn_cancel"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:text="End Date"
            android:textSize="@dimen/fonts" />

        <TextView
            android:id="@+id/search_button"
            android:layout_width="@dimen/tx_list_search_btn"
            android:layout_height="@dimen/tx_list_search_btn_h"
            android:layout_gravity="center"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/hint_search_message"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>