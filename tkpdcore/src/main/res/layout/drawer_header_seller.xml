<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small">

    <RelativeLayout
        android:id="@+id/drawer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_100">

        <ImageView
            android:id="@+id/cover_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_cover_height"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@drawable/drawer_header_bg" />

        <RelativeLayout
            android:id="@+id/gradient_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxHeight="@dimen/drawer_cover_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:padding="@dimen/padding_small">

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="@dimen/drawer_avatar"
                    android:layout_height="@dimen/drawer_avatar"
                    android:background="@drawable/cards_ui_2"
                    tools:src="@drawable/ic_loading_toped" />

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_toRightOf="@id/user_avatar"
                    android:fontFamily="sans-serif-medium"
                    android:padding="@dimen/padding_small"
                    android:text="Loading.."
                    android:textColor="@color/black_70"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <include
        android:id="@+id/drawer_points_layout"
        layout="@layout/drawer_saldo_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/black"
        android:visibility="gone" />
</RelativeLayout>