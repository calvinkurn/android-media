<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_vs">

        <ImageView
            android:id="@+id/image_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/addproduct"/>

        <LinearLayout
            android:id="@+id/badges_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/image_prod"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_vs"
            android:orientation="vertical">

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/topads"
        android:layout_width="@dimen/large_dp"
        android:layout_height="@dimen/large_dp"
        android:visibility="visible" />

</RelativeLayout>
