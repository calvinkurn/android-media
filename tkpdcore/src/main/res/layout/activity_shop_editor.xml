<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:padding="@dimen/padding_small">

    <include
        android:id="@+id/include_loading"
        layout="@layout/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/shop_editor_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:gravity="center_horizontal">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/loading_img"
                    android:layout_height="@dimen/loading_img"
                    android:padding="@dimen/se_img_pad"
                    android:scaleType="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/shop_ava"
                    android:layout_width="@dimen/se_img_size"
                    android:layout_height="@dimen/se_img_size"
                    android:padding="@dimen/se_img_pad" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/se_img_pad">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_vs"
                    android:text="@string/shop_name"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <EditText
                    android:id="@+id/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:enabled="false"
                    android:hint="@string/shop_name"
                    android:inputType="textEmailAddress"
                    android:maxLength="24"
                    android:textSize="@dimen/fonts"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_vs"
                    android:text="@string/shop_slogan"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <EditText
                    android:id="@+id/shop_slogan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:hint="@string/shop_slogan"
                    android:inputType="textEmailAddress"
                    android:maxLength="48"
                    android:textSize="@dimen/fonts"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_vs"
                    android:text="@string/shop_desc"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <EditText
                    android:id="@+id/shop_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:hint="@string/shop_desc"
                    android:inputType="textMultiLine"
                    android:maxLength="140"
                    android:textSize="@dimen/fonts"></EditText>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/se_img_pad">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_vs"
                    android:text="@string/shop_status"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/close_image"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:padding="5dp"
                        app:srcCompat="@drawable/icon_closed" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_vs">

                        <TextView
                            android:id="@+id/shop_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Buka"
                            android:textStyle="bold"
                            android:textColor="@color/label_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginRight="@dimen/padding_left_schedule_shop_close"
                                android:id="@+id/time_icon"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:padding="2dp"
                                app:srcCompat="@drawable/icon_time_grey" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/schedule_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/label_color"
                                    android:text="@string/tidak_ada_jadwal" />

                                <TextView
                                    android:layout_below="@+id/schedule_info"
                                    android:layout_alignLeft="@+id/schedule_info"
                                    android:id="@+id/schedule_date"
                                    android:textColor="@color/label_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/edit_shop_schedule"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_edit_pencil" />
                </LinearLayout>

            </LinearLayout>
            <!-- android:entries="@array/shop_status" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keanggotaan"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/icon_gold_merchant"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_shop_gold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/status_gold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Gold Merchant"
                            android:textColor="@color/label_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/desc_status_gold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Berlaku Sampai: 20 January 2029"
                            android:textColor="@color/label_color" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/about_gm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tentang Gold Merchant"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>
            <TextView
                android:id="@+id/button_send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:background="@drawable/button_buy_from_cart"
                android:gravity="center"
                android:text="@string/title_save"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>