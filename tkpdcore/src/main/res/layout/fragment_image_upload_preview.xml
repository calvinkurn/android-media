<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_small">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cards_ui"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

            <EditText
                android:id="@+id/image_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:maxLength="@integer/default_caption_character"
                android:hint="@string/image_description" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/image_upload_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_thumb_holder"
                android:scrollbars="horizontal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vs"
                android:background="@drawable/green_button"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="@string/title_save"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />

    </LinearLayout>
</RelativeLayout>