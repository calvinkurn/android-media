<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small">

        <LinearLayout
            android:id="@+id/error_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="#FFADAD"
            android:orientation="vertical"
            android:padding="@dimen/padding_small"
            android:visibility="gone">

            <TextView
                android:id="@+id/error1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_vs"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/error2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/label_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_area"
            android:maxWidth="@dimen/store_name"
            android:singleLine="true"
            android:text="Shop Name Ellipsis"
            android:textColor="@color/black"
            android:textSize="@dimen/fontm"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/edit_delete_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/error_area"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="@dimen/icon_prod_pad"
                android:layout_height="@dimen/icon_prod_pad"
                android:layout_marginRight="@dimen/med_dp"
                app:srcCompat="@drawable/ic_action_edit"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/icon_prod_pad"
                android:layout_height="@dimen/icon_prod_pad"
                app:srcCompat="@drawable/ic_action_delete"
                android:visibility="gone" />

            <!-- <TextView -->
            <!-- android:shopId="@+shopId/edit" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:text="@string/title_edit_prod" -->
            <!-- android:layout_marginRight="@dimen/margin_small" -->
            <!-- android:textSize="@dimen/fonts" -->
            <!-- /> -->


            <!-- <TextView -->
            <!-- android:shopId="@+shopId/delete" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:text="@string/title_delete" -->
            <!-- android:textSize="@dimen/fonts" /> -->
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greyish_bg" />
    <!-- <LinearLayout -->
    <!-- android:shopId="@+shopId/edit_delete_area" -->
