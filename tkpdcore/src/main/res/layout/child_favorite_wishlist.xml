<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:maxLines="1"
            android:text="@string/title_wishlist"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:padding="@dimen/padding_small"
            android:maxLines="1"
            android:text="@string/title_see_all"
            android:textColor="@color/href_link"
            android:textSize="@dimen/fontvs" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/empty_wishlist" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wishlist_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wishlist_height"
            android:scrollbars="horizontal" />
    </LinearLayout>

</LinearLayout>