<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tkpd_address_card"
    android:paddingLeft="@dimen/padding_small"
    android:paddingTop="@dimen/padding_med"
    android:paddingRight="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_med">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_icon_alert_tkpd"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/padding_small"
        android:layout_toRightOf="@id/icon"
        android:layout_toEndOf="@id/icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/desc_summary_day_reso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desc_summary_day_reso"
            android:textSize="@dimen/font_small"
            android:gravity="fill_horizontal"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/desc_summary_amount_reso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc_summary_amount_reso"
            android:textSize="@dimen/font_small"
            android:gravity="fill_horizontal"
            android:visibility="visible"
            />
    </LinearLayout>

</RelativeLayout>