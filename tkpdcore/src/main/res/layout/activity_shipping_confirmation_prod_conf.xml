<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    tools:context="com.tokopedia.seller.ShippingConfirmationProdConf" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/date_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/bg_yellow_border_yelow"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/padding_small" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kurir"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/courier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Kurir yang dipilih"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="@dimen/padding_small" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_buyer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/buyer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Nama Pembeli"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small" >

            <TextView
                android:id="@+id/total_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/fonts" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_vs"
                android:background="@color/tkpd_bg_color_grery" />

            <TextView
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/fonts" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_vs"
                android:background="@color/tkpd_bg_color_grery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/invoice_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:gravity="center"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/fonts" 
                    android:textIsSelectable="true"
                    android:focusable="false"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/gradient_black_alt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small"
                android:visibility="visible"
                android:id="@+id/layout_input_ref_number">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/ship_ref_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_weight=".50"
                        android:hint="@string/title_reference_number"
                        android:maxLength="17"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_vs"
                        android:src="@drawable/ic_barcode" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shipping_date"
                    android:textColor="@color/label_color"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/shipping_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/error_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textColor="@color/tkpd_dark_red"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/error_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:background="#FFADAD"
                    android:padding="@dimen/padding_vs"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/checkBoxSwitchCourier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_edit_courier"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ProgressBar
                            android:id="@+id/loadingSpinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />

                        <Spinner
                            android:id="@+id/spinner_kurir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="visible" />

                        <Spinner
                            android:id="@+id/spinner_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small_dp"
                        android:background="@color/red_100"
                        android:text="@string/message_changer_courrier_warning"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <LinearLayout
                    android:id="@+id/sender_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_sender_name"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:id="@+id/sender_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:gravity="left"
                        android:text="Budi Anduk"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_sender_phone"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:id="@+id/sender_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="08451558"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/fonts" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_pickup_instant_shipping_courier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small">

                        <TextView
                            android:id="@+id/dot_pickup_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#x25cf; "
                            android:textColor="@color/tkpd_status_red"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:id="@+id/label_pickup_location"
                            android:layout_width="@dimen/half_screen_2pad"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/dot_pickup_location"
                            android:layout_alignBottom="@id/dot_pickup_location"
                            android:layout_alignTop="@id/dot_pickup_location"
                            android:gravity="center_vertical"
                            android:text="@string/title_pickup_location"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/font_small" />

                        <TextView
                            android:id="@+id/pickup_detail_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_pickup_location"
                            android:layout_alignLeft="@id/label_pickup_location"
                            android:gravity="left"
                            android:text="Alamat Pickup"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_small" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/dot_destination_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#x25cf; "
                            android:textColor="@color/label_buyer"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:id="@+id/label_destination_location"
                            android:layout_width="@dimen/half_screen_2pad"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/dot_destination_location"
                            android:layout_alignTop="@id/dot_destination_location"
                            android:layout_alignBottom="@id/dot_destination_location"
                            android:gravity="center_vertical"
                            android:text="@string/title_destination_address"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/font_small" />

                        <TextView
                            android:id="@+id/destination_detail_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_destination_location"
                            android:layout_alignLeft="@id/label_destination_location"
                            android:gravity="left"
                            android:text="Alamat Pickup"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_small" />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout android:id="@+id/layout_destination_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/receiver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_receiver_name"
                        android:textSize="@dimen/fonts"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="lalalallalala"
                        android:textSize="@dimen/fonts" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/see_all_bg"
                android:orientation="vertical"
                android:visibility="gone">

                <ListView
                    android:id="@+id/product_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/greyish_bg"
                    android:dividerHeight="1dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/detail_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:background="@drawable/btn_shop"
                android:gravity="center"
                android:text="@string/title_detail_order"
                android:textColor="@color/label_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/button_buy_from_cart"
                android:gravity="center"
                android:text="@string/title_confirm_button"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/btn_shop"
                android:gravity="center"
                android:text="@string/title_cancel"
                android:textColor="@color/label_color"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
