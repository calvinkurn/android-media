<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tkpd_bg_color"
    android:paddingTop="@dimen/padding_small">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:text="@string/title_problem_category"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/main_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/white"
                android:enabled="false"
                android:gravity="top"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/font_small"
                tools:text="Saya pasien > Walalala" />

            <TextView
                android:id="@+id/detail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_category"
                android:padding="@dimen/padding_small"
                android:text="@string/title_problem_detail"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/white"
                android:gravity="top"
                android:minLines="5"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail"
                android:padding="@dimen/padding_small"
                android:text="@string/title_phone_optional"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/white"
                android:gravity="top"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/attachment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_number"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:text="@string/title_attachment"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attachment_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_below="@id/attachment_text"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Mohon lampirkan bukti resi pengiriman Anda."
                android:textSize="@dimen/font_small"
                android:textStyle="italic" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/attachment_note"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@color/white"
                android:scrollbars="horizontal" />

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>