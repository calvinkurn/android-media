<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tkpd_bg_color">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small"
            android:visibility="invisible">

            <TextView
                android:id="@+id/main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/background_light"
                android:padding="@dimen/padding_small"
                android:text="@string/title_problem_category"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_text"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/category_disabled"
                android:drawablePadding="@dimen/padding_vs"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:text="Saya pasien"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/category_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_category"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/invoice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_list"
                android:padding="@dimen/padding_small"
                android:text="@string/title_invoice_no"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/invoice_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/white"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/attachment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/invoice"
                android:padding="@dimen/padding_small"
                android:text="@string/title_attachment"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/attachment_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@color/white"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/detail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/attachment"
                android:padding="@dimen/padding_small"
                android:text="@string/title_problem_detail"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/white"
                android:gravity="top"
                android:minLines="5"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/font_small" />

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>