<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tkpd_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_med">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:textAlignment="center"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/verification_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:text="@string/verify_phone_now" />

        <LinearLayout
            android:id="@+id/view_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_phone_number"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/send_otp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/send_otp"
                    android:textAllCaps="false"
                    android:theme="@style/OrangeButton" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan Kode OTP:"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_otp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/verify_otp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/button_verify"
                    android:textAllCaps="false"
                    android:theme="@style/GreenButton" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_no_thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:padding="@dimen/padding_small"
            android:text="@string/dont_remind_me_again"
            android:textAllCaps="false"
            android:textColor="@color/href_link"
            android:textSize="@dimen/fonts" />

        <Button
            android:id="@+id/close_button"
            android:layout_width="@dimen/half_screen"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/title_done"
            android:textAllCaps="false"
            android:visibility="gone"
            android:theme="@style/GreenButton" />
    </LinearLayout>

</ScrollView>

