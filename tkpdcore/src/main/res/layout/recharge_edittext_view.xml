<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_recharge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/pulsa_frameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.92"
            android:visibility="visible">

            <AutoCompleteTextView
                android:id="@+id/pulsa_autocompleteview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="14"
                android:maxLines="1"
                android:nextFocusLeft="@id/pulsa_autocompleteview"
                android:nextFocusUp="@id/pulsa_autocompleteview"
                android:popupBackground="@color/white"
                android:textColorHint="@color/grey_400"
                android:textSize="@dimen/fonts"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginBottom="@dimen/margin_vs"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgOperator"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:contentDescription="@string/app_name"/>

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"/>

            </LinearLayout>
        </FrameLayout>

        <Button
            android:id="@+id/btnPhoneBook"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.08"/>

    </LinearLayout>
</merge>


