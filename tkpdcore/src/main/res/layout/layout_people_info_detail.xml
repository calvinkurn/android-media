<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_small"
    android:paddingTop="@dimen/padding_small"
    tools:showIn="@layout/content_layout_people_info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="@string/title_personal_profile"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/greyish_bg" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        app:drawableLeftCompat="@drawable/ic_email"
        android:drawablePadding="@dimen/padding_small"
        android:gravity="center|left"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:visibility="visible" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/user_yahoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        app:drawableLeftCompat="@drawable/ic_yahoo"
        android:drawablePadding="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:visibility="visible" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        app:drawableLeftCompat="@drawable/ic_shop_phone"
        android:drawablePadding="@dimen/margin_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:text="@string/title_null"
        android:visibility="visible" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/user_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        app:drawableLeftCompat="@drawable/ic_home"
        android:drawablePadding="@dimen/margin_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/user_hobby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        app:drawableLeftCompat="@drawable/ic_hobby"
        android:drawablePadding="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small" />

    <com.tokopedia.design.textview.TextView
        android:id="@+id/user_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/ic_calendar"
        android:drawablePadding="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:visibility="visible" />

</LinearLayout>