<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title_shop_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:background="@drawable/bg_yellow_border_yelow"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:text="@string/action_settings"
            android:textColor="@color/black"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Kelola akun Anda"
            android:textColor="@color/black"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_manage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_shop_setting" />
</RelativeLayout>
