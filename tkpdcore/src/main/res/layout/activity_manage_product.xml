<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_draft_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/tkpd_yellow_status"
        android:clickable="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:textSize="@dimen/fontvs"
        android:foreground="?attr/selectableItemBackground"
        tools:text="@string/product_manage_you_have_x_unfinished_product"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_no_result"
            android:visibility="gone" />

        <com.tokopedia.core.customwidget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.core.customView.SimpleListView
                android:id="@+id/prod_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:cacheColorHint="#FF0000FF"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:divider="@android:color/transparent"
                android:listSelector="@android:color/transparent" />

        </com.tokopedia.core.customwidget.SwipeToRefresh>

        <ImageView
            android:id="@+id/blur_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />

        <com.tkpd.library.ui.floatbutton.FabSpeedDial
            android:id="@+id/fab_speed_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:fabBackgroundTint="@color/green_500"
            app:fabGravity="bottom_end"
            app:fabMenu="@menu/menu_add_product_instoped"
            app:miniFabBackgroundTint="@color/mini_fab_title_background_tint"
            app:miniFabDrawableTint="@android:color/white"
            app:miniFabTitleTextColor="@android:color/white"
            app:touchGuardDrawable="@drawable/background_blur" />

        <!--<include layout="@layout/fab_button" />-->

    </RelativeLayout>
</LinearLayout>

