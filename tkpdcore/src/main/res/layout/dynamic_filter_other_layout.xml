<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dynamic_filter_other_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <com.tokopedia.design.component.EditTextCompat
            android:id="@+id/dynamic_filter_other_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableRightCompat="@drawable/ic_search_black_24dp"
            android:drawableTint="@color/red_300"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:hint="Cari Lokasi" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dynamic_filter_other_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/dynamic_filter_other_finish"
            style="@style/ButtonGreen"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:text="Selesai" />
    </LinearLayout>

</LinearLayout>