<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/see_all_bg"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_vs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_vs"
                android:gravity="left"
                android:text="13-Juni-2014 20:20 WIB"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginLeft="@dimen/margin_small"
                android:gravity="left"
                android:text="Packing list"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyish_bg" />

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingBottom="@dimen/padding_vs"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingTop="@dimen/padding_vs"
            android:text="Jakarta"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>