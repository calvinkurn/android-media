<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_vs">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/half_screen"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_med"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:id="@+id/footer"
        android:gravity="center">

        <Button
            android:id="@+id/button_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border_green_reputation"
            android:text="@string/title_activity_login"
            android:textColor="@color/tkpd_dark_green" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@id/button_login"
            android:background="@drawable/green_button_rounded"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_activity_register"
            android:textAllCaps="true"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@drawable/orange_button_rounded"
        android:gravity="center"
        android:text="@string/search_product"
        android:textAllCaps="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_search"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/margin_small"
        android:textSize="@dimen/font_large"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_med"
        android:layout_below="@id/logo"
        android:layout_above="@id/title"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>