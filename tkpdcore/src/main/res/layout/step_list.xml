<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stepper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_vs"
    android:layout_marginLeft="@dimen/margin_stepper_nob"
    android:layout_marginRight="@dimen/margin_stepper_nob"
    android:background="@color/transparent"
    android:gravity="center">

    <include
        layout="@layout/step_init"
        android:id="@+id/step_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/step_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/step_2"
        android:alpha="0.65"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/step_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/step_3"
        android:alpha="0.65"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/step_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/step_4"
        android:alpha="0.65"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/step_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/step_5"
        android:alpha="0.65"
        android:layout_weight="1"/>

</LinearLayout>
