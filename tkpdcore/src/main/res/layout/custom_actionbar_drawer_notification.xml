<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toggle_but_ab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/count_notif"
        android:layout_gravity="center"
        android:contentDescription=""
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        app:srcCompat="@drawable/ic_new_drawer" />

    <TextView
        android:id="@+id/toggle_count_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:background="@drawable/green_circle"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/toggle_notif"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/toggle_but_ab"
        android:layout_alignRight="@+id/toggle_but_ab"
        android:layout_alignTop="@+id/toggle_but_ab"
        android:layout_marginTop="@dimen/margin_vs"
        android:background="@drawable/red_circle_small"
        android:visibility="gone"

        />


</RelativeLayout>