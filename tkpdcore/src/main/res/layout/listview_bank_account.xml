<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/bank_icon"
        android:layout_width="@dimen/tx_list_search_btn"
        android:layout_height="@dimen/tx_list_search_btn_h"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="ContentDescription"
        tools:src="@drawable/icon_bca"/>

    <ImageView
        android:id="@+id/delete_bank"
        android:layout_width="@dimen/img_thumb_bit_small"
        android:layout_height="@dimen/img_thumb_bit_small"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@drawable/overflow_selected"
        android:scaleType="fitXY"
        android:src="@drawable/ic_clear_36dp"
        tools:ignore="ContentDescription,RtlHardcoded"/>

    <ImageView
        android:id="@+id/edit_bank"
        android:layout_width="@dimen/img_thumb_bit_small"
        android:layout_height="@dimen/img_thumb_bit_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toLeftOf="@id/delete_bank"
        android:layout_toStartOf="@id/delete_bank"
        android:background="@drawable/overflow_selected"
        android:scaleType="fitXY"
        android:src="@drawable/ic_create_36dp"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/default_bank"
        android:layout_width="@dimen/img_thumb_bit_small"
        android:layout_height="@dimen/img_thumb_bit_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toLeftOf="@id/edit_bank"
        android:layout_toStartOf="@id/edit_bank"
        android:background="@drawable/overflow_selected"
        android:src="@drawable/ic_done_36dp"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bank_icon"
        android:layout_marginBottom="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_toLeftOf="@id/default_bank"
        android:textStyle="bold"
        tools:text="Apa aja boleh"/>

    <TextView
        android:id="@+id/account_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_name"
        tools:text="666"/>

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_number"
        tools:text="Bank bank Tut"/>

    <TextView
        android:id="@+id/bank_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bank_name"/>

</RelativeLayout>
