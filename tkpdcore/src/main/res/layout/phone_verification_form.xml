<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="290dp"
        android:background="@drawable/btn_cancel"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/phone_verification_instruction"
            android:layout_height="wrap_content"
            android:layout_width= "match_parent"
            android:layout_marginTop="@dimen/large_dp"
            android:text="@string/title_verify_phone_now"
            android:textSize="@dimen/font_large"
            android:textColor="@color/grey_800"
            android:gravity="center"
            />

        <!-- Test Purpose Only, Check Retry Handler and Number Registered in Database -->
        <TextView
            android:id="@+id/refresh_number"
            android:layout_height="wrap_content"
            android:layout_width= "match_parent"
            android:layout_marginTop="10dp"
            android:text="@string/action_refresh"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/green_500"
            android:gravity="center"
            android:visibility="gone"
            />
        <!-- ======================================================================= -->

        <TextView
            android:id="@+id/phone_number"
            android:layout_height="wrap_content"
            android:layout_width= "match_parent"
            android:text="@string/title_loading"
            android:textSize="@dimen/large_dp"
            android:textColor="@color/grey_800"
            android:gravity="center"
            />
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/link_to_change_phone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/link_change_phone"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/green_500"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:id="@+id/normal_verification_footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/autoverify_abort_button"
                android:layout_height="@dimen/btn_height"
                android:layout_width="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/title_cancel"
                android:background="@drawable/btn_plain"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/verify_button"
                android:layout_height="@dimen/btn_height"
                android:layout_width="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/button_verify"
                android:background="@drawable/btn_plain"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/reminder_footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/reminder_change_number"
                android:layout_height="@dimen/btn_height"
                android:layout_width="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/link_change_phone"
                android:background="@drawable/btn_plain"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/reminder_same_number_button"
                android:layout_height="@dimen/btn_height"
                android:layout_width="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/title_yes"
                android:background="@drawable/btn_plain"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>