<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/cards_ui_2"
    android:padding="@dimen/se_img_pad"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/title_edit_contacts"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_vs"
        android:background="@color/greyish_bg"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small">

        <EditText
            android:id="@+id/messenger"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_messenger"
            android:gravity="left|start"
            android:inputType="text"
            android:textSize="@dimen/sp_14" />

    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small">

        <TextView
            android:id="@+id/change_email_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/link_change_email"
            android:background="@drawable/tab_selector"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/green_800"
            android:textStyle="bold"
            android:layout_centerVertical="true" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/change_email_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_vs">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:hint="@string/title_email"
                android:focusable="false"
                android:enabled="false"
                android:textSize="@dimen/sp_14"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:id="@+id/phone_section">

        <TextView
            android:id="@+id/change_hp_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/link_change_phone"
            android:background="@drawable/tab_selector"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/green_800"
            android:textStyle="bold"
            android:layout_centerVertical="true" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/change_hp_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_med">

            <com.tokopedia.design.textview.Edittext
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:hint="@string/title_hp"
                android:focusable="false"
                android:enabled="false"
                android:inputType="phone"
                android:textSize="@dimen/sp_14"
                app:drawableRightCompat="@drawable/ic_check"/>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:id="@+id/phone_verification_section">

        <TextView
            android:id="@+id/verify_phone_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/button_verify"
            android:background="@drawable/tab_selector"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/green_800"
            android:textStyle="bold"
            android:layout_centerVertical="true" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/verify_phone_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_med">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/verification"
                android:textSize="@dimen/sp_14"
                android:hint="@string/title_hp"
                />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <com.tokopedia.design.component.TextViewCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black_54"
        android:lineSpacingExtra="6sp"
        android:text="@string/check_email_change_phone_number"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:drawablePadding="16dp"
        android:background="@drawable/yellor_rounded_background"
        app:drawableLeftCompat="@drawable/ic_unify_icon_waktu_time_hourglass"
        android:id="@+id/check_email_info"
        android:visibility="gone"
        />

</LinearLayout>