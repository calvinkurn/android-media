<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/small_space"
    android:paddingLeft="@dimen/margin_sm"
    android:paddingRight="@dimen/margin_sm"
    android:paddingTop="@dimen/small_space">

    <LinearLayout
        android:id="@+id/old_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_button_default"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_vs"
            app:srcCompat="@drawable/ic_info_green" />

        <TextView
            android:id="@+id/old_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black_38"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="Pesan ini dikirim menggunakan Chat versi lama, dengan subjek: Wolverine Cap Toe Boot Warna Red Tua Ukurannya 42" />
    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/old_message_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textAllCaps="true"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/fontvs"
        tools:text="13:16 wib" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_user_box"
        android:layout_alignStart="@+id/view_user_box"
        android:layout_below="@+id/date"
        android:layout_marginBottom="@dimen/margin_vs"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_54"
        android:textSize="11sp"
        android:textStyle="normal"
        tools:text="AHAJA" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/name"
        android:layout_alignTop="@id/name"
        android:layout_below="@+id/date"
        android:layout_marginLeft="@dimen/small_space"
        android:layout_marginRight="@dimen/small_space"
        android:layout_toEndOf="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="●"
        android:textColor="@color/grey_500"
        android:textSize="5sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_toEndOf="@+id/dot"
        android:layout_toRightOf="@+id/dot"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black_38"
        android:textSize="11sp"
        android:textStyle="normal"
        tools:text="Pengguna" />


    <ImageView
        android:id="@+id/user_ava"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/name"
        android:layout_marginRight="@dimen/margin_small"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_group_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/name"
        android:layout_marginRight="@dimen/margin_small"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="270dp"
            android:maxWidth="270dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:visibility="visible" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/view_user_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_group_chat_message"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_toEndOf="@id/user_ava"
        android:layout_toRightOf="@id/user_ava">


        <RelativeLayout
            android:id="@+id/message_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_bubble"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="start"
                android:linksClickable="true"
                android:maxWidth="270dp"
                android:padding="@dimen/padding_small"
                android:textColor="@color/black_70"
                android:textColorLink="@color/black_70"
                android:textIsSelectable="true"
                android:textSize="@dimen/fonts"
                tools:text="Gukguk meong meongaksjdkajshdkajhsdkajhsdkajhsdaksdjhaksjhkahsdk" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-13dp"
            android:layout_marginStart="-13dp"
            android:layout_toEndOf="@id/message_holder"
            android:layout_toRightOf="@id/message_holder">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/circle" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_user_box"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/margin_vvs"
        android:layout_toRightOf="@id/user_ava"
        android:gravity="left"
        android:textColor="@color/time_color"
        android:textSize="@dimen/fontvvs"
        tools:text="testtest" />

</RelativeLayout>