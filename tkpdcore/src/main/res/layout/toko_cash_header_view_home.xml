<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/img_thumb_holder"
    android:background="@color/white"
    android:gravity="center"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/header_toko_cash_image"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_vs"
        android:layout_marginLeft="@dimen/margin_vs"
        android:src="@drawable/ic_tokocash_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/header_toko_cash_image"
        android:layout_toEndOf="@id/header_toko_cash_image"
        android:layout_marginStart="@dimen/margin_vs"
        android:layout_marginLeft="@dimen/margin_vs"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/header_toko_cash_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toko_cash_info" />

        <TextView
            android:id="@+id/header_toko_cash_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:textSize="@dimen/font_medium"
            android:text="@string/title_rupiah_empty"/>
    </LinearLayout>

    <TextView
        android:id="@+id/header_toko_cash_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/img_thumb"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_rounded_corner"
        android:text="@string/toko_cash_activation"
        android:paddingStart="@dimen/margin_vl"
        android:paddingLeft="@dimen/margin_vl"
        android:paddingEnd="@dimen/margin_vl"
        android:paddingRight="@dimen/margin_vl"
        android:layout_marginEnd="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:gravity="center"/>

</RelativeLayout>