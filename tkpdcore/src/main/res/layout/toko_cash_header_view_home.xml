<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/img_thumb_holder"
    android:background="@drawable/cards_with_shadow"
    android:gravity="center"
    android:padding="@dimen/padding_small">

    <LinearLayout
        android:id="@+id/toko_cash_normal_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/header_toko_cash_image"
            android:layout_width="@dimen/img_thumb_m"
            android:layout_height="@dimen/img_thumb_m"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginStart="@dimen/margin_vs"
            android:src="@drawable/ic_icon_tokocash_header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginStart="@dimen/margin_vs"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_toko_cash_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toko_cash_info" />

            <TextView
                android:id="@+id/header_toko_cash_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_rupiah_empty"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pending_cash_back_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginStart="@dimen/margin_vs"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/header_toko_cash_image_pending"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginStart="@dimen/margin_vs"
                android:src="@drawable/ic_icon_tokocash_header" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_dp"
                android:layout_marginStart="@dimen/small_dp"
                android:text="TokoCash"
                android:textSize="@dimen/fontvvs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vvs"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pending_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 52.000" />

            <TextView
                android:id="@+id/pending_cashback_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_dp"
                android:layout_marginStart="@dimen/small_dp"
                android:drawableEnd="@drawable/info_icon"
                android:drawablePadding="@dimen/margin_vvs"
                android:drawableRight="@drawable/info_icon"
                android:gravity="center_vertical"
                android:text="Pending Cashback"
                android:textSize="@dimen/fontvvs" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/header_toko_cash_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/img_thumb"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:paddingEnd="@dimen/margin_vl"
        android:paddingLeft="@dimen/margin_vl"
        android:paddingRight="@dimen/margin_vl"
        android:paddingStart="@dimen/margin_vl"
        android:text="@string/toko_cash_activation"
        android:textColor="@color/white" />

</RelativeLayout>