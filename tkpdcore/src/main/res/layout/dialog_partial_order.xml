<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/page_with_pad"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/padding_small"
    
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_yellow_border_yelow"
        android:padding="@dimen/padding_small"
        android:layout_marginBottom="@dimen/margin_small"
        >
        <TextView 
	        android:id="@+id/invoice_text"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        />
	    
	    <TextView 
	        android:id="@+id/buyer_name"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        />
	    
	    <TextView 
	        android:id="@+id/total_invoice"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="Total Invoice Rp.xxxxxxx,-"
	        />
        
    </LinearLayout>
    
    <TextView 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:text="@string/title_prod_list"
	    android:textColor="@color/label_color"
	    />
    
	<LinearLayout 
	    android:id="@+id/product_list"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    android:layout_marginBottom="@dimen/margin_small"
	    >
	    
	</LinearLayout>
	<TextView 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:text="@string/title_remark"
	    android:textColor="@color/label_color"
	    />
	<EditText 
	    android:id="@+id/remark"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    />
	
	<TextView
        android:id="@+id/confirm_button"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_height="@dimen/btn_height"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/button_buy_from_cart"
        android:text="@string/title_submit"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
	
	

</LinearLayout>
