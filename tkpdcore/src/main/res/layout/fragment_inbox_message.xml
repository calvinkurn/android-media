<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.design.text.SearchInputView
            android:id="@+id/simpleSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Search here"/>
        
        <FrameLayout android:id="@+id/base_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simpleSearchView"
            android:padding="@dimen/dp_16"
            android:orientation="horizontal">
            
            <TextView style="@style/TextView.Small.Green"
                android:id="@+id/tv_organize_action"
                android:text="@string/option_organize_chat"/>

            <TextView style="@style/TextView.Small.Green"
                android:id="@+id/tv_bm_action"
                android:text="@string/option_broadcast"
                android:layout_gravity="end"
                android:drawableLeft="@drawable/ic_bm_speaker"
                android:drawableStart="@drawable/ic_bm_speaker"
                android:drawablePadding="@dimen/dp_4"/>
            
        </FrameLayout>

        <com.tokopedia.core.customwidget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/base_action">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/chat_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:background="@color/white"/>
        </com.tokopedia.core.customwidget.SwipeToRefresh>

        <LinearLayout
            android:id="@+id/loading_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/simpleSearchView"
            android:alpha="0.8"
            tools:visibility="gone"
            android:background="#000000">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="#333333"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="JJJJ"
                android:textColor="@color/white"/>

            <ProgressBar
                android:id="@+id/action"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:srcCompat="@drawable/ic_close_24dp"
                android:text="@string/title_try_again"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="@dimen/fab_button_diameter"
        android:layout_height="@dimen/fab_button_diameter"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/tkpd_dark_green"
        app:srcCompat="@drawable/ic_action_filter_white_24dp"
        android:visibility="gone"
        app:backgroundTint="@color/green_500"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>