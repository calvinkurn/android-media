<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stepper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_vs"
    android:layout_marginLeft="@dimen/margin_stepper_nob"
    android:layout_marginRight="@dimen/margin_stepper_nob"
    android:background="@color/transparent"
    android:gravity="center">

    <ImageView
        android:id="@+id/selected_ring"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/selected"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/step_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/step_size_nob"
        android:layout_centerInParent="true"
        android:src="@drawable/step_1" />

</RelativeLayout>
