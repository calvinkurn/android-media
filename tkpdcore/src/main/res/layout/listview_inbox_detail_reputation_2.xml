<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cards_ui_2"
        android:orientation="vertical">

        <include layout="@layout/inbox_detail_reputation_header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:visibility="visible">

            <TextView
                android:id="@+id/product_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingBottom="@dimen/padding_small"
                android:textIsSelectable="true"
                android:textSize="@dimen/font_small" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/image_holder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_thumb_holder"
                android:layout_below="@id/product_review"
                android:scrollbars="horizontal"
                android:visibility="visible" />

            <View
                android:id="@+id/top_separator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/image_holder"
                android:background="@color/grey_300"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/view_review_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_separator"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_vs"
                android:paddingTop="@dimen/padding_vs"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:paddingRight="@dimen/padding_small"
                        android:text="@string/title_prod_quality"
                        android:textSize="@dimen/font_small" />

                    <ImageView
                        android:id="@+id/star_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/padding_vs"
                        android:paddingTop="@dimen/padding_vs"
                        android:src="@drawable/ic_star_five" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_accuracy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:paddingRight="@dimen/padding_small"
                        android:text="@string/title_accuracy"
                        android:textSize="@dimen/font_small" />

                    <ImageView
                        android:id="@+id/star_accuracy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/padding_vs"
                        android:paddingTop="@dimen/padding_vs"
                        android:src="@drawable/ic_star_five" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/image_holder"
            android:background="@color/grey_300" />

        <RelativeLayout
            android:id="@+id/give_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_give_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_green_reputation"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="@string/reply_review"
                android:textColor="@color/green_500" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_seller_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/shop_ava"
            android:paddingRight="@dimen/padding_small"
            android:visibility="gone">

            <ImageView
                android:id="@+id/seller_avatar"
                android:layout_width="@dimen/user_ava"
                android:layout_height="@dimen/user_ava"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_small"
                />

            <TextView
                android:id="@+id/seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_toEndOf="@id/seller_avatar"
                android:layout_toRightOf="@id/seller_avatar"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:paddingTop="@dimen/padding_vs"
                android:singleLine="true"
                android:textSize="@dimen/font_small"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/reputation_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seller_name"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toEndOf="@id/seller_avatar"
                android:layout_toRightOf="@id/seller_avatar"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_vs"
                android:paddingTop="@dimen/padding_vs"></LinearLayout>

            <TextView
                android:id="@+id/seller_reply_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reputation_holder"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toEndOf="@id/seller_avatar"
                android:layout_toRightOf="@id/seller_avatar"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:singleLine="true"
                android:textSize="@dimen/fontvvs" />

            <ImageView
                android:id="@+id/btn_overflow_seller"
                android:layout_width="@dimen/user_ava"
                android:layout_height="@dimen/user_ava"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/overflow_selected"
                android:padding="@dimen/padding_vs"
                android:src="@drawable/ic_new_action_overflow_black" />

            <TextView
                android:id="@+id/seller_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seller_reply_date"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:textIsSelectable="true"
                android:textSize="@dimen/font_small" />

        </RelativeLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_vs" />

</LinearLayout>