<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShopStatistic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <ImageView
                android:id="@id/shop_avatar"
                android:layout_width="@dimen/shop_ava"
                android:layout_height="@dimen/shop_ava"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:contentDescription="@string/app_name"
                />

            <TextView
                android:id="@id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/shop_name"
                android:textColor="#333333"
                android:textSize="@dimen/fontm"
                android:textStyle="bold"
                android:layout_toRightOf="@id/shop_avatar"
                android:layout_toEndOf="@id/shop_avatar"
                />

            <TextView
                android:id="@id/shop_tag_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_shop_tag"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs"
                android:textStyle="italic"
                android:layout_toRightOf="@id/shop_avatar"
                android:layout_toEndOf="@id/shop_avatar"
                android:layout_below="@id/shop_name"
                />

            <TextView
                android:id="@id/short_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vs"
                android:text="@string/title_shop_desc"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts"
                android:layout_toRightOf="@id/shop_avatar"
                android:layout_toEndOf="@id/shop_avatar"
                android:layout_below="@id/shop_tag_line"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_400" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@id/last_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/title_last_online"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/title_lastol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:drawableLeft="@drawable/ic_stats_lastol"
                    android:drawableStart="@drawable/ic_stats_lastol"
                    android:drawablePadding="@dimen/padding_vs"
                    android:layout_toStartOf="@id/last_login"
                    android:layout_toLeftOf="@id/last_login"
                    android:text="@string/title_last_online"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/title_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_lastol"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:drawableLeft="@drawable/ic_stats_sold"
                    android:drawableStart="@drawable/ic_stats_sold"
                    android:drawablePadding="@dimen/padding_vs"
                    android:text="@string/title_sold_item"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/sold_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/last_login"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/title_sold_item"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/title_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/title_sold"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:drawableLeft="@drawable/ic_stats_fav"
                    android:drawableStart="@drawable/ic_stats_fav"
                    android:drawablePadding="@dimen/padding_vs"
                    android:text="@string/title_favorited"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/favorited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/sold_items"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@drawable/tab_selector"
                    android:gravity="end"
                    android:text="@string/placeholder_number"
                    android:textColor="@color/href_link"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/title_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/title_fav"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:drawableLeft="@drawable/ic_stats_loc"
                    android:drawableStart="@drawable/ic_stats_loc"
                    android:drawablePadding="@dimen/padding_vs"
                    android:text="@string/title_shop"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/shop_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/favorited"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/title_open_since"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/title_shop"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:drawableLeft="@drawable/ic_stats_open"
                    android:drawableStart="@drawable/ic_stats_open"
                    android:drawablePadding="@dimen/padding_vs"
                    android:text="@string/title_open_since"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/open_since"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/shop_location"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/cards_ui_2"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small">

                <LinearLayout
                    android:id="@id/reputation_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_vs"
                        android:layout_marginTop="@dimen/padding_vs"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/title_reputation"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_vs"
                        android:layout_marginTop="@dimen/padding_vs"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/title_speed"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/reputation_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reputation_stats"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@id/reputation_medal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"/>

                    <ImageView
                        android:id="@id/speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_icon_repsis_speed_lambat"
                        android:contentDescription="@string/placeholder_text"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/reputation_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reputation_score"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/reputation_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_vs"
                        android:layout_marginTop="@dimen/padding_vs"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/title_reputation"
                        android:textColor="@color/tkpd_dark_gray" />

                    <TextView
                        android:id="@id/transaction_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_vs"
                        android:layout_marginTop="@dimen/padding_vs"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/title_quick_success"
                        android:textColor="@color/tkpd_dark_gray"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:id="@id/sep5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/reputation_desc"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:background="@color/greyish_bg" />

                <TextView
                    android:id="@id/lihat_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sep5"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:text="@string/title_open_statistic"
                    android:textColor="@color/tkpd_btn_green_filter" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shop_owner"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:background="@color/greyish_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@id/owner_picture"
                        android:layout_width="@dimen/img_thumb_m"
                        android:layout_height="@dimen/img_thumb_m"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:contentDescription="@string/placeholder_text"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@id/owner_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/tab_selector"
                                android:text="@string/title_shop_owner"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fonts" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@id/email_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_vs"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_vs"
                                android:layout_marginEnd="@dimen/margin_vs"
                                android:text="@string/title_email"
                                android:textSize="@dimen/fonts"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@id/owner_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/fonts" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shop_location"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:background="@color/greyish_bg" />

                <TextView
                    android:id="@id/detail_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shop_name"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/detail_shop_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:text="@string/title_activity_fragment_shop_detail"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/detail_shop_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:drawableLeft="@drawable/ic_shop_phone"
                    android:drawableStart="@drawable/ic_shop_phone"
                    android:drawablePadding="5dp"
                    android:gravity="center|start"
                    android:text="@string/title_phone"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/detail_shop_fax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:drawableLeft="@drawable/ic_shop_fax"
                    android:drawableStart="@drawable/ic_shop_fax"
                    android:drawablePadding="5dp"
                    android:gravity="center|start"
                    android:text="@string/title_fax"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/detail_shop_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:drawableLeft="@drawable/ic_shop_email"
                    android:drawableStart="@drawable/ic_shop_email"
                    android:drawablePadding="5dp"
                    android:gravity="center|start"
                    android:text="@string/title_email"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/shop_detail_all_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|end"
                    android:text="@string/title_see_all_addr" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@id/txtview_fragshopdetail_trans_stat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_transaction_statistic"
                    android:textStyle="bold" />

                <View
                    android:id="@id/txtview_fragshopdetail_underline1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/txtview_fragshopdetail_trans_stat"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:background="@color/greyish_bg" />

                <TextView
                    android:id="@+id/success_transaction_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txtview_fragshopdetail_underline1"
                    android:text="@string/title_successfull_transaction"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/successfull_transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtview_fragshopdetail_underline1"
                    android:text="@string/placeholder_number"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <View
                    android:id="@id/txtview_fragshopdetail_underline2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/successfull_transaction"
                    android:layout_marginBottom="@dimen/margin_vs" />

                <TextView
                    android:id="@+id/product_sold_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txtview_fragshopdetail_underline2"
                    android:text="@string/title_product_sold"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/product_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtview_fragshopdetail_underline2"
                    android:text="@string/placeholder_number"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <View
                    android:id="@id/txtview_fragshopdetail_underline3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/product_sold"
                    android:layout_marginTop="@dimen/margin_vs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txtview_fragshopdetail_underline3"
                    android:text="@string/title_total_etalase"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/total_etalase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtview_fragshopdetail_underline3"
                    android:text="@string/placeholder_number"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <View
                    android:id="@id/txtview_fragshopdetail_underline4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/total_etalase"
                    android:layout_marginTop="@dimen/margin_vs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txtview_fragshopdetail_underline4"
                    android:text="@string/title_total_product"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@id/total_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtview_fragshopdetail_underline4"
                    android:text="@string/placeholder_number"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shipment_support"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:background="@color/greyish_bg" />

                <LinearLayout
                    android:id="@id/shipping_agency_listtview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
