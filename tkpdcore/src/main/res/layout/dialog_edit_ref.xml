<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/page_with_pad"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">
    
    <com.tokopedia.design.textview.TextView
        android:id="@+id/scan"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/title_reference_number"
        android:textColor="@color/label_color"
        app:drawableRightCompat="@drawable/ic_photography"
            />
    
    <EditText 
        android:id="@+id/ref_number"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:maxLength="17"
        android:singleLine="true"
        />
    
    <TextView 
        android:id="@+id/confirm_button"
        android:layout_height="@dimen/btn_height"
        android:layout_width="match_parent"
        android:text="@string/title_confirm_button"
        android:background="@drawable/button_buy_from_cart"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

</LinearLayout>
