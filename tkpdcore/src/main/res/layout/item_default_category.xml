
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/linWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_vs"
        android:paddingRight="@dimen/padding_vs"
        android:paddingTop="@dimen/padding_vs"
        android:paddingBottom="@dimen/padding_vs">

        <TextView
            android:id="@id/categoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="Title"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:padding="@dimen/padding_vs"
            android:textColor="@color/tkpd_dark_gray"
            android:textSize="@dimen/textsize" />

        <View
            android:id="@id/separator"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grey_300" />


    </LinearLayout>


</LinearLayout>
