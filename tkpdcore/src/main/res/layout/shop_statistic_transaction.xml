<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cards_ui_2"
    android:padding="@dimen/padding_small"
    android:gravity="center"
    android:layout_marginBottom="@dimen/padding_small"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tab_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="1 Bulan"
                android:background="@color/greyish_bg" />

            <TextView
                android:id="@+id/tab_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="3 Bulan"/>

            <TextView
                android:id="@+id/tab_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="6 Bulan"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyish_bg"
            android:layout_marginBottom="@dimen/margin_small"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/view_pie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:visibility="visible">

        <com.tokopedia.core.customView.SimplePieChart
            android:layout_width="@dimen/size_pie"
            android:layout_height="@dimen/size_pie"
            android:layout_centerInParent="true"
            android:id="@+id/pie" />


        <TextView
            android:id="@+id/percentage_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="100%"
            android:textStyle="bold"
            android:textSize="@dimen/font_medium" />

    </RelativeLayout>

    <TextView
        android:id="@+id/counter_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="75%"
        android:textStyle="bold"
        android:textSize="48sp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/view_message_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Sukses"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/total_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dari 21.421 Transaksi"
            android:layout_marginTop="@dimen/margin_vs"
            android:textSize="@dimen/fontvs" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/view_no_transaction">

        <ImageView
            android:id="@+id/no_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/icon_no_transaction" />

        <TextView
            android:id="@+id/no_transaction_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/no_transaction"
            android:text="Message Here"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:padding="@dimen/padding_small"/>

    </LinearLayout>
</LinearLayout>

