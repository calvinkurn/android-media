<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/cards_ui_selected"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".85"
        android:orientation="vertical"
        android:paddingRight="@dimen/padding_vs" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Penjual"
                android:textColor="@color/black"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Mobile Shoppe"
                android:textColor="@color/black"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="31 Agustus"
            android:textColor="@color/time_color"
            android:textSize="@dimen/fontvs" />

        <LinearLayout
            android:id="@+id/view_free_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:orientation="horizontal">

            <com.tokopedia.design.textview.TextView
                android:id="@+id/text_free_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/title_free_return"
                app:drawableLeftCompat="@drawable/ic_badge_free_return"
                android:drawablePadding="@dimen/padding_vs"
                android:gravity="center_vertical"
                android:textColor="@color/time_color"
                android:textSize="@dimen/fontvs" />

        </LinearLayout>

        <TextView
            android:id="@+id/invoice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:gravity="left"
            android:text="INV/20142543/XIV/II/110235"
            android:textColor="@color/black"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tukar barang sesuai pesanan Rp 100.000,-"
            android:textColor="@color/black"
            android:textSize="@dimen/fontvs" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".15"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tkpd_dark_orange"
            android:gravity="center"
            android:padding="3dp"
            android:singleLine="true"
            android:text="Closed"
            android:textColor="@color/white"
            android:textSize="@dimen/fontvvs"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/blank"
            android:layout_width="wrap_content"
            android:layout_below="@+id/status"
            android:layout_height="@dimen/fontvs">
        </View>
        <ImageView
            android:id="@+id/expired"
            android:layout_below="@id/blank"
            android:src = "@drawable/ic_icon_alert_tkpd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_centerHorizontal="true">
        </ImageView>

    </RelativeLayout>

</LinearLayout>