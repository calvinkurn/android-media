<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.tokopedia.core.DeveloperOptions">


        <TextView
            android:id="@+id/maintenance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Trigger Maintenance"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/custom_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Start Test Intent"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/reset_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Reset OnBoarding"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/test_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Test OnBoarding"
            android:textColor="@color/white" />

            <TextView
                android:id="@+id/force_crash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/btn_share"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="Force Crash"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/toggle_chuck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:padding="@dimen/margin_small"
                android:text="Enable Network Log on Notification" />

            <TextView
                android:id="@+id/goto_chuck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/btn_share"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="View Network Log"
                android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>