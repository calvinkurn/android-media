<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingTop="@dimen/new_margin_med"
    android:paddingLeft="@dimen/new_margin_med"
    >

    <ImageView
        android:id="@id/user_ava"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_image_avatar_boy"
        />

    <TextView
        android:id="@id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/text_size_xsmall"
        tools:text="12:30"
        android:layout_marginRight="@dimen/new_margin_med"/>


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_l_medium"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/black_70"
        android:lineSpacingExtra="8sp"
        tools:text="Steven Fredian"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/user_ava"
        android:layout_toEndOf="@+id/user_ava"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scrollbars="horizontal"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:ellipsize="end"
        android:background="@drawable/bg_stroke_rounded_corners"
        android:textColor="@color/medium_green"
        android:textSize="9sp"
        tools:text="Penjual"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/user_name"
        android:layout_toEndOf="@+id/user_name" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black_54"
        android:lineSpacingExtra="7sp"
        tools:text="Barang sudah saya kirim balik y..."
        android:layout_below="@+id/user_name"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/time"
        android:layout_toStartOf="@+id/time" />
    
    <TextView
        android:id="@+id/counter_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/bottom_navigation_elevation"
        android:minHeight="@dimen/bottom_navigation_elevation"
        android:background="@drawable/circle_green"
        android:gravity="center"
        android:text="22"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/message"
        android:layout_alignBottom="@+id/message"
        android:layout_alignRight="@+id/time"
        android:layout_alignEnd="@+id/time" />

    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/user_ava"
        android:background="@color/grey_300"
        android:layout_marginTop="@dimen/new_margin_med"
        android:minHeight="1dp"
        android:layout_alignLeft="@+id/message"
        android:layout_alignStart="@+id/message" />

</RelativeLayout>