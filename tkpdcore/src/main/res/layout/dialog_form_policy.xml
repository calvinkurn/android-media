<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/screen_size"
        android:background="@drawable/btn_plain">
        <LinearLayout
            android:id="@+id/header_return_policy_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/edit_return_policy_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_returnable_policy"
                android:textSize="@dimen/font_large"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/policy_form_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_cancel"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/policy_form_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:background="@drawable/btn_plain"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dismiss_return_policy_form"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/dialog_cancel"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/policy_form_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:background="@drawable/btn_plain"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/confirm_new_policy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/dialog_save"/>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_screen"
            android:layout_above="@id/policy_form_footer"
            android:layout_below="@id/header_return_policy_edit"
            android:layout_marginTop="@dimen/small_dp">
            <EditText
                android:id="@+id/edit_return_policy_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/instruction_type_policy"
                android:background="@android:color/transparent"
                android:layout_marginLeft="@dimen/font_large"
                android:layout_marginRight="@dimen/small_dp"
                android:cursorVisible="true"
                />
            </ScrollView>
        </RelativeLayout>
</RelativeLayout>