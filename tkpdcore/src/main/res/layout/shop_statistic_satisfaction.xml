<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/satisfaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/padding_small"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_ss_satisfaction"
        android:textStyle="bold"
        android:paddingBottom="@dimen/padding_vs" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tkpd_light_grey"
        android:layout_below="@+id/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tingkat" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_1_month" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_6_month" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_12_month" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tkpd_light_grey"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/padding_vs"
            android:layout_marginTop="@dimen/padding_vs"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/img_thumb"
                    android:layout_height="@dimen/img_thumb"
                    app:srcCompat="@drawable/ic_icon_repsis_smile_active"
                    android:layout_marginBottom="@dimen/padding_vs"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_positif"
                    android:textColor="@color/tkpd_dark_gray"
                    android:textSize="@dimen/fontvs" />

            </LinearLayout>

            <TextView
                android:id="@+id/positif_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/positif_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/positif_12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="1"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/padding_vs"
            android:layout_marginTop="@dimen/padding_vs">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/img_thumb"
                    android:layout_height="@dimen/img_thumb"
                    app:srcCompat="@drawable/ic_icon_repsis_neutral_active"
                    android:layout_marginBottom="@dimen/padding_vs"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_netral"
                    android:textColor="@color/tkpd_dark_gray"
                    android:textSize="@dimen/fontvs" />

            </LinearLayout>

            <TextView
                android:id="@+id/netral_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="1" />

            <TextView
                android:id="@+id/netral_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="1" />

            <TextView
                android:id="@+id/netral_12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_vs">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/img_thumb"
                    android:layout_height="@dimen/img_thumb"
                    app:srcCompat="@drawable/ic_icon_repsis_sad_active"
                    android:layout_marginBottom="@dimen/padding_vs"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_negatif"
                    android:textColor="@color/tkpd_dark_gray"
                    android:textSize="@dimen/fontvs" />

            </LinearLayout>

            <TextView
                android:id="@+id/negatif_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="1" />

            <TextView
                android:id="@+id/negatif_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="1" />

            <TextView
                android:id="@+id/negatif_12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="1" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>