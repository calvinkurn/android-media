<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/cards_ui_flat"
    android:gravity="center"
    android:padding="@dimen/padding_small"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_search_review"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/radio_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_wrapper"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:checked="true"
            android:text="@string/item_all"
            android:textSize="@dimen/fontvs" />

        <RadioButton
            android:id="@+id/radio_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_unread"
            android:textSize="@dimen/fontvs" />
    </RadioGroup>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/radio_read"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/teal_300"
        android:minHeight="32dp"
        android:text="@string/action_search" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_read"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toLeftOf="@id/button_confirm"

        android:layout_toStartOf="@id/button_confirm"
        android:background="@color/grey_300"
        android:minHeight="32dp"
        android:text="@string/action_reset" />
</RelativeLayout>