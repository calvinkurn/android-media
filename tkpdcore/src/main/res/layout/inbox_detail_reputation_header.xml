<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/product_avatar"
        android:layout_width="@dimen/user_ava"
        android:layout_height="@dimen/user_ava"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/btn_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/overflow_selected"
        app:srcCompat="@drawable/ic_new_action_overflow_black" />

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toEndOf="@id/product_avatar"
        android:layout_toLeftOf="@+id/btn_overflow"
        android:layout_toRightOf="@id/product_avatar"
        android:layout_toStartOf="@+id/btn_overflow"
        android:ellipsize="end"
        android:maxLines="1"
        android:minLines="1"
        android:paddingTop="@dimen/padding_vs"
        android:singleLine="true"
        android:textSize="@dimen/font_small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_title"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toEndOf="@id/product_avatar"
        android:layout_toLeftOf="@+id/btn_overflow"
        android:layout_toRightOf="@id/product_avatar"
        android:layout_toStartOf="@+id/btn_overflow"
        android:ellipsize="end"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true"
        android:textSize="@dimen/fontvvs" />

</RelativeLayout>