<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/cards_ui_selected"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".80"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/img_thumb_m"
            android:layout_height="@dimen/img_thumb_m"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/remove" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:singleLine="true"
                android:text="INV/20140613/XIV/VI/4629775"
                android:textColor="@color/href_link"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invoice"
                android:text="15 April 2014"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_date"

                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="User Name"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/user_name"
                android:includeFontPadding="false"
                android:text="Rp.12000"
                android:textSize="@dimen/fonts"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deadline_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.30"
        android:background="@drawable/deadline_red"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text__response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/padding_small"
            android:text="@string/title_response_deadline"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text__response"
            android:gravity="left"
            android:paddingLeft="@dimen/padding_small"
            android:text="Hari Ini"
            android:textColor="@color/black"
            android:textSize="@dimen/fontvs" />
    </LinearLayout>

</LinearLayout>