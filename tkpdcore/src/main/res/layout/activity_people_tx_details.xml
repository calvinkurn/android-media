<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/date_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/bg_yellow_border_yelow"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 Mei 2014"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight=".50"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_buy_from"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Shop Name"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/invoice_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:gravity="center"
                    android:textColor="@color/href_link"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/gradient_black_alt" />

        <!-- 
        <ListView
            android:shopId="@+shopId/order_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/margin_vs" />
         -->
        <LinearLayout
            android:id="@+id/order_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/see_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_see_all"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/label_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/see_all_bg"
            android:orientation="vertical">

            <com.tokopedia.transaction.purchase.view.NestedListView
                android:id="@+id/product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/greyish_bg"
                android:dividerHeight="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/see_all_bg"
            android:orientation="vertical"
            android:padding="@dimen/padding_vs">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/half_screen_2pad"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shipping_cost"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/shipping_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/half_screen_2pad"
                    android:layout_height="wrap_content"
                    android:text="@string/title_additional_cost"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/additional_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:text="@string/title_quantity"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:gravity="right"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:text="@string/title_grand_total"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/grand_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:gravity="right"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/tkpd_address_card"
            android:orientation="vertical"
            android:padding="@dimen/padding_vs">

            <LinearLayout
                android:id="@+id/sender_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_sender_name"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/sender_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:gravity="left"
                    android:text="Budi Anduk"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_sender_phone"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/sender_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="08451558"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/half_screen_2pad"
                    android:layout_height="wrap_content"
                    android:text="@string/title_destination_address"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/destination_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/half_screen_2pad"
                    android:layout_height="wrap_content"
                    android:text="@string/title_shipping_courier"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <!-- <View -->
            <!-- android:shopId="@+shopId/liner" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="0.5dp" -->
            <!-- android:layout_marginBottom="@dimen/margin_vs" -->
            <!-- android:background="@color/greyish_bg" -->
            <!-- /> -->

        </LinearLayout>

        <!-- <TextView -->
        <!-- android:shopId="@+shopId/last_status" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:textSize="@dimen/fonts" -->
        <!-- android:layout_marginBottom="@dimen/margin_small" -->
        <!-- android:layout_marginLeft="@dimen/margin_small" -->
        <!-- android:layout_marginRight="@dimen/margin_small" -->
        <!-- android:background="@color/tkpd_yellow_status" -->
        <!-- android:padding="@dimen/padding_small" -->
        <!-- /> -->

        <TextView
            android:id="@+id/complain_but"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_show_complain"
            android:textColor="@color/label_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ask_seller"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_ask_seller"
            android:textColor="@color/label_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_request_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_request_cancel_order"
            android:textColor="@color/label_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/track_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_track"
            android:textColor="@color/label_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receive_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_receive_confirmation"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reject_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:text="@string/title_package_not_received"
            android:textColor="@color/label_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/upload_proof"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_upload_evidence"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>
