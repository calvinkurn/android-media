<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/toolbar_elevation"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:subtitleTextAppearance="?subtitleTextAppearance"
        app:titleTextAppearance="?titleTextAppearance" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="@string/fb_title"/>

            <TextView
                android:layout_marginTop="@dimen/new_icon_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fb_desc_1"/>

            <Spinner
                android:layout_marginTop="@dimen/new_margin_small"
                android:id="@+id/sp_fb_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:entries="@array/feedback_category"/>

            <TextView
                android:layout_marginTop="@dimen/new_icon_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fb_desc_2"/>

            <EditText
                android:layout_marginTop="@dimen/new_margin_small"
                android:id="@+id/et_fb_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="8"
                android:minLines="4"
                android:scrollbars="vertical"  />

            <Button
                android:layout_marginTop="@dimen/new_icon_size"
                android:id="@+id/btn_fb_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Button.Primary.Medium"
                android:text="@string/fb_send"
                android:textAllCaps="false"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>