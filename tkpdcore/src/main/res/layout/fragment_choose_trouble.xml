<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ProgressBar
        android:id="@+id/include_loading"
        layout="@layout/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ScrollView
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_vs"
                    android:paddingBottom="@dimen/padding_vs"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/title_invoice_no"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_vs"
                    android:paddingBottom="@dimen/padding_vs"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/title_shop"
                    android:textSize="@dimen/sp_14" />

                <com.tokopedia.inbox.rescenter.create.customview.ChooseCategorySectionCreateResCenterView
                    android:id="@+id/view_category_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"/>


                <com.tokopedia.inbox.rescenter.create.customview.ChooseTroubleSectionCreateResCenterView
                    android:id="@+id/view_trouble_section"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.tokopedia.inbox.rescenter.create.customview.ChooseProductSectionCreateResCenterView
                    android:id="@+id/view_product_section"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/action_choose_solution"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/button_buy_from_cart"
                android:gravity="center"
                android:text="@string/action_continuer"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/action_abort"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/title_cancel"
                android:textColor="#3e9d43"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
