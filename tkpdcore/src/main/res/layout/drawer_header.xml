<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/margin_small"
              android:background="@color/grey_100"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/cover_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_cover_height"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:src="@drawable/drawer_header_bg"/>

    <RelativeLayout
        android:id="@+id/drawer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_large">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/drawer_avatar"
            android:layout_height="@dimen/drawer_avatar"
            android:layout_marginLeft="@dimen/margin_sm"
            android:background="@drawable/cards_ui_2"
            tools:src="@drawable/ic_image_avatar_boy"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_avatar"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_small">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Loading.."
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_l_medium"
                android:textStyle="normal"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_text"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/verified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/verified_account"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="italic"
                    tools:text="verified account"/>

                <ImageView
                    android:id="@+id/verified_icon"
                    android:layout_width="@dimen/verified_icon_size"
                    android:layout_height="@dimen/verified_icon_size"
                    android:layout_alignBottom="@+id/verified"
                    android:layout_alignTop="@+id/verified"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_toRightOf="@+id/verified"
                    android:src="@drawable/ic_verified"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawer_header"
        android:background="@color/grey_100"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile_completion_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5sp"
                android:text="Kelengkapan profil: "
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/percent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_completion_title"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:lineSpacingExtra="5sp"
                android:text="50%"
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/complete_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:lineSpacingExtra="5sp"
                android:text="Lengkapi Sekarang"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="normal"/>

        </RelativeLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small"/>

        <ProgressBar
            android:id="@+id/ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="10dip"
            android:minHeight="10dip"
            android:progress="0"
            android:progressDrawable="@drawable/horizontal_progressbar"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="273dp"/>

    </LinearLayout>

    <include
        android:id="@+id/drawer_points_layout"
        layout="@layout/drawer_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_header"/>
</LinearLayout>