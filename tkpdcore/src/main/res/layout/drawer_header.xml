<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/margin_small">

    <RelativeLayout
        android:id="@+id/drawer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_100">

        <ImageView
            android:id="@+id/cover_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_cover_height"
            android:layout_centerHorizontal="true"
            tools:src="@drawable/drawer_header_bg"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/gradient_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:layout_marginTop="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="@dimen/drawer_avatar"
                    android:layout_height="@dimen/drawer_avatar"
                    android:background="@drawable/cards_ui_2"
                    tools:src="@drawable/ic_loading_toped"
                    />

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user_avatar"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/padding_small"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_centerVertical="true"
                    android:text="Loading.."
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/black_70"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_100"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:layout_below="@+id/drawer_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/profile_completion_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xsmall"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/black_38"
                android:lineSpacingExtra="5sp"
                android:text="Kelengkapan profil: "
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/percentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xsmall"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/black_70"
                android:lineSpacingExtra="5sp"
                android:gravity="end"
                android:text="50%"
                android:layout_toRightOf="@+id/profile_completion_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xsmall"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/medium_green"
                android:lineSpacingExtra="5sp"
                android:gravity="end"
                android:text="Lengkapi Sekarang"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small" />

        <ProgressBar
            android:id="@+id/ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="10dip"
            android:minHeight="10dip"
            android:progress="50"
            android:progressDrawable="@drawable/horizontal_progressbar"
            tools:layout_editor_absoluteY="273dp"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>

    <include
        android:id="@+id/drawer_points_layout"
        layout="@layout/drawer_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_progress" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/black"
        android:visibility="gone"
        android:id="@+id/relativeLayout" />
</RelativeLayout>