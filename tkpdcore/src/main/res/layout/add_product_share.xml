<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/add_product_share_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/cards_ui_2"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <TextView
            android:id="@+id/berbagi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt_share_to"
            android:textColor="@color/label_color"
            android:textSize="@dimen/new_text_size_title"
            android:padding="@dimen/dp_8"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <!-- [START] ini real layout dari share facebook -->p
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/add_product_facebook_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <ImageView
                    android:id="@+id/add_product_facebook"
                    android:layout_width="@dimen/new_icon_size"
                    android:layout_height="@dimen/new_icon_size"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/facebook_square_blue" />

                <TextView
                    android:layout_toRightOf="@+id/add_product_facebook"
                    android:id="@+id/add_product_facebook_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/new_icon_size"
                    android:text="@string/prompt_facebook"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/new_text_size_small"
                    />

                <CheckBox
                    android:id="@+id/facebook_checkbut"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/new_icon_size"
                    android:layout_height="@dimen/new_icon_size" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:id="@+id/twitter_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8">

                <ImageView
                    android:id="@+id/add_product_twitter"
                    android:layout_width="@dimen/new_icon_size"
                    android:layout_height="@dimen/new_icon_size"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/twitter_square_blue" />

                <TextView
                    android:layout_toRightOf="@+id/add_product_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/new_icon_size"
                    android:text="@string/prompt_twitter"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/new_text_size_small"/>

                <CheckBox
                    android:id="@+id/twitter_checkbut"
                    android:layout_width="@dimen/new_icon_size"
                    android:layout_height="@dimen/new_icon_size"
                    android:layout_alignParentRight="true"
                    />


            </RelativeLayout>
        </LinearLayout>
        <!-- [END] akhir dari share facebook dan twitter -->
    </LinearLayout>
</LinearLayout>