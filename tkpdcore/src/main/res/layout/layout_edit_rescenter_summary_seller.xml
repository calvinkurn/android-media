<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cards_ui_2"
    android:padding="@dimen/padding_small"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/action_collapse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chevron_up"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/chevron_up"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/chevron_up"
            android:text="@string/label_buyer_trouble"
            android:minHeight="48dp"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/label_color"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyish_bg"
        />

    <TextView
        android:id="@+id/solution_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:paddingTop="@dimen/padding_vs"
        android:paddingBottom="@dimen/padding_vs"
        android:text="Solution String"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_vs"
        android:paddingBottom="@dimen/padding_vs"
        android:text="remark"
        android:textSize="@dimen/fontvs"
        android:textColor="@color/label_color"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/product_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>