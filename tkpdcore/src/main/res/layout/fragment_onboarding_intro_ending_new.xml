<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    android:orientation="vertical"
    android:gravity="bottom">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="sans-serif"
        android:layout_gravity="center"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="@dimen/onboarding_title_spacing"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="@dimen/onboarding_title"
        android:textStyle="bold"
        tools:text="Judul"
        tools:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="@dimen/onboarding_description_spacing"
        android:minLines="2"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="@dimen/onboarding_description"
        android:textStyle="normal"
        android:layout_gravity="center"
        android:gravity="center"
        tools:text="Deskripsi"
        tools:textColor="@color/colorPrimaryDark" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_nob_s"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_side_button_nob"
            android:layout_marginRight="@dimen/margin_side_button_nob"
            android:layout_marginBottom="@dimen/margin_bottom_button_nob">

            <TextView
                android:id="@+id/button_start_now"
                android:layout_width="match_parent"
                android:lines="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_margin="32dp"
                android:gravity="center"
                android:padding="@dimen/padding_button_nob"
                android:text="@string/onboarding_start_now"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="sans-serif-medium"
                tools:layout_width="match_parent"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/dummy_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/next_ic"
            tools:src="@drawable/circle"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/footer"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:layout_marginBottom="@dimen/margin_med"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="@color/colorAccent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>