<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/shop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/overflow_selected"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small" >

        <ImageView
            android:id="@+id/shop_avatar"
            android:layout_width="@dimen/shop_ava"
            android:layout_height="@dimen/shop_ava"
            android:layout_marginRight="@dimen/margin_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_vs"
                android:paddingTop="@dimen/margin_vs" >

                <TextView
                    android:id="@+id/etalase"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_small"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/prods"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_toRightOf="@id/etalase"
                    android:textSize="@dimen/fontvs" />

                <TextView
                    android:id="@+id/unfav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/btn_shop"
                    android:gravity="center"
                    android:padding="@dimen/padding_vs"
                    android:text="@string/title_delete"
                    android:textSize="@dimen/fontvs" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>