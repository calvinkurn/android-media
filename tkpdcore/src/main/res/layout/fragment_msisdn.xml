<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white"
    tools:context=".msisdn.activity.MsisdnActivity">

    <TextView android:id="@+id/save_but" android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height" android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small" android:background="@drawable/btn_buy"
        android:gravity="center" android:text="@string/title_confirm_otp" android:textAllCaps="true"
        android:textColor="@color/white" android:textSize="@dimen/fontvs" android:textStyle="bold"
        android:visibility="gone" />

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_above="@id/save_but" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:background="@color/white">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/white" android:gravity="center_horizontal"
            android:orientation="vertical" android:padding="@dimen/padding_med">

            <ProgressBar android:id="@+id/progress" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:visibility="gone" />

            <LinearLayout android:id="@+id/view_error" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_med"
                android:background="@color/red_200" android:orientation="vertical"
                android:padding="@dimen/padding_small" android:visibility="gone">

                <TextView android:id="@+id/error_title" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center"
                    android:text="@string/title_error_security" android:textStyle="bold" />

                <TextView android:id="@+id/error_msg" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center"
                    android:text="@string/msg_error_security" />

            </LinearLayout>

            <LinearLayout android:id="@+id/view_otp" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical"
                android:visibility="visible" tools:visibility="visible">

                <TextView android:id="@+id/title_verify_phone" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/title_security_question"
                    android:textColor="@color/body_text_5_inverse" android:textSize="@dimen/fontvl"
                    android:textStyle="bold" />

                <TextView android:id="@+id/title_security" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/verify_phone_now" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="100" android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/phone_number_wrapper" android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_med"
                        android:layout_marginTop="@dimen/margin_small"
                        android:hint="@string/phone_number_otp">

                        <EditText android:id="@+id/phone_number" android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:enabled="false"
                            android:gravity="center" android:inputType="phone" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView android:id="@+id/title_otp" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:layout_marginTop="@dimen/margin_med" android:text="@string/title_otp"
                    android:visibility="gone" tools:visibility="visible" />


                <com.tkpd.library.ui.widget.PinEntryEditText android:id="@+id/input_otp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:layout_marginLeft="@dimen/margin_vl"
                    android:layout_marginRight="@dimen/margin_vl" android:background="@null"
                    android:cursorVisible="false" android:digits="1234567890"
                    android:imeOptions="actionDone" android:inputType="number" android:maxLength="6"
                    android:paddingBottom="@dimen/margin_small" android:textIsSelectable="false"
                    android:textSize="20sp" android:visibility="gone"
                    app:pinLineColors="@color/pin_line_colors" tools:visibility="visible" />

                <TextView android:id="@+id/title_send_otp" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:layout_marginTop="@dimen/margin_large" android:gravity="center"
                    android:text="@string/title_try_again_in" android:textStyle="italic"
                    android:visibility="gone" tools:visibility="visible" />

                <TextView android:id="@+id/send_otp" android:layout_width="@dimen/button_otp"
                    android:layout_height="@dimen/margin_vl"
                    android:layout_gravity="center_horizontal" android:layout_weight="0.3"
                    android:background="@drawable/btn_share_transaparent" android:gravity="center"
                    android:text="@string/send_otp"
                    android:textColor="@color/tkpd_green_onboarding" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>