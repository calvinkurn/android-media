<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/burger_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/toggle_but_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_below="@+id/count_notif"
                    android:layout_gravity="center"
                    android:contentDescription=""
                    android:padding="2dp"
                    android:tint="@color/warm_grey"
                    app:srcCompat="@drawable/ic_new_drawer" />

                <TextView
                    android:id="@+id/toggle_count_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/green_circle"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/toggle_notif"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignEnd="@+id/toggle_but_ab"
                    android:layout_alignRight="@+id/toggle_but_ab"
                    android:layout_alignTop="@+id/toggle_but_ab"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:background="@drawable/red_circle_small"
                    android:visibility="gone"

                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_magnifier"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:hint="@string/cari_produk_atau_toko"
                android:textColorHint="@color/black_38"
                android:padding="5dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>