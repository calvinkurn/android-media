<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_shipping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/cards_ui_selected"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:layout_marginRight="@dimen/margin_small"
        app:srcCompat="@drawable/remove" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:orientation="vertical"
        android:paddingRight="@dimen/padding_small">

        <TextView
            android:id="@+id/invoice_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXX991823POJK"
            android:textColor="@color/href_link"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_order_label"
            android:layout_weight="0.70"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:text="15 April 2014"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fontvs"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bounty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.30"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Rp.12000"
            android:textSize="@dimen/fonts"
            android:visibility="gone" />

        <TextView
            android:id="@+id/last_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deadline"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Last status: asdamsda as masmd asd ams asdasda masdasda masdasdas"
            android:textSize="@dimen/fontvs" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deadline_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".40"
        android:background="@drawable/deadline_red"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text__response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/padding_small"
            android:text="Selesai"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/deadline_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_small"
            android:text="12 Mei 2014"
            android:textColor="@color/black"
            android:textSize="@dimen/fontvs" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/but_overflow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/overflow_selected"
        android:gravity="right">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_new_action_overflow_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/manage_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/edit_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="0.50"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_edit_ref"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/track_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_track"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>