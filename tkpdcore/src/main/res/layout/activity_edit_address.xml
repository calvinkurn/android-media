<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/container"
        android:orientation="vertical" >

        <!-- cards yang tengah -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_shipping_dest"
                android:textColor="@color/time_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="#EEEEEE"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/title_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/filter_sort_h"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/choose_address_but"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:layout_weight=".50"
                    android:background="@drawable/btn_shop"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/title_choose_address"
                    android:textColor="@color/label_color" />

                <TextView
                    android:id="@+id/add_address_but"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".50"
                    android:background="@drawable/btn_shop"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/title_new_address"
                    android:textColor="@color/label_color" />
            </LinearLayout>
        </LinearLayout>
        <!-- ujung cards yang tengah -->


        <!-- cards yang bawah yang ada spinner 2 buah -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_shipping_agency"
                android:textColor="@color/label_color" />

            <Spinner
                android:id="@+id/agency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/title_service_type"
                android:textColor="@color/label_color" />

            <Spinner
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <!-- ujung cards yang bawah yang ada spinner 2 buah -->

        <!-- MAP -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small"
            android:id="@+id/layout_field_location"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_delivery_location_cart"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fonts" />

            <RelativeLayout
                android:id="@+id/layout_value_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_marginBottom="@dimen/margin_small">

                <ImageView
                    android:id="@+id/icon_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_icon_market_toped" />

                <ImageView
                    android:id="@+id/layout_right"
                    android:layout_width="@dimen/img_thumb_s"
                    android:layout_height="@dimen/img_thumb_s"
                    android:src="@drawable/chevron_thin_right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

                <EditText
                    android:id="@+id/value_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/layout_right"
                    android:layout_toStartOf="@id/layout_right"
                    android:layout_toRightOf="@id/icon_map"
                    android:layout_toEndOf="@id/icon_map"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:layout_alignTop="@id/icon_map"
                    android:layout_alignBottom="@id/icon_map"
                    android:ellipsize="end"
                    android:textSize="@dimen/font_small"
                    android:focusable="false"
                    android:clickable="true"
                    android:hint="@string/choose_location"/>

            </RelativeLayout>


        </LinearLayout>

        <!-- end MAP -->

        <!-- bagian perhitungan harga -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_small" >

            <ProgressBar
                android:id="@+id/loading_calculate"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_m"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- basically dibagi 3 bagian dan tiap bagian dipisah jadi 2 horizontal, 1 buat title nya (ex: Harga Barang RP) 1 lagi buat value nya -->

            <RelativeLayout
                android:id="@+id/shipping_price_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/title_shipping_cost"
                    android:textColor="@color/time_color" />

                <TextView
                    android:id="@+id/shipping_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
        <!-- ujung bagian perhitungan harga -->

        <TextView
            android:id="@+id/buy_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_save"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>