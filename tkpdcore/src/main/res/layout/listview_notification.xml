<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vs"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/padding_vs"
        android:text="Penjualan"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:visibility="gone" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cards_ui_selected"
        android:orientation="horizontal"
        android:padding="0dp" >

        <TextView
            android:id="@+id/title_notif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_weight=".90"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:text="Konfirmasi Pengiriman"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fonts" >
        </TextView>
        

        <TextView
            android:id="@+id/counter_notif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_weight=".08"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_vs"
            android:paddingTop="@dimen/padding_vs"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>