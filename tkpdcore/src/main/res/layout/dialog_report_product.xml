<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laporkan Produk"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/black" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#000000"
                android:layout_marginBottom="@dimen/margin_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_vs"
                android:text="Jenis Laporan"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/grey_700"/>

            <TextView
                android:id="@+id/dummy_spinner"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_vs"
                android:text="Pilih kategori"/>

            <Spinner
                android:id="@+id/report_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/line_spinner"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_height="1.5dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/error_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_vs"
                android:visibility="gone"
                android:text="Jenis Laporan"
                android:textSize="@dimen/fontvs"
                android:textColor="@color/red_500"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:hint="Deskripsi"
                app:hintTextAppearance="@style/StyledTilEditTextFloatingLabel">

                <EditText
                    android:id="@+id/report_desc"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/redirect_text"
                android:layout_margin="@dimen/margin_vs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_below="@+id/scrollView"
        android:visibility="gone">

        <TextView
            android:id="@+id/cancel_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_vs"
            android:layout_marginRight="@dimen/margin_vs"
            android:text="@string/title_cancel"
            android:textStyle="bold"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:padding="@dimen/padding_vs"
            android:text="@string/action_report"
            android:textStyle="bold"
            android:textAllCaps="true" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_centerHorizontal="true" />
</RelativeLayout>