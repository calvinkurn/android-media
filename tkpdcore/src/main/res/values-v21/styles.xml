<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Use this only for AppBarLayout -->
    <style name="Theme.Tokopedia3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/tkpd_dark_green</item>
        <item name="android:colorAccent">@color/tkpd_dark_green</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:spinnerItemStyle">?android:attr/spinnerItemStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Tokopedia</item>
        <!--<item name="android:dropDownListViewStyle">@style/DropDownListView.Tokopedia</item>-->
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Tokopedia</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Tokopedia</item>
        <item name="actionModeBackground">@color/tkpd_main_green</item>
        <item name="android:actionModeBackground">@color/tkpd_main_green</item>
        <item name="android:actionModeSplitBackground">@color/green_500</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tokopedia
        </item>
        <item name="android:windowBackground">@color/tkpd_bg_color_grery</item>
        <item name="android:colorBackground">@color/tkpd_bg_color_grery</item>
        <!-- Remove shadow from action bar -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>
        <item name="android:homeAsUpIndicator">@drawable/ic_new_action_back</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:colorPrimary">@color/tkpd_dark_green</item>
        <item name="android:statusBarColor">@color/green_500</item>
        <!--<item name="android:alertDialogTheme">@style/CoolDialog2</item>-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionModeStyle">@style/CustomActionMode</item>
        <item name="actionModeStyle">@style/CustomActionMode</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <style name="CoolDialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

