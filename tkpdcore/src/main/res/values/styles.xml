<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tkpd_green_header</item>
        <item name="colorPrimaryDark">@color/green_600</item>
        <item name="colorAccent">@color/tkpd_green_header</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Tokopedia2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.Tokopedia2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- RADITYA -->
    <!-- This for base Style -->
    <style name="Setting">

    </style>

    <!-- TextView Style -->
    <style name="Setting.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="textColorError">@color/text_error</item>
    </style>

    <style name="Setting.ImageView">
        <item name="android:layout_width">@dimen/med_dp</item>
        <item name="android:layout_height">@dimen/med_dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Setting.HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_med</item>
        <item name="android:background">@color/grey_400</item>
    </style>

    <style name="option_button" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#FFFFFF</item>
    </style>

    <style name="invoice_number" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="text_bold" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ic_close_24dp</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="searchIcon">@drawable/ic_new_action_search</item>
        <item name="android:queryHint">Search</item>
    </style>

    <style name="green_button" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorGreen</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- -->

    <style name="FAB">

    </style>

    <style name="FAB.Filter">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/grey_400</item>
    </style>

    <!-- Base application theme. -->
    <style name="ShopAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorError">@color/text_error</item>
    </style>

    <style name="AppTheme.Button.BukaToko" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MiniFabLayout">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/fab_menu_item_margin_top</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MiniFab">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/mini_fab_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/mini_fab_margin_left</item>
        <item name="android:layout_marginRight">@dimen/mini_fab_margin_right</item>
        <item name="android:layout_marginTop">@dimen/mini_fab_margin_top</item>
        <item name="fabSize">mini</item>
        <item name="paddingEnd">0dp</item>
        <item name="paddingStart">0dp</item>
    </style>

    <style name="TitleCardView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingTop">4dp</item>
    </style>

    <style name="TitleView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="StyledTilEditTextFloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>


    <style name="GreenButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/green_400</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="OrangeButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/orange_900</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="TabBarFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/greyish_brown_70</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/white</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/tkpd_dark_green</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>

    </style>

    <style name="ButtonWhite" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/border_button_rounded</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/border_green</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="searchTextHiglight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@color/white</item>
        <item name="queryBackground">@color/white</item>
    </style>

    <style name="checkBoxStyleCore" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/tkpd_main_green</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="checkBoxStyleSeller" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/tkpd_main_green</item>
        <item name="android:textColorSecondary">@color/black_12</item>
    </style>


    <style name="MediumText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Small.RatingBar" parent="style/Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/tkpd_rating_bar</item>
    </style>

    <style name="Medium.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/app_rating_bar</item>
    </style>

</resources>