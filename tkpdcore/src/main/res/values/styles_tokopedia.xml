    <style name="CustomTabPageIndicator">
        <item name="android:background">@drawable/apptheme_tab_indicator_holo</item>
        <item name="android:textColor">@color/color_tab_page</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/fontvs</item>
        <item name="android:height">50dp</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

