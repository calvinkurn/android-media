<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.digital">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".cart.activity.CartDigitalActivity"
            android:label="@string/title_activity_cart_digital_module"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".product.activity.DigitalProductActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".cart.activity.OtpVerificationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cart.activity.InstantCheckoutActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".product.activity.DigitalChooserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".product.activity.DigitalWebActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".widget.activity.DigitalCategoryListActivity"
            android:label="@string/title_activity_category_list_digital_module"
            android:screenOrientation="portrait" />

        <service
            android:name=".product.service.USSDAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/config_accessibility_service" />
        </service>

        <activity android:name=".product.activity.DigitalUssdActivity"></activity>
    </application>

</manifest>
