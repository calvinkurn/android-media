<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools">

    <style name="DigitalWebView" parent="@style/Theme.Tokopedia3">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="CardViewDigital" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TextSubTitleSmall">
        <item name="android:textColor">@color/digital_item_sub_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextSubTitleMedium">
        <item name="android:textColor">@color/digital_item_sub_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSubTitleLarge">
        <item name="android:textColor">@color/digital_item_sub_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSubTitleXLarge">
        <item name="android:textColor">@color/digital_item_sub_title</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSubTitleXXLarge">
        <item name="android:textColor">@color/digital_item_sub_title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextTitleSmall">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextTitleMedium">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitleLarge">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitleXLarge">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextTitleXXLarge">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DigitalButtonBuy">
        <item name="android:background">@drawable/digital_bg_buy_button_orange</item>
        <item name="android:layout_height">@dimen/digital_height_60</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>