<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CardViewDigital" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TextSubTitleSmall">
        <item name="android:textColor">@color/digital_item_sub_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextSubTitleMedium">
        <item name="android:textColor">@color/digital_item_sub_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSubTitleLarge">
        <item name="android:textColor">@color/digital_item_sub_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitleSmall">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextTitleMedium">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitleLarge">
        <item name="android:textColor">@color/digital_item_title</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>