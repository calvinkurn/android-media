<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rg_product_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/tv_label_client_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@null"
        android:paddingStart="@dimen/padding_vvs"
        android:text="@string/prompt_phone" />

    <com.tokopedia.digital.product.compoundview.ClientNumberInputView
        android:id="@+id/et_client_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_label_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@null"
        android:paddingStart="@dimen/padding_vvs"
        android:text="@string/title_nominal"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/tv_label_spinner_1"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:spinnerMode="dialog"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_error_spinner_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@null"
        android:paddingStart="@dimen/padding_vvs"
        android:text="@string/title_empty_stock"
        android:textColor="@color/red_600"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/cb_instant_checkout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_weight="0.60"
        android:text="@string/instant_payment"
        android:textColor="@color/checkbox_text"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@drawable/btn_buy"
        android:gravity="center"
        android:text="@string/label_btn_buy_digital"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small"
        android:textStyle="bold" />
</LinearLayout>