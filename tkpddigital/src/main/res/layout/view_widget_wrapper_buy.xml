<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buy_wrapper_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/layout_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.60">

        <CheckBox
            android:id="@+id/buy_with_credit_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/label_instant_payment_digital"
            android:textColor="@color/checkbox_text"
            android:textSize="@dimen/fontvs" />

        <ImageView
            android:id="@+id/tooltip_instant_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@+id/buy_with_credit_checkbox"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/info_icon" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_weight="0.40"
        android:textAllCaps="false"
        android:minHeight="0dp"
        android:background="@drawable/btn_buy"
        android:text="@string/title_buy"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_gravity="right"
        android:textColor="@color/white" />

</LinearLayout>