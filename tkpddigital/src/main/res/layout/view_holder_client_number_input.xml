<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:background="@color/grey_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/fl_holder_input_client_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.88"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                tools:ignore="UselessLeaf" />

            <TextView
                android:id="@+id/tv_label_client_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/digital_voucher_notes"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                tools:text="@string/prompt_phone"
                tools:visibility="visible" />

            <!--<com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/wrapper_email"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_client_number">-->

                <AutoCompleteTextView
                    android:id="@+id/ac_client_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_label_client_number"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:nextFocusLeft="@id/pulsa_autocompleteview"
                    android:nextFocusUp="@id/pulsa_autocompleteview"
                    android:popupBackground="@color/white"
                    android:textColor="@color/digital_item_title"
                    android:textColorHint="@color/grey_400"
                    android:textSize="@dimen/fonts" />
            <!--</com.tokopedia.design.text.TkpdHintTextInputLayout>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ac_client_number"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_label_client_number"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pic_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/digital_height_width_25"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:contentDescription="@string/app_name"
                    android:paddingBottom="@dimen/digital_padding_5"
                    tools:src="@drawable/ic_close_24dp" />

                <Button
                    android:id="@+id/btn_clear_client_number"
                    android:layout_width="@dimen/digital_height_width_20"
                    android:layout_height="@dimen/digital_height_width_25"
                    android:layout_gravity="end|center_vertical"
                    android:background="@drawable/digital_bg_widget_close"
                    android:paddingBottom="@dimen/digital_padding_5" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.12"
            android:paddingBottom="@dimen/padding_vs"
            tools:visibility="visible">

            <Button
                android:id="@+id/btn_contact_picker"
                android:layout_width="@dimen/img_thumb_bit_small"
                android:layout_height="@dimen/img_thumb_bit_small"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="4dp"
                android:layout_marginStart="@dimen/margin_small"
                android:background="@drawable/ic_phonebook_widget" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_error_client_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/digital_padding_4"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@null"
        android:paddingStart="@dimen/padding_vvs"
        android:text="@string/title_empty_stock"
        android:textColor="@color/red_600"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>


