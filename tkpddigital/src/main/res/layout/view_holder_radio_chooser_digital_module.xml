<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:background="@color/grey_100">

    <TextView
        android:id="@+id/tv_label_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@null"
        android:paddingStart="@dimen/dp_3"
        android:text="@string/prompt_phone"
        android:visibility="gone"
        tools:visibility="visible"/>

    <RadioGroup
        android:id="@+id/rg_chooser_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/tv_error_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@null"
        android:paddingStart="@dimen/dp_3"
        android:text="@string/title_empty_stock"
        android:textColor="@color/red_600"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>