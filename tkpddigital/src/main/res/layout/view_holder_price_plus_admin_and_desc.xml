<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_small"
    android:background="@color/white">

    <TextView
        android:id="@+id/product_price_no_addition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ms"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/margin_ms"/>

    <TextView
        android:id="@+id/product_plain_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_vs"
        android:layout_marginBottom="@dimen/padding_vs"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"/>

    <TextView
        android:id="@+id/product_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding_vs"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:background="@color/digital_separator" />

</LinearLayout>