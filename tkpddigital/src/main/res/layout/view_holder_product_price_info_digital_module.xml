<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@null"
        android:paddingStart="@dimen/padding_vvs"
        android:textSize="@dimen/font_small"
        android:text="Harga" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_price_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/padding_vvs"
            android:paddingRight="@null"
            android:paddingStart="@dimen/padding_vvs"
            tools:text="Rp.100.000"
            android:textSize="@dimen/font_small"/>

        <TextView
            android:id="@+id/tv_price_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@null"
            android:paddingStart="@dimen/padding_small"
            tools:text="Rp.100.000"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/fontvvs"/>


    </LinearLayout>


</RelativeLayout>