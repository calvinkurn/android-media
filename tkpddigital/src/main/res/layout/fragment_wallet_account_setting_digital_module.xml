<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/digital_padding_20">

                <TextView
                    android:id="@+id/tv_subtitle"
                    style="@style/TextSubTitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Anda dapat mengelola TokoCash dengan akun Tokopedia melalui halaman ini."/>


                <com.tokopedia.design.text.TkpdTextInputLayout
                    style="@style/TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.VerySmall"
                    app:success_focus_color="@color/font_black_secondary_54"
                    app:success_leave_color="@color/font_black_secondary_54">

                    <android.support.design.widget.TextInputEditText
                        style="@style/TextSubTitleMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:hint="Nama"
                        tools:text="Angga Prasetiyo"/>
                </com.tokopedia.design.text.TkpdTextInputLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.tokopedia.core.customwidget.SwipeToRefresh>
</android.support.design.widget.CoordinatorLayout>