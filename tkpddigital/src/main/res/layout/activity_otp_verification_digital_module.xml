<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/holder_bottom"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_large">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_large"
                android:text="Verifikasi Nomor Anda"
                android:textColor="@color/body_text_5_inverse"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_med"
                android:textColor="@color/body_text_5_inverse"
                android:textSize="@dimen/font_small"
                tools:text="Kode verifikasi telah dikirimkan ke nomor 08788574394534"/>

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_med"
                android:text="Masukkan Kode Verifikasi"
                android:textColor="@color/body_text_5_inverse"
                android:textSize="@dimen/font_small"/>

            <com.tkpd.library.ui.widget.PinEntryEditText
                android:id="@+id/et_input_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginLeft="@dimen/margin_vl"
                android:layout_marginRight="@dimen/margin_vl"
                android:background="@null"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:paddingBottom="@dimen/margin_small"
                android:textIsSelectable="false"
                android:textSize="20sp"
                android:visibility="visible"
                app:pinLineColors="@color/tkpd_main_green"/>

            <TextView
                android:id="@+id/tv_pin_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_med"
                android:textColor="@color/tkpd_dark_red"
                android:textSize="@dimen/fontvs"
                tools:text="Kode verifikasi salah"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/holder_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_large">

            <TextView
                android:id="@+id/btn_verify_otp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/bg_grey_border_black"
                android:gravity="center"
                android:text="@string/title_confirm_otp"
                android:textAllCaps="true"
                android:textColor="@color/body_text_5_inverse"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_request_otp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:background="@drawable/btn_share_transaparent"
                android:gravity="center"
                android:text="Kirim Ulang Kode Verifikasi"
                android:textAllCaps="true"
                android:textColor="@color/tkpd_main_green"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:text="atau"
                    android:textSize="@dimen/font_small"/>

                <TextView
                    android:id="@+id/btn_request_otp_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:text="lewat telepon"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/font_small"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_main_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"/>

