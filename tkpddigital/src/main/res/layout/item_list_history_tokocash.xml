<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_item_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/padding_detail"
        android:paddingRight="@dimen/padding_detail"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/icon_item_history"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/padding_detail"
            app:srcCompat="@drawable/ic_tokocash_icon" />

        <TextView
            android:id="@+id/title_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/price_item_history"
            android:layout_toRightOf="@+id/icon_item_history"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/black_70"
            android:textSize="@dimen/fonts"
            android:layout_margin="@dimen/dp_5"
            tools:text="Admin Fee" />

        <TextView
            android:id="@+id/price_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon_item_history"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/icon_item_history"
            android:layout_marginLeft="@dimen/padding_detail"
            android:gravity="center_vertical"
            android:textColor="@color/black_70"
            android:textSize="@dimen/fonts"
            android:textStyle="bold"
            tools:text="- Rp 150.000" />

        <TextView
            android:id="@+id/desc_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title_item_history"
            android:layout_below="@+id/title_item_history"
            android:layout_toLeftOf="@+id/price_item_history"
            android:layout_toStartOf="@+id/price_item_history"
            android:textColor="@color/black_38"
            android:textSize="@dimen/fontvs"
            tools:text="Transfer to Bank" />

        <TextView
            android:id="@+id/date_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title_item_history"
            android:layout_below="@+id/desc_item_history"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/black_54"
            android:textSize="@dimen/fontvs"
            tools:text="20 Agustus 2017" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300" />


</LinearLayout>