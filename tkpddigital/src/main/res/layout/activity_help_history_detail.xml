<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_detail"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_sm"
            android:text="@string/title_spinner_help_category"
            android:textColor="@color/digital_voucher_notes"
            android:textSize="@dimen/fontvs" />

        <Spinner
            android:id="@+id/spinner_history_help"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/title_detail_help_category"
            android:textColor="@color/digital_voucher_notes"
            android:textSize="@dimen/fontvs" />

        <EditText
            android:id="@+id/history_help_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:textSize="@dimen/font_medium"
            android:hint="@string/hint_detail_help_category"/>

    </LinearLayout>

    <Button
        android:id="@+id/cancel_send_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_login_height"
        android:layout_centerHorizontal="true"
        android:background="@drawable/digital_white_grey_button_more_rounded"
        android:paddingBottom="@dimen/digital_padding_12"
        android:paddingLeft="@dimen/large_dp"
        android:paddingRight="@dimen/large_dp"
        android:paddingTop="@dimen/digital_padding_12"
        android:text="@string/button_label_cancel"
        android:textAllCaps="false"
        android:textColor="@color/digital_voucher"
        android:textSize="@dimen/text_size_s_medium"
        android:layout_above="@+id/send_help"/>

    <Button
        android:id="@+id/send_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_login_height"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/digital_send_help_selector"
        android:minHeight="0dp"
        android:text="@string/button_label_send_help"
        android:textAllCaps="false"
        android:textColor="@color/digital_voucher_notes"
        android:textSize="@dimen/fonts"
        android:layout_alignParentBottom="true"
        android:enabled="false"/>

</RelativeLayout>