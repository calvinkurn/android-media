<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/separator"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_price"
            style="@style/TextSubTitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/digital_padding_2"
            android:paddingLeft="@dimen/digital_padding_8"
            android:paddingRight="@dimen/digital_padding_8"
            tools:text="Rp 1" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextTitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/digital_padding_8"
            android:paddingRight="@dimen/digital_padding_8"
            android:paddingTop="@dimen/digital_padding_2"
            android:textSize="@dimen/font_small"
            tools:text="Extra Combo 6GB" />
    </LinearLayout>


    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/digital_separator" />

</RelativeLayout>