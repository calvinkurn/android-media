<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.digital.product.fragment.DigitalUssdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_detail">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:maxLines="1"
                    android:padding="@dimen/padding_vs"
                    android:text="Saldo Anda"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:gravity="right"
                    android:maxLines="1"
                    android:padding="@dimen/padding_vs"
                    android:text="1232"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:maxLines="1"
                    android:padding="@dimen/padding_vs"
                    android:text="No. Handphone"
                    android:textSize="@dimen/fonts" />

                <RelativeLayout
                    android:id="@+id/fl_input_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_sm"
                    android:visibility="visible">

                    <AutoCompleteTextView
                        android:id="@+id/ac_number"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                       android:layout_alignParentRight="true"
                        android:popupBackground="@color/white"
                        android:textColor="@color/green_btn"
                        android:textColorHint="@color/grey_400"
                        android:textSize="@dimen/fonts" />

                    <LinearLayout
                        android:id="@+id/ll_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end|center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_pic_operator"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/digital_height_width_25"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/margin_vs"
                            android:layout_marginRight="@dimen/margin_vs"
                            android:contentDescription="@string/app_name"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/btn_clear_number"
                            android:layout_width="@dimen/digital_height_width_25"
                            android:layout_height="@dimen/digital_height_width_25"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:src="@drawable/ic_close_24dp"
                            android:tint="@color/green_btn" />

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:gravity="right"
                    android:maxLines="1"
                    android:padding="@dimen/padding_vs"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts"
                    android:visibility="gone" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_error_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@null"
                android:paddingLeft="@dimen/padding_vvs"
                android:paddingRight="@null"
                android:paddingStart="@dimen/padding_vvs"
                android:textColor="@color/red_600"
                android:textSize="@dimen/fontvs"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:maxLines="1"
                    android:padding="@dimen/padding_vs"
                    android:text="Operator"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/tv_operator_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:gravity="right"
                    android:maxLines="1"
                    android:padding="@dimen/padding_vs"
                    android:text="SIMPATHI"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:padding="@dimen/padding_vs"
                android:text="@string/msg_ussd_sim_balance"
                android:textSize="@dimen/fonts" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:animateLayoutChanges="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_detail">

            <LinearLayout
                android:id="@+id/holder_chooser_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/holder_price_info_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <CheckBox
                android:id="@+id/cb_instant_checkout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/digital_padding_16"
                android:layout_weight="0.60"
                android:text="@string/label_instant_payment_digital"
                android:textColor="@color/checkbox_text"
                android:textSize="@dimen/fontvs"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/btn_buy_digital"
                style="@style/DigitalButtonBuy"
                android:layout_marginBottom="@dimen/padding_med"
                android:layout_marginTop="@dimen/digital_padding_28"
                android:text="@string/label_btn_buy_digital" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
