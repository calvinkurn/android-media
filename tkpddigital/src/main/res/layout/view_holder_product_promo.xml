<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_small">

    <TextView
        android:id="@+id/product_promo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Promo title"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"/>

    <TextView
        android:id="@+id/product_promo_tag"
        android:textColor="@color/orange_900"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginTop="@dimen/padding_vs"
        tools:text="Promo tag"
        android:layout_below="@+id/product_promo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/product_promo_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_promo_tag"
        tools:text="Promo description"
        android:textColor="@color/grey_600"
        android:layout_marginBottom="@dimen/padding_vs"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_marginTop="@dimen/padding_vs"/>

    <LinearLayout
        android:id="@+id/price_promo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_promo_description"
        android:layout_marginBottom="@dimen/padding_vs"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_promo_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp. 22.500"/>

        <TextView
            android:id="@+id/product_promo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            tools:text="Rp. 20.000"
            android:textColor="@color/orange_900"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/price_promo_layout"
        android:layout_marginTop="@dimen/padding_vs"
        android:background="@color/digital_separator"/>

    <TextView
        android:id="@+id/empty_stock_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/separator"
        android:layout_alignBaseline="@+id/product_promo_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@color/grey_400"
        android:paddingBottom="@dimen/padding_vvs"
        android:paddingEnd="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:paddingStart="@dimen/padding_small"
        android:paddingTop="@dimen/padding_vvs"
        android:text="@string/title_empty_stock"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible"/>

</RelativeLayout>