<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@null"
        android:paddingStart="@dimen/padding_vvs"
        android:text="@string/prompt_phone" />

    <TextView
        android:id="@+id/tv_operator_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_vs"
        android:textColor="@color/digital_voucher"
        android:textSize="@dimen/font_medium"
        tools:text="Extra Combo 6GB" />

    <TextView
        android:id="@+id/tv_error_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@null"
        android:paddingStart="@dimen/padding_vvs"
        android:text="@string/title_empty_stock"
        android:textColor="@color/red_600"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>