<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_detail">

    <TextView
        android:id="@+id/tv_title_category"
        style="@style/TextTitleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/digital_padding_10"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@null"
        android:paddingStart="@dimen/padding_vvs"
        tools:text="Beli Pulsa" />

    <LinearLayout
        android:id="@+id/holder_chooser_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />


    <LinearLayout
        android:id="@+id/holder_client_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />


    <LinearLayout
        android:id="@+id/holder_chooser_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/holder_additional_info_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/holder_price_info_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <CheckBox
        android:id="@+id/cb_instant_checkout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_weight="0.60"
        android:text="@string/instant_payment"
        android:textColor="@color/checkbox_text"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/btn_buy_digital"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@drawable/btn_buy"
        android:gravity="center"
        android:text="@string/label_btn_buy_digital"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small"
        android:textStyle="bold" />
</LinearLayout>