<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/digital_padding_16">

    <LinearLayout
        android:id="@+id/ll_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ussd_titile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/padding_vvs"
            android:paddingRight="@null"
            android:textStyle="bold"
            android:paddingStart="@dimen/padding_vvs"
            android:text="@string/message_ussd_title"
            android:textColor="@color/digital_item_title"
            android:textSize="@dimen/font_medium" />

        <TextView
            android:id="@+id/tv_ussd_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/padding_vvs"
            android:paddingRight="@null"
            android:paddingStart="@dimen/padding_vvs"
            android:text="@string/msg_ussd_sim_number"
            android:textColor="@color/digital_item_sub_title"
            android:textSize="@dimen/font_small" />
        <TextView
            android:id="@+id/tv_label_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@null"
            android:layout_marginTop="@dimen/margin_med"
            android:paddingLeft="@dimen/padding_vvs"
            android:paddingRight="@null"
            android:paddingStart="@dimen/padding_vvs"
            android:text="@string/title_handphone_number"
            android:textColor="@color/digital_voucher_notes"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/fl_input_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <AutoCompleteTextView
                android:id="@+id/ac_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:popupBackground="@color/white"
                android:textColor="@color/green_btn"
                android:textColorHint="@color/grey_400"
                android:textSize="@dimen/fonts" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pic_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/digital_height_width_25"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/btn_clear_number"
                    android:layout_width="@dimen/digital_height_width_25"
                    android:layout_height="@dimen/digital_height_width_25"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:src="@drawable/ic_close_24dp"
                    android:tint="@color/green_btn" />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_error_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@null"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@null"
        android:paddingStart="@dimen/padding_vvs"
        android:textColor="@color/red_600"
        android:textSize="@dimen/fontvs"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/margin_sm"
        android:baselineAligned="false"
        android:descendantFocusability="beforeDescendants"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_large"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/padding_vvs"
            android:paddingRight="@null"
            android:paddingStart="@dimen/padding_vvs"
            android:clickable="true"
            android:text="Batal"
            android:textColor="@color/green_btn"
            android:textSize="@dimen/font_medium" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/padding_vvs"
            android:paddingRight="@null"
            android:clickable="true"
            android:text="Ok"
            android:textColor="@color/green_btn"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>
</LinearLayout>