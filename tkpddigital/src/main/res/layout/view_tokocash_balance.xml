<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/CardViewDigital"
        android:layout_marginBottom="@dimen/margin_sm"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        android:layout_marginTop="@dimen/margin_vs"
        app:cardCornerRadius="@dimen/padding_vvs"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_balance_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableLeft="@drawable/ic_tokocash_icon"
                android:drawablePadding="@dimen/padding_vs"
                android:gravity="center_vertical"
                android:text="TokoCash Balance" />

            <TextView
                android:id="@+id/balance_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_balance_tokocash"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="Rp. 0"
                android:textSize="30sp" />


            <RelativeLayout
                android:id="@+id/layout_hold_balance"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/balance_tokocash"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:visibility="visible">

                <View
                    android:id="@+id/separator1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@color/grey_300" />

                <TextView
                    android:id="@+id/title_hold_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator1"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:layout_centerHorizontal="true"
                    android:text="Dana Tertahan"
                    android:textSize="@dimen/fontvs" />

                <ImageView
                    android:id="@+id/tooltip_tokocash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator1"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_toRightOf="@+id/title_hold_balance"
                    android:src="@drawable/info_icon" />

                <TextView
                    android:id="@+id/hold_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_hold_balance"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:text="Rp 0"
                    android:textSize="@dimen/font_medium" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>