<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout style="@style/LabelLayout.BorderBottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_word"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/top_ads_keyword_add_keyword">
                <EditText
                    android:id="@+id/edit_text_word"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLength="@integer/top_ads_keyword_max_length"
                    android:paddingRight="50dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ 0123456789"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/button_add_keyword"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:srcCompat="@drawable/selector_ic_add"
                android:layout_marginTop="16dp"
                android:layout_marginRight="-8dp"
                android:padding="8dp"
                android:layout_gravity="top|end"/>
        </FrameLayout>

        <com.tokopedia.topads.keyword.view.widget.KeywordRecyclerView
            android:id="@+id/keyword_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout style="@style/LabelLayout.BorderTop"
        android:orientation="vertical"
        android:clickable="false"
        android:layout_marginTop="@dimen/margin_med"
        android:padding="0dp">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_keyword_current_and_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/top_ads_keywords_total_current_and_max"
            android:textColor="@color/font_black_secondary_54"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textSize="14sp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_keyword_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/top_ads_keywords_in_groups"
            android:textColor="@color/font_black_disabled_38"
            android:textSize="@dimen/fontvs"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
        <include layout="@layout/partial_separator_horizontal" />
        <Button
            android:id="@+id/button_save"
            style="@style/Button.Submit.Green"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/top_ads_keyword_save" />
    </LinearLayout>

</LinearLayout>