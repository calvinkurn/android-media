<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.seller.common.widget.LabelView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/label_top_ads_name"/>

    <include layout="@layout/partial_separator_horizontal"/>

    <com.tokopedia.seller.common.widget.LabelSwitch
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/topads_detail_padding_item"
        style="@style/LabelLayout"
        app:switch_enable="false"
        app:title="@string/label_top_ads_status"/>

</merge>