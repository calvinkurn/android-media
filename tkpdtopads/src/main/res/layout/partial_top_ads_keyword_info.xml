<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/view_group_keyword_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_rect_stroke_gray"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/margin_small"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_keyword_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/top_ads_keyword_phrase_match"
        style="@style/TextView.Title.Bold"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_keyword_desc"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        tools:text="@string/top_ads_keyword_phrase_match_positive_description"
        android:maxLines="4"
        style="@style/TextView.Small.BlackDisabled"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_keyword_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingTop="@dimen/margin_vs"
        tools:text="@string/top_ads_keyword_phrase_match_example"
        android:maxLines="4"
        style="@style/TextView.Small.BlackSecondary"/>
</LinearLayout>