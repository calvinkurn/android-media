<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.topads.dashboard.view.widget.TopAdsRadioExpandView
        android:id="@+id/view_radio_new_group"
        app:checked="true"
        app:radio_id="@+id/radio_promo_new_group"
        app:title_radio="@string/label_top_ads_create_promo_new_group"
        style="@style/TopAdsRadioExpandView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_new_group_name"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.VerySmall"
                style="@style/TextInputLayout">

                <EditText
                    android:id="@+id/input_new_group"
                    android:hint="@string/label_top_ads_group_name"
                    android:maxLength="70"
                    android:inputType="text"
                    android:singleLine="true"
                    style="@style/EditText.GreenHighlight"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:text="@string/label_top_ads_info_group_option_new"
                android:id="@+id/view_info_radio_new_group"
                style="@style/TextView.Micro.BlackSecondary" />
        </LinearLayout>
    </com.tokopedia.topads.dashboard.view.widget.TopAdsRadioExpandView>

</merge>