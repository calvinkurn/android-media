<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_cost"
        style="@style/TextView.SubHeadline.BlackSecondary"
        android:layout_marginBottom="@dimen/margin_med"
        android:text="@string/label_top_ads_budget"/>

    <RadioGroup
        android:id="@+id/radio_group_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TopAdsCustomRadioGroup">

        <RadioButton
            android:id="@+id/radio_button_budget_life_time"
            style="@style/RadioButton"
            android:checked="true"
            android:text="@string/label_top_ads_budget_lifetime"/>

        <RadioButton
            android:id="@+id/radio_button_budget_per_day"
            style="@style/RadioButton"
            android:text="@string/label_top_ads_budget_per_day"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/container_budget_per_day"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/partial_top_ads_input_promo_budget"/>

            <TextView
                android:id="@+id/info_limit_price"
                style="@style/TextView.Small.BlackSecondary"
                android:maxLines="3"
                android:text="@string/label_top_ads_limit_price_description"/>
        </LinearLayout>
    </RadioGroup>
</LinearLayout>