<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.tokopedia.tkpdpdp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".ProductInfoActivity"
            android:label="@string/title_activity_product_info"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProductYoutubeActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CourierActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WholesaleActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PreviewProductImageDetail"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoTitleBar.Fullscreen" />
        <activity
            android:name=".InstallmentActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".DescriptionActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>
