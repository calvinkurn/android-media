<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MediumTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Tokopedia3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_pdp_light</item>
        <item name="android:actionOverflowButtonStyle">@style/PdpOverflow</item>
    </style>

    <style name="FavButtonPDP" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:background">@drawable/selector_favorite_pdp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PdpOverflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_pdp_light</item>
    </style>

    <style name="GreenTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/tkpd_main_green</item>
        <item name="tabIndicatorColor">@color/tkpd_main_green</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>

</resources>