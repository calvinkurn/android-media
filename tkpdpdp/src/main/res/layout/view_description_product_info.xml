<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.tkpdpdp.customview.DescriptionTextView
            android:id="@id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descriptions"
            android:textColor="#464646"
            android:textIsSelectable="true"
            android:textSize="@dimen/fonts"
            android:autoLink="all"/>

    </LinearLayout>

    <ImageView
        android:id="@id/iv_toggle"
        android:layout_width="@dimen/tab_height"
        android:layout_height="@dimen/tab_height"
        android:layout_gravity="center"
        android:background="@drawable/overflow_selected"
        android:contentDescription="@string/image_product_desc"
        android:padding="@dimen/dp_10" />

</LinearLayout>