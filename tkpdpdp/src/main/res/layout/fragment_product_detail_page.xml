<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

            <com.tokopedia.tkpdpdp.customview.PictureView
                android:id="@+id/view_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:scrimAnimationDuration="50"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="none"
                android:orientation="vertical" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="top"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_gravity="fill_vertical"
        android:descendantFocusability="blocksDescendants"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/nested_scroll_pdp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/root_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:clickable="true"
            android:paddingBottom="?attr/actionBarSize"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_ticker_gtm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/bg_yellow_border_yelow"
                android:maxLines="3"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                tools:text="vhashkjalsla asbhdkashahs askjdhasjdhas asdbaksdlasd" />


            <com.tokopedia.tkpdpdp.customview.ErrorShopView
                android:id="@+id/view_error_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.tokopedia.tkpdpdp.customview.ErrorProductView
                android:id="@+id/view_error_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10" />

            <ProgressBar
                android:id="@+id/view_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <com.tokopedia.tkpdpdp.customview.HeaderInfoView
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.tokopedia.tkpdpdp.customview.ManageView
                android:id="@+id/view_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" />

            <com.tokopedia.tkpdpdp.customview.RatingTalkCourierView
                android:id="@+id/view_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.tokopedia.tkpdpdp.customview.PriceSimulationView
                android:id="@+id/view_price_simulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.tokopedia.tkpdpdp.customview.PromoWidgetView
                android:id="@+id/view_promo_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.tokopedia.tkpdpdp.customview.TransactionDetailView
                android:id="@+id/view_transaction_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tokopedia.tkpdpdp.customview.DetailInfoView
                android:id="@+id/view_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.tokopedia.tkpdpdp.customview.VideoDescriptionLayout
                android:id="@+id/video_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"/>

            <com.tokopedia.tkpdpdp.customview.ShopInfoViewV2
                android:id="@+id/view_shop_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.tokopedia.tkpdpdp.customview.MostHelpfulReviewView
                android:id="@+id/view_most_helpful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.tokopedia.tkpdpdp.customview.LatestTalkView
                android:id="@+id/view_latest_discussion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.tokopedia.tkpdpdp.customview.OtherProductsView
                android:id="@+id/view_other_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.tokopedia.tkpdpdp.customview.NewShopView
                android:id="@+id/view_new_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.tokopedia.tkpdpdp.customview.LastUpdateView
                android:id="@+id/view_last_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_20"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <com.tokopedia.tkpdpdp.customview.ButtonBuyView
        android:id="@+id/view_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_anchorGravity="bottom" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        app:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_wishlist"
        app:layout_anchor="@id/appbar"
        app:borderWidth="0dp"
        android:visibility="gone"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>