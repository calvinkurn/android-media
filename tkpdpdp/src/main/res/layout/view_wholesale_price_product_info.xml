<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/title_wholesale"
        android:textColor="#333333"
        android:textSize="@dimen/fontm"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- 1 title -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_6"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/title_quantity_ws"
                android:textColor="#868686"
                android:textSize="@dimen/fonts" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_7"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/title_price_ws"
                android:textColor="#868686"
                android:textSize="@dimen/fonts" />
        </TableRow>

        <!-- 2 row 1 -->

        <TableRow
            android:id="@+id/wholesale_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/qty_ws_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_8"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:textColor="#464646"
                android:textSize="@dimen/fonts" />

            <TextView
