<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include android:id="@+id/topbar" layout="@layout/simple_top_bar_layout" />

    <View
        android:id="@+id/topbar_shadow"
        android:layout_below="@id/topbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/top_bar_shadow" />

    <RelativeLayout
        android:id="@+id/all_kind_button_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <FrameLayout
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/button_save_grey">

            <TextView
                android:id="@+id/text_button_save_variant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/title_buy"
                android:textColor="@color/href_link_rev"
                android:textSize="@dimen/fonts"
                android:textStyle="bold" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/container_new_checkout_flow"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/action_button_cart"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_4"
                android:background="@drawable/white_button_rounded"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_new_checkout_cart"
                    />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/view_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:textSize="@dimen/sp_13"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/black_54"
                    android:text="@string/product_price"
                    />

                <TextView
                    android:id="@+id/text_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/deep_orange_500"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Rp50.000.000.000"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_button_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/orange_button_rounded"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_new_checkout_cart"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    />

                <TextView
                    android:id="@+id/new_text_button_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/href_link_rev"
                    android:lineSpacingExtra="6sp"
                    android:gravity="center"
                    tools:text="Beli"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/topbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/all_kind_button_buy">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">

            <include layout="@layout/variant_title_item"/>

            <View
                android:layout_below="@id/topbar"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/variant_shadow" />

            <TextView
                android:id="@+id/text_variant_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Small"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginLeft="@dimen/margin_sm"
                android:visibility="gone" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_sm"
                layout="@layout/layout_variant_activity_section_quantity"
                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingLeft="@dimen/padding_detail"
                android:paddingRight="@dimen/padding_detail" android:paddingBottom="@dimen/padding_detail">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_variant_option_level1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/size_text_variant"
                        android:textColor="@color/checkbox_text"/>

                    <TextView
                        android:id="@+id/selected_variant_level1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textStyle="bold"
                        android:textSize="@dimen/size_text_variant"
                        android:textColor="@color/black_70"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/sizechart_level1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textSize="@dimen/size_text_variant"
                        android:textColor="@color/medium_green"
                        android:text="Panduan Ukuran"
                        android:visibility="gone"/>


                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_variant_option_level1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="ltr"
                    android:layout_marginTop="@dimen/dp_15"/>

                <View
                    android:id="@+id/separator1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_line" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingLeft="@dimen/padding_detail"
                android:paddingRight="@dimen/padding_detail" android:paddingBottom="@dimen/padding_detail">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_variant_option_level2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/size_text_variant"
                        android:textColor="@color/checkbox_text"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/selected_variant_level2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textStyle="bold"
                        android:textSize="@dimen/size_text_variant"
                        android:textColor="@color/black_70"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/sizechart_level2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textSize="@dimen/size_text_variant"
                        android:textColor="@color/medium_green"
                        android:text="Panduan Ukuran"
                        android:visibility="gone"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_variant_option_level2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="ltr"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_15"/>

                <View
                    android:id="@+id/separator2" android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_line"
                    android:visibility="gone" />

            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_variant_activity_section_notes"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>