<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/view_attribute"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_shadow_bottom">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_10"
        android:background="@drawable/pdp_product_info_bg">

        <TextView
            android:id="@+id/tv_seen_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_dilihat"
            android:textColor="@color/pdp_text_sub_title_color"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="@+id/tv_success_rate_label"
            app:layout_constraintEnd_toStartOf="@+id/tv_success_rate_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_success_rate_label" />

        <TextView
            android:id="@+id/tv_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pdp_text_color"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_success_rate"
            app:layout_constraintEnd_toEndOf="@+id/tv_seen_label"
            app:layout_constraintStart_toStartOf="@+id/tv_seen_label"
            app:layout_constraintTop_toTopOf="@+id/tv_success_rate"
            tools:text="2,3 rb" />

        <TextView
            android:id="@+id/tv_success_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/label_transaksi_berhasil"
            android:textColor="@color/pdp_text_sub_title_color"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_success_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pdp_text_color"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_success_rate_label"
            app:layout_constraintStart_toStartOf="@+id/tv_success_rate_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_success_rate_label"
            tools:text="97.5% (123 produk)" />

        <TextView
            android:id="@+id/tv_wishlist_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/title_wishlist_pdp"
            android:textColor="@color/pdp_text_sub_title_color"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="@+id/tv_success_rate_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_success_rate_label"
            app:layout_constraintTop_toTopOf="@+id/tv_success_rate_label" />

        <ProgressBar
            android:id="@+id/progress_bar_wishlist_count"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/tv_success_rate"
            app:layout_constraintEnd_toEndOf="@+id/tv_wishlist_label"
            app:layout_constraintStart_toStartOf="@+id/tv_wishlist_label"
            app:layout_constraintTop_toTopOf="@+id/tv_success_rate" />

        <TextView
            android:id="@+id/tv_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pdp_text_color"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_success_rate"
            app:layout_constraintEnd_toEndOf="@+id/tv_wishlist_label"
            app:layout_constraintStart_toStartOf="@+id/tv_wishlist_label"
            app:layout_constraintTop_toTopOf="@+id/tv_success_rate"
            tools:text="234" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
