<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/container_mosthelpful"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/image_reviewer"
            android:layout_width="@dimen/img_thumb_m"
            android:layout_height="@dimen/img_thumb_m"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_10"
            android:contentDescription="@string/image_product_desc"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/image_reviewer"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_reviewer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_70"/>


            <TextView
                android:id="@+id/text_review_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontvs"
                android:textColor="@color/black_38"/>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/image_rating_review_pdp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|left"
                    android:contentDescription="@string/image_product_desc"
                    app:srcCompat="@drawable/ic_star_five" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_review"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/black_54"
                android:lines="4"
                tools:text="dsdadadnsohdoiasdosahdosahdosahdoishdlashdlashdsdalsdhlashdashdaohdsahdhsaodihsidoiashddsajddbsadsjbalbdjlsa"
                android:ellipsize="end"/>
            <android.support.v7.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rv_image"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:listitem="@layout/layout_image_review_item_most_helpful"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_10"
            app:srcCompat="@drawable/ic_quote"
            android:scaleType="fitXY"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>

