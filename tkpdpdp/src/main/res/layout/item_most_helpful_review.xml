<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/container_mosthelpful"
    android:layout_width="350dp"
    android:layout_height="240dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_reviewer"
            android:layout_width="@dimen/img_thumb_m"
            android:layout_height="@dimen/img_thumb_m"
            android:layout_marginLeft="@dimen/margin_sm"
            android:layout_marginTop="@dimen/margin_sm"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_small"
            android:contentDescription="@string/image_product_desc"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_sm"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_toRightOf="@id/image_reviewer"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_reviewer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/font_small"
                android:textColor="@color/black_70"/>


            <TextView
                android:id="@+id/text_review_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontvs"
                android:textColor="@color/black_38"/>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/image_rating_review_pdp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|left"
                    android:contentDescription="@string/image_product_desc"
                    android:src="@drawable/ic_star_five" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_review"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/black_54"
                android:maxLines="4"/>


        </LinearLayout>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_sm"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/group_12"
            android:scaleType="centerCrop" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

