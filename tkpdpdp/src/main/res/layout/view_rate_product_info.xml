<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/cards_ui_selected"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kualitas"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvs"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@id/tv_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@id/iv_quality"
                android:layout_width="@dimen/img_thumb_l"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_product_desc"
                app:srcCompat="@drawable/ic_star_five" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Akurasi"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvs"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@id/tv_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />


            <ImageView
                android:id="@id/iv_accuracy"
                android:layout_width="@dimen/img_thumb_l"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_product_desc"
                app:srcCompat="@drawable/ic_star_five" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
