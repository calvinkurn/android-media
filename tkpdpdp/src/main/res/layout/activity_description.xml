<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/simple_top_bar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/top_bar_shadow" />

        <com.tokopedia.tkpdpdp.customview.ProductVideoHorizontalScroll
            android:id="@id/product_video_horizontal_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_large" />

        <ScrollView
            android:id="@id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_video_horizontal_scroll"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_small"
            android:paddingBottom="@dimen/large_dp"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small">

            <com.tokopedia.tkpdpdp.customview.DescriptionTextView
                android:id="@id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/descriptions"
                android:textColor="@color/black_70"
                android:textIsSelectable="true"
                android:textSize="@dimen/fonts"
                android:autoLink="all" />

        </ScrollView>

    </RelativeLayout>

</LinearLayout>