<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/pdp_content_padding"
    android:paddingLeft="@dimen/pdp_content_padding"
    android:paddingRight="@dimen/pdp_content_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:text="@string/title_other_shop_product"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/pdp_title_text_size"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/white"
        android:measureAllChildren="false"
        android:scrollbarSize="3dp">

        <LinearLayout
            android:id="@id/l_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="visible">

            <include
                android:id="@+id/include_loading"
                layout="@layout/loader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>