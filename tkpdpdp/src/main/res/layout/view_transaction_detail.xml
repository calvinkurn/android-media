<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_5"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_seller_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/informasi_produk"
        android:textColor="@color/black_70"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_20"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                app:srcCompat="@drawable/ic_icon_shipping_pdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#8a000000"
                android:text="@string/title_sold" />

            <TextView
                android:id="@+id/text_sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/font_black_primary_70"
                android:gravity="center"
                android:text="10rb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                app:srcCompat="@drawable/ic_icon_view_pdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#8a000000"
                android:text="@string/title_seen" />

            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/font_black_primary_70"
                android:gravity="center"
                android:text="10rb" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
            <ProgressBar
                android:id="@+id/progress_bar_wishlist_count"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <LinearLayout
                android:id="@+id/view_wishlist_count"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    app:srcCompat="@drawable/ic_icon_wishlist_count_pdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#8a000000"
                    android:text="@string/title_wishlist_pdp" />

                <TextView
                    android:id="@+id/text_wishlist_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/font_black_primary_70"
                    android:text="999" />
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                app:srcCompat="@drawable/ic_icon_insurance_pdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#8a000000"
                android:text="@string/title_insurance" />

            <TextView
                android:id="@+id/text_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/font_black_primary_70"
                android:text="Optional" />

        </LinearLayout>

    </LinearLayout>

    <com.tokopedia.tkpdpdp.customview.FreeReturnView
        android:id="@+id/view_free_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10" />

</LinearLayout>