<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/ll_wrapper"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_small">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_sm"
        android:layout_marginTop="@dimen/margin_sm"
        android:text="@string/title_most_helpful"
        android:textColor="@color/black_70"
        android:textStyle="bold" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_review"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        android:layout_marginBottom="@dimen/margin_sm"
        android:visibility="visible" />

    <com.tkpd.library.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:fillColor="@color/tkpd_main_green"
        app:pageColor="@color/white"
        android:padding="@dimen/margin_vs"
        android:layout_marginBottom="@dimen/margin_vs"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/grey_100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_vs"
        android:padding="@dimen/padding_vs"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_all_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:text="@string/title_all_reviews"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/fontm" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="@dimen/margin_sm"
            android:layout_marginLeft="@dimen/margin_sm"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_arrow_right" />


    </LinearLayout>





</LinearLayout>