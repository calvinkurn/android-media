<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/ll_wrapper"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_small"
    android:paddingTop="@dimen/padding_small">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_sm"
        android:layout_marginTop="@dimen/margin_sm"
        android:text="@string/title_most_helpful"
        android:textColor="@color/black_70"
        android:textStyle="bold" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_review"
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        android:layout_marginBottom="@dimen/margin_sm"
        android:visibility="visible" />

    <com.tkpd.library.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:fillColor="@color/tkpd_main_green"
        app:pageColor="@color/white"
        android:padding="@dimen/margin_vs"
        android:layout_marginBottom="@dimen/margin_vs"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/grey_100"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:gravity="right|center_vertical"
        android:layout_marginBottom="@dimen/margin_sm"
        android:layout_marginTop="@dimen/margin_sm"
        android:text="@string/title_all_reviews"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/font_small" />


</LinearLayout>