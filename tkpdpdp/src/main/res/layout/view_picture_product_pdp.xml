<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.tkpd.library.ui.widget.TouchViewPager
        android:id="@id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <com.tkpd.library.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:fillColor="@color/tkpd_main_green"
        app:pageColor="@color/white"
        android:padding="@dimen/margin_vs"
        android:layout_marginBottom="@dimen/margin_vs"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/cover_shadow_pdp">

    </RelativeLayout>

    <LinearLayout
        android:id="@id/error_product_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_vl"
        android:paddingRight="@dimen/padding_med"
        android:paddingLeft="@dimen/padding_med"
        android:visibility="gone"
        android:background="@color/empty_stock_pdp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@id/error_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vl"
            android:textSize="@dimen/font_small"
            android:textStyle="bold"
            android:text="@string/stock_produk_kosong" />

        <TextView
            android:id="@id/error_product_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:textSize="@dimen/fontvs"
            android:textAlignment="center"
            android:text="@string/deksripsi_produk_kosong" />

    </LinearLayout>
</RelativeLayout>