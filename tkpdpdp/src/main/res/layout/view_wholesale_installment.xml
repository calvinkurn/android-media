<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow_bottom"
    android:divider="@drawable/bg_line_separator"
    android:dividerPadding="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_25"
    android:showDividers="middle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_wholesale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/wholesale_page_title"
        android:textColor="@color/black_54"
        android:textSize="@dimen/font_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/tv_wholesale_price"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/fontvs"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_wholesale"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_title_wholesale"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_wholesale"
        tools:text="Mulai dari Rp 12.000" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="15dp"
        android:background="@color/pdp_line_color"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_varian"
        app:layout_constraintStart_toStartOf="@+id/tv_title_varian"
        app:layout_constraintTop_toBottomOf="@+id/tv_wholesale_price" />

    <TextView
        android:id="@+id/tv_title_installment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/product_variant"
        android:textColor="@color/black_54"
        android:textSize="@dimen/font_medium"
        app:layout_constraintEnd_toEndOf="@+id/line"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/tv_installment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/fontvs"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_installment"
        app:layout_constraintStart_toStartOf="@+id/tv_title_installment"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_installment"
        tools:text="Bunga mulai dari Rp 12.000" />
</android.support.constraint.ConstraintLayout>