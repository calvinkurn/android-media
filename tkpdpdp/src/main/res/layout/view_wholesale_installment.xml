<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_wholesale_installment"
    tools:visibility="visible"
    android:paddingLeft="@dimen/dp_16"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow"
    android:divider="@drawable/bg_line_separator"
    android:showDividers="middle"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_wholesale"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            tools:visibility="visible"
            android:id="@+id/tv_title_wholesale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wholesale_page_title"
            android:textColor="@color/black_54"
            android:textSize="@dimen/font_medium"/>

        <TextView
            tools:visibility="visible"
            android:id="@+id/tv_wholesale_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/fontvs"
            tools:text="Mulai dari Rp 12.000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_installment"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            tools:visibility="visible"
            android:id="@+id/tv_title_installment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_product_installment"
            android:textColor="@color/black_54"
            android:textSize="@dimen/font_medium"/>

        <TextView
            tools:visibility="visible"
            android:id="@+id/tv_installment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/fontvs"
            tools:text="Bunga mulai dari Rp 12.000" />
    </LinearLayout>

</LinearLayout>