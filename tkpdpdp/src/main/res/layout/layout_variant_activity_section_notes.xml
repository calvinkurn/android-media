<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_detail"
    android:paddingRight="@dimen/padding_detail"
    android:paddingBottom="@dimen/padding_detail">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/sp_13"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:text="@string/catatan_untuk_penjual_opsional"
        />

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapperRemark"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="144">

        <com.tokopedia.design.component.EditTextCompat
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:imeActionLabel="Selesai"
            android:imeOptions="actionDone"
            android:maxLines="3"
            android:paddingBottom="@dimen/dp_16"
            android:textColor="@color/font_black_primary_70"
            android:textColorHighlight="@color/tkpd_main_green"
            android:textSize="@dimen/sp_13"
            android:textStyle="normal"
            android:maxLength="144"
            tools:ignore="TextFields"
            tools:text="Saya pesan warna merah yah min.. "
            />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

</LinearLayout>