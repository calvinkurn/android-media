<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pdp_content_padding"
        android:layout_marginStart="@dimen/pdp_content_padding"
        android:layout_marginEnd="@dimen/pdp_content_padding"
        android:layout_marginRight="@dimen/pdp_content_padding"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:text="@string/title_latest_discussion"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/pdp_title_text_size"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Body1"
        />
    
    <ImageView
        android:id="@+id/avatar_talk"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:layout_alignLeft="@id/title"
        android:layout_alignStart="@id/title"
        android:layout_below="@id/title"
        android:scaleType="centerCrop"
        android:contentDescription="@string/title_latest_discussion" />

    <TextView
        android:id="@+id/text_talk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_talk"
        android:layout_toEndOf="@id/avatar_talk"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="1dp"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_70"
        />


    <TextView
        android:id="@+id/text_talk_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_talk"
        android:layout_toEndOf="@id/avatar_talk"
        android:layout_below="@id/text_talk_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="9dp"
        android:textSize="@dimen/fontvs"
        android:textColor="@color/black_38"
        />

    <TextView
        android:id="@+id/text_talk_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_talk"
        android:layout_toEndOf="@id/avatar_talk"
        android:layout_below="@id/text_talk_date"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/black_54"
        />

    <RelativeLayout
        android:id="@+id/layout_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_talk"
        android:layout_toEndOf="@id/avatar_talk"
        android:layout_below="@id/text_talk_message"
        android:visibility="gone">

        <ImageView
            android:id="@+id/avatar_comment"
            android:layout_width="@dimen/img_thumb_bit_small"
            android:layout_height="@dimen/img_thumb_bit_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:contentDescription="@string/title_latest_discussion" />

        <TextView
            android:id="@+id/text_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar_comment"
            android:layout_toEndOf="@id/avatar_comment"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_70"
            />

        <TextView
            android:id="@+id/text_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar_comment"
            android:layout_toEndOf="@id/avatar_comment"
            android:layout_below="@id/text_comment_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="9dp"
            android:textSize="@dimen/fontvs"
            android:textColor="@color/black_38"
            />

        <TextView
            android:id="@+id/text_comment_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar_comment"
            android:layout_toEndOf="@id/avatar_comment"
            android:layout_below="@id/text_comment_date"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/black_54"
            />

    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/layout_comment"
        android:background="@color/grey_100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:padding="@dimen/dp_5"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_all_discussion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="end|center_vertical"
            android:gravity="end|center_vertical"
            android:text="@string/title_all_discussion"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/fontm" />

    </LinearLayout>

</RelativeLayout>