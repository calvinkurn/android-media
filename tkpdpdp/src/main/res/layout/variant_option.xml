<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/padding_detail"
    android:paddingRight="@dimen/padding_detail" android:paddingBottom="@dimen/padding_detail">

    <TextView
        android:id="@+id/text_variant_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_70"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_variant_option"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:layout_marginTop="@dimen/margin_sm"/>

</LinearLayout>