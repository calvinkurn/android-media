<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/container_btn_buy"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/deep_orange_500"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/variant_progress_bar"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@id/tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_buy"
            android:textColor="@color/href_link_rev"
            android:textSize="@dimen/fontm"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_promo_hour"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/btn_promo_ads"
        android:gravity="center"
        android:text="@string/title_buy"
        android:textColor="@color/href_link_rev"
        android:textSize="@dimen/fontm"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@id/tv_promote_topads"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/btn_buy"
        android:gravity="center"
        android:text="@string/title_promo_topads"
        android:textColor="@color/href_link_rev"
        android:textSize="@dimen/fontm"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/container_new_checkout_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/container_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/action_button_by_me"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/white_button_rounded"
                android:padding="@dimen/dp_4"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_byme" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/action_button_chat"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/white_button_rounded"
                android:padding="@dimen/dp_4">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_topchat" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_buy_now"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_buy"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textColor="@color/orange_red"
                android:textSize="@dimen/sp_12"
                tools:text="Beli Sekarang" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_to_cart"
            android:layout_width="144dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/container_btn"
            android:layout_toRightOf="@id/container_btn"
            android:background="@drawable/orange_button_rounded"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="Tambah Ke Keranjang" />

    </LinearLayout>

</LinearLayout>