<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/container_btn_buy"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        android:background="@color/deep_orange_500"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/variant_progress_bar"
            android:layout_width="19dp"
            android:layout_gravity="center"
            android:layout_height="19dp"
            android:visibility="gone"
            style="?android:attr/progressBarStyleInverse"/>

        <TextView
            android:id="@id/tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_buy"
            android:textSize="@dimen/fontm"
            android:textColor="@color/href_link_rev"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_promo_hour"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/title_buy"
        android:textSize="@dimen/fontm"
        android:layout_weight="1"
        android:textColor="@color/href_link_rev"
        android:background="@drawable/btn_promo_ads"
        android:visibility="gone"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_promote_topads"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/title_promo_topads"
        android:textColor="@color/href_link_rev"
        android:textSize="@dimen/fontm"
        android:layout_weight="1"
        android:background="@drawable/btn_buy"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/container_new_checkout_flow"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/action_button_cart"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_4"
            android:background="@drawable/white_button_rounded"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_new_checkout_cart"
                />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/container_new_button_buy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toRightOf="@id/action_button_cart"
            android:layout_toEndOf="@id/action_button_cart"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/orange_button_rounded"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/new_variant_progress_bar"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                style="?android:attr/progressBarStyleInverse"/>

            <TextView
                android:id="@+id/tv_new_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/href_link_rev"
                android:lineSpacingExtra="6sp"
                android:gravity="center"
                tools:text="Beli"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>