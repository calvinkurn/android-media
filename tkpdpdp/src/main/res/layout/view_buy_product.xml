<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/container"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal">

    <TextView
        android:id="@id/tv_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/title_buy"
        android:textSize="@dimen/fontm"
        android:layout_weight="1"
        android:textColor="@color/href_link_rev"
        android:background="@drawable/btn_promo_ads"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_promote_topads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/title_promo_topads"
        android:textColor="@color/href_link_rev"
        android:textSize="@dimen/fontm"
        android:layout_weight="1"
        android:background="@drawable/btn_buy"
        android:textStyle="bold" />

</LinearLayout>