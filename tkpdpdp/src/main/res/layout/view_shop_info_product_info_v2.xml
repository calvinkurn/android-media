<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_10_header"
    android:background="@drawable/bg_shadow"
    android:orientation="vertical"
    android:paddingRight="@dimen/pdp_content_padding"
    android:paddingLeft="@dimen/pdp_content_padding"
    android:paddingBottom="@dimen/dp_25">

    <TextView
        android:id="@+id/label_seller_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/title_seller"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/pdp_title_text_size"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/iv_ava"
            android:layout_width="@dimen/shopinfo_pdp"
            android:layout_height="@dimen/shopinfo_pdp"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:contentDescription="@string/image_product_desc"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/iv_ava"
            android:layout_toRightOf="@id/iv_ava"
            android:layout_marginBottom="@dimen/dp_10"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.tokopedia.gm.resource.GMImageView
                        android:id="@+id/iv_gold_shop"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_marginLeft="@dimen/dp_2"
                        android:id="@id/iv_official"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        app:srcCompat="@drawable/ic_official_store_pdp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_marginLeft="@dimen/dp_2"
                        android:id="@id/iv_lucky"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:padding="@dimen/dp_3"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />


                    <TextView
                        android:id="@id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_selector"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="Shop Name"
                        android:textColor="@color/black_70"
                        android:textSize="@dimen/font_large"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="@dimen/dp_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@id/l_medal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:orientation="horizontal" />
                    <TextView
                        android:id="@+id/last_online_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_38"
                        android:textSize="@dimen/font_small"
                        tools:text="15 Menit" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5">

        <Button
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/ic_topchat"
            android:id="@+id/send_msg_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_16"
            android:textAllCaps="false"
            tools:ignore="HardcodedText"
            android:text="@string/label_button_chat"/>

        <LinearLayout
            android:id="@id/favorite_button"
            style="@style/FavButtonPDP"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@id/favorite_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_add_black_24dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/fave"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>