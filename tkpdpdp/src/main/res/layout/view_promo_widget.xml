<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small_header"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_med"
    android:paddingBottom="@dimen/padding_small"
    android:paddingLeft="@dimen/padding_large"
    android:paddingRight="@dimen/padding_med">
    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_promo_pdp"
        android:layout_marginRight="@dimen/margin_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small">


        <TextView
            android:id="@+id/promo_widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/medium_green"
            tools:text="GRATIS ONGKIR HINGGA Rp40.000"/>

        <TextView
            android:id="@+id/promo_widget_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_70"
            android:layout_marginTop="@dimen/margin_vs"
            android:textSize="10sp"
            tools:text="Minimum Transaksi Rp.100.000"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_small">
            
            <TextView
                android:id="@+id/promo_widget_code"
                android:layout_width="160dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_promo_pdp_left"
                android:textColor="@color/orange_red"
                android:textAlignment="center"
                android:gravity="center_vertical"
                tools:text="GRATISONGKIR"/>

            <TextView
                android:id="@+id/text_copy_code"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="-5dp"
                android:background="@drawable/shape_promo_pdp_right"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textColor="@color/black_38"
                android:text="@string/title_copy_promo_code"/>
            
        </LinearLayout>


    </LinearLayout>





</LinearLayout>