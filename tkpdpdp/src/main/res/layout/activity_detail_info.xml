<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label_preorder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="@string/label_preorder"
        android:textColor="@color/pdp_text_sub_title_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toTopOf="@+id/tv_label_min_order"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_preorder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="end"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_preorder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_preorder"
        tools:text='4 Hari' />

    <TextView
        android:id="@+id/tv_label_min_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_min_order"
        android:textColor="@color/pdp_text_sub_title_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toTopOf="@+id/tv_label_condition"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_preorder" />

    <TextView
        android:id="@+id/tv_minimum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_min_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_min_order"
        tools:text="1 Buah" />

    <TextView
        android:id="@+id/tv_label_condition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_condition"
        android:textColor="@color/pdp_text_sub_title_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toTopOf="@+id/tv_label_insurance"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_min_order" />

    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_condition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_condition"
        tools:text="Baru" />

    <TextView
        android:id="@+id/tv_label_insurance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_insurance"
        android:textColor="@color/pdp_text_sub_title_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toTopOf="@+id/tv_label_storefront"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_condition" />

    <TextView
        android:id="@+id/tv_insurance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_insurance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_insurance"
        tools:text="Opsional" />

    <TextView
        android:id="@+id/tv_label_storefront"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_storefront"
        android:textColor="@color/pdp_text_sub_title_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toTopOf="@+id/tv_label_category"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_insurance" />

    <TextView
        android:id="@+id/tv_storefront"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_storefront"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_storefront"
        tools:text="Furnitur" />

    <TextView
        android:id="@+id/tv_label_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_category"
        android:textColor="@color/pdp_text_sub_title_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_storefront" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/fonts"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_category"
        tools:text="Rumah Tangga" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pdp_product_info_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_category">

        <ImageView
            android:id="@+id/img_shop_location"
            android:layout_width="@dimen/large_dp"
            android:layout_height="@dimen/large_dp"
            android:layout_margin="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_info_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_label_free_return_hint"
            app:srcCompat="@drawable/ic_free_returns_pdp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_label_free_return_hint"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_free_return_hint"
            android:textColor="@color/pdp_text_sub_title_color"
            android:textSize="@dimen/sp_15"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_shop_location"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_info_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/label_info_detail"
            android:textColor="@color/pdp_text_color"
            android:textSize="@dimen/sp_15"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_free_return_hint"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_label_free_return_hint"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_free_return_hint" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>