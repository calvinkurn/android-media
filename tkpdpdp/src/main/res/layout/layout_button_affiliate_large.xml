<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    android:paddingRight="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/buttonAffiliate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button_rounded">

        <TextView
            android:id="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_centerInParent="true"
            android:text="@string/button_add_to_affiliate"
            android:textColor="@color/href_link_rev"
            android:textSize="@dimen/sp_14"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:gravity="center_horizontal"
            />

        <ProgressBar
            android:id="@+id/loadingAffiliate"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_toLeftOf="@id/textView"
            android:layout_toStartOf="@id/textView"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:visibility="gone"
            tools:visibility="visible"
            android:indeterminateDrawable="@drawable/ic_progress_loading"
            style="?android:attr/progressBarStyleInverse"
            />

    </RelativeLayout>


</RelativeLayout>