<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_scrollFlags="snap|enterAlways"
        app:popupTheme="@style/Toolbar_Popup"
        app:theme="@style/Toolbar">

        <TextView
            android:id="@id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:text="Promo"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_vs"
                android:text="@string/toast_promo_error1"
                android:textColor="@color/black_54"
                android:textSize="@dimen/text_size_l_medium"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@color/grey_300" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_vvs"
                android:text="@string/promo_active"
                android:textColor="@color/black_54"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@id/tv_promo_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_vvs"
                android:textColor="@color/green_300"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                tools:text="Kaos Pahlawan" />


            <TextView
                android:id="@id/tv_promo_expired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_vvs"
                android:text="@string/dink_expired"
                android:textColor="@color/black_54"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/half_screen_3pad"
                android:layout_height="@dimen/half_screen_3pad"
                android:layout_gravity="center"
                android:padding="@dimen/text_size_s_medium"
                app:srcCompat="@drawable/icon_topads" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_vvs"
                android:text="@string/toast_promo_error2"
                android:textColor="@color/black_54"
                android:textSize="@dimen/text_size_medium" />

            <Button
                android:id="@id/button_use_topads"
                style="@style/Button.Submit.Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_large"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:text="@string/learn_topads" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>