<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <FrameLayout android:id="@+id/layout_cod_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_background"
        android:visibility="gone"
        android:paddingTop="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingRight="@dimen/dp_56"
        android:paddingEnd="@dimen/dp_56">

        <com.tokopedia.design.component.TextViewCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cod_content"
            app:fontSize="small"
            app:textViewTheme="lightSecondary"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear_discount_timer_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        tools:visibility="visible"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/text_title_discount_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/flash"
            android:drawablePadding="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/flash_sale_title"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/pdp_sale_title"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/white" />

        <com.tokopedia.design.countdown.CountDownView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            app:coundDownBackgroud="@android:color/transparent"
            app:countDownSparatorColor="#d50000"
            app:countDownTxtColor="#d50000" />
        </LinearLayout>

        <TextView
            android:id="@+id/sale_text_stock_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:gravity="center_vertical"
            tools:visibility="visible"
            android:visibility="gone"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_14"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/font_black_primary_70"
            tools:text="Stok tersedia (>100)" />

    </LinearLayout>

    <TextView
        android:paddingTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_96"
        android:layout_marginLeft="@dimen/dp_16"
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/pdp_text_color"
        android:textSize="@dimen/pdp_title_text_size"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        tools:text="Product Name" />
    <LinearLayout
        android:id="@+id/linear_discount_price"
        tools:visibility="visible"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_discount"
            style="@style/TextView.Micro"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/pdp_discount_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:text="50% OFF"
            android:textColor="@color/pdp_discount_color_selector"
            android:textIsSelectable="true"
            android:textStyle="bold"
            tools:visibility="visible"
            android:visibility="gone" />

        <TextView
            android:paddingLeft="@dimen/dp_10"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/text_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/warm_grey"
            android:textSize="@dimen/text_size_medium"
            tools:visibility="visible"
            android:visibility="gone"
            tools:text="Rp 0,00,-" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_price_pdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/price_pdp"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            tools:text="Rp 0,00,-" />

        <TextView
            android:id="@+id/text_cashback"
            style="@style/TextView.Micro"
            android:textColor="@color/pdp_cashback_text_color"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/pdp_cashback_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            tools:text="Cashback 3%"
            android:textStyle="bold"
            tools:visibility="visible"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_official_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        tools:visibility="visible"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:text="@string/headerview_label_official_store_1"
            android:textColor="@color/pdp_text_color"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:text="@string/headerview_label_official_store_2"
            android:textColor="@color/blue_official_store"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_xsmall" />

        <ImageView
            android:id="@+id/iv_official"
            android:layout_width="@dimen/med_dp"
            android:layout_height="@dimen/med_dp"
            app:srcCompat="@drawable/ic_official_store_pdp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/pdp_line_color"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <LinearLayout
        android:id="@+id/linear_stock_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical"
        tools:visibility="visible"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_stock_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Stok tersedia (>100)"
            android:textColor="@color/pdp_text_color"/>

    </LinearLayout>
</LinearLayout>