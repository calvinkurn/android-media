<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <LinearLayout
        android:id="@+id/linear_discount_timer_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/red_500"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_4"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_title_discount_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/flash"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="@string/title_discount_timer" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/bg_stroke_rounded_corners"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_5">

            <TextView
                android:id="@+id/text_discount_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_green"/>

        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_stock_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/red_500"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_8"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_stock_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Stok tersedia (>100)"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/condition"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/white"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_5"
        android:layout_marginRight="80dp"
        tools:text="Product Name"
        android:textColor="#b3000000"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:textSize="@dimen/text_size_l_medium"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/text_size_medium"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        tools:text="Rp 0,00,-"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_price_pdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 0,00,-"
            android:textColor="@color/price_pdp"
            android:textSize="@dimen/font_large"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/text_discount"
            style="@style/TextView.Micro"
            android:textStyle="bold"
            android:textColor="@color/pdp_discount_color_selector"
            android:background="@drawable/pdp_discount_bg"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:visibility="gone"
            android:textIsSelectable="true"
            android:text="50% OFF"/>


        <TextView
            android:id="@+id/label_cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_label"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="2dp"
            android:text="Label"
            android:textColor="@color/label_text_color"
            android:textSize="10sp" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/text_official_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_official_store"
            android:layout_marginRight="@dimen/dp_5"
            android:textSize="@dimen/text_size_xsmall"
            android:text="@string/headerview_label_official_store" />

        <ImageView
            android:id="@+id/iv_official"
            android:layout_width="@dimen/med_dp"
            android:layout_height="@dimen/med_dp"
            app:srcCompat="@drawable/ic_badge_official"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</LinearLayout>