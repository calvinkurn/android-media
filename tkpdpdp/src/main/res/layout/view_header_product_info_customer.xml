<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="@dimen/margin_vs"
        android:layout_marginRight="80dp"
        tools:text="Product Name"
        android:textColor="#b3000000"
        android:textSize="@dimen/text_size_l_medium"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/text_size_medium"
        tools:text="Rp 0,00,-"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_price_pdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 0,00,-"
            android:textColor="@color/price_pdp"
            android:textSize="@dimen/font_large"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/text_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_vvs"
            android:paddingBottom="@dimen/padding_vvs"
            android:paddingLeft="@dimen/padding_vs"
            android:paddingRight="@dimen/padding_vs"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@drawable/label_bright_red"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/fontvs"
            tools:text="10%OFF"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/label_cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_label"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/padding_vs"
            android:paddingRight="@dimen/padding_vs"
            android:paddingTop="2dp"
            android:text="Label"
            android:textColor="@color/label_text_color"
            android:textSize="10sp" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/text_official_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_small"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_official_store"
            android:layout_marginRight="@dimen/margin_vs"
            android:textSize="@dimen/text_size_xsmall"
            android:text="@string/headerview_label_official_store" />

        <ImageView
            android:id="@+id/iv_official"
            android:layout_width="@dimen/med_dp"
            android:layout_height="@dimen/med_dp"
            app:srcCompat="@drawable/ic_badge_official"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_discount_timer_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_title_discount_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_discount_timer" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:background="@drawable/bg_stroke_rounded_corners"
            android:paddingBottom="@dimen/margin_vs"
            android:paddingLeft="@dimen/margin_ms"
            android:paddingRight="@dimen/margin_ms"
            android:paddingTop="@dimen/margin_vs">

            <TextView
                android:id="@+id/text_discount_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_green"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_stock_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_stock_available"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_stock_available"
            android:layout_width="27dp"
            android:layout_height="21dp"
            android:background="@drawable/ic_available_stock" />

        <TextView
            android:id="@+id/text_stock_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Stok tersedia (>100)"
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/black_70"/>

    </LinearLayout>
</LinearLayout>