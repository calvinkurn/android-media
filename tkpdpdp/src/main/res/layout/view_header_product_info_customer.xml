<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_discount_timer_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_500"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_title_discount_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/flash"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:text="@string/title_discount_timer"
            android:textColor="@color/white" />

        <com.tokopedia.design.countdown.CountDownView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            app:coundDownBackgroud="@drawable/pdp_countdown_white"
            app:countDownSparatorColor="@color/white"
            app:countDownTxtColor="@color/red_500" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_stock_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_500"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_4"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_stock_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/condition"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            tools:text="Stok tersedia (>100)" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:ellipsize="end"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:textColor="#b3000000"
        android:textSize="@dimen/text_size_l_medium"
        tools:ignore="HardcodedText"
        tools:text="Product Name" />

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/text_size_medium"
        android:visibility="gone"
        tools:text="Rp 0,00,-" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_price_pdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/price_pdp"
            android:textSize="@dimen/font_large"
            tools:ignore="HardcodedText"
            tools:text="Rp 0,00,-" />

        <TextView
            android:id="@+id/text_discount"
            style="@style/TextView.Micro"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/pdp_discount_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:text="50% OFF"
            android:textColor="@color/pdp_discount_color_selector"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:visibility="gone" />


        <TextView
            android:id="@+id/label_cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_label"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="2dp"
            android:text="Label"
            android:textColor="@color/label_text_color"
            android:textSize="10sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_official_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:text="@string/headerview_label_official_store"
            android:textColor="@color/blue_official_store"
            android:textSize="@dimen/text_size_xsmall" />

        <ImageView
            android:id="@+id/iv_official"
            android:layout_width="@dimen/med_dp"
            android:layout_height="@dimen/med_dp"
            app:srcCompat="@drawable/ic_badge_official"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</LinearLayout>