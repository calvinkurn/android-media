<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="@dimen/padding_detail"
    android:layout_height="wrap_content">
    
    <android.support.v7.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/variant_image_title"
            android:padding="@dimen/padding_vs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_med">

        <TextView
            android:id="@+id/variant_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:textColor="@color/black_70"
            android:maxLines="3"
            android:text="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/variant_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/price_pdp"
                android:textSize="@dimen/font_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_vs"
                android:textColor="@color/black_38"
                android:textSize="@dimen/fontvs"
                android:text="@string/per_pcs"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>