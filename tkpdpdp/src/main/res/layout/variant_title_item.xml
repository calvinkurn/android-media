<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_small"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/variant_image_title"
        android:padding="@dimen/padding_vs"
        android:layout_width="80dp"
        android:layout_height="80dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_marginLeft="@dimen/margin_sm">

        <TextView
            android:id="@+id/variant_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_sm"
            android:textSize="13sp"
            android:textColor="@color/black_70"
            android:maxLines="3"
            android:text="Name" />

        <TextView

            android:id="@+id/text_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/warm_grey"
            android:textSize="@dimen/text_size_medium"
            tools:text="Rp 0,00,-"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/variant_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp 0,00,-"
                android:textColor="@color/price_pdp"
                android:textSize="@dimen/font_large"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/text_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_vvs"
                android:paddingBottom="@dimen/padding_vvs"
                android:paddingLeft="@dimen/padding_vs"
                android:paddingRight="@dimen/padding_vs"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:background="@drawable/label_bright_red"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/fontvs"
                tools:text="10%OFF"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>