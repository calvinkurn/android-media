<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/image_button_minus"
        style="@style/ImageButton.Counter"
        android:src="@drawable/bg_button_counter_minus" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edittext_input_quantity"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="5"
        android:textColor="@color/black_70"
        android:textColorHighlight="@color/tkpd_main_green"
        android:textSize="@dimen/sp_16"
        app:backgroundTint="@color/tkpd_main_green"
        tools:text="10000" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/image_button_plus"
        style="@style/ImageButton.Counter"
        android:src="@drawable/bg_button_counter_plus" />

</LinearLayout>