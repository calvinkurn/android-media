<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_id_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/retake_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_id_img"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_24"
                android:gravity="center_horizontal"
                android:text="ULANGI FOTO"
                android:textColor="#06b3ba"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtv_select_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/retake_photo"
                android:layout_marginTop="@dimen/dp_35"
                android:text="Pilih Jenis Kartu Identitas"
                android:textColor="#6b767e"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/id_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_select_id"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/KTP_WNI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="KTP (WNI)"
                    android:textColor="#2d263b"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/passport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Passport (Foreigner)"
                    android:textColor="#2d263b"
                    android:textSize="14sp" />
            </RadioGroup>

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/wrapper_number_ktp"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_radio_group"
                android:layout_marginTop="@dimen/dp_50"
                android:clickable="false"
                android:hint="">

                <EditText
                    android:id="@+id/edtxt_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="01234567890"
                    android:hint="Nomor KTP"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    android:textSize="16sp" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/wrapper_name"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wrapper_number_ktp"
                android:layout_marginTop="@dimen/dp_56"
                android:clickable="false">

                <EditText
                    android:id="@+id/edtxt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Gadis Ibu Kandung"
                    android:inputType="textAutoComplete"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    android:textSize="16sp" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wrapper_name"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@drawable/btn_bg_rounded_corners"
                android:gravity="center"
                android:id="@+id/confirmation_btn"
                android:text="KONFIRMASI"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </RelativeLayout>
    </ScrollView>

    <include
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>
</RelativeLayout>