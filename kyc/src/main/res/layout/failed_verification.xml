<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ovo_premier_verifikasi_gagal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_36"
                android:gravity="center_horizontal"
                android:text="Level Akun OVO-mu Tidak Berhasil Ditingkatkan"
                android:textColor="#b3000000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4sp"
                android:text="Jangan khawatir, kamu bisa mengulang proses peningkatan level akun OVO dengan mengeklik tombol di bawah ini."
                android:textColor="#61000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/upgrade_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/btn_bg_green_curved_corners"
                android:gravity="center_horizontal"
                android:text="Upgrade OVO Sekarang"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/returnto_main_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_button_white_border"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="Kembali Ke Halama Utama"
                android:textColor="#61000000"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>
</RelativeLayout>