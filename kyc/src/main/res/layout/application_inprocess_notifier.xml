<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_40"
                android:src="@drawable/art_graphic_sand_clock" />

            <TextView
                android:id="@+id/txtv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="6sp"
                android:text="APLIKASI DALAM PROSES"
                android:textColor="#4c2a86"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="Aplikasi Anda sedang kami proses. Kami akan memberikan notifikasi dalam waktu 24 jam. Untuk bantuan &amp; pertanyaan, silahkan hubungi:"
                android:textColor="#2d263b"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtv_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_32"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="Call Center OVO"
                android:textColor="#4c2a86"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtv_care_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="-4sp"
                android:text="1500 696 "
                android:textColor="#2d263b"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtv_care_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_care_no"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="(Senin - Minggu, Pukul 07.00 - 23.00 WIB)"
                android:textColor="#6b767e"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_care_timings"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_alignParentLeft="true"
                android:src="@drawable/call" />

            <ImageView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_care_timings"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_100"
                android:src="@drawable/email" />

            <Button
                android:id="@+id/back_to_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/call"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_36"
                android:background="@drawable/btn_bg_rounded_corners"
                android:gravity="center"
                android:text="Kembali ke Tokopedia"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </RelativeLayout>
    </ScrollView>

    <include
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>
</RelativeLayout>