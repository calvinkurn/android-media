<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/selfieid_intro_container"
    android:layout_marginRight="@dimen/dp_30"
    android:layout_marginLeft="@dimen/dp_30">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8sp"
        android:text="Selfie dengan KTP (WNI) /â€¨Passport (Foreigner)"
        android:textColor="#4c2a86"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:text="Pastikan wajah Anda berada di area oval dan Kartu Identitas Anda berada di area kotak"
        android:textColor="#2d263b"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/img_selfie_id" />

    <Button
        android:id="@+id/selfieid_intro_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/btn_bg_rounded_corners"
        android:gravity="center"
        android:text="OKE"
        android:textColor="#ffffff"
        android:textSize="14sp" />
</LinearLayout>
