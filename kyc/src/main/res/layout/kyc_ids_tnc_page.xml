<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/cardid_container"
                android:layout_width="156dp"
                android:layout_height="102dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_24">

                <ImageView
                    android:id="@+id/cardid_img"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_transparent_black_rounded_corners" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_refresh_turqoise"
                    android:text="Ulangi"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardid_container"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="@dimen/dp_120"
                    android:lineSpacingExtra="4sp"
                    android:text="Foto Kartu Identitas"
                    android:textColor="#2d263b"
                    android:textSize="14sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/selfieid_container"
                android:layout_width="156dp"
                android:layout_height="102dp"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/selfieid_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_transparent_black_rounded_corners" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_refresh_turqoise"
                    android:text="Ulangi"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardid_container"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="@dimen/dp_120"
                    android:lineSpacingExtra="4sp"
                    android:text="Selfie dengan Kartu Identitas"
                    android:textColor="#2d263b"
                    android:textSize="14sp" />
            </FrameLayout>

            <CheckBox
                android:id="@+id/chkbx_tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_200"
                android:layout_toLeftOf="@+id/txtv_tnc"
                android:textColor="#4a4a4a" />
            <TextView
                android:id="@+id/txtv_tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_210"
                android:layout_marginRight="@dimen/dp_30"
                android:textColor="#4a4a4a"
                android:layout_centerHorizontal="true"
                android:textSize="12sp" />


        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/btn_bg_rounded_corners"
        android:gravity="center"
        android:text="PROSES"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:layout_marginBottom="@dimen/dp_50"
        android:id="@+id/proceed_tnc"
        android:textColor="#ffffff"
        android:textSize="14sp" />


    <include
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>
</RelativeLayout>