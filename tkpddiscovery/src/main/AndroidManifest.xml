<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.discovery">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true">

        <activity
            android:name=".catalog.activity.CatalogDetailActivity"
            android:label="@string/title_activity_catalog"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tokopedia.discovery.activity.BrowseProductActivity"
            android:label="Pencarian"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BrowseProduct"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.tokopedia.discovery.dynamicfilter.DynamicFilterActivity"
            android:label="Filter"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.tokopedia.discovery.activity.SortProductActivity"
            android:label="Urutkan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3" />

    </application>

</manifest>
