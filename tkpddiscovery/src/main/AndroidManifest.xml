<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokopedia.discovery">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true">
        <activity android:name=".categoryrevamp.view.activity.CategoryNavActivity"
            android:label="Urutkan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3" />
        <activity
            android:name=".catalog.activity.CatalogDetailActivity"
            android:label="@string/title_activity_catalog"
            android:screenOrientation="portrait">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_discovery"
                    android:path="@string/path_catalog"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".intermediary.view.IntermediaryActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_category_detail"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".intermediary.view.adapter.YoutubeIntermediaryActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".categorynav.view.CategoryNavigationActivity" />
        <activity
            android:name=".newdiscovery.hotlist.view.activity.HotlistActivity"
            android:label="Hotlist"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".autocomplete.presentation.activity.AutoCompleteActivity"
            android:screenOrientation="portrait"
            android:label="@string/image_search_title"
            android:windowSoftInputMode="adjustNothing">

        </activity>

        <activity
            android:name=".imagesearch.search.ImageSearchActivity"
            android:label="@string/image_search_title"
            android:screenOrientation="portrait" >
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/jpeg" />
                <data android:mimeType="image/png" />
                <data android:mimeType="image/jpg" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/jpeg" />
                <data android:mimeType="image/png" />
                <data android:mimeType="image/jpg" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_discovery"
                    android:path="@string/path_image_search_result"/>
            </intent-filter>
        </activity>

        <activity android:name=".imagesearch.search.ImageSearchImagePickerActivity"
            android:theme="@style/Theme.White"
            android:label="@string/choose_image"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
        <activity
            android:name=".similarsearch.view.SimilarSearchActivity"
            android:label=""
            android:theme="@style/noAnimTheme" />
        <activity android:name=".newdiscovery.category.presentation.CategoryActivity"
            android:launchMode="singleTask"
            />
    </application>

</manifest>