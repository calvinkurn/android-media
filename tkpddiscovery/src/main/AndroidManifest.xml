<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.discovery">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true">
        <activity
            android:name=".catalog.activity.CatalogDetailActivity"
            android:label="@string/title_activity_catalog"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BrowseProductActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".dynamicfilter.DynamicFilterActivity"
            android:label="Filter"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.SortProductActivity"
            android:label="Urutkan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3" />
        <activity
            android:name=".intermediary.view.IntermediaryActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>