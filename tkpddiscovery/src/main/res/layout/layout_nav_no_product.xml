<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <ImageView
        android:id="@+id/img_no_data"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_no_product_found" />

    <TextView
        android:id="@+id/txt_no_data_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Oops, Produk Nggak Ditemukan"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/img_no_data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:text="Coba kurangi salah satu filter yang kamu gunakan :"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toRightOf="@+id/img_no_data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_no_data_header" />

</android.support.constraint.ConstraintLayout>