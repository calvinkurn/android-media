<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

    <View
        android:id="@+id/transparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_layover_bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search_top_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/action_up_btn"
                style="@style/MSV_ImageButton"
                android:layout_gravity="center_vertical"
                android:tint="#4b4b4b"
                app:srcCompat="@drawable/ic_navigation_arrow_back"/>

            <com.tokopedia.design.component.EditTextCompat
                android:id="@+id/searchTextView"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawablePadding="8dp"
                android:hint="@string/search_autocomplete_hint"
                android:imeOptions="actionSearch"
                android:inputType="textNoSuggestions"
                android:paddingLeft="@dimen/search_view_text_padding"
                android:paddingStart="@dimen/search_view_text_padding"
                android:singleLine="true"
                android:textColor="#212121"
                android:textColorHint="@color/black_38"
                android:textSize="16sp"
                app:drawableLeftCompat="@drawable/icon_magnifier"/>

            <ImageButton
                android:id="@+id/action_image_search_btn"
                style="@style/MSV_ImageButton"
                android:tint="@color/grey"
                app:srcCompat="@drawable/ic_camera_alt_black_24dp" />

            <ImageButton
                android:id="@+id/action_voice_btn"
                style="@style/MSV_ImageButton"
                android:tint="@color/grey"
                app:srcCompat="@drawable/ic_keyboard_voice_black" />

            <ImageButton
                android:id="@+id/action_empty_btn"
                style="@style/MSV_ImageButton"
                android:tint="#4b4b4b"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_clear_black" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/search_suggestion_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/search_suggestion"
                android:name="com.tokopedia.discovery.search.view.fragment.SearchMainFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>