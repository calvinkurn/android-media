<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@color/white"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/tkpd_green_header"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/tkpd_green_header"
                app:tabTextAppearance="@style/SearchTabWidgetText" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@drawable/top_bar_shadow" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/search_nav_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/background_search_navigation"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_22"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_12">

        <ImageView
            android:id="@+id/icon_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_category_sort" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/button_sort"
            style="@style/TextView.Small.BlackPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_2"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="@string/sort"
            android:layout_marginStart="@dimen/dp_4" />
        <View
            android:id="@+id/search_nav_divider"
            android:layout_width="1px"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/grey_300" />

        <ImageView
            android:id="@+id/icon_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_category_filter" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/button_filter"
            style="@style/TextView.Small.BlackPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_2"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="@string/filter"
            android:layout_marginStart="@dimen/dp_4" />



    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:visibility="gone" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextColor="@color/black_70">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/action_up_btn"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/discovery_ic_back"
                    />
                <ImageButton
                    android:id="@+id/img_display_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/layout_search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/layout_search"
                    app:layout_constraintTop_toTopOf="@+id/layout_search"
                    app:srcCompat="@drawable/ic_grid_display" />

                <LinearLayout
                    android:id="@+id/layout_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/category_bg_corner"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/img_display_button"
                    app:layout_constraintStart_toEndOf="@+id/action_up_btn"
                    app:layout_constraintTop_toTopOf="parent">



                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/dp_8"
                        app:srcCompat="@drawable/ic_category_filter" />


                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/et_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="true"
                        app:typographyType="body_2"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:inputType="none"
                        android:maxLines="1"
                        android:textColorHint="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                    <ImageButton
                        android:id="@+id/image_button_close"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@null"
                        android:padding="@dimen/dp_8"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_close_search" />

                </LinearLayout>


            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.tokopedia.filter.widget.BottomSheetFilterView
        android:id="@+id/bottomSheetFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:behavior_hideable="true"
        app:layout_behavior="com.tokopedia.filter.widget.UserLockBottomSheetBehavior" />

    <include
        android:id="@+id/layout_banned_screen"
        layout="@layout/layout_nav_banned_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</android.support.design.widget.CoordinatorLayout>