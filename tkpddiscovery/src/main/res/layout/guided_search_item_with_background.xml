<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/guided_search_text"
        android:layout_alignRight="@id/guided_search_text"
        android:layout_alignTop="@id/guided_search_text"
        android:layout_alignBottom="@id/guided_search_text"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/guided_search_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/guided_back_1" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/guided_search_text"
        style="@style/TextView.Small.White.Bold"
        android:paddingTop="@dimen/guided_search_padding_vertical"
        android:paddingBottom="@dimen/guided_search_padding_vertical"
        android:paddingLeft="@dimen/guided_search_padding_horizontal"
        android:paddingRight="@dimen/guided_search_padding_horizontal"
        tools:text="superstar"/>

</RelativeLayout>