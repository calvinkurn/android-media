<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8">

    <android.support.v7.widget.CardView
        android:id="@+id/shopContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/dp_8"
        android:padding="@dimen/dp_5"
        android:gravity="center_vertical"
        app:cardUseCompatPadding="true"
        app:contentPadding="2dp">

        <ImageView
            android:id="@+id/shop_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_diagonal_arrow"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shopContainer"
        android:layout_toEndOf="@id/shopContainer"
        android:layout_toStartOf="@id/icon"
        android:layout_toLeftOf="@id/icon"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/badgesOfficialStore"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_badge_shop_official"
                />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/black_70"
                tools:text="Marshall Official Store"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_icon_location_grey"
                />

            <TextView
                android:id="@+id/subTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/black_38"
                android:lineSpacingExtra="4sp"
                tools:text="Jakarta"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
