<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/tkpd_bg_color"
    android:gravity="center"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/ic_error_network"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/message_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:text="@string/msg_empty_search_1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sub_message_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:text="@string/msg_empty_search_2"
        android:textColor="@color/grey_400"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"/>

</LinearLayout>
