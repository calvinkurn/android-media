<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tokopedia.discovery.imagesearch.domain.usecase.ImageSearchResultActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/tkpd_main_green"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppBarTheme"
        app:elevation="0dp"
        app:layout_collapseMode="pin"
        app:subtitleTextAppearance="@style/ToolbarSubtitleText"
        app:titleTextAppearance="@style/ToolbarText">

        <!--<FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test 123"/>
        </FrameLayout>-->
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Error in searching"
            android:textColor="#FF0000"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
