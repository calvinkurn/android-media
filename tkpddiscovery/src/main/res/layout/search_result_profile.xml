<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.tokopedia.design.image.SquareImageView
                android:id="@+id/img_profile"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                tools:background="@color/black_70"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60" />

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_14"
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="Putri Titian"/>
                <TextView
                    android:id="@+id/tv_username"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="\@putrititian"/>
                <TextView
                    android:id="@+id/tv_post_count"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="15 post"/>
            </LinearLayout>
            <com.tokopedia.design.component.ButtonCompat
                android:id="@+id/btn_follow"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_72"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                app:buttonCompatType="primary"
                app:buttonCompatSize="medium"
                android:text="Follow"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>