<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_product_list"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@id/product_image_hoth"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/img_hot_intermediary"
        android:layout_height="@dimen/img_hot_intermediary"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_product_desc"
        android:gravity="center"
        android:scaleType="centerCrop" />

</RelativeLayout>