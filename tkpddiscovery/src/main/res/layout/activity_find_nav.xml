<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.tokopedia.discovery.catalogrevamp.ui.customview.SearchNavigationView
        android:id="@+id/searchNavContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_20">

    </com.tokopedia.discovery.catalogrevamp.ui.customview.SearchNavigationView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:visibility="gone" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:elevation="@dimen/dp_0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextColor="@color/black_70">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <ImageView
                    android:id="@+id/actionUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    app:srcCompat="@drawable/discovery_ic_back" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="true"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:textColorHint="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@+id/searchButton"
                    app:layout_constraintStart_toEndOf="@+id/actionUpButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    app:typographyType="body_1"
                    app:typographyWeight="bold"/>

                <ImageView
                    android:id="@+id/searchButton"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:padding="@dimen/dp_4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageDisplayButton"
                    app:layout_constraintStart_toEndOf="@+id/etSearch"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    app:srcCompat="@drawable/ic_category_filter" />

                <ImageButton
                    android:id="@+id/imageDisplayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    android:background="@android:color/transparent"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/searchButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    app:srcCompat="@drawable/ic_grid_display" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.tokopedia.filter.widget.BottomSheetFilterView
        android:id="@+id/bottomSheetFilterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:behavior_hideable="true"
        app:layout_behavior="com.tokopedia.filter.widget.UserLockBottomSheetBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
