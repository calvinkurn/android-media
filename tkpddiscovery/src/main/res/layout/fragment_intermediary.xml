<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_revamp_category">

            <ImageView
                android:id="@id/image_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@id/title_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_item_revamp_category"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_sm"
                android:shadowColor="@color/checkbox_text"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="0.3"
                />

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@id/recycler_view_revamp_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:layout_marginBottom="@dimen/margin_small"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@id/expand_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/tkpd_dark_green"
                android:text="Lihat Lainnya"
                android:textSize="@dimen/textsize"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:src="@drawable/ic_expand_more_black_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@id/hide_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/tkpd_dark_green"
                android:text="Sembunyikan Lainnya"
                android:textSize="@dimen/textsize"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/med_dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:src="@drawable/ic_expand_less_grey_24dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@id/recycler_view_curation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none" />



    </LinearLayout>


</android.support.v4.widget.NestedScrollView>