<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_revamp_category">

            <ImageView
                android:id="@id/image_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@id/title_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_item_revamp_category"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_sm"
                android:shadowColor="@color/checkbox_text"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="0.3"
                />

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@id/recycler_view_revamp_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:layout_marginBottom="@dimen/margin_small"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@id/expand_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/tkpd_dark_green"
                android:text="Lihat Lainnya"
                android:textSize="@dimen/textsize"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:src="@drawable/ic_expand_more_black_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@id/hide_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/tkpd_dark_green"
                android:text="Sembunyikan Lainnya"
                android:textSize="@dimen/textsize"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/med_dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:src="@drawable/ic_expand_less_grey_24dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@id/recycler_view_curation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none" />

        <android.support.v7.widget.CardView
            android:id="@id/card_hoth_intermediary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:visibility="gone"
            card_view:cardCornerRadius="0dip"
            card_view:cardElevation="3dip"
            card_view:contentPadding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/itemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_med"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:textColor="@color/grey_750"
                        android:textSize="@dimen/text_size_large"
                        android:text="@string/title_activity_browse_hot_detail" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@id/recycler_view_hot_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_below="@id/titleLayout"
                    android:orientation="vertical" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


</android.support.v4.widget.NestedScrollView>