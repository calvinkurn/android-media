<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/shop_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.tokopedia.core.customwidget.SquareImageView
                tools:src="@drawable/ic_icon_toped_announce"
                android:id="@+id/item_shop_image"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp">

                <ImageView
                    android:layout_marginTop="@dimen/dp_1"
                    android:id="@+id/item_shop_gold"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    app:srcCompat="@drawable/ic_shop_gold"
                    android:layout_marginRight="@dimen/dp_4"
                    android:visibility="visible" />

                <TextView
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:maxLines="1"
                    android:id="@+id/item_shop_name"
                    tools:text="Toko tokpedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                tools:src="@drawable/ic_badge_gold"
                android:id="@+id/reputation_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shop_list_reputation_view_height"
                android:layout_marginTop="4dp"/>

            <com.tokopedia.design.component.TextViewCompat
                tools:text="DKI Jakarta"
                android:id="@+id/shop_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/black_36"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_gravity="center"
                android:id="@+id/rv_item_preview"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/shop_list_favorite_button"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/green_button_rounded">

                <ImageView
                    android:id="@+id/shop_list_favorite_button_icon"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/ic_add"/>

                <TextView
                    android:id="@+id/shop_list_favorite_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_11"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:text="Follow"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/view_shop_inactive"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:alpha="0.7"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Status Toko:"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:text="@string/label_shop_status"/>
            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_8"
                app:cardElevation="@dimen/dp_0"
                app:cardCornerRadius="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/tv_unavailable_label"
                    android:layout_marginTop="@dimen/dp_2"
                    android:drawableLeft="@drawable/ic_minus"
                    android:drawablePadding="@dimen/dp_5"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sudah tidak aktif"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black_70"
                    android:text="@string/label_shop_inactive"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>