<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp">

            <com.tokopedia.core.customwidget.SquareImageView
                android:id="@+id/product_image"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:adjustViewBounds="true"
                android:gravity="center"
                app:srcCompat="@drawable/loading_page" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="38dp"
                tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold"
                android:textSize="@dimen/sp_14"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/black_70"
                android:lineSpacingExtra="5sp" />

            <TextView
                android:id="@+id/text_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/fontvvs"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    tools:text="Rp 3.121.500"
                    android:textColor="@color/orange_red"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:lineSpacingExtra="5sp" />

                <TextView
                    android:id="@+id/text_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fontvvs"
                    android:paddingTop="@dimen/margin_vvvs"
                    android:paddingBottom="@dimen/margin_vvvs"
                    android:paddingLeft="@dimen/padding_vvs"
                    android:paddingRight="@dimen/padding_vvs"
                    android:layout_marginLeft="@dimen/media_grid_spacing"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_rounded_corners_red"
                    tools:text="10%OFF"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/badges_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_12"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/black_38"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rating_review_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="51dp"
                    android:layout_height="10dp"
                    />

                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black_38"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ms"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/topLabel"
                    style="@style/TextView.Micro.BlackDisabled"
                    android:paddingLeft="@dimen/padding_ms"
                    android:paddingRight="@dimen/padding_ms"
                    android:paddingTop="@dimen/padding_vvs"
                    android:paddingBottom="@dimen/padding_vvs"
                    android:layout_marginRight="@dimen/dp_6"
                    android:background="@drawable/quick_filter_item_background_neutral"/>

                <TextView
                    android:id="@+id/bottomLabel"
                    style="@style/TextView.Micro.Green"
                    android:paddingLeft="@dimen/padding_ms"
                    android:paddingRight="@dimen/padding_ms"
                    android:paddingTop="@dimen/padding_vvs"
                    android:paddingBottom="@dimen/padding_vvs"
                    android:background="@drawable/quick_filter_item_background_selected"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wishlist_button_container"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle_white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/wishlist_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_wishlist"
            />

    </RelativeLayout>
</RelativeLayout>