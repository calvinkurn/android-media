<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catalog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="@dimen/dp_2"
    android:padding="@dimen/dp_16"
    android:visibility="gone"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible">

    <com.tkpd.library.ui.widget.TouchViewPager
        android:id="@+id/view_pager_intermediary"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tkpd.library.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator_intermediary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        app:layout_constraintLeft_toLeftOf="@id/view_pager_intermediary"
        app:layout_constraintRight_toRightOf="@id/view_pager_intermediary"
        app:layout_constraintTop_toBottomOf="@id/view_pager_intermediary" />

    <TextView
        android:id="@+id/marketprice_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="@string/catalog_marketprice"
        android:textColor="@color/unify_N700_44"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/view_pager_intermediary"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/marketprice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="@color/orange_500"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/view_pager_intermediary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marketprice_lbl"
        tools:text="Rp 14.655.000 - Rp 20.050.000" />

    <LinearLayout
        android:id="@+id/top_three_specs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_13"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/view_pager_intermediary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marketprice" />

    <TextView
        android:id="@+id/complete_specifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/catalog_complete_specifications"
        android:textColor="@color/g_500"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/view_pager_intermediary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_three_specs" />

</android.support.constraint.ConstraintLayout>
