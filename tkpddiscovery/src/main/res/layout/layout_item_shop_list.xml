<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/shop_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tokopedia.core.customwidget.SquareImageView
                tools:src="@drawable/ic_icon_toped_announce"
                android:id="@+id/item_shop_image"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_marginTop="@dimen/dp_1"
                        android:id="@+id/item_shop_gold"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        app:srcCompat="@drawable/ic_shop_gold"
                        android:layout_marginRight="@dimen/dp_4"
                        android:visibility="gone" />

                    <TextView
                        tools:text="Toko Serba Ada dsidjis sjidjis dsjidjsijis"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/item_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_70"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <ImageView
                    tools:src="@drawable/ic_badge_gold"
                    android:id="@+id/reputation_view"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/shop_list_reputation_view_height"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitStart"
                    />

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/shop_location"
                    tools:text="DKI Jakarta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black_36"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shop_list_favorite_button"
                android:layout_width="@dimen/dp_85"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/green_button_rounded">

                <ImageView
                    android:id="@+id/shop_list_favorite_button_icon"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/ic_add"/>

                <TextView
                    android:id="@+id/shop_list_favorite_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_11"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:text="Follow"/>
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_item_preview"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">
            
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/view_shop_inactive"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:alpha="0.7"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Status Toko:"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:text="@string/label_shop_status"/>
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                app:cardElevation="@dimen/dp_0"
                app:cardCornerRadius="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_unavailable_label"
                    android:layout_marginTop="@dimen/dp_2"
                    android:drawableLeft="@drawable/ic_minus"
                    android:drawablePadding="@dimen/dp_5"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_6"
                    android:gravity="center"
                    android:padding="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Tutup"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black_70"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>