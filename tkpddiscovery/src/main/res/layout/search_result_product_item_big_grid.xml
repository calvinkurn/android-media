<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:cardUseCompatPadding="true">

        <com.tokopedia.core.customwidget.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@color/red_100"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/topLabel"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_ms"
        android:layout_alignTop="@id/image_card"
        android:layout_alignLeft="@id/image_card"
        style="@style/TextView.Micro.BlackDisabled"
        android:paddingLeft="@dimen/padding_ms"
        android:paddingRight="@dimen/padding_ms"
        android:paddingTop="@dimen/padding_vvs"
        android:paddingBottom="@dimen/padding_vvs"
        android:background="@drawable/quick_filter_item_background_neutral"/>

    <TextView
        android:id="@+id/bottomLabel"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginBottom="@dimen/margin_ms"
        android:layout_alignBottom="@id/image_card"
        android:layout_alignLeft="@id/image_card"
        style="@style/TextView.Micro.Green"
        android:paddingLeft="@dimen/padding_ms"
        android:paddingRight="@dimen/padding_ms"
        android:paddingTop="@dimen/padding_vvs"
        android:paddingBottom="@dimen/padding_vvs"
        android:background="@drawable/quick_filter_item_background_selected"/>

    <RelativeLayout
        android:id="@id/wishlist_button_container"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/circle_white"
        android:visibility="gone">

        <ImageView
            android:id="@id/wishlist_button"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_wishlist"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_card"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:minHeight="@dimen/product_item_title_min_height"
        tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold"
        android:textSize="@dimen/sp_14"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/black_70"
        android:lineSpacingExtra="5sp" />

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/fontvvs"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_original_price"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        tools:text="Rp 3.121.500"
        android:textSize="@dimen/sp_14"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/orange_red"
        android:lineSpacingExtra="5sp" />

    <TextView
        android:id="@+id/text_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/fontvvs"
        android:layout_toEndOf="@id/price"
        android:layout_toRightOf="@id/price"
        android:layout_below="@id/text_original_price"
        android:layout_alignBottom="@id/price"
        android:gravity="center"
        android:background="@drawable/bg_rounded_corners_red"
        android:paddingTop="@dimen/margin_vvvs"
        android:paddingBottom="@dimen/margin_vvvs"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@dimen/padding_vvs"
        tools:text="10%OFF"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginBottom="@dimen/margin_ms"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/badges_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:fontFamily="sans-serif"
            android:textStyle="normal"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/rating_review_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/rating"
                android:layout_width="51dp"
                android:layout_height="10dp"
                />

            <TextView
                android:id="@+id/review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>