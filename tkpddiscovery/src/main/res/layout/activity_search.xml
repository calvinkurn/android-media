<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/icon_back"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextColor="@color/black_70"
            />

    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="false" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:background="@color/tkpd_bg_color"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@color/white"
                app:tabGravity="fill"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabIndicatorColor="@color/tkpd_green_header"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/tkpd_green_header" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/top_bar_shadow" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </FrameLayout>

    <com.tokopedia.discovery.search.view.DiscoverySearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:id="@+id/search_nav_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_search_navigation"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_22"
        android:paddingRight="@dimen/dp_22"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/TextView.Small.BlackPrimary"
            android:drawableLeft="@drawable/ic_sort"
            android:drawablePadding="@dimen/dp_4"
            android:text="@string/sort"/>

        <View
            android:id="@+id/search_nav_divider"
            android:layout_width="1px"
            android:layout_height="@dimen/dp_32"
            android:background="@color/grey_300"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16" />

        <TextView
            android:id="@+id/button_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/TextView.Small.BlackPrimary"
            android:drawableLeft="@drawable/ic_filter"
            android:drawablePadding="@dimen/dp_4"
            android:text="@string/filter"/>

    </LinearLayout>

    <com.tokopedia.discovery.newdiscovery.widget.BottomSheetFilterView
        android:id="@+id/bottomSheetFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:behavior_hideable="true"
        app:layout_behavior="com.tokopedia.discovery.newdiscovery.widget.UserLockBottomSheetBehavior"/>

</android.support.design.widget.CoordinatorLayout>