<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dynamic_filter_item_padding"
    android:paddingRight="@dimen/dynamic_filter_item_padding"
    android:paddingTop="@dimen/dynamic_filter_rating_item_vertical_padding"
    android:paddingBottom="@dimen/dynamic_filter_rating_item_vertical_padding">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/rating_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:buttonTint="@color/medium_green"
        style="@style/CheckBox"/>

    <ImageView
        android:id="@+id/filter_rating_view"
        android:layout_width="@dimen/filter_rating_width"
        android:layout_height="@dimen/filter_rating_height"
        android:layout_marginLeft="18dp" />

</LinearLayout>