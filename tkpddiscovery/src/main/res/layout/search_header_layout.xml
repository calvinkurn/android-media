<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tkpd_bg_color"
    android:orientation="vertical">

    <com.tokopedia.topads.sdk.widget.TopAdsBannerView
        android:id="@+id/ads_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.discovery.newdiscovery.search.fragment.product.widget.GlobalNavWidget
        android:id="@+id/globalNavWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/suggestion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:orientation="vertical" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/guidedSearchRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/quickFilterListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        tools:orientation="horizontal"
        tools:layoutManager="android.support.v7.widget.GridLayoutManager"
        tools:listitem="@layout/quick_filter_item"
        tools:itemCount="10"
        />

</LinearLayout>