<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="@dimen/product_grid_padding"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <com.tokopedia.core.customwidget.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@id/wishlist_button_container"
        android:layout_width="@dimen/wishlish_button_size"
        android:layout_height="@dimen/wishlish_button_size"
        android:layout_alignEnd="@+id/image_card"
        android:layout_alignTop="@+id/image_card"
        android:background="@drawable/circle_white"
        android:visibility="visible"
        android:layout_alignRight="@+id/image_card">

        <ImageView
            android:id="@id/wishlist_button"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_wishlist" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_card"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="5sp"
        android:maxLines="2"
        android:minHeight="@dimen/product_item_title_min_height"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_s_medium"
        android:textStyle="normal"
        tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold" />

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/fontvvs"
        android:visibility="gone" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_original_price"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/orange_red"
        android:textSize="@dimen/text_size_s_medium"
        android:textStyle="normal"
        tools:text="Rp 3.121.500" />

    <TextView
        android:id="@+id/text_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/price"
        android:layout_below="@id/text_original_price"
        android:layout_toEndOf="@id/price"
        android:layout_toRightOf="@id/price"
        android:background="@drawable/bg_rounded_corners_red"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:paddingTop="@dimen/dp_2"
        android:textColor="@color/white"
        android:textSize="@dimen/fontvvs"
        android:visibility="gone"
        tools:text="10%OFF" />

    <LinearLayout
        android:id="@+id/shop_info_container"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/price"
        android:layout_below="@+id/price"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/badges_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rating_review_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/price"
        android:layout_below="@+id/shop_info_container"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/rating"
            android:layout_width="68dp"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="4dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_xsmall" />

    </LinearLayout>



</RelativeLayout>