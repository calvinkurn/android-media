<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.discovery.newdiscovery.hotlist.view.customview.HotlistPromoView
        android:id="@+id/view_hotlist_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hastag_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="200+ Produk" />

        <com.tokopedia.design.quickfilter.custom.CustomViewRounderCornerFilterView
            android:id="@+id/quickFilterView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8" />

    </LinearLayout>

    <com.tokopedia.topads.sdk.widget.TopAdsBannerView
        android:id="@+id/topAdsBannerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>