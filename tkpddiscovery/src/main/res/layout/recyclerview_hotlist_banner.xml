<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.discovery.newdiscovery.hotlist.view.customview.HotlistPromoView
        android:id="@+id/view_hotlist_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hastag_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:id="@+id/product_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        tools:text="200+ Produk" />

    <com.tokopedia.topads.sdk.view.TopAdsBannerView
        android:id="@+id/topAdsBannerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>