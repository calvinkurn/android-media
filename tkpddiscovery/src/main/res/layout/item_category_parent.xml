<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_parent_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filter_selector_drawable"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/category_parent_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/category_parent_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:textAlignment="center"
        android:text="Title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_500" />
</LinearLayout>