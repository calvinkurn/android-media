<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shop_cpm_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/card_background"
        android:layout_width="250dp"
        android:layout_height="@dimen/dp_75"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@drawable/card_background_with_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/badge"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@drawable/ic_badge_official"
        app:layout_constraintBottom_toBottomOf="@+id/shop_name"
        app:layout_constraintStart_toEndOf="@+id/shop_image"
        app:layout_constraintTop_toTopOf="@+id/shop_name"
        tools:src="@drawable/ic_badge_official" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/clr_f531353b"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintStart_toEndOf="@+id/badge"
        app:layout_constraintTop_toTopOf="@+id/card_background"
        tools:text="Toko Hape Keren" />

    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_margin="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="@+id/card_background"
        app:layout_constraintTop_toTopOf="@+id/card_background"
        app:srcCompat="@drawable/ic_topads" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingEnd="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@+id/card_background"
        app:layout_constraintStart_toStartOf="@+id/badge"
        app:layout_constraintTop_toBottomOf="@+id/shop_name"
        tools:text="Kepuasan Pelanggan adalah Kepuasan Kaddmi. Produk terjamin 100% Original" />


    <ImageView
        android:id="@+id/shop_image"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintEnd_toStartOf="@id/card_background"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintTop_toTopOf="@id/card_background"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


</androidx.constraintlayout.widget.ConstraintLayout>