<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dynamic_filter_item_padding"
    android:paddingRight="@dimen/dynamic_filter_item_padding"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            android:textColor="#f531353b"/>

        <ImageView
            android:id="@+id/icon_new"
            android:layout_width="28dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/ic_new"
            android:scaleType="fitXY"
            android:layout_marginLeft="8dp"
            android:visibility="gone"/>

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_container"
        android:layout_marginTop="2dp"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:textColor="#ae31353b"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/filter_detail_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:buttonTint="@color/checkbox_color_state"
        style="@style/CheckBox"/>

</RelativeLayout>