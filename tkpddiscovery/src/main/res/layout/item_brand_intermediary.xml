<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_product_list"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@id/linWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vs">

        <ImageView
            android:id="@id/thumbnail"
            android:layout_marginTop="@dimen/margin_vs"
            android:layout_width="@dimen/intermediary_brand"
            android:layout_height="@dimen/intermediary_brand"
            android:layout_margin="@dimen/margin_vs"
            android:visibility="visible"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_navigate_next_black_24dp"/>

    </LinearLayout>

</RelativeLayout>
