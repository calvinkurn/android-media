<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/product_grid_padding"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        app:cardUseCompatPadding="true">

        <com.tokopedia.core.customwidget.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@id/wishlist_button_container"
        android:layout_width="@dimen/wishlish_button_size"
        android:layout_height="@dimen/wishlish_button_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/circle_white"
        android:visibility="gone">

        <ImageView
            android:id="@id/wishlist_button"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_wishlist"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_card"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:minHeight="@dimen/product_item_title_min_height"
        tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold"
        android:textSize="@dimen/text_size_s_medium"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/black_70"
        android:lineSpacingExtra="5sp" />

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/fontvvs"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_original_price"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        tools:text="Rp 3.121.500"
        android:textSize="@dimen/text_size_s_medium"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/orange_red"
        android:lineSpacingExtra="5sp" />

    <TextView
        android:id="@+id/text_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/fontvvs"
        android:layout_toEndOf="@id/price"
        android:layout_toRightOf="@id/price"
        android:layout_below="@id/text_original_price"
        android:layout_alignBottom="@id/price"
        android:gravity="center"
        android:background="@drawable/bg_rounded_corners_red"
        android:paddingTop="@dimen/margin_vvvs"
        android:paddingBottom="@dimen/margin_vvvs"
        android:paddingLeft="@dimen/padding_vvs"
        android:paddingRight="@dimen/padding_vvs"
        tools:text="10%OFF"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/rating_review_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/rating"
            android:layout_width="68dp"
            android:layout_height="12dp"
            />

        <TextView
            android:id="@+id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="@dimen/text_size_xsmall"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rating_review_container"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/product_grid_padding"
        android:orientation="vertical">

        <com.tokopedia.core.customwidget.FlowLayout
            android:id="@+id/label_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black_54"
            android:text="ORIGINAL-ZONE"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:lineSpacingExtra="5sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_place_grey_24dp"
            android:gravity="center_vertical"
            android:minHeight="25dp"
            android:textColor="@color/black_38"
            android:text="Jakarta"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:lineSpacingExtra="5sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/badges_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/shop_detail_container"
        android:layout_alignBottom="@id/shop_detail_container"
        android:orientation="horizontal" />

</RelativeLayout>