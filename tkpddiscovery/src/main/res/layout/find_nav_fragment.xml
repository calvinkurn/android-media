<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="64dp">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_12">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/homeBreadCrumb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_tokopedia"
                        android:textColor="@color/green_300"
                        app:typographyType="body_1"
                        app:typographyWeight="reguler" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/findBreadCrumb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textColor="@color/green_300"
                        app:typographyType="body_1"
                        app:typographyWeight="reguler" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/quickFilterRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_12"
                    tools:itemCount="5"
                    tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:scrollbars="horizontal" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_12"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/btnLoadMore"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_margin="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/load_more"
                    app:unifyButtonType="alternate"
                    app:unifyButtonVariant="ghost" />

                <FrameLayout
                    android:id="@+id/layoutRelated"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_48">

                    <include
                        android:id="@+id/layoutFindRelatedData"
                        layout="@layout/layout_find_related"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_40" />

                    <com.tokopedia.unifycomponents.UnifyButton
                        android:id="@+id/btnReadMore"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_48"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_margin="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_12"
                        android:elevation="@dimen/dp_2"
                        android:text="@string/find_nav_read_more"
                        app:unifyButtonType="alternate"
                        app:unifyButtonVariant="ghost" />

                </FrameLayout>

                <include
                    android:id="@+id/layoutNoData"
                    layout="@layout/layout_nav_no_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <include
        android:id="@+id/layoutBannedScreen"
        layout="@layout/fragment_banned_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>