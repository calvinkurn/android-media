<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_group_tutor_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_button_rounded"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10_sm"
        android:paddingRight="@dimen/dp_10_sm"
        android:paddingTop="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_5"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:textSize="@dimen/font_large" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_70"
        android:textSize="@dimen/text_size_s_medium"
        android:lineSpacingExtra="4dp"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_10_sm"
        android:paddingRight="@dimen/dp_10_sm"
        android:paddingTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_15"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/grey_600" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_previous"
            android:layout_width="@dimen/buttom_width_small"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left"
            android:paddingBottom="@dimen/dp_10_sm"
            android:paddingLeft="@dimen/dp_10_sm"
            android:paddingTop="@dimen/dp_10_sm" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/view_group_indicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"></android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_next"
            android:layout_width="@dimen/buttom_width_small"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="right"
            android:paddingBottom="@dimen/dp_10_sm"
            android:paddingRight="@dimen/dp_10_sm"
            android:paddingTop="@dimen/dp_10_sm" />
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>