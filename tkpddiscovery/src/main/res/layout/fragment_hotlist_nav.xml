<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newdiscovery.hotlistRevamp.view.fragment.HotlistNavFragment">


    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="64dp">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hotlist_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_160"
                    android:layout_marginTop="@dimen/dp_8"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:id="@+id/banner_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_110"
                    android:layout_marginTop="@dimen/dp_8"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:use_gradient="true" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_12">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/quickfilter_recyclerview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:itemCount="5"
                        tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        tools:orientation="horizontal"
                        tools:scrollbars="horizontal" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cpm_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="5"
                    tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:scrollbars="horizontal" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp" />

                <include
                    android:id="@+id/layout_no_data"
                    layout="@layout/layout_nav_no_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</LinearLayout>