<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newdiscovery.hotlistRevamp.view.fragment.HotlistNavFragment">


    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="64dp">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hotlist_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_110"
                    android:paddingTop="@dimen/dp_8"
                    android:scaleType="fitXY"
                 />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/subcategory_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_pink_gradient"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_12">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/quickfilter_recyclerview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:itemCount="5"
                        tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        tools:orientation="horizontal"
                        tools:scrollbars="horizontal" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cpm_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="5"
                    tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:scrollbars="horizontal" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/product_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp" />

                <include
                    android:id="@+id/layout_no_data"
                    layout="@layout/layout_nav_no_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</android.support.constraint.ConstraintLayout>