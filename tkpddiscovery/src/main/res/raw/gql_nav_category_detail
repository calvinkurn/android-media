query CategoryDetailQuery($identifier: String, $intermediary: Boolean, $safeSearch: Boolean) {
  CategoryDetailQuery(identifier: $identifier, intermediary: $intermediary, safeSearch: $safeSearch) {
    header {
      message
    }
    data {
      id
      name
      isAdult
      tree
      parent
      rootId
      url
      applinks
      status
      titleTag
      description
      brandId
      widgetBannerPromo
      widgetSubCategory
      widgetOtherSubCategory
      widgetHotlist
      widgetOfficialStore
      widgetVideo
      staticHeaderImage
      staticHeaderImageHexColor
      curatedProductDepId
      curatedProductImageUrl
      child {
        id
        name
        url
        thumbnailImage
        isForAdult: isAdult
        applinks
      }
    }
  }
}
