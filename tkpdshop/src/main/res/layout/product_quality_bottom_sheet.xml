<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RatingBar
        android:id="@+id/rating_bar_product_quality"
        style="@style/Small.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginStart="@dimen/new_margin_med"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/product_quality_value"
        app:layout_constraintTop_toTopOf="@+id/product_quality_value" />

    <TextView
        android:id="@+id/product_quality_tv_static_desc"
        style="@style/TextView.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_med"
        android:layout_marginStart="@dimen/new_margin_med"
        android:layout_marginTop="@dimen/margin_small"
        android:lineSpacingExtra="@dimen/line_spacng_extra"
        android:text="@string/product_quality_content_tv_desc"
        android:textColor="@color/colorSheetTitle"
        android:textStyle="normal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_quality_desc"
        style="@style/TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginStart="@dimen/new_margin_small"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="@dimen/line_spacng_extra"
        android:textColor="@color/colorSheetTitle"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/rating_bar_product_quality"
        app:layout_constraintTop_toTopOf="@+id/rating_bar_product_quality"
        tools:text="128.189 poin" />

    <TextView
        android:id="@+id/product_quality_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginStart="@dimen/new_margin_med"
        android:layout_marginTop="@dimen/new_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_quality_tv_static_desc"
        tools:text="4.5" />
</android.support.constraint.ConstraintLayout>