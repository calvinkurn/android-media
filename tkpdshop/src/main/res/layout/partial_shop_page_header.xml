<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:orientation="horizontal"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.6">

    <View
        android:id="@+id/separator_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/image_view_shop_icon" />

    <com.tokopedia.shop.page.view.widget.ShopPageSubDetailView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/separator_1"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:spsd_title="@string/reputation_label">

        <com.tokopedia.design.reputation.ShopReputationView
            android:id="@+id/shop_reputation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.tokopedia.shop.page.view.widget.ShopPageSubDetailView>

    <View
        android:id="@+id/separator_vertical_1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@color/grey_300"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/separator_vertical_"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/grey_300"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintVertical_bias="0.0" />

    <com.tokopedia.shop.page.view.widget.ShopPageSubDetailView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:spsd_title="@string/product_quality_label_value">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_product_quality_value"
                style="@style/TextView.Small"
                tools:text="@string/app_name" />

            <RatingBar
                android:id="@+id/rating_bar_product_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </com.tokopedia.shop.page.view.widget.ShopPageSubDetailView>

    <com.tokopedia.shop.page.view.widget.ShopPageSubDetailView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator_vertical_"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:spsd_title="@string/speed_label_value">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_view_speed"
                android:layout_width="@dimen/image_width_xxs"
                android:layout_height="@dimen/image_width_xs"
                app:srcCompat="@drawable/bg_button_orange" />

            <TextView
                android:id="@+id/text_view_speed_value"
                style="@style/TextView.Micro" />
        </LinearLayout>

    </com.tokopedia.shop.page.view.widget.ShopPageSubDetailView>

    <ImageView
        android:id="@+id/image_view_shop_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_width_xxl"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_button_orange" />

    <ImageView
        android:id="@+id/image_view_shop_icon"
        android:layout_width="@dimen/image_width_l"
        android:layout_height="@dimen/image_width_l"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/image_view_shop_background"
        app:layout_constraintTop_toBottomOf="@+id/image_view_shop_background"
        app:srcCompat="@drawable/bg_button_green" />

    <ImageView
        android:id="@+id/image_view_shop_status"
        android:layout_width="@dimen/image_width_xxs"
        android:layout_height="@dimen/image_width_xxs"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_badge_shop_regular"
        app:layout_constraintStart_toEndOf="@+id/image_view_shop_icon"
        app:layout_constraintTop_toTopOf="@+id/image_view_shop_icon" />

    <ImageView
        android:id="@+id/image_view_location"
        android:layout_width="@dimen/image_width_xxs"
        android:layout_height="@dimen/image_width_xxs"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_info_location"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_shop_icon"
        app:layout_constraintStart_toEndOf="@+id/image_view_shop_icon" />

    <TextView
        android:id="@+id/text_view_shop_name"
        style="@style/TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/image_view_shop_status"
        app:layout_constraintTop_toTopOf="@+id/image_view_shop_status"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/text_view_location"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_location"
        app:layout_constraintStart_toEndOf="@+id/image_view_location"
        tools:text="@string/app_name" />

    <ImageView
        android:id="@+id/shop_info"
        android:layout_width="@dimen/image_width_xxs"
        android:layout_height="@dimen/image_width_xxs"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_shop_background"
        app:layout_constraintTop_toTopOf="@+id/text_view_shop_name"
        app:srcCompat="@color/background_star_review" />

    <LinearLayout
        android:id="@+id/container_click_info"
        android:layout_width="382dp"
        android:layout_height="72dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_shop_background" />

    <LinearLayout
        android:id="@+id/reputation_click_container"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/separator_vertical_1"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/product_quality_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/separator_vertical_"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/separator_vertical_1"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/speed_container"
        android:layout_width="105dp"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/separator_vertical_"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:background="@color/tkpd_dark_red"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/container_click_info"
        app:layout_constraintStart_toStartOf="@+id/container_click_info"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <Button
            android:id="@+id/button_manage_shop"
            style="@style/Button.Submit.White.Border"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/manage_shop" />

        <Button
            android:id="@+id/button_add_product"
            style="@style/Button.Submit.White.Border"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/add_product" />

        <Button
            android:id="@+id/button_chat_seller"
            style="@style/Button.Submit.White.Border"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/chat_seller" />

        <Button
            android:id="@+id/button_shop_page"
            style="@style/Button.Submit.White.Border"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/favorite" />
    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="164dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="165dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="250dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="2dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintGuide_percent="0.33072916"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.67" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</android.support.constraint.ConstraintLayout>