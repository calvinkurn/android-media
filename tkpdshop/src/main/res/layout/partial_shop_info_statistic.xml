<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:divider="@drawable/bg_line_separator"
        android:orientation="vertical"
        android:showDividers="middle">

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_transaction_success"
            style="@style/LabelLayout"
            app:lv_image="@drawable/ic_smiley_netral"
            app:lv_title="@string/shop_info_label_transaction_success" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_total_transaction"
            style="@style/LabelLayout"
            app:lv_image="@drawable/ic_smiley_netral"
            app:lv_title="@string/shop_info_label_total_transaction" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_product_sold"
            style="@style/LabelLayout"
            app:lv_image="@drawable/ic_smiley_netral"
            app:lv_title="@string/shop_info_label_product_sold" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_total_review"
            style="@style/LabelLayout"
            app:lv_image="@drawable/ic_smiley_netral"
            app:lv_title="@string/shop_info_label_total_review" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_favorite"
            style="@style/LabelLayout"
            app:lv_image="@drawable/ic_smiley_netral"
            app:lv_title="@string/shop_info_label_favourite" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_last_online"
            style="@style/LabelLayout"
            app:lv_image="@drawable/ic_smiley_netral"
            app:lv_title="@string/shop_info_label_last_online" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_open_since"
            style="@style/LabelLayout"
            app:lv_image="@drawable/ic_smiley_netral"
            app:lv_title="@string/shop_info_label_open_since" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_total_product"
            style="@style/LabelLayout"
            app:lv_image="@drawable/ic_smiley_netral"
            app:lv_title="@string/shop_info_label_total_product" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_total_etalase"
            style="@style/LabelLayout"
            app:lv_image="@drawable/ic_smiley_netral"
            app:lv_title="@string/shop_info_label_total_etalase" />
    </LinearLayout>
</LinearLayout>