<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout style="@style/LabelLayout">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Title.Bold"
            android:text="@string/shop_info_label_statistic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/bg_list_separator"
        android:orientation="vertical"
        android:showDividers="middle">

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_transaction_success"
            style="@style/LabelLayout"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_image="@drawable/ic_info_transaction"
            app:lv_image_width="@dimen/image_width_xs"
            app:lv_title="@string/shop_info_label_transaction_success" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_total_transaction"
            style="@style/LabelLayout"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_image="@drawable/ic_info_cart"
            app:lv_image_width="@dimen/image_width_xs"
            app:lv_title="@string/shop_info_label_total_transaction" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_product_sold"
            style="@style/LabelLayout"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_image="@drawable/ic_info_product"
            app:lv_image_width="@dimen/image_width_xs"
            app:lv_title="@string/shop_info_label_product_sold" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_total_review"
            style="@style/LabelLayout"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_image="@drawable/ic_info_review"
            app:lv_image_width="@dimen/image_width_xs"
            app:lv_title="@string/shop_info_label_total_review" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_favorite"
            style="@style/LabelLayout"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_image="@drawable/ic_info_favourite"
            app:lv_image_width="@dimen/image_width_xs"
            app:lv_title="@string/shop_info_label_favourite" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_last_online"
            style="@style/LabelLayout"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_image="@drawable/ic_info_clock"
            app:lv_image_width="@dimen/image_width_xs"
            app:lv_title="@string/shop_info_label_last_online" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_open_since"
            style="@style/LabelLayout"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_image="@drawable/ic_info_open_label"
            app:lv_image_width="@dimen/image_width_xs"
            app:lv_title="@string/shop_info_label_open_since" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_total_product"
            style="@style/LabelLayout"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_image="@drawable/ic_info_product"
            app:lv_image_width="@dimen/image_width_xs"
            app:lv_title="@string/shop_info_label_total_product" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_total_etalase"
            style="@style/LabelLayout"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_image="@drawable/ic_info_etalase"
            app:lv_image_width="@dimen/image_width_xs"
            app:lv_title="@string/shop_info_label_total_etalase" />
    </LinearLayout>

</LinearLayout>