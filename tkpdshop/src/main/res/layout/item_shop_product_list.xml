<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_ms"
        android:layout_marginEnd="@dimen/margin_vl"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_vl"
        android:layout_marginStart="@dimen/margin_sm"
        android:layout_marginTop="@dimen/margin_ms">

        <com.tokopedia.shop.product.view.widget.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/image_width_product_list"
            android:layout_height="@dimen/image_width_product_list"
            android:layout_marginEnd="@dimen/margin_sm"
            android:layout_marginRight="@dimen/margin_sm"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_kupon"
            tools:visibility="visible" />

        <include
            layout="@layout/partial_shop_product_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include
        layout="@layout/partial_shop_product_item_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>