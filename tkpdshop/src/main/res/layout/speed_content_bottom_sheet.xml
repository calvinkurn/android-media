<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_view_speed_content"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            tools:src="@color/black_12"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/speed_content_tv_static_desc"
            android:layout_marginLeft="@dimen/new_margin_med"
            android:layout_marginStart="@dimen/new_margin_med"
            app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#8a000000"
            android:lineSpacingExtra="4sp"
            android:text="@string/speed_content_desc"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/speed_content_tv_static_desc"/>

    <TextView
            android:id="@+id/speed_content_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/margin_small"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#8a000000"
            android:lineSpacingExtra="4sp"
            tools:text="Sangat Cepat (dihitung dalam 12 bulan terakhir)"
            app:layout_constraintTop_toTopOf="@+id/image_view_speed_content"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/image_view_speed_content"
            android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>