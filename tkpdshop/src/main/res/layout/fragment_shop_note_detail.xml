<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            style="@style/TextView.Title.Bold"
            android:layout_marginTop="@dimen/margin_sm"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_date"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_marginTop="@dimen/margin_ms"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_desc"
            style="@style/TextView.Small.BlackDisabled"
            android:layout_marginTop="@dimen/margin_med"
            tools:text="@string/app_name" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>