<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_original_price"
        style="@style/TextView.Micro.BlackDisabled"
        android:visibility="gone"
        tools:text="@string/app_name"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_displayed_price"
            style="@style/TextView.Small.Orange"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_discount_percentage"
            style="@style/TextView.Micro.WhitePrimary"
            android:background="@drawable/bg_rounded_corners_red"
            android:padding="@dimen/padding_vvs"
            android:visibility="gone"
            tools:text="@string/app_name"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>