<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:orientation="horizontal"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.6">

    <ImageView
        android:id="@+id/image_view_shop_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_width_xxl"
        android:scaleType="fitXY"
        android:src="@drawable/bg_button_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_shop_icon"
        android:layout_width="@dimen/image_width_l"
        android:layout_height="@dimen/image_width_l"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/bg_button_green"
        app:layout_constraintStart_toStartOf="@+id/image_view_shop_background"
        app:layout_constraintTop_toBottomOf="@+id/image_view_shop_background" />

    <ImageView
        android:id="@+id/image_view_shop_status"
        android:layout_width="@dimen/image_width_xxs"
        android:layout_height="@dimen/image_width_xxs"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_view_shop_icon"
        app:layout_constraintTop_toTopOf="@+id/image_view_shop_icon" />

    <ImageView
        android:id="@+id/image_view_location"
        android:layout_width="@dimen/image_width_xxs"
        android:layout_height="@dimen/image_width_xxs"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_info_location_grey"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_shop_icon"
        app:layout_constraintStart_toEndOf="@+id/image_view_shop_icon" />

    <TextView
        android:id="@+id/text_view_shop_name"
        style="@style/TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/image_view_shop_status"
        app:layout_constraintTop_toTopOf="@+id/image_view_shop_status"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/text_view_location"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_location"
        app:layout_constraintStart_toEndOf="@+id/image_view_location"
        tools:text="@string/app_name" />

    <ImageView
        android:id="@+id/shop_info"
        android:layout_width="@dimen/image_width_xxs"
        android:layout_height="@dimen/image_width_xxs"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:src="@color/background_star_review"
        app:layout_constraintEnd_toEndOf="@+id/image_view_shop_background"
        app:layout_constraintTop_toTopOf="@+id/text_view_shop_name" />

    <LinearLayout
        android:id="@+id/container_click_info"
        android:layout_width="382dp"
        android:layout_height="72dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_shop_background" />

</android.support.constraint.ConstraintLayout>