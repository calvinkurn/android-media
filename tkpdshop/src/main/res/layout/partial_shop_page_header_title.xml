<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_header_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_ms"
    android:paddingRight="@dimen/margin_ms"
    android:paddingTop="@dimen/margin_ms">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_ms"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_shop_icon"
            android:layout_width="@dimen/image_width_l"
            android:layout_height="@dimen/image_width_l"
            android:layout_marginTop="@dimen/margin_ms"
            android:src="@drawable/ic_loading_toped"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/image_view_shop_status"
            android:layout_width="@dimen/image_medal_size"
            android:layout_height="@dimen/image_medal_size"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            android:layout_marginTop="@dimen/padding_vvvs"
            android:src="@drawable/ic_badge_shop_gm"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/image_view_shop_icon"
            app:layout_constraintTop_toTopOf="@id/image_view_shop_icon"
            tools:layout_conversion_absoluteHeight="@dimen/margin_sm"
            tools:layout_conversion_absoluteWidth="@dimen/margin_sm"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_view_shop_name"
            style="@style/TextView.Title"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="@dimen/margin_ms"
            android:layout_marginStart="6dp"
            app:layout_constraintEnd_toStartOf="@+id/shop_info"
            app:layout_constraintStart_toEndOf="@+id/image_view_shop_status"
            app:layout_constraintTop_toTopOf="@+id/image_view_shop_icon"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="121dp"
            tools:text="@string/app_name" />


        <ImageView
            android:id="@+id/image_view_location"
            android:layout_width="@dimen/image_medal_size"
            android:layout_height="@dimen/image_medal_size"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            android:src="@drawable/ic_info_location_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_shop_icon"
            app:layout_constraintTop_toBottomOf="@+id/text_view_shop_name"
            tools:layout_conversion_absoluteHeight="15dp"
            tools:layout_conversion_absoluteWidth="15dp" />

        <TextView
            android:id="@+id/text_view_location"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shop_page_header_margin"
            android:layout_marginStart="@dimen/shop_page_header_margin"
            app:layout_constraintStart_toEndOf="@+id/image_view_location"
            app:layout_constraintTop_toTopOf="@+id/image_view_location"
            app:layout_constraintBottom_toBottomOf="@id/image_view_location"
            tools:layout_conversion_absoluteHeight="15dp"
            tools:layout_conversion_absoluteWidth="90dp"
            tools:text="@string/app_name" />


        <ImageView
            android:id="@+id/shop_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:src="@drawable/ic_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_shop_name"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_conversion_absoluteWidth="24dp" />
    </android.support.constraint.ConstraintLayout>

    <com.tokopedia.shop.page.view.widget.ShopWarningTickerView
        android:id="@+id/shop_warning_ticker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="@dimen/margin_ms"/>
</LinearLayout>