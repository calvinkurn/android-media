<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_header_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_ms">

    <ImageView
        android:id="@+id/image_view_shop_icon"
        android:layout_width="@dimen/image_width_l"
        android:layout_height="@dimen/image_width_l"
        android:layout_marginEnd="@dimen/margin_ms"
        android:layout_marginRight="@dimen/margin_ms"
        android:src="@drawable/ic_loading_toped" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_view_shop_status"
                android:layout_width="@dimen/image_width_xxs"
                android:layout_height="@dimen/image_width_xxs"
                android:layout_marginRight="@dimen/margin_ms"
                android:layout_marginEnd="@dimen/margin_ms"
                android:src="@drawable/ic_badge_shop_gm"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_view_shop_name"
                style="@style/TextView.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/app_name" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout_shop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_view_location"
                android:layout_width="@dimen/image_width_xxs"
                android:layout_height="@dimen/image_width_xxs"
                android:layout_marginRight="@dimen/margin_ms"
                android:layout_marginEnd="@dimen/margin_ms"
                android:src="@drawable/ic_info_location_grey" />

            <TextView
                android:id="@+id/text_view_location"
                style="@style/TextView.Micro.BlackSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/app_name" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/shop_info"
        android:layout_width="@dimen/image_width_xxs"
        android:layout_height="@dimen/image_width_xxs"
        android:src="@drawable/ic_info" />

</LinearLayout>