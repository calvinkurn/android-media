<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_header_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_8"
    android:paddingRight="@dimen/dp_8"
    android:paddingTop="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/image_view_shop_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/bg_rect_stroke_lighter_gray"
            android:padding="@dimen/dp_3">

            <ImageView
                android:id="@+id/image_view_shop_icon"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:srcCompat="@drawable/ic_loading_toped" />

            <View
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/bg_rect_stroke_gray_dashed" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_view_shop_status"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    app:srcCompat="@drawable/ic_badge_shop_gm"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/text_view_shop_name"
                    style="@style/TextView.Title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="@string/app_name" />

                <ImageView
                    android:id="@+id/shop_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    app:srcCompat="@drawable/ic_info" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_view_location"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    app:srcCompat="@drawable/ic_info_location_grey" />

                <TextView
                    android:id="@+id/text_view_location"
                    style="@style/TextView.Micro.BlackSecondary"
                    tools:text="@string/app_name" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.tokopedia.shop.page.view.widget.ShopWarningTickerView
        android:id="@+id/shop_warning_ticker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:visibility="gone"
        tools:visibility="gone" />
</LinearLayout>