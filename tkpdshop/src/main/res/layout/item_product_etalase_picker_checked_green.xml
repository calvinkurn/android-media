<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_background_view_topads"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <ImageView
        android:id="@+id/etalase_badge_image_view"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        tools:src="@drawable/ic_check"
        android:layout_marginRight="@dimen/margin_padding_small"
        android:layout_marginEnd="@dimen/margin_padding_small"
        tools:visibility="gone"/>

    <TextView
        android:id="@+id/etalase_picker_item_name"
        style="@style/TextView.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/etalase_picker_radio_button"
        android:layout_width="@dimen/image_width_xs"
        android:layout_height="@dimen/image_width_xs"
        android:src="@drawable/ic_check_green_24dp" />

</LinearLayout>