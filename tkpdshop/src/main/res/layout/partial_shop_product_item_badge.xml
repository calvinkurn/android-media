<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/badges_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/text_view_cashback"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:background="@drawable/bg_rect_stroke_green"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:paddingTop="@dimen/dp_2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/shop_product_item_badge_deprecated_font"
        android:visibility="gone"
        tools:text="@string/shop_product_manage_item_cashback"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_wholesale"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:background="@drawable/bg_rect_stroke_lighter_gray"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:paddingTop="@dimen/dp_2"
        android:text="@string/shop_product_label_wholesale"
        android:textSize="@dimen/shop_product_item_badge_deprecated_font"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_pre_order"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:background="@drawable/bg_rect_stroke_lighter_gray"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:paddingTop="@dimen/dp_2"
        android:text="@string/shop_product_label_po"
        android:textSize="@dimen/shop_product_item_badge_deprecated_font"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/image_view_free_return"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:srcCompat="@drawable/ic_free_return"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>