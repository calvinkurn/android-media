<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_view_speed_content"
        android:layout_width="@dimen/image_width_xxs"
        android:layout_height="@dimen/image_width_xs"
        tools:src="@drawable/ic_shop_reputation_speed_default" />

    <TextView
        android:id="@+id/text_view_speed_info"
        style="@style/TextView.Small.BlackDisabled.Bold"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        tools:text="@string/app_name" />

    <TextView
        style="@style/TextView.Small.BlackDisabled"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:text="@string/shop_page_bottom_sheet_speed_shop_info_last_12_months" />
</LinearLayout>