<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <com.tokopedia.design.reputation.ShopReputationView
            android:id="@+id/shop_reputation_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/new_margin_med"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/shop_reputation_tv_static_desc"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#8a000000"
            android:lineSpacingExtra="4sp"
            android:text="@string/shop_reputation_desc"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/shop_reputation_tv_static_desc"/>

    <TextView
            android:id="@+id/shop_reputation_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/margin_small"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#8a000000"
            android:lineSpacingExtra="4sp"
            tools:text="128.189 poin"
            app:layout_constraintTop_toTopOf="@+id/shop_reputation_view"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/shop_reputation_view"
            android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>