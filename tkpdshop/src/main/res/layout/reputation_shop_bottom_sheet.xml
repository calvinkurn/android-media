<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.design.reputation.ShopReputationView
        android:id="@+id/shop_reputation_view"
        android:layout_width="@dimen/font_loading_height_title"
        android:layout_height="@dimen/font_loading_height_title"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginStart="@dimen/new_margin_med"
        android:layout_marginTop="@dimen/new_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_reputation_tv_static_desc" />

    <TextView
        android:id="@+id/shop_reputation_tv_static_desc"
        style="@style/TextView.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_med"
        android:layout_marginStart="@dimen/new_margin_med"
        android:layout_marginTop="@dimen/margin_small"
        android:lineSpacingExtra="@dimen/line_spacng_extra"
        android:text="@string/shop_reputation_desc"
        android:textColor="@color/colorSheetTitle"
        android:textStyle="normal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_reputation_desc"
        style="@style/TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="@dimen/line_spacng_extra"
        android:textColor="@color/colorSheetTitle"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/shop_reputation_view"
        app:layout_constraintTop_toTopOf="@+id/shop_reputation_view"
        tools:text="128.189 poin" />
</android.support.constraint.ConstraintLayout>