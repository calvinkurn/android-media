<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.tokopedia.design.button.BottomActionView
        android:id="@+id/bottom_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:bav_1_display="true"
        app:bav_icon_1="@drawable/ic_icon"
        app:bav_label_1="@string/shop_info_sort_label" />
</RelativeLayout>