<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:clickable="true"
    tools:layout_editor_absoluteY="81dp">

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/image_guide_line_grid" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_vvs"
        android:layout_marginEnd="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_ms"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_kupon"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/wishlist_button_container"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginEnd="@dimen/margin_ms"
        android:layout_marginRight="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_vvvs"
        android:background="@drawable/circle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/image_view_wishlist"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:layout_gravity="center"
            android:background="@drawable/ic_wishlist" />

    </FrameLayout>

    <TextView
        android:id="@+id/title"
        style="@style/TextView.Micro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:ellipsize="end"
        android:lineSpacingExtra="5sp"
        android:maxLines="2"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold" />

    <TextView
        android:id="@+id/price"
        style="@style/TextView.Small.Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_margin_small"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginStart="@dimen/new_margin_small"
        android:layout_marginTop="@dimen/new_margin_small"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/badges_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="Rp 3.121.500" />


    <LinearLayout
        android:id="@+id/badges_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_margin_small"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginStart="@dimen/new_margin_small"
        android:layout_marginTop="@dimen/new_margin_small"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price">

        <ImageView
            android:id="@+id/image_view_featured"
            android:layout_width="@dimen/image_width_xxs"
            android:layout_height="@dimen/image_width_xxs"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:src="@drawable/ic_featured_product"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_view_variant"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:background="@drawable/bg_rect_stroke_lighter_gray"
            android:padding="@dimen/padding_vvs"
            android:text="@string/product_label_variant"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/text_view_cashback"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:background="@drawable/bg_rect_stroke_green"
            android:padding="@dimen/padding_vvs"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="@string/product_manage_item_cashback"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_view_wholesale"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:background="@drawable/bg_rect_stroke_lighter_gray"
            android:padding="@dimen/padding_vvs"
            android:text="@string/product_label_wholesale"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_view_pre_order"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:background="@drawable/bg_rect_stroke_lighter_gray"
            android:padding="@dimen/padding_vvs"
            android:text="@string/product_label_po" />

        <ImageView
            android:id="@+id/image_view_free_return"
            android:layout_width="@dimen/image_width_xxs"
            android:layout_height="@dimen/image_width_xxs"
            android:src="@drawable/ic_free_return" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>