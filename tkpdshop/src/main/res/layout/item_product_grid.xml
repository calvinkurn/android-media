<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_ms"
        android:orientation="vertical">

        <com.tokopedia.shop.product.view.widget.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_kupon"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextView.Small.BlackSecondary"
                android:ellipsize="end"
                android:lineSpacingExtra="5sp"
                android:lines="2"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/price"
                style="@style/TextView.Small.Orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_margin_small"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5sp"
                android:textStyle="normal"
                tools:text="@string/app_name" />

            <include
                android:id="@+id/badges_container"
                layout="@layout/partial_shop_product_badge"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/shop_badge_min_height"
                android:layout_marginTop="@dimen/margin_ms" />
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/partial_item_product_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>