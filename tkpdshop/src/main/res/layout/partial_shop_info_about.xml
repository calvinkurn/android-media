<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout style="@style/LabelLayout">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Title.Bold"
            android:text="@string/shop_info_label_about" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/bg_list_separator"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            style="@style/LabelLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_tagline"
                style="@style/TextView.Small.BlackDisabled"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/text_view_description"
                style="@style/TextView.Small.BlackDisabled"
                android:layout_marginTop="@dimen/margin_small"
                tools:text="@string/app_name" />
        </LinearLayout>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_physical_shop"
            style="@style/LabelLayout"
            android:visibility="gone"
            app:lv_content="@string/shop_info_label_default_content"
            app:lv_title="@string/shop_info_label_physical_shop"
            tools:visibility="visible" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_view_shop_owner"
            style="@style/LabelLayout"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_image="@drawable/ic_smiley_neutral"
            app:lv_image_width="@dimen/image_width_l"
            app:lv_sub_title="@string/shop_info_label_shop_owner"
            app:lv_title="@string/shop_info_label_default_content" />

    </LinearLayout>

</LinearLayout>