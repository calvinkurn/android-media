<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/price_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_sm"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/bg_line_separator"
        android:orientation="vertical"
        android:showDividers="middle">

        <android.support.constraint.ConstraintLayout
            style="@style/LabelLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_address_title"
                style="@style/TextView.Title"
                android:layout_marginTop="@dimen/margin_med"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/text_view_address_content"
                style="@style/TextView.Title"
                android:layout_marginTop="@dimen/margin_med"
                app:layout_constraintTop_toBottomOf="@id/text_view_address_title"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/text_view_area"
                style="@style/TextView.Title"
                android:layout_marginTop="@dimen/margin_med"
                app:layout_constraintTop_toBottomOf="@id/text_view_address_content"
                tools:text="@string/app_name" />

            <com.tokopedia.design.label.LabelView
                android:id="@+id/label_view_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                app:layout_constraintTop_toBottomOf="@id/text_view_area"
                app:lv_image="@drawable/ic_smiley_neutral"
                app:lv_image_width="@dimen/image_width_xs" />

            <com.tokopedia.design.label.LabelView
                android:id="@+id/label_view_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                app:layout_constraintTop_toBottomOf="@id/label_view_email"
                app:lv_image="@drawable/ic_smiley_neutral"
                app:lv_image_width="@dimen/image_width_xs" />

            <com.tokopedia.design.label.LabelView
                android:id="@+id/label_view_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                app:layout_constraintTop_toBottomOf="@id/label_view_phone"
                app:lv_image="@drawable/ic_smiley_neutral"
                app:lv_image_width="@dimen/image_width_xs" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>