<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_ms"
        android:layout_marginEnd="@dimen/margin_vl"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_vl"
        android:layout_marginStart="@dimen/margin_sm"
        android:layout_marginTop="@dimen/margin_ms">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/image_width_product_list"
            android:layout_height="@dimen/image_width_product_list"
            android:layout_marginEnd="@dimen/margin_sm"
            android:layout_marginRight="@dimen/margin_sm"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_kupon"
            tools:visibility="visible" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextView.Small.BlackSecondary"
                android:ellipsize="end"
                android:lineSpacingExtra="5sp"
                android:minLines="2"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/price"
                style="@style/TextView.Small.Orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ms"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5sp"
                android:textStyle="normal"
                tools:text="@string/app_name" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ms">

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Small.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_vvs"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/total_review"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginStart="@dimen/new_margin_med"
                    android:visibility="gone"
                    tools:text="TextView"
                    tools:visibility="visible" />
            </LinearLayout>

            <include
                android:id="@+id/badges_container"
                layout="@layout/partial_shop_product_badge"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/shop_badge_min_height"
                android:layout_marginTop="@dimen/margin_ms" />
        </LinearLayout>


    </LinearLayout>

    <include
        layout="@layout/partial_item_product_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>