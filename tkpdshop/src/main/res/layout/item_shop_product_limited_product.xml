<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_apps"
    android:orientation="vertical">

    <com.tokopedia.design.label.LabelView
        android:id="@+id/label_view_etalase"
        style="@style/LabelLayout"
        app:lv_content="@string/shop_info_label_choose_etalase"
        app:lv_content_color="@color/tkpd_main_green"
        app:lv_title="@string/shop_info_default_etalase_title"
        app:lv_title_text_style="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_show_complete_product"
        style="@style/Button.Submit.White"
        android:text="@string/shop_page_button_show_more_product" />
</LinearLayout>