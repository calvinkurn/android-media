<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vg_shop_close"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_green_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/image_width_xs"
                android:layout_height="@dimen/image_width_xs"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                tools:src="@drawable/ic_shop_label_closed" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextView.Micro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/shop_page_header_shop_closed_info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/image_width_xs"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_description"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_vs"
                    tools:text="Closed Description" />

                <TextView
                    android:id="@+id/tv_action"
                    style="@style/TextView.Small.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_ms"
                    android:background="@drawable/bg_rect_stroke_light_gray"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/margin_ms" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>