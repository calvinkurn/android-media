<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:clickable="true">

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/progbar_height" />

    <android.support.v7.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="@dimen/image_width_product_list"
        android:layout_height="@dimen/image_width_product_list"
        android:layout_marginBottom="@dimen/margin_ms"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginStart="@dimen/margin_sm"
        android:layout_marginTop="@dimen/margin_ms"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.shop.common.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_kupon"
            tools:visibility="visible" />

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/wishlist_button_container"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:background="@drawable/bg_wishlist_circle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/image_view_wishlist"
            android:layout_width="@dimen/image_width_xs"
            android:layout_height="@dimen/image_width_xs"
            android:layout_gravity="center"
            android:background="@drawable/ic_wishlist" />

    </FrameLayout>

    <TextView
        android:id="@+id/title"
        style="@style/TextView.Micro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_ms"
        android:ellipsize="end"
        android:lineSpacingExtra="5sp"
        android:maxLines="2"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="jilbab palestine\nmakan nasi keblu" />

    <TextView
        android:id="@+id/price"
        style="@style/TextView.Small.Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/price_margin_top"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="Rp 3.121.500" />

    <Space
        android:id="@+id/space"
        android:layout_width="@dimen/padding_vvs"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/new_margin_med"
        android:layout_marginTop="@dimen/new_margin_med"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <include
        android:id="@+id/badges_container"
        layout="@layout/partial_shop_product_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_ms"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_ms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/badges_container" />

</android.support.constraint.ConstraintLayout>