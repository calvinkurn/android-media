<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/TextView.Small.BlackSecondary"
        android:ellipsize="end"
        android:lineSpacingExtra="5sp"
        android:minLines="2"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/price"
        style="@style/TextView.Small.Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_margin_small"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5sp"
        android:textStyle="normal"
        tools:text="@string/app_name" />

    <include
        android:id="@+id/badges_container"
        layout="@layout/partial_shop_product_badge"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/shop_badge_min_height"
        android:layout_marginTop="@dimen/margin_ms" />
</LinearLayout>