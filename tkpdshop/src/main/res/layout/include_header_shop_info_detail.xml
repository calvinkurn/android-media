<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_200"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:orientation="horizontal"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.6">

    <View
        android:id="@+id/separator_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/shop_icon_imageview" />

    <TextView
        android:id="@+id/title_shop_reputation"
        style="@style/TextView.Small.Bold.BlackSecondary"
        android:layout_width="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/reputation_label"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/separator_1"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <View
        android:id="@+id/separator_vertical_1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@color/grey_300"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/separator_vertical_"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/grey_300"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/product_quality_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/product_quality_label_value"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/product_quality_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="4.5"
        app:layout_constraintStart_toStartOf="@+id/product_quality_label"
        app:layout_constraintTop_toBottomOf="@+id/product_quality_label" />

    <RatingBar
        android:id="@+id/rating_bar_shop_info"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/product_quality_value"
        app:layout_constraintTop_toBottomOf="@+id/product_quality_label" />

    <TextView
        android:id="@+id/speed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/speed_label_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator_vertical_"
        app:layout_constraintTop_toBottomOf="@+id/separator_1" />

    <ImageView
        android:id="@+id/speed_imageview"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/speed_value_desc"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/speed_label"
        app:srcCompat="@drawable/bg_button_orange" />

    <TextView
        android:id="@+id/speed_value_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/speed_imageview"
        app:layout_constraintTop_toBottomOf="@+id/speed_label" />

    <ImageView
        android:id="@+id/shop_background_imageview"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_button_orange" />

    <ImageView
        android:id="@+id/shop_icon_imageview"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/shop_background_imageview"
        app:layout_constraintTop_toBottomOf="@+id/shop_background_imageview"
        app:srcCompat="@drawable/bg_button_green" />

    <ImageView
        android:id="@+id/gold_merchant_status_imageview"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/shop_icon_imageview"
        app:layout_constraintTop_toTopOf="@+id/shop_icon_imageview"
        app:srcCompat="@drawable/bg_ticker" />

    <ImageView
        android:id="@+id/location_imageview"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/shop_icon_imageview"
        app:layout_constraintStart_toEndOf="@+id/shop_icon_imageview"
        app:srcCompat="@color/default_line_indicator_selected_color" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/gold_merchant_status_imageview"
        app:layout_constraintTop_toTopOf="@+id/gold_merchant_status_imageview" />

    <TextView
        android:id="@+id/shop_info_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/location_imageview"
        app:layout_constraintStart_toEndOf="@+id/location_imageview" />

    <ImageView
        android:id="@+id/shop_info"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="@+id/shop_background_imageview"
        app:layout_constraintTop_toTopOf="@+id/shop_name"
        app:srcCompat="@color/background_star_review" />

    <com.tokopedia.design.reputation.ShopReputationView
        android:id="@+id/shop_reputation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/title_shop_reputation"
        app:layout_constraintTop_toBottomOf="@+id/title_shop_reputation" />

    <LinearLayout
        android:id="@+id/container_click_info"
        android:layout_width="382dp"
        android:layout_height="72dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_background_imageview" />

    <LinearLayout
        android:id="@+id/reputation_click_container"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/separator_vertical_1"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/product_quality_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/separator_vertical_"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/separator_vertical_1"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/speed_container"
        android:layout_width="105dp"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/separator_vertical_"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:background="@color/tkpd_dark_red"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/container_click_info"
        app:layout_constraintStart_toStartOf="@+id/container_click_info"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <Button
            android:id="@+id/button_manage_shop"
            style="@style/Button.Submit.White.Border"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/manage_shop" />

        <Button
            android:id="@+id/button_add_product"
            style="@style/Button.Submit.White.Border"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/add_product" />

        <Button
            android:id="@+id/button_chat_seller"
            style="@style/Button.Submit.White.Border"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/chat_seller" />

        <Button
            android:id="@+id/button_shop_page"
            style="@style/Button.Submit.White.Border"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/favorite" />
    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="164dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="165dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="250dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="2dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintGuide_percent="0.33072916"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.67" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</android.support.constraint.ConstraintLayout>