<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/margin_sm">

    <TextView
        android:id="@+id/text_view_name"
        style="@style/TextView.Title"
        android:layout_marginEnd="@dimen/margin_padding_small"
        android:layout_marginRight="@dimen/margin_padding_small"
        tools:text="@string/app_name" />

    <ImageView
        android:id="@+id/image_view_etalase_badge"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_sm"
        tools:src="@drawable/ic_badge_shop_gm" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/image_view_etalase_checked"
        android:layout_width="@dimen/image_width_xs"
        android:layout_height="@dimen/image_width_xs"
        android:src="@drawable/ic_check_green_24dp" />

</LinearLayout>