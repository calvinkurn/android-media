<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sold_out_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_overlay_transparent"
    android:padding="@dimen/padding_small">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/out_of_stock"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAllCaps="true"
        style="@style/TextView.Micro.WhitePrimary"
        android:background="@drawable/bg_rounded_corners_black"
        android:paddingTop="@dimen/padding_ms"
        android:paddingBottom="@dimen/padding_ms"
        android:paddingLeft="@dimen/padding_small"
        android:paddingStart="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"/>



</FrameLayout>