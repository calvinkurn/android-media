<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout style="@style/LabelLayout">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Title.Bold"
            android:text="@string/shop_info_label_satisfied" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_score_good"
            style="@style/TextView"/>

        <ImageView
            android:layout_width="@dimen/image_width_xxs"
            android:layout_height="@dimen/image_width_xxs"
            android:src="@drawable/ic_smiley_good"/>

        <TextView
            android:id="@+id/text_view_score_neutral"
            style="@style/TextView"/>

        <ImageView
            android:layout_width="@dimen/image_width_xxs"
            android:layout_height="@dimen/image_width_xxs"
            android:src="@drawable/ic_smiley_neutral"/>

        <TextView
            android:id="@+id/text_view_score_bad"
            style="@style/TextView"/>

        <ImageView
            android:layout_width="@dimen/image_width_xxs"
            android:layout_height="@dimen/image_width_xxs"
            android:src="@drawable/ic_smiley_good"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>