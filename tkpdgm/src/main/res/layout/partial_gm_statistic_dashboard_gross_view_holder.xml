<?xml version="1.0" encoding="utf-8"?>

<com.tokopedia.design.loading.LoadingStateView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading_state_view_gross"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:lsv_error_layout="@layout/partial_gm_statistic_error_card"
    app:lsv_loading_layout="@layout/widget_line_chart_container_loading">

    <com.tokopedia.gm.statistic.view.widget.LineChartContainerWidget
        android:id="@+id/line_chart_container_gross"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/gmstat_padding_item_left_right"
        android:paddingRight="@dimen/gmstat_padding_item_left_right"
        android:paddingTop="8dp"
        app:subtitle="@string/gm_statistic_dashboard_gross">

        <com.tokopedia.seller.common.williamchart.view.LineChartView
            android:id="@+id/line_chart_gross"
            style="@style/LineChartView"
            android:layout_width="wrap_content"
            android:layout_height="240dp" />
    </com.tokopedia.gm.statistic.view.widget.LineChartContainerWidget>

</com.tokopedia.design.loading.LoadingStateView>