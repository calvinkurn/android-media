<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:id="@+id/market_insight_gold_merchant"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="8dp">

        <TextView
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/gm_statistic_most_popular_keyword"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/market_insight_footer"
            style="@style/TextView.Micro.BlackSecondary"
            tools:text="@string/gm_statistic_these_keywords_are_based_on_category_x"/>
    </LinearLayout>

    <include layout="@layout/partial_gm_statistic_market_insight_content_not_gm" />
</FrameLayout>
