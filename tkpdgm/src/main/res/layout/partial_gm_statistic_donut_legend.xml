<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.gm.statistic.view.widget.CircleTextView
        android:id="@+id/ctv_onhold_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gm_unfinished_margin_top"
        app:circle_color="@color/colorGreen"
        app:text="@string/gm_statistic_on_hold_trans_text"/>

    <com.tokopedia.gm.statistic.view.widget.CircleTextView
        android:id="@+id/ctv_onhold_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gm_unfinished_margin_top"
        app:text="@string/gm_statistic_trans_amount_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gm_unfinished_margin_top"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg_line_separator" />

    <com.tokopedia.gm.statistic.view.widget.CircleTextView
        android:id="@+id/ctv_res_center_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gm_unfinished_margin_top"
        app:circle_color="@color/tkpd_dark_red"
        app:text="@string/gm_statistic_trans_in_res_center_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center_horizontal"
        android:text="@string/gm_statistic_data_not_followed_the_date_range"
        android:textColor="@color/grey_400"
        android:textSize="@dimen/fontvs"
        android:textStyle="italic" />
</merge>
