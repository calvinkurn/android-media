<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <com.tokopedia.topads.sdk.view.SquareImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_new_image_padding"
        android:layout_marginRight="@dimen/feed_new_image_padding"
        android:layout_marginTop="@dimen/feed_new_image_padding"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/loading_page" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_vs"
        android:paddingRight="@dimen/padding_vs"
        android:paddingTop="@dimen/padding_vs">

        <TextView
            android:id="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textColor="@color/black_54"
            android:textSize="@dimen/font_micro"
            android:textStyle="normal"
            tools:text="Nexus 5X 32 GB sedia carbon black, ice blue, pure white " />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="bottom"
            android:textColor="@color/orange_red"
            android:textSize="@dimen/font_micro"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="Rp 3.121.500" />

        <ImageView
            android:id="@id/info_topads"
            android:layout_width="@dimen/feed_new_badge_size"
            android:layout_height="@dimen/feed_new_badge_size"
            android:layout_gravity="bottom|center_horizontal"
            app:srcCompat="@drawable/ic_toa"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginStart="@dimen/margin_vs"
            android:layout_marginBottom="@dimen/margin_2"/>

    </LinearLayout>
</RelativeLayout>