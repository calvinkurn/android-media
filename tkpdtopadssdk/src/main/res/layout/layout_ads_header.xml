
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_option_h"
    android:id="@id/ads_header"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@id/title_promote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:layout_weight="1"
        android:text="@string/title_promote"
        android:textColor="@color/label_color"
        android:textSize="@dimen/abc_text_size_small_material" />

    <ImageView
        android:id="@id/info_topads"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_info"
        android:layout_marginRight="@dimen/label_padding_left_right"
        android:tint="@color/tkpd_dark_gray" />
</LinearLayout>