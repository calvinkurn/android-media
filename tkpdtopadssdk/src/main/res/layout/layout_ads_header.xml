
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_option_h"
    android:id="@id/ads_header"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@id/title_promote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:text="@string/title_promote"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:layout_weight="1"
        android:textColor="@color/black_38"
        android:textSize="@dimen/font_small" />

    <ImageView
        android:id="@id/info_topads"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:src="@drawable/ic_info" />
</LinearLayout>