<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_list"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/product_grid_padding"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        app:cardUseCompatPadding="true">

        <com.tokopedia.topads.sdk.view.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_card"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:minHeight="@dimen/product_title_min_height"
        android:textSize="@dimen/text_size_s_medium"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:lineSpacingExtra="5sp"
        tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold"
        android:textColor="@color/black_70"/>

    <TextView
        android:id="@id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        tools:text="Rp 3.121.500"
        android:textColor="@color/orange_red"
        android:textSize="@dimen/text_size_s_medium"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@id/rating_review_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/rating"
            android:layout_width="@dimen/rating_width"
            android:layout_height="@dimen/rating_height"
            android:visibility="gone"
            />

        <TextView
            android:id="@id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/review_count_margin_left"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@id/shop_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rating_review_container"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/product_grid_padding"
        android:orientation="vertical">

        <com.tokopedia.topads.sdk.view.FlowLayout
            android:id="@id/label_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" />

        <TextView
            android:id="@id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black_54"
            tools:text="ORIGINAL-ZONE"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:gravity="center_vertical"
            android:minHeight="25dp"
            android:textColor="@color/black_70"
            tools:text="Jakarta"
            android:textSize="@dimen/text_size_xsmall" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/badges_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/shop_detail_container"
        android:layout_alignBottom="@id/shop_detail_container"
        android:orientation="horizontal" />

</RelativeLayout>