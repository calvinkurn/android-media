<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="@dimen/product_grid_padding"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.topads.sdk.view.SquareImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                tools:src="@color/red_100" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="24dp"
                    android:layout_height="19dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_preorder_label"
                    android:visibility="visible">

                    <ImageView
                        android:id="@id/info_topads"
                        android:layout_width="16dp"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_toa" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/top_label_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/wishlist_button_container"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|right"
                android:background="@drawable/circle_wishlist"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/wishlist_button"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/ic_wishlist" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bottom_label_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_margin="5dp"
                android:orientation="horizontal" />

        </FrameLayout>
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_card"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="5sp"
        android:minHeight="@dimen/product_title_min_height"
        android:maxLines="2"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_s_medium"
        android:textStyle="normal"
        tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold" />

    <TextView
        android:id="@id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:textColor="@color/orange_red"
        android:textSize="@dimen/text_size_s_medium"
        android:textStyle="normal"
        tools:text="Rp 3.121.500" />

    <LinearLayout
        android:id="@+id/location_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/badges_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:orientation="horizontal" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:minHeight="25dp"
            android:textColor="@color/black_70"
            android:textSize="@dimen/text_size_xsmall"
            tools:text="Jakarta" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/rating_review_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_container"
        android:layout_marginBottom="@dimen/product_grid_padding"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/rating"
            android:layout_width="@dimen/topads_rating_width"
            android:layout_height="@dimen/topads_rating_height"
            android:visibility="gone" />

        <TextView
            android:id="@id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/review_count_margin_left"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/new_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_container"
        android:layout_marginBottom="@dimen/product_grid_padding"
        android:layout_marginLeft="@dimen/product_grid_padding"
        android:layout_marginRight="@dimen/product_grid_padding"
        android:background="@drawable/bg_new_label"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/baru"
        android:textColor="#279ba4"
        android:textSize="@dimen/text_size_xsmall"
        android:visibility="gone" />

</RelativeLayout>