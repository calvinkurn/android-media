<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokopedia.loyalty">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".view.activity.LoyaltyActivity"
            android:label="Checkout"

            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activity.PromoDetailActivity"
            android:label="Promo Detail"

            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activity.PromoListActivity"
            android:label="@string/title_activity_promo"

            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activity.TokoPointWebviewActivity"
            android:label="Tokopedia"

            android:windowSoftInputMode="adjustResize" />

        <receiver
            android:name=".broadcastreceiver.TokoPointDrawerBroadcastReceiver"
            android:enabled="true"
            tools:ignore="ExportedReceiver" />

    </application>

</manifest>