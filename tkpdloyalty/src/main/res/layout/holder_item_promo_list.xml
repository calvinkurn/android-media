<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/margin_small"
              android:layout_marginLeft="@dimen/margin_med"
              android:layout_marginRight="@dimen/margin_med"
              android:layout_marginTop="@dimen/margin_small"
              android:background="@drawable/bg_white_border_grey"
              android:orientation="vertical">

    <com.tokopedia.loyalty.view.compoundview.PromoImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_sm">

        <RelativeLayout
            android:id="@+id/layout_period_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_period_promo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/padding_vs"
                android:layout_marginRight="@dimen/padding_vs"
                android:padding="@dimen/padding_vvs"
                android:src="@drawable/ic_period_promo"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/tv_label_period_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_period_promo"
                android:layout_toRightOf="@id/iv_period_promo"
                android:text="@string/label_period_promo_loyalty_module"
                android:textColor="@color/grey_600"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_period_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_period_promo"
                android:layout_toEndOf="@id/iv_period_promo"
                android:layout_toRightOf="@id/iv_period_promo"
                android:textColor="@color/grey_800"
                android:textSize="14sp"
                tools:text="1 - 27 Januari 2018"/>

        </RelativeLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_sm"/>

        <RelativeLayout
            android:id="@+id/layout_single_code_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_code_promo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/padding_vs"
                android:layout_marginRight="@dimen/padding_vs"
                android:padding="@dimen/padding_vvs"
                android:src="@drawable/ic_coupon_promo"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/tv_label_code_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_code_promo"
                android:layout_toRightOf="@id/iv_code_promo"
                android:drawableEnd="@drawable/info_icon"
                android:drawablePadding="@dimen/padding_vs"
                android:drawableRight="@drawable/info_icon"
                android:text="@string/label_promo_code_loyalty_module"
                android:textColor="@color/grey_600"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_code_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_code_promo"
                android:layout_toEndOf="@id/iv_code_promo"
                android:layout_toRightOf="@id/iv_code_promo"
                android:textColor="#ff5722"
                android:textSize="@dimen/text_size_medium"
                tools:text="ANGGAGANTENG"/>

            <TextView
                android:id="@+id/btn_copy_code_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_cancel"
                android:padding="@dimen/padding_vs"
                android:text="@string/label_copy_promo_code_loyalty_module"
                tools:ignore="RelativeOverlap"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_multiple_code_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_multiple_code_promo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/padding_vs"
                android:layout_marginRight="@dimen/padding_vs"
                android:padding="@dimen/padding_vvs"
                android:src="@drawable/ic_coupon_promo"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/tv_multiple_code_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_multiple_code_promo"
                android:layout_toRightOf="@id/iv_multiple_code_promo"
                android:drawablePadding="@dimen/padding_vs"
                android:gravity="center_vertical"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/text_size_medium"
                tools:text="3 Kode Promo"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_empty_code_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_empty_code_promo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/padding_vs"
                android:layout_marginRight="@dimen/padding_vs"
                android:padding="@dimen/padding_small_sm"
                android:src="@drawable/ic_coupon_promo"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/tv_empty_code_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_empty_code_promo"
                android:layout_toRightOf="@+id/iv_empty_code_promo"
                android:drawablePadding="@dimen/padding_vs"
                android:gravity="center_vertical"
                android:text="Tanpa Kode Promo"
                android:textColor="@color/grey_600"
                android:textSize="14sp"
                tools:ignore="HardcodedText"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>