<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/holder_use_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_et_voucher_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_voucher_user_code">

            <EditText
                android:id="@+id/et_voucher_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_voucher_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Total bolo bolo" />

        <TextView
            android:id="@+id/btn_check_voucher"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/green_button_rounded"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="@string/button_use_code"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>