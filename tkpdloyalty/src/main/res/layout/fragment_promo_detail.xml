<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_promo_detail_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:cardElevation="@dimen/padding_med"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_promo_detail_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_promo_detail_action"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:background="#42b549"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="Belanja Sekarang" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_promo_detail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cv_promo_detail_bottom_container" />

</RelativeLayout>