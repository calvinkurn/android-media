<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="24dp">

    <TextView
        android:id="@+id/tv_tokopoint_notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:paddingBottom="20sp"
        android:textColor="@color/black_70"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="Selamat Anda sekarang menjadi
Silver Member Tokopedia."
        />

    <ImageView
        android:id="@+id/iv_tokopoint_notif_image"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tv_tokopoint_notif_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoLink="web"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:paddingBottom="20sp"
        android:paddingTop="20sp"
        android:textColor="@color/black_54"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:text="Nikmati penambahan benefit yang Anda bisa dapatkan."
        />


    <TextView
        android:id="@+id/tv_tokopoint_notif_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"
        android:textColor="@color/medium_green"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Lihat Poin Saya"
        />

</LinearLayout>