<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/ib_promo_detail_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/transparent"
        app:srcCompat="@drawable/ic_share_message" />

    <TextView
        android:id="@+id/tv_share_social_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ib_promo_detail_share"
        android:layout_toEndOf="@id/ib_promo_detail_share"
        android:text="Messages" />

</RelativeLayout>