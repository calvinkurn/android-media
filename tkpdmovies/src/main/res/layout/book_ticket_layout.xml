<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/AppBarTheme"
            android:background="@color/white"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextColor="@color/grey_900"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:overScrollMode="ifContentScrolls"
            android:paddingTop="8dp"
            app:tabGravity="center"
            app:tabMaxWidth="0dp"
            app:tabMode="scrollable"
            app:tabPaddingEnd="2dp"
            app:tabPaddingStart="0dp" />


        <com.tokopedia.movies.view.customview.SearchInputView
            android:id="@+id/serch_cinema_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:background="@color/white">

            <ImageView
                android:id="@+id/seats_available_iv"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/seats_available_bg"/>

            <TextView
                android:id="@+id/tv_seats_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/seats_available_iv"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:text="Tersedia"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/seats_not_available_iv"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/tv_seats_available"
                android:src="@drawable/seats_notavailable_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/seats_not_available_iv"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Habis"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_book_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"/>
    </LinearLayout>

    <include
        android:id="@+id/pay_tickets"
        layout="@layout/btn_book_event"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:visibility="gone" />
    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
    </FrameLayout>

</FrameLayout>
