<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_review_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="16dp"
                android:src="@drawable/user_review_circle_drawable" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@+id/user_review_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_review_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Sept 2017, 12:56 WIB"
                    android:textColor="@color/grey_400"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/user_review_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Andrew Ignatius"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <RatingBar
                    android:id="@+id/user_rating"
                    style="@style/Small.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:isIndicator="true"
                    android:layout_marginTop="8dp"
                    android:numStars="10"
                    tools:visibility="visible"
                    android:rating="8" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="City of Stars, are you shining just for me?"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/user_review_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="I believe in stars, meteors, comets, and earth. I want to be a millionaire and loves to spend my money on fashion.  lorem ipsum dolor sit amet lorem ipsum dol"
                android:textColor="@color/grey_600"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_review_thumbsUp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/thmbsup" />

            <TextView
                android:id="@+id/tv_thumbs_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/user_review_thumbsDown"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/thumbsdown" />

            <TextView
                android:id="@+id/tv_thumbs_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>