<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:textColor="#31353B"
        android:padding="12dp"
        android:textSize="22sp"
        android:textAlignment="center"
        android:text="Tokopedia Test App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/testapp_button_style"
        android:textColor="#FFFFFF"
        android:id="@+id/loginButton"
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="14dp"
        android:background="@drawable/testapp_button_style"
        android:textColor="#FFFFFF"
        android:id="@+id/logoutButton"
        android:text="Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="14dp"
        android:background="@drawable/testapp_button_style"
        android:textColor="#FFFFFF"
        android:id="@+id/testGqlButton"
        android:text="Test GQL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="14dp"
        android:background="@drawable/testapp_button_style"
        android:textColor="#FFFFFF"
        android:id="@+id/devOptButton"
        android:text="Developer Options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="14dp"
        android:background="@drawable/testapp_button_style"
        android:textColor="#FFFFFF"
        android:id="@+id/button"
        android:text="open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/toggle_dark_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:padding="@dimen/margin_small"
        android:text="Force Dark Mode" />
</LinearLayout>