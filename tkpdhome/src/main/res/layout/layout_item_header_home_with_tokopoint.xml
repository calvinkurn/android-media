<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="1px"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/container_tokocash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo_tokocash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_view_margin"
            android:layout_marginTop="@dimen/card_view_margin"
            android:padding="@dimen/keyline_1_minus_8dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_tokocash" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progress_bar_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/card_view_margin"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_ms"
                android:paddingTop="@dimen/padding_ms"
                android:visibility="visible"
                tools:visibility="gone" />

            <LinearLayout
                android:id="@+id/container_action_tokocash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/card_view_margin"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_vs"
                android:paddingTop="@dimen/padding_vs"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_balance_tokocash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/black_70"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_info"
                    tools:text="Rp 10000"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_title_tokocash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4sp"
                    android:text="TokoCash"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_btn_action_tokocash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="4sp"
                    android:textColor="#42b549"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Top Up"
                    tools:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_tokopoint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#1e000000" />

        <ImageView
            android:id="@+id/iv_logo_tokopoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_view_margin"
            android:layout_marginTop="@dimen/card_view_margin"
            android:padding="@dimen/keyline_1_minus_8dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_hachiko_coin" />

        <LinearLayout
            android:id="@+id/progress_bar_tokopoint_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/padding_ms"
                    android:paddingTop="@dimen/padding_ms"
                    android:visibility="visible" />

            </LinearLayout>

            <TextView
                style="@style/TokoPointHeaderNewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/new_margin_small"
                android:layout_marginRight="@dimen/new_margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/home_header_tokopoint_new_label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_action_tokopoint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/card_view_margin"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_vs"
                android:paddingTop="@dimen/padding_vs"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_balance_tokopoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4sp"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/black_70"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="90 Poin"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_title_tokopoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4sp"
                    android:lines="1"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Silver Member"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_btn_action_tokopoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="4sp"
                    android:textColor="#42b549"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Top Up"
                    tools:visibility="visible" />

            </LinearLayout>

            <TextView
                style="@style/TokoPointHeaderNewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/new_margin_small"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginRight="@dimen/new_margin_small"
                android:layout_marginStart="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/home_header_tokopoint_new_label" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>