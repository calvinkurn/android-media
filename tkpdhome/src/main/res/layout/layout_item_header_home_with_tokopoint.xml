<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="1px"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/container_tokocash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo_tokocash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_view_margin"
            android:layout_marginTop="@dimen/card_view_margin"
            android:padding="@dimen/keyline_1_minus_8dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_tokocash" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/card_view_margin"
                android:paddingBottom="@dimen/padding_vs"
                android:paddingTop="@dimen/padding_vs">

                <TextView
                    android:id="@+id/tv_balance_tokocash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/black_70"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_info"
                    tools:text="Rp 10000"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_title_tokocash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4sp"
                    android:text="TokoCash"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_btn_action_tokocash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="4sp"
                    android:textColor="#42b549"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Top Up"
                    tools:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_tokopoint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#1e000000" />

        <ImageView
            android:id="@+id/iv_logo_tokopoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_view_margin"
            android:layout_marginTop="@dimen/card_view_margin"
            android:padding="@dimen/keyline_1_minus_8dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_hachiko_coin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_view_margin"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_vs"
            android:paddingTop="@dimen/padding_vs">

            <TextView
                android:id="@+id/tv_balance_tokopoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/black_70"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="90 Poin"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_title_tokopoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Silver Member"
                tools:visibility="visible" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>