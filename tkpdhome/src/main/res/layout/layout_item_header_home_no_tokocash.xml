<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_tokopoint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="1px"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/card_view_margin"
    android:paddingEnd="@dimen/keyline_1_minus_8dp"
    android:paddingRight="@dimen/keyline_1_minus_8dp"
    android:paddingTop="@dimen/card_view_margin"
    tools:ignore="RtlSymmetry">


    <ImageView
        android:id="@+id/iv_logo_tokopoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/keyline_1_minus_8dp"
        app:srcCompat="@drawable/ic_hachiko_coin"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_tokopoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="TokoPoints"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_balance_tokopoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="200 Points"
            tools:visibility="visible" />

    </RelativeLayout>
</LinearLayout>