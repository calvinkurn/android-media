<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/home_card_category_item_margin"
    android:paddingLeft="@dimen/home_card_page_margin"
    android:paddingRight="@dimen/home_card_page_margin"
    android:paddingTop="@dimen/home_card_category_item_margin">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="28dp"
        android:layout_height="28dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:padding="8dp"
        android:textColor="@color/black_70"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:text="Fashion Wanita" />
</LinearLayout>
