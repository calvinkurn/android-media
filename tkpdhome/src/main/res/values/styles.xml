<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TokoPointHeaderNewLabel">
        <item name="android:textSize">6sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_tokopoint_header_new_label</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minWidth">25dp</item>
    </style>

    <style name="home_channel_badge_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:background">@drawable/background_home_channel_badge</item>
        <item name="android:paddingTop">@dimen/padding_vs</item>
        <item name="android:paddingLeft">@dimen/padding_ms</item>
        <item name="android:paddingRight">@dimen/padding_ms</item>
        <item name="android:paddingBottom">@dimen/padding_vs</item>
    </style>
</resources>
